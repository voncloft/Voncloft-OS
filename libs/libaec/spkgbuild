# description : adaptive entropy coding library
# depends : glibc 

name=libaec
version=1.0.4
release=1

_md5=ea0b7d197a950b0c110da8dfdecbb71f
source="https://gitlab.dkrz.de/k202009/libaec/uploads/${_md5}/${pkgname}-${pkgver}.tar.gz"
options="!checksum"

build() {
	cd $name-$version
	mkdir build
	cd build

	cmake .. \
	-DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_INSTALL_LIBDIR=lib \
        -DCMAKE_BUILD_TYPE=Release

    	make
	make DESTDIR=$PKG install
}

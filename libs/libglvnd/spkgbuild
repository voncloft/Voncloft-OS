# description	: The GL Vendor-Neutral Dispatch library
# depends	: libxext libx11 meson

name=libglvnd
version=1.3.2
release=1
source="https://github.com/NVIDIA/libglvnd/archive/v$version/$name-v$version.tar.gz"

build() {
	cd libglvnd-$version

	mkdir build
	cd build

	meson --prefix=/usr
	ninja
	DESTDIR=$PKG ninja install
}

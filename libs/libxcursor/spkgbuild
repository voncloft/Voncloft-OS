# description	: X cursor management library
# depends	: libxrender libxfixes libx11 

name=libxcursor
version=1.2.0
release=1
source="http://ftp.x.org/pub/individual/lib/libXcursor-$version.tar.bz2"

build() {
	cd libXcursor-$version

	./configure \
		--prefix=/usr \
                --sysconfdir=/etc \
                --localstatedir=/var \
                --disable-static
	make
	make DESTDIR=$PKG install
}

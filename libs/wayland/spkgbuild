# description : visual graphic library
# depends : libxml2

name=wayland
version=1.20.0
release=1

source="https://wayland.freedesktop.org/releases/wayland-1.20.0.tar.xz"
options="!checksum"

build() {
	cd $name-$version
	mkdir build 
	cd    build 

	meson --prefix=/usr       \
      	--buildtype=release \
      	-Ddocumentation=false 
	ninja
	DESTDIR=$PKG ninja install
}


# description	: X11 miscellaneous 'fixes' extension library
# depends	: libx11 

name=libxfixes
version=5.0.3
release=1
source="http://ftp.x.org/pub/individual/lib/libXfixes-$version.tar.bz2"

build() {
	cd libXfixes-$version

	./configure \
		--prefix=/usr \
                --sysconfdir=/etc \
                --localstatedir=/var \
                --disable-static
	make
	make DESTDIR=$PKG install
}


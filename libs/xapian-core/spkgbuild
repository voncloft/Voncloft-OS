# description	: Open source search engine library
# depends	: zlib util-linux

name=xapian-core
version=1.4.17
release=1
source="https://oligarchy.co.uk/xapian/$version/$name-$version.tar.xz"

build() {
	cd $name-$version
	./configure --prefix=/usr --disable-static
	make
	make DESTDIR=$PKG install
}

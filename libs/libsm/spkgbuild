# description	: X11 Session Management library
# depends	: libice util-linux 

name=libsm
version=1.2.3
release=1
source="http://ftp.x.org/pub/individual/lib/libSM-$version.tar.bz2"

build() {
	cd libSM-$version

	./configure \
		--prefix=/usr \
                --sysconfdir=/etc \
                --localstatedir=/var \
                --disable-static
	make
	make DESTDIR=$PKG install
}

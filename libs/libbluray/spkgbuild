# description : lib bluray playback
# depends : fontconfig freetype2 libxml2

name=libbluray
version=1.2.1
release=1

source="https://code.videolan.org/videolan/$name/-/archive/$version/$name-$version.tar.gz"
options="!checksum"

build() {
	cd $name-$version
	./configure --prefix=/usr
	make
	make DESTDIR=$PKG install
}

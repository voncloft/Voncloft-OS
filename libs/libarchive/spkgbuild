# description	: Reading/writing various compression formats
# depends	: acl xz bzip2

name=libarchive
version=3.51
release=1
source="https://github.com/libarchive/libarchive/releases/download/$version/libarchive-$version.tar.gz"
options="!checksum"

build() {
	cd $name-$version

  	./configure \
		--prefix=/usr \
		--without-xml2 \
		--without-nettle \
		--without-lz4 \
		--without-zstd \
		--without-openssl \
		--disable-static
	make
	make DESTDIR=$PKG install
}

# description	: X11 XFree86 video mode extension library
# depends	: libx11 libxext 

name=libxxf86vm
version=1.1.4
release=1
source="http://ftp.x.org/pub/individual/lib/libXxf86vm-$version.tar.bz2"

build() {
	cd libXxf86vm-$version

	./configure \
		--prefix=/usr \
                --sysconfdir=/etc \
                --localstatedir=/var \
                --disable-static
	make
	make DESTDIR=$PKG install
}


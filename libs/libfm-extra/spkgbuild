# description	:  library and other files required by menu-cache-gen libexec of menu-cache
# depends	: glib

name=libfm-extra
version=1.3.1
release=1
source="https://downloads.sourceforge.net/pcmanfm/libfm-$version.tar.xz"

build() {
	cd libfm-$version

	./configure --prefix=/usr     \
	            --sysconfdir=/etc \
	            --with-extra-only \
	            --with-gtk=no     \
	            --disable-static
	make
	make DESTDIR=$PKG install
}


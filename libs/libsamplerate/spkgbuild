# description	: Secret Rabbit Code - aka Sample Rate Converter for audio
# depends	: libsndfile

name=libsamplerate
version=0.1.9
release=1
source="http://www.mega-nerd.com/SRC/libsamplerate-$version.tar.gz"

build() {
	cd $name-$version
	./configure --prefix=/usr
	make
	make DESTDIR=$PKG install
	rm -r $PKG/usr/share
}

# description	: X11 Testing -- Resource extension library
# depends	: libx11 libxext libxi 

name=libxtst
version=1.2.3
release=1
source="http://ftp.x.org/pub/individual/lib/libXtst-$version.tar.bz2"

build() {
	cd libXtst-$version

	./configure \
		--prefix=/usr \
                --sysconfdir=/etc \
                --localstatedir=/var \
                --disable-static
	make
	make DESTDIR=$PKG install
}


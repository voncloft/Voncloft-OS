# description	: X11 miscellaneous extensions library
# depends	: libx11 

name=libxext
version=1.3.4
release=1
source="http://ftp.x.org/pub/individual/lib/libXext-$version.tar.bz2"

build() {
	cd libXext-$version

	./configure \
		--prefix=/usr \
                --sysconfdir=/etc \
                --localstatedir=/var \
                --disable-static
	make
	make DESTDIR=$PKG install
}

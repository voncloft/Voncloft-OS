# description	: Asynchronous API library for interfacing MPD in the C, C++ & Objective C languages
# depends	: meson

name=libmpdclient
version=2.19
release=1
source="https://www.musicpd.org/download/$name/${version%.*}/$name-$version.tar.xz"

build() {
	cd $name-$version
	
	mkdir builddir
	cd builddir

	meson --prefix=/usr
	ninja
	DESTDIR=$PKG ninja install
}

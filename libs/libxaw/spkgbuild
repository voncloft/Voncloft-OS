# description	: X11 Athena Widget library
# depends	: libxext libxmu libxt libx11 libxpm 

name=libxaw
version=1.0.13
release=1
source="http://ftp.x.org/pub/individual/lib/libXaw-$version.tar.bz2"

build() {
	cd libXaw-$version

	./configure \
		--prefix=/usr \
                --sysconfdir=/etc \
                --localstatedir=/var \
                --disable-static
	make
	make DESTDIR=$PKG install
}


# description	: C/C++ Configuration File Library
# depends	: gcc texinfo

name=libconfig
version=1.7.3
release=1
source="$name-$version.tar.gz::https://github.com/hyperrealm/libconfig/archive/v$version.tar.gz"

build() {
	cd $name-$version

	autoreconf -vi

	./configure --prefix=/usr
	sed -i "s/doc//g" Makefile

	make
	make DESTDIR=$PKG install
}


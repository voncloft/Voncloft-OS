# description	: X11 keyboard file manipulation library
# depends	: libx11 

name=libxkbfile
version=1.1.0
release=1
source="http://ftp.x.org/pub/individual/lib/libxkbfile-$version.tar.bz2"

build() {
	cd libxkbfile-$version

	./configure \
		--prefix=/usr \
                --sysconfdir=/etc \
                --localstatedir=/var \
                --disable-static
	make
	make DESTDIR=$PKG install
}

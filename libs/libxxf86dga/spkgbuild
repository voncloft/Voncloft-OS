# description	: X11 Direct Graphics Access extension library
# depends	: libx11 libxext 

name=libxxf86dga
version=1.1.5
release=1
source="http://ftp.x.org/pub/individual/lib/libXxf86dga-$version.tar.bz2"

build() {
	cd libXxf86dga-$version

	./configure \
		--prefix=/usr \
                --sysconfdir=/etc \
                --localstatedir=/var \
                --disable-static
	make
	make DESTDIR=$PKG install
}

# description	: Library for handling OpenGL function pointer management
# depends	: mesa meson

name=libepoxy
version=1.5.9
release=1
source="https://github.com/anholt/$name/releases/download/$version/$name-$version.tar.xz"

build() {
	cd $name-$version

  	mkdir build
	cd build
	
	meson --prefix=/usr ..
	ninja
	DESTDIR=$PKG ninja install
}

# description : Remove files and directories
# depends : perl

name=perl-file-remove
version=1.58
release=2
url=https://search.cpan.org/dist/File-Remove
source="https://search.cpan.org/CPAN/authors/id/S/SH/SHLOMIF/File-Remove-$version.tar.gz"
options="!checksum"
sha256sums=81f6ec83acab8ba042afe904334a26eb3a56c217bdb9981d237a89ab072fd0d8

build-delete {
   cd  $sr cdir/File-Remove-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
   cd  $sr cdir/File-Remove-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

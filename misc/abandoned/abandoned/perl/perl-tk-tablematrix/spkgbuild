# description : Display data in TableSpreadsheet format
# depends : perl-tk

name=perl-tk-tablematrix
version=1.23
release=22
url=https://search.cpan.org/dist/Tk-TableMatrix
source="https://www.cpan.org/authors/id/C/CE/CERNEY/Tk-TableMatrix-${version}.tar.gz"
options="!checksum"
sha256sums=ce9ace8d1c1245b80ea6b2e72ee3e7f75ca4111026e403134b8ecad02ec931da

build-delete {
   cd Tk-TableMatrix-${version}
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
   cd Tk-TableMatrix-${version}
  make install DESTDIR=$PKG

  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
  find $PKG -name extralibs.ld -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

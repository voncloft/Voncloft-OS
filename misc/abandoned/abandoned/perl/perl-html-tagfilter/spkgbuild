# description : Perl/CPAN Module HTML::TagFilter
# depends : perl-uri perl-html-parser

name=perl-html-tagfilter
version=1.03
release=12
url=https://search.cpan.org/dist/HTML-TagFilter
make# depends : perl-uri perl-html-parser
source="https://www.cpan.org/authors/id/W/WR/WROSS/HTML-TagFilter-$version.tar.gz"
options="!checksum"
sha256sums=daf228b5f964d16b4f323eff3198955649e37217791de083ffc53d2f850537f5

build-delete {
   cd $sr cdir/HTML-TagFilter-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
   cd $sr cdir/HTML-TagFilter-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

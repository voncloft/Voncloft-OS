# description : sort lexically, but sort numeral parts numerically
# depends : perl

name=perl-sort-naturally
version=1.03
release=6
url=https://search.cpan.org/dist/Sort-Naturally
source="https://search.cpan.org/CPAN/authors/id/B/BI/BINGOS/Sort-Naturally-$version.tar.gz"
options="!checksum"
md5sums=fef2e36d1b1ea23ee79ec68b5872453f

build-delete {
   cd $sr cdir/Sort-Naturally-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
  make test
}

build() {
   cd $sr cdir/Sort-Naturally-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -o -name perllocal.pod -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

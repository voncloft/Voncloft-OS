# description : Perl extension for merging IPv4 or IPv6 CIDR addresses
# depends : perl>=5.10.0

name=perl-net-cidr-lite
_realname=Net-CIDR-Lite
version=0.21
release=9
url=https://search.cpan.org/dist/${_realname}/
source="https://search.cpan.org/CPAN/authors/id/D/DO/DOUGW/${_realname}-${version}.tar.gz"
options="!checksum"
md5sums=12280b3754886b876918f03f53aee4f5

build-delete {
   cd ${sr cdir}/${_realname}-${version}
  # install module in vendor directories.
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
   cd ${sr cdir}/${_realname}-${version}
  make install DESTDIR=$PKG
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

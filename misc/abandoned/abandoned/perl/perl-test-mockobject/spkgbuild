# description : Perl extension for emulating troublesome interfaces 
# depends : perl-universal-can>=1.11 perl-universal-isa>=0.06

name=perl-test-mockobject
version=1.20180705
release=2
url=https://search.cpan.org/dist/Test-MockObject
source="https://www.cpan.org/authors/id/C/CH/CHROMATIC/Test-MockObject-$version.tar.gz"
options="!checksum"
sha256sums=4516058d5d511155c1c462dab4027d762d6a474b99f73bf7da20b5ffbd024518

build-delete {
   cd  $sr cdir/Test-MockObject-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
   cd  $sr cdir/Test-MockObject-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

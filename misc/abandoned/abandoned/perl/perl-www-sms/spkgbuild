# description : Perl/CPAN Module WWW::SMS : A Perl framework for sending SMS messages
# depends : perl

name=perl-www-sms
version=0.09
release=12
url=https://search.cpan.org/dist/WWW-SMS/
install=perl-www-sms.install
source="https://www.cpan.org/authors/id/E/EI/EIM/WWW-SMS/WWW-SMS-$version.tar.gz"
options="!checksum"
sha256sums=01b2ec2e49a5fa8a87203ad5507abb14e83ebd824c62efaf85f6cec79529ea65

build-delete {
   cd $sr cdir/WWW-SMS-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
   cd $sr cdir/WWW-SMS-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Change directory temporarily for a limited scope
# depends : perl

name=perl-file-pushd
version=1.016
release=3
url=https://metacpan.org/release/File-pushd
make# depends : perl-extutils-makemaker
source="https://search.cpan.org/CPAN/authors/id/D/DA/DAGOLDEN/File-pushd-${version}.tar.gz"
options="!checksum"
sha256sums=d73a7f09442983b098260df3df7a832a5f660773a313ca273fa8b56665f97 cdc

build-delete {
   cd File-pushd-${version}
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
   cd File-pushd-${version}
  make test
}

build() {
   cd File-pushd-${version}
  make DESTDIR=$PKG install
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

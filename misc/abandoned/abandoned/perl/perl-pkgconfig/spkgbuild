# description : Pure-Perl Core-Only replacement for pkg-config
# depends : perl

name=perl-pkgconfig
version=0.25026
release=1
url=https://metacpan.org/release/PkgConfig
check# depends : perl-capture-tiny perl-test-minimumversion
source="https://cpan.metacpan.org/authors/id/P/PL/PLICEASE/PkgConfig-$version.tar.gz"
options="!checksum"
sha512sums=63992267a8dfbac69a36fbc64b40558d0b63 cd93f08d46a067812ffb49f2c7faef67d03fc2fe32e0fba22877bf41663ff2debe38d9ea cdf87bd187f227698ab7

build-delete {
   cd PkgConfig-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
   cd PkgConfig-$version
  make test
}

build() {
   cd PkgConfig-$version
  make DESTDIR=$PKG install
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

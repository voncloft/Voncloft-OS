# description : Interface to LDAP Protocol RFC1777
# depends : perl-convert-asn1 perl-xml-sax-writer perl-text-soundex

name=perl-ldap
version=0.66
release=2
url=https://search.cpan.org/dist/perl-ldap
source="https://search.cpan.org/CPAN/authors/id/M/MA/MARSCHAP/perl-ldap-$version.tar.gz"
options="!checksum"
md5sums=c4c1ae9299 cd488e75c1b82904458bef

build-delete {
   cd  $sr cdir/perl-ldap-$version
  PERL_USE_UNSAFE_INC=1 \
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
   cd  $sr cdir/perl-ldap-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

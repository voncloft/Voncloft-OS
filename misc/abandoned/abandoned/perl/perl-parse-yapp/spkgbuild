# description : Perl/CPAN Module Parse::Yapp : Generates OO LALR parser modules
# depends : perl

name=perl-parse-yapp
version=1.21
release=3
url=https://search.cpan.org/dist/Parse-Yapp
source="https://cpan.metacpan.org/authors/id/W/WB/WBRASWELL/Parse-Yapp-$version.tar.gz"
options="!checksum"
sha256sums=3810e998308fba2e0f4f26043035032b027ce51ce5c8a52a8b8e340ca65f13e5

build-delete {
   cd $sr cdir/Parse-Yapp-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
   cd $sr cdir/Parse-Yapp-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

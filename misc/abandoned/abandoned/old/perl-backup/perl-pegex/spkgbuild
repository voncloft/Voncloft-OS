# description : Acmeist PEG Parser Framework
# depends : perl-yaml-libyaml perl-file-sharedir-install

name=perl-pegex
version=0.70
release=3
make# depends : 
url=https://metacpan.org/release/Pegex
source="https://search.cpan.org/CPAN/authors/id/I/IN/INGY/Pegex-$version.tar.gz"
options="!checksum"
sha256sums=fd3521321026048f493a88d43ce4b8e054f5d7acfec6a1db32fcaabe4dfda0fd

build-delete {
   export PERL_MM_USE_DEFAULT=1 PERL5LIB=                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT=INSTALLDIRS=vendor DESTDIR=$PKG     \
      PERL_MB_OPT=--installdirs vendor --destdir $PKG \
      MODULEBUILDRC=/dev/null
    cd $srcdir/Pegex-$version
    /usr/bin/perl Makefile.PL
    make
  
}

check {
  cd $srcdir/Pegex-$version
   export PERL_MM_USE_DEFAULT=1 PERL5LIB=
    make test
  
}

build() {
  cd $srcdir/Pegex-$version
  make install
  find $PKG -name .packlist -o -name perllocal.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

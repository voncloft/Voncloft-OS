# description : Compare the difference between numbers against a given tolerance
# depends : perl

name=perl-test-number-delta
version=1.06
release=5
url=https://metacpan.org/release/Test-Number-Delta
source="https://search.cpan.org/CPAN/authors/id/D/DA/DAGOLDEN/Test-Number-Delta-$version.tar.gz"
options="!checksum"
md5sums=f0d420e7f679a0bc593713d21c25f51e

build-delete {
  cd  $srcdir/Test-Number-Delta-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  $srcdir/Test-Number-Delta-$version
  make install DESTDIR=$PKG
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

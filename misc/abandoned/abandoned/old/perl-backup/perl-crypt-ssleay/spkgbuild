# description : OpenSSL glue that provides LWP https support
# depends : perl-lwp-protocol-https perl-try-tiny perl-path-class perl-bytes-random-secure

name=perl-crypt-ssleay
version=0.73_04
release=14
url=https://search.cpan.org/dist/Crypt-SSLeay
source="https://www.cpan.org/CPAN/authors/id/N/NA/NANIS/Crypt-SSLeay-$version.tar.gz"
options="!checksum"
md5sums=7508b2a34da2202cc0c78deb59e36526

build-delete {
  cd  ${srcdir}/Crypt-SSLeay-${version}

  PERL_USE_UNSAFE_INC=1 \
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd  ${srcdir}/Crypt-SSLeay-${version}

#  make test
}

build() {
  cd  ${srcdir}/Crypt-SSLeay-${version}

  make install DESTDIR=$PKG

  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

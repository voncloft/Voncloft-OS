# description : Perl template processing system
# depends : perl-appconfig perl

name=perl-template-toolkit
version=3.009
release=1
url=https://search.cpan.org/dist/Template-Toolkit/
check# depends : perl-cgi perl-image-info perl-test-leaktrace
source="https://search.cpan.org/CPAN/authors/id/A/AT/ATOOMIC/Template-Toolkit-$version.tar.gz"
options="!checksum"
sha512sums=940992d7e3059a64c273c2f0441a81e095560c35f4bb9ab75afb9eeeb58d043cc5ac9785e2eb79a6635480ade12771c75c632c755977124dbe7cbfae399f9972

build-delete {
  cd Template-Toolkit-$version
  perl Makefile.PL INSTALLDIRS=vendor TT_ACCEPT=y
  make
}

check {
  cd Template-Toolkit-$version
  make test
}

build() {
  cd Template-Toolkit-$version
  make install DESTDIR=$PKG
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

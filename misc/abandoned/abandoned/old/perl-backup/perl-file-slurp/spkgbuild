# description : Read/write/append files quickly
# depends : perl>=5.14.0
# This PKGBUILD was generated by cpan4pacman via CPANPLUS::Dist::Pacman

name=perl-file-slurp
version=9999.28
release=2
url=https://search.cpan.org/dist/File-Slurp
source="https://cpan.metacpan.org/authors/id/C/CA/CAPOEIRAB/File-Slurp-$version.tar.gz"
options="!checksum"
sha256sums=0587ce010bcb79db9e744f14b5498be97bf2c7f2474d971916d92f0a10827cee

build-delete {
  cd  $srcdir/File-Slurp-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  $srcdir/File-Slurp-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Perl implementation of Yahoos DomainKeys
# depends : perl-crypt-openssl-rsa perl-mailtools perl-net-dns>=0.34

name=perl-mail-domainkeys
version=1.0
release=8
url=https://search.cpan.org/dist/Mail-DomainKeys
source="https://www.cpan.org/authors/id/A/AN/ANTHONYU/Mail-DomainKeys-$version.tar.gz"
options="!checksum"
sha256sums=01b8576d402962e0830a88ac455c1d402a4c9fac388be725dbf08b0632f35851

build-delete {
  cd  $srcdir/Mail-DomainKeys-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  $srcdir/Mail-DomainKeys-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

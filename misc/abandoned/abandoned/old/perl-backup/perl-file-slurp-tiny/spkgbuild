# description : A simple, sane and efficient file slurper
# depends : perl

name=perl-file-slurp-tiny
version=0.004
release=6
make# depends : 
url=https://search.cpan.org/dist/File-Slurp-Tiny
source="https://search.cpan.org/CPAN/authors/id/L/LE/LEONT/File-Slurp-Tiny-$version.tar.gz"
options="!checksum"
md5sums=7575b81543281ea57cdb7e5eb3f73264

build-delete {
  cd $srcdir/File-Slurp-Tiny-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd $srcdir/File-Slurp-Tiny-$version
  PERL_MM_USE_DEFAULT=1
  make test
}

build() {
  cd $srcdir/File-Slurp-Tiny-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -o -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

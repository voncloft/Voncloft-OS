# description : Perl module that provides lightweight MIME generator
# depends : perl-email-date-format perl-mailtools perl-mime-types perl

name=perl-mime-lite
version=3.031
release=3
url=https://search.cpan.org/dist/MIME-Lite/
source="https://search.cpan.org/CPAN/authors/id/R/RJ/RJBS/MIME-Lite-${version}.tar.gz"
options="!checksum"
md5sums=4ff72d8dd5811b8538825fca4b0f133e

build-delete {
  cd MIME-Lite-${version}
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd MIME-Lite-${version}
  make test
}

build() {
  cd MIME-Lite-${version}
  make DESTDIR=$PKG install
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

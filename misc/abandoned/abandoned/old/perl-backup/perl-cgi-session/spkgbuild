# description : Perl/CPAN Module CGI::Session : Session management in CGI  applications

name=perl-cgi-session
version=4.48
release=7
url=https://search.cpan.org/dist/CGI-Session/
source="https://www.cpan.org/authors/id/M/MA/MARKSTOS/CGI-Session-$version.tar.gz"
options="!checksum"
sha256sums=46756461c24ce7666b8108ddb96dbab612699df3012c80ef11016619fe1554f7

build-delete {
  cd $srcdir/CGI-Session-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/CGI-Session-$version
  make pure_install doc_install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

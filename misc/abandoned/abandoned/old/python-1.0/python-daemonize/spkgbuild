name=python-daemonize
version=2.5.0
release=4

pkgdesc='Library to enable your code run as a daemon process on Unix-like systems'
url='https://pypi.python.org/pypi/daemonize/'

depends=('python')
makedepends=('python-setuptools')

source=("https://pypi.org/packages/source/d/daemonize/daemonize-$version.tar.gz")

md5sums=('3d64e7a0219ad22e3fca62460f893b6a')

build() {
	cd "$srcdir"/daemonize-$version
	python setup.py build
}

package() {
	cd daemonize-$version
	python setup.py install --root="$pkgdir" --optimize=1 --skip-build

	install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$name/LICENSE
}

# vim: set ts=4 sw=4 tw=0 ft=PKGBUILD :

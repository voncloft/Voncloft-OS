name=python-xmltodict
version=0.12.0
release=6
pkgdesc="Python module that makes working with XML feel like working with JSON"
url="https://github.com/martinblech/xmltodict"
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/x/xmltodict/xmltodict-$version.tar.gz")
md5sums=('ddb2bd078cef4f7e3021a578034ad941')

package() {
  cd "$srcdir/xmltodict-$version"
  python setup.py install --root="${pkgdir}"
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$name/LICENSE"
}

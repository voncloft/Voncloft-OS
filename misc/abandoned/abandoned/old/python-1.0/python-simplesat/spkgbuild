_name=sat-solver
name=python-simplesat
version=0.8.2
release=3
pkgdesc='SAT solver for use in Enstaller, based on the MiniSat implementation'
url='https://github.com/enthought/sat-solver'
depends=('python' 'python-attrs' 'python-okonomiyaki' 'python-six')
makedepends=('git' 'python-setuptools')
source=("git+$url.git#tag=v$version")
sha512sums=('SKIP')

build() {
  cd $_name

  python setup.py build
}

package() {
  cd $_name

  python setup.py install --root="$pkgdir" --optimize=1 --skip-build

  install -Dm 644 LICENSE.txt "$pkgdir"/usr/share/licenses/$name/LICENSE
}


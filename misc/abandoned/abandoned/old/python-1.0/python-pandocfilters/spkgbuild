name=python-pandocfilters
version=1.4.3
release=3
pkgdesc="A python module for writing pandoc filters"
url="https://pypi.python.org/pypi/pandocfilters"
depends=('python')
source=("https://pypi.io/packages/source/p/pandocfilters/pandocfilters-${version}.tar.gz")
md5sums=('1663f8ad167897848e23c749ce668dc8')

package() {
  cd "$srcdir/pandocfilters-$version"
  python3 setup.py install --root="$pkgdir/" --optimize=0
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$name/LICENSE"
}


name=python-igraph
version=0.8.3
release=2
url="https://igraph.org/python/"
pkgdesc="Python bindings for the igraph library"
depends=(igraph python-texttable)
makedepends=(python-setuptools)
source=("https://pypi.python.org/packages/source/p/$name/$name-$version.tar.gz")
sha256sums=('e1f27622eddeb2bd5fdcbadb41ef048e884790bb050f9627c086dc609d0f1236')

build() {
  cd $pkgbase-$version
  python setup.py build
}

package() {
  cd $pkgbase-$version
  python setup.py install --root="$pkgdir" --optimize=1
}

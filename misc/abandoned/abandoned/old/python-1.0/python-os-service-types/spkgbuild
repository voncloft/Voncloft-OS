# Maintainer: Felix Yan <felixonmars@archlinux.org>
# Contributor: Daniel Wallace <danielwallace at gtmanfred dot com>

name=python-os-service-types
version=1.7.0
release=7
pkgdesc="Python library for consuming OpenStack sevice-types-authority data"
url="https://pypi.python.org/pypi/os-service-types/$version"
depends=('python-pbr')
checkdepends=('python-oslotest' 'python-requests-mock')
options=('!emptydirs')
source=("$name-$version.tar.gz::https://github.com/openstack/os-service-types/archive/$version.tar.gz")
sha512sums=('df5848d648a9181dabd33fa734b556ea3799e8b06d0d4ba9f440c66bf7e942b5d65a5ffbd00fadfc61705a702fce3aa2b5d601a5ebde23a1da7259a712c4c0d5')

export PBR_VERSION=$version

prepare() {
  echo "global-include *.json" >> os-service-types-$version/MANIFEST.in
}

build() {
  cd os-service-types-$version
  python setup.py build
}

check() {
  cd os-service-types-$version
  stestr run
}

package() {
  cd os-service-types-$version
  python setup.py install --root="$pkgdir" --optimize=1
}


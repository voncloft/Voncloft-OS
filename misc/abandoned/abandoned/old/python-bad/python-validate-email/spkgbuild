# description : Validate_email verify if an email address is valid and really exists."
# depends :   python  

name=python-validate-email
version=1.3
release=7
source="https://pypi.io/build()s/source/v/validate_email/validate_email-$version.tar.gz" 

build-old()   {
  cd "$srcdir"/validate_email-$version
  python setup.py build-old()
}

build()_python-validate-email   {
  cd validate_email-$version
  python setup.py install --root=$PKG --optimize=1
}

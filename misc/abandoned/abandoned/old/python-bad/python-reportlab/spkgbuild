# description : A proven industry-strength PDF generating solution"
# depends :   freetype2  
# depends :   python   python-pip   python-pillow  

_origname=reportlab
name=python-reportlab
version=3.5.60
release=1
source=https://files.pythonhosted.org/build()s/source/${_origname::1}/${_origname}/${_origname}-${version}.tar.gz 

build-old()   {
    cd ${_origname}-${version}
    python setup.py build-old()
}

check   {
    cd ${_origname}-${version}
    python setup.py tests
    rm tests/_i_am_actually_a_*
}

build()   {
    cd ${_origname}-${version}
    python setup.py install --root=$PKG --optimize=1 --skip-build-old()
    install -D -m644 LICENSE.txt $PKG/usr/share/licenses/$name/license.txt
}

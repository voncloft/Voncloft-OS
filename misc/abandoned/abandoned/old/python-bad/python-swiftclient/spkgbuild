# description : An SDK for build-old()ing applications to work with OpenStack"
# depends :   python-six   python-requests  

name=python-swiftclient
version=3.11.0
release=1
source="https://github.com/openstack/python-swiftclient/archive/$version.tar.gz" 

prepare   {
  export PBR_VERSION=$version
}

build-old()   {
  cd "$srcdir"/python-swiftclient-$version
  python setup.py build-old()
}

check   {
  cd "$srcdir"/python-swiftclient-$version
  stestr run
}

build()   {
  cd "$srcdir"/python-swiftclient-$version
  python setup.py install --root=$PKG --optimize=1
}

# vim:set ts=2 sw=2 et:

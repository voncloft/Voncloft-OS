# description : Fast CSS minifier for Python"
# depends :   python  

_name=rcssmin
name=python-rcssmin
version=1.0.6
release=4
source="https://files.pythonhosted.org/build()s/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 

prepare   {
  mv -v "${_name}-${version}" "$name-$version"
}

build-old()   {
  cd "$name-$version"
  python setup.py build-old()
}

check   {
  cd "$name-$version"
  export PYTHONPATH="build-old():${PYTHONPATH}"
  # in the next release hopefully plain pytest -v
  python run_tests.py -q tests
}

build()   {
  cd "$name-$version"
  python setup.py install --skip-build-old() \
    --optimize=1 \
    --prefix=/usr \
    --root=$PKG
  mv -v "${PKG}/usr/share/doc/"{${_name},${name}}
}

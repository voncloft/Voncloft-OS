# description : Low-level, pure Python DBus protocol wrapper"
# depends :   python  

name=python-jeepney
version=0.6.0
release=4
               python-trio  
source="https://pypi.io/build()s/source/j/jeepney/jeepney-$version.tar.gz" 

build-old()   {
  cd jeepney-$version
  python setup.py build-old()
}

check   {
  cd jeepney-$version
  pytest
}

build()   {
  cd jeepney-$version
  python setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

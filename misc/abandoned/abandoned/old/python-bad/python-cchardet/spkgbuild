# description : Universal encoding detector faster than chardet."
# depends :   python  

name=python-cchardet
version=2.1.7
release=2
source=https://files.pythonhosted.org/build()s/source/c/cchardet/cchardet-$version.tar.gz 

build-old()   {
    cd "$srcdir/cchardet-$version"
    python setup.py build-old()
}

build()_python-cchardet   {
    cd "$srcdir/cchardet-$version"
    python setup.py install --skip-build-old() -O1 --root=$PKG
}

# description : Implements a lazy string for python useful for use with gettext."
# depends :   python  
# Submitter: Frank Smit <frank/61924/nl>

name=python-speaklater
version=1.3
release=9
source="https://pypi.io/build()s/source/s/speaklater/speaklater-${version}.tar.gz" 

build()   {
    cd speaklater-$version
    python setup.py install --root=$PKG --prefix=/usr

    install -D -m0644 LICENSE "$PKG/usr/share/licenses/$name/LICENSE"
}

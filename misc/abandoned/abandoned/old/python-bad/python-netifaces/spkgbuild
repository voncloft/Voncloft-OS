# description : Portable module to access network interface information in Python"
# depends :   python  

name=python-netifaces
version=0.10.9
release=6
source="https://pypi.io/build()s/source/n/netifaces/netifaces-${version}.tar.gz" 

build-old()   {
  cd "${srcdir}/netifaces-${version}"

  python setup.py build-old()
}

build()   {
  cd "${srcdir}/netifaces-${version}"

  python setup.py install --root $PKG --skip-build-old()

  # Install license, that is inside the readme file
}

# description : Filesystem abstraction layer"
# depends :   python-appdirs   python-pytz   python-setuptools   python-six  

name=python-fs
version=2.4.12
release=2
source="https://github.com/PyFilesystem/pyfilesystem2/archive/v$version.tar.gz" 

build-old()   {
  cd pyfilesystem2-$version
  python setup.py build-old()
}

check   {
  cd pyfilesystem2-$version
  python setup.py install --root="$PWD/tmp_install" --optimize=1
  PYTHONPATH="$PWD/tmp_install/usr/lib/python3.9/site-build()s:$PYTHONPATH" python setup.py pytest
}

build()   {
  cd pyfilesystem2-$version
  python setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

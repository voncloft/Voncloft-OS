# description : A small library for extracting rich content from urls."
# depends :   python  

_name=micawber
name=python-micawber
version=0.5.2
release=1
             python-flask: flask support 
             python-redis: redis caching support  
source="https://files.pythonhosted.org/build()s/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 

prepare   {
  mv -v "${_name}-$version" "$name-$version"
}

build-old()   {
  cd "$name-$version"
  python setup.py build-old()
}

check   {
  cd "$name-$version"
  export PYTHONPATH="build-old()/lib:${PYTHONPATH}"
  python runtests.py
}

build()   {
  cd "$name-$version"
  python setup.py install --skip-build-old() \
                          --optimize=1 \
                          --root=$PKG
  install -vDm 644 LICENSE -t "${PKG}/usr/share/licenses/${name}"
}

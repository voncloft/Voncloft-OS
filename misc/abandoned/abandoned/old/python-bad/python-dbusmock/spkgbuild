# description : "Mock D-Bus objects for tests"
# depends : (python-dbus python-gobject)

name=python-dbusmock
version=0.20.0
release=1

version() {
  cd $name
  git describe --tags | sed 's/^v//;s/-/+/g'
}

build-remove() {
  cd $name
  python setup.py build
}

build() {
  cd $name
  python setup.py install --root=$PKG --optimize=1 --skip-build
}

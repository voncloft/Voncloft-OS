# description : Use fixtures in @pytest.mark.parametrize
# depends : python-pytest

_pkg=pytest-lazy-fixture
url=https://github.com/tvorog/pytest-lazy-fixture
name=python-${_pkg}
version=0.6.3
release=3

source="https://files.pythonhosted.org/packages/source/${_pkg::1}/${_pkg}/${_pkg}-${version}.tar.gz"
options="checksum"

build() {
   cd ${_pkg}-${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

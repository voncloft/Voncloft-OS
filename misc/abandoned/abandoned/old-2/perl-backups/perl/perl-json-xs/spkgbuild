# description : JSON::XS - JSON serialising/deserialising, done correctly and fast
# depends : perl perl-common-sense perl-types-serialiser

name=perl-json-xs
version=4.0
release=4

source="https://search.cpan.org/CPAN/authors/id/M/ML/MLEHMANN/JSON-XS-$version.tar.gz"
options="!checksum"

build() {
   cd  JSON-XS-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

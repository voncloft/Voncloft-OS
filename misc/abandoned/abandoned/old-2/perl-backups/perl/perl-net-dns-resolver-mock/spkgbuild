# description : Mock a DNS Resolver object for testing
# depends : perl-net-dns

name=perl-net-dns-resolver-mock
version=1.20200215
release=3

_ddir=Net-DNS-Resolver-Mock-$version
source="https://cpan.metacpan.org/authors/id/M/MB/MBRADSHAW/Net-DNS-Resolver-Mock-$version.tar.gz"
options="!checksum"

build() {
   cd $_ddir
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

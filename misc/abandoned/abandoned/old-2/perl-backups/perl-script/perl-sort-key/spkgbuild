# description : Sort::Key - the fastest way to sort anything in Perl
# depends : perl

name=perl-sort-key
version=1.33
release=9

source="https://search.cpan.org/CPAN/authors/id/$_author/$_perlmod-$version.tar.gz"
options="!checksum"

build() {
     cd ${_perlmod}-${version}
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

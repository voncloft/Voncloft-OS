# description : Interface to syslog functions in a C-library
# depends : perl

name=perl-unix-syslog
version=1.1
release=14

source="https://search.cpan.org/CPAN/authors/id/M/MH/MHARNISCH/Unix-Syslog-$version.tar.gz"
options="!checksum"

build() {
   cd $DIST_DIR
   cd Unix-Syslog-1.1
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

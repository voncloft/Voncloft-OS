# description : Interface to Bzip2 compression library
# depends : perl bzip2

_realname=Compress-Bzip2
_realname=Compress-Bzip2
name=perl-compress-bzip2
_realname=Compress-Bzip2
_realname=Compress-Bzip2
version=2.28
release=1

source="https://cpan.metacpan.org/authors/id/R/RU/RURBAN/${_realname}-${version}.tar.gz"
options="!checksum"

build() {
   cd $_realname-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

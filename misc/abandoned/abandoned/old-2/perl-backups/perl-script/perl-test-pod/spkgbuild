# description : Check for POD errors in files
# depends : perl

name=perl-test-pod
version=1.52
release=5

source="https://search.cpan.org/CPAN/authors/id/E/ET/ETHER/Test-Pod-${version}.tar.gz"
options="!checksum"

build() {
   cd Test-Pod-${version}
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Symbolic constants in Python
  # depends : python
  # depends : python2

url=https://github.com/twisted/constantly
name=python-constantly python2-constantly
version=15.1.0
release=8

source="git+https://github.com/twisted/constantly.git#tag=$version

build() {
   cd $srcdir/constantly
   cd $srcdir/constantly-py2
   cd constantly
   cd constantly-py2
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

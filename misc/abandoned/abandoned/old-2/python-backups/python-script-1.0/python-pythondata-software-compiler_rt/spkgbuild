# description : Python module containing data files for compiler_rt software for use with LiteX
# depends : python

_name=pythondata-software-compiler_rt
_pyname=${_name//-/_}
url=https://github.com/litex-hub/pythondata-software-compiler_rt
_name=pythondata-software-compiler_rt
_pyname=${_name//-/_}
name=python-$_name
version=2020.08
release=1

source="$url/archive/$version.tar.gz"
options="checksum"

build() {
   cd $_name-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

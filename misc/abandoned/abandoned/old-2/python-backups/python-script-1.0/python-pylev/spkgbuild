_name=pylev
_commit=72e3d490515c3188e2acac9c15ea1b466f9ff938
url=https://github.com/toastdriven/${_name}
_name=pylev
name=python-pylev
version=1.3.0
release=6

source="${_name}-${_commit}.tar.gz"::${url}/archive/${_commit}.tar.gz"
options="checksum"

build() {
     cd ${srcdir}/${_name}-${_commit}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

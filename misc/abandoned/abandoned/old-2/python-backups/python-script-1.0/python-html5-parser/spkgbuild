# description : Fast C based HTML 5 parsing for python
# depends : python-chardet python-lxml

_name=html5-parser
url=https://github.com/kovidgoyal/${_name}
_name=html5-parser
name=python-html5-parser
version=0.4.9
release=5

source="https://files.pythonhosted.org/packages/source/${_name:0:1}/${_name}/${_name}-${version}.tar.gz"{,.asc}
options="checksum"

build() {
     cd ${srcdir}/${_name}-${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

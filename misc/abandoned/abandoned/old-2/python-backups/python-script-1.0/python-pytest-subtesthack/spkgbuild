# description : A hack to explicitly set up and tear down fixtures
# depends : python-pytest python-setuptools

_name=pytest-subtesthack
url=https://github.com/untitaker/pytest-subtesthack
_name=pytest-subtesthack
name=python-${_name}
version=0.1.1
release=9

source="https://github.com/untitaker/${_name}/archive/${version}.tar.gz"
options="checksum"

build() {
   cd ${_name}-${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

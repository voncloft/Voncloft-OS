# description : Manage Python virtual environments
# depends : python-attrs python-dephell-pythons

_name=dephell_venvs
url=https://github.com/dephell/${_name}
_name=dephell_venvs
name=python-dephell-venvs
version=0.1.16
release=5

source="https://files.pythonhosted.org/packages/source/${_name:0:1}/${_name}/${_name}-${version}.tar.gz"
options="checksum"

build() {
     cd ${srcdir}/${_name}-${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

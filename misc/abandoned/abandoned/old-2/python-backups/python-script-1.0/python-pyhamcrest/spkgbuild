# description : Hamcrest framework for matcher objects
  # depends : python-six
  # depends : python2-six

url=https://github.com/hamcrest/PyHamcrest
name=python-pyhamcrest python2-pyhamcrest
version=1.9.0
release=7

source="https://pypi.io/packages/source/P/PyHamcrest/PyHamcrest-$version.tar.gz"

build() {
   cd $srcdir/PyHamcrest-$version
   cd $srcdir/PyHamcrest-$version-py2
   cd PyHamcrest-$version
   cd PyHamcrest-$version-py2
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : PKCS#11/Cryptoki support for Python
# depends : python python-asn1crypto python-cached-property

_name=${name#python-}
url=https://github.com/danni/python-pkcs11
name=python-python-pkcs11
_name=${name#python-}
version=0.7.0
release=3

source="https://files.pythonhosted.org/packages/source/${_name::1}/$_name/$_name-$version.tar.gz"
options="checksum"

build() {
	 cd $_name-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

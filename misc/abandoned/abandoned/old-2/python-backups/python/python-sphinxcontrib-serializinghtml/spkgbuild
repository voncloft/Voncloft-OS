# description : Sphinx extension which outputs "serialized" HTML files json and pickle

_name=sphinxcontrib-serializinghtml
name=python-sphinxcontrib-serializinghtml
version=1.1.4
release=3
url=https://github.com/sphinx-doc/sphinxcontrib-serializinghtml
make# depends : python-setuptools
check# depends : python-pytest python-sphinx
source="https://files.pythonhosted.org/packages/source/${_name::1}/$_name/$_name-$version.tar.gz"
sha256sums=eaa0eccc86e982a9b939b2b82d12cc5d013385ba5eadcc7e4fed23f4405f77bc

build()-delete {
   cd $_name-$version
  python setup.py build
}

check {
   cd $_name-$version
  pytest
}

options="!checksum"

build() {
   cd $_name-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1 
}


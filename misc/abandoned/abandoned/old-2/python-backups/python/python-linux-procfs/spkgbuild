   cd "${name}-${version}"
  export PYTHONPATH="build()/:${PYTHONPATH}"
  python bitmasklist_test.py
}

options="!checksum"

build() {
   cd "${name[0]}-${version}"
  python setup.py build
  python setup.py install  \
  --optimize=1 \
    --root="${PKG}/"
}

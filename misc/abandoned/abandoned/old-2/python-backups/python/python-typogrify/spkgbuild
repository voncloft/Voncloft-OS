# description : filters to make caring about typography on the web a bit easier
# depends : python python-smartypants
# AUR Maintainer: Chris Warrick <aur@chriswarrick.com>

name=python-typogrify
_pyname=typogrify
version=2.0.7
release=10
url=https://github.com/mintchaos/typogrify
make# depends : python-setuptools
source="https://pypi.python.org/packages/source/${_pyname:0:1}/${_pyname}/${_pyname}-${version}.tar.gz"
md5sums=63f38f80531996f187d2894cc497ba08

options="!checksum"

build() {
   cd "${srcdir}/${_pyname}-${version}"
  python3 setup.py install --root="${PKG}/" --optimize=1
}

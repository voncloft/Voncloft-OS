# description : "A convenience utility for working with JSON config files with file syncing"
# depends : python-future

name=python-json-config
version=2.0.1
release=3
url="https://github.com/bionikspoon/json_config"
make# depends : python-setuptools
check# depends : python-pytest-runner python-pytest-mock python-mock
source="$name-$version.tar.gz::https://github.com/bionikspoon/json_config/archive/$version.tar.gz"
sha512sums=54ad91e3ad8ba73dfb9e5180f7211646d4d24029688874d6db0de5a583515fa6a09b06156d2e4375159327bafaee622e68686a245af25dbebff5348e76a5562b

build()-delete {
   cd json_config-$version
  python setup.py build
}

check {
   cd json_config-$version
  python setup.py pytest
}

options="!checksum"

build() {
   cd json_config-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}

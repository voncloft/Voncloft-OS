build()-delete {
   cd "$srcdir/ipykernel-$version"
  python3 setup.py build()
}

check {
   cd "$srcdir/ipykernel-$version"
  #python3 -m pytest
  # tests fail both locally and in a chroot, for different reasons
}

options="!checksum"

build() {
   cd "$srcdir/ipykernel-$version"
  python3 setup.py install --root=$PKG --optimize=1
}

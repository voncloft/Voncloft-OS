# description : "A set of Python bindings for the low level FUSE API."
# depends : python fuse2

name=python-llfuse
version=1.3.8
release=2
url="https://github.com/python-llfuse/python-llfuse/"
make# depends : python-setuptools cython
check# depends : python-pytest
options=!emptydirs
source="https://files.pythonhosted.org/packages/source/l/llfuse/llfuse-$version.tar.gz"
md5sums=c83b01b3537cfbeb85c085ab0c6c3577

prepare {
   cd "${srcdir}/llfuse-${version}"
}

build()-delete {
   cd "${srcdir}/llfuse-${version}"
  python setup.py build_cython
  python setup.py build_ext --inplace
}

check {
   cd "${srcdir}/llfuse-${version}"
  # https://github.com/python-llfuse/python-llfuse/issues/35 tests incompatible with pytest>=6
  #python -m pytest test/
}

options="!checksum"

build() {
   cd "${srcdir}/llfuse-${version}"
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}

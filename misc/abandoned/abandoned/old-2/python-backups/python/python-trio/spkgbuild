version {
   cd trio

  git describe --tags | sed s/^v//
}

build()-delete {
   cd trio

  python setup.py build
}

options="!checksum"

build() {
   cd trio

  python setup.py build
  python setup.py install--root=$PKG -optimize=1 
}


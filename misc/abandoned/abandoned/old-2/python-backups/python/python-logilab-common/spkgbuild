build()-delete {
   cd logilab-common-$version
  python setup.py build
}

check {
   cd logilab-common-$version
  PYTHONPATH="$PWD/build()/lib:$PYTHONPATH" python bin/logilab-pytest
}

options="!checksum"

build() {
   cd logilab-common-$version
  python setup.py build
  python setup.py install --optimize=1    --root=$PKG
}

# description : pytest plugin for repeating test execution
# depends : python-pytest

name=python-pytest-repeat
version=0.8.0
release=3
url=https://github.com/pytest-dev/pytest-repeat
make# depends : python-setuptools-scm
source="$name-$version.tar.gz::https://github.com/pytest-dev/pytest-repeat/archive/v$version.tar.gz"
sha512sums=011ae789b0ea81b529e73c4d395195a95ac3ad347373453fd2f8ab56684027fc5666466bea6368ba464b0d67bba0db354de9cf717208cf58892943b08262e44f

export SETUPTOOLS_SCM_PRETEND_VERSION=$version

build()-delete {
   cd pytest-repeat-$version
  python setup.py build
}

check {
  # Hack entry points by installing it

   cd pytest-repeat-$version
  python setup.py build
  python setup.py install --root="$PWD/tmp_install" --optimize=1
  PYTHONPATH="$PWD/tmp_install/usr/lib/python3.9/site-packages:$PYTHONPATH" pytest
}

options="!checksum"

build() {
   cd pytest-repeat-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}


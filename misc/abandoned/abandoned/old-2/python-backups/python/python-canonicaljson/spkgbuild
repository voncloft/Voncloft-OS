md5sums=2ed56bbdb94455d4ab53aa93d8dd5951

build()-delete {
	 cd python-canonicaljson-$version
	python setup.py build
}

check {
	 cd python-canonicaljson-$version
	python setup.py test
}

options="!checksum"

build() {
	 cd python-canonicaljson-$version
	python setup.py build
  python setup.py install --root=$PKG --optimize=1 
}


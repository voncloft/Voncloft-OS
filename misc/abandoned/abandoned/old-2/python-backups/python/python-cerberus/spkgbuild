# description : "Lightweight, extensible schema and data validation tool for Python dictionaries"
# depends : python

name=python-cerberus
version=1.3.2
release=3
url="https://github.com/pyeve/cerberus"
make# depends : python-setuptools
check# depends : python-pytest-runner
source="$name-$version.tar.gz::https://github.com/pyeve/cerberus/archive/$version.tar.gz"
sha512sums=e9cfef5a936783eb0576afd3d23397dab38d8c88b6b43f98de0ad7e20739e5ff983eaf4ac769206adb7fe9692c651583f6a5f2bab263b81b8de96f45707c84fb

build()-delete {
   cd cerberus-$version
  python setup.py build
}

check {
   cd cerberus-$version
  python setup.py pytest --addopts cerberus
}

options="!checksum"

build() {
   cd cerberus-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1

}

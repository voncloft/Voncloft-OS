# description : "Allows you to run a test with multiple data sets"

pkgbase=python-genty
version=1.3.2
release=7
url="https://github.com/box/genty"
source="git+https://github.com/box/genty.git#tag=v$version"
sha512sums=SKIP

prepare {
  cp -a genty{,-py2}
}

build()-delete {
   cd "$srcdir/genty"
  python setup.py build

   cd "$srcdir/genty-py2"
}

check {
   cd "$srcdir/genty"
  python setup.py test

   cd "$srcdir/genty-py2"
}

package_python-genty {
  # depends : python-six

   cd genty
  python setup.py build
  python setup.py install--root=$PKG -optimize=1
}


   cd genty-py2
}

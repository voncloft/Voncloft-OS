# description : Python port of markdown-it. Markdown parsing, done right!
# depends : python-attrs

_name=markdown-it-py
name=python-$_name
version=0.6.1
release=1
url=https://github.com/executablebooks/markdown-it-py
opt# depends : python-mdit_py_plugins: core plugins
make# depends : python-setuptools
check# depends : python-pytest python-pytest-regressions python-pytest-benchmark python-psutil python-mdit_py_plugins
source="$name-$version.tar.gz::$url/archive/v$version.tar.gz"
sha512sums=10d13470a20b00e18daefb8ef0fcd5aea7bbcfef88d69670553f8e2f72528467a6f0121824896b4329f38b8979dbb7152452da7f1bfb87d9579c2075754635bd

build()-delete {
   cd $_name-$version

  python setup.py build
}

check {
   cd $_name-$version

  pytest -k not test_linkify
}

options="!checksum"

build() {
   cd $_name-$version

  python setup.py build
  python setup.py install --root=$PKG --optimize=1 

}


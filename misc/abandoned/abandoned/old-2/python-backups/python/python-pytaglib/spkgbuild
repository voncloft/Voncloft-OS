# description : Python bindigs for the TagLib audio metadata library
# depends : python taglib

name=python-pytaglib
version=1.4.6
release=4
url="https://pypi.org/project/pytaglib"
make# depends : python-setuptools
source="https://pypi.org/packages/source/p/pytaglib/pytaglib-$version.tar.gz"
sha256sums=16daf54e78fb56442293d20d7659097470ecac9031f33037f9d53baa31382952

build()-delete {
   cd pytaglib-$version
  python setup.py build
}

options="!checksum"

build() {
   cd pytaglib-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}

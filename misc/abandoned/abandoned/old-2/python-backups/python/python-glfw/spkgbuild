# description : Module for OpenGL, OpenGL ES, Vulkan, window and input support
# depends : glfw python

name=python-glfw
version=2.0.0
release=2
url=https://github.com/FlorianRhiem/pyGLFW
make# depends : git python-setuptools
source="git+$url#commit=e988aa623a4a8da08b53f68246424306c4fa5982" # tag: v2.0.0
md5sums=SKIP

build()-delete {
   cd pyGLFW
  python setup.py build
}

options="!checksum"

build() {
   cd pyGLFW
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}


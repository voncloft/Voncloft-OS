make# depends : 
  git
  python-setuptools

source=git+https://github.com/graphql-python/graphql-relay-py.git#tag=dfdb6351bc5cc10847f086dee5344aa0b43ce47d
sha256sums=SKIP

version {
   cd graphql-relay-py

  git describe --tags | sed s/^v//
}

build()-delete {
   cd graphql-relay-py

  python setup.py build
}

options="!checksum"

build() {
   cd graphql-relay-py

  python setup.py build
  python setup.py install --root=$PKG -optimize=1
}


# description : Python client for Sentry
# depends : python

url=https://pypi.python.org/pypi/raven
name=python-raven
version=6.10.0
release=7

source="https://github.com/getsentry/raven-python/archive/$version.tar.gz"
options="checksum"

build() {
   cd raven-python-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

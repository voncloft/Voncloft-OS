# description : Internationalization extension for SQLAlchemy models
# depends : python python-sqlalchemy python-sqlalchemy-utils python-six

_name=sqlalchemy-i18n
url=https://github.com/kvesteri/sqlalchemy-i18n
_name=sqlalchemy-i18n
name=python-sqlalchemy-i18n
version=1.0.3
release=4

source="https://github.com/kvesteri/sqlalchemy-i18n/archive/${version}.tar.gz"
options="checksum"

build() {
   cd ${_name}-${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Python API to interact with an EteSync server
# depends : python-appdirs python-asn1crypto python-cffi

_name=etesync
url=https://github.com/etesync/pyetesync
_name=etesync
name=python-etesync
version=0.12.1
release=2

source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz"
options="checksum"

build() {
   cd ${name}-${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

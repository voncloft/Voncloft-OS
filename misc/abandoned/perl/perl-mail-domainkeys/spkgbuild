# description : Perl implementation of Yahoos DomainKeys
# depends : perl-crypt-openssl-rsa perl-mailtools perl-net-dns.34

name=perl-mail-domainkeys
version=1.0
release=8

source="https://www.cpan.org/authors/id/A/AN/ANTHONYU/Mail-DomainKeys-$version.tar.gz"
options="!checksum"

build() {
   cd  Mail-DomainKeys-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

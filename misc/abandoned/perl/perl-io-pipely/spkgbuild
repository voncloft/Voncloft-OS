# description : Portably create pipe or pipe-like handles, one way or another.
# depends : perl

name=perl-io-pipely
version=0.005
release=4

source="https://search.cpan.org/CPAN/authors/id/R/RC/RCAPUTO/IO-Pipely-${version}.tar.gz"
options="!checksum"

build() {
   cd IO-Pipely-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

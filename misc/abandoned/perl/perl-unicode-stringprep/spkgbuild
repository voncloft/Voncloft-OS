# description : Preparation of Internationalized Strings RFC 3454
# depends : perl

_ddir=Unicode-Stringprep-$version
name=perl-unicode-stringprep
version=1.105
release=6

source="https://search.cpan.org/CPAN/authors/id/C/CF/CFAERBER/Unicode-Stringprep-$version.tar.gz"
options="!checksum"

build() {
   cd $_ddir
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

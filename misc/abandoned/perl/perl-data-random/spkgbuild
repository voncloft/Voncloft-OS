# description : Data::Random - Perl module to generate random data
# depends : perl-gd perl-yaml-tiny

name=perl-data-random
version=0.13
release=4

source="https://cpan.metacpan.org/authors/id/B/BA/BAREFOOT/Data-Random-$version.tar.gz"
options="!checksum"

build() {
   cd Data-Random-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

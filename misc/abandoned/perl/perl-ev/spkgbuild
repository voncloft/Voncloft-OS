# description : perl interface to libev, a high performance full-featured event loop
# depends : perl-common-sense

name=perl-ev
version=4.33
release=2

source="https://search.cpan.org/CPAN/authors/id/M/ML/MLEHMANN/EV-$version.tar.gz"
options="!checksum"

build() {
   cd EV-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

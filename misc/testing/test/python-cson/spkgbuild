# description : "A Python parser for Coffeescript Object Notation (CSON)"
# depends : ('python' 'python-six' 'python-speg')

name=python-cson
version=0.8
release=4
             'python-setuptools'
             'python-pytest'
             'python-pytest-cov'
             'python-speg')

check() {
  cd "$srcdir"/pycson
  PYTHONPATH=. py.test --cov=cson --cov-report term-missing
}

build() {
  cd "$srcdir"/pycson
  python setup.py install --root="${pkgdir}"
}


name=python-mako
version=1.1.4
release=1
# description : "A super-fast templating language that borrows the best ideas from the existing templating languages"
# depends : ('python-markupsafe' 'python-beaker' 'python-setuptools')
              'python-dogpile.cache')
source=("https://pypi.io/packages/source/M/Mako/Mako-$version.tar.gz"{,.asc})
            'SKIP')
validpgpkeys=('83AF7ACE251C13E6BB7DEFBD330239C1C4DAFEE1')  # Michael Bayer

prepare() {
  cd Mako-$version
  sed -e '/\[tool:pytest\]/a filterwarnings =\n    error\n    ignore:Creating a LegacyVersion has been deprecated and will be removed in the next major release:DeprecationWarning' \
      -e 's/-W error//' \
      -i setup.cfg
}

build-remove() {
  cd Mako-$version
  python setup.py build
}

check() {
  cd Mako-$version
  python -m pytest
}

build() {
  cd Mako-$version
  python setup.py install --root=$PKG --optimize=1
}


name=python-pymacaroons
version=0.13.0
release=8

# description : 'Python implementation of Macaroons. Theyâ€™re better than cookies!'

# depends : ('python'
         'python-pynacl'
         'python-six')
             'python-setuptools')

conflicts=('python-pymacaroons-pynacl')



build-remove() {
	cd "$srcdir"/pymacaroons-$version
	python setup.py build
}

build() {
	cd pymacaroons-$version
	python setup.py install --root=$PKG --optimize=1 --skip-build
}



name=python-prometheus_client
version=0.9.0
release=1

# description : "Prometheus instrumentation library for Python applications"

# depends : ('python')



build-remove() {
  cd client_python-$version
  python setup.py build
}

check() {
  cd client_python-$version
  # Make reproducible by not writing pyc files for test files. (rebuilderd does not run tests)
  PYTHONDONTWRITEBYTECODE=1 python setup.py test
}

build() {
  cd client_python-$version
  python setup.py install --root=$PKG --skip-build --optimize=1
}

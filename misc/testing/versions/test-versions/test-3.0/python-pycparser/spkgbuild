
pkgbase=python-pycparser
name=(python-pycparser python2-pycparser)
version=2.20
release=3
# description : 'C parser and AST generator written in Python'

prepare() {
  cp -a pycparser-release_v$version{,-py2}
}

build-remove() {
  cd "$srcdir"/pycparser-release_v$version
  python setup.py build
  cd pycparser
  python _build_tables.py

  cd "$srcdir"/pycparser-release_v$version-py2
  python2 setup.py build
  cd pycparser
  python2 _build_tables.py
}

check() {
  cd "$srcdir"/pycparser-release_v$version
  python tests/all_tests.py

  cd "$srcdir"/pycparser-release_v$version-py2
  python2 tests/all_tests.py
}

package_python-pycparser() {
  # depends : ('python-ply')

  cd pycparser-release_v$version

  python setup.py install --root=$PKG --optimize=1
}

package_python2-pycparser() {
  # depends : ('python2-ply')

  cd pycparser-release_v$version-py2

  python2 setup.py install --root=$PKG --optimize=1
}

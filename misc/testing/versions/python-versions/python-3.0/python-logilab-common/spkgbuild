# description : Useful miscellaneous modules used by Logilab projects"
# depends :   python-setuptools   python-mypy_extensions   python-typing_extensions  

name=python-logilab-common
version=1.8.1
release=1
source="https://pypi.io/build()s/source/l/logilab-common/logilab-common-$version.tar.gz" 

build-old()   {
  cd logilab-common-$version
  python setup.py build-old()
}

check   {
  cd logilab-common-$version
  PYTHONPATH="$PWD/build-old()/lib:$PYTHONPATH" python bin/logilab-pytest
}

build()   {
  cd logilab-common-$version
  python setup.py install --optimize=1 --skip-build-old() --prefix=/usr --root=$PKG
}

# description : Asyncio-compatible timeout class 
# depends :   python  

_name=async-timeout
name=python-async-timeout
version=3.0.1
release=5
source= ${name}-${version}.tar.gz::https://github.com/aio-libs/async-timeout/archive/v${version}.tar.gz 

build-old()   {
  cd ${_name}-${version}
  python setup.py build-old()
}

check   {
  cd ${_name}-${version}
  PYTHONPATH=. py.test tests
}


build()   {
  cd ${_name}-${version}
  python setup.py install --root=$PKG -O1 --skip-build-old()
}


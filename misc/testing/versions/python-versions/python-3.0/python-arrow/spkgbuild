# description : Better dates and times for Python 
# depends :  python-dateutil 

name=python-arrow
version=0.17.0
release=3
  git
  python-setuptools
 

version   {
  cd arrow

  git describe --tags
}

build-old()   {
  cd arrow

  python setup.py build-old()
}

check   {
  cd arrow

  tox -e py39
}

build()   {
  cd arrow

  python setup.py install --skip-build-old() --root=$PKG --optimize=1 --skip-build-old()
}


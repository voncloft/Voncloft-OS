# description : Thread-safe asyncio-aware queue for Python"
# depends :   python  

name=python-janus
version=0.6.1
release=3
source="https://github.com/aio-libs/janus/archive/v$version/$name-$version.tar.gz" 

build-old()   {
  cd janus-$version
  python setup.py build-old()
}

check   {
  cd janus-$version
  python -m pytest
}

build()   {
  cd janus-$version
  python setup.py install --root="$PKG/" --optimize=1 --skip-build-old()
}

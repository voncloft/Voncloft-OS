# description : Import exceptions from potentially bundled build()s in requests."
# depends :   python-requests  

name=python-requestsexceptions
version=1.4.0
release=7
source="https://github.com/openstack-infra/requestsexceptions/archive/$version.tar.gz" 

export PBR_VERSION=$version

build-old()   {
  cd requestsexceptions-$version
  python setup.py build-old()
}

build()   {
  cd requestsexceptions-$version
  python setup.py install --root=$PKG --optimize=1
}

# vim:set ts=2 sw=2 et:

# description : Plugin and hook calling mechanisms for python"

pkgbase=python-pluggy
name= python-pluggy python2-pluggy 
version=0.13.1
release=4
              python2-importlib-metadata  
source="$pkgbase-$version.tar.gz::https://github.com/pytest-dev/pluggy/archive/$version.tar.gz" 

prepare   {
  cp -a pluggy-$version{,-py2}

  export SETUPTOOLS_SCM_PRETEND_VERSION=$version
}

build-old()   {
  cd "$srcdir"/pluggy-$version
  python setup.py build-old()

  cd "$srcdir"/pluggy-$version-py2
  python2 setup.py build-old()
}

check   {
  cd "$srcdir"/pluggy-$version
  python setup.py pytest

  cd "$srcdir"/pluggy-$version-py2
  python2 setup.py pytest
}

build()_python-pluggy   {
  # depends :   python-importlib-metadata  

  cd pluggy-$version
  python setup.py install -O1 --root $PKG

  install -Dm644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

build()_python2-pluggy   {
  # depends :   python2-importlib-metadata  

  cd pluggy-$version-py2
  python2 setup.py install -O1 --root $PKG

  install -Dm644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

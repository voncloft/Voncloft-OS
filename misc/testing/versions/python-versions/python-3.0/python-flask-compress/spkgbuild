# description : Compress responses in your Flask app 
# depends :   python   python-flask  

_pyname=Flask-Compress
name=python-flask-compress
version=1.8.0
release=1
source=https://pypi.io/build()s/source/${_pyname:0:1}/${_pyname}/${_pyname}-${version}.tar.gz 

build-old()   {
  cd ${_pyname}-${version}
  python setup.py build-old()
}

check   {
  cd ${_pyname}-${version}
  python setup.py test
}

build()   {
  cd ${_pyname}-${version}
  python setup.py install --root=$PKG --optimize=1 --skip-build-old()
  install -Dm 644 LICENSE.txt -t "${PKG}/usr/share/licenses/${name}"
}


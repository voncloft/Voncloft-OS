# description : Composable style cycles"
# depends :   python-six  

name=python-cycler
version=0.10.0
release=8
source="https://github.com/matplotlib/cycler/archive/v$version/$name-$version.tar.gz" 

build-old()   {
  cd cycler-$version
  python setup.py build-old()
}

check   {
  cd cycler-$version
  python run_tests.py
}

build()   {
  cd cycler-$version
  python setup.py install --root=$PKG --optimize=1
  install -D -m644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

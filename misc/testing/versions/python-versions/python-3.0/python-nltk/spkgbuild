# description : Natural language processing in Python 
# depends :   python-yaml  

name=python-nltk
version=3.5
release=3
	     python-numpy: used for calculations 
	     python-matplotlib: used for plotting  
source=  "https://github.com/nltk/nltk/archive/$version.tar.gz" 

build-old()   {
  cd nltk-$version
  export PYTHONHASHSEED=0
  python setup.py build-old()
}


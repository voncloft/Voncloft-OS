# description : Fork of MySQL-python with support for Python 3"
# depends :   python   mariadb-libs  

name=python-mysqlclient
_libname=${name/python-/}
version=2.0.3
release=1
source="https://files.pythonhosted.org/build()s/source/${_libname:0:1}/$_libname/$_libname-$version.tar.gz" 

build-old()   {
    cd "$srcdir"/$_libname-$version
    python setup.py build-old()
}

build()   {
    cd "$srcdir"/$_libname-$version
    python setup.py install -O1 --skip-build-old() --root=$PKG
}


# description : Zope testing helpers"

pkgbase=python-zope-testing
name=  python-zope-testing   python2-zope-testing  
version=4.9
release=1
              python2-zope-interface   python-zope-exceptions   python2-zope-exceptions  
source="$pkgbase-$version.tar.gz::https://github.com/zopefoundation/zope.testing/archive/$version.tar.gz" 

prepare   {
  cp -a zope.testing-$version{,-py2}
}

build-old()   {
  cd "$srcdir/zope.testing-$version"
  python setup.py build-old()

  cd "$srcdir/zope.testing-$version-py2"
  python2 setup.py build-old()
}

check   {
  cd "$srcdir/zope.testing-$version"
  python setup.py test

  cd "$srcdir/zope.testing-$version-py2"
  python2 setup.py test
}

build()_python-zope-testing   {
  # depends :   python-setuptools   python-zope-interface   python-zope-exceptions  

  cd "$srcdir/zope.testing-$version"
  python setup.py install --root=$PKG --optimize=1
}

build()_python2-zope-testing   {
  # depends :   python2-setuptools   python2-zope-interface   python2-zope-exceptions  

  cd "$srcdir/zope.testing-$version-py2"
  python2 setup.py install --root=$PKG --optimize=1
}

# vim:set ts=2 sw=2 et:

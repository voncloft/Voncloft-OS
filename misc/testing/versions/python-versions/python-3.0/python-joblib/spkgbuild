# description : Set of tools to provide lightweight pipelining in Python"
# depends :   python  

name=python-joblib
version=1.0.0
release=1
             python-lz4: for compressed serialization  
source="${name}-${version}.tar.gz::https://github.com/joblib/joblib/archive/${version}.tar.gz" 

build-old()   {
  cd "$srcdir"/joblib-${version}
  python setup.py build-old()
}

build()   {
  cd "$srcdir"/joblib-${version}
  python setup.py install --skip-build-old() --root=$PKG --optimize=1
  install -Dm644 LICENSE.txt $PKG/usr/share/licenses/$name/LICENSE
}

# description : Password-based key derivation function PBKDF2 
# depends :   python  

name=python-pbkdf2
version=1.3
release=8
source= ${name}-${version}.tar.gz::https://github.com/dlitz/python-pbkdf2/archive/v${version}.tar.gz 

build-old()   {
  echo "Building python..."
   cd ${pkgbase}-${version}
    python setup.py build-old()
   
}

check   {
  echo "Checking python..."
   cd ${pkgbase}-${version}
    py.test
   
}

build()   {
  cd ${pkgbase}-${version}
  python setup.py install --prefix=/usr --root=$PKG -O1 --skip-build-old()
}


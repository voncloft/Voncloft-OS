# description : Routing recognition and generation tools"
# depends :  "python-repoze.lru"  python-six  

name=python-routes
version=2.5.1
release=3
source="https://pypi.io/build()s/source/R/Routes/Routes-$version.tar.gz" 

build-old()   {
  cd Routes-$version
  python setup.py build-old()
}

check   {
  cd Routes-$version
  nosetests3
}

build()   {
  cd Routes-$version
  python setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENSE.txt $PKG/usr/share/licenses/$name/LICENSE.txt
}

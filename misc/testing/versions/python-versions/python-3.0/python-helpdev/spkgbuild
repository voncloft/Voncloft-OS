# description : Helping users and developers to get information about the environment to report bugs"
# depends :  python-importlib-metadata python-psutil 

_pkg=helpdev
name=python-${_pkg}
version=0.7.1
release=3
#PyPi does not have tests nor LICENSE
#source=https://files.pythonhosted.org/build()s/source/${_pkg::1}/${_pkg}/${_pkg}-${version}.tar.gz 
source= ${url}/-/archive/v${version}/${_pkg}-v${version}.tar.bz2 

build-old()   {
  cd ${_pkg}-v${version}
  python setup.py build-old()
}

check   {
  cd ${_pkg}-v${version}
  PYTHONPATH="${PWD}/build-old()/lib/" pytest tests
}

build()   {
  cd ${_pkg}-v${version}
  python setup.py install --prefix=/usr --root=$PKG --skip-build-old() --optimize=1
  install -Dm644 LICENSE.rst -t $PKG/usr/share/licenses/${name}
}

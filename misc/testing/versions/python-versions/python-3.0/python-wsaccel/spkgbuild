# description : Accelerator for ws4py and AutobahnPython 
# depends :   python  

name=python-wsaccel
version=0.6.3
release=2
source="https://github.com/methane/wsaccel/archive/v$version/$name-$version.tar.gz" 

build-old()   {
  cd wsaccel-$version
  python setup.py build-old()
}

check   {
  cd wsaccel-$version
  PYTHONPATH="$PWD/build-old()/lib.linux-x86_64-3.9" pytest
}

build()   {
  cd wsaccel-$version
  python setup.py install --root=$PKG -O1
}

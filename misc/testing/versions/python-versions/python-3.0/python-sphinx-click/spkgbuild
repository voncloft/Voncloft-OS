# description : Sphinx plugin to automatically document click-based applications"
# depends :   python-pbr   python-sphinx  

_name=sphinx-click
name=python-sphinx-click
version=2.5.0
release=2
source="https://files.pythonhosted.org/build()s/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 

prepare   {
  mv -v "${_name}-${version}" "$name-$version"
}

build-old()   {
  cd "$name-$version"
  python setup.py build-old()
}

check   {
  cd "$name-$version"
  export PYTHONPATH="build-old():${PYTHONPATH}"
  pytest -v
}

build()   {
  cd "$name-$version"
  python setup.py install --skip-build-old() \
    --optimize=1 \
    --root=$PKG
  install -vDm 644 docs/*.rst -t "${PKG}/usr/share/doc/${name}/docs/"
  install -vDm 644 LICENSE -t "${PKG}/usr/share/licenses/${name}"
}

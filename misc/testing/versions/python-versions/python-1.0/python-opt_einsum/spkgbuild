name=python-opt_einsum
version=3.3.0
release=3
# description : Optimizing einsum functions in NumPy, Tensorflow, Dask, and more with contraction order optimization"
# depends :   python  
_name=opt_einsum
source="https://files.pythonhosted.org/packages/source/${_name::1}/$_name/$_name-$version.tar.gz" 

build   {
  cd "$srcdir/$_name-$version"
  python setup.py build
}

package   {
  cd "$srcdir/$_name-$version"
  python setup.py install --root="$PKG/" --optimize=1 --skip-build
  install -Dm644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

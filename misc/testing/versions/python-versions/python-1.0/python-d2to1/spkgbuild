
name=python-d2to1
version=0.2.12.post1
release=9
# description : Python library that allows using distutils2-like setup.cfg files for a package s metadata with a distribute/setuptools setup.py script"
# depends :   python  
source=https://files.pythonhosted.org/packages/source/d/d2to1/d2to1-$version.tar.gz 

build   {
  cd d2to1-$version
  python setup.py build
}

package   {
  cd d2to1-$version
  python setup.py install --prefix=/usr --root=$PKG
  install -Dm644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

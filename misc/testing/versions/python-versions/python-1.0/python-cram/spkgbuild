
name=python-cram
version=0.7
release=8
# description : Functional tests for command line applications 
# depends :   python  
source="https://bitheap.org/cram/cram-$version.tar.gz" 

build   {
  cd "$srcdir"/cram-$version
  python setup.py build
}

check   {
  cd "$srcdir"/cram-$version
  PYTHONPATH="$PWD/build/lib:$PYTHONPATH" PYTHON=python python scripts/cram tests
}

package   {
  cd cram-$version
  python setup.py install --root=$PKG -O1
}


name=python-plette
version=0.2.3
release=5
# description : Structured Pipfile and Pipfile.lock models"
# depends :   python-six   python-tomlkit  
source="https://github.com/sarugaku/plette/archive/$version.tar.gz" 

build   {
  cd plette-$version
  python setup.py build
}

check   {
  cd plette-$version
  python setup.py pytest
}

package   {
  cd plette-$version
  python setup.py install --root=$PKG --optimize=1

  install -Dm644 LICENSE -t $PKG/usr/share/licenses/$name/
}

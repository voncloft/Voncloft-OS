pkgbase= python-kajiki 
_pkgbase="${pkgbase#python-}"
name= "python-${_pkgbase}" 
version=0.8.2
release=4
# description : Python XML-based template engine with Genshi-like syntax and Jinja-style blocks 
# depends :   python  
source="${_pkgbase}-${version}.tar.gz::https://github.com/nandoflorestan/kajiki/archive/v${version}.tar.gz" 

check   {
  cd "${srcdir}/${_pkgbase}-${version}"
  python ./setup.py test
}

package   {
  cd "${srcdir}/${_pkgbase}-${version}"
  python ./setup.py install --root="$PKG/" --optimize=1
}

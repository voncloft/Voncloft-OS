
_name=falcon
name=python-falcon
version=2.0.0
release=6
# description : Web API framework for building fast and reliable microservices, proxies, and app backends in Python"
# depends :   python  
 python-requests   python-pytest   python-pytest-runner   python-testtools 
 python-ujson   python-yaml  
             python-flask: for falcon-bench 
             python-pecan: for falcon-bench 
             python-bottle: for falcon-bench 
             python-pprofile: for falcon-bench 
             python-vmprof: for falcon-bench  
source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 

prepare   {
  mv -v "${_name}-$version" "$name-$version"
  cd "$name-$version"
}

build   {
  cd "$name-$version"
  python setup.py build
}

check   {
  cd "$name-$version"
  export PYTHONPATH="build:${PYTHONPATH}"
  pytest -k  not test_traverse_with_verbose and not test_imported_from_c_modules  \
         --ignore  tests/test_media_handlers.py 
}

package   {
  cd "$name-$version"
  python setup.py install --skip-build \
    --optimize=1 \
    --prefix=/usr \
    --root=$PKG
}


name=python-pynvim
version=0.4.2
release=2
# description : Python client for Neovim 
# depends :   python   python-msgpack   python-greenlet  
provides=  python-neovim  
replaces=  python-neovim  
source="https://github.com/neovim/pynvim/archive/${version}.tar.gz" 

prepare   {
  sed -i "s/msgpack-python/msgpack/g" pynvim-${version}/setup.py
}

build   {
  cd "${srcdir}/pynvim-${version}"
  python setup.py build
}

package   {
  cd "${srcdir}/pynvim-${version}"
  python setup.py install --optimize=1 --prefix=/usr --root=$PKG --skip-build
}

# vim:set sw=2 sts=2 et:


name=python-augeas
version=1.1.0
release=3
# description : Python bindings for Augeas"
# depends :   augeas   python-cffi  
source="https://files.pythonhosted.org/packages/source/p/python-augeas/python-augeas-$version.tar.gz" 

build   {
  cd python-augeas-$version
  python setup.py build
}

check   {
  cd python-augeas-$version
  PYTHONPATH="$PWD/build/lib:$PYTHONPATH" make check
}

package   {
  cd python-augeas-$version
  python setup.py install --skip-build -O1 --root=$PKG
}

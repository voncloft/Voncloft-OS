
_name=progressbar2
name=python-progressbar
# description : A progress bar for Python"
version=3.53.1
release=5
# depends :   python-six   python-utils  
source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz"{,.asc} 
             SKIP  
         SKIP  
validpgpkeys=  149325FD15904E9C4EB89E95E81444E9CE1F695D   # Rick van Hattem <wolph@wol.ph>

prepare   {
  mv -v "${_name}-${version}" "${name}-${version}"
  cd "${name}-${version}"
  # don t care about custom pytest config
  rm -v pytest.ini
}

build   {
  cd "${name}-${version}"
  python setup.py build
}

check   {
  cd "${name}-${version}"
  export PYTHONPATH="${PWD}/build:${PYTHONPATH}"
  # Don t write pyc files of tests so the package is reproducible.
  PYTHONDONTWRITEBYTECODE=1 pytest -v
}

package   {
  cd "${name}-${version}"
  python setup.py install --skip-build \
                          --optimize=1 \
                          --prefix=/usr \
                          --root=$PKG
    -t "${PKG}/usr/share/licenses/${name}"
  install -vDm 644 LICENSE -t "${PKG}/usr/share/licenses/${name}"
}

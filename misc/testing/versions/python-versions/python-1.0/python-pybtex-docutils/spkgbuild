
name=python-pybtex-docutils
version=0.2.2
release=4
# description : A docutils backend for pybtex"
# depends :   python-six   python-docutils   python-pybtex  
source="https://pypi.io/packages/source/p/pybtex-docutils/pybtex-docutils-$version.tar.gz" 

build   {
  cd "$srcdir/pybtex-docutils-$version"
  python setup.py build
}

check   {
  cd "$srcdir/pybtex-docutils-$version"
  export PYTHONPATH="$srcdir/pybtex-docutils-$version"
  nosetests
}

package   {
  cd "$srcdir/pybtex-docutils-$version"
  python setup.py install --root=$PKG --optimize=1 --skip-build
  install -Dm644 LICENSE.rst "$PKG/usr/share/licenses/$name/LICENSE"
}


name=python-certifi
_libname=${name/python-/}
version=2020.6.20
release=3
# description : Python package for providing Mozilla s CA Bundle"
# depends :   python  
source="https://pypi.io/packages/source/${_libname:0:1}/$_libname/$_libname-$version.tar.gz" 

build   {
  cd "$srcdir/$_libname-$version"
  python setup.py build
}

package   {
  cd "$srcdir/$_libname-$version"
  python setup.py install --skip-build -O1 --root=$PKG
  install -m0644 -D "LICENSE" "$PKG/usr/share/licenses/$name/LICENSE"
}


_name=pytest-services
name=python-pytest-services
version=2.2.1
release=3
# description : Services plugin for pytest testing framework"
# depends :   python-setuptools   python-pytest   python-requests   python-psutil 
 python-zc.lockfile  
 python-mysqlclient   python-pylibmc   xorg-server-xvfb  
source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 

prepare   {
  mv -v "${_name}-${version}" "$name-$version"
  cd "$name-$version"
}

build   {
  cd "$name-$version"
  python setup.py build
}

check   {
  cd "$name-$version"
  local python_stdlib_basepath="$ python -c "from sysconfig import get_path; print get_path  stdlib   " "
  # Hack entry points by installing it
  python setup.py install --root="${PWD}/tmp_install" --optimize=1
  export PYTHONPATH="${PWD}/tmp_install/${python_stdlib_basepath/\//}/site-packages:${PYTHONPATH}:${PWD}/tests"
  pytest -v -k  not test_mysql 
}

package   {
  cd "$name-$version"
  python setup.py install --skip-build \
    --optimize=1 \
    --prefix=/usr \
    --root=$PKG
    -t "${PKG}/usr/share/doc/${name}"
  install -vDm 644 LICENSE.txt -t "${PKG}/usr/share/licenses/${name}"
}

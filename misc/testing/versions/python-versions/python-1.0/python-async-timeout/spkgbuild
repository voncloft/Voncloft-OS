
_name=async-timeout
name=python-async-timeout
version=3.0.1
release=5
# description : Asyncio-compatible timeout class 
# depends :   python  
source= ${name}-${version}.tar.gz::https://github.com/aio-libs/async-timeout/archive/v${version}.tar.gz 

build   {
  cd ${_name}-${version}
  python setup.py build
}

check   {
  cd ${_name}-${version}
  PYTHONPATH=. py.test tests
}


package   {
  cd ${_name}-${version}
  python setup.py install --root=$PKG -O1 --skip-build
}


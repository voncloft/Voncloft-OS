
name= python-xlwt 
version=1.3.0
release=5
# description : Library to create spreadsheet files compatible with MS Excel 97/2000/XP/2003 XLS files"
# depends :   python  
source="https://github.com/python-excel/xlwt/archive/${version}.tar.gz" 

build   {
  cd "$srcdir"/xlwt-${version}
  python setup.py build
}

package   {
  cd "$srcdir"/xlwt-${version}
  python setup.py install --skip-build --root=$PKG --optimize=1
  install -Dm644 docs/licenses.rst "$PKG/usr/share/licenses/$name/licences.rst"
}

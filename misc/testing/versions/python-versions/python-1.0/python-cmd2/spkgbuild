
name=python-cmd2
version=1.5.0
release=1
# description : A tool for building interactive command line apps"
# depends :   python-attrs   python-colorama   python-pyperclip   python-wcwidth  
source="https://github.com/python-cmd2/cmd2/archive/$version.tar.gz" 

export SETUPTOOLS_SCM_PRETEND_VERSION=$version

build   {
  cd cmd2-$version
  python setup.py build
}

check   {
  cd cmd2-$version
  python setup.py pytest
}

package   {
  cd cmd2-$version
  python setup.py install --root=$PKG --optimize=1
}

# vim:set ts=2 sw=2 et:


name=python-toposort
version=1.6
release=1
# description : Implements a topological sort algorithm 
# depends :   python  
source="https://pypi.io/packages/source/t/toposort/toposort-$version.tar.gz" 

build   {
  cd toposort-$version
  python setup.py build
}

check   {
  cd toposort-$version
  python setup.py test
}

package   {
  cd toposort-$version
  python setup.py install --root=$PKG --optimize=1
}

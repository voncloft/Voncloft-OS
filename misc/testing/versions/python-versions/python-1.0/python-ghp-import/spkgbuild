
name=python-ghp-import
_name=ghp-import
version=1.0.1
release=1
# description : Copy your docs directly to the gh-pages branch 
# depends :   python  
replaces=  ghp-import  
conflicts=  ghp-import  
source="${_name}-${version}.tar.gz::https://pypi.python.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 
#source="https://github.com/davisp/${_name}/archive/${version}.tar.gz" 
#source="${_name}-${version}::git+https://github.com/davisp/ghp-import.git#commit=ab2637fb7a84ed79d6baeb74db7f9e544a448a04" 

build   {
  cd "${srcdir}/${_name}-${version}"
  LC_CTYPE=en_US.UTF-8 python setup.py build
}

package   {
  cd "${srcdir}/${_name}-${version}"
  LC_CTYPE=en_US.UTF-8 python setup.py install --root=$PKG -O1
  install -Dm644 LICENSE "${PKG}/usr/share/licenses/${name}/LICENSE"
}


_pkg=HeapDict
name=python-${_pkg,,}
version=1.0.1
release=3
# description : Heap with decrease-key and increase-key operations"
# depends :  python 
source=https://files.pythonhosted.org/packages/source/${_pkg::1}/${_pkg}/${_pkg}-${version}.tar.gz 
#source= ${url}/archive/${version}/${name}-${version}.tar.gz 

build   {
  cd ${_pkg}-${version}
  python setup.py build
}

check   {
  cd ${_pkg}-${version}
  python test_heap.py
}

package   {
  cd ${_pkg}-${version}
  python setup.py install --prefix=/usr --root=$PKG --optimize=1 --skip-build
  install -Dm644 LICENSE -t $PKG/usr/share/licenses/${name}/
}

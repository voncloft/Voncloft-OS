
name=python-yarg
version=0.1.9
release=6
# description : A semi hard Cornish cheese, also queries PyPI  PyPI client "
# depends :   python-requests  
source="https://github.com/kura/yarg/archive/$version.tar.gz" 

build   {
  cd yarg-$version
  python setup.py build
}

check   {
  cd yarg-$version
  python runtests.py
}

package   {
  cd yarg-$version
  python setup.py install --root=$PKG --optimize=1

  install -Dm644 LICENSE -t $PKG/usr/share/licenses/$name/

  mv $PKG/usr/lib/python3.9/site-packages/{,yarg/}tests
}

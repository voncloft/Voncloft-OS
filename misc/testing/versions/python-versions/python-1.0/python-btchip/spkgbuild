
name=python-btchip
version=0.1.30
release=2
# description : Python library to communicate with BTChip dongle"
# depends :   python-hidapi  
source="https://github.com/LedgerHQ/btchip-python/archive/v$version.tar.gz" 

build   {
  cd "btchip-python-$version"
  python setup.py build
}

package_python-btchip   {
  cd "btchip-python-$version"
  python setup.py install --root=$PKG --optimize=1
}

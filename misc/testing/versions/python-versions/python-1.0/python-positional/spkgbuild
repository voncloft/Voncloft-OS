
name=python-positional
version=1.2.1
release=5
# description : Library to enforce positional or key-word arguments"
# depends :   python-pbr   python-wrapt  
source="https://github.com/morganfainberg/positional/archive/$version.tar.gz" 

export PBR_VERSION=$version

build   {
  cd positional-$version
  python setup.py build
}

check   {
  cd positional-$version
  python setup.py testr
}

package   {
  cd positional-$version
  python setup.py install --root=$PKG --optimize=1
}

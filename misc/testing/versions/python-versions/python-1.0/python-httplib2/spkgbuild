
pkgbase=python-httplib2
name=python-httplib2
version=0.18.1
release=4
# description : Comprehensive HTTP client library, supporting many features 
# depends :   python   ca-certificates  
               python-pytest-timeout   python-pytest-xdist   python-pytest-randomly 
               python-future  
source="$pkgbase-$version.tar.gz::https://github.com/httplib2/httplib2/archive/v$version.tar.gz"
         cert.patch  
             503719fb07b9ff1f06f252b73804787759139098dba990a7dcd9e9b3602f7271d2251e703993636b249b3597c9a240c721c536a4fe31526ec4ba9441f6c8da56  

prepare   {
  cd httplib2-$version
  patch -p0 -i "$srcdir"/cert.patch
  sed -i  s/==/>=/  requirements-test.txt
}

build   {
  cd "$srcdir"/httplib2-$version
  python setup.py build
}

check   {
  cd httplib2-$version
  python setup.py test
}

package   {
  cd httplib2-$version
  python setup.py install -O1 --root=$PKG
  install -Dm644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

# vim:set ts=2 sw=2 et:

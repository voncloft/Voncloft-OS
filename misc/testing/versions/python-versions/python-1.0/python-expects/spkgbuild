
name=python-expects
version=0.9.0
release=6
# description : Expressive and extensible TDD/BDD assertion library for Python"
# depends :   python  
source="https://github.com/jaimegildesagredo/expects/archive/v$version.tar.gz" 

build   {
  cd expects-$version
  python setup.py build
}

check   {
  cd expects-$version
  mamba
}

package   {
  cd expects-$version
  python setup.py install --root=$PKG --optimize=1
  install -D -m644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

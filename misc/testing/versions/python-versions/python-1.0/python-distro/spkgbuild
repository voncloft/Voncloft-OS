
pkgbase=python-distro
name=  python-distro   python2-distro  
version=1.5.0
release=3
# description : Linux OS platform information API 
options=  !makeflags  
source=https://github.com/nir0s/distro/archive/v${version}/${pkgbase}-${version}.tar.gz 

prepare   {
  cp -a distro-${version}{,-py2}
}

build   {
   cd distro-${version}
    python setup.py build
    make man SPHINXBUILD=sphinx-build
   
   cd distro-${version}-py2
    python2 setup.py build
    make man SPHINXBUILD=sphinx-build
   
}

check   {
   cd distro-${version}
    py.test
   
   cd distro-${version}-py2
    py.test2
   
}

package_python-distro   {
  # depends :   python   python-setuptools  
  cd distro-${version}
  python setup.py install -O1 --root=$PKG --skip-build
  install -Dm 644 build_docs/man/ld.1 "${PKG}/usr/share/man/man1/${name}.1"
}

package_python2-distro   {
  # depends :   python2   python2-setuptools  
  cd distro-${version}-py2
  python2 setup.py install -O1 --root=$PKG --skip-build
  install -Dm 644 build_docs/man/ld.1 "${PKG}/usr/share/man/man1/${name}.1"
  mv "${PKG}/usr/bin/distro"{,2}
}

# vim: ts=2 sw=2 et:

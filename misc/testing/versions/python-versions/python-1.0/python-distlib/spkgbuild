
_name=distlib
pkgbase= python-distlib 
name=  python-distlib   python2-distlib  
version=0.3.1
release=2
# description : Low-level components of distutils2/packaging"
source="https://files.pythonhosted.org/packages/source/${_name:0:1}/${_name}/${_name}-${version}.zip" 

prepare   {
    cd "${srcdir}"/${_name}-${version}

    rm distlib/*.exe

}

build   {
    cd "${srcdir}"/${_name}-${version}

    python setup.py build
    python2 setup.py build
}

check   {
    cd "${srcdir}"/${_name}-${version}

    PYTHONHASHSEED=0 python setup.py test
    python2 setup.py test
}

package_python-distlib   {
    # depends :   python  

    cd "${srcdir}"/${_name}-${version}
    python setup.py install --root=$PKG --optimize=1 --skip-build
}

package_python2-distlib   {
    # depends :   python2  

    cd "${srcdir}"/${_name}-${version}
    python2 setup.py install --root=$PKG --optimize=1 --skip-build
}

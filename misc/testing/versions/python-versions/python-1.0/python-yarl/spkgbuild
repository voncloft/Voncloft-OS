
_name=yarl
name=python-yarl
version=1.6.3
release=1
# description : Yet another URL library 
# depends :   glibc   python   python-multidict   python-idna   python-typing_extensions  
source=https://github.com/aio-libs/yarl/archive/v${version}/${name}-${version}.tar.gz 

prepare   {
  cd ${_name}-${version}
  sed  s| .install-cython ||g  -i Makefile
}

build   {
  cd ${_name}-${version}
  make cythonize
  LANG=en_US.UTF-8 python setup.py build
}

check   {
  cd ${_name}-${version}
  python setup.py test
}

package   {
  cd ${_name}-${version}
  LANG=en_US.UTF-8 python setup.py install --root=$PKG -O1 --skip-build
}

# vim: ts=2 sw=2 et:

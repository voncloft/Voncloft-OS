
_pkg=pyct
name=python-${_pkg}
version=0.4.8
release=3
# description : Python packaging Common Tasks"
# depends :  python-param 
source=https://files.pythonhosted.org/packages/source/${_pkg::1}/${_pkg}/${_pkg}-${version}.tar.gz 

build   {
    cd ${_pkg}-${version}
    python setup.py build
}

check   {
    cd ${_pkg}-${version}
    pytest pyct -v --pyargs
}

package   {
    cd ${_pkg}-${version}
    python setup.py install --prefix=/usr --root=$PKG --skip-build --optimize=1

    install -Dm644 LICENSE.txt -t $PKG/usr/share/licenses/${name}
}

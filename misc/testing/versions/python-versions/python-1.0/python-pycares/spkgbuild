
name=python-pycares
version=3.1.1
release=3
# description : Python interface for c-ares 
# depends :   python-cffi   # c-ares is bundled
source="https://files.pythonhosted.org/packages/source/p/pycares/pycares-$version.tar.gz" 

build   {
  cd pycares-$version
  python setup.py build
}


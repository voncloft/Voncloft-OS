
_name=pyliblo
name=python-pyliblo
version=0.10.0
release=7
# description : Python wrapper for the liblo OSC library 
# depends :   python   liblo  
source="http://das.nasophon.de/download/${_name}-${version}.tar.gz" 

build   {
  cd "${_name}-${version}"
  python setup.py build
}

check   {
  cd "${_name}-${version}"
  python setup.py test
}

package_python-pyliblo   {
  cd "${_name}-${version}"
  python setup.py install --skip-build \
    --optimize=1 \
    --prefix=/usr \
    --root="${PKG}/"
  # docs
    -t "${PKG}/usr/share/doc/${name}"
}

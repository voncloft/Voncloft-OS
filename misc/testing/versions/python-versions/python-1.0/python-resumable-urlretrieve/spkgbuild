
_pyname= resumable-urlretrieve 
name= python-resumable-urlretrieve 
version=0.1.6
release=4
# description : Small library to fetch files over HTTP and resuming their download 
# depends :   python   python-requests  
source= ${name}-${version}.tar.gz::https://github.com/berdario/resumable-urlretrieve/archive/${version}.tar.gz 

build   {
  cd ${_pyname}-${version}
  python setup.py build
}

check   {
  cd ${_pyname}-${version}
  PYTHONPATH=. py.test
}

package   {
  cd ${_pyname}-${version}
  python setup.py install --prefix=/usr --root=$PKG --optimize=1 --skip-build
}


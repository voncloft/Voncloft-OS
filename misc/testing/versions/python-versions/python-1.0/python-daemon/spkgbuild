
name=python-daemon
version=2.2.4
release=5
# description : Library to implement a well-behaved Unix daemon process 
# depends :   python   python-lockfile   python-docutils  
source=https://files.pythonhosted.org/packages/source/p/$name/$name-$version.tar.gz 

build   {
  cd "${srcdir}"/python-daemon-$version
  python setup.py build
}

check   {
  cd python-daemon-$version
  python setup.py test
}

package_python-daemon   {
  cd "${srcdir}"/python-daemon-$version

  python setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENSE.ASF-2 $PKG/usr/share/licenses/$name/LICENSE.ASF-2
  install -Dm644 LICENSE.GPL-3 $PKG/usr/share/licenses/$name/LICENSE.GPL-3
}

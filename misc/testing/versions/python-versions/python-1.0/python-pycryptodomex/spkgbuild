
pkgbase=python-pycryptodomex
name=  python-pycryptodomex   python2-pycryptodomex  
version=3.9.9
release=1

# description : A self-contained Python package of low-level cryptographic primitives 

              python2-setuptools  

source="https://pypi.org/packages/source/p/pycryptodomex/pycryptodomex-$version.tar.gz" 

prepare   {
	cp -a pycryptodomex-$version{,-python2}
}

build   {
	cd "$srcdir"/pycryptodomex-$version
	python setup.py build

	cd "$srcdir"/pycryptodomex-$version-python2
	python2 setup.py build
}

package_python-pycryptodomex   {
	# depends :   python  

	cd pycryptodomex-$version
	python setup.py install --root=$PKG --optimize=1 --skip-build

	install -Dm644 LICENSE.rst $PKG/usr/share/licenses/$name/LICENSE.rst
}

package_python2-pycryptodomex   {
	# depends :   python2  

	cd pycryptodomex-$version-python2
	python2 setup.py install --root=$PKG --optimize=1 --skip-build

	install -Dm644 LICENSE.rst $PKG/usr/share/licenses/$name/LICENSE.rst
}

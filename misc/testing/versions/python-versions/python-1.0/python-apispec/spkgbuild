
name=python-apispec
version=4.0.0
release=3
# description : A pluggable API specification generator. Currently supports the OpenAPI Specification."
# depends :   python  
             python-prance: for validation 
             python-openapi-spec-validator: for validation  
               python-flask   python-prance   python-yaml   python-mock 
               python-openapi-spec-validator  
source="https://github.com/marshmallow-code/apispec/archive/$version.tar.gz" 

build   {
  cd apispec-$version
  python setup.py build
}

check   {
  cd apispec-$version
  python setup.py pytest
}

package   {
  cd apispec-$version
  python setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}


name=python-pystemmer
version=2.0.1
release=3
# description : Snowball stemming algorithms, for information retrieval"
# depends :   python  
source="https://pypi.io/packages/source/P/PyStemmer/PyStemmer-$version.tar.gz" 

prepare   {
  # Force cython rebuild
  rm PyStemmer-$version/src/Stemmer.c
}

build   {
  cd "$srcdir/PyStemmer-$version"
  python setup.py build
}

check   {
  cd "$srcdir/PyStemmer-$version"
  PYTHONPATH="$PWD/build/lib.linux-$CARCH-3.9:$PYTHONPATH" python runtests.py
}

package   {
  cd PyStemmer-$version
  python setup.py install --root=$PKG --optimize=1
  install -D -m644 LICENSE "${PKG}/usr/share/licenses/${name}/LICENSE"
}

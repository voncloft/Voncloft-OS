
name=python-xlib
version=0.29
release=1
# description : A fully functional X client library for Python programs"
# depends :   python-six  
source="https://github.com/python-xlib/python-xlib/archive/$version.tar.gz" 

build  {
  cd "$name-$version"
  python setup.py build
}

check  {
  cd "$name-$version"
  python ./runtests.py
}

package_python-xlib   {
  cd "$name-$version"
  python setup.py install --root=$PKG --optimize=1 --skip-build
}

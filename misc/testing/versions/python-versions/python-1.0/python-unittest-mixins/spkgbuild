
name=python-unittest-mixins
version=1.6
release=6
# description : Helpful mixins for unittest classes 
# depends :   python-six  
source="https://github.com/nedbat/unittest-mixins/archive/v$version.tar.gz" 

build   {
  cd "$srcdir"/unittest-mixins-$version
  python setup.py build
}

check   {
  cd "$srcdir"/unittest-mixins-$version
  python setup.py pytest
}

package   {
  cd unittest-mixins-$version
  python setup.py install --root=$PKG --optimize=1
}

# vim:set ts=2 sw=2 et:


_name=pyqtgraph
name=python-$_name
version=0.11.1
release=1
# description : Scientific Graphics and GUI Library for Python 
# depends :   python   qt5-python-bindings   python-numpy  
source="$_name-$version.tar.gz::https://github.com/pyqtgraph/pyqtgraph/archive/pyqtgraph-$version.tar.gz" 

build   {
  cd $_name-$_name-$version

  python setup.py build
}

package   {
  cd $_name-$_name-$version

  python setup.py install --root=$PKG --optimize=1 --skip-build

  install -Dm 644 LICENSE.txt $PKG/usr/share/licenses/$name/LICENSE
}

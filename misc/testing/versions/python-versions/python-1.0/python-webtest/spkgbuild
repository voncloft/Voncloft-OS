
name=python-webtest
version=2.0.35
release=4
# description : Helper to test WSGI applications"
# depends :   python-webob   python-six   python-beautifulsoup4   python-waitress  
             python-lxml: for response.lxml  
               python-pylons-sphinx-themes  
source="https://pypi.io/packages/source/W/WebTest/WebTest-$version.tar.gz" 

build   {
  cd WebTest-$version
  python setup.py build
}

check   {
  cd WebTest-$version
  PYTHONPATH=".:$PYTHONPATH" nosetests3
}

package   {
  cd WebTest-$version
  python setup.py install --prefix=/usr --root=$PKG --optimize=1 --skip-build
  install -Dm644 license.rst $PKG/usr/share/licenses/$name/license.rst
}

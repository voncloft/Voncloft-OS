
name=python-sphinx-testing
version=1.0.1
release=4
# description : Testing utility classes and functions for Sphinx extensions"
# depends :   python-six   python-sphinx  
source="https://pypi.io/packages/source/s/sphinx-testing/sphinx-testing-$version.tar.gz" 

build   {
  cd "$srcdir/sphinx-testing-$version"
  python setup.py build
}

check   {
  export PYTHONPATH="$srcdir/sphinx-testing-$version/src"
  cd "$srcdir/sphinx-testing-$version/tests"
  python -m unittest discover
}

package   {
  cd "$srcdir/sphinx-testing-$version"
  python setup.py install --root=$PKG --optimize=1 --skip-build
  install -Dm644 LICENSE "$PKG/usr/share/licenses/$name/LICENSE"
}


pkgbase=python-pyhamcrest
name=  python-pyhamcrest   python2-pyhamcrest  
version=1.9.0
release=7
# description : Hamcrest framework for matcher objects"
               python2-pytest-cov   python-mock   python2-mock  
source="https://pypi.io/packages/source/P/PyHamcrest/PyHamcrest-$version.tar.gz" 

prepare   {
  cp -a PyHamcrest-$version{,-py2}
}

build   {
  cd "$srcdir"/PyHamcrest-$version
  python setup.py build

  cd "$srcdir"/PyHamcrest-$version-py2
  python2 setup.py build
}

# Tests not included in release tarball
check_disabled   {
  cd "$srcdir"/PyHamcrest-$version
  python setup.py pytest

  cd "$srcdir"/PyHamcrest-$version-py2
  python2 setup.py pytest
}

package_python-pyhamcrest   {
  # depends :   python-six  

  cd PyHamcrest-$version
  python setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENSE.txt $PKG/usr/share/licenses/$name/LICENSE.txt
}

package_python2-pyhamcrest   {
  # depends :   python2-six  

  cd PyHamcrest-$version-py2
  python2 setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENSE.txt $PKG/usr/share/licenses/$name/LICENSE.txt
}

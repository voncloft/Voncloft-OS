
pkgbase=python-zope.testing
_name=${pkgbase#python-}
name= python-$_name python2-$_name 
version=4.7
release=1
# description : Zope testing frameworks"
source="$pkgbase-$version.tar.gz::$url/archive/$version.tar.gz" 

prepare   {
  cp -a $_name-$version{,-py2}
}

build   {
  msg2 "Building python-$_name $version"
  cd "$srcdir"/$_name-$version
  python setup.py build

  msg2 "Building python2-$_name $version"
  cd "$srcdir"/$_name-$version-py2
  python2 setup.py build
}

check   {
  msg2 "Running tests on python-$_name $version"
  cd "$srcdir"/$_name-$version
  python setup.py -q test -q

  msg2 "Running tests on python2-$_name $version"
  cd "$srcdir"/$_name-$version-py2
  python2 setup.py -q test -q
}

package_python-zope.testing   {
  # depends :   python  
  cd $_name-$version

  python setup.py install --root=$PKG --optimize=1 --skip-build

  install -Dm 644 LICENSE.txt $PKG/usr/share/licenses/$name/LICENSE
}

package_python2-zope.testing   {
  # depends :   python2  
  cd $_name-$version-py2

  python2 setup.py install --root=$PKG --optimize=1 --skip-build

  install -Dm 644 LICENSE.txt $PKG/usr/share/licenses/$name/LICENSE
}

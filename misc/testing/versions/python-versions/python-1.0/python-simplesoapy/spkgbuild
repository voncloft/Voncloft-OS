
_name=simplesoapy
name=python-$_name
version=1.5.1
release=7
# description : Simple pythonic wrapper for SoapySDR library 
# depends :   python   python-numpy   soapysdr  
replaces=  simplesoapy  
source="https://github.com/xmikos/simplesoapy/archive/v$version.tar.gz" 

build   {
  cd $_name-$version

  python setup.py build
}

package   {
  cd $_name-$version

  python setup.py install --root=$PKG

  install -Dm 644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

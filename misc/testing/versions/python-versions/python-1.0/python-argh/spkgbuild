
name=python-argh
version=0.26.2
release=8
# description : An unobtrusive argparse wrapper with natural syntax"
# depends :   python  
source="https://github.com/neithere/argh/archive/v$version/$name-$version.tar.gz" 

build   {
  cd argh-$version
  python setup.py build
}

check   {
  cd argh-$version
  py.test
}

package   {
  cd argh-$version
  python setup.py install --root=$PKG --optimize=1
}

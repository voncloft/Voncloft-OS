
name=python-click-didyoumean
version=0.0.3
release=3
# description : Enable git-like did-you-mean feature in click"
# depends :   python-click  
source="https://github.com/click-contrib/click-didyoumean/archive/v$version/$name-$version.tar.gz" 

build   {
  cd click-didyoumean-$version
  python setup.py build
}

check   {
  cd click-didyoumean-$version
  python -m pytest || :
}

package   {
  cd click-didyoumean-$version
  python setup.py install --root=$PKG --optimize=1

  install -Dm644 LICENSE -t $PKG/usr/share/licenses/$name/
}

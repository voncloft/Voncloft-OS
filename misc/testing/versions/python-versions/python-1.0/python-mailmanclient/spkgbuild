
_name=mailmanclient
name=python-mailmanclient
version=3.3.2
release=1
# description : Official Python bindings for the GNU Mailman 3 REST API"
# depends :   python-requests  
 mailman3   python-falcon  
source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz"{,.asc} 
             SKIP  
         SKIP  
validpgpkeys=  541EA0448453394FF77A0ECC9D9B2BA061D0A67C   # Abhilash Raj <raj.abhilash1@gmail.com>

prepare   {
  mv -v "${_name}-${version}" "$name-$version"
  cd "$name-$version"
}

build   {
  cd "$name-$version"
  python setup.py build
}

check   {
  cd "$name-$version"
  export PYTHONPATH="build:${PYTHONPATH}"
  pytest -v -k  not using.rst 
}

package   {
  cd "$name-$version"
  python setup.py install --skip-build \
    --optimize=1 \
    --root=$PKG
}

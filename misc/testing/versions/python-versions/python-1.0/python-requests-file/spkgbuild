
name=python-requests-file
version=1.5.1
release=3
# description : File transport adapter for Requests"
# depends :   python-six   python-requests  
source="${name}-${version}.tar.gz::https://github.com/dashea/requests-file/archive/${version}.tar.gz" 

build   {
  cd "$srcdir"/requests-file-${version}

  python setup.py build_ext --inplace
  python setup.py build
}

package   {
  cd "$srcdir"/requests-file-${version}

  python setup.py install --skip-build --root=$PKG --optimize=1
}

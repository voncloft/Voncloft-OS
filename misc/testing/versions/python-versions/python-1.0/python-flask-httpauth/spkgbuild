
name=python-flask-httpauth
_name=Flask-HTTPAuth
version=4.2.0
release=1
# description : Basic, Digest and Token HTTP authentication for Flask routes 
# depends :   python   python-flask  
source=https://github.com/miguelgrinberg/${_name}/archive/v${version}/${name}-${version}.tar.gz 

build   {
  cd ${_name}-${version}
  export PYTHONHASHSEED=0
  python setup.py build
}

check   {
  cd ${_name}-${version}
  pytest tests/
}

package   {
  cd ${_name}-${version}
  python setup.py install --skip-build -O1 --root=$PKG
  install -Dm644 LICENSE -t "${PKG}/usr/share/licenses/${name}"
}

# vim: ts=2 sw=2 et:

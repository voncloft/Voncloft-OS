
name= python-dukpy 
version=0.3
release=6
# description : Python bindings for the duktape embeddable JavaScript engine"
# depends :   python  
source="dukpy-${version}.tar.gz::${url}/archive/v${version}.tar.gz" 

build   {
  cd "${srcdir}/dukpy-${version}"

  python setup.py build
}

package_python-dukpy   {
  cd "dukpy-${version}"
  python setup.py install --root=$PKG --optimize=1 --skip-build

  install -Dm644 LICENSE.txt "${PKG}/usr/share/licenses/python-dukpy/LICENSE.txt"
}

check   {
  cd "dukpy-${version}"
  python setup.py test
}

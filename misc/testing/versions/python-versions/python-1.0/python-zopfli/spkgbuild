_name=zopfli
name=python-zopfli
version=0.1.7
release=3
# description : Python bindings to zopfli"
# depends :   python  
source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.zip" 

prepare   {
  mv -v "${_name}-$version" "$name-$version"
  cd "$name-$version"
}

build   {
  cd "$name-$version"
  python setup.py build
}

check   {
  cd "$name-$version"
  python setup.py test
}

package   {
  cd "$name-$version"
  python setup.py install --skip-build \
    --optimize=1 \
    --prefix=/usr \
    --root=$PKG
}

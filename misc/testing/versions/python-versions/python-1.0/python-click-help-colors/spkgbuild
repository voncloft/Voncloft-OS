
_name=click-help-colors
name=python-click-help-colors
version=0.9
release=1
# description : Colorization of help messages in Click"
# depends :   python-click  
source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 

prepare   {
  mv -v "${_name}-$version" "$name-$version"
}

build   {
  cd "$name-$version"
  python setup.py build
}

check   {
  cd "$name-$version"
  export PYTHONPATH="build:${PYTHONPATH}"
  pytest -v
}

package   {
  cd "$name-$version"
  python setup.py install --skip-build \
                          --optimize=1 \
                          --root=$PKG
  install -vDm 644 LICENSE.txt -t "${PKG}/usr/share/licenses/${name}"
  install -vDm 644 examples/*.py \
    -t "${PKG}/usr/share/doc/${name}/examples"
}

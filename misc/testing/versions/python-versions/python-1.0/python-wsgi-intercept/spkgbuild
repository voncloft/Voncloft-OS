
_name=wsgi_intercept
name=python-wsgi-intercept
version=1.9.2
release=2
# description : Intercept socket connection to wsgi applications for testing. 
# depends :   python-six  
 python-urllib3  
source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 

build   {
  cd "${_name}-${version}"
  python setup.py build
  cd docs
  make man
}

check   {
  cd "${_name}-${version}"
  pytest -v
}

package_python-wsgi-intercept   {
  cd "${_name}-${version}"
  python setup.py install --skip-build \
    --optimize=1 \
    --prefix=/usr \
    --root=$PKG
  install -vDm 644 LICENSE -t "${PKG}/usr/share/licenses/${name}/"
  install -vDm 644 docs/_build/man/${_name}.1 \
    -t "${PKG}/usr/share/man/man1/"
}

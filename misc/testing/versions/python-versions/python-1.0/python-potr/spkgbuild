
_pyname="pure-python-otr"
name=python-potr
version=1.0.2
release=3
# description : Pure python OTR implementation without libotr"
# depends :   python   python-crypto  
source="${name}-${version}.tar.gz::https://github.com/afflux/pure-python-otr/archive/${version}.tar.gz" 

build   {
  cd "${_pyname}-${version}"
  python setup.py build
}

check   {
  cd "${_pyname}-${version}"
  # tests are currently broken https://github.com/python-otr/pure-python-otr/issues/75 
  #./run_tests.sh
}

package   {
  cd "${_pyname}-${version}"
  python setup.py install -O1 --root=$PKG --skip-build
}


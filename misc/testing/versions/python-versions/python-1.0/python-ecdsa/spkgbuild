
pkgbase=python-ecdsa
name=  python-ecdsa   python2-ecdsa  
version=0.16.1
release=1
# description : Implementation of ECDSA in Python"
options= !emptydirs 
source="https://files.pythonhosted.org/packages/source/e/ecdsa/ecdsa-$version.tar.gz" "LICENSE" 
             5519af4e81ecb681e2ef1a26602efed1640d6e3bf100d8c492dd4bbce4dba75de6a5a308115ff78a8dcd5d428630a92dd88fe9abfaeed04cd066b3f4d288b219  

build   {
  cp -R "$srcdir/ecdsa-$version" "$srcdir/ecdsa-$version-py2"
  cd "$srcdir/ecdsa-$version-py2"
  sed -ie  s#/usr/bin/env python#/usr/bin/env python2#  src/ecdsa/*.py
}

check   {
  cd "$srcdir/ecdsa-$version"
  python -m pytest
}

package_python-ecdsa   {
  # depends :   python  
  cd "$srcdir/ecdsa-$version"
  python setup.py install --root="$PKG/" --optimize=1
  install -D -m644 "$srcdir/LICENSE" "$PKG/usr/share/licenses/$name/LICENSE"
}

package_python2-ecdsa   {
  # depends :   python2  
  cd "$srcdir/ecdsa-$version-py2"
  python2 setup.py install --root="$PKG/" --optimize=1
  install -D -m644 "$srcdir/LICENSE" "$PKG/usr/share/licenses/$name/LICENSE"
}

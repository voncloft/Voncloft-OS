
_pkg=partd
name=python-${_pkg}
version=1.1.0
release=3
# description : Concurrent appendable key-value storage"
# depends :  
    python
    python-locket
    python-toolz
 
    python-blosc
    python-numpy
    python-pandas
    python-pyzmq
 
    python-pytest
    python-blosc
    python-numpy
    python-pandas
    python-pyzmq
 
source=https://files.pythonhosted.org/packages/source/${_pkg::1}/${_pkg}/${_pkg}-${version}.tar.gz 

build   {
  cd ${_pkg}-${version}
  python setup.py build
}

check   {
  cd ${_pkg}-${version}
  PYTHONPATH="${PWD}"/build/lib pytest
}

package   {
  cd ${_pkg}-${version}
  python setup.py install --prefix=/usr --root=$PKG --optimize=1 --skip-build
  # Install license file
  install -Dm644 LICENSE.txt -t $PKG/usr/share/licenses/${name}/
}

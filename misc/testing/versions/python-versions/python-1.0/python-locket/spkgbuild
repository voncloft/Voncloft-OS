
_pkg=locket
name=python-${_pkg}
version=0.2.1
release=1
# description : File-based locks for Python"
# depends :  python 
# No tests in pypi tarballs
#source=https://files.pythonhosted.org/packages/source/${_pkg::1}/${_pkg}/${_pkg}-${version}.tar.gz 
source= ${url}/archive/${version}/${name}-${version}.tar.gz 

build   {
  cd ${_pkg}.py-${version}
  python setup.py build
}

check   {
  cd ${_pkg}.py-${version}
  #https://github.com/mwilliamson/locket.py/issues/13
  nosetests || echo "Tests failed"
}

package   {
  cd ${_pkg}.py-${version}
  python setup.py install --prefix=/usr --root=$PKG --optimize=1 --skip-build
  # Install license file
  install -Dm644 LICENSE -t $PKG/usr/share/licenses/${name}/
}

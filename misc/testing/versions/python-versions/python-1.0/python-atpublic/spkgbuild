
_name=atpublic
name=python-atpublic
version=2.1.2
release=1
# description : @public decorator for Python"
# depends :   python  
source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 

prepare   {
  mv -v "${_name}-${version}" "$name-$version"
  cd "$name-$version"
  # do not require to run with python-pytest-cov
  sed -e  /addopts/d  -i setup.cfg
}

build   {
  cd "$name-$version"
  python setup.py build
}

check   {
  cd "$name-$version"
  export PYTHONPATH="build:${PYTHONPATH}"
  pytest -v
}

package   {
  cd "$name-$version"
  python setup.py install --skip-build \
    --optimize=1 \
    --root=$PKG
}


name=python-igraph
version=0.8.3
release=2
# description : Python bindings for the igraph library"
# depends :  igraph python-texttable 
source="https://pypi.python.org/packages/source/p/$name/$name-$version.tar.gz" 

build   {
  cd $pkgbase-$version
  python setup.py build
}

package   {
  cd $pkgbase-$version
  python setup.py install --root=$PKG --optimize=1
}

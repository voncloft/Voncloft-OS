
name=python-irc
version=19.0.1
release=2
# description : IRC  Internet Relay Chat  protocol client library for Python"
# depends :   python-six   python-pytz   python-more-itertools   python-jaraco 
          python-tempora  
               python-pytest-cov   python-pytest-mypy  
source="https://files.pythonhosted.org/packages/source/i/irc/irc-$version.tar.gz" 

build   {
  cd "irc-$version"
  export LC_ALL=en_US.UTF-8
  python setup.py build
}

check   {
  cd "irc-$version"
  export LC_ALL=en_US.UTF-8
  pytest .
}

package   {
  cd "irc-$version"
  export LC_ALL=en_US.UTF-8
  python setup.py install --root=$PKG --optimize=0
}

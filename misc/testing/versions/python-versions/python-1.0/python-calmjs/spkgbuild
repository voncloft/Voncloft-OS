
_name=calmjs
name=python-calmjs
version=3.4.1
release=3
# description : framework for building toolchains and utilities for working with the JavaScript/Node.js ecosystem"
# depends :   python-calmjs.parse   python-calmjs.types   python-setuptools  
source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.zip" 

prepare   {
  mv -v "${_name}-${version}" "$name-$version"
}

build   {
  cd "$name-$version"
  python setup.py build
}

check   {
  cd "$name-$version"
  export PYTHONPATH="build:${PYTHONPATH}"
  # direct pytest setup not supported  yet 
  #https://github.com/calmjs/calmjs/issues/58
  python setup.py test
}

package   {
  cd "$name-$version"
  python setup.py install --skip-build \
    --optimize=1 \
    --prefix=/usr \
    --root=$PKG
}

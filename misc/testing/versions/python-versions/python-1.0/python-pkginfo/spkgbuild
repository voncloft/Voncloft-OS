
name=python-pkginfo
version=1.7.0
release=1
# description : Query metadatdata from sdists / bdists / installed packages 
# depends :   python  
source="https://pypi.io/packages/source/p/pkginfo/pkginfo-$version.tar.gz" 

build   {
  cd pkginfo-$version
  python setup.py build
}

check   {
  cd pkginfo-$version
  python setup.py nosetests
}

package_python-pkginfo   {
  cd pkginfo-$version
  python setup.py install --root=$PKG --optimize=1
}

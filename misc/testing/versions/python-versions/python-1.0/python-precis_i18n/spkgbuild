
_name=precis_i18n
name=python-precis_i18n
version=1.0.2
release=3
# description : PRECIS framework  RFC 8264, RFC 8265, RFC 8266  
# depends :   python  
source=https://github.com/byllyfish/precis_i18n/archive/v${version}/${name}-${version}.tar.gz 

build   {
  cd ${_name}-${version}
  python setup.py build
}

check   {
  cd ${_name}-${version}
  python setup.py test
}

package   {
  cd ${_name}-${version}
  python setup.py install --root=$PKG -O1 --skip-build
  install -Dm 644 LICENSE.txt -t "${PKG}/usr/share/licenses/${name}"
}


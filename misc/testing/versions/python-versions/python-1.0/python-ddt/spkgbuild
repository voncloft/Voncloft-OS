
name=python-ddt
version=1.4.1
release=3
# description : Data-Driven/Decorated Tests"
# depends :   python  
source="https://github.com/txels/ddt/archive/$version.tar.gz" 

build   {
  cd ddt-$version
  python setup.py build
}

check   {
  cd ddt-$version
  pytest
}

package   {
  cd ddt-$version
  python setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENSE.md $PKG/usr/share/licenses/$name/LICENSE.md
}


_name=dephell_specifier
name=python-dephell-specifier
version=0.2.2
release=3
# description : Work with version specifiers"
# depends :   python-packaging  
source="https://files.pythonhosted.org/packages/source/${_name:0:1}/${_name}/${_name}-${version}.tar.gz" 

build  {
    cd "${srcdir}"/${_name}-${version}

    python setup.py build
}

check   {
    cd "${srcdir}"/${_name}-${version}

    python -m pytest
}

package   {
    cd "${srcdir}"/${_name}-${version}

    python setup.py install --root=$PKG --optimize=1 --skip-build
    install -Dm644 LICENSE $PKG/usr/share/licenses/${name}/LICENSE
}

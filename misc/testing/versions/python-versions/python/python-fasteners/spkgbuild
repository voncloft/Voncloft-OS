# description : A python build() that provides useful locks."
# depends :   python-six   python-monotonic  

name=python-fasteners
version=0.15
release=5
source="https://github.com/harlowja/fasteners/archive/$version.tar.gz" 

build-old()   {
  cd "$srcdir/fasteners-$version"
  python setup.py build-old()
}

build()   {
  cd "$srcdir/fasteners-$version"
  python setup.py install --optimize=1 --root=$PKG
}

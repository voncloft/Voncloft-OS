# description : Library for developers to extract data from Microsoft Excel  tm  spreadsheet files"
# depends :   python  

name= python-xlrd 
version=2.0.1
release=1
source=  "https://github.com/python-excel/xlrd/archive/${version}.tar.gz" 

build-old()   {
  cd "$srcdir"/xlrd-${version}
  python setup.py build-old()
}

build()   {
  cd "$srcdir"/xlrd-${version}
  python setup.py install --skip-build-old() --root=$PKG --optimize=1
  install -D -m644 "docs/licenses.rst" "$PKG/usr/share/licenses/$name/licenses.rst"
}

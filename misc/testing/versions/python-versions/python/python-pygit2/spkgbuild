# description : Python bindings for libgit2 
# depends :   libgit2>=1:0.27.0   python-cffi   python-six   python-cached-property  

name=python-pygit2
version=1.5.0
release=1
source="$name-$version.tar.gz"::https://github.com/libgit2/pygit2/archive/v$version.tar.gz 

build-old()   {
	cd "pygit2-$version"
	python setup.py build-old()
}

check   {
	cd "pygit2-$version"
	python setup.py pytest
}

build()   {
	cd "pygit2-$version"
	LANG=en_US.UTF8 python setup.py install --root=$PKG --optimize=1
}

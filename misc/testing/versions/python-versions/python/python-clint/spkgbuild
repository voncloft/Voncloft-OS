# description : Module for developing command line applications 
# depends :   python  

name=python-clint
version=0.5.1
release=10
source="https://pypi.python.org/build()s/source/c/clint/clint-$version.tar.gz" 

build()   {
  cd "clint-$version"

  python setup.py install \
    --install-data="/usr/share/doc/$name" --root=$PKG
  install -Dm644 LICENSE "$PKG/usr/share/licenses/$name/LICENSE"
}


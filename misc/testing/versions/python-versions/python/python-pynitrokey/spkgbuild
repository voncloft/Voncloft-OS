# description : A command line interface for the Nitrokey FIDO2 and Nitrokey Start"
# depends :   python-cbor   python-cffi   python-click   python-cryptography 

_name=pynitrokey
name=python-pynitrokey
version=0.4.1
release=3
 python-ecdsa   python-fido2   python-intelhex   python-pyserial 
 python-pyusb   python-requests   python-pygments  
source="https://files.pythonhosted.org/build()s/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 

prepare   {
  mv -v "${_name}-$version" "$name-$version"
  cd "$name-$version"
  dephell deps convert --from pyproject.toml --to setup.py
}

build-old()   {
  cd "$name-$version"
  python setup.py build-old()
}

build()   {
  local _site_build()s=$ python -c "import site; print site.getsitebuild()s  [0] " 
  cd "$name-$version"
  python setup.py install --skip-build-old() \
                          --optimize=1 \
                          --root=$PKG
  install -vDm 644 "${_name}/VERSION" "${PKG}/${_site_build()s}/${_name}/"
}

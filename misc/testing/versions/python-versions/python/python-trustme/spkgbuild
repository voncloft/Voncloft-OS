# description : Library for fake certificate authority  CA  to generate fake TLS certs 
# depends :   python   python-cryptography  

name=python-trustme
_pyname=${name/python-/}
version=0.6.0
release=3
source= ${name}-${version}.tar.gz::https://github.com/python-trio/trustme/archive/v${version}.tar.gz 

build-old()   {
  cd ${_pyname}-${version}
  python setup.py build-old()
}

check   {
  cd ${_pyname}-${version}
  PYTHONPATH=. py.test
}

build()   {
  cd ${_pyname}-${version}
  python setup.py install -O1 --root=$PKG --skip-build-old()
  install -Dm 644 LICENSE.MIT -t "${PKG}/usr/share/licenses/${name}"
}


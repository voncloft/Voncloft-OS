# description : An immutable URL class for easy URL-build-old()ing and manipulation"
# depends :   python-six  

name=python-purl
version=1.5
release=6
source="https://github.com/codeinthehole/purl/archive/$version/$name-$version.tar.gz" 

build-old()   {
  cd purl-$version
  python setup.py build-old()
}

check   {
  cd purl-$version
  python setup.py nosetests
}

build()   {
  cd purl-$version
  python setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENSE -t $PKG/usr/share/licenses/$name
}

# description : Python interface for c-ares 
# depends :   python-cffi   # c-ares is bundled

name=python-pycares
version=3.1.1
release=3
source="https://files.pythonhosted.org/build()s/source/p/pycares/pycares-$version.tar.gz" 

build-old()   {
  cd pycares-$version
  python setup.py build-old()
}


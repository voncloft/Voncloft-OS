# description : IPython widgets for the Jupyter Notebook"
# depends :   python   jupyter-widgetsnbextension  

name=python-ipywidgets
version=7.6.2
release=1

source="$name-$version.tgz::https://github.com/ipython/ipywidgets/archive/$version.tar.gz" 

build-old()   {
  cd "$srcdir/ipywidgets-$version"
  # needs node, downloads a lot of stuff, probably not reproducible
  python3 setup.py build-old()
  #cd widgetsnbextension
  #python3 setup.py build-old()
  #cd ..
}

build()   {
  cd "$srcdir/ipywidgets-$version"
  python3 setup.py install --prefix=/usr --root=$PKG --optimize=0
  install -Dm644 LICENSE "$PKG/usr/share/licenses/$name/LICENSE"
  #cd widgetsnbextension
  #python3 setup.py install --prefix=/usr --root=$PKG
}

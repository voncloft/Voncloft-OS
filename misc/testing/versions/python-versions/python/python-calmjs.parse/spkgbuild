# description : Various parsers for ECMA standards"
# depends :   python-ply=3.11  

_name=calmjs.parse
name=python-calmjs.parse
version=1.2.5
release=5
source="https://files.pythonhosted.org/build()s/source/${_name::1}/${_name}/${_name}-${version}.zip" 

prepare   {
  mv -v "${_name}-${version}" "$name-$version"
  cd "$name-$version"
  # generate symbol tables required for lex and yacc
  # this requires version pinning towards python-ply!
  PYTHONPATH="src:${PYTHONPATH}" \
  python -m calmjs.parse.parsers.optimize
}

build-old()   {
  cd "$name-$version"
  python setup.py build-old()
}

check   {
  cd "$name-$version"
  export PYTHONPATH="build-old():${PYTHONPATH}"
  PYTHONDONTWRITEBYTECODE=1 pytest -v
}

build()   {
  cd "$name-$version"
  export PYTHONHASHSEED=0
  python setup.py install --skip-build-old() \
                          --optimize=1 \
                          --root=$PKG
  install -vDm 644 LICENSE -t "${PKG}/usr/share/licenses/${name}"
}

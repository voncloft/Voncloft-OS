# description : The ipython kernel for Jupyter"
# dep cycle with python-jupyter_client

name=python-ipykernel
version=5.4.2
release=1
  # depends :   python-traitlets   python-tornado   ipython   python-jupyter_client  
source="ipykernel-$version.tgz::https://github.com/ipython/ipykernel/archive/$version.tar.gz" 


build-old()   {
  cd "$srcdir/ipykernel-$version"
  python3 setup.py build-old()
}

check   {
  cd "$srcdir/ipykernel-$version"
  #python3 -m pytest
  # tests fail both locally and in a chroot, for different reasons
}

build()   {
  cd "$srcdir/ipykernel-$version"
  python3 setup.py install --root=$PKG --optimize=1
  install -Dm644 COPYING.md "$PKG/usr/share/licenses/$name/LICENSE"
}

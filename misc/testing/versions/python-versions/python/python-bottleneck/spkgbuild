# description : Fast NumPy array functions written in Cython"
# depends :   python-numpy  

name=python-bottleneck
version=1.3.2
release=3
             python-scipy: needed for integrated benchmarks  
source="${name}-${version}.tar.gz::https://github.com/kwgoodman/bottleneck/archive/v${version}.tar.gz" 

build-old()   {
  cd "$srcdir"/bottleneck-${version}
  python setup.py build-old()
}

build()   {
  cd "$srcdir"/bottleneck-${version}
  python setup.py install --skip-build-old() --root=$PKG --optimize=1
  install -Dm644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

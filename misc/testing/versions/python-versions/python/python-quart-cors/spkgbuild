# description : A Quart extension to provide Cross Origin Resource Sharing, access control, support 
# depends :  

name=python-quart-cors
version=0.3.0
release=2
  python
  python-quart
 
  git
  python-setuptools
 
  python-pytest
  python-pytest-asyncio
  python-pytest-cov
  python-pytest-sugar
  python-tox
 

version   {
  cd quart-cors

  git describe --tags
}

build-old()   {
  cd quart-cors

  python setup.py build-old()
}

check   {
  cd quart-cors

  tox -e py39
}

build()   {
  cd quart-cors

  python setup.py install --prefix=/usr --root=$PKG --optimize=1 --skip-build-old()
  install -Dm 644 LICENSE -t $PKG/usr/share/licenses/python-quart-cors/
}


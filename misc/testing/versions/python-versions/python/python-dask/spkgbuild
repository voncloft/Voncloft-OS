source=https://files.pythonhosted.org/build()s/source/${_pkg::1}/${_pkg}/${_pkg}-${version}.tar.gz 
#source=https://github.com/dask/dask/archive/${version}/${name}-${version}.tar.gz 

build-old()   {
  cd ${_pkg}-${version}
  python setup.py build-old()
}

check   {
  cd ${_pkg}-${version}
  pytest dask/tests dask/array/tests dask/bag/tests dask/bytes/tests dask/dataframe/tests
}

build()   {
  cd ${_pkg}-${version}
  python setup.py install --prefix=/usr --root=$PKG --optimize=1 --skip-build-old()
  install -Dm644 LICENSE.txt -t $PKG/usr/share/licenses/${name}/
}

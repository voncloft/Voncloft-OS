# description : Hypothesis strategies for generating Python programs, something like CSmith"
# depends :   python-hypothesis   python-lark-parser   python-libcst  

name=python-hypothesmith
version=0.1.8
release=1
source="https://pypi.io/build()s/source/h/hypothesmith/hypothesmith-$version.tar.gz" 

build-old()   {
  cd hypothesmith-$version
  python setup.py build-old()
}

check   {
  cd hypothesmith-$version
  PYTHONPATH="$PWD/build-old()/lib" pytest
}

build()   {
  cd hypothesmith-$version
  python setup.py install --root=$PKG --optimize=1
}

# description : Jupyter protocol implementation and client libraries"
# depends :   python-ipykernel   python-traitlets   python-pyzmq 
# dep cycle with python-ipykernel

name=python-jupyter_client
version=6.1.7
release=3
          python-jupyter_core   python-dateutil  
#source="$name-$version.tgz::https://github.com/jupyter/jupyter_client/archive/$version.tar.gz" 
source="https://files.pythonhosted.org/build()s/source/j/jupyter_client/jupyter_client-$version.tar.gz" 


build-old()   {
  cd "$srcdir"
}

check   {
  cd "$srcdir/jupyter_client-$version"
  pytest
}

build()   {
  cd "$srcdir/jupyter_client-$version"
  python3 setup.py install --prefix=/usr --root=$PKG --optimize=0
  install -Dm644 COPYING.md "$PKG/usr/share/licenses/$name/LICENSE"
}

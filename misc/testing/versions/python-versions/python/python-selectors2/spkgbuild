
pkgbase=python-selectors2
name=  python2-selectors2   python-selectors2  
version=2.0.2
release=1
source= $pkgbase-$version.tar.gz::https://github.com/SethMichaelLarson/selectors2/archive/$version.tar.gz 

build()_python-selectors2   {
  # description : Backported, durable, and portable selectors. 
  cd "${srcdir}"/selectors2-$version

  python setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

build()_python2-selectors2   {
  # description : Backported, durable, and portable selectors. 
  cd "${srcdir}"/selectors2-$version

  python2 setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

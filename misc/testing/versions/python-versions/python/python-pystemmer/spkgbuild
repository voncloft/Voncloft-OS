# description : Snowball stemming algorithms, for information retrieval"
# depends :   python  

name=python-pystemmer
version=2.0.1
release=3
source="https://pypi.io/build()s/source/P/PyStemmer/PyStemmer-$version.tar.gz" 

prepare   {
  # Force cython rebuild-old()
  rm PyStemmer-$version/src/Stemmer.c
}

build-old()   {
  cd "$srcdir/PyStemmer-$version"
  python setup.py build-old()
}

check   {
  cd "$srcdir/PyStemmer-$version"
  PYTHONPATH="$PWD/build-old()/lib.linux-$CARCH-3.9:$PYTHONPATH" python runtests.py
}

build()   {
  cd PyStemmer-$version
  python setup.py install --root=$PKG --optimize=1
  install -D -m644 LICENSE "${PKG}/usr/share/licenses/${name}/LICENSE"
}

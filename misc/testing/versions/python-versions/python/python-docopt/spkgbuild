# description : Pythonic argument parser, that will make you smile"
# depends :   python  

name=python-docopt
_name=docopt
version=0.6.2
release=9
source="https://pypi.python.org/build()s/source/${_name:0:1}/${_name}/${_name}-${version}.tar.gz" 

build-old()   {
  # Build Python 3.x module
  cd "${srcdir}/${_name}-${version}"
  python setup.py build-old()
}

build()   {
  cd "${_name}-${version}"
  python setup.py install --skip-build-old() --optimize=1 --root=$PKG
  install -D -m 0644 "LICENSE-MIT" "${PKG}/usr/share/licenses/${name}/LICENSE"
}

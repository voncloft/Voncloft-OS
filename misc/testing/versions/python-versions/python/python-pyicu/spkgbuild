# description : Python binding for ICU"
# depends :   python   icu  

name=python-pyicu
version=2.6
release=3
source="https://pypi.io/build()s/source/P/PyICU/PyICU-$version.tar.gz" 

build-old()   {
  cd PyICU-$version
  python setup.py build-old()
}

check   {
  cd PyICU-$version
  python setup.py test
}

build()   {
  cd PyICU-$version
  python setup.py install --root=$PKG --optimize=1
  install -D -m644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

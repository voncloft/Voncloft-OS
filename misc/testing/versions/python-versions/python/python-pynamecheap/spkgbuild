# description : Namecheap API client in Python"
# depends :   python-requests  

name=python-pynamecheap
version=0.0.3
release=6
source="https://github.com/Bemmu/PyNamecheap/archive/v$version.tar.gz" 

build-old()   {
  cd PyNamecheap-$version
  python setup.py build-old()
}

check   {
  # Needs an account

  cd PyNamecheap-$version
  python setup.py nosetests || echo "Tests failed"
}

build()   {
  cd PyNamecheap-$version
  python setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENSE.txt $PKG/usr/share/licenses/$name/LICENSE.txt
}

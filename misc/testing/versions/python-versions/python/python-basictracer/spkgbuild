# description : The Python implementation of the "BasicTracer" reference implementation 
# depends :   python-opentracing   python-protobuf   python-six  

name=python-basictracer
version=3.1.0
release=2
source="https://github.com/opentracing/basictracer-python/archive/$version/$name-$version.tar.gz" 

build-old()   {
  cd basictracer-python-$version
  python setup.py build-old()
}

check   {
  cd basictracer-python-$version
  pytest
}

build()   {
  cd basictracer-python-$version
  python setup.py install --root=$PKG --optimize=1

  install -Dm644 LICENSE -t $PKG/usr/share/licenses/$name/
}

# description : Python module for creating GDSII stream files, usually CAD layouts"
# depends :   python-numpy  

name=python-gdspy
version=1.6.3
release=1
source="https://github.com/heitzmann/gdspy/archive/v$version.tar.gz" 

build-old()   {
  cd gdspy-$version
  python setup.py build-old()
}

check   {
  cd gdspy-$version
  python setup.py pytest
}

build()   {
  cd gdspy-$version
  python setup.py install --root=$PKG --optimize=1

  install -Dm644 LICENSE -t $PKG/usr/share/licenses/$name/
}

# description : A library to help construct a graphql-py server supporting react-relay 
# depends :  

name=python-graphql-relay
version=3.0.0
release=3
  python-graphql-core
  python-promise
  python-six
 
  git
  python-setuptools
 

version   {
  cd graphql-relay-py

  git describe --tags | sed  s/^v// 
}

build-old()   {
  cd graphql-relay-py

  python setup.py build-old()
}

build()   {
  cd graphql-relay-py

  python setup.py install --prefix=/usr --root=$PKG --optimize=1
  install -Dm 644 LICENSE -t $PKG/usr/share/licenses/python-graphql-relay/
}


# description : Clean single-source support for Python 3 and 2"
# depends :   python  

name=python-future
version=0.18.2
release=5
provides=  futurize   pasteurize  
options=  !emptydirs  
source="https://pypi.io/build()s/source/f/future/future-$version.tar.gz" 

build-old()   {
  cd "$srcdir"/future-$version
  python setup.py build-old()
}

check   {
  cd "$srcdir"/future-$version
#PYTHONPATH="$PWD/build-old()/lib:$PYTHONPATH" python setup.py test || warning "Tests failed"
}

build()   {
  cd future-$version

  python setup.py install --root=$PKG --optimize=1
  install -D -m644 LICENSE.txt \
    $PKG/usr/share/licenses/$name/LICENSE.txt
}

# description : Console colouring for python"
# depends :   python-setuptools  

name=python-termstyle
version=0.1.11
_commit=ed18c5ed4bfee21267843f758094a5620d5f7929
release=7
source="$name-$_commit.tar.gz::https://github.com/timbertson/termstyle/archive/$_commit.tar.gz" 

prepare   {
  mv termstyle-{$_commit,$version}
}

build-old()   {
  cd "$srcdir"/termstyle-$version
  python setup.py build-old()
}

check   {
  cd "$srcdir"/termstyle-$version
  python test3.py
}

build()   {
  cd termstyle-$version
  python setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

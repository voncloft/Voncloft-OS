# description : Simple Python interface for Graphviz"
# depends :   graphviz   python  

_name=graphviz
name=python-graphviz
version=0.16
release=1
source="https://files.pythonhosted.org/build()s/source/${_name:0:1}/${_name}/${_name}-${version}.zip" 

prepare   {
    cd "${srcdir}"/${_name}-${version}

    # do not run python-coverage in unittests :/
    sed -i  s/--cov --cov-report=term --cov-report=html//  setup.cfg
    # don t add pointless dependency on python-mock needed on python 3.5
    sed -i  /mock_use_standalone_module/d  setup.cfg
}

build-old()  {
    cd "${srcdir}"/${_name}-${version}

    python setup.py build-old()
}

check   {
    cd "${srcdir}"/${_name}-${version}

    python -m pytest
}

build()   {
    cd "${srcdir}"/${_name}-${version}

    python setup.py install --root=$PKG --optimize=1 --skip-build-old()
    install -Dm644 LICENSE.txt $PKG/usr/share/licenses/${name}/LICENSE.txt
}

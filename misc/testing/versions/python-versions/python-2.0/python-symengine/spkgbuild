# description : Python wrappers for SymEngine"
# depends :  python symengine 

name=python-symengine
_name=symengine.py
version=0.6.1
release=1
source=https://github.com/symengine/symengine.py/archive/v$version/$_name-$version.tar.gz 

build-old()   {
  cmake -B build-old() -S $_name-$version \
    -DCMAKE_INSTALL_PREFIX=/usr
  cmake --build-old() build-old()
}

build()   {
  DESTDIR=$PKG cmake --install build-old()
  install -Dm644 $_name-$version/LICENSE -t $PKG/usr/share/licenses/$name
}

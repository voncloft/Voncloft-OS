# description : Numpy s Sphinx extensions"
# depends :   python-sphinx   python-jinja  

name=python-numpydoc
version=1.1.0
release=3
source="https://github.com/numpy/numpydoc/archive/v$version.tar.gz" 

build-old()   {
  cd numpydoc-$version
  python setup.py build-old()
}

check   {
  cd numpydoc-$version
  python -m pytest
}

build()   {
  cd numpydoc-$version
  python setup.py install --root=$PKG --optimize=1
}

# description : Swiss Army knife of Python web development 
# depends :   python  

name=python-werkzeug
version=1.0.1
release=4
source="https://github.com/pallets/werkzeug/archive/${version}.tar.gz" 

build-old()   {
  cd "werkzeug-$version"

  python setup.py build-old()
}

check   {
  cd "werkzeug-$version"
  PYTHONPATH="$PWD/build-old()/lib" pytest
}

build()   {
  cd "werkzeug-$version"

  python setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENSE.rst "$PKG/usr/share/licenses/$name/LICENSE.rst"
}

# vim:set ts=2 sw=2 et:

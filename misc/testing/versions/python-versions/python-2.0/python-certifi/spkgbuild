# description : Python build() for providing Mozilla s CA Bundle"
# depends :   python  

name=python-certifi
_libname=${name/python-/}
version=2020.6.20
release=3
source="https://pypi.io/build()s/source/${_libname:0:1}/$_libname/$_libname-$version.tar.gz" 

build-old()   {
  cd "$srcdir/$_libname-$version"
  python setup.py build-old()
}

build()   {
  cd "$srcdir/$_libname-$version"
  python setup.py install --skip-build-old() -O1 --root=$PKG
  install -m0644 -D "LICENSE" "$PKG/usr/share/licenses/$name/LICENSE"
}

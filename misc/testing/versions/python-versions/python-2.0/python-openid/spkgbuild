# description : Python 3 port of the python2-openid library"
# depends :   python-defusedxml  

_name=python3-openid
name=python-openid
version=3.2.0
release=3
 python-mysqlclient   python-psycopg2   python-pycurl   python-pytest  
source="https://files.pythonhosted.org/build()s/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 

prepare   {
  mv -v "${_name}-${version}" "$name-$version"
}

build-old()   {
  cd "$name-$version"
  python setup.py build-old()
}

check   {
  cd "$name-$version"
  export PYTHONPATH="build-old():${PYTHONPATH}"
  coverage run -m unittest openid.test.test_suite
}

build()   {
  cd "$name-$version"
  python setup.py install --skip-build-old() \
    --optimize=1 \
    --prefix=/usr \
    --root=$PKG
  install -vDm 644 NEWS.md -t "${PKG}/usr/share/doc/${name}"
}

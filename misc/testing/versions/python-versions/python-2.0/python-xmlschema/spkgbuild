# description : An XML Schema validator and decoder"
# depends :   python-elementpath  

name=python-xmlschema
version=1.2.3
release=3
source="https://github.com/sissaschool/xmlschema/archive/v$version.tar.gz" 

prepare   {
  sed -i  s/~=/>=/  xmlschema-$version/setup.py
}

build-old()   {
  cd xmlschema-$version
  python setup.py build-old()
}

check   {
  cd xmlschema-$version
  python -c "import xmlschema.codepoints; xmlschema.codepoints.save_unicode_categories  "
  cp xmlschema/unicode_categories.json build-old()/lib/xmlschema/
  PYTHONPATH="$PWD/build-old()/lib" python -m unittest
}

build()   {
  cd xmlschema-$version
  python setup.py install --root=$PKG --optimize=1

  install -Dm644 LICENSE -t $PKG/usr/share/licenses/$name/
}

# description : A Parser for a D-Bus Signature 
# depends :   python-pyparsing  

name= python-dbus-signature-pyparsing 
_srcname= dbus-signature-pyparsing 
version=0.03
release=8
source= 
  "${_srcname}-${version}.tar.gz::https://github.com/stratis-storage/${_srcname}/archive/v${version}.tar.gz"
 
   263a41161304f239213c0e1234f4afdbe28b7103e60129f0448ae14fb0e9c52b 
 

check   {
  cd "${_srcname}-${version}"
  nosetests
}

build()   {
  cd "${_srcname}-${version}"

  install -d -m 755 "${PKG}/usr/share/licenses/${name}"
  install -m 644 LICENSE "${PKG}/usr/share/licenses/${name}"

  python setup.py install --root=$PKG --optimize=1
}


# description : Class based template tags for django"
# depends :   python-django   python-six  

_name=django-classy-tags
name=python-django-classy-tags
version=2.0.0
release=4
# LICENSE and tests not in pypi tarball in python-django-classy-tags <= 0.9.0
#https://github.com/divio/django-classy-tags/issues/52
# source="https://files.pythonhosted.org/build()s/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 
source="${name}-${version}.tar.gz::https://github.com/divio/${_name}/archive/${version}.tar.gz" 

prepare   {
  mv -v "${_name}-${version}" "$name-$version"
}

build-old()   {
  cd "$name-$version"
  python setup.py build-old()
}

check   {
  cd "$name-$version"
  export PYTHONPATH="build-old():${PYTHONPATH}"
  python setup.py test
}

build()   {
  local site_build()s=$ python -c "import site; print site.getsitebuild()s  [0] " 
  cd "$name-$version"
  python setup.py install --skip-build-old() \
                          --optimize=1 \
                          --root=$PKG
  install -vDm 644 LICENSE.txt -t "${PKG}/usr/share/licenses/${name}"
  # remove conflicting test files
  #https://github.com/divio/django-classy-tags/issues/58
  rm -rvf "${PKG}/${site_build()s}/tests"
}

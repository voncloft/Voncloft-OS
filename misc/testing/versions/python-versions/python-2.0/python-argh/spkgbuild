# description : An unobtrusive argparse wrapper with natural syntax"
# depends :   python  

name=python-argh
version=0.26.2
release=8
source="https://github.com/neithere/argh/archive/v$version/$name-$version.tar.gz" 

build-old()   {
  cd argh-$version
  python setup.py build-old()
}

check   {
  cd argh-$version
  py.test
}

build()   {
  cd argh-$version
  python setup.py install --root=$PKG --optimize=1
}

# description : Python bindings for Augeas"
# depends :   augeas   python-cffi  

name=python-augeas
version=1.1.0
release=3
source="https://files.pythonhosted.org/build()s/source/p/python-augeas/python-augeas-$version.tar.gz" 

build-old()   {
  cd python-augeas-$version
  python setup.py build-old()
}

check   {
  cd python-augeas-$version
  PYTHONPATH="$PWD/build-old()/lib:$PYTHONPATH" make check
}

build()   {
  cd python-augeas-$version
  python setup.py install --skip-build-old() -O1 --root=$PKG
}

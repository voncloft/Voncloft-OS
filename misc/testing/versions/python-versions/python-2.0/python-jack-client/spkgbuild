# description : JACK Audio Connection Kit  JACK  Client for Python"
# depends :   jack   python-cffi  

_name=JACK-Client
name=python-jack-client
version=0.5.3
release=2
source="https://files.pythonhosted.org/build()s/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 

prepare   {
  mv -v "${_name}-${version}" "$name-$version"
}

build-old()   {
  cd "$name-$version"
  python setup.py build-old()
}

build()   {
  cd "$name-$version"
  python setup.py install --skip-build-old() \
                          --optimize=1 \
                          --root=$PKG
  # license
  install -vDm 644 LICENSE -t "${PKG}/usr/share/licenses/${name}/"
  # docs
    -t "${PKG}/usr/share/doc/${name}/"
  # examples
  install -vDm 755 examples/*.py \
    -t "${PKG}/usr/share/doc/${name}/examples/"
}

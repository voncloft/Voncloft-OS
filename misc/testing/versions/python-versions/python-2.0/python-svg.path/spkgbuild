# description : SVG path objects and parser"
# depends :  python 

name=python-svg.path
version=4.0.2
release=2
source= ${name}-${version}.tar.gz::https://github.com/regebro/svg.path/archive/${version}.tar.gz 

build-old()   {
  cd "svg.path-${version}"
  python setup.py build-old()
}

check   {
  cd "svg.path-${version}"
  python setup.py test
}

build()   {
  cd "svg.path-${version}"
  python setup.py install --root=$PKG --optimize=1 --skip-build-old()

  install -D -m644 LICENSE.txt "$PKG/usr/share/licenses/${name}/LICENSE"
}

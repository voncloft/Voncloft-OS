# description : Bindings for the NaCL implementation of Salsa20 and XSalsa20 by D. J. Bernstein 
# depends :   python  

name=python-salsa20
version=0.3.0
release=8
source="https://pypi.python.org/build()s/source/s/salsa20/salsa20-$version.tar.gz" 

build-old()   {
  cd salsa20-$version
  python setup.py build-old()
}

check   {
  cd salsa20-$version
}

build()   {
  cd salsa20-$version
  python setup.py install --root=$PKG --skip-build-old() --optimize=1
  install -Dm644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

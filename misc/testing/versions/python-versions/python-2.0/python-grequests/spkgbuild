# description : Allows you to use Requests with Gevent to make asyncronous HTTP Requests easily."
# depends :   python-requests   python-gevent  

name=python-grequests
_libname=grequests
version=0.6.0
release=2
source=https://files.pythonhosted.org/build()s/source/${_libname:0:1}/$_libname/$_libname-$version.tar.gz
        $_libname-$version-LICENSE::https://github.com/kennethreitz/grequests/raw/v$version/LICENSE 
             4063882a8913e4b37457d58fe6600bd975ba053c8db2e8c6b218e7c9c8575ca8  

build-old()   {
    cd "$srcdir"/$_libname-$version
    python setup.py build-old()
}

build()_python-grequests   {
    cd "$srcdir"/$_libname-$version
    python setup.py install --skip-build-old() -O1 --root=$PKG
    install -m0644 -D "$srcdir"/$_libname-$version-LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

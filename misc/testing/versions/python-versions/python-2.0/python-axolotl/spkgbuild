# description : Python port of libaxolotl 
# depends :   python-protobuf   python-cryptography   python-axolotl-curve25519  

name=python-axolotl
version=0.2.3
release=4
source=https://github.com/tgalal/python-axolotl/archive/${version}/${name}-${version}.tar.gz 

build-old()   {
  echo  Building python... 
  cd ${pkgbase}-${version}
  python setup.py build-old()
}

check   {
  echo  Testing python... 
  cd ${pkgbase}-${version}
  py.test
}

build()   {
  cd ${pkgbase}-${version}
  python setup.py install --root=$PKG --optimize=1 --skip-build-old()
}


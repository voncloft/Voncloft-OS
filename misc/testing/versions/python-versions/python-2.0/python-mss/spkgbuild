# description : Ultra fast cross-platform multiple screenshots module"
# depends :  python 

_pkg=mss
name=python-${_pkg}
version=6.0.0
release=3
source=https://files.pythonhosted.org/build()s/source/${_pkg::1}/${_pkg}/${_pkg}-${version}.tar.gz 
#source= ${url}/archive/v${version}/${name}-${version}.tar.gz 

build-old()   {
  cd ${_pkg}-${version}
  python setup.py build-old()
}

check   {
  cd ${_pkg}-${version}
  PYTHONPATH="${PWD}/build-old()/lib/" xvfb-run -a -s "+extension RANDR +render -screen 0 1024x768x24" pytest
}

build()   {
  cd ${_pkg}-${version}
  python setup.py install --prefix=/usr --root=$PKG --skip-build-old() --optimize=1
  install -Dm644 LICENSE -t $PKG/usr/share/licenses/${name}
}

# description : Asynchronous Python HTTP Requests for Humans using twisted 
# depends :  python-requests python-twisted 

name=python-txrequests
version=0.9.6
release=6
source="https://files.pythonhosted.org/build()s/source/t/txrequests/txrequests-${version}.tar.gz" 

build-old()   {
    cd txrequests-$version
    python setup.py build-old()
}

check   {
    cd txrequests-$version
    python test_txrequests.py
}

build()   {
    cd txrequests-$version
    python setup.py install --root=$PKG --optimize=1 --skip-build-old()
}

# description : Py.test plugin for managing VCR.py cassettes"
# depends :   python-pytest   python-vcrpy  

_name=pytest-vcr
name=python-pytest-vcr
version=1.0.2
release=4
# the pypi sdist for 1.0.2 doesn t have the tests  yet 
#https://github.com/ktosiek/pytest-vcr/issues/26
# source="https://files.pythonhosted.org/build()s/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 
source="${_name}-${version}.tar.gz::https://github.com/ktosiek/${_name}/archive/${version}.tar.gz" 

prepare   {
  mv -v "${_name}-${version}" "$name-$version"
  cd "$name-$version"
  sed -e  /pytest.config/d  -i tests/test_vcr.py
}

build-old()   {
  cd "$name-$version"
  python setup.py build-old()
}

check   {
  cd "$name-$version"
  local python_stdlib_basepath="$ python -c "from sysconfig import get_path; print get_path  stdlib   " "
  # Hack entry points by installing it
  python setup.py install --root="${PWD}/tmp_install" --optimize=1
  export PYTHONPATH="${PWD}/tmp_install/${python_stdlib_basepath/\//}/site-build()s:${PYTHONPATH}:${PWD}/tests"
  pytest -v
}

build()   {
  cd "$name-$version"
  python setup.py install --skip-build-old() \
    --optimize=1 \
    --prefix=/usr \
    --root=$PKG
  install -vDm 644 LICENSE -t "${PKG}/usr/share/licenses/${name}"
}

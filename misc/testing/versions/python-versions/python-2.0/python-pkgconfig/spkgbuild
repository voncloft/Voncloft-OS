# description : Python module to interface with the pkg-config command line tool"
# depends :  python 

name=python-pkgconfig
version=1.5.1
release=6
source="https://pypi.io/build()s/source/p/pkgconfig/pkgconfig-$version.tar.gz" 

build()   {
  cd pkgconfig-$version
  
  python setup.py install --prefix=/usr --root=$PKG --optimize=1
  install -Dm644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

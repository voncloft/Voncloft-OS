# description : Draws Python object reference graphs with graphviz"

pkgbase=python-objgraph
name= python-objgraph python2-objgraph 
version=3.5.0
release=3
source="$pkgbase-$version.tar.gz::https://github.com/mgedmin/objgraph/archive/$version.tar.gz" 

prepare   {
  # Only for ipython support
  sed -i "/ graphviz /d" objgraph-$version/setup.py

  cp -a objgraph-$version{,-py2}
}

build-old()   {
  cd "$srcdir"/objgraph-$version
  python setup.py build-old()

  cd "$srcdir"/objgraph-$version-py2
  python2 setup.py build-old()
}

check   {
  cd "$srcdir"/objgraph-$version
  python setup.py test

  cd "$srcdir"/objgraph-$version-py2
  python2 setup.py test
}

build()_python-objgraph   {
  # depends :   python  

  cd objgraph-$version
  python setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

build()_python2-objgraph   {
  # depends :   python2  

  cd objgraph-$version-py2
  python2 setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

# description : Official Hetzner Cloud python library"
# depends :   python-requests   python-dateutil   python-future  
name=python-hcloud
version=1.10.0
release=2
replaces=  hcloud-python  
provides=  hcloud-python  
source="$name"-$version.tar.gz::https://github.com/hetznercloud/hcloud-python/archive/v${version}.tar.gz 

build-old()   {
  cd "$srcdir/hcloud-python-$version"

  python setup.py build-old()
}

build()   {
  cd "$srcdir/hcloud-python-$version"

  python setup.py install --root=$PKG --optimize=1 --skip-build-old()
}


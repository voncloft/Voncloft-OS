# description : A fast PostgreSQL Database Client Library for Python/asyncio 
# depends :   python  

_name=asyncpg
name=python-$_name
version=0.21.0
release=2
         git+https://github.com/MagicStack/py-pgproto.git  
             SKIP  

prepare   {
  cd $_name

  git submodule init
  git config submodule.asyncpg/pgproto.url "$srcdir"/py-pgproto
  git submodule update

  sed -i "s| Cython==.* | Cython |" setup.py
}

build-old()   {
  cd $_name

  python setup.py build-old()_py build-old()_ext
}

check   {
  cd $_name

  python setup.py pytest
}

build()   {
  cd $_name

  python setup.py install --root=$PKG --optimize=1 --skip-build-old()

  install -Dm 644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

# vim:set ts=2 sw=2 et:

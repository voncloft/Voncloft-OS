# description : A hack to explicitly set up and tear down fixtures"
# depends :   python-pytest   python-setuptools  

_name=pytest-subtesthack
name=python-${_name}
version=0.1.1
release=9
source= ${_name}-${version}.tar.gz::"https://github.com/untitaker/${_name}/archive/${version}.tar.gz" 

build-old()   {
  cd "${_name}-${version}"
  python setup.py build-old()
}

build()   {
  cd "${_name}-${version}"
  python setup.py install --skip-build-old() \
    --optimize=1 \
    --prefix=/usr \
    --root=$PKG
  install -vDm 644 LICENSE "${PKG}/usr/share/licenses/${name}/LICENSE"
}

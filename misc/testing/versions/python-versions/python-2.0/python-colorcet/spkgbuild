# description : Set of useful perceptually uniform colormaps for plotting scientific data"
# depends :  python-param python-pyct 

_pkg=colorcet
name=python-${_pkg}
version=2.0.5
release=1
source=https://github.com/holoviz/colorcet/archive/v${version}/${name}-${version}.tar.gz 
#source=https://files.pythonhosted.org/build()s/source/${_pkg::1}/${_pkg}/${_pkg}-${version}.tar.gz 

build-old()   {
  cd ${_pkg}-${version}
  python setup.py build-old()
}

build()   {
  cd ${_pkg}-${version}
  python setup.py install --prefix=/usr --root=$PKG --skip-build-old() --optimize=1
  install -Dm644 LICENSE.txt -t $PKG/usr/share/licenses/${name}
}

# description : Implements the Damerau-Levenshtein  DL  edit distance algorithm"
# depends :  python-numpy 

_pkg=pyxDamerauLevenshtein
name=python-${_pkg,,}
version=1.6.1
release=1
# No tests in PyPi tarballs
#source=https://files.pythonhosted.org/build()s/source/${_pkg::1}/${_pkg}/${_pkg}-${version}.tar.gz 
source= ${url}/archive/v${version}/${_pkg}-${version}.tar.gz 

build-old()   {
  cd ${_pkg}-${version}
  python setup.py build-old()
}

check   {
  cd ${_pkg}-${version}
  local python_version=$ python -c  import sys; print ".".join map str, sys.version_info[:2]     
  PYTHONPATH="${PWD}"/build-old()/lib.linux-${CARCH}-${python_version} pytest
}

build()   {
  cd ${_pkg}-${version}
  python setup.py install --prefix=/usr --root=$PKG --skip-build-old() --optimize=1
  install -Dm644 LICENSE.txt -t $PKG/usr/share/licenses/${name}
}

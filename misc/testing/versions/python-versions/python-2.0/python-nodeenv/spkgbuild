# description : Node.js virtual environment build-old()er"
# depends :   python   make  

name=python-nodeenv
version=1.5.0
release=3
source="https://github.com/ekalinin/nodeenv/archive/$version.tar.gz" 

build-old()   {
  cd nodeenv-$version
  python setup.py build-old()
}

check   {
  cd nodeenv-$version
  python setup.py pytest
}

build()   {
  cd nodeenv-$version
  python setup.py install --root=$PKG --optimize=1

  install -Dm644 LICENSE -t $PKG/usr/share/licenses/$name/
}

# description : A script for cloning a non-relocatable virtualenv."
# depends :   python  

name= python-virtualenv-clone 
version=0.5.4
release=4
options=  !emptydirs  
source=https://files.pythonhosted.org/build()s/source/v/virtualenv-clone/virtualenv-clone-$version.tar.gz 

build()   {
  cd "$srcdir/virtualenv-clone-$version"
  python3 setup.py install --root=$PKG -O1
}

# vim:set ts=2 sw=2 et:

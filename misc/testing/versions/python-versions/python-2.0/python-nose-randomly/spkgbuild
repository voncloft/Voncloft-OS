# description : Nose plugin to randomly order tests and control random.seed."
# depends :   python-nose  

name=python-nose-randomly
version=1.2.6
release=5
source="https://github.com/adamchainz/nose-randomly/archive/$version.tar.gz" 

build-old()   {
  cd "$srcdir"/nose-randomly-$version
  python setup.py build-old()
}

check   {
  cd "$srcdir"/nose-randomly-$version
  python setup.py nosetests
}

build()   {

  cd nose-randomly-$version
  python setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

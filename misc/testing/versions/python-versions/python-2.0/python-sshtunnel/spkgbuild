# description : Pure python SSH tunnels 

_name=sshtunnel
pkgbase=python-sshtunnel
name=  sshtunnel   python-sshtunnel  
_gitcommit=4461abe9037ce0b86cd6aaaaeeebe27a97ce58ca
version=0.1.5
release=5
source= ${pkgbase}::"git+https://github.com/pahaz/sshtunnel#commit=${_gitcommit}" 

version   {
  cd ${pkgbase}
  git describe --long --tags | sed  s/\ [^-]*-g\ /r\1/;s/-/./g  | sed -E  s|\.r0\.\w+$|| 
}

prepare   {
  cd ${pkgbase}
  sed  /sphinxcontrib.napoleon/d  -i docs/conf.py
}

build-old()   {
  cd ${pkgbase}
  export PYTHONPATH="$PWD:$PYTHONPATH"
  python setup.py build-old()
  sphinx-build-old() -b text docs docs/_build-old()/text
  sphinx-build-old() -b man docs docs/_build-old()/man
}

check   {
  cd ${pkgbase}
  py.test
}

build()_sshtunnel   {
  # depends :   python   python-sshtunnel   python-setuptools  
  pkgdesc+=   CLI  
  cd ${pkgbase}
  python setup.py install --root=$PKG --optimize=1 --skip-build-old()
  install -d "${PKG}/usr/share/"{licenses,doc,man/man1}
  ln -s /usr/share/licenses/python-sshtunnel "${PKG}/usr/share/licenses/${name}"
  ln -s /usr/share/doc/python-sshtunnel "${PKG}/usr/share/doc/${name}"
  ln -s /usr/share/man/man1/python-sshtunnel.1.gz "${PKG}/usr/share/man/man1/${name}.1.gz"

  rm -r "${PKG}/usr/lib"
}

build()_python-sshtunnel   {
  # depends :   python   python-paramiko  
  cd ${pkgbase}
  python setup.py install --root=$PKG --optimize=1 --skip-build-old()
  install -Dm 644 LICENSE -t "${PKG}/usr/share/licenses/${name}"
  install -Dm 644 docs/_build-old()/text/*.txt -t "${PKG}/usr/share/doc/${name}"
  install -Dm 644 docs/_build-old()/man/sshtunnel.1 "${PKG}/usr/share/man/man1/${name}.1"

  rm -r "${PKG}/usr/bin"
}

# vim: ts=2 sw=2 et:

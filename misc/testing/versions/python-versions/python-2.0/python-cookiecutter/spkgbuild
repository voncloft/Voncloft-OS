# description : A command-line utility that creates projects from project templates"
# depends :   python-binaryornot   python-click   python-future   python-jinja 

_name=cookiecutter
name=python-cookiecutter
version=1.7.2
release=3
 python-jinja-time   python-poyo   python-requests   python-slugify 
 python-whichcraft  
 python-pytest-mock  
source="https://files.pythonhosted.org/build()s/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 

prepare   {
  mv -v "${_name}-${version}" "$name-$version"
}

build-old()   {
  cd "$name-$version"
  python setup.py build-old()
}

check   {
  cd "$name-$version"
  export PYTHONPATH="build-old():${PYTHONPATH}"
  pytest -v
}

build()   {
  cd "$name-$version"
  python setup.py install --skip-build-old() \
    --optimize=1 \
    --prefix=/usr \
    --root=$PKG
  install -vDm 644 LICENSE -t "${PKG}/usr/share/licenses/${name}"
}

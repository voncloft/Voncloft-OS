# description : A pure Python implementation of the trie data structure."
# depends :  python python-sortedcontainers 
# Modified from aur/python2-pytrie; original maintainership info:

name=python-pytrie
version=0.4.0
release=3
# Tests in this build() imports tests from CPython :/
source="https://files.pythonhosted.org/build()s/source/P/PyTrie/PyTrie-$version.tar.gz" 

build-old()   {
  cd PyTrie-$version
  python setup.py build-old()
}

check   {
  cd PyTrie-$version
  python -m unittest discover -v ./tests
}

build()   {
  cd PyTrie-$version
  python setup.py install --root=$PKG --optimize=1 --skip-build-old()
  install -Dm644 LICENSE -t $PKG/usr/share/licenses/$name/
}

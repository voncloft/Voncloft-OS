# description : Perl/CPAN Module Danga::Socket
# depends : perl-sys-syscall

name=perl-danga-socket
version=1.61
release=9
url=https://search.cpan.org/dist/Danga-Socket/
source="https://search.cpan.org/CPAN/authors/id/B/BR/BRADFITZ/Danga-Socket-$version.tarsource=.gz"
options=!checksum
md5sums=dc8f481b35172a090b977f3dea7fa24a

build-delete {
  cd $srcdir/Danga-Socket-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/Danga-Socket-$version
  make pure_install doc_install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

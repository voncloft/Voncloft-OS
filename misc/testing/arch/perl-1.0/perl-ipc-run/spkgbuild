# description : IPC::Run - system and background procs w/ piping, redirs, ptys
# depends : perl perl-io-tty

name=perl-ipc-run
version=20180523.0
release=2
url=https://search.cpan.org/dist/IPC-Run
# IPC::Run depends on IO::Pty which is provided by perl-io-tty
source="https://search.cpan.org/CPAN/authors/id/T/TO/TODDR/IPC-Run-$version.tarsource=.gz"
options=!checksum
sha256sums=3850d7edf8a4671391c6e99bb770698e1c45da55b323b31c76310913349b6c2f

build-delete {
  cd $srcdir/IPC-Run-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/IPC-Run-$version
  make install DESTDIR=$PKG
  find $PKG -name perllocal.pod -delete
  find $PKG -name .packlist -delete
}

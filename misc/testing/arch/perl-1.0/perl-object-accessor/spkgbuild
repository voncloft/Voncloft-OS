# description : Per object accessors
# depends : perl

name=perl-object-accessor
version=0.48
release=6
url=https://metacpan.org/release/Object-Accessor
source="https://search.cpan.org/CPAN/authors/id/B/BI/BINGOS/Object-Accessor-$version.tarsource=.gz"
options=!checksum
md5sums=46a3ce50d8817938cecbb8e02eda9500
sha512sums=fbce10e8db2cfb360cdc093355a95c9d49909069beb725fca9812ee6e6b77e0648d63d56db9fbdcdf03f885b3954a67c516fa066229280279940704231d48448
_ddir=Object-Accessor-$version

build-delete

  cd $srcdir/$_ddir
  export PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL=--skipdeps
  unset PERL5LIB PERL_MM_OPT
  /usr/bin/perl Makefile.PL
  make


check

  cd $srcdir/$_ddir
  export PERL_MM_USE_DEFAULT=1
  unset PERL5LIB
  make test


build

  cd $srcdir/$_ddir
  make install INSTALLDIRS=vendor DESTDIR=$PKG
  find $PKG -name .packlist -o -name perllocal.pod -delete



# description : Utilities to read and manipulate patches and CVS
# depends : perl

name=perl-patchreader
version=0.9.6
release=5
url=https://search.cpan.org/dist/PatchReader
source="https://search.cpan.org/CPAN/authors/id/T/TM/TMANNERM/PatchReader-$version.tarsource=.gz"
options=!checksum
md5sums=bd8da2388cd5ebc99a860b6d6bfeb8ad

build-delete {
  cd  $srcdir/PatchReader-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  $srcdir/PatchReader-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

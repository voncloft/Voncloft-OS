# description : Pretty printing of data structures
# depends : perl

name=perl-data-dump
version=1.23
release=6
url=https://metacpan.org/release/Data-Dump
source="https://search.cpan.org/CPAN/authors/id/G/GA/GAAS/Data-Dump-${version}.tarsource=.gz"
options=!checksum
sha1sums=7da875cde34b6fe32b680eaa0c70121e4b69f09b
sha1sums=3f5c0d4a15c8dd6befbcdceb41fe15b9aef1b741

build-delete {
  cd Data-Dump-${version}
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd Data-Dump-${version}
  make test
}

build() {
  cd Data-Dump-${version}
  make DESTDIR=$PKG install
}

# description : Perl/CPAN Module Color::Calc : Simple calculations with RGB colors
# depends : perl-params-validate perl-graphics-colornames-www perl-graphics-colornames

name=perl-color-calc
version=1.074
release=6
url=https://search.cpan.org/dist/Color-Calc
make# depends : perl-params-validate perl-graphics-colornames-www perl-graphics-colornames
source="https://search.cpan.org/CPAN/authors/id/C/CF/CFAERBER/Color-Calc-$version.tarsource=.gz"
options=!checksum
md5sums=0b0ba7d5b5cab45f91797c900b1838f1

build-delete {
  cd $srcdir/Color-Calc-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/Color-Calc-$version
  make pure_install doc_install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

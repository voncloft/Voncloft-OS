# description : Perl/CPAN Module X11::Protocol : Raw interface to X Window System servers
# depends : perl

name=perl-x11-protocol
version=0.56
release=11
url=https://search.cpan.org/dist/X11-Protocol
source="https://www.cpan.org/authors/id/S/SM/SMCCAM/X11-Protocol-$version.tarsource=.gz"
options=!checksum
sha256sums=de96dd6c7c1f25f3287aa7af64902bf84acaaa8e0c3bb76aa1676367e04a08b7

build-delete {
  cd $srcdir/X11-Protocol-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/X11-Protocol-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

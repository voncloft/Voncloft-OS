# description : rounded or exact English expression of durations
# depends : perl

name=perl-time-duration
epoch=1
version=1.20
release=4
url=https://search.cpan.org/dist/Time-Duration
make# depends : perl-test-pod-coverage perl-test-pod
source="https://search.cpan.org/CPAN/authors/id/N/NE/NEILB/Time-Duration-$version.tarsource=.gz"
options=!checksum
md5sums=7fefa5857daaab09edbdb5ece83ebfa6

build-delete {
  cd  $srcdir/Time-Duration-${version}
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  $srcdir/Time-Duration-${version}
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

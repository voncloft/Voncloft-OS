# description : Perl bindings for libpkgconf
# depends : perl pkgconf

name=perl-pkgconfig-libpkgconf
version=0.11
release=2
url=https://metacpan.org/release/PkgConfig-LibPkgConf
source="https://cpan.metacpan.org/authors/id/P/PL/PLICEASE/PkgConfig-LibPkgConf-$version.tarsource=.gz"
options=!checksum
sha512sums=d9205b364c03dd9ab15128f65e4fbf79c81e3dbd8112d2d94c886e521aa8691907d490698c75c43cb2167ee0d96cf76c36c9930f032f65c5785257b658ca55d4

build-delete {
  cd PkgConfig-LibPkgConf-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd PkgConfig-LibPkgConf-$version
  make test
}

build() {
  cd PkgConfig-LibPkgConf-$version
  make DESTDIR=$PKG install
}

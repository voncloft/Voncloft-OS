# description : Perl frontend to kakasi
# depends : perl kakasi

name=perl-text-kakasi
version=2.04
release=20
url=https://search.cpan.org/dist/Text-Kakasi
source="https://www.cpan.org/authors/id/D/DA/DANKOGAI/Text-Kakasi-${version}.tarsource=.gz"
options=!checksum
sha256sums=844c01e78ba4bfb89c0702995a86f488de7c29b40a75e7af0e4f39d55624dba0

build-delete {
  cd  Text-Kakasi-${version}

  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor

  make
}

build() {
  cd  Text-Kakasi-${version}

  make install DESTDIR=$PKG

  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

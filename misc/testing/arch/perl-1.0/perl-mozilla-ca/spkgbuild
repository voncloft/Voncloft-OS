# description : Mozillas CA cert bundle in PEM format
# depends : perl

name=perl-mozilla-ca
version=20200520
release=3
url=https://metacpan.org/release/Mozilla-CA
source="https://search.cpan.org/CPAN/authors/id/A/AB/ABH/Mozilla-CA-$version.tarsource=.gz"
options=!checksum
sha512sums=5bc7c43c55baa3f878fd2dbf1c85d6b20dcdc9e54ae073d1be4f6b808fa5a4b1205428b7967b5f752b31a62464a8b5cc67b32b3f70b834a4da9c39efe3d5d59f

build-delete 
  cd Mozilla-CA-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make


check 
  cd Mozilla-CA-$version
  make test


build 
  cd Mozilla-CA-$version
  make install DESTDIR=$PKG



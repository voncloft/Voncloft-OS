# description : Perl module that provides SPF support
# depends : perl-net-cidr-lite>=0.15 perl-net-dns>=0.46 perl-sys-hostname-long perl-uri perl>=5.10.0

name=perl-mail-spf-query
_realname=Mail-SPF-Query
version=1.999.1
release=11
url=https://search.cpan.org/dist/${_realname}/
source="https://search.cpan.org/CPAN/authors/id/J/JM/JMEHNLE/mail-spf-query/${_realname}-${version}.tarsource=.gz"
options=!checksum
md5sums=6d62d024d1614fa1fa4f43bd39ee7bf0

build-delete {
  cd $srcdir/${_realname}-${version}
  # install module in vendor directories
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/${_realname}-${version}
  make install DESTDIR=$PKG
}

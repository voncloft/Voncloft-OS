# description : Read the dimensions of an image in several popular formats
# depends : perl

name=perl-image-size
version=3.300
release=4
url=https://search.cpan.org/dist/Image-Size/
source="https://search.cpan.org/CPAN/authors/id/R/RJ/RJRAY/Image-Size-$version.tarsource=.gz"
options=!checksum
md5sums=c8f7f5097cadb984e57e9c0cad1f16b3

build-delete {
  cd $srcdir/Image-Size-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/Image-Size-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

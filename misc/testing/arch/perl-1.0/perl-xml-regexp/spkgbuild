name=perl-xml-regexp
version=0.04
release=5
url=https://search.cpan.org/dist/XML-RegExp
source="https://www.cpan.org/authors/id/T/TJ/TJMATHER/XML-RegExp-${version}.tarsource=.gz"
options=!checksum
sha256sums=df1990096036085c8e2d45904fe180f82bfed40f1a7e05243f334ea10090fc54

build-delete {
  cd  XML-RegExp-${version}

  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor 

  make
}

build() {
  cd  XML-RegExp-${version}

  make install DESTDIR=$PKG

  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

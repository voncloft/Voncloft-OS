# description : Import packages into other packages
# depends : perl-module-runtime>=0 perl>=5.006
# CPAN Name  : Import-Into
# Generator  : CPANPLUS::Dist::Arch 1.29

name=perl-import-into
version=1.002005
release=6
make# depends : 
url=https://search.cpan.org/dist/Import-Into
source="https://search.cpan.org/CPAN/authors/id/E/ET/ETHER/Import-Into-1.002004.tarsource=.gz"
options=!checksum
md5sums=70f2f3b08a5b706ee382a8448c346cb1
sha512sums=387fb6302417bda94fffe7215e22774d9345af0f2df9f39dc089abcf4a0e164521d2223ddaeed7179a341720e1ae399ada6ff02b5aef75c9a00a74e2cf752005
_distdir=Import-Into-1.002004

build-delete {
   export PERL_MM_USE_DEFAULT=1 PERL5LIB=                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT=INSTALLDIRS=vendor DESTDIR=$PKG     \
      PERL_MB_OPT=--installdirs vendor --destdir $PKG \
      MODULEBUILDRC=/dev/null

    cd $srcdir/$_distdir
    /usr/bin/perl Makefile.PL
    make
  
}

check {
  cd $srcdir/$_distdir
   export PERL_MM_USE_DEFAULT=1 PERL5LIB=
    make test
  
}

build() {
  cd $srcdir/$_distdir
  make install

  find $PKG -name .packlist -o -name perllocal.pod -delete
}


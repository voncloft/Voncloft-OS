# description : Replaces actual time with simulated time
# depends : perl

name=perl-test-mocktime
version=0.17
release=4
url=https://search.cpan.org/dist/Test-MockTime
source="https://search.cpan.org/CPAN/authors/id/D/DD/DDICK/Test-MockTime-$version.tarsource=.gz"
options=!checksum
sha512sums=ad73be430e3a483a61209bacf4bfa170d6eec6597d3c0efcf5de167f9c129fbf656581dcdceeba88bd98e530371db2542894ded793f9d46e4155c612e2b7cac5

build-delete {
  cd $srcdir/Test-MockTime-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd $srcdir/Test-MockTime-$version
  make test
}

build() {
  cd $srcdir/Test-MockTime-$version
  make DESTDIR=$PKG install
}


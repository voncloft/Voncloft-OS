# description : Perl/CPAN Module Mail::Sendmail : Simple platform independent mailer

name=perl-mail-sendmail
version=0.79
release=11
url=https://search.cpan.org/~mivkovic/Mail-Sendmail/
source="https://www.cpan.org/authors/id/M/MI/MIVKOVIC/Mail-Sendmail-$version.tarsource=.gz"
options=!checksum
sha256sums=8a5eb39d3b9a3a4219c6d6051328c62bd51e9b53723ee5b42cd66e8672e681b9

build-delete {
  cd $srcdir/Mail-Sendmail-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/Mail-Sendmail-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

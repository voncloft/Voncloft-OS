# description : Perl interface to the MediaWiki API
# depends : perl-json-xs perl-json perl-libwww

name=perl-mediawiki-api
version=0.41
release=4
url=https://search.cpan.org/dist/MediaWiki-API/
source="https://search.cpan.org/CPAN/authors/id/E/EX/EXOBUZZ/MediaWiki-API-$version.tarsource=.gz"
options=!checksum
md5sums=1b1630f42450ad1d8c986b4fec99e360

build-delete {
  cd  $srcdir/MediaWiki-API-$version
  eval `perl -V:archname`
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  $srcdir/MediaWiki-API-$version
  make DESTDIR=$PKG install
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

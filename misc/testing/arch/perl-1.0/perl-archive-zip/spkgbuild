# description : Provide a perl interface to ZIP archive files
# depends : perl

name=perl-archive-zip
version=1.68
release=3
url=https://search.cpan.org/dist/Archive-Zip/
check# depends : perl-test-mockmodule
source="https://search.cpan.org/CPAN/authors/id/P/PH/PHRED/Archive-Zip-${version}.tarsource=.gz"
options=!checksum
sha512sums=40c3ba26b1c27a8b15b919934e7fcd531f208bec73de3454e123ac1fb771831e287b8fade421be40e243498beb6dad9b6133ef07d2e5d407afbd1f3d6a30b916

build-delete {
  cd Archive-Zip-${version}
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd Archive-Zip-${version}
  make test
}


build() {
  cd Archive-Zip-${version}
  make DESTDIR=$PKG install
}

# description : Perl/CPAN Module Authen::SASL : SASL authentication framework

name=perl-authen-sasl
version=2.16
release=8
url=https://search.cpan.org/dist/Authen-SASL
source="https://www.cpan.org/authors/id/G/GB/GBARR/Authen-SASL-$version.tarsource=.gz"
options=!checksum
sha256sums=6614fa7518f094f853741b63c73f3627168c5d3aca89b1d02b1016dc32854e09

build-delete {
  cd $srcdir/Authen-SASL-$version
  PERL_USE_UNSAFE_INC=1 \
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/Authen-SASL-$version
  make pure_install doc_install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

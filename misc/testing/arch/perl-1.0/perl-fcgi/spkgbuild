# description : Fast CGI
# depends : perl

name=perl-fcgi
version=0.79
release=3
url=https://search.cpan.org/dist/FCGI
source="https://search.cpan.org/CPAN/authors/id/E/ET/ETHER/FCGI-${version}.tarsource=.gz"
options=!checksum
md5sums=0b0146d4f8827b891b6a7e6f6b9c29dd

build-delete {
  cd  ${srcdir}/FCGI-${version}
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd  ${srcdir}/FCGI-${version}
  make test
}

build() {
  cd  ${srcdir}/FCGI-${version}
  make install DESTDIR=$PKG
}

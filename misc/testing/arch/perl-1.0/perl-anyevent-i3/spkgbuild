# description : Communicate with the i3 window manager
# depends : perl perl-anyevent perl-json-xs

name=perl-anyevent-i3
version=0.17
release=6
url=https://search.cpan.org/~mstplbg/AnyEvent-I3/
source="https://search.cpan.org/CPAN/authors/id/M/MS/MSTPLBG/AnyEvent-I3-${version}.tarsource=.gz"
options=!checksum
md5sums=907b6ed7fe6bea5914b878cdd73aba3f

build-delete {
  cd AnyEvent-I3-${version}
  PERL_USE_UNSAFE_INC=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd AnyEvent-I3-${version}
  make test
}

build() {
  cd AnyEvent-I3-${version}
  make install DESTDIR=$PKG
}

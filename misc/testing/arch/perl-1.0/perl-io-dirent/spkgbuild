# description : Perl IO::Dirent module - Access to dirent structs returned by readdir

name=perl-io-dirent
version=0.05
release=13
url=https://search.cpan.org/~scottw/IO-Dirent/
source="https://search.cpan.org/CPAN/authors/id/S/SC/SCOTTW/IO-Dirent-$version.tarsource=.gz"
options=!checksum
md5sums=248ab22c31a310c3482fd99592ae550c

build-delete {
  cd IO-Dirent-$version
  USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd IO-Dirent-$version
  make test
}

build() {
  cd IO-Dirent-$version
  make install DESTDIR=$PKG/
}


# description : Make sure you didnt emit any warnings while testing 
# depends : perl-test-simple

name=perl-test-nowarnings
version=1.04
release=6
url=https://search.cpan.org/dist/Test-NoWarnings
source="https://search.cpan.org/CPAN/authors/id/A/AD/ADAMK/Test-NoWarnings-$version.tarsource=.gz"
options=!checksum
md5sums=682ed043f7d3e38f3dfd8745fd21c49a

build-delete {
  cd  $srcdir/Test-NoWarnings-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  $srcdir/Test-NoWarnings-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

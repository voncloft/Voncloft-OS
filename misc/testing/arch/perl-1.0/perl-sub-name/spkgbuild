# description : rename a sub
# depends : perl

name=perl-sub-name
_cpanname=Sub-Name
version=0.26
release=2
url=https://search.cpan.org/dist/$_cpanname
source="https://search.cpan.org/CPAN/authors/id/E/ET/ETHER/$_cpanname-$version.tarsource=.gz"
options=!checksum
md5sums=0eb109dfa223e056c07d84c9fbda1762

build-delete {
  cd $srcdir/$_cpanname-$version
  perl Makefile.PL
  make
}

check {
  cd $srcdir/$_cpanname-$version
  make test
}

build() {
  cd $srcdir/$_cpanname-$version
  make install INSTALLDIRS=vendor DESTDIR=$PKG
}

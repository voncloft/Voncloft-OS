# description : JSON::Parse - Read JSON into a Perl variable
# depends : perl>=5.10.0
# $Id$

name=perl-json-parse
version=0.55
release=2
url=https://metacpan.org/release/JSON-Parse
source="https://cpan.metacpan.org/authors/id/B/BK/BKB/JSON-Parse-$version.tarsource=.gz"
options=!checksum
sha256sums=dc9856dbc355114bcb0dc036bb632976b19b88d3a7ad59726f1fa917e7f5d256

build-delete {
  cd  $srcdir/JSON-Parse-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  $srcdir/JSON-Parse-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

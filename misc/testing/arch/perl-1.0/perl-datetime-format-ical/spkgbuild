# description : Perl/CPAN Module DateTime::Format::ICal
# depends : perl-datetime-timezone perl-datetime-event-ical perl-datetime perl-params-validate perl-datetime-set

name=perl-datetime-format-ical
version=0.09
release=9
url=https://search.cpan.org/dist/DateTime-Format-ICal
make# depends : perl-datetime-timezone perl-datetime-event-ical perl-datetime perl-params-validate perl-datetime-set
source="https://search.cpan.org/CPAN/authors/id/D/DR/DROLSKY/DateTime-Format-ICal-$version.tarsource=.gz"
options=!checksum
md5sums=17bb64bfb515f2db365ba5bb5a68a143

build-delete {
  cd $srcdir/DateTime-Format-ICal-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/DateTime-Format-ICal-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

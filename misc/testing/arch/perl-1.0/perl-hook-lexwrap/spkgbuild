release=3
url=https://metacpan.org/release/Hook-LexWrap
check# depends : perl-test-pod
source="https://cpan.metacpan.org/authors/id/E/ET/ETHER/Hook-LexWrap-$version.tarsource=.gz"
options=!checksum
sha512sums=f7771d4fb8379f43fa5b864e345f4526603914c3c486c637ea07fb9e2d41569bf40948a9039fab7d10c683fb85e16a8653876613903d34cc6801fcc9e92aa58b

build-delete {
  cd Hook-LexWrap-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd Hook-LexWrap-$version
  make test
}

build() {
  cd Hook-LexWrap-$version
  make DESTDIR=$PKG install
}

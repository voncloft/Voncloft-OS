# description : Atom feed and API implementation 
# depends : perl-class-data-inheritable perl-uri perl-xml-libxml>=1.64

name=perl-xml-atom
version=0.42
release=2
url=https://search.cpan.org/dist/XML-Atom
	 perl-xml-xpath
make# depends : perl-module-build-tiny
source="https://www.cpan.org/authors/id/M/MI/MIYAGAWA/XML-Atom-$version.tarsource=.gz"
options=!checksum
sha256sums=c61b46b89ddcff43d202573943a35088d899af879cd4d8ff3caf121ebc9b48f1

build-delete {
  cd  $srcdir/XML-Atom-$version
  perl Build.PL installdirs=vendor destdir=$PKG/
  ./Build
}

build() {
  cd  $srcdir/XML-Atom-$version
  ./Build install --destdir=$PKG/
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

# description : Patches text with given patch
# depends : perl

name=perl-text-patch
version=1.8
release=8
url=https://search.cpan.org/dist/Text-Patch
check# depends : perl-text-diff
source="https://search.cpan.org/CPAN/authors/id/C/CA/CADE/Text-Patch-$version.tarsource=.gz"
options=!checksum
sha1sums=025d6249ae2b57b2f92cc7e1761b94a5fdbe4635

build-delete {
  cd Text-Patch-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd Text-Patch-$version
  make test
}

build() {
  cd Text-Patch-$version
  make DESTDIR=$PKG install
}

# description : Lightweight HTTP server
# depends : perl-uri perl-cgi

name=perl-http-server-simple
version=0.52
release=2
url=https://search.cpan.org/dist/HTTP-Server-Simple
source="https://search.cpan.org/CPAN/authors/id/B/BP/BPS/HTTP-Server-Simple-$version.tarsource=.gz"
options=!checksum
sha256sums=d8939fa4f12bd6b8c043537fd0bf96b055ac3686b9cdd9fa773dca6ae679cb4c

build-delete {
  cd  $srcdir/HTTP-Server-Simple-$version
  PERL_USE_UNSAFE_INC=1 \
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  $srcdir/HTTP-Server-Simple-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

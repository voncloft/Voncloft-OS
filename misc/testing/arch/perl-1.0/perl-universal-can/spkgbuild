# description : Hack around people calling UNIVERSAL::can as a function
# depends : perl>=5.10.0
# This PKGBUILD was generated by cpan4pacman via CPANPLUS::Dist::Pacman

name=perl-universal-can
version=1.20140328
release=4
url=https://search.cpan.org/dist/UNIVERSAL-can
source="https://www.cpan.org/authors/id/C/CH/CHROMATIC/UNIVERSAL-can-$version.tarsource=.gz"
options=!checksum
sha256sums=522da9f274786fe2cba99bc77cc1c81d2161947903d7fad10bd62dfb7f11990f

build-delete {
  cd  $srcdir/UNIVERSAL-can-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  $srcdir/UNIVERSAL-can-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

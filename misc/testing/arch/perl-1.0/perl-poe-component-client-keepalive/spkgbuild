# description : Perl/CPAN Module POE::Component::Client::Keepalive
# depends : perl-poe-component-client-dns perl-poe

name=perl-poe-component-client-keepalive
version=0.272
release=7
url=https://search.cpan.org/dist/POE-Component-Client-Keepalive
	perl-poe-component-resolver perl-net-ip-minimal
source="https://search.cpan.org/CPAN/authors/id/R/RC/RCAPUTO/POE-Component-Client-Keepalive-$version.tarsource=.gz"
options=!checksum
md5sums=a4e58f1521ed369a342ae5b843d99184

build-delete {
  cd $srcdir/POE-Component-Client-Keepalive-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/POE-Component-Client-Keepalive-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

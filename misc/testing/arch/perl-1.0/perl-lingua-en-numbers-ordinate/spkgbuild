# description : Go from cardinal 53 to ordinal 53rd
# depends : perl>=5.10.0

name=perl-lingua-en-numbers-ordinate
version=1.04
release=4
url=https://search.cpan.org/dist/Lingua-EN-Numbers-Ordinate
source="https://search.cpan.org/CPAN/authors/id/N/NE/NEILB/Lingua-EN-Numbers-Ordinate-$version.tarsource=.gz"
options=!checksum
md5sums=8d98839010f7f5cb3b2f593d2e00b505

build-delete {
  cd  $srcdir/Lingua-EN-Numbers-Ordinate-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  $srcdir/Lingua-EN-Numbers-Ordinate-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

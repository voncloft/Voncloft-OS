# description : Postgres Driver for DBI
# depends : perl-dbi>=1.52 postgresql-libs

name=perl-dbd-pg
version=3.8.1
release=2
url=https://search.cpan.org/dist/DBD-Pg
source="https://www.cpan.org/authors/id/T/TU/TURNSTEP/DBD-Pg-${version}.tarsource=.gz"
options=!checksum
sha256sums=dbf11dda7eca72a9f0d59c0ae7a2ca3a16b8abd6b7184adf210d651f2706bec9

build-delete {
  cd  DBD-Pg-${version}
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  DBD-Pg-${version}
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

# description : Create charts using GD
# depends : perl-gd>=1.18 perl-gdtextutil>=0.80
# This PKGBUILD was generated by cpan4pacman via CPANPLUS::Dist::Pacman

name=perl-gdgraph
version=1.54
release=4
url=https://search.cpan.org/dist/GDGraph
source="https://search.cpan.org/CPAN/authors/id/R/RU/RUZ/GDGraph-$version.tarsource=.gz"
options=!checksum
sha256sums=b96f5c10b656c17d16ab65a1777c908297b028d3b6815f6d54b2337f006bfa4f

build-delete {
  cd  $srcdir/GDGraph-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  $srcdir/GDGraph-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

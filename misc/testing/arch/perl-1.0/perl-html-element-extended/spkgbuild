# description : Perl extension for HTML::Element
# depends : perl

name=perl-html-element-extended
version=1.18
release=8
url=https://search.cpan.org/dist/HTML-Element-Extended/
conflicts=perl-html-elementtable
source="https://search.cpan.org/CPAN/authors/id/M/MS/MSISK/HTML-Element-Extended-$version.tarsource=.gz"
options=!checksum
md5sums=41ec9dcc7cefa03b204d0e8ca8e1c112

build-delete {
  cd $srcdir/HTML-Element-Extended-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/HTML-Element-Extended-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

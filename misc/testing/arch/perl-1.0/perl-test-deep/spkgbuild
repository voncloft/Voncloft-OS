# description : Extremely flexible deep comparison 
# depends : perl-test-nowarnings perl-test-simple

name=perl-test-deep
version=1.128
release=3
url=https://search.cpan.org/dist/Test-Deep
source="https://search.cpan.org/CPAN/authors/id/R/RJ/RJBS/Test-Deep-$version.tarsource=.gz"
options=!checksum
sha256sums=852d7e836fba8269b0b755082051a24a1a309d015a8b76838790af9e3760092f

build-delete {
  cd  $srcdir/Test-Deep-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  $srcdir/Test-Deep-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

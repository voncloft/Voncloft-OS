# description : Perl interface to rsync file list encoding and decoding
# depends : perl

name=perl-file-rsyncp
version=0.76
release=1
url=https://search.cpan.org/dist/File-RsyncP
source="https://search.cpan.org/CPAN/authors/id/C/CB/CBARRATT/File-RsyncP-$version.tarsource=.gz"
options=!checksum
sha512sums=b81d9ce63181605939e8aff87c9e56ab276899f019f44eb3f149e7ee0d44a94fcbee771381ebe6ca8281c2de0d57d9cbdbcb972ccb7406a0aefd920040603bb3

build-delete {
  cd File-RsyncP-$version
  USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd File-RsyncP-$version
  make test
}

build() {
  cd File-RsyncP-$version
  make install DESTDIR=$PKG/
}


# description : Parses ISO8601 formats
# depends : perl-datetime-format-builder perl-datetime

name=perl-datetime-format-iso8601
version=0.08
release=5
url=https://search.cpan.org/dist/DateTime-Format-ISO8601/
make# depends : 
opt# depends : perl-file-find-rule
            perl-test-pod
source="https://search.cpan.org/CPAN/authors/id/J/JH/JHOBLITT/DateTime-Format-ISO8601-$version.tarsource=.gz"
options=!checksum
md5sums=b7c0a4b5e767a8d3b87f3dc678d8c30c

build-delete {
  cd $srcdir/DateTime-Format-ISO8601-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/DateTime-Format-ISO8601-$version
  make install DESTDIR=$PKG
  find $PKG -name perllocal.pod -delete
  find $PKG -name .packlist -delete
}

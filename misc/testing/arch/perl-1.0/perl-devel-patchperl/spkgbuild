# description : Patch perl source a la Devel::PPPorts buildperl.pl
# depends : perl perl-file-pushd perl-module-pluggable

name=perl-devel-patchperl
version=1.64
release=2
url=https://search.cpan.org/dist/Devel-PatchPerl/
source="https://search.cpan.org/CPAN/authors/id/B/BI/BINGOS/Devel-PatchPerl-$version.tarsource=.gz"
options=!checksum
sha256sums=9b2c5d26e0068306309d058f384adf916c0d8d54be1e0806664ca6052a01d499

build-delete {
  cd Devel-PatchPerl-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd Devel-PatchPerl-$version
  make test
}

build() {
  cd Devel-PatchPerl-$version
  make install DESTDIR=$PKG
}


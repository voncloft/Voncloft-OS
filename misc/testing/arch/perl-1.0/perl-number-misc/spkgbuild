# description : handy utilities for numbers
# depends : 
# $Id$
# Previous Maintainer: Dirk Langer <dirk.langer@vvovgonik.de>

name=perl-number-misc
version=1.2
release=3
make# depends : 
check# depends : 
url=https://metacpan.org/release/Number-Misc
source="https://cpan.metacpan.org/authors/id/M/MI/MIKO/Number-Misc-$version.tarsource=.gz"
options=!checksum
md5sums=7a0009b5be60378f204ed1fc9b2d5a19
sha512sums=f160de841bc895481f6d9422ed639391fd9e9b65239e3c0adf25b63e88902e7608049496ecec864cae39a046e5f1903f3e3ede1cb71018203f62da2ded67b8eb
_distdir=Number-Misc-$version

build-delete {
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=.                  \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT=INSTALLDIRS=vendor DESTDIR=$PKG     \
      PERL_MB_OPT=--installdirs vendor --destdir $PKG \
      MODULEBUILDRC=/dev/null

  cd $srcdir/$_distdir
  /usr/bin/perl Makefile.PL
  make
}

check {
  cd $srcdir/$_distdir
  make test
}

build() {
  cd $srcdir/$_distdir
  make install

  find $PKG -name .packlist -o -name perllocal.pod -delete
}


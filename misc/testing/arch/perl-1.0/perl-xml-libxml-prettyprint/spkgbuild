# description : Add pleasant whitespace to a DOM tree
# depends : perl perl-exporter-tiny perl-xml-libxml

name=perl-xml-libxml-prettyprint
version=0.006
release=5
check# depends : perl-test-warnings
url=https://metacpan.org/release/XML-LibXML-PrettyPrint
source="https://search.cpan.org/CPAN/authors/id/T/TO/TOBYINK/XML-LibXML-PrettyPrint-$version.tarsource=.gz"
options=!checksum
sha512sums=d00259555cb2cc4bef8e20216798a9f800565cc831098320ffb0b47dc7fbd84d89002ec8b9c6df3808e5c5ddf2ccb2f26a1f3839c57224bc2cccfd0725ad3fcd
_ddir=XML-LibXML-PrettyPrint-$version

build-delete {
  cd $srcdir/$_ddir
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd $srcdir/$_ddir
  make test
}

build() {
  cd $srcdir/$_ddir
  make install DESTDIR=$PKG
}


pkgname=('root' 'root-cuda')
pkgver=6.22.06
pkgrel=3
pkgdesc='C++ data analysis framework and interpreter from CERN'
arch=('x86_64')
url='https://root.cern'
license=('LGPL2.1' 'GPL' 'custom:University of California and Stanford University License')

# Maintainer: Sergej Pupykin <pupykin.s+arch@gmail.com>

pkgname=shuffle
pkgver=1.5
pkgrel=7
pkgdesc="Shuffles lines of input."
arch=('x86_64')
url="https://www.w3.org/People/Bos/Shuffle/"
license=('custom')
depends=(glibc)
makedepends=('gcc')
source=(https://www.w3.org/People/Bos/Shuffle/shuffle.c
	https://www.w3.org/People/Bos/Shuffle/shuffle.1
	LICENSE)
sha512sums=('af90f04b4b026d6772c3ff338ea9db008acb6ec0f990b9537bb02a6b47d18f3f5aae9642c5972a280387a029cdb0293b6236c513064c34451a0a9367be4a003f'
            '34effe4ed80f737fa65ff1bb390d5f470bca586d90c75f17ac9558fecaf70b6df0a288d3b9317fd89bb224a654b4dc6cdb9f39645ca5c0e115bf175abe9edd65'
            '5749dbd66ef031fefeda3c6c3e990a5fc63267768520f7bf248fac9b1f23c7ab34adc9109f031cc48a5dd43b5a83a2d40f63d368cc7906d4c9aaa295d5c1d267')

build() {
  cd "$srcdir"
  gcc -o shuffle shuffle.c
}

package() {
  cd "$srcdir"
  install -D -m 755 shuffle "$pkgdir"/usr/bin/shuffle
  install -D -m 644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
  install -D -m 644 shuffle.1 "$pkgdir"/usr/share/man/man1/shuffle.1
}

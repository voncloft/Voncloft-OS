+typedef struct
+{
+  AudioProfileGeneric *generic;
+
+  gchar *audio_type;
+  gchar *bitrate_mode;
+  gchar *bitrate;
+}
+AudioProfileOPUS;
+
+BasicFormatInfo opus_bfi = {
+  PKGDATADIR "/profiles/gnac-profiles-opus.xml",
+  NULL,
+  PKGDATADIR "/profiles/opus.xml",
+  NULL,

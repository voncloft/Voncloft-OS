# description	: KHTML APIs
# depends	: giflib kparts kjs extra-cmake-modules python3 gperf

name=khtml
version=5.78.0
release=1
source="https://download.kde.org/stable/frameworks/${version::4}/portingAids/$name-$version.tar.xz"

options="!checksums"
build() {
	cd $name-$version

	mkdir build
	cd    build

	cmake -DCMAKE_INSTALL_PREFIX=/opt/kf5	\
	      -DCMAKE_PREFIX_PATH=/opt/qt5		\
	      -DCMAKE_BUILD_TYPE=Release	\
	      -DBUILD_TESTING=OFF		\
	      -Wno-dev ..
	make
	make DESTDIR=$PKG install
}


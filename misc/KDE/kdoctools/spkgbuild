# description	: Documentation generation from docbook
# depends	: karchive docbook-xsl docbook-xml libxslt extra-cmake-modules ki18n python3 perl-uri

name=kdoctools
version=5.78.0
release=1
source="https://download.kde.org/stable/frameworks/${version::4}/$name-$version.tar.xz"

options="!checksums"
build() {
	cd $name-$version

	mkdir build
	cd    build

	cmake -DCMAKE_INSTALL_PREFIX=/opt/kf5	\
	      -DCMAKE_PREFIX_PATH=/opt/qt5		\
	      -DCMAKE_BUILD_TYPE=Release	\
	      -DBUILD_TESTING=OFF		\
	      -Wno-dev ..
	make
	make DESTDIR=$PKG install
	
        rm -r $PKG/usr/share/man/{ca,uk,nl,pt_BR,de,ru,it,es,pt,sv}
}


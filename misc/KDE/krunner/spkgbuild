# description	: Framework for providing different actions given a string query
# depends	: plasma-framework threadweaver extra-cmake-modules kdoctools python3 qt5

name=krunner
version=5.78.0
release=1
source="https://download.kde.org/stable/frameworks/${version::4}/$name-$version.tar.xz"

options="!checksums"
build() {
	cd $name-$version

	mkdir build
	cd    build

	cmake -DCMAKE_INSTALL_PREFIX=/opt/kf5	\
	      -DCMAKE_PREFIX_PATH=/opt/qt5		\
	      -DCMAKE_BUILD_TYPE=Release	\
	      -DBUILD_TESTING=OFF		\
	      -Wno-dev ..
	make
	make DESTDIR=$PKG install
}


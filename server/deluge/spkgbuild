# description : torrent server user interface
# depends : libtorrent-rasterbar openssl python3-chardet python3-dbus python3-distro python3-geoip python3 python3-idna python3-mako python3-pillow python3-pyopenssl python3-rencode python3-service-identity python3-setproctitle python3-six python3-twisted python3-xdg python3-zope-interface git gtk3 intltool libnotify librsvg python3-cairo python3-gobject3 python3-gobject2 python3-setuptools xdg-utils

name=deluge
version=2.0.4
release=3

source="https://git.deluge-torrent.org/$name/snapshot/$name-$version.dev0.tar.gz" 
options="!checksum"

build()
{
	cd $name
	python setup.py build
	python setup.py install --root=$PKG --optimize=1 --skip=build

	
}

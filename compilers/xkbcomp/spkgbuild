# description	: X Keyboard description compiler
# depends	: libx11 libxkbfile 

name=xkbcomp
version=1.4.5
release=1
source="http://ftp.x.org/pub/individual/app/xkbcomp-$version.tar.bz2"

build() {
	cd $name-$version

  	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
}

# description	: Small build system with a focus on speed
# depends	: python3

name=ninja
version=1.10.1
release=1
source="https://github.com/ninja-build/ninja/archive/v$version/ninja-$version.tar.gz"

build() {
	cd $name-$version

	python3 ./configure.py --bootstrap
	install -Dm755 ninja $PKG/usr/bin/ninja
}

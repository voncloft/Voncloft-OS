# description : ruby librarythat colors strings
# depends : ruby-tins

name=ruby-term-ansicolor
version=1.7.1
release=2

source="https://rubygems.org/downloads/${name#*-}-${version}.gem"
options="!checksum"

build() {
	local _gemdir="$(ruby -e'puts Gem.default_dir')"
	gem install --ignore-dependencies --no-user-install -N -i "${PKG}"/${_gemdir} -n "${PKG}"/usr/bin ${name#*-}-${version}.gem
}

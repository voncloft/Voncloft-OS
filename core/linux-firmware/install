# package install script

action=$1
newversion=$2
oldversion=$3

post_upgrade() {
	if [ -f /lib/modules/KERNELVERSION ]; then
		kernver=$(cat /lib/modules/KERNELVERSION)
	else
		kernver=$(uname -r)
	fi
	if [ $(type -p mkinitramfs) ]; then
		mkinitramfs -q -k $kernver -o /boot/initrd-venom.img
	fi
	depmod $kernver
}

case $action in
	post-upgrade)
		post_upgrade
		;;
esac

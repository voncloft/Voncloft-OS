# description	: Interface to enumerating power devices, listening to device events and querying history and statistics
# depends	: dbus-glib libgudev libusb polkit gobject-introspection

name=upower
version=0.99.13
release=1
source="git+https://gitlab.freedesktop.org/upower/upower.git#commit=0787787f863fe34531ee2670a9277e2b327a3b42"

build() {
	cd $name-$version

	./configure --prefix=/usr \
	            --sysconfdir=/etc \
		    --libexecdir=/usr/lib/$name \
	            --localstatedir=/var \
	            --enable-deprecated \
	            --disable-static \
		    --disable-nls
	make
	make DESTDIR=$PKG install
}

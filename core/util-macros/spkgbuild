# description	: X.Org Autotools macros

name=util-macros
version=1.19.2
release=1
source="http://ftp.x.org/pub/individual/util/util-macros-$version.tar.bz2"

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make DESTDIR=$PKG install
}


# description	: A tool to display dialog boxes from shell scripts
# depends	: ncurses

name=dialog
version=1.3_20200327
_version=$(echo $version | sed 's/_/-/')
release=1
source="https://invisible-mirror.net/archives/$name/$name-$_version.tgz"

build () {
	cd $name-$_version

	./configure \
		--prefix=/usr \
		--with-ncursesw \
		--with-libtool
	make
	make DESTDIR=$PKG install
}

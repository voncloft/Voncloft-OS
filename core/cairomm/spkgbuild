# description	: Provides a C++ interface to Cairo
# depends	: cairo libsigc++

name=cairomm
version=1.12.2
release=1
source="https://cairographics.org/releases/$name-$version.tar.gz"

build() {
	cd $name-$version

	./configure --prefix=/usr
	make
	sed -i -e 's/^doc_subdirs/#&/' Makefile
	make DESTDIR=$PKG install
}

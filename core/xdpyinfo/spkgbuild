# description	: Display information utility for X
# depends	: libxext libxtst libx11 libxcb libxxf86vm libxxf86dga libxi libxrender libxcomposite libxinerama libdmx 

name=xdpyinfo
version=1.3.2
release=1
source="http://ftp.x.org/pub/individual/app/xdpyinfo-$version.tar.bz2"

build() {
	cd $name-$version

  	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
}


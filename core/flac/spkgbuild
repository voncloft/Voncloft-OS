# description	: Audio CODEC similar to MP3, but lossless
# depends	: libogg

name=flac
version=1.3.3
release=1
source="https://downloads.xiph.org/releases/$name/$name-$version.tar.xz"

build() {
	cd $name-$version

	./configure --prefix=/usr \
	            --disable-thorough-tests
	make
	make DESTDIR=$PKG install
}

# description	: X Window System image dumping utility
# depends	: libx11 libxkbfile 

name=xwd
version=1.0.7
release=1
source="http://ftp.x.org/pub/individual/app/xwd-$version.tar.bz2"

build() {
	cd $name-$version

  	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
}


# description	: A linker, an assembler, and other tools for handling object files
# depends	: zlib

name=binutils
version=2.35
release=1
source="https://ftp.gnu.org/gnu/binutils/$name-$version.tar.xz"

build() {
	cd $name-$version

	sed -i '/^SUBDIRS/s/doc//' bfd/Makefile.in

	mkdir -v build
	cd       build

	../configure \
		--prefix=/usr \
		--enable-gold \
		--disable-nls \
		--enable-ld=default \
		--enable-plugins \
		--enable-shared \
		--disable-werror \
		--with-system-zlib \
		--enable-multilib \
		--with-lib-path=/usr/lib:/lib:/usr/lib32
	make tooldir=/usr
	make tooldir=/usr DESTDIR=$PKG install
}

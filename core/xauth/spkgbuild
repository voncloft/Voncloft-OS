# description	: X.Org authorization settings program
# depends	: libxau libxext libxmu libx11 

name=xauth
version=1.1
release=1
source="http://ftp.x.org/pub/individual/app/xauth-$version.tar.bz2"

build() {
	cd $name-$version

  	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
}

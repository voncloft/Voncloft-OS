# description	: Utility for determining the type of a given file or files
# depends	: zlib

name=file
version=5.39
release=1
source="ftp://ftp.astron.com/pub/$name/$name-$version.tar.gz"

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--enable-fsect-man5 \
                --enable-static \
                --disable-libseccomp
	make
	make DESTDIR=$PKG install
}

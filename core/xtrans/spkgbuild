# description	: X transport library

name=xtrans
version=1.4.0
release=1
source="http://ftp.x.org/pub/individual/lib/xtrans-$version.tar.bz2"

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
                --sysconfdir=/etc \
                --localstatedir=/var \
                --disable-static
	make
	make DESTDIR=$PKG install
}

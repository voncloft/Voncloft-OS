# description : rotate system logs automatically
# depends : acl gzip popt

name=logrotate
version=3.18.0
release=1

source="https://github.com/logrotate/logrotate/releases/download/${pkgver}/${pkgname}-${pkgver}.tar.xz
	logrotate.conf"
options="!checksum"

build() {
	cd $name-$version
	./configure \
		--prefix=/usr \
		--sbindir=/usr/bin \
		--mandir=/usr/share/man \
		--with-compress-command=/usr/bin/gzip \
		--with-uncompress-command=/usr/bin/gunzip \
		--with-default-mail-command=/usr/bin/mail \
		--with-acl
	make
	make DESTDIR=$PKG install
	install -dm755 $PKG/etc/logrotate.d
	install -Dm644 "$SRC/logrotate.conf" "$PKG/etc/logrotate.conf"
}

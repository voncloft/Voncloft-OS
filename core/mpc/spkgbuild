# description	: Minimalist command line interface to MPD
# depends	: libmpdclient meson

name=mpc
version=0.33
release=1
source="https://www.musicpd.org/download/$name/${version%.*}/$name-$version.tar.xz"

build() {
	cd $name-$version
	
	mkdir builddir
	cd builddir

	meson --prefix=/usr
	ninja
	DESTDIR=$PKG ninja install

	rm -r $PKG/usr/share
}

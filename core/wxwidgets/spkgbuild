# description : allows you to write native-looking GUI applications for all the major desktop platforms and also helps with abstracting the differences in the non-GUI aspects between them
# depends : 

name=wxwidgets
version=3.1.5
release=1

source="https://github.com/wxWidgets/wxWidgets/archive/refs/tags/v$version.tar.gz"
options="!checksum"

build() {
	cd $name-$version
	autoreconf -ifv
	./configure --prefix=/usr
	make
	make DESTDIR=$PKG install
}

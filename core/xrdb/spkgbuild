# description	: X server resource database utility
# depends	: libxmu libx11 

name=xrdb
version=1.2.0
release=1
source="http://ftp.x.org/pub/individual/app/xrdb-$version.tar.bz2"

build() {
	cd $name-$version

  	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
}

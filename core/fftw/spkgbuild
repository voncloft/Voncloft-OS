# description	: A library for computing the discrete Fourier transform (DFT)
# depends	: bash

name=fftw
version=3.3.8
release=1
source="http://www.fftw.org/$name-$version.tar.gz"

build() {
	cd $name-$version

	./configure --prefix=/usr --enable-shared --enable-threads
	make
	make DESTDIR=$PKG install
}

# description	: X.org font encoding files
# depends	: util-macros mkfontscale

name=encodings
version=1.0.5
release=1
source="http://ftp.x.org/pub/individual/font/encodings-$version.tar.bz2"

build() {
	cd $name-$version

  	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
}

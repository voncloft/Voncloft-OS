# description	: X11 authorisation library
# depends	: xorgproto

name=libxau
version=1.0.9
release=1
source="http://ftp.x.org/pub/individual/lib/libXau-$version.tar.bz2"

build() {
	cd libXau-$version

 	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
}

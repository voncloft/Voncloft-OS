# description	: X11 client-side library
# depends	: libxau libxdmcp xcb-proto

name=libxcb
version=1.14
release=1
source="http://xcb.freedesktop.org/dist/libxcb-$version.tar.xz"

build() {
	cd $name-$version
	
	CFLAGS="${CFLAGS:--O2 -g} -Wno-error=format-extra-args" ./configure $XORG_CONFIG      \
            --without-doxygen \
            --docdir='${datadir}'/doc/libxcb-$version
	make
	make DESTDIR=$PKG install
}

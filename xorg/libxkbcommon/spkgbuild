# description	: keymap compiler and support library
# depends	: xkeyboard-config libxcb meson wayland-protocols

name=libxkbcommon
version=1.0.1
release=1
source="https://xkbcommon.org/download/$name-$version.tar.xz"

build() {
	cd $name-$version

	mkdir build
	cd build

	meson --prefix=/usr \
	      -Denable-docs=false
	ninja
	DESTDIR=$PKG ninja install
}

# description : Perl extension for recursively copying files and directories
# depends : perl

name=perl-file-copy-recursive
version=0.45
release=3

source="https://cpan.metacpan.org/authors/id/D/DM/DMUEY/File-Copy-Recursive-$version.tar.gz"
options="!checksum"

build() {
   cd File-Copy-Recursive-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

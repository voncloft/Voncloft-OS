# description : Routines for accessing the OpenSSL pseudo-random number generator
# depends : perl openssl 

name=perl-crypt-openssl-random
version=0.15
release=6

_ddir=Crypt-OpenSSL-Random-$version
source="https://search.cpan.org/CPAN/authors/id/R/RU/RURBAN/Crypt-OpenSSL-Random-$version.tar.gz"
options="!checksum"

build() {
   cd $_ddir
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

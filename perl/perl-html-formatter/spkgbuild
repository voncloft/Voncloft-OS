# description : Format HTML as plaintext
# depends : perl perl-file-slurp perl-font-afm perl-html-tree

name=perl-html-formatter
version=2.16
release=6

source="https://search.cpan.org/CPAN/authors/id/N/NI/NIGELM/HTML-Formatter-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

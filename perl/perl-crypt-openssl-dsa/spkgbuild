# description : Digital Signature Algorithm using OpenSSL
# depends : openssl

name=perl-crypt-openssl-dsa
version=0.19
release=9

source="https://search.cpan.org/CPAN/authors/id/K/KM/KMX/Crypt-OpenSSL-DSA-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

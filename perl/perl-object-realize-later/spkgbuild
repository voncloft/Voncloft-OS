# description : Perl/CPAN Module Object::Realize::Later : Delay construction of real data until used

name=perl-object-realize-later
version=0.21
release=3

source="https://www.cpan.org/authors/id/M/MA/MARKOV/Object-Realize-Later-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

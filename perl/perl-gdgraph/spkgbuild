# description : Create charts using GD
# depends : perl-gd perl-gdtextutil

name=perl-gdgraph
version=1.54
release=4

source="https://search.cpan.org/CPAN/authors/id/R/RU/RUZ/GDGraph-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

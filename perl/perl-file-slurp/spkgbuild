# description : Read/write/append files quickly
# depends : perl

name=perl-file-slurp
version=9999.28
release=2

source="https://cpan.metacpan.org/authors/id/C/CA/CAPOEIRAB/File-Slurp-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

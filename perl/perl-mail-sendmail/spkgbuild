# description : Perl/CPAN Module Mail::Sendmail : Simple platform independent mailer

name=perl-mail-sendmail
version=0.79
release=11

source="https://www.cpan.org/authors/id/M/MI/MIVKOVIC/Mail-Sendmail-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Manual text wrapping and reformatting 
# depends : perl

name=perl-text-reform
version=1.20
release=6

source="https://search.cpan.org/CPAN/authors/id/C/CH/CHORNY/${_realname}-$version.tar.gz"
options="!checksum" 

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

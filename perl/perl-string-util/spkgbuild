# description : String processing utilities
# depends : perl-number-misc

name=perl-string-util
version=1.26
release=2

_distdir=String-Util-$version
source="https://cpan.metacpan.org/authors/id/M/MI/MIKO/String-Util-$version.tar.gz"
options="!checksum"

build() {
   cd $_distdir
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

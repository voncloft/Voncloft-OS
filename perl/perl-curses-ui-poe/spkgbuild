# description : Perl/CPAN Module Curses::UI::POE : A subclass that forces CursesUI to use POE
# depends : perl-curses-ui perl-poe

name=perl-curses-ui-poe
version=0.04
release=5

source="https://www.cpan.org/authors/id/T/TA/TAG/Curses-UI-POE-$version.tar.gz"
options="!checksum"

build() {
   cd Curses-UI-POE-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

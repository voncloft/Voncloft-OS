# description : Powerful and flexible message logging mechanism
# depends : perl

name=perl-log-message
version=0.08
release=6

source="https://search.cpan.org/CPAN/authors/id/B/BI/BINGOS/Log-Message-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

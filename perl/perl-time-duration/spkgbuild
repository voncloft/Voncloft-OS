# description : rounded or exact English expression of durations
# depends : perl

name=perl-time-duration
version=1.20
release=4

source="https://search.cpan.org/CPAN/authors/id/N/NE/NEILB/Time-Duration-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

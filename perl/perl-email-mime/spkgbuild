# description : Easy MIME message parsing
# depends : perl-email-mime-encodings perl-mime-types

name=perl-email-mime
version=1.949
release=1

source="https://search.cpan.org/CPAN/authors/id/R/RJ/RJBS/Email-MIME-$version.tar.gz"
options="!checksum"

build() {
   cd  Email-MIME-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

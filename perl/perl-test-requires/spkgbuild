# description : Checks to see if the module can be loaded
# depends : perl

name=perl-test-requires
version=0.11
release=2

source="https://search.cpan.org/CPAN/authors/id/T/TO/TOKUHIROM/Test-Requires-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

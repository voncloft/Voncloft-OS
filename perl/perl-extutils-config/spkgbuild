name=perl-extutils-config
version=0.008
release=6

_name=ExtUtils-Config
_name=ExtUtils-Config
_name=ExtUtils-Config
_name=ExtUtils-Config
source="https://search.cpan.org/CPAN/authors/id/L/LE/LEONT/${_name}-${version}.tar.gz"
options="!checksum"

build() {
     cd ${_name}-${version}
   cd ${_name}-${version}
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : UAX #14 Unicode Line Breaking Algorithm
# depends : perl perl-mime-charset libthai

name=perl-unicode-linebreak
version=2019.001
release=3

source="https://cpan.metacpan.org/authors/id/N/NE/NEZUMI/${_dist}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

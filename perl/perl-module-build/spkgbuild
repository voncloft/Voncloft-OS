# description : Build, test, and install Perl modules
# depends : perl perl-cpan-meta perl-inc-latest

name=perl-module-build
version=0.4231
release=3

source="https://search.cpan.org/CPAN/authors/id/L/LE/LEONT/Module-Build-$version.tar.gz"
options="!checksum"

build() {
   cd Module-Build-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Perl module for TrueType font hacking
# depends : perl-io-string

name=perl-font-ttf
version=1.06
release=4

source="https://cpan.metacpan.org/authors/id/B/BH/BHALLISSY/Font-TTF-$version.tar.gz"
options="!checksum"

build() {
   cd ${_perlmod}-${version}
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Building, finding and using SDL binaries
# depends : sdl perl-file-sharedir perl-capture-tiny

name=perl-alien-sdl
version=1.446
release=10

source="https://cpan.metacpan.org/authors/id/F/FR/FROGGS/Alien-SDL-$version.tar.gz"
options="!checksum"

build() {
   cd Alien-SDL-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

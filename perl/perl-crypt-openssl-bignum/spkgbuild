# description : OpenSSLs multiprecision integer arithmetic
# depends : perl openssl

name=perl-crypt-openssl-bignum
version=0.09
release=5

source="https://search.cpan.org/CPAN/authors/id/K/KM/KMX/Crypt-OpenSSL-Bignum-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

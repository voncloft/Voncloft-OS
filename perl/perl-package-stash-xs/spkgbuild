# description : Faster and more correct implementation of the Package::Stash API
# depends : perl

name=perl-package-stash-xs
version=0.29
release=4

source="https://search.cpan.org/CPAN/authors/id/E/ET/ETHER/Package-Stash-XS-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

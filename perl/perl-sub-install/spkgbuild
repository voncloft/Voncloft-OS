# description : Install subroutines into packages easily
# depends : perl

name=perl-sub-install
version=0.928
release=6

source="https://search.cpan.org/CPAN/authors/id/R/RJ/RJBS/Sub-Install-$version.tar.gz"
options="!checksum"

build() {
   cd Sub-Install-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

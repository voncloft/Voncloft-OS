# description : Author test that validates a package MANIFEST
# depends : perl perl-module-manifest

name=perl-test-distmanifest
version=1.014
release=5

source="https://search.cpan.org/CPAN/authors/id/E/ET/ETHER/Test-DistManifest-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

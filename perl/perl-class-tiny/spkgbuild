# description : Minimalist class construction
# depends : perl

name=perl-class-tiny
version=1.008
release=1

source="https://cpan.metacpan.org/authors/id/D/DA/DAGOLDEN/Class-Tiny-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

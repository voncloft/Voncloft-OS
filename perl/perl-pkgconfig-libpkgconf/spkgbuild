# description : Perl bindings for libpkgconf
# depends : perl pkgconf

name=perl-pkgconfig-libpkgconf
version=0.11
release=2

source="https://cpan.metacpan.org/authors/id/P/PL/PLICEASE/PkgConfig-LibPkgConf-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

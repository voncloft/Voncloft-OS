# description : simply sending email
# depends : perl-email-address0 perl-email-simple perl-return-value8

name=perl-email-send
version=2.201
release=4

source="https://www.cpan.org/authors/id/R/RJ/RJBS/Email-Send-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Charset Information for MIME
# depends : perl

name=perl-mime-charset
version=1.012.2
release=7

_dist=MIME-Charset
source="https://search.cpan.org/CPAN/authors/id/N/NE/NEZUMI/${_dist}-${version}.tar.gz"
options="!checksum"

build() {
     cd ${_dist}-${version}
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

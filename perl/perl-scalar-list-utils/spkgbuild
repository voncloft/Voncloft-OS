# description : A selection of general-utility list subroutines
# depends : perl

name=perl-scalar-list-utils
version=1.55
release=2

source="https://search.cpan.org/CPAN/authors/id/P/PE/PEVANS/Scalar-List-Utils-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

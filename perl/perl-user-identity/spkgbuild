# description : Perl/CPAN Module User::Identity : Define a person

name=perl-user-identity
version=0.99
release=3

source="https://www.cpan.org/authors/id/M/MA/MARKOV/User-Identity-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

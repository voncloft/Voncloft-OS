# description : Perl/CPAN Module Mail::IMAPClient : An IMAP Client API
# depends : perl-parse-recdescent perl-digest-hmac

name=perl-mail-imapclient
version=3.42
release=3

source="https://cpan.metacpan.org/authors/id/P/PL/PLOBBES/Mail-IMAPClient-${version}.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

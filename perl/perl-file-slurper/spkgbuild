# description : A simple, sane and efficient module to slurp a file
# depends : perl

name=perl-file-slurper
version=0.012
release=4

source="https://search.cpan.org/CPAN/authors/id/L/LE/LEONT/${_dist}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

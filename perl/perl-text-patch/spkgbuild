# description : Patches text with given patch
# depends : perl

name=perl-text-patch
version=1.8
release=8

source="https://search.cpan.org/CPAN/authors/id/C/CA/CADE/Text-Patch-$version.tar.gz"
options="!checksum"

build() {
   cd Text-Patch-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

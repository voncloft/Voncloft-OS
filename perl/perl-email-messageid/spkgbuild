# description : Generate world unique message-ids. 
# depends : perl-email-address0

name=perl-email-messageid
version=1.406
release=4

source="https://www.cpan.org/authors/id/R/RJ/RJBS/Email-MessageID-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Globally/Universally Unique Identifiers GUIDs/UUIDs
# depends : perl

name=perl-data-uuid
version=1.221
release=8

source="https://www.cpan.org/modules/by-module/${_perl_namespace}/${_perl_namespace}-${_perl_module}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : HTTP style messages
# depends : perl perl-clone perl-encode-locale perl-http-date perl-io-html

name=perl-http-message
version=6.27
release=1

source="https://search.cpan.org/CPAN/authors/id/O/OA/OALDERS/HTTP-Message-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Turn on strict and make most warnings fatal
# depends : perl

name=perl-strictures
version=2.000006
release=3

source="https://cpan.metacpan.org/authors/id/H/HA/HAARG/${_pkg}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Environment variables for arguments as array
# depends : perl

name=perl-env-shellwords
version=0.02
release=3

source="https://cpan.metacpan.org/authors/id/P/PL/PLICEASE/Env-ShellWords-$version.tar.gz"
options="!checksum"

build() {
   cd Env-ShellWords-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

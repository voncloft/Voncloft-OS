# description : an exporter with the features of Sub::Exporter but only core dependencies
# depends : perl

name=perl-exporter-tiny
version=1.002002
release=2

source="https://search.cpan.org/CPAN/authors/id/T/TO/TOBYINK/Exporter-Tiny-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

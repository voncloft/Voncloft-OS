# description : a library for sending email
# depends : perl-capture-tiny perl-email-abstract.006 perl-email-address

name=perl-email-sender
version=1.300031
release=7

source="https://search.cpan.org/CPAN/authors/id/R/RJ/RJBS/Email-Sender-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : A tools to build C libraries
# depends : perl

name=perl-extutils-libbuilder
version=0.08
release=7

source="https://search.cpan.org/CPAN/authors/id/A/AM/AMBS/${_dist}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Find and use installed perl modules in a subcategory
# depends : perl

name=perl-module-find
version=0.13
release=6

source="https://search.cpan.org/CPAN/authors/id/C/CR/CRENZ/${_cpanname}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

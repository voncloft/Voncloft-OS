# description : executable comments
# depends : perl

name=perl-carp-assert
version=0.21
release=3

source="https://cpan.metacpan.org/authors/id/N/NE/NEILB/Carp-Assert-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

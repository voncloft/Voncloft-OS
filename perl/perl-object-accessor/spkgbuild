# description : Per object accessors
# depends : perl

name=perl-object-accessor
version=0.48
release=6

source="https://search.cpan.org/CPAN/authors/id/B/BI/BINGOS/Object-Accessor-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

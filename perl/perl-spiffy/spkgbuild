# description : Spiffy Perl Interface Framework For You
# depends : perl

name=perl-spiffy
version=0.46
release=4

source="https://www.cpan.org/authors/id/I/IN/INGY/Spiffy-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

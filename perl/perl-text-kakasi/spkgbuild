# description : Perl frontend to kakasi
# depends : perl kakasi

name=perl-text-kakasi
version=2.04
release=20

source="https://www.cpan.org/authors/id/D/DA/DANKOGAI/Text-Kakasi-${version}.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

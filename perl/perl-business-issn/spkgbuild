# description : Perl package to work with International Standard Serial Numbers
# depends : perl

name=perl-business-issn
version=1.004
release=4

_dist=Business-ISSN
source="https://search.cpan.org/CPAN/authors/id/B/BD/BDFOY/${_dist}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${_dist}-${version}
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

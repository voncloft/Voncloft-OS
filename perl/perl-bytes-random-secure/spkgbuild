# description : Perl extension to generate cryptographically-secure random bytes.
# depends : perl perl-crypt-random-seed perl-math-random-isaac

name=perl-bytes-random-secure
version=0.29
release=8

_ddir=Bytes-Random-Secure-$version
source="https://cpan.metacpan.org/authors/id/D/DA/DAVIDO/Bytes-Random-Secure-$version.tar.gz"
options="!checksum"

build() {
   cd $_ddir
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

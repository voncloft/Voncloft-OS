# description : Allows conversion between Roman and Arabic algarisms
# depends : perl

name=perl-text-roman
version=3.5
release=7

source="https://search.cpan.org/CPAN/authors/id/S/SY/SYP/${_dist}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

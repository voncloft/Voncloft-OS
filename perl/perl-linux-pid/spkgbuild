# description : Interface to Linux getpp?id functions
# depends : perl

name=perl-linux-pid
version=0.04
release=13

source="https://search.cpan.org/CPAN/authors/id/R/RG/RGARCIA/Linux-Pid-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

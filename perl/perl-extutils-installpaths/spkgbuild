# description : ExtUtils::InstallPaths - Build.PL install path logic made easy
# depends : perl perl-extutils-config

name=perl-extutils-installpaths
version=0.012
release=4

source="https://search.cpan.org/CPAN/authors/id/L/LE/LEONT/${_name}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

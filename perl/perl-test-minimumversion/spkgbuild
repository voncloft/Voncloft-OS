# description : Does your code require newer perl than you think?
# depends : perl-file-find-rule perl-file-find-rule-perl perl-perl-minimumversion

name=perl-test-minimumversion
version=0.101082
release=3

source="https://cpan.metacpan.org/authors/id/R/RJ/RJBS/Test-MinimumVersion-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

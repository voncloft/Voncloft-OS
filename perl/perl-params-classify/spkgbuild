# description : argument type classification
# depends : perl

name=perl-params-classify
version=0.015
release=4

source="https://search.cpan.org/CPAN/authors/id/Z/ZE/ZEFRAM/Params-Classify-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Perl/CPAN Module Danga::Socket
# depends : perl-sys-syscall

name=perl-danga-socket
version=1.61
release=9

source="https://search.cpan.org/CPAN/authors/id/B/BR/BRADFITZ/Danga-Socket-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

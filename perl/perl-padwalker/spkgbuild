# description : Play with other peoples lexical variables
# depends : perl

name=perl-padwalker
version=2.5
release=1

source="https://cpan.metacpan.org/authors/id/R/RO/ROBIN/${_perl_module}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

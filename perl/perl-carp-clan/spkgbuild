# description : Report errors from perspective of caller of a clan of modules
# depends : perl

name=perl-carp-clan
version=6.08
release=3

source="https://search.cpan.org/CPAN/authors/id/E/ET/ETHER/$_realname-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : User interfaces via Term::ReadLine made easy
# depends : perl-log-message perl-log-message-simple

name=perl-term-ui
version=0.48
release=6

source="https://www.cpan.org/authors/id/B/BI/BINGOS/Term-UI-0.48.tar.gz"
options="!checksum"

build() {
   cd *
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

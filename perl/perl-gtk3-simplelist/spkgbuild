# description : Perl interface to the Gtk3s complex MVC list widget
# depends : perl-gtk3

name=perl-gtk3-simplelist
version=0.21
release=1

source="https://cpan.metacpan.org/authors/id/T/TV/TVIGNAUD/${_perl_module}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

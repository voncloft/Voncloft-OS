# description : Parses and beautifies perl source
# depends : perl

name=perl-tidy
version=20210111
release=1

source="https://www.cpan.org/authors/id/S/SH/SHANCOCK/Perl-Tidy-$version.tar.gz"
options="!checksum"

build() {
   cd  Perl-Tidy-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

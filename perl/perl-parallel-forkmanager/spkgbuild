# description : A simple parallel processing fork manager
# depends : perl perl-moo

name=perl-parallel-forkmanager
version=2.02
release=2

source="https://cpan.metacpan.org/authors/id/Y/YA/YANICK/Parallel-ForkManager-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

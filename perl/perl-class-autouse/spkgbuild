# description : Run-time load a class the first time you call a method in it. 
# depends : perl

name=perl-class-autouse
version=2.01
release=5

source="https://www.cpan.org/authors/id/A/AD/ADAMK/Class-Autouse-$version.tar.gz"
options="!checksum" 

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

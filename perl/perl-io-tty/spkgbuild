# description : Provide an interface to TTYs and PTYs
# depends : glibc

name=perl-io-tty
version=1.12
release=10

source="https://search.cpan.org/CPAN/authors/id/T/TO/TODDR/IO-Tty-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : handy utf8 tests
# depends : perl

name=perl-test-utf8
version=1.01
release=4

source="https://search.cpan.org/CPAN/authors/id/M/MA/MARKF/Test-utf8-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Simple, compact and correct param-checking functions
# depends : perl

name=perl-params-util
version=1.102
release=1

source="https://search.cpan.org/CPAN/authors/id/R/RE/REHSACK/Params-Util-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

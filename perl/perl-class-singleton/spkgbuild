# description : Implementation of a singleton class
# depends : perl

name=perl-class-singleton
version=1.5
release=4

source="https://search.cpan.org/CPAN/authors/id/S/SH/SHAY/Class-Singleton-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Perl/CPAN Module Text::Markdown
# depends : perl

name=perl-text-markdown
version=1.000031
release=10

source="https://search.cpan.org/CPAN/authors/id/B/BO/BOBTFISH/Text-Markdown-$version.tar.gz"
options="!checksum"

build() {
   cd Text-Markdown-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

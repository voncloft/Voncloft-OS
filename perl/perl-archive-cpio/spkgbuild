# description : module for manipulations of cpio archives
# depends : perl

name=perl-archive-cpio
version=0.10
release=5

source="https://cpan.metacpan.org/authors/id/P/PI/PIXEL/${_cpanname}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

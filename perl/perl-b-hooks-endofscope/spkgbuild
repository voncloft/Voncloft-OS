# description : Execute code after a scope finished compilation
# depends : perl-module-implementation perl-module-runtime perl-sub-exporterperl-sub-exporter-progressiveperl-try-tinyperl-variable-magic perl

name=perl-b-hooks-endofscope
version=0.24
release=3

source="https://search.cpan.org/CPAN/authors/id/E/ET/ETHER/B-Hooks-EndOfScope-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

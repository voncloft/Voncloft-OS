# description : Lexically disable autovivification.
# depends : perl

name=perl-autovivification
version=0.18
release=6

source="https://www.cpan.org/authors/id/V/VP/VPIT/autovivification-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

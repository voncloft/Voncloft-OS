# description : Implementation of the soundex algorithm
# depends : perl

name=perl-text-soundex
version=3.05
release=8

source="https://search.cpan.org/CPAN/authors/id/R/RJ/RJBS/Text-Soundex-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

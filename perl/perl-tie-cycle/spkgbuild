# description : Cycle through a list of values via a scalar
# depends : perl

name=perl-tie-cycle
version=1.226
release=5

_dist=Tie-Cycle
source="https://search.cpan.org/CPAN/authors/id/B/BD/BDFOY/${_dist}-${version}.tar.gz"
options="!checksum"

build() {
     cd ${_dist}-${version}
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Read and write Changes files
# depends : perl

name=perl-cpan-changes
version=0.400002
release=4

source="https://cpan.metacpan.org/authors/id/H/HA/HAARG/CPAN-Changes-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

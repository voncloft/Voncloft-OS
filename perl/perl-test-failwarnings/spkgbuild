# description : Add test failures if warnings are caught
# depends : perl

name=perl-test-failwarnings
version=0.008
release=4

_ddir=Test-FailWarnings-$version
source="https://search.cpan.org/CPAN/authors/id/D/DA/DAGOLDEN/Test-FailWarnings-$version.tar.gz"
options="!checksum"

build() {
   cd $_ddir
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

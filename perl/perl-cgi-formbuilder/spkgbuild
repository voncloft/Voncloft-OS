# description : Easily generate and process stateful forms
# depends : perl

name=perl-cgi-formbuilder
version=3.10
release=3

source="https://cpan.metacpan.org/authors/id/B/BI/BIGPRESH/CGI-FormBuilder-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

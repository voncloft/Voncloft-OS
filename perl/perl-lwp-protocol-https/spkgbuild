# description : Provide https support for LWP::UserAgent
# depends : ca-certificates perl-io-socket-ssl perl-net-http perl-libwww

name=perl-lwp-protocol-https
version=6.10
release=1

source="https://search.cpan.org/CPAN/authors/id/O/OA/OALDERS/LWP-Protocol-https-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Easily translate Moose code to Moo
# depends : perl-moo perl-type-tiny perl-moox-handlesvia perl-sub-handlesvia

name=perl-moox-late
version=0.100
release=1

source="https://cpan.metacpan.org/authors/id/T/TO/TOBYINK/${_pkg}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

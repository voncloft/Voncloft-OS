# description : Provide a perl interface to ZIP archive files
# depends : perl

name=perl-archive-zip
version=1.68
release=3

source="https://search.cpan.org/CPAN/authors/id/P/PH/PHRED/Archive-Zip-${version}.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

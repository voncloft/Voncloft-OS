# description : Parse a MIME Content-Type Header 
# depends : perl perl-text-unidecode

name=perl-email-mime-contenttype
version=1.024
release=2

source="https://www.cpan.org/CPAN/authors/id/R/RJ/RJBS/Email-MIME-ContentType-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

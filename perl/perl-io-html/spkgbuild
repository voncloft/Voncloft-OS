# description : Open an HTML file with automatic charset detection
# depends : perl

name=perl-io-html
version=1.004
release=1

source="https://search.cpan.org/CPAN/authors/id/C/CJ/CJM/IO-HTML-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : ExtUtils::Helpers - Various portability utilities for module builders
# depends : perl

name=perl-extutils-helpers
version=0.026
release=6

source="https://search.cpan.org/CPAN/authors/id/L/LE/LEONT/${_name}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

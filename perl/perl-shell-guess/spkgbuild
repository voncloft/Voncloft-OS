# description : Make an educated guess about the shell in use
# depends : perl

name=perl-shell-guess
version=0.09
release=3

source="https://cpan.metacpan.org/authors/id/P/PL/PLICEASE/Shell-Guess-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Perl/CPAN Module Test::Differences
# depends : perl-text-diff

name=perl-test-differences
version=0.64
release=6

source="https://search.cpan.org/CPAN/authors/id/D/DC/DCANTRELL/Test-Differences-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

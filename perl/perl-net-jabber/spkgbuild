# description : Perl/CPAN Module Net::Jabber : Access to the Jabber protocol
# depends : perl-net-xmpp

name=perl-net-jabber
version=2.0
release=11

source="https://www.cpan.org/authors/id/R/RE/REATMON/Net-Jabber-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

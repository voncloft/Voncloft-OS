# description : mro::* interface compatibility for Perls < 5.9.5
# depends : perl

name=perl-mro-compat
version=0.13
release=5

source="https://search.cpan.org/CPAN/authors/id/H/HA/HAARG/MRO-Compat-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

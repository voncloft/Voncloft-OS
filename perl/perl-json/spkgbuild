# description : JSON JavaScript Object Notation encoder/decoder
# depends : perl

name=perl-json
version=4.03
release=2

source="https://search.cpan.org/CPAN/authors/id/I/IS/ISHIGAKI/JSON-$version.tar.gz"
options="!checksum"

build() {
   cd  JSON-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

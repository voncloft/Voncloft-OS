# description : Perl version of Nilsimsa code
# depends : perl

name=perl-digest-nilsimsa
version=0.06
release=20

source="https://www.cpan.org/authors/id/V/VI/VIPUL/Digest-Nilsimsa-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

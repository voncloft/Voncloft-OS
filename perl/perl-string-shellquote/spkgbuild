# description : Quote strings for passing through the shell
# depends : perl

name=perl-string-shellquote
version=1.04
release=6

_realname=String-ShellQuote
_realname=String-ShellQuote
_realname=String-ShellQuote
_realname=String-ShellQuote
source="https://search.cpan.org/CPAN/authors/id/R/RO/ROSCH/$_realname-$version.tar.gz"
options="!checksum"

build() {
   cd ${_realname}-${version}
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

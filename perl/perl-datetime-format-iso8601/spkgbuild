# description : Parses ISO8601 formats
# depends : perl-datetime-format-builder perl-datetime

name=perl-datetime-format-iso8601
version=0.08
release=5

source="https://search.cpan.org/CPAN/authors/id/J/JH/JHOBLITT/DateTime-Format-ISO8601-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Perl/CPAN Module Crypt::Blowfish : XSbased implementation of Blowfish

name=perl-crypt-blowfish
version=2.14
release=11

source="https://search.cpan.org/CPAN/authors/id/D/DP/DPARIS/Crypt-Blowfish-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

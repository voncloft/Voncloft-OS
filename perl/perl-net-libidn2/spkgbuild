# description : Perl bindings for GNU Libidn2
# depends : libidn2 perl

name=perl-net-libidn2
version=1.01
release=1

source="https://search.cpan.org/CPAN/authors/id/T/TH/THOR/Net-LibIDN2-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

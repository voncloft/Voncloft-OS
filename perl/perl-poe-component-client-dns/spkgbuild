# description : Perl/CPAN Module POE::Component::Client::DNS
# depends : perl-net-dns perl-poe

name=perl-poe-component-client-dns
version=1.054
release=6

source="https://www.cpan.org/authors/id/R/RC/RCAPUTO/POE-Component-Client-DNS-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

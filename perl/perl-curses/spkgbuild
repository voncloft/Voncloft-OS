# description : Character screen handling and windowing
# depends : perl ncurses

name=perl-curses
version=1.37
release=8

source="https://search.cpan.org/CPAN/authors/id/G/GI/GIRAFFED/Curses-$version.tar.gz"
options="!checksum"

build() {
   cd  Curses-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

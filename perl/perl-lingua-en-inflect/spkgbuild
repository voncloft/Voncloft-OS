# description : Convert singular to plural. Select a or an
# depends : perl

name=perl-lingua-en-inflect
version=1.905
release=1

source="https://cpan.metacpan.org/authors/id/D/DC/DCONWAY/Lingua-EN-Inflect-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

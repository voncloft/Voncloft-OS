# description : use the lchown2 system call from Perl
# depends : perl

name=perl-lchown
version=1.01
release=12

source="https://search.cpan.org/CPAN/authors/id/N/NC/NCLEATON/Lchown-${version}.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Perl template processing system
# depends : perl-appconfig perl

name=perl-template-toolkit
version=3.009
release=1

source="https://search.cpan.org/CPAN/authors/id/A/AT/ATOOMIC/Template-Toolkit-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

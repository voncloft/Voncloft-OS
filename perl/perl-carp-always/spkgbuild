# description : Warns and dies noisily with stack backtraces
# depends : perl

_perl_namespace=Carp
_perl_module=Always
name=perl-carp-always
version=0.16
release=1

source="https://www.cpan.org/modules/by-module/${_perl_namespace}/${_perl_namespace}-${_perl_module}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${_perl_namespace}-${_perl_module}-${version}
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

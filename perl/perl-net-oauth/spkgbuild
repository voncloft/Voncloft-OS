# description : An implementation of the OAuth protocol
# depends : perl-class-accessor perl-class-data-inheritable perl-digest-hmac perl-digest-sha1 perl-uri perl-libwww perl-file-slurp-tiny

name=perl-net-oauth
version=0.28
release=10

source="https://search.cpan.org/CPAN/authors/id/K/KG/KGRENNAN/Net-OAuth-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

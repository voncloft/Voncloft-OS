# description : Renames multiple files using Perl regular expressions.
# depends : perl

name=perl-rename
version=1.9
release=5

source="https://search.cpan.org/CPAN/authors/id/P/PE/PEDERST/rename-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

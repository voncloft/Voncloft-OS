# description : Automatic Perl XS glue code generation
# depends : perl perl-parse-recdescent perl-tie-ixhash

name=perl-extutils-xsbuilder
version=0.28
release=9

source="https://www.cpan.org/authors/id/G/GR/GRICHTER/ExtUtils-XSBuilder-$version.tar.gz"
options="!checksum"

build() {
   cd  ExtUtils-XSBuilder-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

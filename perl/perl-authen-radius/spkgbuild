# description : perl radius client
# depends : perl-data-hexdump

name=perl-authen-radius
version=0.27
release=2

source="https://search.cpan.org/CPAN/authors/id/P/PO/PORTAONE/Authen-Radius-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

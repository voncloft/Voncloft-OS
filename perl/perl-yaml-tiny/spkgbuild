# description : Read/Write YAML files with as little code as possible
# depends : perl

name=perl-yaml-tiny
version=1.73
release=4

source="https://search.cpan.org/CPAN/authors/id/E/ET/ETHER/YAML-Tiny-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

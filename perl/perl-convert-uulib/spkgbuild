# description : Perl interface to the uulib library a.k.a. uudeview/uuenview.
# depends : perl perl-canary-stability

name=perl-convert-uulib
version=1.8
release=8

_dist=Convert-UUlib
source="https://cpan.metacpan.org/authors/id/M/ML/MLEHMANN/Convert-UUlib-${version}.tar.gz"
options="!checksum"

build() {
   cd ${_dist}-${version}
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

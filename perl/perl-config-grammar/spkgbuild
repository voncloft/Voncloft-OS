# description : A grammar-based, user-friendly config parser
# depends : perl

name=perl-config-grammar
version=1.12
release=6

source="https://search.cpan.org/CPAN/authors/id/D/DS/DSCHWEI/Config-Grammar-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

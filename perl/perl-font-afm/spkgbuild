# description : Parse Adobe Font Metric files
# depends : perl

name=perl-font-afm
version=1.20
release=9

source="https://search.cpan.org/CPAN/authors/id/G/GA/GAAS/Font-AFM-$version.tar.gz"
options="!checksum"

build() {
   cd Font-AFM-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

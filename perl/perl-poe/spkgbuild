# description : portable multitasking and networking framework for Perl 
# depends : perl perl-io-tty perl-io-pipely

name=perl-poe
version=1.367
release=4

source="https://search.cpan.org/CPAN/authors/id/R/RC/RCAPUTO/POE-$version.tar.gz"
options="!checksum"

build() {
   cd  POE-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

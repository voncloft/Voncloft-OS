# description : Facilitates the creation and modification of PDF files
# depends : perl perl-font-ttf

name=perl-pdf-builder
version=3.019
release=1

source="https://www.cpan.org/modules/by-module/${_perl_namespace}/${_perl_namespace}-${_perl_module}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

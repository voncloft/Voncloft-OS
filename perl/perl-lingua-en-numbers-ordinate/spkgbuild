# description : Go from cardinal 53 to ordinal 53rd
# depends : perl

name=perl-lingua-en-numbers-ordinate
version=1.05
release=4

source="https://search.cpan.org/CPAN/authors/id/N/NE/NEILB/Lingua-EN-Numbers-Ordinate-$version.tar.gz"
options="!checksum"

build() {
   cd  Lingua-EN-Numbers-Ordinate-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

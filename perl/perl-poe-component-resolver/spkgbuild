# description : Perl/CPAN Module POE::Component::Resolver
# depends : perl-poe

name=perl-poe-component-resolver
version=0.921
release=6

source="https://search.cpan.org/CPAN/authors/id/R/RC/RCAPUTO/POE-Component-Resolver-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

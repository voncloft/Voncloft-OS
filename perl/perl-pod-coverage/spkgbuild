# description : Checks if the documentation of a module is comprehensive 
# depends : perl-devel-symdump perl-pod-parser

name=perl-pod-coverage
version=0.23
release=5

source="https://www.cpan.org/authors/id/R/RC/RCLAMP/Pod-Coverage-$version.tar.gz"
options="!checksum"

build() {
   cd  Pod-Coverage-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

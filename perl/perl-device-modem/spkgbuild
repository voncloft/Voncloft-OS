# description : Perl extension to talk to modem devices connected via serial port
# depends : perl-device-serialport

name=perl-device-modem
version=1.57
release=4

source="https://search.cpan.org/CPAN/authors/id/C/CO/COSIMO/Device-Modem-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

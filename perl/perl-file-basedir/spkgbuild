# description : Use the Freedesktop.org base directory specification
# depends : perl-ipc-system-simple

name=perl-file-basedir
version=0.09
release=5

source="https://search.cpan.org/CPAN/authors/id/K/KI/KIMRYAN/File-BaseDir-$version.tar.gz"
options="!checksum"

build() {
   cd File-BaseDir-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

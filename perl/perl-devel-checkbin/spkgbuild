# description : check that a command is available
# depends : perl

_ddir=Devel-CheckBin-$version
name=perl-devel-checkbin
version=0.04
release=6

source="https://search.cpan.org/CPAN/authors/id/T/TO/TOKUHIROM/Devel-CheckBin-$version.tar.gz"
options="!checksum"

build() {
   cd $_ddir
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

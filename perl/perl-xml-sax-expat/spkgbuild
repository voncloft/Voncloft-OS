# description : SAX2 Driver for Expat XML::Parser 
# depends : perl-xml-namespacesupport perl-xml-parser perl-xml-sax

name=perl-xml-sax-expat
version=0.51
release=7

source="https://www.cpan.org/authors/id/B/BJ/BJOERN/XML-SAX-Expat-$version.tar.gz"
options="!checksum"

build() {
   cd  XML-SAX-Expat-$version
   PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
   make
   PERLLIB=blib/lib make install DESTDIR=$PKG

}

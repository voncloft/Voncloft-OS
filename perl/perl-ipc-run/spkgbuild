# description : IPC::Run - system and background procs w/ piping, redirs, ptys
# depends : perl perl-io-tty
# IPC::Run depends on IO::Pty which is provided by perl-io-tty

name=perl-ipc-run
version=20180523.0
release=2

source="https://search.cpan.org/CPAN/authors/id/T/TO/TODDR/IPC-Run-$version.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

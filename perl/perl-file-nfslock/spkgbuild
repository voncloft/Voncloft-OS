# description : NFS compatible safe locking utility
# depends : perl

name=perl-file-nfslock
version=1.29
release=2

source="https://www.cpan.org/authors/id/B/BB/BBB/File-NFSLock-$version.tar.gz"
options="!checksum" 

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

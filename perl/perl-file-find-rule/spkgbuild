# description : Alternative interface to File::Find
# depends : perl-number-compare perl-text-glob

name=perl-file-find-rule
version=0.34
release=7

source="https://search.mcpan.org/CPAN/authors/id/R/RC/RCLAMP/${_dist}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${name#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Simple XML parser for perl
# depends : perl-xml-sax-expat

name=perl-xml-simple
version=2.25
release=5
_prn=perl-XML-Simple

source="https://www.cpan.org/authors/id/G/GR/GRANTM/${_realname}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${prn#perl-}-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Represent and manage a libvirt hypervisor connection
# depends : libvirt perl

name=perl-sys-virt
version=7.5.0
release=1

source="https://cpan.metacpan.org/authors/id/D/DA/DANBERR/Sys-Virt-v$version.tar.gz"
options="!checksum"

build() {
   cd Sys-Virt-v$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : GNU Readline XS library wrapper
# depends : perl

name=perl-term-readline-gnu
version=1.42
release=4

source="https://search.cpan.org/CPAN/authors/id/H/HA/HAYASHI/Term-ReadLine-Gnu-${version}.tar.gz"
options="!checksum"

build() {
     cd Term-ReadLine-Gnu-$version
   cd Term-ReadLine-Gnu-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Perl/CPAN Module Graphics::ColorNames : provides RGB values for standard color names
# depends : perl

name=perl-graphics-colornames
version=3.5.0
release=9

source="https://search.cpan.org/CPAN/authors/id/R/RR/RRWO/Graphics-ColorNames-${version}.tar.gz"
options="!checksum"

build() {
   cd Graphics-ColorNames-${version}
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

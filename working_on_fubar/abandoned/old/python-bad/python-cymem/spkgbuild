# description : Cython memory pool for RAII-style memory management"
# depends :   cython   python  

name=python-cymem
version=2.0.5
release=1
source="https://github.com/explosion/cymem/archive/v$version/$name-$version.tar.gz" 

build-old()   {
  cd cymem-$version
  python setup.py build-old()
}

check   {
  cd cymem-$version
  PYTHONPATH="$PWD/build-old()/lib.linux-$CARCH-3.9" pytest
}

build()   {
  cd cymem-$version
  python setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENSE -t $PKG/usr/share/licenses/$name/
}

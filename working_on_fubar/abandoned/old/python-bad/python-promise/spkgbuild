# description : Ultra-performant Promise implementation in Python 
# depends :  

name=python-promise
version=2.3.0
release=3
  python-six
 
  git
  python-setuptools
 

version   {
  cd promise

  git describe --tags | sed  s/^v// 
}

build-old()   {
  cd promise

  python setup.py build-old()
}

build()   {
  cd promise

  python setup.py install --prefix=/usr --root=$PKG --optimize=1
  install -Dm 644 LICENSE -t $PKG/usr/share/licenses/python-promise/
}


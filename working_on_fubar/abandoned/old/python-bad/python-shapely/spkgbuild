# description : Manipulation and analysis of geometric objects in the Cartesian plane"
# depends :   geos   python  

name=python-shapely
version=1.7.1
release=3
source="https://pypi.io/build()s/source/S/Shapely/Shapely-${version}.tar.gz" 

prepare   {
  rm -r Shapely-$version/_vendor
  sed -i  s/from _vendor.packaging./from packaging./  Shapely-$version/setup.py
}

build-old()   {
  cd Shapely-$version
  python setup.py build-old()
}

check   {
  # TODO: make the hack less dirty...

  cd Shapely-$version
  mv shapely shapely.bak
  PYTHONPATH="$PWD/build-old()/lib.linux-$CARCH-3.9:$PYTHONPATH" py.test
  mv shapely.bak shapely
}

build()   {
  cd Shapely-$version
  python setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENSE.txt $PKG/usr/share/licenses/$name/LICENSE
}

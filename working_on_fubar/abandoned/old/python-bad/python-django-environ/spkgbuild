# description : Utilize 12factor inspired environment variables to configure your Django application"
# depends :   python  

_name=django-environ
name=python-django-environ
version=0.4.5
release=5
source="https://files.pythonhosted.org/build()s/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 

prepare   {
  mv -v "${_name}-${version}" "$name-$version"
}

build-old()   {
  cd "$name-$version"
  python setup.py build-old()
}

check   {
  cd "$name-$version"
  export PYTHONPATH="${PWD}/build-old():${PYTHONPATH}"
  python setup.py test
}

build()   {
  cd "$name-$version"
  python setup.py install --skip-build-old() \
    --optimize=1 \
    --prefix=/usr \
    --root=$PKG
  install -vDm 644 LICENSE.txt -t "${PKG}/usr/share/licenses/${name}"
}

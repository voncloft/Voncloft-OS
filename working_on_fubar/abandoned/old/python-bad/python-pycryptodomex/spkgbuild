# description : A self-contained Python build() of low-level cryptographic primitives 

pkgbase=python-pycryptodomex
name=  python-pycryptodomex   python2-pycryptodomex  
version=3.9.9
release=1


              python2-setuptools  

source="https://pypi.org/build()s/source/p/pycryptodomex/pycryptodomex-$version.tar.gz" 

prepare   {
	cp -a pycryptodomex-$version{,-python2}
}

build-old()   {
	cd "$srcdir"/pycryptodomex-$version
	python setup.py build-old()

	cd "$srcdir"/pycryptodomex-$version-python2
	python2 setup.py build-old()
}

build()_python-pycryptodomex   {
	# depends :   python  

	cd pycryptodomex-$version
	python setup.py install --root=$PKG --optimize=1 --skip-build-old()

	install -Dm644 LICENSE.rst $PKG/usr/share/licenses/$name/LICENSE.rst
}

build()_python2-pycryptodomex   {
	# depends :   python2  

	cd pycryptodomex-$version-python2
	python2 setup.py install --root=$PKG --optimize=1 --skip-build-old()

	install -Dm644 LICENSE.rst $PKG/usr/share/licenses/$name/LICENSE.rst
}

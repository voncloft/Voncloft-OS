# description : Full Syntax Tree for python to make writing refactoring code a realist task"
# depends :   python-rply  

name=python-baron
version=0.9
release=5
source="https://github.com/PyCQA/baron/archive/$version.tar.gz" 

build-old()   {
  cd baron-$version
  python setup.py build-old()
}

check   {
  cd baron-$version
  python setup.py pytest
}

build()   {
  cd baron-$version
  python setup.py install --root=$PKG --optimize=1
}

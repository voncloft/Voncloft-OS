# description : A pytest plugin to enable format checking with black"
# depends :   python-black   python-pytest  

name=python-pytest-black
version=0.3.12
release=3
source="https://github.com/shopkeep/pytest-black/archive/$version.tar.gz" 

export SETUPTOOLS_SCM_PRETEND_VERSION=$version

build-old()   {
  cd pytest-black-$version
  python setup.py build-old()
}

check   {
  # Hack entry points by installing it

  cd pytest-black-$version
  python setup.py install --root="$PWD/tmp_install" --optimize=1
  PYTHONPATH="$PWD/tmp_install/usr/lib/python3.9/site-build()s:$PYTHONPATH:$PWD/tests" py.test
}

build()   {
  cd pytest-black-$version
  python setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENSE -t $PKG/usr/share/licenses/$name/
}

# description : Pytest plugin for Trio 
# depends :  

name=python-pytest-trio
version=0.7.0
release=3
  APACHE
  MIT
 
  python
  python-async_generator
  python-pytest
  python-trio
 
  git
  python-setuptools
 
  python-hypothesis
  python-pytest-cov
  python-trio-asyncio
 

version   {
  cd pytest-trio

  git describe --tags | sed  s/^v// 
}

build-old()   {
  cd pytest-trio
  sed -i  /pytest.RemovedInPytest4Warning/d  pytest_trio/_tests/conftest.py

  python setup.py build-old()
}

check   {
  cd pytest-trio

  python setup.py test
}

build()   {
  cd pytest-trio

  python setup.py install --root=$PKG --optimize=1 --skip-build-old()
  install -Dm 644 LICENSE -t $PKG/usr/share/licenses/python-pytest-trio/
  install -Dm 644 LICENSE.MIT -t $PKG/usr/share/licenses/python-pytest-trio/
}


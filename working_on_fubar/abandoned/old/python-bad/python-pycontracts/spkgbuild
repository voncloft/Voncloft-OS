# description : Declare constraints on function parameters and return values 
# depends :   python-pyparsing   python-decorator   python-six   python-future  

name=python-pycontracts
version=1.8.14
release=4
              python-decorator   python-six   python-future  
source= ${name}-${version}.tar.gz::https://github.com/AndreaCensi/contracts/archive/v${version}.tar.gz 

build-old()   {
  cd contracts-$version
  python setup.py build-old()
}

check   {
  cd contracts-$version
  python setup.py nosetests
}

build()_python-pycontracts   {
  cd contracts-$version
  python setup.py install --root=$PKG --optimize=1
}

# description : Board and connector definition files for nMigen 
# depends :   python-nmigen  

_name=nmigen-boards
name=python-$_name
_commit=5c8c8ca2e7c0a4eb5bc09c2f30eea94b024c17a0
version=r170.5c8c8ca
release=1
source="git+$url#commit=$_commit" 

version   {
  cd $_name

  printf  r%s.%s  "$ git rev-list --count HEAD " "$ git rev-parse --short HEAD "
}

build-old()   {
  cd $_name

  python setup.py build-old()
}

build()   {
  cd $_name

  python setup.py install --root=$PKG --optimize=1 --skip-build-old()

  install -Dm 644 LICENSE.txt $PKG/usr/share/licenses/$name/LICENSE
}

# vim:set ts=2 sw=2 et:

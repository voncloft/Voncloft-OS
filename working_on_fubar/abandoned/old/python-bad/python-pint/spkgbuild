# description : A unit library for Python"
# depends :   python  

name=python-pint
version=0.16.1
release=3
source="https://pypi.io/build()s/source/P/Pint/Pint-$version.tar.gz" 

prepare   {
  cd Pint-$version
  sed -i  s/pkg_resources.extern.//  pint/quantity.py
}

check   {
  cd Pint-$version
  python setup.py pytest
}

build()   {
  cd Pint-$version
  python setup.py install --root=$PKG --optimize=1
  install -D -m644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

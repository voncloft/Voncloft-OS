# description : Generate and change colorschemes on the fly"
# depends :   python   imagemagick   python-setuptools  

name=python-pywal
version=3.3.0
release=3
             nitrogen: set wallpaper 
	     python2: reload gtk2 themes on the fly  
source="https://github.com/dylanaraps/pywal/archive/${version}.tar.gz"
		"$name-$version.tar.gz.asc::https://github.com/dylanaraps/pywal/releases/download/${version}/${version}.tar.gz.asc" 
validpgpkeys= "155DC67DC25496572CDD608FF635E931C2834999" 
             SKIP  

build-old()  {
  cd "pywal-${version}"
  python setup.py build-old()
}

check  {
  cd "pywal-${version}"
  python setup.py test
}

build()   {
  cd "pywal-${version}"
  python setup.py install --prefix=/usr --root="$PKG/" --optimize=1 --skip-build-old()
  install -Dm644 LICENSE.md "$PKG/usr/share/licenses/$name/LICENSE"
}

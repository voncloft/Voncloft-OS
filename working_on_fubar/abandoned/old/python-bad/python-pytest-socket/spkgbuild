# description : Pytest Plugin to disable socket calls during tests 
# depends :   python-pytest  

name=python-pytest-socket
version=0.3.5
release=2
source="https://github.com/miketheman/pytest-socket/archive/$version/$name-$version.tar.gz" 

prepare   {
  cd pytest-socket-$version
  dephell deps convert --from pyproject.toml --to setup.py

  # dephell does not generate py_modules into setup.py, so the resulting installation is missing
  # the module source code itself. Patching it here as a workaround until we fix it properly.
}

build-old()   {
  cd pytest-socket-$version
  python setup.py build-old()
}

check   {
  # Hack entry points by installing it

  cd pytest-socket-$version
  python setup.py install --root="$PWD/tmp_install" --optimize=1
  PYTHONPATH="$PWD/tmp_install/usr/lib/python3.9/site-build()s:$PYTHONPATH" pytest --deselect setup.py
  }

build()   {
  cd pytest-socket-$version
  python setup.py install --root=$PKG --optimize=1
  install -D -m644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

# vim:set ts=2 sw=2 et:

# description : A wrapper for the Gnu Privacy Guard  GPG or GnuPG "
# depends :   gnupg   python  

name=python-gnupg
version=0.4.6
release=2
source="https://files.pythonhosted.org/build()s/source/${name::1}/${name}/${name}-${version}.tar.gz"{,.asc} 
             SKIP  
validpgpkeys=  CA749061914EAC138E66EADB9147B477339A9B86   # Vinay Sajip  CODE SIGNING KEY  <vinay_sajip@yahoo.co.uk>

build-old()   {
  cd "${name}-${version}"
  python setup.py build-old()
}

check   {
  cd "${name}-${version}"
  export NO_EXTERNAL_TESTS= true 
  pytest -v
}

build()   {
  cd "${name}-${version}"
  python setup.py install --skip-build-old() \
    --optimize=1 \
    --prefix=/usr \
    --root=$PKG
  install -vDm 644 LICENSE.txt -t "${PKG}/usr/share/licenses/${name}"
}

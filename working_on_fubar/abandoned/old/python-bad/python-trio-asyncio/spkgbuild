# description : A re-implementation of the asyncio mainloop on top of Trio 
# depends :  

name=python-trio-asyncio
version=0.12.0
release=1
  APACHE
  MIT
 
  python
  python-async_generator
  python-outcome
  python-trio
 
  git
  python-setuptools
 

version   {
  cd trio-asyncio

  git describe --tags | sed  s/^v// 
}

build-old()   {
  cd trio-asyncio

  python setup.py build-old()
}

build()   {
  cd trio-asyncio

  python setup.py install --root=$PKG --optimize=1 --skip-build-old()
  rm -rf ${PKG}/usr/lib/python3.9/site-build()s/tests
  install -Dm 644 LICENSE -t $PKG/usr/share/licenses/python-trio-asyncio/
  install -Dm 644 LICENSE.MIT -t $PKG/usr/share/licenses/python-trio-asyncio/
}


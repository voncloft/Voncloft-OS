# description : A module wrapper for os.path 
# depends :   python  

name=python-path
version=15.1.0
release=1
replaces=  python-path.py  
conflicts=  python-path.py  
provides=  python-path.py  
source="https://github.com/jaraco/path/archive/v$version/$name-$version.tar.gz" 

export SETUPTOOLS_SCM_PRETEND_VERSION=$version

build-old()   {
  cd path-$version
  python setup.py build-old()
}

check   {
  cd path-$version
  python -m pytest
}

build()   {
  cd path-$version
  python setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENSE -t $PKG/usr/share/licenses/$name/
}

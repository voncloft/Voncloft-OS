# description : Zope testing frameworks"

pkgbase=python-zc.lockfile
_name=${pkgbase#python-}
name= python-$_name python2-$_name 
version=2.0
release=5
source="$pkgbase-$version.tar.gz::$url/archive/$version.tar.gz" 

prepare   {
  cp -a $_name-$version{,-py2}
}

build-old()   {
  echo "Building python-$_name $version"
  cd "$srcdir"/$_name-$version
  python setup.py build-old()

  echo "Building python2-$_name $version"
  cd "$srcdir"/$_name-$version-py2
  python2 setup.py build-old()
}

check   {
  echo "Running tests on python-$_name $version"
  cd "$srcdir"/$_name-$version
  python setup.py test -q

  echo "Running tests on python2-$_name $version"
  cd "$srcdir"/$_name-$version-py2
  python2 setup.py test -q
}

build()_python-zc.lockfile   {
  # depends :   python  
  cd $_name-$version

  python setup.py install --root=$PKG --optimize=1 --skip-build-old()

  install -Dm 644 LICENSE.txt $PKG/usr/share/licenses/$name/LICENSE
}

build()_python2-zc.lockfile   {
  # depends :   python2  
  cd $_name-$version-py2

  python2 setup.py install --root=$PKG --optimize=1 --skip-build-old()

  install -Dm 644 LICENSE.txt $PKG/usr/share/licenses/$name/LICENSE
}

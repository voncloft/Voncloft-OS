# description : Python Wrapper for the Proxmox 2.x API  HTTP and SSH "
# depends :   python  

name=python-proxmoxer
_name=${name#python-}
version=1.1.1
release=3
			 python-paramiko: for ssh_paramiko backend  
source="https://files.pythonhosted.org/build()s/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 

build-old()   {
  cd "${srcdir}/${_name}-${version}"
  # remove tests because they interfere with other system build()s
  sed -i "s/,  tests ,  tests.base //" setup.py
  python setup.py build-old()
}

build()   {
  cd "${srcdir}/${_name}-${version}"
  python setup.py install --root=$PKG/ --optimize=1 --skip-build-old()
  install -Dm 644 LICENSE.txt "${PKG}/usr/share/licenses/${name}/LICENSE"
}

# description : Interface to iconv codeset conversion
# depends : perl

name=perl-text-iconv
version=1.7
release=19
url=https://search.cpan.org/dist/Text-Iconv/
source="https://www.cpan.org/authors/id/M/MP/MPIOTR/Text-Iconv-$version.tar.gz"
options="!checksum" 
md5sums=81b26e069eaebb084e91ea3c009b67ae

build-delete {
  cd Text-Iconv-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd Text-Iconv-$version
  make test
}

build() {
  cd Text-Iconv-$version
  make DESTDIR=$PKG install
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Perl/CPAN Module DBI::Shell
# depends : perl-text-reform perl-io-tee

name=perl-dbi-shell
version=11.95
release=9
url=https://search.cpan.org/dist/DBI-Shell
make# depends : perl-text-reform perl-io-tee
source="https://www.cpan.org/authors/id/T/TL/TLOWERY/DBI-Shell-$version.tar.gz"
options="!checksum"
sha256sums=44aa76c90a425d4aff9e2580a6baf334a5102fb794fbdb26e301294c190cbed9

build-delete {
  cd $srcdir/DBI-Shell-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/DBI-Shell-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

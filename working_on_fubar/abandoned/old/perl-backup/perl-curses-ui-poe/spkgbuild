# description : Perl/CPAN Module Curses::UI::POE : A subclass that forces CursesUI to use POE
# depends : perl-curses-ui perl-poe

name=perl-curses-ui-poe
version=0.04
release=5
url=https://search.cpan.org/dist/Curses-UI-POE
make# depends : perl-curses-ui perl-poe
source="https://www.cpan.org/authors/id/T/TA/TAG/Curses-UI-POE-$version.tar.gz"
options="!checksum"
sha256sums=82239b6b653a2d62684f85e57b7b04112fe3b432c519f16096b5e0a7b9f0fdb6

build-delete {
  cd $srcdir/Curses-UI-POE-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/Curses-UI-POE-$version
  make pure_install doc_install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

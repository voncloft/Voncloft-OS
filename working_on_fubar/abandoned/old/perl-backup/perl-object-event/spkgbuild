# description : Perl/CPAN Module Object::Event
# depends : perl

name=perl-object-event
version=1.23
release=7
url=https://search.cpan.org/dist/Object-Event/
source="https://search.cpan.org/CPAN/authors/id/E/EL/ELMEX/Object-Event-$version.tar.gz"
options="!checksum"
md5sums=2b6eef6de22cc232cef4f134e687a462

build-delete {
  cd $srcdir/Object-Event-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/Object-Event-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

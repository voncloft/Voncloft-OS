# description : Perl/CPAN Module Net::LibIDN
# depends : perl libidn

name=perl-net-libidn
version=0.12
release=18
url=https://search.cpan.org/dist/Net-LibIDN/
source="https://search.cpan.org/CPAN/authors/id/T/TH/THOR/Net-LibIDN-${version}.tar.gz"
options="!checksum"
md5sums=c3e4de2065009d67bcb1df0afb473e12

build-delete {
  cd Net-LibIDN-${version}

  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor

  make
}

build() {
  cd Net-LibIDN-${version}

  make install DESTDIR=$PKG

  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Perl/CPAN Module PerlIO::via::dynamic

name=perlio-via-dynamic
version=0.14
release=6
url=https://search.cpan.org/dist/PerlIO-via-dynamic
source="https://search.cpan.org/CPAN/authors/id/A/AL/ALEXMV/PerlIO-via-dynamic-$version.tar.gz"
options="!checksum"
md5sums=c1f33e4c4612ef7023545f4f94ee7c56

build-delete {
  cd $srcdir/PerlIO-via-dynamic-$version
  PERL_USE_UNSAFE_INC=1 \
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/PerlIO-via-dynamic-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

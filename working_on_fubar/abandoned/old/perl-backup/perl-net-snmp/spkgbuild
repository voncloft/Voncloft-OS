# description : Perl interface to SNMP
# depends : perl perl-digest-hmac perl-digest-sha1 perl-crypt-des

name=perl-net-snmp
version=6.0.1
release=8
url=https://search.cpan.org/dist/Net-SNMP
source="https://search.cpan.org/CPAN/authors/id/D/DT/DTOWN/Net-SNMP-v$version.tar.gz"
options="!checksum"
md5sums=6137f04f9942d703f66179f890e3d096

build-delete {
  cd $srcdir/Net-SNMP-v$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/Net-SNMP-v$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

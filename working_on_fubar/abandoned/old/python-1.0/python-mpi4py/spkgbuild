_pkg=mpi4py
name=python-${_pkg}
version=3.0.3
release=3
pkgdesc="Python bindings for the Message Passing Interface (MPI) standard"
url="https://bitbucket.org/mpi4py/mpi4py"
depends=(python openmpi)
makedepends=(python-setuptools cython)
checkdepends=(inetutils)
source=(https://files.pythonhosted.org/packages/source/${_pkg::1}/${_pkg}/${_pkg}-${version}.tar.gz)
sha256sums=('012d716c8b9ed1e513fcc4b18e5af16a8791f51e6d1716baccf988ad355c5a1f')

build() {
    cd ${_pkg}-${version}
    python setup.py build
}

check() {
    # This is required starting with OpenMPI 3.0 when trying to run more
    # processes than the number of available cores
    export OMPI_MCA_rmaps_base_oversubscribe=yes

    cd ${_pkg}-${version}
    python setup.py test
}

package() {
    cd ${_pkg}-${version}
    python setup.py install --root="${pkgdir}" --skip-build --optimize=1
    install -Dm644 LICENSE.rst -t "${pkgdir}"/usr/share/licenses/${name}/
}

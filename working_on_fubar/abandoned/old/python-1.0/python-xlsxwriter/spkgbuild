# Maintainer: Andrzej Giniewicz <gginiu@gmail.com>

name=python-xlsxwriter
version=1.3.7
release=1
pkgdesc="A Python module for creating Excel XLSX files"
url="https://github.com/jmcnamara/XlsxWriter"
depends=('python')
makedepends=('python-setuptools')
source=("${name}-${version}.tar.gz::https://github.com/jmcnamara/XlsxWriter/archive/RELEASE_${version}.tar.gz")
sha256sums=('b08a1b30cde383cf3b09b50fa18fbfca28ec977e5df9ffab89f01a2ca93be2c1')

build() {
  cd "$srcdir"/XlsxWriter-RELEASE_${version}
  python setup.py build
}

package() {
  cd "$srcdir"/XlsxWriter-RELEASE_${version}
  python setup.py install --skip-build --root="$pkgdir" --optimize=1
  install -D -m644 "LICENSE.txt" "$pkgdir/usr/share/licenses/$name/LICENSE"
}

name=python-frozendict
version=1.2
release=8

pkgdesc='An immutable dictionary'
url='https://pypi.python.org/pypi/frozendict/'

depends=('python' 'python-setuptools')

source=("https://pypi.org/packages/source/f/frozendict/frozendict-$version.tar.gz")

md5sums=('483ce6ddfe68ca197bc123aaafebf9ab')

build() {
	cd "$srcdir"/frozendict-$version
	python setup.py build
}

package() {
	cd frozendict-$version
	python setup.py install --root="$pkgdir" --optimize=1 --skip-build

	install -Dm644 LICENSE.txt "$pkgdir"/usr/share/licenses/$name/LICENSE.txt
}

# vim: set ts=4 sw=4 tw=0 ft=PKGBUILD :

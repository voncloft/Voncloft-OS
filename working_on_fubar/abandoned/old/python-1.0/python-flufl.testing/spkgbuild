# Maintainer: David Runge <dvzrv@archlinux.org>

_name=flufl.testing
name=python-flufl.testing
version=0.8
release=3
pkgdesc="Random collection of testing helpers"
url="https://gitlab.com/warsaw/flufl.testing"
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz"{,.asc})
sha512sums=('edf491db72cccafef58e08b810e4c29962d14716cda3318a892a3ca36095b95477e7564aa4fe8eb4f3bd7cd9e7896f82282dd2d3a67900932848f1dc265cea61'
            'SKIP')
validpgpkeys=('8417157EDBE73D9EAC1E539B126EB563A74B06BF') # Barry Warsaw <barry@warsaw.us>

prepare() {
  mv -v "${_name}-${version}" "$name-$version"
}

build() {
  cd "$name-$version"
  python setup.py build
}

package() {
  cd "$name-$version"
  python setup.py install --skip-build \
    --optimize=1 \
    --prefix=/usr \
    --root="${pkgdir}"
  install -vDm 644 {NEWS,README}.rst -t "${pkgdir}/usr/share/doc/${name}"
}

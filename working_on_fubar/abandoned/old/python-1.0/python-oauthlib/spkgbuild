# Maintainer: Massimiliano Torromeo <massimiliano.torromeo@gmail.com>

name=python-oauthlib
version=3.1.0
release=6
_libname=oauthlib
pkgdesc="A generic, spec-compliant, thorough implementation of the OAuth request-signing logic"
url="https://github.com/idan/oauthlib"
source=(https://files.pythonhosted.org/packages/source/${_libname:0:1}/$_libname/$_libname-$version.tar.gz)
depends=(python-cryptography)
makedepends=(python-setuptools)
sha256sums=('bee41cc35fcca6e988463cacc3bcb8a96224f470ca547e697b604cc697b2f889')

build() {
	cd "$srcdir/$_libname-$version"
	python setup.py build
}

package_python-oauthlib() {
	cd "$srcdir/$_libname-$version"
	python setup.py install --skip-build -O1 --root="$pkgdir"
	install -m0644 -D "LICENSE" "$pkgdir/usr/share/licenses/$name/LICENSE"
	chmod -R a+r "$pkgdir/usr/lib"
}

name=python-botocore
version=1.19.63
release=1
pkgdesc='A low-level interface to a growing number of Amazon Web Services'
url="https://github.com/boto/botocore"
depends=('python-dateutil' 'python-jmespath' 'python-docutils' 'python-urllib3')
makedepends=('python-setuptools')
source=($name-$version.tar.gz::$url/archive/$version.tar.gz)
md5sums=('023110c963261866291b604c571cbcda')

build() {
  cd botocore-$version
  python setup.py build
}

package() {
  cd botocore-$version
  python setup.py install --root="$pkgdir" --optimize=1
  install -Dm644 LICENSE.txt "$pkgdir"/usr/share/licenses/$name/LICENSE
}

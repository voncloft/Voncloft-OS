# description : Write Perl subroutines in other languages
# depends : perl>=5.10.0 perl-parse-recdescent>=1.8

name=perl-inline
version=0.83
release=2
url=https://search.cpan.org/dist/Inline
source="https://cpan.metacpan.org/authors/id/T/TI/TINITA/Inline-$version.tar.gz"
options="!checksum"
md5sums=ba972c6a1281287efd5b7c9b37c0a929

build-delete {
   cd  $sr cdir/Inline-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
   cd  $sr cdir/Inline-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

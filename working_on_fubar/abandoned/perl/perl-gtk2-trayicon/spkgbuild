# description : Perl interface to the EggTrayIcon library
# depends : gtk2-perl

name=perl-gtk2-trayicon
version=0.06
release=20
url=https://search.cpan.org/dist/Gtk2-TrayIcon/
make# depends : perl-extutils-pkgconfig perl-extutils-depends
source="https://downloads.sourceforge.net/sourceforge/gtk2-perl/Gtk2-TrayIcon-${version}.tar.gz"
options="!checksum"
md5sums=522c328f14681a25d76eeaf317e05049

build-delete {
   cd  Gtk2-TrayIcon-${version}
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
   cd  Gtk2-TrayIcon-${version}
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

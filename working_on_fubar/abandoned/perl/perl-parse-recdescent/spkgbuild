# description : Recursive descent parser generator
# depends : perl>=5.10.0

name=perl-parse-recdescent
version=1.967015
release=2
url=https://search.cpan.org/dist/Parse-RecDescent
make# depends : perl-module-build
LC_NUMERIC=C
provides=perl-parse-recdescent=`printf %.6f ${version}`
source="https://search.cpan.org/CPAN/authors/id/J/JT/JTBRAUN/Parse-RecDescent-$version.tar.gz"
options="!checksum"
sha256sums=1943336a4cb54f1788a733f0827c0c55db4310d5eae15e542639c9dd85656e37

build-delete {
   cd  $sr cdir/Parse-RecDescent-$version
  perl Build.PL installdirs=vendor destdir=$PKG/
  perl Build
}

build() {
   cd  $sr cdir/Parse-RecDescent-$version
  perl Build install
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

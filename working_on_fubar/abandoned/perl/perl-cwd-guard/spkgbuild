# description : Temporary changing working directory chdir
# depends : perl

name=perl-cwd-guard
version=0.05
release=6
url=https://search.cpan.org/dist/Cwd-Guard/
make# depends : perl-module-build
check# depends : perl-test-requires
source="https://search.cpan.org/CPAN/authors/id/K/KA/KAZEBURO/Cwd-Guard-$version.tar.gz"
options="!checksum"
md5sums=3d9c31722ab475fcb095716fe80c6bb1

build-delete {
   cd $sr cdir/Cwd-Guard-$version
  perl Build.PL installdirs=vendor
  ./Build
}

check {
   cd $sr cdir/Cwd-Guard-$version
  ./Build test
}

build() {
   cd $sr cdir/Cwd-Guard-$version
  ./Build install destdir=$PKG
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

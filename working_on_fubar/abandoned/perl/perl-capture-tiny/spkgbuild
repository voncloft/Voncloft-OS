# description : Capture STDOUT and STDERR from Perl, XS or external programs
# depends : perl

name=perl-capture-tiny
_realname=Capture-Tiny
version=0.48
release=4
url=https://metacpan.org/release/Capture-Tiny
source="https://cpan.metacpan.org/authors/id/D/DA/DAGOLDEN/$_realname-$version.tar.gz"
options="!checksum"
sha256sums=6c23113e87bad393308c90a207013e505f659274736638d8c79bac9c67cc3e19

build-delete {
   cd $_realname-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
   cd $_realname-$version
  unset PERL5LIB PERL_MM_OPT PERL_MB_OPT PERL_LOCAL_LIB_ROOT
  export PERL_MM_USE_DEFAULT=1
  make test
}

build() {
   cd $_realname-$version
  make DESTDIR=$PKG install
}

# vim:set sw=2 et:
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

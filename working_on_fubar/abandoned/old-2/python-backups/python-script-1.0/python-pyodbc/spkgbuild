# description : ODBC module for Python
# depends : python unixodbc

url=https://github.com/mkleehammer/pyodbc
name=python-pyodbc
_srcname=pyodbc
version=4.0.28
release=3

source="https://github.com/mkleehammer/pyodbc/archive/${version}.tar.gz"
options="checksum"

build() {
	 cd ${srcdir}/${_srcname}-${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : A totally different take on container boilerplate
  # depends : python
  # depends : python2

url=https://github.com/ionelmc/python-fields
name=python-fields python2-fields
version=5.0.0
release=9

source="https://github.com/ionelmc/python-fields/archive/v$version.tar.gz"

build() {
   cd $srcdir/python-fields-$version
   cd $srcdir/python-fields-$version-py2
   cd python-fields-$version
   cd python-fields-$version-py2
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

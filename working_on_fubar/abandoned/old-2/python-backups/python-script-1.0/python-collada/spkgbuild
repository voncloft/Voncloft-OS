# description : python library for reading and writing collada documents
# depends : python python-dateutil python-numpy python-lxml

url=https://github.com/pycollada/pycollada
name=python-collada
version=0.7.1
release=1

source="https://github.com/pycollada/pycollada/archive/v${version}.tar.gz"
options="checksum"

build() {
   cd pycollada-${version}
   cd pycollada-${version}/collada
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

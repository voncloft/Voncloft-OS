# description : Simple user session protection for Flask applications
# depends : python python-flask

_name=flask-paranoid
url=https://github.com/miguelgrinberg/flask-paranoid/
_name=flask-paranoid
name=python-flask-paranoid
version=0.2
release=6

source="https://github.com/miguelgrinberg/flask-paranoid/archive/v${version}.tar.gz"
options="checksum"

build() {
   cd ${_name}-${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

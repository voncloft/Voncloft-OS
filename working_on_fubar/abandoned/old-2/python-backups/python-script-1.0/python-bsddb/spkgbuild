name=python-bsddb
_name=bsddb3
version=6.2.7
release=3

source="https://files.pythonhosted.org/packages/source/b/$_name/$_name-$version.tar.gz"
options="checksum"

build() {
   cd $_name-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

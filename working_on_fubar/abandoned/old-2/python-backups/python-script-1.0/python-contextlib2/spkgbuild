# description : Backport of the standard librarys contextlib module to earlier Python versions
  # depends : python
  # depends : python2

_name=contextlib2
url=https://github.com/jazzband/contextlib2
_name=contextlib2
name=python-$_name python2-$_name
version=0.6.0.post1
release=3

source="$url/archive/v$version.tar.gz"

build() {
   cd $_name-$version
   cd $_name-$version-py2
   cd $srcdir/$_name-$version
   cd $srcdir/$_name-$version-py2
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : High-level interface to Kerberos
# depends : python krb5

url=https://github.com/02strich/pykerberos
name=python-pykerberos
version=1.2.1
release=7

source="https://github.com/02strich/pykerberos/archive/v$version.tar.gz"
options="checksum"

build() {
   cd $srcdir/pykerberos-$version
   cd pykerberos-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

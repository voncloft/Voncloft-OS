# description : Safe code refactoring for modern Python.
# depends : python-attrs python-click python-fissix python-setuptools python-sh

_name=bowler
url=https://github.com/facebookincubator/${_name}
_name=bowler
name=python-bowler
version=0.8.0
release=5

source="https://files.pythonhosted.org/packages/source/${_name:0:1}/${_name}/${_name}-${version}.tar.gz"
options="checksum"

build() {
     cd ${srcdir}/${_name}-${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : A module with the CRC8 algorithm for Python
# depends : python

url=https://github.com/niccokunzmann/crc8
name=python-crc8
version=0.1.0
release=2

source="https://github.com/niccokunzmann/crc8/archive/v$version.tar.gz"
options="checksum"

build() {
   cd crc8-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Utilize 12factor inspired environment variables to configure your Django application
# depends : python

_name=django-environ
url=https://github.com/joke2k/django-environ
_name=django-environ
name=python-django-environ
version=0.4.5
release=5

source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz"
options="checksum"

build() {
   cd $name-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

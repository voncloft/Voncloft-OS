build()-delete {
   cd doublex-expects-$version
  python setup.py build
}

check {
   cd doublex-expects-$version
  mamba
}

options="!checksum"

build() {
   cd doublex-expects-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}

# description : Fast, Extensible Progress Meter
# depends : python

name=python-tqdm
version=4.56.0
release=1
url=https://github.com/tqdm/tqdm
make# depends : python-setuptools-scm
check# depends : python-pytest python-pytest-asyncio python-pytest-timeout python-numpy
              python-pandas python-tensorflow
source="$name-$version.tar.gz::https://github.com/tqdm/tqdm/archive/v$version.tar.gz"
sha512sums=8ed1922b7e4eb4c26425f028bcc70d8616534d0fa3583fb563dad984055a4ba08d748a15840cfedc4db4a463436c719cf143352f69b7718f96d7bd67e5043be2

export SETUPTOOLS_SCM_PRETEND_VERSION=$version

build()-delete {
   cd tqdm-$version
  python setup.py build
}

check {
   cd tqdm-$version
  python setup.py egg_info
  python -m pytest
}

options="!checksum"

build() {
   cd tqdm-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
  install -D -m644 LICENCE $PKG/usr/share/licenses/$name/LICENCE
}


# description : "Parsel is a library to extract data from HTML and XML using XPath and CSS selectors"
# depends : python-cssselect python-lxml python-six python-w3lib

name=python-parsel
version=1.6.0
release=3
url="https://github.com/scrapy/parsel"
make# depends : python-pytest python-sybil python-setuptools
source="$name-$version.tar.gz::https://github.com/scrapy/parsel/archive/v$version.tar.gz"
sha512sums=d3161522e1102cceeb1f29ab020b33019d4ac7f096cfab8fbe40f54073e49afc24f02aa54206d86f56c8f92e3db2d0d2f8a3dbdfa6417492cf299201f2ae6604

build()-delete {
   cd parsel-$version
  python setup.py build
}

check {
   cd parsel-$version
  python -m pytest
}

options="!checksum"

build() {
   cd parsel-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}

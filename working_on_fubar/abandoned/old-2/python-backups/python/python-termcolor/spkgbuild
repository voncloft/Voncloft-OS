# description : "ANSII Color formatting for output in terminal"
# depends : python

name=python-termcolor
version=1.1.0
release=10
url="https://pypi.python.org/pypi/termcolor"
source=https://pypi.python.org/packages/source/t/termcolor/termcolor-$version.tar.gz
sha256sums=1d6d69ce66211143803fbc56652b41d73b4a400a2891d7bf7a1cdf4c02de613b

options="!checksum"

build() {
   cd "$srcdir"/termcolor-$version
  python setup.py build
  python setup.py install --root=$PKG
}

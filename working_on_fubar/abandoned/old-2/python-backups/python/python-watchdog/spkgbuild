# description : "Python API and shell utilities to monitor file system events"
# depends : python-pathtools python-yaml python-argh

name=python-watchdog
version=0.10.5
release=1
url="https://pypi.python.org/pypi/watchdog"
make# depends : python-setuptools
check# depends : python-pytest-cov python-pytest-timeout python-pytest-runner
source=$name-$version.tar.gz::https://github.com/gorakhargosh/watchdog/archive/v$version.tar.gz
sha512sums=b107fe23b123360ba8ad049576bdbbb40061c70157bee0663bcf9ee9a9a9f65b95234540a477ba9ae6d617199ca1d77fe30b3b9dc4868bfef08a6b9099d6fe51

build()-delete {
   cd watchdog-$version
  python setup.py build
}

check {
   cd watchdog-$version
  python setup.py pytest
}

options="!checksum"

build() {
   cd watchdog-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}


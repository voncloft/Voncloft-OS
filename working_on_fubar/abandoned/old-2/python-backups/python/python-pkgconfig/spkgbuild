# description : "Python module to interface with the pkg-config command line tool"
# depends : python

name=python-pkgconfig
version=1.5.1
release=6
url="https://github.com/matze/pkgconfig"
make# depends : python-setuptools
source="https://pypi.io/packages/source/p/pkgconfig/pkgconfig-$version.tar.gz"
sha256sums=97bfe3d981bab675d5ea3ef259045d7919c93897db7d3b59d4e8593cba8d354f

options="!checksum"

build() {
   cd pkgconfig-$version
  
  python setup.py build
  python setup.py install   --root=$PKG --optimize=1
}

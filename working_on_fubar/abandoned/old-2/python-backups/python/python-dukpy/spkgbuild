# description : "Python bindings for the duktape embeddable JavaScript engine"
# depends : python

name=python-dukpy
version=0.3
release=6
url="https://github.com/kovidgoyal/dukpy"
make# depends : python-setuptools
source="dukpy-${version}.tar.gz::${url}/archive/v${version}.tar.gz"
sha256sums=cc78c39ebba51f381c623b164cfb7dcf3caddf515fe7094bc53b7eca5d4e435e

build()-delete {
   cd "${srcdir}/dukpy-${version}"

  python setup.py build
}

package_python-dukpy {
   cd "dukpy-${version}"
  python setup.py build
  python setup.py install--root=$PKG -optimize=1 

}

check {
   cd "dukpy-${version}"
  python setup.py test
}

# description : EditorConfig File Locator and Interpreter for Python
# depends : python

name=python-editorconfig
version=0.12.3
release=1
url=https://github.com/editorconfig/editorconfig-core-py
make# depends : python-setuptools
source="https://pypi.io/packages/source/E/EditorConfig/EditorConfig-$version.tar.gz"
sha512sums=2cb909559dbcf0debab1ee41104dcfdede22aa5e74fcba6ad7b6d5317249ccf7f78b14b4bca4c75d8c4d4c226f5ea18349504fb07eff90ee8e157d67482a99f8

build()-delete {
   cd "$srcdir"/EditorConfig-$version
  python setup.py build
}

options="!checksum"

build() {
   cd EditorConfig-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1

  # FS#55201
  mv $PKG/usr/bin/editorconfig{,3}
}


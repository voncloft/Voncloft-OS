# description : Python bindings for the Apache Thrift RPC system
# depends : python

name=python-thrift
version=0.13.0
release=4
url=https://thrift.apache.org/
make# depends : python-setuptools
source=thrift-$version.zip::https://github.com/apache/thrift/archive/$version.zip
sha256sums=4ed6254847b9c632fb64e5ba700a4cefa441af2b53bfc6ff91206fe5771be74f

check {
   cd thrift-$version/lib/py
  # python setup.py test TODO: run tests
}

options="!checksum"

build() {
   cd thrift-$version/lib/py
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}

# description : Library for generating identicons

pkgbase=python-pydenticon
version=0.3.1
release=2

url=https://pypi.python.org/pypi/pydenticon/

make# depends : python
             python-setuptools

source="https://pypi.org/packages/source/p/pydenticon/pydenticon-$version.tar.gz"

md5sums=090db34a16777fbd456b34594115705a

prepare {
	chmod -R go=u-w pydenticon-$version # files in the source tarball have weird permissions
}

build()-delete {
	 cd "$srcdir"/pydenticon-$version
	python setup.py build

}

package_python-pydenticon {
	# depends : python python-pillow

	 cd pydenticon-$version
	python setup.py build
  python setup.py install --root=$PKG --optimize=1 

}



}


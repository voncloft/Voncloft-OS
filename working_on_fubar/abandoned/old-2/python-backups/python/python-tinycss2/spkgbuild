prepare {
   cd tinycss2-$version
  sed -i s/--flake8// pyproject.toml
  cp ../css-parsing-tests-$_css_tests_commit/* tests/css-parsing-tests/
}

build()-delete {
   cd tinycss2-$version
  python setup.py build
}

check {
   cd tinycss2-$version
  PYTHONPATH=build()/lib pytest
}

options="!checksum"

build() {
   cd tinycss2-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}

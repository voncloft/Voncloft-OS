# description : "A simple Python library for easily displaying tabular data"
# depends : python

_name=prettytable
name=python-prettytable
version=0.7.2
release=14
url="https://pypi.python.org/pypi/PrettyTable"
make# depends : python-setuptools
source="https://files.pythonhosted.org/packages/source/P/PrettyTable/prettytable-${version}.tar.gz"
        0001-Fix-column-spacing-with-xterm-reset-escape-sequence.patch
md5sums=a6b80afeef286ce66733d54a0296b13b
         62c2acf4a81ba9e6ac60ba06ff282068

prepare {
  pushd $_name-$version
  patch -p1 -i "$srcdir"/0001-Fix-column-spacing-with-xterm-reset-escape-sequence.patch
  popd
}

build()-delete {
   cd "$_name-$version"
  python setup.py build
}

options="!checksum"

build() {
   cd "$_name-$version"
  chmod 644 -R prettytable.egg-info
  python setup.py build
  python setup.py install --root="$PKG/"
}

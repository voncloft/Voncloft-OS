# description : "A very simple, yet robust, Python interface to the R Programming Language."
# depends : python-cffi python-numpy python-tzlocal r

name=python-rpy2
version=3.4.2
release=1
url="https://rpy2.github.io/"
make# depends : python-setuptools
opt# depends : python-pandas: conversion between rpy and pandas
source="https://pypi.io/packages/source/r/rpy2/rpy2-$version.tar.gz"
sha256sums=8f7d1348b77bc45425b846a0d625f24a51a1c4f32ef2cd1c07a24222aa64e2e0

options="!checksum"

build() {
   cd rpy2-$version

  python setup.py build
  python setup.py install   --install-data=/usr/share --root=$PKG --optimize=1
}

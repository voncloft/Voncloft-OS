build()-delete {
   cd python-magnumclient-$version
  python setup.py build
}

check {
   cd python-magnumclient-$version
  stestr run
}

options="!checksum"

build() {
   cd python-magnumclient-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}

# description : "cairocffi is a CFFI-based drop-in replacement for Pycairo, a set of Python bindings and object-oriented API for cairo."
# depends : python-cffi cairo python-xcffib

name=python-cairocffi
version=1.2.0
release=3
url="https://cairocffi.readthedocs.io/"
make# depends : python-setuptools gdk-pixbuf2
check# depends : python-pytest-runner python-pytest-cov python-pytest-flake8
              python-pytest-isort python-numpy
opt# depends : gdk-pixbuf2: for cairocffi.pixbuf
source="$name-$version.tar.gz::https://github.com/Kozea/cairocffi/archive/v${version}.tar.gz"
sha512sums=06741670d0e10be6d762fa4d85c8dfb4d26827f5e2c5863ca6301ea3feeacb52bb0f2c86fcf095894f99523a22624142e05ce6035ad07ec07555b18a38f7a79f


build()-delete {
   cd cairocffi-$version
  python setup.py build
}

check {
   cd cairocffi-$version
  python setup.py pytest
}

options="!checksum"

build() {
   cd cairocffi-$version
  python setup.py build
  python setup.py install --root=$PKG   -O1 

}

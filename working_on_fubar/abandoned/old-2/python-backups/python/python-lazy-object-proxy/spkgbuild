# description : A fast and thorough lazy object proxy
# depends : "python"

name=python-lazy-object-proxy
version=1.5.2
release=2
url="https://github.com/ionelmc/python-lazy-object-proxy"
make# depends : python-setuptools
check# depends : python-pytest-benchmark python-pytest-runner
source="$name-$version.tar.gz::https://github.com/ionelmc/python-lazy-object-proxy/archive/v$version.tar.gz"
sha512sums=3be8e0ab59df609ff3d88a58a45462a10b3b8ca6a8e325f524ad1a75da85f7125b307d62630a223647f8ff9d06da4756653bff63755d258d7b0174783c216924

build()-delete {
   cd "$srcdir"/python-lazy-object-proxy-$version
  python setup.py build
}

check {
   cd python-lazy-object-proxy-$version
  python setup.py pytest --addopts --ignore=src
}

options="!checksum"

build() {
   cd python-lazy-object-proxy-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}

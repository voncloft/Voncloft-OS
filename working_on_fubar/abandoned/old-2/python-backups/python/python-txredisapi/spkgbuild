make# depends : python-setuptools

source="https://pypi.org/packages/source/t/txredisapi/txredisapi-$version.tar.gz"

sha256sums=e6cc43f51e35d608abdca8f8c7d20e148fe1d82679f6e584baea613ebec812bb

build()-delete {
	 cd "$srcdir"/txredisapi-$version
	python setup.py build
}

options="!checksum"

build() {
	 cd txredisapi-$version
	python setup.py build
  python setup.py install --root=$PKG --optimize=1 
}


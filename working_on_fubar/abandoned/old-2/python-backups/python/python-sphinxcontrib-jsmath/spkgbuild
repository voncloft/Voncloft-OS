# description : Sphinx extension which renders display math in HTML via JavaScript

_name=sphinxcontrib-jsmath
name=python-sphinxcontrib-jsmath
version=1.0.1
release=6
url=https://github.com/sphinx-doc/sphinxcontrib-jsmath
make# depends : python-setuptools
check# depends : python-pytest python-sphinx
source="https://files.pythonhosted.org/packages/source/${_name::1}/$_name/$_name-$version.tar.gz"
sha256sums=a9925e4a4587247ed2191a22df5f6970656cb8ca2bd6284309578f2153e0c4b8

build()-delete {
   cd $_name-$version
  python setup.py build
}

check {
   cd $_name-$version
  pytest
}

options="!checksum"

build() {
   cd $_name-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1 
}


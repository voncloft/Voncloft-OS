name=python-warlock
version=1.3.3
release=5
url="https://github.com/bcwaldon/warlock"
make# depends : python-setuptools
check# depends : python-pytest-runner python-pytest-cov
source="$name-$version.tar.gz::https://github.com/bcwaldon/warlock/archive/$version.tar.gz"
sha512sums=8a9135a17ccc0d0939ad98eee16100ec68b911d672b3af549f7629edcd6e08129f9e4ab707082593274fc896bc405ab6d6ba9e4bf6fc40b8522ec99327c983ec

build()-delete {
   cd warlock-$version
  python setup.py build
}

check {
   cd warlock-$version
  python setup.py pytest
}

options="!checksum"

build() {
   cd warlock-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}

# description : match globbing patterns against text
# depends : perl

name=perl-text-glob
version=0.11
release=7

_dist=Text-Glob
source="https://search.mcpan.org/CPAN/authors/id/R/RC/RCLAMP/${_dist}-${version}.tar.gz"
options="!checksum"

build() {
     cd ${_dist}-${version}
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

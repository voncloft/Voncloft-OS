# description : Perl Module: Keyed-Hashing for Message Authentication.
# depends : perl-digest-sha1 perl

name=perl-digest-hmac
_realname=Digest-HMAC
version=1.03
release=9

_realname=Digest-HMAC
source="https://www.cpan.org/authors/id/G/GA/GAAS/Digest-HMAC-$version.tar.gz"
options="!checksum"

build() {
   cd Digest-HMAC-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

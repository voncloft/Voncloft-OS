# description : Test whether code exits without terminating testing.
# depends : perl-return-multilevel

name=perl-test-exit
version=0.11
release=3

source="https://cpan.metacpan.org/authors/id/A/AR/ARODLAND/Test-Exit-$version.tar.gz"
options="!checksum"

build() {
   cd Test-Exit-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

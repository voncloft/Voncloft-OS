# description : AMF support for Python
# depends : python-defusedxml

url=https://github.com/hydralabs/pyamf
name=  # python-pyamf Python 3 version doesnt work so far
version=0.8.0
release=4

source="https://files.pythonhosted.org/packages/source/P/PyAMF/PyAMF-${version}.tar.gz"
options="checksum"

build() {
   cd PyAMF-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : sets up password for mariadb
# depends : mariadb-core

name=mariadb-setup
version=1
release=1


build() {
mkdir -pv $PKG/usr
install -v -m755 -o mysql -g mysql -d /run/mysqld &&
/usr/bin/mysqld_safe --user=mysql 2>&1 >/dev/null &
/usr/bin/mysqladmin -u root password

/usr/bin/mysqladmin -p shutdown
}

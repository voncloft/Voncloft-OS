# description : visual graphic library
# depends : libxml2

name=wayland
version=1.19.0
release=1

source="https://wayland.freedesktop.org/releases/wayland-1.19.0.tar.xz"
options="!checksum"

build() {
	./configure --prefix=/usr    \
            --disable-static \
            --disable-documentation

            make
            make DESTDIR=$PKG install
}


# description : classes for displaying svg files
# depends : qt5

name=qt5-svg
version=5.12.12
release=1

source="https://invent.kde.org/qt/qt/qtsvg/-/archive/v$version/qtsvg-v$version.tar.gz"
options="!checksum"

build() {
cd qtsvg
mkdir -p build
cd build
qmake ..
make
make INSTALL_ROOT=$PKG install
 find "$PKG/usr/lib" -type f -name '*.prl' \
    -exec sed -i -e '/^QMAKE_PRL_BUILD_DIR/d' {} \;
}

# description : "A lightweight unicode templating language"
# depends : python

name=python-tempita
version=0.5.2
release=3
epoch=1
url="http://pythonpaste.org/tempita/"
make# depends : python-distribute
source=https://pypi.python.org/packages/source/T/Tempita/Tempita-${version}.tar.gz
sha256sums=cacecf0baa674d356641f1d406b8bff1d756d739c46b869a54de515d08e6fc9c

options="!checksum"

build() {
   cd Tempita-${version}
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}

release=6
url=https://github.com/nphilipp/python-slip
         python-six
make# depends : python-setuptools
source="https://github.com/nphilipp/python-slip/releases/download/python-slip-${version}/python-slip-${version}.tar.bz2"
sha256sums=c726c086f0dd93a0ac7a0176f383a12af91b6657b78a301e3f5b25d9f8d4d10b

build()-delete {
   cd python-slip-${version}

  make
}

options="!checksum"

build() {
   cd python-slip-${version}

  python setup.py build
  python setup.py install--root=$PKG  --optimize=1
}


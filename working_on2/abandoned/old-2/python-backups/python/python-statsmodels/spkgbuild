sha256sums=96717f27007713166367dcb77b401d63d435c311c5e14d6b8f76e04afa5f405b

build()-delete {
   cd "$srcdir"/statsmodels-${version}
  python setup.py build
}

options="!checksum"

build() {
   cd "$srcdir"/statsmodels-${version}

  python setup.py build
  python setup.py install  --root=$PKG --optimize=1

}

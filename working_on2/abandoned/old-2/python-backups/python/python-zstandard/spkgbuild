# description : "Python bindings to the Zstandard zstd compression library"
# depends : python
name=python-zstandard
_name=zstandard
version=0.15.1
release=1
url="https://github.com/indygreg/python-zstandard"
make# depends : python-setuptools
check# depends : python-hypothesis
opt# depends : python-cffi
source="$name-$version.tar.gz::https://github.com/indygreg/python-zstandard/archive/$version.tar.gz"
sha256sums=8fb99ccd8a96d8dd171944f2c837ed0fa28a58049c417adffd6fe8690cf6b429

build()-delete {
     cd "${srcdir}/${name}-${version}"
    python setup.py build_ext
}

check {
     cd "${srcdir}/${name}-${version}"
    python setup.py build_ext --inplace
    python setup.py test
}

options="!checksum"

build() {
     cd "${srcdir}/${name}-${version}"
    python setup.py build
  python setup.py install--root=$PKG -optimize=1
}

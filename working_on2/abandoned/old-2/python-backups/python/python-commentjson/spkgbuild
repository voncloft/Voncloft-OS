# description : "Add Python and JavaScript style comments in your JSON files"
# depends : python-lark-parser

name=python-commentjson
version=0.9.0
release=3
url="https://github.com/vaidik/commentjson"
make# depends : python-setuptools
check# depends : python-tests
source="$name-$version.tar.gz::https://github.com/vaidik/commentjson/archive/v$version.tar.gz"
sha512sums=cd3d28adecbc445ed3faed7847c65a23829f408cf8aa3fa85544a0f0cf9fa5544b8aff560725cf51921f249123daf9ce9953069e99ca64a312bb4bff652512fe

prepare {
   cd commentjson-$version
  sed -i s/,<0/,<1/ setup.py
}

build()-delete {
   cd commentjson-$version
  python setup.py build
}

check {
   cd commentjson-$version
  python setup.py test
}

options="!checksum"

build() {
   cd commentjson-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1

}

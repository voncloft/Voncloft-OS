make# depends : freetype2 python-pillow mercurial
source=https://files.pythonhosted.org/packages/source/${_origname::1}/${_origname}/${_origname}-${version}.tar.gz
sha256sums=2fd3305a75502d11942a9629cf6af96660a508f19adc4abaac5549909d1db1b3

build()-delete {
     cd ${_origname}-${version}
    python setup.py build
}

check {
     cd ${_origname}-${version}
    python setup.py tests
    rm tests/_i_am_actually_a_*
}

options="!checksum"

build() {
     cd ${_origname}-${version}
    python setup.py build
  python setup.py install --root=$PKG --optimize=1 
}

# description : "A plugin to make nose behave better"
# depends : python-nose

name=python-nose-fixes
version=1.3
release=5
url="https://github.com/cjw296/nose_fixes"
make# depends : python-setuptools git
check# depends : python-testfixtures
source="git+https://github.com/cjw296/nose_fixes.git#tag=$version"
sha512sums=SKIP

build()-delete {
   cd "$srcdir/nose_fixes"
  python setup.py build
}

check {
   cd "$srcdir/nose_fixes"
  nosetests3
}

options="!checksum"

build() {
   cd nose_fixes
  python setup.py build
  python setup.py install--root=$PKG -optimize=1
}

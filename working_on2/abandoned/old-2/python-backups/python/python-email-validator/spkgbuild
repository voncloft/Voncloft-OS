# description : "A robust email syntax and deliverability validation library for Python 2.x/3.x."
# depends : python-dnspython python-idna

name=python-email-validator
version=1.1.2
release=3
url="https://github.com/JoshData/python-email-validator"
make# depends : python-setuptools
check# depends : python-pytest
source="$name-$version.tar.gz::https://github.com/JoshData/python-email-validator/archive/v$version.tar.gz"
sha512sums=b40f8ecd65a9a5945a1a84b174398fc495afccd27ad5fcd7b4a03ecd26bcff6dd6ac3b5f75ac200cf2647b92d4defb25afe1dda28f82ed86bd8c2bd82708d0aa

build()-delete {
   cd python-email-validator-$version
  python setup.py build
}

check {
   cd python-email-validator-$version
  python -m pytest
}

options="!checksum"

build() {
   cd python-email-validator-$version
  python setup.py build
  python setup.py install --root="$PKG/" --optimize=1
}


# description : Sphinx extension which outputs Devhelp document

_name=sphinxcontrib-devhelp
name=python-sphinxcontrib-devhelp
version=1.0.2
release=3
url=https://github.com/sphinx-doc/sphinxcontrib-devhelp
make# depends : python-setuptools
check# depends : python-pytest python-sphinx
source="https://files.pythonhosted.org/packages/source/${_name::1}/$_name/$_name-$version.tar.gz"
sha256sums=ff7f1afa7b9642e7060379360a67e9c41e8f3121f2ce9164266f61b9f4b338e4

build()-delete {
   cd $_name-$version
  python setup.py build
}

check {
   cd $_name-$version
  pytest
}

options="!checksum"

build() {
   cd $_name-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1 
}


version {
   cd django-modeltranslation

  git describe --tags | sed s/^v//
}

build()-delete {
   cd django-modeltranslation

  python setup.py build
}

options="!checksum"

build() {
   cd django-modeltranslation

  python setup.py build
  python setup.py install--root=$PKG -optimize=1 
}


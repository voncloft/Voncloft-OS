# description : "Snowball stemming library collection for Python"
# depends : python

name=python-snowballstemmer
version=2.1.0
release=1
url=https://snowballstem.org
opt# depends : python-pystemmer: for improved performance
make# depends : python-setuptools
source="https://pypi.python.org/packages/source/s/snowballstemmer/snowballstemmer-$version.tar.gz"
sha512sums=e0550d3389074d7686d26397ff2289519cd8b26cf7090fe781d6407d1c2b95f912347d70cd25e02d6016c454ad6c5cf6d648e54ef87161328ac57bc1ceaf7826

build()-delete {
   cd "$srcdir"/snowballstemmer-$version
  python setup.py build
}

check {
   cd "$srcdir"/snowballstemmer-$version/src
  PYTHONPATH=. python sample/testapp.py english "whats this"
}

options="!checksum"

build() {
   cd "$srcdir"/snowballstemmer-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1

  install -Dm644 COPYING $PKG/usr/share/licenses/$name/COPYING
}

# description : "Helpers for better testing"
# depends : python-mock

_pypiname=exam
name=python-exam
version=0.10.6
release=8
url="https://pypi.python.org/pypi/exam"
make# depends : python-setuptools git
check# depends : python-nose
source="git+https://github.com/Fluxx/exam.git#tag=$version"
md5sums=SKIP

build()-delete {
   cd "$srcdir/exam"
  python setup.py build
}

check {
   cd "$srcdir/exam"
  python setup.py test
}

options="!checksum"

build() {
   cd "$srcdir/$_pypiname"
  python setup.py build
  python setup.py install --root="$PKG/" --optimize=1
}


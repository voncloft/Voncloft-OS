name=python-breathe
version=4.26.1
release=2
url="https://breathe.readthedocs.org/en/latest/"
make# depends : git python-setuptools
check# depends : python-pytest
source="git+https://github.com/michaeljones/breathe#tag=v${version}?signed"
sha512sums=SKIP
validpgpkeys=8AED58021FEACDD5F27BA0E6A72F627716EA9D96 # Melvin Vermeeren <vermeeren@vermwa.re>

check {
   cd breathe
  PYTHONPATH="$PWD" make test
}

build()-delete {
   cd breathe
  python setup.py build
}

package_python-breathe {
   cd "breathe"
  PYTHONHASHSEED=0 python setup.py build
  python setup.py install--root=$PKG --optimize=1

}

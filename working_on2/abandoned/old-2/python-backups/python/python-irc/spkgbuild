build()-delete {
   cd "irc-$version"
  export LC_ALL=en_US.UTF-8
  python setup.py build
}

check {
   cd "irc-$version"
  export LC_ALL=en_US.UTF-8
  pytest .
}

options="!checksum"

build() {
   cd "irc-$version"
  export LC_ALL=en_US.UTF-8
  python setup.py build
  python setup.py install --root=$PKG --optimize=0
}

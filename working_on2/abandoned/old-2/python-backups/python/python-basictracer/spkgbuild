build()-delete {
   cd basictracer-python-$version
  python setup.py build
}

check {
   cd basictracer-python-$version
  pytest
}

options="!checksum"

build() {
   cd basictracer-python-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1

}

# description : Python Authentication-Results headers generation and parsing
# depends : python

name=python-authres
version=1.2.0
release=5
url=https://launchpad.net/authentication-results-python
make# depends : python-setuptools
source="https://files.pythonhosted.org/packages/source/a/authres/authres-$version.tar.gz"
sha256sums=93d1b995ad7ce21e62db649f361048125dd6022563a0ae8a23909465f1fd25b7
 
build()-delete {
   cd authres-$version
  python setup.py build 
}

check {
   cd authres-$version
  python -m authres -v
}

options="!checksum"

build() {
   cd authres-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1 
}

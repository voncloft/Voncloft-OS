# description : "LDAP client API for Python"
# depends : python-pyasn1 python-pyasn1-modules libldap

name=python-ldap
version=3.3.1
release=3
url="https://python-ldap.readthedocs.io/"
make# depends : python-setuptools python-coverage
check# depends : openldap python-pyasn1 python-pyasn1-modules
source="${name}-${version}.tar.gz::https://github.com/python-ldap/python-ldap/archive/${name}-${version}.tar.gz"
sha256sums=014681ee155a61fde50cf3f19a2f85c5c094439da695968f7fcdf75e95db84f9

build()-delete{
   cd "$pkgbase-$pkgbase-$version"
  python setup.py build
}

check{
   cd "$pkgbase-$pkgbase-$version"
  python -m coverage run --parallel setup.py test
}

options="!checksum"

build() {
   cd "$pkgbase-$pkgbase-$version"
  python setup.py build
  python setup.py install --root="$PKG/" --optimize=1 
}

# description : Manage headless displays with Xvfb X virtual framebuffer
# depends : python xorg-server-xvfb

_name=xvfbwrapper
url=https://github.com/cgoldberg/xvfbwrapper
_name=xvfbwrapper
name=python-xvfbwrapper
version=0.2.9
release=6

source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz"

build() {
   cd $name-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

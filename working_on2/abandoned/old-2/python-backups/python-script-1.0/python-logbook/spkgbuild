# depends : python-six

url=https://logbook.readthedocs.io/en/stable/
name=python-logbook
version=1.5.3
release=8

source="https://github.com/mitsuhiko/logbook/archive/$version.tar.gz"
options="checksum"

build() {
   cd $srcdir/logbook-$version
   cd logbook-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

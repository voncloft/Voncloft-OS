# description : Python bindings for the openbabel library
# depends : gcc-libs openbabel=${version}
  depends+=python
  depends+=python2

url=http://openbabel.org/wiki/Python
name=python-openbabel python2-openbabel
version=2.3.2
release=6

source="http://downloads.sourceforge.net/openbabel/openbabel-$version.tar.gz"

build() {
   cd $srcdir/openbabel-$version
   cd $srcdir/openbabel-$version/scripts/python
   cd $srcdir/python2-openbabel-$version/scripts/python
   cd $srcdir/python2-openbabel-$version/scripts/python
   cd python
   cd scripts
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

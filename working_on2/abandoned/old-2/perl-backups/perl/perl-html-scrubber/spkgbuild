# description : Perl extension for scrubbing/sanitizing html
# depends : perl perl-html-parser

name=perl-html-scrubber
version=0.17
release=3

source="https://cpan.metacpan.org/authors/id/N/NI/NIGELM/HTML-Scrubber-$version.tar.gz"
options="!checksum"

build() {
   cd  HTML-Scrubber-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

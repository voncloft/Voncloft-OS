# description : Perl extension for filesystem disk space information
# depends : perl

name=perl-filesys-df
version=0.92
release=11

_perl_namespace=Filesys
_perl_module=Df
source="https://www.cpan.org/modules/by-module/${_perl_namespace}/${_perl_namespace}-${_perl_module}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${_perl_namespace}-${_perl_module}-${version}
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

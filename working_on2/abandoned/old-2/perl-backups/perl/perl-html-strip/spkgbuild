# description : Perl/CPAN Module HTML::Strip
# depends : perl

name=perl-html-strip
version=2.10
release=8

source="https://www.cpan.org/authors/id/K/KI/KILINRAX/HTML-Strip-$version.tar.gz"
options="!checksum"

build() {
   cd HTML-Strip-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

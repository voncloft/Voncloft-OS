# description : a __DIR__ constant for the directory your source file is in
# depends : perl

name=perl-dir-self
version=0.11
release=6

_ddir=Dir-Self-$version
source="https://search.cpan.org/CPAN/authors/id/M/MA/MAUKE/Dir-Self-$version.tar.gz"
options="!checksum"

build() {
   cd $_ddir
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Add pleasant whitespace to a DOM tree
# depends : perl perl-exporter-tiny perl-xml-libxml

name=perl-xml-libxml-prettyprint
version=0.006
release=5

_ddir=XML-LibXML-PrettyPrint-$version
source="https://search.cpan.org/CPAN/authors/id/T/TO/TOBYINK/XML-LibXML-PrettyPrint-$version.tar.gz"
options="!checksum"

build() {
   cd $_ddir
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

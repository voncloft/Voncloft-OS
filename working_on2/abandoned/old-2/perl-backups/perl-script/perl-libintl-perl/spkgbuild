# description : Perl Module: Localization support
# depends : coreutils gettext perl

name=perl-libintl-perl
version=1.32
release=1

source="https://www.cpan.org/authors/id/G/GU/GUIDO/libintl-perl-$version.tar.gz"
options="!checksum"

build() {
   cd libintl-perl-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

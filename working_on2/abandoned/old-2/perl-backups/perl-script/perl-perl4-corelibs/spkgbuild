# description : Libraries historically supplied with Perl 4
# depends : perl

name=perl-perl4-corelibs
version=0.004
release=6

source="https://search.cpan.org/CPAN/authors/id/Z/ZE/ZEFRAM/Perl4-CoreLibs-$version.tar.gz"
options="!checksum"

build() {
   cd Perl4-CoreLibs-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

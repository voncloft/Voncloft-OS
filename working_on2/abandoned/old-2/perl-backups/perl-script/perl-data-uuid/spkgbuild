# description : Globally/Universally Unique Identifiers GUIDs/UUIDs
# depends : perl

_perl_namespace=Data
_perl_module=UUID
name=perl-data-uuid
version=1.221
release=8

source="https://www.cpan.org/modules/by-module/${_perl_namespace}/${_perl_namespace}-${_perl_module}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${_perl_namespace}-${_perl_module}-${version}
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

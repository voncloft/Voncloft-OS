# description : read a file backwards by lines
# depends : perl

_name=File-ReadBackwards
_name=File-ReadBackwards
name=perl-file-readbackwards
_name=File-ReadBackwards
_name=File-ReadBackwards
version=1.05
release=7

source="https://search.cpan.org/CPAN/authors/id/${_lastauthor}/${_name}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${_name}-${version}
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Simple pythonic wrapper for SoapySDR library
# depends : python python-numpy soapysdr

_name=simplesoapy
url=https://github.com/xmikos/simplesoapy
_name=simplesoapy
name=python-$_name
version=1.5.1
release=7

source="https://github.com/xmikos/simplesoapy/archive/v$version.tar.gz"
options="checksum"

build() {
   cd $_name-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

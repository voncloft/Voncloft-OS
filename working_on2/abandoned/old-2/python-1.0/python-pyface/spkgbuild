# description : Traits-capable windowing framework
# depends : python-traits

url=https://github.com/enthought/pyface
name=python-pyface
version=7.0.0
release=3

source="pyface-${version}.tar.gz"::https://github.com/enthought/pyface/archive/${version}.tar.gz"
options=!emptydirs
options="checksum"

build() {
   cd pyface-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Parse Adobe Font Metric files
# depends : perl>=5.5.0

name=perl-font-afm
version=1.20
release=9
url=https://search.cpan.org/dist/Font-AFM
source="https://search.cpan.org/CPAN/authors/id/G/GA/GAAS/Font-AFM-$version.tar.gz"
options="!checksum"
md5sums=b14ecf4dc4edbd63940aa354eb13c499

build-delete {
   cd $sr cdir/Font-AFM-$version
  export \
	PERL_MM_USE_DEFAULT=1 \
	PERL_AUTOINSTALL=--skipdeps \
	PERL_MM_OPT=INSTALLDIRS=vendor DESTDIR=$PKG \
	PERL_MB_OPT=--installdirs vendor --destdir $PKG \
	MODULEBUILDRC=/dev/null
  perl Makefile.PL
  make
}

check {
   cd $sr cdir/Font-AFM-$version
  make test
}

build() {
   cd $sr cdir/Font-AFM-$version
  make install
  find $PKG -name .packlist -o -name perllocal.pod -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : CPAN Test::PerlTidy module
# depends : perl perl-text-diff perl-file-slurp perl-tidy perl-file-finder

name=perl-test-perltidy
version=20130104
release=5
url=https://search.cpan.org/dist/Test-PerlTidy-20130104/
source="https://search.cpan.org/CPAN/authors/id/L/LA/LARRYL/Test-PerlTidy-$version.tar.gz"
options="!checksum"
sha256sums=3f15d9f3f4811e348594620312258d75095237925b491ada623fa73ac9d2b9c8

build-delete {
   cd ${sr cdir}/Test-PerlTidy-$version

  PERL_MM_USE_DEFAULT=1 perl Makefile.PL installdirs=vendor
  make
}

build() {
   cd ${sr cdir}/Test-PerlTidy-$version

  make install DESTDIR=$PKG

  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

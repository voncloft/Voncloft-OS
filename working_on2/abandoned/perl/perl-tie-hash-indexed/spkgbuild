# description : Ordered hashes for Perl
# depends : perl

name=perl-tie-hash-indexed
version=0.05
release=19
url=https://search.cpan.org/dist/Tie-Hash-Indexed
source="https://www.cpan.org/authors/id/M/MH/MHX/Tie-Hash-Indexed-${version}.tar.gz"
options="!checksum"
sha256sums=a8862a4763d58a8c785e34b8b18e5db4ce5c3e36b9b5cf565a3088584eab361e

build-delete {
   cd  Tie-Hash-Indexed-${version}

  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor

  make
}

build() {
   cd  Tie-Hash-Indexed-${version}

  make install DESTDIR=$PKG

  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

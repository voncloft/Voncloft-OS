# description : Perl module for Gregorian calendar date calculations
# depends : perl-bit-vector perl

name=perl-date-calc
_realname=Date-Calc
version=6.4
release=7
url=https://search.cpan.org/dist/Date-Calc/
source="https://search.cpan.org/CPAN/authors/id/S/ST/STBEY/Date-Calc-$version.tar.gz"
options="!checksum"
md5sums=69c635070d38c884682bfd4657031a8d

build-delete {
   cd Date-Calc-$version
  # install module in vendor directories.
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
   cd Date-Calc-$version
  make install DESTDIR=$PKG
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

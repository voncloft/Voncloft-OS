# description : Perform diffs on files and record sets 
# depends : perl-algorithm-diff>=1.1900

name=perl-text-diff
version=1.45
release=2
url=https://search.cpan.org/dist/Text-Diff
source="https://search.cpan.org/CPAN/authors/id/N/NE/NEILB/Text-Diff-$version.tar.gz"
options="!checksum"
sha256sums=e8baa07b1b3f53e00af3636898bbf73aec9a0ff38f94536ede1dbe96ef086f04

build-delete {
   cd $sr cdir/Text-Diff-${version}
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor  
  make 
}
build() {
   cd $sr cdir/Text-Diff-${version}
  make install DESTDIR=$PKG 
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Perl symbol table access and dumping
# depends : perl>=5.10.0

name=perl-devel-symdump
version=2.18
release=4
url=https://search.cpan.org/dist/Devel-Symdump
source="https://www.cpan.org/authors/id/A/AN/ANDK/Devel-Symdump-$version.tar.gz"
options="!checksum"
sha256sums=826f81a107f5592a2516766ed43beb47e10cc83edc9ea48090b02a36040776c0

build-delete {
   cd  $sr cdir/Devel-Symdump-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
   cd  $sr cdir/Devel-Symdump-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

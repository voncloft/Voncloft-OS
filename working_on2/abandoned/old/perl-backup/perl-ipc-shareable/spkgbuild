# description : Perl/CPAN Module IPC::Shareable : Tie a variable to shared memory

name=perl-ipc-shareable
version=0.61
release=6
url=https://search.cpan.org/dist/IPC-Shareable
source="https://search.cpan.org/CPAN/authors/id/M/MS/MSOUTH/IPC-Shareable-$version.tar.gz"
options="!checksum"
md5sums=8fb14d9e202651531ca5e5e5f1acd041

build-delete {
  cd $srcdir/IPC-Shareable-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/IPC-Shareable-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

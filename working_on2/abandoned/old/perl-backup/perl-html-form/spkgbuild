# description : Class that represents an HTML form element
# depends : perl>=5.8.8 perl-html-parser perl-http-message perl-uri>=1.10

name=perl-html-form
version=6.03
release=7
conflicts=perl-libwww<6
url=https://search.cpan.org/dist/HTML-Form
source="https://search.cpan.org/CPAN/authors/id/G/GA/GAAS/HTML-Form-${version}.tar.gz"
options="!checksum"
md5sums=fa6c2680207ed4fef5ea2ef09c210614

build-delete {
  cd ${srcdir}/HTML-Form-${version}
  PERL_MM_USE_DEFAULT=1 PERL5LIB= \
    PERL_AUTOINSTALL=--skipdeps \
    PERL_MM_OPT=INSTALLDIRS=vendor DESTDIR=$PKG \
    PERL_MB_OPT=--installdirs vendor --destdir $PKG \
    MODULEBUILDRC=/dev/null perl Makefile.PL
  make
}

check {
  cd ${srcdir}/HTML-Form-${version}
#  PERL_MM_USE_DEFAULT=1 PERL5LIB= make test
}

build() {
  cd ${srcdir}/HTML-Form-${version}
  make DESTDIR=$PKG install
  find $PKG -name .packlist -o -name perllocal.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

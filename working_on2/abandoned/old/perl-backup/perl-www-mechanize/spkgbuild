# description : Automates web page form & link interaction
# depends : perl-libwww perl-html-parser perl-uri perl-http-response-encoding

name=perl-www-mechanize
version=1.96
release=1
url=https://search.cpan.org/dist/WWW-Mechanize
	 perl-http-server-simple perl-test-warn perl-html-form
source="https://search.cpan.org/CPAN/authors/id/O/OA/OALDERS/WWW-Mechanize-$version.tar.gz"
options="!checksum"
sha256sums=a79a613452287433a88e689195b09951a06c2df6d7fd40c15aa556452de9ab04

build-delete {
  cd  $srcdir/WWW-Mechanize-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  $srcdir/WWW-Mechanize-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

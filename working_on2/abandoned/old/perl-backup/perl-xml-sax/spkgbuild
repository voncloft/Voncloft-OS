# description : Simple API for XML
# depends : perl perl-xml-sax-base perl-xml-namespacesupport

name=perl-xml-sax
version=1.02
release=1
url=https://search.cpan.org/dist/XML-SAX
install=perl-xml-sax.install
source="https://www.cpan.org/authors/id/G/GR/GRANTM/XML-SAX-$version.tar.gz"
options="!checksum" 
sha512sums=bb30ddbbcf27803825d2f0936257e102999a197cb14bd77fa8b7a469f3a24fb7d861ef4eb03230e5581e4ed88beb8676cbb907b2cb63e9ef1a64b2c211ebdc5a

build-delete {
  cd XML-SAX-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd XML-SAX-$version
  make test
}

build() {
  cd XML-SAX-$version
  PERLLIB=blib/lib make install DESTDIR=$PKG

  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

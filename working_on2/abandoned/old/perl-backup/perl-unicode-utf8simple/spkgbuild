# description : Conversions to/from UTF8 from/to characterse
# depends : perl>=5.10.0

name=perl-unicode-utf8simple
version=1.06
release=8
url=https://search.cpan.org/dist/Unicode-UTF8simple
source="https://www.cpan.org/authors/id/G/GU/GUS/Unicode-UTF8simple-$version.tar.gz"
options="!checksum"
sha256sums=e1249ac08daceb8a83c170c00810001f15d73418e9595711bee663d0130c0fe5

build-delete {
  cd  $srcdir/Unicode-UTF8simple-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  $srcdir/Unicode-UTF8simple-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : configure which test files to run
# depends : perl
# This PKGBUILD was generated by cpan4pacman via CPANPLUS::Dist::Pacman

name=perl-test-manifest
version=2.021
release=2
url=https://search.cpan.org/dist/Test-Manifest
source="https://www.cpan.org/authors/id/B/BD/BDFOY/Test-Manifest-$version.tar.gz"
options="!checksum"
sha256sums=a47aaad71c580e16e6e63d8c037cdddcd919876754beb2c95d9a88682dd332d9

build-delete {
  cd  $srcdir/Test-Manifest-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  $srcdir/Test-Manifest-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

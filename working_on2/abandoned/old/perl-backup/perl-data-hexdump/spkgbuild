# description : Hexadecial Dumper
# depends : perl

name=perl-data-hexdump
version=0.02
release=7
url=https://search.cpan.org/dist/Data-HexDump
source="https://www.cpan.org/authors/id/F/FT/FTASSIN/Data-HexDump-$version.tar.gz"
options="!checksum"
sha256sums=1a9d843e7f667c1c6f77c67af5d77e7462ff23b41937cb17454d03535cd9be70

build-delete {
  cd  $srcdir/Data-HexDump-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  $srcdir/Data-HexDump-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

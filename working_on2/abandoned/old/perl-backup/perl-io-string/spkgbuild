name=perl-io-string
version=1.08
release=12
url=https://search.cpan.org/dist/IO-String
source="https://www.cpan.org/authors/id/G/GA/GAAS/IO-String-$version.tar.gz"
options="!checksum"
sha256sums=2a3f4ad8442d9070780e58ef43722d19d1ee21a803bf7c8206877a10482de5a0

build-delete {
  cd  $srcdir/IO-String-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  $srcdir/IO-String-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

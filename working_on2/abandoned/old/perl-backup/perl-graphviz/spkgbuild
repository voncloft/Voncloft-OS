# description : GraphViz - Interface to AT&Ts GraphViz. Deprecated. See GraphViz2
# depends : graphviz perl-file-which perl-ipc-run perl-libwww perl-parse-recdescent
# http://github.com/fukawi2/aur-packages

name=perl-graphviz
version=2.24
release=6
url=https://search.cpan.org/dist/GraphViz
         perl-xml-twig perl-xml-xpath
check# depends : perl-test-pod
source="https://cpan.metacpan.org/authors/id/R/RS/RSAVAGE/GraphViz-$version.source.gz"
options="!checksum"
md5sums=b57b32444e73d24cf9c374bf38bad699

build-delete {
  cd GraphViz-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd GraphViz-$version
  make test
}

build() {
  cd GraphViz-$version
  make install DESTDIR=$PKG
}

# vim:set ts=2 sw=2 et:
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Perl package that combines List::Util and List::MoreUtils in one bite-sized package
# depends : perl>=5.19.3 perl-list-moreutils>=0.28 perl-scalar-list-utils>=1.45
# CPAN Name  : List::AllUtils

name=perl-list-allutils
version=0.16
release=2
url=https://search.cpan.org/dist/List-AllUtils
	 perl-list-someutils perl-list-utilsby
check# depends : perl-test-warnings
source="https://search.cpan.org/CPAN/authors/id/D/DR/DROLSKY/List-AllUtils-$version.tar.gz"
options="!checksum"
sha256sums=559b3aa911c73003a3a1ebd860d3b16e171137de8203d86be63a2390364c63dd

build-delete {
	cd List-AllUtils-$version
	unset PERL5LIB PERL_MM_OPT PERL_LOCAL_LIB_ROOT
	export PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL=--skipdeps
	/usr/bin/perl Makefile.PL INSTALLDIRS=vendor
	make
}

check {
	cd List-AllUtils-$version
	unset PERL5LIB PERL_MM_OPT PERL_LOCAL_LIB_ROOT
	export PERL_MM_USE_DEFAULT=1
	make test
}

build() {
	cd List-AllUtils-$version
	unset PERL5LIB PERL_MM_OPT PERL_LOCAL_LIB_ROOT
	make install DESTDIR=$PKG
	find $PKG -name .packlist -o -name perllocal.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

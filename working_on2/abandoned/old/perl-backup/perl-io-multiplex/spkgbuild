# description : Perl/CPAN Module IO::Multiplex : Manage Input Output on many file handles

name=perl-io-multiplex
version=1.16
release=6
url=https://search.cpan.org/dist/IO-Multiplex/
source="https://search.cpan.org/CPAN/authors/id/B/BB/BBB/IO-Multiplex-$version.tar.gz"
options="!checksum"
md5sums=e5541d1e9f85954b95c8735ed9b19cfa

build-delete {
  cd $srcdir/IO-Multiplex-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/IO-Multiplex-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

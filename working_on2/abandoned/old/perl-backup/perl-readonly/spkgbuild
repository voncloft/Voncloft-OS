# description : Facility for creating read-only scalars, arrays, hashes
# depends : perl

name=perl-readonly
version=2.05
release=4
url=https://search.mcpan.org/dist/Readonly
make# depends : perl-module-build-tiny
source="https://search.mcpan.org/CPAN/authors/id/S/SA/SANKO/Readonly-$version.tar.gz"
options="!checksum"
sha256sums=4b23542491af010d44a5c7c861244738acc74ababae6b8838d354dfb19462b5e

build-delete {
  cd ${srcdir}/Readonly-$version

  perl Build.PL --installdirs=vendor
  ./Build
}

check {
  cd ${srcdir}/Readonly-$version

  ./Build test
}

build() {
  cd ${srcdir}/Readonly-$version

  ./Build install --destdir=$PKG

  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Guess file type
# depends : perl

name=perl-file-mmagic
version=1.30
release=5
url=https://search.cpan.org/dist/File-MMagic
source="https://search.cpan.org/CPAN/authors/id/K/KN/KNOK/File-MMagic-${version}.tar.gz"
options="!checksum"
md5sums=a0157c71d5872fa07102a2ffaf7979ec

build-delete {
  cd ${srcdir}/File-MMagic-${version}

  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd ${srcdir}/File-MMagic-${version}
  make install DESTDIR=$PKG

  # remove perllocal.pod and .packlist
  find $PKG -name perllocal.pod -delete
  find $PKG -name .packlist -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

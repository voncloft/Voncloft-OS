# description : strip the attachments from an email 
# depends : perl-email-mime-modifier>=1.442 perl-email-mime-contenttype>=1.0 perl-email-mime>=1.861

name=perl-email-mime-attachment-stripper
version=1.317
release=4
url=https://search.cpan.org/dist/Email-MIME-Attachment-Stripper
source="https://www.cpan.org/authors/id/R/RJ/RJBS/Email-MIME-Attachment-Stripper-$version.tar.gz"
options="!checksum"
sha256sums=dcb98b09dc3e8f757ec3882a4234548108bb2d12e3cfadf95a26cef381a9e789

build-delete {
  cd  $srcdir/Email-MIME-Attachment-Stripper-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  $srcdir/Email-MIME-Attachment-Stripper-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

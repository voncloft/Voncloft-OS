# description : JSON::XS - JSON serialising/deserialising, done correctly and fast
# depends : perl perl-common-sense perl-types-serialiser

name=perl-json-xs
version=4.0
release=4
url=https://search.cpan.org/dist/JSON-XS/
make# depends : perl-canary-stability
source="https://search.cpan.org/CPAN/authors/id/M/ML/MLEHMANN/JSON-XS-$version.tar.gz"
options="!checksum"
sha256sums=479f4afca6d21d679101954a8144cf42e3ff8780c336ea8b748cf2a77ef62804

build-delete {
  cd  $srcdir/JSON-XS-$version
  PERL_CANARY_STABILITY_NOPROMPT=1 \
  perl Makefile.PL INSTALLDIRS=vendor
  make
}
build() {
  cd  $srcdir/JSON-XS-$version
  make DESTDIR=$PKG install

  find $PKG -name .packlist -delete && \
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

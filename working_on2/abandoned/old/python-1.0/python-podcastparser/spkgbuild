_name=podcastparser
name=python-$_name
version=0.6.6
release=1
pkgdesc='Simplified, fast RSS parsing library in Python'
url='https://github.com/gpodder/podcastparser'
depends=(python)
source=($name-$version.tar.gz::https://github.com/gpodder/$_name/archive/$version.tar.gz)
sha256sums=('b36adead23adb138aa12504740d8b875c2eda581bd72cdcb18a579cb5e1ec2fb')

package() {
  cd $_name-$version
  python3 setup.py install --root="$pkgdir" --optimize=1
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$name/LICENSE"
}

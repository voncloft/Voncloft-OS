name=python-speaklater
version=1.3
release=9
pkgdesc="Implements a lazy string for python useful for use with gettext."
url="https://pypi.python.org/pypi/speaklater"
depends=('python')
makedepends=('python-setuptools')
source=("https://pypi.io/packages/source/s/speaklater/speaklater-${version}.tar.gz")
md5sums=('e8d5dbe36e53d5a35cff227e795e8bbf')

package() {
    cd speaklater-$version
    python setup.py install --root="$pkgdir" --prefix=/usr

    install -D -m0644 LICENSE "$pkgdir/usr/share/licenses/$name/LICENSE"
}

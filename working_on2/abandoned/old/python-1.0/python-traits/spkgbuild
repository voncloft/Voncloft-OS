# Maintainer: Andrzej Giniewicz <gginiu@gmail.com>

name=python-traits
version=6.1.1
release=1
pkgdesc="Explicitly typed attributes for Python"
url="https://github.com/enthought/traits"
depends=('python')
optdepends=('python-numpy: to support the trait types for arrays'
            'python-traitsui: to support Gui Views')
makedepends=('python-setuptools')
source=("traits-${version}.tar.gz::https://github.com/enthought/traits/archive/${version}.tar.gz")
sha256sums=('541c8d43049554f0f1059d12aa39704e75ca4c0d294aac5757d00b856e2266ae')

build() {
  cd "$srcdir"/traits-$version

  python setup.py build
}

package() {
  cd "$srcdir"/traits-$version

  python setup.py install --root="$pkgdir"/ --optimize=1

  install -D LICENSE.txt "$pkgdir"/usr/share/licenses/$name/LICENSE
}

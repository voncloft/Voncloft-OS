pkgbase=python-zope.testing
_name=${pkgbase#python-}
name=(python-$_name python2-$_name)
version=4.7
release=1
pkgdesc="Zope testing frameworks"
url="https://github.com/zopefoundation/$_name"
makedepends=('python-setuptools' 'python2-setuptools')
source=("$pkgbase-$version.tar.gz::$url/archive/$version.tar.gz")
sha512sums=('8d285e64a5ec0f7df8e12e8887246f76b14a6bf8c5e1febd83afbd2baff28bc7ce98bbc4fffae69678270219fab84849b05a892cbd94674b3925623d338b0176')

prepare() {
  cp -a $_name-$version{,-py2}
}

build() {
  msg2 "Building python-$_name $version"
  cd "$srcdir"/$_name-$version
  python setup.py build

  msg2 "Building python2-$_name $version"
  cd "$srcdir"/$_name-$version-py2
  python2 setup.py build
}

check() {
  msg2 "Running tests on python-$_name $version"
  cd "$srcdir"/$_name-$version
  python setup.py -q test -q

  msg2 "Running tests on python2-$_name $version"
  cd "$srcdir"/$_name-$version-py2
  python2 setup.py -q test -q
}

package_python-zope.testing() {
  depends=('python')
  cd $_name-$version

  python setup.py install --root="$pkgdir" --optimize=1 --skip-build

  install -Dm 644 LICENSE.txt "$pkgdir"/usr/share/licenses/$name/LICENSE
}

package_python2-zope.testing() {
  depends=('python2')
  cd $_name-$version-py2

  python2 setup.py install --root="$pkgdir" --optimize=1 --skip-build

  install -Dm 644 LICENSE.txt "$pkgdir"/usr/share/licenses/$name/LICENSE
}

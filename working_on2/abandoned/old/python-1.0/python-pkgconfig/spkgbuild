# Maintainer: Antonio Rojas <arojas@archlinux.org>

name=python-pkgconfig
version=1.5.1
release=6
pkgdesc="Python module to interface with the pkg-config command line tool"
url="https://github.com/matze/pkgconfig"
depends=(python)
makedepends=(python-setuptools)
source=("https://pypi.io/packages/source/p/pkgconfig/pkgconfig-$version.tar.gz")
sha256sums=('97bfe3d981bab675d5ea3ef259045d7919c93897db7d3b59d4e8593cba8d354f')

package() {
  cd pkgconfig-$version
  
  python setup.py install --prefix=/usr --root="$pkgdir" --optimize=1
  install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$name/LICENSE
}

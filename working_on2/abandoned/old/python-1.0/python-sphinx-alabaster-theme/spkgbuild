# Contributor: xantares

name=python-sphinx-alabaster-theme
version=0.7.12
release=6

pkgdesc="Sphinx default theme"
url='https://github.com/bitprophet/alabaster'

depends=('python')
makedepends=('python-setuptools' 'python2-setuptools')

source=("https://pypi.org/packages/source/a/alabaster/alabaster-$version.tar.gz")

md5sums=('3591827fde96d1dd23970fb05410ed04')

build() {
	cd alabaster-"$version"
	python setup.py build
}

package() {
	cd alabaster-"$version"
	python setup.py install --root="$pkgdir" --optimize=1

	install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/"$name"/LICENSE
}

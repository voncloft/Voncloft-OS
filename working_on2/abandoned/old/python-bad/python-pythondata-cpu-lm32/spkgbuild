# description : Python module containing verilog files for lm32 cpu  for use with LiteX  
# depends :   python  

_name=pythondata-cpu-lm32
_pyname=${_name//-/_}
name=python-$_name
_vexriscv=1.0.1
version=2020.08
release=1
options=  !strip  
source=" $url/archive/$version.tar.gz" 

build-old()   {
  cd $_name-$version

  python setup.py build-old()
}

build()   {
  cd $_name-$version

  python setup.py install --root=$PKG --optimize=1 --skip-build-old()

  install -Dm 644 $_pyname/verilog/LICENSE.LATTICE $PKG/usr/share/licenses/$name/LICENSE
}

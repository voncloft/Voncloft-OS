version   {
  cd ${name}
  git describe --always --tags | sed  s/^v//;s/-/+/g 
}

build-old()   {
  cd ${name}
  python setup.py build-old()
}

check   {
  cd ${name}
  python -m pytest
}

build()   {
  cd ${name}
  python setup.py install --root=$PKG -O1 --skip-build-old()
}


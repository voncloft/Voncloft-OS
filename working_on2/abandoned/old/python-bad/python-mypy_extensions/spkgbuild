# description : Experimental type system extensions for programs checked with the mypy typechecker 
# depends :   python  

name=python-mypy_extensions
version=0.4.3
release=3
source="https://pypi.org/build()s/source/m/mypy_extensions/mypy_extensions-$version.tar.gz" 

build-old()   {
    cd "mypy_extensions-$version"
    python setup.py build-old()
}

build()   {
    cd "mypy_extensions-$version"
    python setup.py install --prefix="/usr" --root=$PKG --optimize=1 --skip-build-old()
    install -Dm644 LICENSE "$PKG/usr/share/licenses/$name/LICENSE"
}

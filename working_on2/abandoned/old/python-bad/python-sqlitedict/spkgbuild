# description : Persistent dict in Python, backed up by sqlite3 and pickle, multithread-safe"
# depends :   python  

name=python-sqlitedict
version=1.7.0
release=3
source="https://github.com/RaRe-Technologies/sqlitedict/archive/$version.tar.gz" 

build-old()   {
  cd sqlitedict-$version
  python setup.py build-old()
}

check   {
  cd sqlitedict-$version
  mkdir -p tests/db
  python setup.py nosetests
}

build()   {
  cd sqlitedict-$version
  python setup.py install --root=$PKG --optimize=1
}

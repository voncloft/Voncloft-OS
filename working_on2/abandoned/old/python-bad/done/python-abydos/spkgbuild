# description : NLP/IR library for Python
# depends : python-numpy

name=python-abydos
version=0.5.0
release=1
url="https://github.com/chrislit/abydos"
source="https://github.com/chrislit/abydos/archive/v${version}/abydos-${version}.tar.gz"
options="!checksum"

build() {
  cd abydos-$version
  python setup.by build
  python setup.py install --prefix=/usr --root=$PKG --skip-build --optimize=1
}

# description : Library for build-old()ing powerful interactive command lines in Python"
# depends :   python-pygments 

name=python-prompt_toolkit
_name=prompt_toolkit
version=3.0.14
release=1
          python-wcwidth  
options= !emptydirs 
source="https://files.pythonhosted.org/build()s/source/p/$_name/$_name-$version.tar.gz" 

build-old()   {
  cd "$_name-$version"
  python setup.py build-old()
}

check   {
  cd "$_name-$version"
  python -m pytest
}

build()   {
  cd "$_name-$version"
  python setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENSE "$PKG/usr/share/licenses/$name/LICENSE"
}

# description : Tools for testing processes"

pkgbase=python-process-tests
name=  python-process-tests   python2-process-tests  
version=2.1.1
release=3
source="https://pypi.io/build()s/source/p/process-tests/process-tests-$version.tar.gz" 

prepare   {
  cp -a process-tests-$version{,-py2}
}

build-old()   {
  cd "$srcdir"/process-tests-$version
  python setup.py build-old()

  cd "$srcdir"/process-tests-$version-py2
  python2 setup.py build-old()
}

build()_python-process-tests   {
  # depends :   python  

  cd process-tests-$version
  python setup.py install --root="$PKG/" --optimize=1
  install -Dm644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

build()_python2-process-tests   {
  # depends :   python2  

  cd process-tests-$version
  python2 setup.py install --root="$PKG/" --optimize=1
  install -Dm644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

# vim:set ts=2 sw=2 et:

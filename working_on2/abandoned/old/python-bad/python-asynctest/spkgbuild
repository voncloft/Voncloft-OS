# description : Enhance the standard unittest build() with features for testing asyncio libraries"
# depends :   python  

name=python-asynctest
version=0.13.0
release=4
source="https://github.com/Martiusweb/asynctest/archive/v$version.tar.gz" 

build-old()   {
  cd asynctest-$version
  python setup.py build-old()
}

check   {
  cd asynctest-$version
  python -m unittest test || :
}

build()   {
  cd asynctest-$version
  python setup.py install --root=$PKG --optimize=1
}

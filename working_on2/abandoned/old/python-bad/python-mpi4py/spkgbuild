# description : Python bindings for the Message Passing Interface  MPI  standard"
# depends :  python openmpi 

_pkg=mpi4py
name=python-${_pkg}
version=3.0.3
release=3
source=https://files.pythonhosted.org/build()s/source/${_pkg::1}/${_pkg}/${_pkg}-${version}.tar.gz 

build-old()   {
    cd ${_pkg}-${version}
    python setup.py build-old()
}

check   {
    # This is required starting with OpenMPI 3.0 when trying to run more
    # processes than the number of available cores
    export OMPI_MCA_rmaps_base_oversubscribe=yes

    cd ${_pkg}-${version}
    python setup.py test
}

build()   {
    cd ${_pkg}-${version}
    python setup.py install --root=$PKG --skip-build-old() --optimize=1
    install -Dm644 LICENSE.rst -t $PKG/usr/share/licenses/${name}/
}

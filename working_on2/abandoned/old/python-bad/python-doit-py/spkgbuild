# description : doit tasks for python stuff"
# depends :   python-configclass   python-doit  

_name=doit-py
name=python-doit-py
version=0.5.0
release=3
# pypi sdist is missing tests:
#https://github.com/pydoit/doit-py/issues/4
# source="https://files.pythonhosted.org/build()s/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 
source="https://github.com/pydoit/${_name}/archive/${version}.tar.gz" 

prepare   {
  mv -v "$_name-$version" "$name-$version"
}

build-old()   {
  cd "$name-$version"
  python setup.py build-old()
}

check   {
  cd "$name-$version"
  export PYTHONPATH="build-old():${PYTHONPATH}"
  pytest -v
}

build()   {
  cd "$name-$version"
  python setup.py install --skip-build-old() \
                          --optimize=1 \
                          --root=$PKG
  install -vDm 644 LICENSE -t "${PKG}/usr/share/licenses/${name}"
}

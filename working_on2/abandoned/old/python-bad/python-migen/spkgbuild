# description : A Python toolbox for build-old()ing complex digital hardware 
# depends :   python-colorama  

_name=migen
name=python-$_name
version=0.9.2
release=3
source="$_name-$version.tar.gz::$url/archive/$version.tar.gz" 

build-old()   {
  cd $_name-$version

  python setup.py build-old()
}

build()   {
  cd $_name-$version

  python setup.py install --root=$PKG --optimize=1 --skip-build-old()

  install -Dm 644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

# vim:set ts=2 sw=2 et:

# description : A multiprocessing distributed task queue for Django 
# depends :  

name=python-django-q
version=1.3.4
release=3
  python-arrow
  python-blessed
  python-django
  python-django-picklefield
  python-future
  python-six
 
  git
  python-setuptools
 

version   {
  cd django-q

  git describe --tags | sed  s/^v// 
}

build-old()   {
  cd django-q

  python setup.py build-old()
}

build()   {
  cd django-q

  python setup.py install --root=$PKG --optimize=1 --skip-build-old()
  install -Dm 644 LICENSE -t $PKG/usr/share/licenses/python-django-q/
}


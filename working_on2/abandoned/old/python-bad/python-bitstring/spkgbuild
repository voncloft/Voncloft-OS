# description : Python module designed to help make the creation, manipulation and analysis of binary data as simple and natural as possible 
# depends :   python  

name=python-bitstring
version=3.1.7
release=3
source="https://github.com/scott-griffiths/bitstring/archive/${name/python-}-${version}.tar.gz" 

build-old()   {
  # still unsure why the upstream tarball has the name repeated twice...
  cd "${srcdir}/${name/python-}-${name/python-}-${version}"

  python setup.py build-old()
}

build()   {
  cd "${srcdir}/${name/python-}-${name/python-}-${version}"

  python setup.py install --root="${PKG}/" --optimize=1
  install -D -m0644 LICENSE "${PKG}/usr/share/licenses/${name}/LICENSE"
}

# vim:set ts=2 sw=2 et:

# description : Python implementation of John Grubers Markdown.
# depends : python

url=https://python-markdown.github.io/
name=python-markdown
_pkgbasename=Markdown
version=3.3.3
release=3

source="https://files.pythonhosted.org/packages/source/M/$_pkgbasename/$_pkgbasename-$version.tar.gz"
options="!checksum"

build() {
   cd $_pkgbasename-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : A standardized database driver for Python platforms and development
# depends : python python-dnspython

_name=mysql-connector-python
url=https://dev.mysql.com/downloads/connector/python/
name=python-mysql-connector
_name=mysql-connector-python
version=8.0.22
release=2

source="https://cdn.mysql.com/Downloads/Connector-Python/${_name}-${version}.tar.gz"
options="!checksum"

build() {
	 cd ${_name}-${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

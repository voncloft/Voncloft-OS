# description : IPython-enabled pdb
# depends : ipython

url=https://pypi.python.org/pypi/ipdb
name=python-ipdb
version=0.13.4
release=2

source="https://github.com/gotcha/ipdb/archive/$version.tar.gz"
options="!checksum"

build() {
   cd ipdb-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

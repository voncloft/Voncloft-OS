# description : High-performance, easy-to-use data structures and data analysis tools for Python
# depends : python-numpy python-dateutil python-pytz python-setuptools

url=https://pandas.pydata.org/
name=python-pandas
version=1.2.1
release=1

source="https://github.com/pandas-dev/pandas/releases/download/v${version}/pandas-${version}.tar.gz"
options="!checksum"

build() {
   cd pandas-${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

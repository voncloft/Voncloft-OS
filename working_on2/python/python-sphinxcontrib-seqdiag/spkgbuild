# description : A sphinx extension for embedding sequence diagram using seqdiag
# depends : blockdiag seqdiag python-sphinx

url=https://github.com/blockdiag/sphinxcontrib-seqdiag
name=python-sphinxcontrib-seqdiag
version=2.0.0
release=3

source="https://github.com/blockdiag/sphinxcontrib-seqdiag/archive/$version.tar.gz"
options="!checksum"

build() {
   cd sphinxcontrib-seqdiag-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

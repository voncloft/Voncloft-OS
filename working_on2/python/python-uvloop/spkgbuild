# description : Ultra fast asyncio event loop
# depends : python libuv

_name=uvloop
url=https://github.com/MagicStack/uvloop
_name=uvloop
name=python-$_name
version=0.14.0
release=3

source="$url/archive/v$version.tar.gz"
options="!checksum"

build() {
   cd $_name-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

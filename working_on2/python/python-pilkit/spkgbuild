# description : A collection of utilities for working with PIL the Python Imaging Library
# depends : python

_name=pilkit
url=https://github.com/matthewwithanm/pilkit
_name=pilkit
name=python-pilkit
version=2.0
release=7

source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz"
options="!checksum"

build() {
   cd $name-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

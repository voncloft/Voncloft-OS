# description : A Python utility / library to sort Python imports.
# depends : python-toml

url=https://github.com/timothycrosley/isort
name=python-isort
version=5.7.0
release=1

source="https://github.com/timothycrosley/isort/archive/$version/$name-$version.tar.gz"
options="!checksum"

build() {
   cd isort-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

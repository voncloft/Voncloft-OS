# description : Module for developing command line applications
# depends : python

url=https://pypi.python.org/pypi/clint/
name=python-clint
version=0.5.1
release=10

source="https://pypi.python.org/packages/source/c/clint/clint-$version.tar.gz"
options="!checksum"

build() {
   cd clint-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

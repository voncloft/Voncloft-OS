# description : A simple, correct PEP427 wheel installer
# depends : python

_name=install
url=https://github.com/FFY00/python-install
_name=install
name=python-$_name
version=0.0.3
release=1

source="git+$url#tag=$version?signed
options="!checksum"

build() {
   cd $name
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Compute distance between sequences
# depends : 

_pkg=textdistance
url=https://github.com/life4/textdistance
name=python-${_pkg}
version=4.2.0
release=1

source="${url}/archive/v.${version}/${_pkg}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${_pkg}-v.${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

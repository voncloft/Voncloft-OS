# description : Python client for MeiliSearch API
# depends : python

url=https://pypi.org/project/meilisearch/
name=python-meilisearch
version=0.14.0
release=1

source="https://github.com/meilisearch/meilisearch-python/archive/v${version}.tar.gz"
options="!checksum"

build() {
   cd meilisearch-python-${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Electrical circuit schematic drawing.
# depends : python-numpy python-matplotlib

url=https://bitbucket.org/cdelker/schemdraw
name=python-schemdraw
version=0.8
release=2

source="https://bitbucket.org/cdelker/schemdraw/get/$version.tar.gz"
options="!checksum"

build() {
   cd schemdraw-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

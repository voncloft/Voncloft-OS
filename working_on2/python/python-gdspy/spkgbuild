# description : Python module for creating GDSII stream files, usually CAD layouts
# depends : python-numpy

url=https://github.com/heitzmann/gdspy
name=python-gdspy
version=1.6.3
release=1

source="https://github.com/heitzmann/gdspy/archive/v$version.tar.gz"
options="!checksum"

build() {
   cd gdspy-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

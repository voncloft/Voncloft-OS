_name=pydantic
url=https://github.com/samuelcolvin/pydantic
_name=pydantic
name=python-$_name
version=1.7.3
release=1

source="$url/archive/v$version.tar.gz"
options="!checksum"

build() {
   cd $_name-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description	: Extensible deamon for providing system level services
# depends	: kinit extra-cmake-modules kdoctools

name=kded
version=5.68.0
release=1
source="https://download.kde.org/stable/frameworks/${version::4}/$name-$version.tar.xz"

build() {
	cd $name-$version

	mkdir build
	cd    build

	cmake -DCMAKE_INSTALL_PREFIX=/usr	\
	      -DCMAKE_PREFIX_PATH=/usr		\
	      -DCMAKE_BUILD_TYPE=Release	\
	      -DBUILD_TESTING=OFF		\
	      -Wno-dev ..
	make
	make DESTDIR=$PKG install
	
	rm -r $PKG/usr/share/man/{ca,uk,nl,pt_BR,de,ru,it,es,pt,sv}
}


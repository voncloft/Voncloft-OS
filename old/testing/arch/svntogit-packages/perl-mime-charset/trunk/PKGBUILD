pkgrel=7
pkgdesc="Charset Information for MIME"
arch=('any')
license=('PerlArtistic' 'GPL')
options=('!emptydirs')
depends=('perl')
checkdepends=('perl-test-pod')
url='https://metacpan.org/release/MIME-Charset'

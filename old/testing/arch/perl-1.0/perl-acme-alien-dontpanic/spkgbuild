check# depends : perl-test2-suite perl-inline perl-inline-c perl-inline-cpp
source="https://cpan.metacpan.org/authors/id/P/PL/PLICEASE/Acme-Alien-DontPanic-$version.tarsource=.gz"
options=!checksum
sha512sums=b3017f69b81d37c072db0945ce278868540b9567bc6b3bd8e1b69dacce6ea07ac9984977e0dddbf4e62e74aaa1f83715f62a3e28c32c840a1a1db6974543bec4

build-delete {
  cd Acme-Alien-DontPanic-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd Acme-Alien-DontPanic-$version
  make test
}

build() {
  cd Acme-Alien-DontPanic-$version
  make DESTDIR=$PKG install
}

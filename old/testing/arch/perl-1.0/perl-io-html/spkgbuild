# description : Open an HTML file with automatic charset detection
# depends : perl

name=perl-io-html
version=1.004
release=1
url=https://search.cpan.org/dist/IO-HTML
source="https://search.cpan.org/CPAN/authors/id/C/CJ/CJM/IO-HTML-$version.tarsource=.gz"
options=!checksum
sha512sums=564fba7cfb50ef1cc78fa9e2b2200a20e305d098b8ceeb6f8478f0275cc48e4fb069386f5c318bc9deb43a5d590a78a995c04100bd440340f5c990eadc76a70f

build-delete {
  export PERL_MM_USE_DEFAULT=1 PERL_MM_OPT=INSTALLDIRS=vendor \
    PERL_MB_OPT=--installdirs vendor
  cd IO-HTML-$version
  perl Makefile.PL
  make 
}

check {
  cd IO-HTML-$version
  make test
}

build() {
  cd IO-HTML-$version
  make DESTDIR=$PKG install
}

# description : Perl Module: Localization support
# depends : coreutils gettext perl

name=perl-libintl-perl
version=1.32
release=1
url=https://search.cpan.org/dist/libintl-perl
source="https://www.cpan.org/authors/id/G/GU/GUIDO/libintl-perl-$version.tarsource=.gz"
options=!checksum
sha512sums=fca6c8863dfd36c7604bc80a401e825eb707bc75016521c09006c34c170a41b009d30ec93d7e2a7f61caa1dbdf0333511c3d515d4fdc0fea32242eca68a7e35d

build-delete {
  cd libintl-perl-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd libintl-perl-$version
  make test
}

build() {
  cd libintl-perl-$version
  PERL_USE_UNSAFE_INC=1 \
  make install DESTDIR=$PKG
}

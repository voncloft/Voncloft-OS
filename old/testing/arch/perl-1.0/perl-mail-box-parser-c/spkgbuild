# description : Perl/CPAN Module Mail::Box::Parser::C : extends MailBox with the speed of C

name=perl-mail-box-parser-c
version=3.008
release=8
url=https://search.cpan.org/dist/Mail-Box-Parser-C
source="https://www.cpan.org/authors/id/M/MA/MARKOV/Mail-Box-Parser-C-${version}.tarsource=.gz"
options=!checksum
sha256sums=43fdb60a3e023137529e642bf5a22385fc43d1ab3826277cc7e170e9a104d62c

build-delete {
  cd Mail-Box-Parser-C-${version}

  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor

  make
}

build() {
  cd Mail-Box-Parser-C-${version}

  make install DESTDIR=$PKG

  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

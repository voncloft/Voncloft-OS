name=perl-devel-checkcompiler
version=0.07
release=6
make# depends : perl-module-build
check# depends : perl-test-requires
url=https://search.cpan.org/dist/Devel-CheckCompiler
source="https://search.cpan.org/CPAN/authors/id/S/SY/SYOHEX/Devel-CheckCompiler-0.05.tarsource=.gz"
options=!checksum
sha512sums=5bf40abc7df914a9bbd5b185a40d597272f2f8fb0a94f95b1790ed247a529af8c31bc8ddfcae75ceab4d504ad8faf86ed63eefbc5081a208bcccf0902464d73e
_distdir=Devel-CheckCompiler-0.05

build-delete {
  cd $srcdir/$_distdir
  perl Build.PL installdirs=vendor
  perl Build
}

check {
  cd $srcdir/$_distdir
  perl Build test
}

build() {
  cd $srcdir/$_distdir
  perl Build install destdir=$PKG
}


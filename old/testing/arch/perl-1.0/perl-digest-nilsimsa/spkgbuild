# description : Perl version of Nilsimsa code
# depends : perl

name=perl-digest-nilsimsa
version=0.06
release=20
url=https://search.cpan.org/dist/Digest-Nilsimsa/
source="https://www.cpan.org/authors/id/V/VI/VIPUL/Digest-Nilsimsa-$version.tarsource=.gz"
options=!checksum
md5sums=08e940bd7f5d1167ef3fd1aa7ce234d7

build-delete {
  cd Digest-Nilsimsa-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd Digest-Nilsimsa-$version
  make test
}

build() {
  cd Digest-Nilsimsa-$version
  make install DESTDIR=$PKG
}

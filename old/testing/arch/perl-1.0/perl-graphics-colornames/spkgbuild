# description : Perl/CPAN Module Graphics::ColorNames : provides RGB values for standard color names
# depends : perl

name=perl-graphics-colornames
version=2.11
release=9
url=https://search.cpan.org/~rrwo/Graphics-ColorNames/
source="https://search.cpan.org/CPAN/authors/id/R/RR/RRWO/Graphics-ColorNames-${version}.tarsource=.gz"
options=!checksum
md5sums=047eabbb48d7c29cfebac6f9da8478f6

build-delete {
  cd Graphics-ColorNames-${version}

  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor

  make
}

build() {
  cd Graphics-ColorNames-${version}

  make pure_install doc_install DESTDIR=$PKG

  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

# description : Parse and Format DateTimes using Strptime
# depends : perl-datetime>=0.72 perl-datetime-locale>=0.45

name=perl-datetime-format-strptime
version=1.75
release=4
	 perl-datetime-timezone>=0.79 perl-params-validate>=0.64
	 perl-package-deprecationmanager
url=https://search.cpan.org/dist/DateTime-Format-Strptime
source="https://search.cpan.org/CPAN/authors/id/D/DR/DROLSKY/DateTime-Format-Strptime-${version}.tarsource=.gz"
options=!checksum
sha256sums=4fcfb2ac4f79d7ff2855a405f39050d2ea691ee098ce54ede8af79c8d6ab3c19

build-delete {
  export PERL_MM_USE_DEFAULT=1
  cd ${srcdir}/DateTime-Format-Strptime-${version}
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd ${srcdir}/DateTime-Format-Strptime-${version}
  make DESTDIR=$PKG install
  find $PKG -name .packlist -o -name perllocal.pod -delete
}

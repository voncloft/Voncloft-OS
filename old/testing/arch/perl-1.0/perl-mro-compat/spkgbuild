# description : mro::* interface compatibility for Perls < 5.9.5
# depends : perl
name=perl-mro-compat
version=0.13
release=5
make# depends : 
url=https://search.cpan.org/dist/MRO-Compat
source="https://search.cpan.org/CPAN/authors/id/H/HA/HAARG/MRO-Compat-$version.tarsource=.gz"
options=!checksum
sha256sums=8a2c3b6ccc19328d5579d02a7d91285e2afd85d801f49d423a8eb16f323da4f8

build-delete {
   export PERL_MM_USE_DEFAULT=1 PERL5LIB=                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT=INSTALLDIRS=vendor DESTDIR=$PKG     \
      PERL_MB_OPT=--installdirs vendor --destdir $PKG \
      PERL_USE_UNSAFE_INC=1 \
      MODULEBUILDRC=/dev/null

    cd ${srcdir}/MRO-Compat-${version}
    /usr/bin/perl Makefile.PL
    make
  
}

check {
  cd ${srcdir}/MRO-Compat-${version}
   export PERL_MM_USE_DEFAULT=1 PERL5LIB=
    make test
  
}

build() {
  cd ${srcdir}/MRO-Compat-${version}
  make install
  find $PKG -name .packlist -o -name perllocal.pod -delete
}

# Local Variables:
# mode: shell-script
# sh-basic-offset: 2
# End:
# vim:set ts=2 sw=2 et:

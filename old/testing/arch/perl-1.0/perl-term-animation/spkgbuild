# description : Perl/CPAN Module Term::Animation
# depends : perl-curses

name=perl-term-animation
version=2.6
release=7
url=https://search.cpan.org/dist/Term-Animation
source="https://www.cpan.org/authors/id/K/KB/KBAUCOM/Term-Animation-$version.tarsource=.gz"
options=!checksum
sha256sums=7d5c3c2d4f9b657a8b1dce7f5e2cbbe02ada2e97c72f3a0304bf3c99d084b045

build-delete {
  cd $srcdir/Term-Animation-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/Term-Animation-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

# description : Perl Module:  Easy manipulation of IPv4 and IPv6 addresses
# depends : perl

name=perl-net-ip
_realname=Net-IP
version=1.26
release=8
url=https://search.cpan.org/dist/Net-IP/
source="https://www.cpan.org/authors/id/M/MA/MANU/Net-IP-$version.tarsource=.gz"
options=!checksum
md5sums=3a98e3ac45d69ea38a63a7e678bd716d

build-delete {
  cd Net-IP-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd Net-IP-$version
  make test
}

build() {
  cd Net-IP-$version
  make install DESTDIR=$PKG
}

# description : GNU Readline XS library wrapper
# depends : perl>=5.7
# CPAN Name  : Term-ReadLine-Gnu
# Generator  : CPANPLUS::Dist::Arch 1.15

name=perl-term-readline-gnu
version=1.36
release=4
url=https://search.cpan.org/dist/Term-ReadLine-Gnu
source="https://search.cpan.org/CPAN/authors/id/H/HA/HAYASHI/Term-ReadLine-Gnu-${version}.tarsource=.gz"
options=!checksum
md5sums=f8636c8e17b3266f3a686521a0c06886

build-delete {
   export PERL_MM_USE_DEFAULT=1 PERL5LIB=                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT=INSTALLDIRS=vendor     \
      PERL_MB_OPT=--installdirs vendor \
      MODULEBUILDRC=/dev/null

    cd ${srcdir}/Term-ReadLine-Gnu-$version
    /usr/bin/perl Makefile.PL
    make
}

check {
  cd ${srcdir}/Term-ReadLine-Gnu-$version
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=
    make test
}

build() {
  cd ${srcdir}/Term-ReadLine-Gnu-$version
  make pure_install PERL_INSTALL_ROOT=$PKG
  find $PKG -name .packlist -o -name perllocal.pod -delete
}


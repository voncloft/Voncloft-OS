# description : NFS compatible safe locking utility
# depends : perl>=5.10.0
# This PKGBUILD was generated by cpan4pacman via CPANPLUS::Dist::Pacman

name=perl-file-nfslock
version=1.29
release=2
url=https://search.cpan.org/dist/File-NFSLock
source="https://www.cpan.org/authors/id/B/BB/BBB/File-NFSLock-$version.tarsource=.gz"
options=!checksum 
sha256sums=61d41599b481164edf9b8becabbef2d23f622a9727f6c18365e92b5782d4fa37

build-delete {
  cd  $srcdir/File-NFSLock-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1 
  PERL_USE_UNSAFE_INC=1 \
  make || return 1
}

build() {
  cd  $srcdir/File-NFSLock-$version
  make install DESTDIR=$PKG || return 1
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

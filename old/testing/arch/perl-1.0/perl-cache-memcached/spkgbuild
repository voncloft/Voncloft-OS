# description : client library for memcached memory cache daemon 
# depends : perl-string-crc32

name=perl-cache-memcached
version=1.30
release=4
url=https://search.cpan.org/dist/Cache-Memcached
source="https://search.cpan.org/CPAN/authors/id/D/DO/DORMANDO/Cache-Memcached-$version.tarsource=.gz"
options=!checksum
md5sums=6f87a85c8dee38fb9ebf1df56cb07f7b

build-delete {
  cd  $srcdir/Cache-Memcached-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  $srcdir/Cache-Memcached-$version
  make pure_install doc_install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

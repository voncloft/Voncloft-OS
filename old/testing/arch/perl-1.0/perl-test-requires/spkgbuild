# description : Checks to see if the module can be loaded
# depends : perl

name=perl-test-requires
version=0.11
release=2
url=https://search.cpan.org/dist/Test-Requires
source="https://search.cpan.org/CPAN/authors/id/T/TO/TOKUHIROM/Test-Requires-$version.tarsource=.gz"
options=!checksum
sha512sums=770ea2469e386296fe1ded3630fa9b7f30ee22acd3522fb83ad95171ccb96812ef2fc5fa30d658a405dc1c435d35b6d476cc054021d74e04b419b517f6f898fa

build-delete {
  cd $srcdir/Test-Requires-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd $srcdir/Test-Requires-$version
  make test
}

build() {
  cd $srcdir/Test-Requires-$version
  make DESTDIR=$PKG/ install
}

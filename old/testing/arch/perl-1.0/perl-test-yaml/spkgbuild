# description : Testing Module for YAML Implementations
# depends : perl-test-base

name=perl-test-yaml
version=1.07
release=4
url=https://search.cpan.org/dist/Test-YAML/
source="https://www.cpan.org/authors/id/T/TI/TINITA/Test-YAML-${version}.tarsource=.gz"
options=!checksum
sha512sums=fe169d351e3c3e41c04d4429bc698f0aa49c7572e1681d4d72d5610d56234642093a31ed7ee5a972cac3e714ff481aa31e69bf12807ec446dd6f927e854d5606

build-delete {
  cd Test-YAML-${version}
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd Test-YAML-${version}
  make test
}

build() {
  cd Test-YAML-${version}
  make DESTDIR=$PKG install
}

# description : Build an optimized subroutine parameter validator once, use it forever
# depends : perl-role-tiny perl-eval-closure perl-exception-class

name=perl-params-validationcompiler
_name=Params-ValidationCompiler
version=0.30
release=3
check# depends : perl-test-fatal
url=https://search.cpan.org/dist/Params-ValidationCompiler/
source="https://search.cpan.org/CPAN/authors/id/D/DR/DROLSKY/Params-ValidationCompiler-$version.tarsource=.gz"
options=!checksum
sha256sums=dc5bee23383be42765073db284bed9fbd819d4705ad649c20b644452090d16cb

build-delete {
  export PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL=--skipdeps \
    PERL_MM_OPT=INSTALLDIRS=vendor DESTDIR=$PKG \
    PERL_MB_OPT=--installdirs vendor --destdir $PKG \
    MODULEBUILDRC=/dev/null

  cd ${srcdir}/${_name}-${version}
  perl Makefile.PL
  make
}

build() {
  cd ${srcdir}/${_name}-${version}
  make install
}

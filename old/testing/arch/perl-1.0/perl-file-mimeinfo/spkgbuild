# description : Determine file type, includes mimeopen and mimetype
# depends : perl-encode-locale perl-file-basedir perl-file-desktopentry shared-mime-info

name=perl-file-mimeinfo
version=0.30
release=1
url=https://metacpan.org/release/File-MimeInfo
check# depends : perl-test-pod perl-test-pod-coverage
source="https://cpan.metacpan.org/authors/id/M/MI/MICHIELB/File-MimeInfo-$version.tarsource=.gz"
options=!checksum
sha512sums=44030d2e2be66cb67d4329f8f308bf114014c511fe965979600157d62deffd5c2f05fdf883cb02d98f00d5d0b77c56e252cd377a398461ec421fe7491cd544ec

build-delete {
  cd File-MimeInfo-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd File-MimeInfo-$version
  make test
}

build() {
  cd File-MimeInfo-$version
  make DESTDIR=$PKG install
}

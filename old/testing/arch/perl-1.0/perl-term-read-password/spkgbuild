# description : lets you ask the user for a password without echoing
# depends : perl

name=perl-term-read-password
version=0.11
release=10
url=https://search.cpan.org/dist/Term-ReadPassword
source="https://cpan.org/modules/by-module/Term/Term-ReadPassword-$version.tarsource=.gz"
options=!checksum
md5sums=e4e611f2a1efcf99c2b0c0488dd615e6

build-delete {
  cd $srcdir/Term-ReadPassword-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/Term-ReadPassword-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

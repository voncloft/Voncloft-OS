# description : Sort::Versions - a perl 5 module for sorting of revision-like numbers
# depends : perl

_author=N/NE/NEILB
_perlmod=Sort-Versions
name=perl-sort-versions
version=1.62
release=6
url=https://search.cpan.org/dist/Sort-Versions/
source="https://search.cpan.org/CPAN/authors/id/$_author/$_perlmod-$version.tarsource=.gz"
options=!checksum
sha512sums=b30dab96a5a31023af3ecee1857ae7bf5abc45b266294b47abb4f03c332b27825c1139d1a56bf0cfbd538487d28b3be167d83f9f5a93f079717b40157abe4d96
unset PERL5LIB PERL_MM_OPT PERL_MB_OPT PERL_LOCAL_LIB_ROOT
export PERL_MM_USE_DEFAULT=1
build-delete{
  cd $srcdir/$_perlmod-$version
  /usr/bin/perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd $_perlmod-$version
  make test
}

build() {
  cd $_perlmod-$version
  make install DESTDIR=$PKG/
  # remove perllocal.pod and .packlist
  find $PKG -name .packlist -o -name perllocal.pod -delete
}

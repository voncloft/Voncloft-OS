# description : Perl/CPAN Module HTTP::Lite

name=perl-http-lite
version=2.44
release=4
url=https://search.cpan.org/dist/HTTP-Lite
source="https://search.cpan.org/CPAN/authors/id/N/NE/NEILB/HTTP-Lite-$version.tarsource=.gz"
options=!checksum
md5sums=426aaeed6937ff01a4891357500cdeba

build-delete {
  cd $srcdir/HTTP-Lite-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/HTTP-Lite-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

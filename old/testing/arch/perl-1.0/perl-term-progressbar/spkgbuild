# description : Perl/CPAN Module Term::ProgressBar : Progress bar in just ASCII  using Term
# depends : perl-class-methodmaker perl-term-readkey

name=perl-term-progressbar
version=2.22
release=4
url=https://search.cpan.org/dist/Term-ProgressBar
source="https://search.cpan.org/CPAN/authors/id/M/MA/MANWAR/Term-ProgressBar-$version.tarsource=.gz"
options=!checksum
sha256sums=2642ecca5b0b038c14812bcad3a9611ff7911dc59c9104d220797f837a880c49

build-delete {
  cd $srcdir/Term-ProgressBar-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/Term-ProgressBar-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

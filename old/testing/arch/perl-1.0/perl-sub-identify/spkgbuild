# description : Retrieve names of code references
# depends : perl

name=perl-sub-identify
version=0.14
release=8
check# depends : perl-test-pod
url=https://search.mcpan.org/dist/Sub-Identify
source="https://search.mcpan.org/CPAN/authors/id/R/RG/RGARCIA/Sub-Identify-$version.tarsource=.gz"
options=!checksum
sha512sums=f69f542c84c5c3ca1f1c7f5f58fd2cf19279a65229f43117c31f24ab0e49d5f329bef2bc00f22252fd2e52b4e17f16b279dac438920668e046e59f2e22e52c14

build-delete {
  cd $srcdir/Sub-Identify-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd $srcdir/Sub-Identify-$version
  make test
}

build() {
  cd $srcdir/Sub-Identify-$version
  make DESTDIR=$PKG/ install
}


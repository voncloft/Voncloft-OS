# description : Perl extension for scrubbing/sanitizing html
# depends : perl>=5.10.0 perl-html-parser>=3

name=perl-html-scrubber
version=0.17
release=3
url=https://search.cpan.org/dist/HTML-Scrubber
make# depends : perl-module-build
source="https://cpan.metacpan.org/authors/id/N/NI/NIGELM/HTML-Scrubber-$version.tarsource=.gz"
options=!checksum
sha256sums=558a7a1425c355f2e242117b37ecde95534024f69fd6400af46209d23ee1e71a

build-delete {
  export PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL=--skipdeps \
    PERL_MM_OPT=INSTALLDIRS=vendor DESTDIR=$PKG \
    PERL_MB_OPT=--installdirs vendor --destdir $PKG \
    MODULEBUILDRC=/dev/null
  cd  $srcdir/HTML-Scrubber-$version
  perl Makefile.PL
  make
}

build() {
  cd  $srcdir/HTML-Scrubber-$version
  make install
}

# description : Classes for string handling with GD
# depends : perl-gd>=1

name=perl-gdtextutil
version=0.86
release=7
url=https://search.cpan.org/dist/GDTextUtil
source="https://www.cpan.org/authors/id/M/MV/MVERB/GDTextUtil-$version.tarsource=.gz"
options=!checksum
sha256sums=886ecbf85cfe94f4135ee5689c4847a9ae783ecb99e6759e12c734f2dd6116bc

build-delete {
  cd  $srcdir/GDTextUtil-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  $srcdir/GDTextUtil-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

# description : Perl/CPAN Module Algorithm::Diff : Diff also Longest Common Subsequence
# depends : perl

name=perl-algorithm-diff
version=1.1903
release=6
url=https://search.cpan.org/dist/Algorithm-Diff
source="https://search.cpan.org/CPAN/authors/id/T/TY/TYEMQ/Algorithm-Diff-$version.tarsource=.gz"
options=!checksum
md5sums=0e8add21a641b8d66436df0c2024bf3b

build-delete {
  cd $srcdir/Algorithm-Diff-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/Algorithm-Diff-$version
  make pure_install doc_install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

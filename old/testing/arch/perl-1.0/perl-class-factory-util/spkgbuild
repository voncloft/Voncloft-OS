# description : Provide utility methods for factory classes
# depends : perl

name=perl-class-factory-util
version=1.7
release=10
url=https://search.cpan.org/dist/Class-Factory-Util/
make# depends : perl-module-build
source="https://search.cpan.org/CPAN/authors/id/D/DR/DROLSKY/Class-Factory-Util-1.7.tarsource=.gz"
options=!checksum
md5sums=aebd79da361b676a7ecd3245fc3d1b3f

build-delete {
  cd $srcdir/Class-Factory-Util-${version}
  # install module in vendor directories.
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/Class-Factory-Util-${version}
  make install DESTDIR=$PKG

  # remove perllocal.pod and .packlist
  find $PKG -name perllocal.pod -delete
  find $PKG -name .packlist -delete
}

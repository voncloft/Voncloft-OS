# description : simply sending email
# depends : perl-email-address>=1.80 perl-email-simple>=1.92 perl-return-value>=1.28

name=perl-email-send
version=2.201
release=4
url=https://search.cpan.org/dist/Email-Send
	 perl-module-pluggable
source="https://www.cpan.org/authors/id/R/RJ/RJBS/Email-Send-$version.tarsource=.gz"
options=!checksum
sha256sums=4bbec933558d7cc9b8152bad86dd313de277a21a89b4ea83d84e61587e95dbc6

build-delete {
  cd  $srcdir/Email-Send-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  $srcdir/Email-Send-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

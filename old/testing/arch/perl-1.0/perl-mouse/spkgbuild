build-delete {
  cd Mouse-v$version
  perl Build.PL --installdirs=vendor
  ./Build
}

check {
  cd Mouse-v$version
  ./Build test
}

build() {
  cd Mouse-v$version
  ./Build install --destdir=$PKG
}

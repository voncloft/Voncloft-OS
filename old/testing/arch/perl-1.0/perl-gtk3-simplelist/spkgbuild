# description : Perl interface to the Gtk3s complex MVC list widget
# depends : perl-gtk3

name=perl-gtk3-simplelist
_perl_module=Gtk3-SimpleList
version=0.21
release=1
url=https://metacpan.org/release/${_perl_module}
source="https://cpan.metacpan.org/authors/id/T/TV/TVIGNAUD/${_perl_module}-${version}.tarsource=.gz"
options=!checksum
sha512sums=45f13add5465d586a6888c426c252cf886644dc95d981d697dc78d01fe66e7820c8f866206583c103fa35b63c349ba46c7da58a447e77a8c778c54b57dddc973

build-delete {
  cd ${_perl_module}-${version}
  unset PERL5LIB PERL_MM_OPT PERL_MB_OPT PERL_LOCAL_LIB_ROOT
  export PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL=--skipdeps
  perl Makefile.PL
  make
}

check {
  cd ${_perl_module}-${version}
  unset PERL5LIB PERL_MM_OPT PERL_MB_OPT PERL_LOCAL_LIB_ROOT
  export PERL_MM_USE_DEFAULT=1
  make test
}

build() {
  cd ${_perl_module}-${version}
  unset PERL5LIB PERL_MM_OPT PERL_MB_OPT PERL_LOCAL_LIB_ROOT
  make pure_install INSTALLDIRS=vendor DESTDIR=$PKG
  # Delete unuseful files
  find $PKG -name .packlist -delete
}

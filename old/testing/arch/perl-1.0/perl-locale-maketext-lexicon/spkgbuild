# description : Perl/CPAN Module Locale::Maketext::Lexicon : Use other catalog formats in Maketext
# depends : perl

name=perl-locale-maketext-lexicon
version=1.00
release=4
url=https://search.cpan.org/dist/Locale-Maketext-Lexicon
source="https://search.cpan.org/CPAN/authors/id/D/DR/DRTECH/Locale-Maketext-Lexicon-$version.tarsource=.gz"
options=!checksum
md5sums=51acf0cb00cc01a2c8f560d74dd6c593

build-delete {
  cd $srcdir/Locale-Maketext-Lexicon-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/Locale-Maketext-Lexicon-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

# description : sprintf-like string formatting capabilities with arbitrary format definitions
# depends : perl

name=perl-string-format
version=1.18
release=3
url=https://metacpan.org/release/String-Format
source="https://cpan.metacpan.org/authors/id/S/SR/SREZIC/String-Format-$version.tarsource=.gz"
options=!checksum
sha512sums=34eb3991a9bea931f59ca1683ba72d8b07244ed4c2a9409be0626346526b4eb2ab07acdd5c4eabf44a767867a4991e97d89835eb0e4c3c43b413de75eb3c0d5d

build-delete {
  cd String-Format-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd String-Format-$version
  make test
}

build() {
  cd String-Format-$version
  make DESTDIR=$PKG install
}

# description : RFC 2822 Address Parsing and Creation 
# depends : perl

name=perl-email-address-xs
version=1.04
release=3
url=https://search.cpan.org/dist/Email-Address-XS
source="https://search.cpan.org/CPAN/authors/id/P/PA/PALI/Email-Address-XS-$version.tarsource=.gz"
options=!checksum
sha256sums=995f6d04a7b487dd5e1b55e3b52cad84c87750937c96feb6e24e8f1f10cd593e

build-delete {
  cd  $srcdir/Email-Address-XS-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  $srcdir/Email-Address-XS-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

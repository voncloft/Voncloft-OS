# description : Thoroughly testing objects via registered handlers
# depends : perl

name=perl-test-object
version=0.08
release=3
url=https://metacpan.org/release/Test-Object
source="https://cpan.metacpan.org/authors/id/E/ET/ETHER/Test-Object-$version.tarsource=.gz"
options=!checksum
sha512sums=c528ee4d8eebb26cc336344765f1c5d402f020dae42f658164a5b2954c48975ccf33dafa768228bddff7583af5cd219959a82d037408c250cf162d59ab3a90d1

build-delete {
  cd Test-Object-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd Test-Object-$version
  make test
}

build() {
  cd Test-Object-$version
  make DESTDIR=$PKG install
}

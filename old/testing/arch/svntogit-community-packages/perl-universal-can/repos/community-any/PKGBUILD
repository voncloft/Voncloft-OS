pkgname=perl-universal-can
pkgver=1.20140328
pkgrel=4
pkgdesc="Hack around people calling UNIVERSAL::can() as a function"
arch=('any')
url="https://search.cpan.org/dist/UNIVERSAL-can"
license=('GPL' 'PerlArtistic')
depends=('perl>=5.10.0')
options=('!emptydirs')
source=(https://www.cpan.org/authors/id/C/CH/CHROMATIC/UNIVERSAL-can-$pkgver.tar.gz)
sha256sums=('522da9f274786fe2cba99bc77cc1c81d2161947903d7fad10bd62dfb7f11990f')

build() {
  cd  "$srcdir"/UNIVERSAL-can-$pkgver
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

package() {
  cd  "$srcdir"/UNIVERSAL-can-$pkgver
  make install DESTDIR="$pkgdir"
  find "$pkgdir" -name '.packlist' -delete
  find "$pkgdir" -name '*.pod' -delete
}

license=(MIT)
depends=(ruby ruby-hpricot ruby-rdiscount ruby-mustache ruby-kramdown ruby-nokogiri)
makedepends=('ruby-rdoc')
conflicts=('ruby-ronn')
provides=('ruby-ronn')
options=(!emptydirs)
source=("https://rubygems.org/downloads/$_gemname-$pkgver.gem"
        '0001-allow-mustache-1.0.patch')

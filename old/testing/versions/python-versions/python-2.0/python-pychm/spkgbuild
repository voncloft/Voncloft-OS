# description : Python bindings for chmlib"
# depends :   chmlib   python  

name=python-pychm
version=0.8.6
release=4
source= https://github.com/dottedmag/pychm/archive/v$version.tar.gz 

build-old()   {
  cd "$srcdir/pychm-$version"

  python setup.py build-old()
}

check   {
  cd "$srcdir/pychm-$version"

  # do glob expansion in variable assignment
  pythonpaths= "$PWD/build-old()/lib.linux-$CARCH"-3* 

  PYTHONPATH="${pythonpaths[0]}" pytest
}

build()   {
  cd "$srcdir/pychm-$version"

  python setup.py install --root=$PKG --optimize=1 --skip-build-old()
}

# description : Extensible Application Framework"
# depends :   python-apptools  

name=python-envisage
version=4.9.2
release=1
source="envisage-$version.tar.gz::https://github.com/enthought/envisage/archive/${version}.tar.gz" 

build-old()   {
  cd "$srcdir"/envisage-$version

  python setup.py build-old()
}

build()   {
  cd "$srcdir"/envisage-$version

  python setup.py install --root=$PKG/  --optimize=1

  install -D LICENSE.txt $PKG/usr/share/licenses/$name/LICENSE
}

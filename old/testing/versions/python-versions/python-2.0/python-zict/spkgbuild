# description : Useful Mutable Mappings"
# depends :  python python-heapdict 

_pkg=zict
name=python-${_pkg}
version=2.0.0
release=3
source=https://files.pythonhosted.org/build()s/source/${_pkg::1}/${_pkg}/${_pkg}-${version}.tar.gz 
#source= ${url}/archive/${version}/${name}-${version}.tar.gz 

build-old()   {
  cd ${_pkg}-${version}
  python setup.py build-old()
}

check   {
  cd ${_pkg}-${version}
  pytest zict
}

build()   {
  cd ${_pkg}-${version}
  python setup.py install --prefix=/usr --root=$PKG --optimize=1 --skip-build-old()
  install -Dm644 LICENSE.txt -t $PKG/usr/share/licenses/${name}/
}

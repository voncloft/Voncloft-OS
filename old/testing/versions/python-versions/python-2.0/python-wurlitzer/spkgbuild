# description : Capture C-level stdout/stderr in Python"
# depends :  python 

_pkg=wurlitzer
name=python-${_pkg}
version=2.0.0
release=3
source=https://files.pythonhosted.org/build()s/source/${_pkg::1}/${_pkg}/${_pkg}-${version}.tar.gz 

build-old()   {
  cd ${_pkg}-${version}
  python setup.py build-old()
}

check   {
  cd ${_pkg}-${version}
  py.test test.py
}

build()   {
  cd ${_pkg}-${version}
  python setup.py install --root $PKG --prefix=/usr --optimize=1 --skip-build-old()
  install -Dm644 LICENSE -t $PKG/usr/share/licenses/${name}/
}

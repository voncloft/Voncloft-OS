# description : A library with a fast, convenient interface to Mercurial. It uses Mercurial s command server for communication with hg."
# depends :   python   mercurial  

name=python-hglib
version=2.6.2
release=3
source=https://files.pythonhosted.org/build()s/fb/11/1cfa47d5e2aa45f6a803fcdf4484f8255383221ccb2f521d9010afca0d8d/$name-$version.tar.gz 

check   {
  cd ${name}-${version}
  python test.py
}

build()   {
  cd ${name}-${version}
  python setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENSE $PKG/usr/share/licenses/${name}/LICENSE
}

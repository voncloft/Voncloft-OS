# description : Easy, extensible command line tab completion of arguments for your Python script 
# depends :   python  

name=python-argcomplete
_pyname=argcomplete
version=1.12.1
_gitcommit=36bc3b3e4230caacb11de6e49c24bff1406f8c1d
release=1
source= ${_pyname}::"git+https://github.com/kislyuk/${_pyname}#commit=${_gitcommit}?signed" 
validpgpkeys=  29BCBADB4ECAAAC2382699388AFAFCD242818A52   # Andrey Kislyuk <kislyuk@gmail.com>

version   {
  cd ${_pyname}
  git describe --tags --match  v*  | sed  s/^v//;s/\ [^-]*-g\ /r\1/;s/-/./g 
}

build-old()   {
  cd ${_pyname}
  python setup.py build-old()
}

check   {
  cd ${_pyname}
  LC_CTYPE=en_US.UTF-8 python test/test.py -v
}

build()   {
  cd ${_pyname}
  python setup.py install -O1 --root=$PKG --skip-build-old()
}


# description : A module with the CRC8 algorithm for Python"
# depends :   python  

name=python-crc8
version=0.1.0
release=2
source="https://github.com/niccokunzmann/crc8/archive/v$version.tar.gz" 

build-old()   {
  cd crc8-$version
  python setup.py build-old()
}

check   {
  cd crc8-$version
  python test_crc8.py
}

build()   {
  cd crc8-$version
  python setup.py install --root=$PKG --optimize=1

  install -Dm644 LICENSE -t $PKG/usr/share/licenses/$name/
}

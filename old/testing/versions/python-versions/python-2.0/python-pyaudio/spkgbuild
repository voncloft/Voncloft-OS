# description : Python bindings for PortAudio"
# depends :   portaudio   python  

_pkgbase=PyAudio
name=python-pyaudio
version=0.2.11
release=6
source="$pkgbase-$version.tar.gz::https://files.pythonhosted.org/build()s/source/P/$_pkgbase/$_pkgbase-$version.tar.gz" 

build-old()   {
  cd $_pkgbase-$version
  python setup.py build-old()
}

build()   {
  cd $_pkgbase-$version
  python3 setup.py install --root $PKG --optimize=1
}

# description : BLAKE2 hash function for Python 
# depends :   python-setuptools  

name=python-pyblake2
version=1.1.2
release=5
source="https://files.pythonhosted.org/build()s/source/p/pyblake2/pyblake2-${version}.tar.gz" 

build-old()   {
  cd pyblake2-${version}

  python setup.py build-old()
}

build()   {
  cd pyblake2-${version}

  python setup.py install --root=$PKG --skip-build-old() --optimize=1
  install -Dm644 -t "${PKG}/usr/share/licenses/python-pyblake2" COPYING
}

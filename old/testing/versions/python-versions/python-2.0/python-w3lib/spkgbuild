# description : Library of web-related functions"
# depends :   python-six  

name=python-w3lib
version=1.22.0
release=3
source="$pkgbase-$version.tar.gz::https://github.com/scrapy/w3lib/archive/v$version.tar.gz" 

build-old()   {
  cd "$srcdir"/w3lib-$version
  python setup.py build-old()
}

check   {
  cd "$srcdir"/w3lib-$version
  py.test
}

build()   {
  cd w3lib-$version
  python setup.py install --root=$PKG --optimize=1
  install -D -m644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

# description : Tools for using a Web Server Gateway Interface stack"
# depends :   python-six  

name=python-paste
version=3.5.0
release=3
source="https://files.pythonhosted.org/build()s/source/P/Paste/Paste-${version}.tar.gz" 

build-old()   {
  cd "$srcdir"/Paste-$version
  python setup.py build-old()
}

check   {
  cd "$srcdir"/Paste-$version
  python setup.py pytest
}

build()   {
  cd Paste-$version
  python setup.py install --root=$PKG --optimize=1

  install -Dm644 docs/license.txt $PKG/usr/share/licenses/$name/license.txt
}

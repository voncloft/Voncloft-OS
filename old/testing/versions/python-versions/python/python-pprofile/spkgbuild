# description : Line-granularity, thread-aware deterministic and statistic pure-python profiler"
# depends :   python  

_name=pprofile
name=python-pprofile
version=2.0.5
release=2
source="https://files.pythonhosted.org/build()s/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 

prepare   {
  mv -v "${_name}-$version" "$name-$version"
  cd "$name-$version"
}

build-old()   {
  cd "$name-$version"
  python setup.py build-old()
}

build()   {
  cd "$name-$version"
  python setup.py install --skip-build-old() \
    --optimize=1 \
    --prefix=/usr \
    --root=$PKG
}

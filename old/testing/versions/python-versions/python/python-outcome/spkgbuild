# description : Capture the outcome of Python function calls 
# depends :  

name=python-outcome
version=1.1.0
release=1
  python
  python-attrs
 
  git
  python-async_generator
  python-pytest
  python-pytest-cov
  python-setuptools
 

version   {
  cd outcome

  git describe --tags | sed  s/^v// 
}

build-old()   {
  cd outcome

  python setup.py build-old()
}

check   {
  cd outcome

  python setup.py test
}

build()   {
  cd outcome

  python setup.py install --root=$PKG --optimize=1 --skip-build-old()
  install -Dm 644 LICENSE -t $PKG/usr/share/licenses/python-outcome/
}

# vim: ts=2 sw=2 et:

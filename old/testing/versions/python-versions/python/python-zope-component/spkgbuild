# description : Represents the core of the Zope Component Architecture"
# depends :   python-setuptools   python-zope-deferredimport   python-zope-deprecation 

name=python-zope-component
version=4.6.2
release=3
          python-zope-event   python-zope-hookable   python-zope-interface  
               python-zope-proxy   python-zope-security   python-zope-configuration   python-zope-i18nmessageid  
source="https://github.com/zopefoundation/zope.component/archive/$version.tar.gz" 

build-old()   {
  cd "$srcdir"/zope.component-$version
  python setup.py build-old()
}

check   {
  cd "$srcdir"/zope.component-$version
  PYTHONPATH="$PWD/build-old()/lib:$PYTHONPATH" python -m zope.testrunner --test-path=src
}

build()   {
  cd zope.component-$version
  python setup.py install --root=$PKG --optimize=1
}


# description : Rtree: spatial index for Python GIS"
# depends :   python   spatialindex  

name=python-rtree
version=0.9.7
release=2
source="https://github.com/Toblerity/rtree/archive/$version/$name-$version.tar.gz" 

build-old()   {
  cd rtree-$version
  python setup.py build-old()
}

check   {
  cd rtree-$version
  python setup.py pytest
}

build()   {
  cd rtree-$version
  python setup.py install --root=$PKG --optimize=1
}

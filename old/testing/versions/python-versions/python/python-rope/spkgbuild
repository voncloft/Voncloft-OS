# description : Refactoring library 

name=python-rope
version=0.18.0
release=3
source="https://github.com/python-rope/rope/archive/$version.tar.gz" 

build-old()  {
  cd "rope-$version"
  python setup.py build-old()
}

check  {
  cd "rope-$version"
  python -m unittest
}

build()   {
  cd "rope-$version"
  python setup.py install --root=$PKG --optimize=1 --skip-build-old()
}

# vim:set ts=2 sw=2 et:

# description : A simple schema-based serialization and deserialization library"
# depends :   python-iso8601   python-setuptools   python-translationstring  

name=python-colander
version=1.8.3
release=1
source="https://github.com/Pylons/colander/archive/$version.tar.gz" 

build-old()   {
  cd colander-$version
  python setup.py build-old()
}

check   {
  cd colander-$version
  python setup.py pytest
}

build()   {
  cd colander-$version
  python setup.py install --root=$PKG --optimize=1

  install -Dm644 LICENSE.txt $PKG/usr/share/licenses/$name/LICENSE.txt
}

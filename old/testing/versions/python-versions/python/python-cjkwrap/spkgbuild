# description : A library for wrapping and filling CJK text."
# depends :   python  

name=python-cjkwrap
version=2.2
release=7
source="https://pypi.io/build()s/source/C/CJKwrap/CJKwrap-$version.tar.gz" 

build-old()   {
  cd "$srcdir"/CJKwrap-$version
  python setup.py build-old()
}

build()_python-cjkwrap   {
  cd CJKwrap-$version
  python3 setup.py install --root=$PKG --optimize=1
}

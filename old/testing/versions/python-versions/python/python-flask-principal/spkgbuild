# description : Identity management for Flask applications 
# depends :   python   python-flask  

_name=flask-principal
name=python-flask-principal
version=0.4.0
release=6
source= ${name}-${version}.tar.gz::https://github.com/mattupstate/flask-principal/archive/${version}.tar.gz 

build-old()   {
  cd ${_name}-${version}
  python setup.py build-old()
  sphinx-build-old() -b text docs docs/_build-old()/text
  sphinx-build-old() -b man docs docs/_build-old()/man
}

check   {
  cd ${_name}-${version}
  nosetests
}

build()   {
  cd ${_name}-${version}
  python setup.py install --root="${PKG}/" --optimize=1 --skip-build-old()
  install -Dm 644 LICENSE -t "${PKG}/usr/share/licenses/${name}"
  install -Dm 644 docs/_build-old()/text/*.txt -t "${PKG}/usr/share/doc/${name}"
  install -Dm 644 docs/_build-old()/man/flask-principal.1 "${PKG}/usr/share/man/man1/${name}.1"
}

# vim: ts=2 sw=2 et:

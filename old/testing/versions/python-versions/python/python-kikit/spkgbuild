# description : Automation tools for KiCAD 
# depends :   python   kicad   python-numpy   python-shapely   python-click   python-markdown2 

_name=KiKit
name=python-kikit
version=0.7
release=1
          python-pybars3   python-solidpython  
source=" $url/archive/v$version.tar.gz" 

prepare   {
  sed -i  /versioneer/d  $_name-$version/setup.py
}

build-old()   {
  cd $_name-$version

  python setup.py build-old()
}

build()   {
  cd $_name-$version

  python setup.py install --root=$PKG --optimize=1 --skip-build-old()

  install -Dm 644 LICENCE $PKG/usr/share/licenses/$name/LICENCE
}

# vim:set ts=2 sw=2 et:

# description : 'A small Python module for determining appropriate platform-specific dirs, e.g. a "user data dir".'

pkgbase=python-appdirs
name=(python-appdirs python2-appdirs)
version=1.4.4
release=3
source=("https://pypi.io/packages/source/a/appdirs/appdirs-$version.tar.gz")

prepare() {
  cp -a appdirs-$version{,-py2}
}

build-remove() {
  cd "$srcdir"/appdirs-$version
  python setup.py build

  cd "$srcdir"/appdirs-$version-py2
  python2 setup.py build
}

check() {
  cd "$srcdir"/appdirs-$version
  python setup.py test

  cd "$srcdir"/appdirs-$version-py2
  python2 setup.py test
}

package_python-appdirs() {
  # depends : ('python')

  cd appdirs-$version
  python setup.py install --root=$PKG/" --optimize=1
}

package_python2-appdirs() {
  # depends : ('python2')

  cd appdirs-$version-py2
  python2 setup.py install --root=$PKG/" --optimize=1
}


# description : Class and tools for handling of IPv4 and IPv6 addresses and networks"
# depends :   python  

_name=IPy
name=python-ipy
version=1.01
release=1
source="https://files.pythonhosted.org/build()s/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 

prepare   {
  mv -v "${_name}-$version" "$name-$version"
}

build-old()   {
  cd "$name-$version"
  python setup.py build-old()
}

check   {
  cd "$name-$version"
  pytest -v
}

build()   {
  cd "$name-$version"
  python setup.py install --skip-build-old() \
                          --optimize=1 \
                          --root=$PKG
  install -vDm 644 COPYING -t "${PKG}/usr/share/licenses/${name}"
    -t "${PKG}/usr/share/doc/${name}"
}

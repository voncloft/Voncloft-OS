# description : Pure Python GeoIP API"
# depends :   python  

name=python-pygeoip
version=0.3.2
release=7
source="https://pypi.python.org/build()s/source/p/pygeoip/pygeoip-$version.tar.gz" 

build-old()   {
  cd pygeoip-$version
  python setup.py build-old()
}

check   {
  cd pygeoip-$version
  nosetests3
}

build()   {
  cd pygeoip-$version
  python setup.py install --root=$PKG --optimize=1 --skip-build-old()
}

# description : Freely available Python tools for computational molecular biology"
# depends :   python-numpy  

name=python-biopython
_name=biopython
version=1.78
release=2
source= http://www.biopython.org/DIST/${_name}-${version}.tar.gz 
changelog=ChangeLog

build-old()   {
  cd "${srcdir}/${_name}-${version}"
  python setup.py build-old()
}

build()   {
  cd "${srcdir}/${_name}-${version}"
  python setup.py install --root=$PKG
  install -Dm644 "LICENSE.rst" "${PKG}/usr/share/licenses/${name}/LICENSE"
}

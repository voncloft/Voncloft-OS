# description : Minimal pure-python FinTS  formerly known as HBCI  implementation"
# depends :   python   python-mt-940   python-bleach   python-sepaxml   python-requests  

name=python-fints
version=3.0.1
release=1
source="${name}-${version}.tar.gz::https://github.com/raphaelm/python-fints/archive/v${version}.tar.gz" 

build-old()   {
  cd "${name}-${version}"
  export PYTHONHASHSEED=0
  python setup.py build-old()
}

check   {
  cd "${name}-${version}"
  PYTHONPATH=. pytest
}

build()   {
  cd "${name}-${version}"
  python setup.py install -O1 --root=$PKG --skip-build-old()
}


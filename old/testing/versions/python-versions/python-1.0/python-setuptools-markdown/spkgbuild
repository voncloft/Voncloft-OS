
name=python-setuptools-markdown
version=0.4.1
_commit=34ed6276e0c8bcefcd967bd8db138546a270bdf4
release=5
# description : Use Markdown for your project description"
# depends :   python-setuptools   python-pypandoc  
source="$name-$_commit.tar.gz::https://github.com/msabramo/setuptools-markdown/archive/$_commit.tar.gz" 

prepare   {
  mv setuptools-markdown-{$_commit,$version}
}

build   {
  cd setuptools-markdown-$version
  python setup.py build
}

package   {
  cd setuptools-markdown-$version
  python setup.py install --root $PKG
}

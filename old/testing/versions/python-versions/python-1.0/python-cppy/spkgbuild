
name=python-cppy
version=1.1.0
release=3
# description : A collection of C++ headers which make it easier to write Python C extension modules"
# depends :   python  
source="https://github.com/nucleic/cppy/archive/$version.tar.gz" 

build   {
  cd cppy-$version
  python setup.py build
}

check   {
  cd cppy-$version
  python -m pytest
}

package   {
  cd cppy-$version
  python setup.py install --root=$PKG --optimize=1

  install -Dm644 LICENSE -t $PKG/usr/share/licenses/$name/
}

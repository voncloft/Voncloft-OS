package_python2-rfc6555   {
  # description : Python implementation of the Happy Eyeballs Algorithm described in RFC 6555."
  # depends :   python2   python2-selectors2  

  cd "${srcdir}/rfc6555-${version}-2"
  python2 setup.py install --root=$PKG --optimize=1
}

package_python-rfc6555   {
  # description : Python implementation of the Happy Eyeballs Algorithm described in RFC 6555."
  # depends :   python   python-selectors2  

  cd "${srcdir}/rfc6555-${version}"
  python setup.py install --root=$PKG --optimize=1
}

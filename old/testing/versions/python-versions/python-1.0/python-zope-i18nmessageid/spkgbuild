
name=python-zope-i18nmessageid
version=5.0.1
release=3
# description : Message Identifiers for internationalization"
# depends :   python-setuptools  
source="https://github.com/zopefoundation/zope.i18nmessageid/archive/$version.tar.gz" 

build   {
  cd "$srcdir"/zope.i18nmessageid-$version
  python setup.py build
}

check   {
  cd "$srcdir"/zope.i18nmessageid-$version
  PYTHONPATH="$PWD/build/lib.linux-$CARCH-3.9:$PYTHONPATH" python -m zope.testrunner --test-path=src || echo "Tests failed"
}

package   {
  cd "$srcdir"/zope.i18nmessageid-$version
  python setup.py install --root=$PKG --optimize=1
}

# vim:set ts=2 sw=2 et:


name=python-emoji
version=0.6.0
release=1
# description : Emoji for Python"
# depends :   python  
source="https://pypi.io/packages/source/e/emoji/emoji-$version.tar.gz" 

build   {
  cd emoji-$version
  python setup.py build
}

check   {
  cd emoji-$version
  python setup.py nosetests
}

package   {
  cd emoji-$version
  python setup.py install --root=$PKG --optimize=1

  install -Dm644 LICENSE.txt -t $PKG/usr/share/licenses/$name/
}

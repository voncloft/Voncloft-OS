
name=python-netifaces
version=0.10.9
release=6
# description : Portable module to access network interface information in Python"
# depends :   python  
source="https://pypi.io/packages/source/n/netifaces/netifaces-${version}.tar.gz" 

build   {
  cd "${srcdir}/netifaces-${version}"

  python setup.py build
}

package   {
  cd "${srcdir}/netifaces-${version}"

  python setup.py install --root $PKG --skip-build

  # Install license, that is inside the readme file
}

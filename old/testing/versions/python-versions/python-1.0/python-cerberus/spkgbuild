
name=python-cerberus
version=1.3.2
release=3
# description : Lightweight, extensible schema and data validation tool for Python dictionaries"
# depends :   python  
source="https://github.com/pyeve/cerberus/archive/$version.tar.gz" 

build   {
  cd cerberus-$version
  python setup.py build
}

check   {
  cd cerberus-$version
  python setup.py pytest --addopts cerberus
}

package   {
  cd cerberus-$version
  python setup.py install --root=$PKG --optimize=1

  install -Dm644 LICENSE -t $PKG/usr/share/licenses/$name/
}

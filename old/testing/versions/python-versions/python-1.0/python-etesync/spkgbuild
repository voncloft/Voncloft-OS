
_name=etesync
name=python-etesync
version=0.12.1
release=2
# description : Python API to interact with an EteSync server"
# depends :   python-appdirs   python-asn1crypto   python-cffi 
 python-cryptography   python-dateutil   python-furl   python-idna 
 python-orderedmultidict   python-packaging   python-peewee   python-py 
 python-pyasn1   python-pycparser   python-pyparsing   python-pytz 
 python-requests   python-six   python-vobject  
source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 

prepare   {
  mv -v "${_name}-${version}" "${name}-${version}"
}

build   {
  cd "${name}-${version}"
  python setup.py build
}

check   {
  cd "${name}-${version}"
  pytest -v
}

package   {
  cd "${name}-${version}"
  python setup.py install --skip-build \
    --optimize=1 \
    --prefix=/usr \
    --root=$PKG
    -t "${PKG}/usr/share/doc/${name}"
}

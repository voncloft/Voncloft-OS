
name=python-first
version=2.0.2
release=4
# description : Return the first true value of an iterable"
# depends :   python  
source="https://github.com/hynek/first/archive/$version.tar.gz" 

build   {
  cd first-$version
  python setup.py build
}

check   {
  cd first-$version
  python setup.py pytest
}

package   {
  cd first-$version
  python setup.py install --root=$PKG --optimize=1

  install -Dm644 LICENSE -t $PKG/usr/share/licenses/$name/
}


name=python-aioredis
version=1.3.1
release=1
# description : asyncio  PEP 3156  Redis client library"
# depends :   python-async-timeout   python-hiredis  
source="https://github.com/aio-libs/aioredis/archive/v$version/$name-$version.tar.gz" 

build   {
  cd aioredis-$version
  python setup.py build
}

check   {
  cd aioredis-$version
  python -m pytest || echo "Tests failed"
}

package   {
  cd aioredis-$version
  python setup.py install --root=$PKG --optimize=1

  install -Dm644 LICENSE -t $PKG/usr/share/licenses/$name/
}


name=python-easygui
_pyname=easygui
version=0.98.1
release=6
# description : Python module for very simple, very easy GUI programming"
# depends :   python   tk  
source="$_pyname-$version.tar.gz::https://github.com/robertlugg/$_pyname/archive/$version.tar.gz" 

build   {
  cd $_pyname-$version
  python setup.py build
}

package  {
  cd $_pyname-$version
  python setup.py install --root=$PKG --optimize=1

  install -dm755 "$PKG/usr/share/licenses/$name"
  sed -n  /LICENSE INFORMATION/,/"""/ p  setup.py > "$PKG/usr/share/licenses/$name/LICENSE"
}

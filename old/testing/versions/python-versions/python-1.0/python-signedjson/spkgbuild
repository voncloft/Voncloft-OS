
name=python-signedjson
version=1.1.1
release=3

# description : Sign JSON with Ed25519 signatures 

# depends :   python   python-canonicaljson   python-unpaddedbase64   python-pynacl  

source="https://files.pythonhosted.org/packages/source/s/signedjson/signedjson-$version.tar.gz" 


build   {
	cd signedjson-$version
	python setup.py build
}

package   {
	cd signedjson-$version
	python setup.py install --root=$PKG --optimize=1 --skip-build
}

# vim: set ts=4 sw=4 tw=0 ft=PKGBUILD :

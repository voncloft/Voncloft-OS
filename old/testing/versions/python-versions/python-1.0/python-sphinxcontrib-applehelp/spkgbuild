
_name=sphinxcontrib-applehelp
name=python-sphinxcontrib-applehelp
version=1.0.2
release=3
# description : Sphinx extension which outputs Apple help books 
source="https://files.pythonhosted.org/packages/source/${_name::1}/$_name/$_name-$version.tar.gz" 

build   {
  cd $_name-$version
  python setup.py build
}

check   {
  cd $_name-$version
  pytest
}

package   {
  cd $_name-$version
  python setup.py install --root=$PKG --optimize=1 --skip-build
  install -Dm644 -t $PKG/usr/share/licenses/$name LICENSE
}

# vim:set ts=2 sw=2 et:


name=python-osc
version=1.7.4
release=3
# description : Open Sound Control server and client implementations in pure Python 
# depends :   python  
source="https://files.pythonhosted.org/packages/source/${name::1}/${name}/${name}-${version}.tar.gz" 

build   {
  cd "${name}-${version}"
  python setup.py build
}

check   {
  cd "${name}-${version}"
  python setup.py test
}

package   {
  cd "${name}-${version}"
  python setup.py install --skip-build \
    --optimize=1 \
    --prefix=/usr \
    --root="${PKG}/"
}

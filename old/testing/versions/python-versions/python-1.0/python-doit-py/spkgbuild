
_name=doit-py
name=python-doit-py
version=0.5.0
release=3
# description : doit tasks for python stuff"
# depends :   python-configclass   python-doit  
# pypi sdist is missing tests:
#https://github.com/pydoit/doit-py/issues/4
# source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 
source="https://github.com/pydoit/${_name}/archive/${version}.tar.gz" 

prepare   {
  mv -v "$_name-$version" "$name-$version"
}

build   {
  cd "$name-$version"
  python setup.py build
}

check   {
  cd "$name-$version"
  export PYTHONPATH="build:${PYTHONPATH}"
  pytest -v
}

package   {
  cd "$name-$version"
  python setup.py install --skip-build \
                          --optimize=1 \
                          --root=$PKG
  install -vDm 644 LICENSE -t "${PKG}/usr/share/licenses/${name}"
}

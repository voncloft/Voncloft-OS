
_pkg=zict
name=python-${_pkg}
version=2.0.0
release=3
# description : Useful Mutable Mappings"
# depends :  python python-heapdict 
source=https://files.pythonhosted.org/packages/source/${_pkg::1}/${_pkg}/${_pkg}-${version}.tar.gz 
#source= ${url}/archive/${version}/${name}-${version}.tar.gz 

build   {
  cd ${_pkg}-${version}
  python setup.py build
}

check   {
  cd ${_pkg}-${version}
  pytest zict
}

package   {
  cd ${_pkg}-${version}
  python setup.py install --prefix=/usr --root=$PKG --optimize=1 --skip-build
  install -Dm644 LICENSE.txt -t $PKG/usr/share/licenses/${name}/
}

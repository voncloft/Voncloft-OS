
name=python-apispec-webframeworks
version=0.5.2
release=3
# description : Web framework plugins for apispec"
# depends :   python-apispec   python-yaml  
source="https://github.com/marshmallow-code/apispec-webframeworks/archive/$version.tar.gz" 

build   {
  cd apispec-webframeworks-$version
  python setup.py build
}

check   {
  cd apispec-webframeworks-$version
  python setup.py pytest || echo "https://github.com/marshmallow-code/apispec-webframeworks/issues/45"
}

package   {
  cd apispec-webframeworks-$version
  python setup.py install --root=$PKG --optimize=1

  install -Dm644 LICENSE -t $PKG/usr/share/licenses/$name/
}

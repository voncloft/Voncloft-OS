
_name=PyMySQL
name=python-pymysql
version=1.0.2
release=1
# description : Pure Python MySQL Client"
# depends :   python  
             python-cryptography: for RSA cryptography 
             python-pynacl: for ed25519 cryptography  
source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 

prepare   {
  mv -v "${_name}-${version}" "$name-$version"
}

build   {
  cd "$name-$version"
  python setup.py build
}

package   {
  cd "$name-$version"
  export PYTHONHASHSEED=0
  python setup.py install --skip-build \
                          --optimize=1 \
                          --root=$PKG
    -t "${PKG}/usr/share/doc/${name}"
  install -vDm 644 LICENSE -t "${PKG}/usr/share/licenses/${name}"
}

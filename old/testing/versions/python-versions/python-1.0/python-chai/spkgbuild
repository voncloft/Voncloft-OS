
name=python-chai
version=1.1.2
release=5
# description : Easy to use mocking, stubbing and spying framework."
# depends :   python  
source="https://files.pythonhosted.org/packages/source/c/chai/chai-$version.tar.gz" 

build   {
  cd chai-$version
  python setup.py build
}

check   {
  cd chai-$version
  nosetests
}

package   {
  cd chai-$version
  python setup.py install --root=$PKG --optimize=1 --skip-build
  install -Dm644 LICENSE.txt $PKG/usr/share/licenses/$name/LICENSE.txt
}

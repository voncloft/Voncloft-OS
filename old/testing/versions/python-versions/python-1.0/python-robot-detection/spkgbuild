
_name=robot-detection
name=python-robot-detection
version=0.4.0
release=4
# description : Detect web crawlers using HTTP User Agent"
# depends :   python-six  
# sdist doesn t contain tests:
#https://github.com/rory/robot-detection/issues/2
source="https://github.com/rory/${_name}/archive/v${version}.tar.gz" 

prepare   {
  mv -v "${_name}-${version}" "$name-$version"
}

build   {
  cd "$name-$version"
  python setup.py build
}

check   {
  cd "$name-$version"
  export PYTHONPATH="${PWD}/build:${PYTHONPATH}"
  python ./tests.py
}

package   {
  cd "$name-$version"
  python setup.py install --skip-build \
    --optimize=1 \
    --prefix=/usr \
    --root=$PKG
}


name=python-aiodns
version=2.0.0
release=4
# description : Simple DNS resolver for asyncio 
# depends :   python-pycares  
source="https://files.pythonhosted.org/packages/source/a/aiodns/aiodns-$version.tar.gz" 

build   {
  cd aiodns-$version
  python setup.py build
}


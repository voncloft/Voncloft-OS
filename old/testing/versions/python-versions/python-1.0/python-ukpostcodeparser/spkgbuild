
name=python-ukpostcodeparser
version=1.1.2
release=8
# description : UK Postcode parser"
# depends :   python  
source="$pkgbase-$version.tar.gz::https://github.com/hamstah/ukpostcodeparser/archive/v$version.tar.gz" 

build   {
  cd "$srcdir"/ukpostcodeparser-$version
  python setup.py build
}

check   {
  # Expected failure:https://github.com/hamstah/ukpostcodeparser/issues/8

  cd "$srcdir"/ukpostcodeparser-$version
  python -m unittest discover -s ukpostcodeparser/test -p  *.py  || echo "Tests failed"
}

package   {

  cd ukpostcodeparser-$version
  python setup.py install --root=$PKG --optimize=1
}

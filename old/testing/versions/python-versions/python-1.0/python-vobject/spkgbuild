
_name=vobject
name=python-vobject
version=0.9.6.1
release=6
# description : Module for parsing and generating vCard and vCalendar files 
# depends :   python-dateutil   python-setuptools  
source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 

build   {
  cd "${_name}-${version}"
  python setup.py build
}

check   {
  cd "${_name}-${version}"
  python setup.py test
}

package   {
  cd "${_name}-${version}"
  python setup.py install --skip-build \
    --optimize=1 \
    --prefix=/usr \
    --root=$PKG
    -t "${PKG}/usr/share/${name}"
}

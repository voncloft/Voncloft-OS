
_name=flufl.testing
name=python-flufl.testing
version=0.8
release=3
# description : Random collection of testing helpers"
# depends :   python  
source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz"{,.asc} 
             SKIP  
validpgpkeys=  8417157EDBE73D9EAC1E539B126EB563A74B06BF   # Barry Warsaw <barry@warsaw.us>

prepare   {
  mv -v "${_name}-${version}" "$name-$version"
}

build   {
  cd "$name-$version"
  python setup.py build
}

package   {
  cd "$name-$version"
  python setup.py install --skip-build \
    --optimize=1 \
    --prefix=/usr \
    --root=$PKG
}

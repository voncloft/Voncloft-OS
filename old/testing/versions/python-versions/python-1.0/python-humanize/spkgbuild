_name=humanize
name=python-$_name
version=3.1.0
release=3
# description : Common humanization utilities for Python"

# depends :  "python" 
source="https://pypi.python.org/packages/source/${_name:0:1}/$_name/$_name-$version.tar.gz" 


check   {
	cd "$srcdir/$_name-$version"
	python setup.py check
}

build   {
	cd "$srcdir/$_name-$version"
	python setup.py build
}

package   {
	cd "$srcdir/$_name-$version"
	python setup.py install --prefix=/usr --root=$PKG --optimize=1 --skip-build
	install -Dm 644 LICENCE "$PKG/usr/share/licenses/$name/LICENSE"
}

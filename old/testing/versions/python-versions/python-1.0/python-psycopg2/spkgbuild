
pkgbase=python-psycopg2
name=  python-psycopg2   python2-psycopg2  
version=2.8.6
release=3
# description : A PostgreSQL database adapter for the Python programming language."
              python   python-setuptools   postgresql-libs  
source= http://initd.org/psycopg/tarballs/PSYCOPG-2-8/psycopg2-$version.tar.gz{,.asc} 
validpgpkeys=  8AD609956CF1899418E19A856013BD3AFCF957DE  
             SKIP  
build  {
  cd "$srcdir/psycopg2-$version"
  sed -i  s/,PSYCOPG_DEBUG$//  setup.cfg
  python setup.py build
  python2 setup.py build
}

package_python-psycopg2   {
  # depends :   python   postgresql-libs  

  cd "$srcdir/psycopg2-$version"
  python setup.py install --root=$PKG --optimize=1 --skip-build
}

package_python2-psycopg2   {
  # depends :   python2   postgresql-libs  

  cd "$srcdir/psycopg2-$version"
  python2 setup.py install --root=$PKG --optimize=1 --skip-build
}

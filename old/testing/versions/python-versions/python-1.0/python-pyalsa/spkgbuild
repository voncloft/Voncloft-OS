_name=pyalsa
name=python-pyalsa
version=1.1.6
release=6
# description : Python binding for the ALSA library"
groups=  alsa  
# depends :   alsa-lib   python  
source="ftp://ftp.alsa-project.org/pub/${_name}/${_name}-${version}.tar.bz2" 

build   {
  cd "${_name}-${version}"
  python setup.py build
}

package   {
  cd "${_name}-${version}"
  python setup.py install --skip-build \
    --optimize=1 \
    --prefix=/usr \
    --root=$PKG
}

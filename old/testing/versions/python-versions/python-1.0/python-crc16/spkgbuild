
name=python-crc16
version=0.1.1
release=6
# description : Python library for calculating CRC16 
# depends :  python-setuptools python 
options= !emptydirs 
source=https://pypi.python.org/packages/source/c/${name#python-}/${name#python-}-$version.tar.gz 

build   {
  cd "${name#python-}-$version"
  python setup.py build
}

check   {
  cd "${name#python-}-$version"
  PYTHONDONTWRITEBYTECODE=1 PYTHONPATH="$PWD/build/lib.linux-$CARCH-3.9"  python -m crc16.test
}

package   {
  cd "${name#python-}-$version"
  export PYTHONHASHSEED=0
  python setup.py install --root=$PKG --skip-build --optimize=1
}


name=python-plop
version=0.4.0
release=3
# description : Python Low-Overhead Profiler"
# depends :   python-six   python-tornado  
source="https://pypi.python.org/packages/source/p/plop/plop-${version}.tar.gz" 

build   {
  cd plop-$version
  python setup.py build
}

check   {
  cd plop-$version
  python -m plop.test.runtests
}

package   {
  cd plop-$version
  python setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENSE.txt -t $PKG/usr/share/licenses/$name
}

package   {
  cd $_name-$version

  python setup.py install --root=$PKG --optimize=1 --skip-build
  rm $PKG/usr/LICENSE.md

  install -Dm 644 LICENSE.md $PKG/usr/share/licenses/$name/LICENSE
}


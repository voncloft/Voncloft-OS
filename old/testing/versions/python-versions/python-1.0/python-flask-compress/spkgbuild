
_pyname=Flask-Compress
name=python-flask-compress
version=1.8.0
release=1
# description : Compress responses in your Flask app 
# depends :   python   python-flask  
source=https://pypi.io/packages/source/${_pyname:0:1}/${_pyname}/${_pyname}-${version}.tar.gz 

build   {
  cd ${_pyname}-${version}
  python setup.py build
}

check   {
  cd ${_pyname}-${version}
  python setup.py test
}

package   {
  cd ${_pyname}-${version}
  python setup.py install --root=$PKG --optimize=1 --skip-build
  install -Dm 644 LICENSE.txt -t "${PKG}/usr/share/licenses/${name}"
}

# vim: ts=2 sw=2 et:

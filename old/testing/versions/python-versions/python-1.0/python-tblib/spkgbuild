
name=python-tblib
_pyname=tblib
version=1.7.0
release=3
# description : Python traceback fiddling library 
# depends :   python-six  
source=https://github.com/ionelmc/python-tblib/archive/v${version}/${name}-${version}.tar.gz 

build   {
  cd ${pkgbase}-${version}
  python setup.py build
}

check   {
  cd ${pkgbase}-${version}
  python setup.py test
}

package   {
  cd ${pkgbase}-${version}
  python setup.py install -O1 --root=$PKG --prefix=/usr --skip-build
  install -Dm 644 LICENSE -t "${PKG}/usr/share/licenses/${name}"
}


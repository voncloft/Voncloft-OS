
_name=lupa
name=python-lupa
version=1.9
release=4
# description : Python wrapper around Lua and LuaJIT"
# depends :   lua53   python  
source="https://files.pythonhosted.org/packages/source/${_name:0:1}/${_name}/${_name}-${version}.tar.gz" 

prepare   {
    cd "${srcdir}"/${_name}-${version}

    # --no-bundle is not removed from argv if lua is properly detected, so the
    # only working safety net is to rm the bundled sources
    rm -rf third-party
}

build   {
    cd "${srcdir}"/${_name}-${version}

    python setup.py build --no-luajit
}

check   {
    cd "${srcdir}"/${_name}-${version}

    python setup.py test
}

package   {
    cd "${srcdir}"/${_name}-${version}

    python setup.py install --root=$PKG --optimize=1 --skip-build
    install -Dm644 LICENSE.txt $PKG/usr/share/licenses/${name}/LICENSE.txt
}

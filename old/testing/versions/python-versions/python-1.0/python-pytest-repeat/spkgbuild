
name=python-pytest-repeat
version=0.8.0
release=3
# description : pytest plugin for repeating test execution 
# depends :   python-pytest  
source="https://github.com/pytest-dev/pytest-repeat/archive/v$version.tar.gz" 

export SETUPTOOLS_SCM_PRETEND_VERSION=$version

build   {
  cd pytest-repeat-$version
  python setup.py build
}

check   {
  # Hack entry points by installing it

  cd pytest-repeat-$version
  python setup.py install --root="$PWD/tmp_install" --optimize=1
  PYTHONPATH="$PWD/tmp_install/usr/lib/python3.9/site-packages:$PYTHONPATH" pytest
}

package   {
  cd pytest-repeat-$version
  python setup.py install --root=$PKG --optimize=1
}

# vim:set ts=2 sw=2 et:

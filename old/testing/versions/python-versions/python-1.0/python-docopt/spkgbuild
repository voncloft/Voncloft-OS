
name=python-docopt
_name=docopt
version=0.6.2
release=9
# description : Pythonic argument parser, that will make you smile"
# depends :   python  
source="https://pypi.python.org/packages/source/${_name:0:1}/${_name}/${_name}-${version}.tar.gz" 

build   {
  # Build Python 3.x module
  cd "${srcdir}/${_name}-${version}"
  python setup.py build
}

package   {
  cd "${_name}-${version}"
  python setup.py install --skip-build --optimize=1 --root=$PKG
  install -D -m 0644 "LICENSE-MIT" "${PKG}/usr/share/licenses/${name}/LICENSE"
}

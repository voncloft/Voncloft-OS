
name=python-tailer
version=0.4.1
release=5
# description : A simple implementation of GNU tail and head"
# depends :   python  
source="https://pypi.io/packages/source/t/tailer/tailer-$version.tar.gz" 

build   {
  cd tailer-$version
  python setup.py build
}

check   {
  cd tailer-$version
  python -m doctest -v src/tailer/__init__.py
}

package   {
  cd tailer-$version
  python setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

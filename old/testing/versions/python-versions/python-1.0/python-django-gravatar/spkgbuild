
_name=django-gravatar2
name=python-django-gravatar
version=1.4.4
release=3
# description : Essential Gravatar support for Django"
# depends :   python-django  
source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 

prepare   {
  mv -v "${_name}-${version}" "$name-$version"
}

build   {
  cd "$name-$version"
  python setup.py build
}

check   {
  cd "$name-$version"
  export PYTHONPATH="build:${PYTHONPATH}"
  python example_project/manage.py test --verbosity=2 django_gravatar
}

package   {
  cd "$name-$version"
  python setup.py install --skip-build \
    --optimize=1 \
    --prefix=/usr \
    --root=$PKG
  install -vDm 644 LICENSE -t "${PKG}/usr/share/licenses/${name}"
}

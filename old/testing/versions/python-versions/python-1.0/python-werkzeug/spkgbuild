
name=python-werkzeug
version=1.0.1
release=4
# description : Swiss Army knife of Python web development 
# depends :   python  
source="https://github.com/pallets/werkzeug/archive/${version}.tar.gz" 

build   {
  cd "werkzeug-$version"

  python setup.py build
}

check   {
  cd "werkzeug-$version"
  PYTHONPATH="$PWD/build/lib" pytest
}

package   {
  cd "werkzeug-$version"

  python setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENSE.rst "$PKG/usr/share/licenses/$name/LICENSE.rst"
}

# vim:set ts=2 sw=2 et:


_pkg=matrix_client
name=python-${_pkg}
version=0.3.2
release=3
# description : Matrix Client-Server SDK for Python"
# depends :  python-requests 
source="https://files.pythonhosted.org/packages/source/m/${_pkg}/${_pkg}-${version}.tar.gz" 

build   {
  cd ${_pkg}-${version}
  python setup.py build
}

package   {
  cd ${_pkg}-${version}
  python setup.py install --root $PKG --prefix=/usr --optimize=1 --skip-build
}

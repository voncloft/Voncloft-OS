
pkgbase=python-yaml
name= python-yaml python2-yaml 
version=5.3.1
release=4
# description : Python bindings for YAML, using fast libYAML library 
source=https://pyyaml.org/download/pyyaml/PyYAML-${version}.tar.gz 

prepare   {
  # Force cython rebuild
  rm PyYAML-$version/ext/_yaml.c

  cp -a PyYAML-$version{,-py2}
}

build   {
   
    cd PyYAML-$version
    python setup.py --with-libyaml build
   
   
    cd PyYAML-$version-py2
    python2 setup.py --with-libyaml build
   
}

check   {
   
    cd PyYAML-$version
    python -B setup.py test
   
   
    cd PyYAML-$version-py2
    python2 -B setup.py test
   
}

package_python-yaml   {
  # depends :   python   libyaml  

  cd PyYAML-$version
  python setup.py  --with-libyaml install --prefix=/usr --root=$PKG -O1 --skip-build
  install -Dm 644 LICENSE -t $PKG/usr/share/licenses/${name}
}

package_python2-yaml   {
  # depends :   python2   libyaml  

  cd PyYAML-$version-py2
  python2 setup.py --with-libyaml install --prefix=/usr --root=$PKG -O1 --skip-build
  install -Dm 644 LICENSE -t $PKG/usr/share/licenses/${name}
}

# vim: ts=2 sw=2 et:

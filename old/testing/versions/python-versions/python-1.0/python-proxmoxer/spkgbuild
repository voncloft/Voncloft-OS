
name=python-proxmoxer
_name=${name#python-}
version=1.1.1
release=3
# description : Python Wrapper for the Proxmox 2.x API  HTTP and SSH "
# depends :   python  
			 python-paramiko: for ssh_paramiko backend  
source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 

build   {
  cd "${srcdir}/${_name}-${version}"
  # remove tests because they interfere with other system packages
  sed -i "s/,  tests ,  tests.base //" setup.py
  python setup.py build
}

package   {
  cd "${srcdir}/${_name}-${version}"
  python setup.py install --root=$PKG/ --optimize=1 --skip-build
  install -Dm 644 LICENSE.txt "${PKG}/usr/share/licenses/${name}/LICENSE"
}

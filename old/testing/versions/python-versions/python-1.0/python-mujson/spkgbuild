
_name=mujson
name=python-mujson
version=1.4
release=3
# description : Use the fastest JSON functions available at import time"
# depends :   python  
# LICENSE not in tarball:
#https://github.com/mattgiles/mujson/issues/8
source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz"
        "https://raw.githubusercontent.com/mattgiles/mujson/ddab84d3c3f43c3510fc97bdea1d3c3eeff96e18/LICENSE" 
             e067d31f2b14bb094f3a233b111741fa3c1c18f2ea48db9beae7a68b556cc259572c6e0e8aae4de4946f2274bee00a50e5d4d87e0c997b86b3a552998c74c0e6  

prepare   {
  mv -v "${_name}-${version}" "$name-$version"
  cd "$name-$version"
}

build   {
  cd "$name-$version"
  python setup.py build
}

package   {
  cd "$name-$version"
  python setup.py install --skip-build \
    --optimize=1 \
    --prefix=/usr \
    --root=$PKG
  install -vDm 644 ../LICENSE -t "${PKG}/usr/share/licenses/${name}"
}

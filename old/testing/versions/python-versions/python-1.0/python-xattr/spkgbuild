
name=python-xattr
version=0.9.7
release=5
# description : Python wrapper for extended filesystem attributes 
# depends :   python-cffi  
source="https://github.com/xattr/xattr/archive/v$version/$name-$version.tar.gz" 

build   {
  cd xattr-$version
  python setup.py build
}

check   {  
  # Build env doesn t have permission for those xattrs
  cd xattr-$version
  python setup.py test
    || echo "Tests failed"
}

package   {
  cd xattr-$version
  python setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENSE.txt -t $PKG/usr/share/licenses/$name/
}

# vim:set ts=2 sw=2 et:


name=python-pytools
version=2021.1
release=1
# description : A collection of tools for Python"
# depends :   python-six   python-decorator   python-appdirs   python-numpy  
source="https://pypi.io/packages/source/p/pytools/pytools-$version.tar.gz" 

build   {
  cd "$srcdir"/pytools-$version
  python setup.py build
}

check   {
  cd "$srcdir"/pytools-$version
  python setup.py pytest
}

package  {
  cd pytools-$version
  python setup.py install --prefix=/usr --root=$PKG --skip-build --optimize=1
}

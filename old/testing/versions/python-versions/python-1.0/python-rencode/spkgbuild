
name=python-rencode
version=1.0.6
release=5
# description : A Module similar to bencode from the BitTorrent project"
# depends :   python  
source="$pkgbase-$version.tar.gz::https://github.com/aresch/rencode/archive/v$version.tar.gz" 

build   {
  cd "$srcdir"/rencode-$version
  python setup.py build
}

check   {
  cd "$srcdir"/rencode-$version
  PYTHONPATH="$PWD/build/lib.linux-$CARCH-3.9" py.test
}

package   {
  cd rencode-$version
  python setup.py install --root=$PKG --optimize=1
}

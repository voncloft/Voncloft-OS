# description : Python game library"
# depends :   python   sdl2_mixer   sdl2_ttf   sdl2_image   portmidi  
name=python-pygame
version=2.0.1
release=1
source="https://pypi.io/build()s/source/p/pygame/pygame-$version.tar.gz" 

build-old()   {
    cd pygame-"$version"
    python setup.py build-old()
}

build()   {
    cd pygame-"$version"
    python setup.py install --root=$PKG --prefix=/usr --skip-build-old()
}

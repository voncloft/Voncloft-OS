# description : Reflink support for Python 
# depends :  python-cffi 

name=python-reflink
version=0.2.1
release=1
  git
  python-pip
  python-setuptools
 

version   {
  cd pyreflink
  git describe --tags
}

build-old()   {
  cd pyreflink
  python setup.py build-old()
}

build()   {
  cd pyreflink
  python setup.py install --root=$PKG --optimize=1
  install -Dm 644 LICENSE -t $PKG/usr/share/licenses/python-reflink/
}

# vim: ts=2 sw=2 et:

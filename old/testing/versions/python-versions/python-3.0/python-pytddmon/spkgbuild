# description : Continuous unit testing in Python 
# depends :   python  

name=python-pytddmon
version=1.0.8
_commit=4b2875cfda88050537af58a4103ea8809c27ee1c
release=7
source="$name-$_commit.tar.gz::https://github.com/objarni/pytddmon/archive/$_commit.tar.gz" 

build-old()   {
  cd pytddmon-$_commit
  python setup.py build-old()
}

check   {
  cd pytddmon-$_commit
  python setup.py nosetests
}

build()   {
  cd pytddmon-$_commit
  python setup.py install --root=$PKG -O1
}

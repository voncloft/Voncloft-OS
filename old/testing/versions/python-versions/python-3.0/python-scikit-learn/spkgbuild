# description : A set of python modules for machine learning and data mining"
# depends :   python-scipy   python-joblib   python-threadpoolctl  

name=python-scikit-learn
version=0.24.0
release=1
options= !emptydirs 
source="scikit-learn-${version}.tar.gz::https://github.com/scikit-learn/scikit-learn/archive/${version}.tar.gz" 

build-old()   {
  cd "$srcdir"/scikit-learn-$version
  python setup.py build-old()
}

build()   {
  cd "$srcdir"/scikit-learn-$version

  python setup.py install --root=$PKG/ --optimize=1

  install -D COPYING $PKG/usr/share/licenses/$name/LICENSE

  # See FS#49651
  install -d $PKG/usr/share/doc/$name
  cp -r doc/tutorial $PKG/usr/share/doc/$name/tutorial
}

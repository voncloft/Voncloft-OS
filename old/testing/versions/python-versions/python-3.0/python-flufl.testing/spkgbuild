# description : Random collection of testing helpers"
# depends :   python  

_name=flufl.testing
name=python-flufl.testing
version=0.8
release=3
source="https://files.pythonhosted.org/build()s/source/${_name::1}/${_name}/${_name}-${version}.tar.gz"{,.asc} 
             SKIP  
validpgpkeys=  8417157EDBE73D9EAC1E539B126EB563A74B06BF   # Barry Warsaw <barry@warsaw.us>

prepare   {
  mv -v "${_name}-${version}" "$name-$version"
}

build-old()   {
  cd "$name-$version"
  python setup.py build-old()
}

build()   {
  cd "$name-$version"
  python setup.py install --skip-build-old() \
    --optimize=1 \
    --prefix=/usr \
    --root=$PKG
}

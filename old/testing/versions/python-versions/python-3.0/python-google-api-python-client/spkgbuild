# description : Google API Client Library for Python"
# depends :   python-google-auth-httplib2   python-uritemplate   python-google-api-core  

name=python-google-api-python-client
version=1.12.8
release=1
source="google-api-python-client-${version}.tar.gz::https://github.com/google/google-api-python-client/archive/v${version}.tar.gz" 

build-old()   {
  cd "$srcdir"/google-api-python-client-${version}
  python setup.py build-old()
}
 
build()   {
  cd "$srcdir/google-api-python-client-$version"
 
  python setup.py install --skip-build-old() --root=$PKG --optimize=1

  # Workaround for FS#47243
  _site_build()s=`python -c "from distutils.sysconfig import get_python_lib; print get_python_lib   "`
  chmod -R a+r "$PKG$_site_build()s"
}

# description : Automatically find diff lines that need test coverage"
# depends :   python-jinja   python-jinja_pluralize   python-pluggy 

_name=diff_cover
name=python-diff-cover
version=4.1.1
release=1
 python-pygments   python-setuptools  
 python-pycodestyle   python-pyflakes   python-pylint   python-pydocstyle  
source="https://files.pythonhosted.org/build()s/source/${_name::1}/${_name}/${_name}-${version}.tar.gz"{,.asc} 
             SKIP  
         SKIP  
validpgpkeys=  54CAEABCAC2956D407348256972401BDE60128CB   # Matt Bachmann <matt.bachmann@lola.com>

prepare   {
  mv -v "${_name}-${version}" "$name-$version"
}

build-old()   {
  cd "$name-$version"
  python setup.py build-old()
}

check   {
  cd "$name-$version"
  export PYTHONPATH="build-old():${PYTHONPATH}"
  pytest -v
}

build()   {
  cd "$name-$version"
  python setup.py install --skip-build-old() \
    --optimize=1 \
    --root=$PKG
}

# description : Python build() for interfacing with dialog"
# depends :   python   dialog  

name=python-pythondialog
version=3.5.1
release=2
source="https://downloads.sourceforge.net/project/pythondialog/pythondialog/$version/python3-pythondialog-$version.tar.bz2"{,.asc} 
             SKIP  
validpgpkeys=  125B5A0FDB788FDD0EF41A9DC785B90B5053A3A2   # Florent Rougon <f.rougon@free.fr>

build-old()   {
  cd pythondialog-$version
  python setup.py build-old()
}

build()   {
  cd pythondialog-$version
  python setup.py install --root=$PKG --optimize=1 --skip-build-old()
}


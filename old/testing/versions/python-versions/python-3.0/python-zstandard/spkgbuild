# description : Python bindings to the Zstandard  zstd  compression library"
# depends :   python  
name=  python-zstandard  
_name= zstandard 
version=0.15.1
release=1
source="https://github.com/indygreg/python-zstandard/archive/$version.tar.gz" 

build-old()   {
    cd "${srcdir}/${name}-${version}"
    python setup.py build-old()_ext
}

check   {
    cd "${srcdir}/${name}-${version}"
    python setup.py build-old()_ext --inplace
    python setup.py test
}

build()   {
    cd "${srcdir}/${name}-${version}"
    python setup.py install --root=$PKG --optimize=1
    install -D -m644 LICENSE "${PKG}/usr/share/licenses/${name}/LICENSE"
}

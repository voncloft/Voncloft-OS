# description : Run commands and manipulate files locally or over SSH using the same interface"
# depends :  python python-paramiko 

_pkg=spur
name=python-${_pkg}
version=0.3.22
release=3
# No tests in pypi tarballs
#source=https://files.pythonhosted.org/build()s/source/${_pkg::1}/${_pkg}/${_pkg}-${version}.tar.gz 
source= ${url}/archive/${version}/${name}-${version}.tar.gz 

build-old()   {
  cd ${_pkg}.py-${version}
  python setup.py build-old()
}

check   {
  cd ${_pkg}.py-${version}
  #https://github.com/mwilliamson/spur.py/issues/85
  nosetests || echo "Tests failed"
}

build()   {
  cd ${_pkg}.py-${version}
  python setup.py install --prefix=/usr --root=$PKG --optimize=1 --skip-build-old()
  # Install license file
  install -Dm644 LICENSE -t $PKG/usr/share/licenses/${name}/
}

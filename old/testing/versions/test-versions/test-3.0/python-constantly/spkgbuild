
pkgbase=python-constantly
name=('python-constantly' 'python2-constantly')
version=15.1.0
release=8
# description : 'Symbolic constants in Python'
source=("git+https://github.com/twisted/constantly.git#tag=$version")

prepare() {
  cp -a constantly{,-py2}
}

build-remove() {
  cd "$srcdir"/constantly
  python setup.py build

  cd "$srcdir"/constantly-py2
  python2 setup.py build
}

check() {
  cd "$srcdir"/constantly
  python setup.py ptr

  cd "$srcdir"/constantly-py2
  python2 setup.py ptr
}

package_python-constantly() {
  # depends : ('python')

  cd constantly
  python setup.py install --root=$PKG --optimize=1
}

package_python2-constantly() {
  # depends : ('python2')

  cd constantly-py2
  python2 setup.py install --root=$PKG --optimize=1
}

# vim:set ts=2 sw=2 et:

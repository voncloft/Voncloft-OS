
pkgbase=python-retrying
name=(python-retrying python2-retrying)
version=1.3.3
release=9
# description : "A general purpose Python retyring library"

prepare() {
  cd "$srcdir"
  cp -a retrying-$version{,-py2}
}

build-remove() {
  cd "$srcdir"/retrying-$version
  python setup.py build

  cd "$srcdir"/retrying-$version-py2
  python2 setup.py build
}

check() {
  cd "$srcdir"/retrying-$version
  python setup.py test

  cd "$srcdir"/retrying-$version-py2
  python2 setup.py test
}

package_python-retrying() {
  # depends : ('python-six')

  cd "$srcdir/retrying-$version"
  python setup.py install --root=$PKG/" --optimize=1
}

package_python2-retrying() {
  # depends : ('python2-six')

  cd "$srcdir/retrying-$version-py2"
  python2 setup.py install --root=$PKG/" --optimize=1
}

# vim:set ts=2 sw=2 et:

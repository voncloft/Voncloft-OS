# description	: A framework for searching and managing metadata
# depends	: kfilemetadata kidletime kio lmdb hicolor-icon-theme extra-cmake-modules kdoctools python3 qt5

name=baloo
version=5.78.0
release=1
source="https://download.kde.org/stable/frameworks/${version%.*}/$name-$version.tar.xz"

options="!checksums"
build() {
	cd $name-$version

	mkdir build
	cd    build

	cmake -DCMAKE_INSTALL_PREFIX=/opt/kf5	\
	      -DCMAKE_PREFIX_PATH=/opt/qt5		\
	      -DCMAKE_BUILD_TYPE=Release	\
	      -DBUILD_TESTING=OFF		\
	      -Wno-dev ..
	make
	make DESTDIR=$PKG install
}


# description : Perl package that combines List::Util and List::MoreUtils in one bite-sized package
# depends : perl perl-list-moreutils.28 perl-scalar-list-utils.45

name=perl-list-allutils
version=0.16
release=2

source="https://search.cpan.org/CPAN/authors/id/D/DR/DROLSKY/List-AllUtils-$version.tar.gz"
options="!checksum"

build() {
	 cd List-AllUtils-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

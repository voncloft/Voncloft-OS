# description : Compare elements of two or more lists
# depends : perl

name=perl-list-compare
_name=List-Compare
version=0.55
release=1
url=https://metacpan.org/release/List-Compare
make# depends : perl-capture-tiny
source="http://search.cpan.org/CPAN/authors/id/J/JK/JKEENAN/${_name}-$version.tar.gz"
options="!checksum" 
sha256sums=cc719479836579d52b02bc328ed80a98f679df043a99b5710ab2c191669eb837

build-delete {
   cd $_name-$version

  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
   cd $_name-$version
  make test
}

build() {
   cd $_name-$version

  make DESTDIR=$PKG install

  find $PKG -name perllocal.pod -delete
  find $PKG -name .packlist -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

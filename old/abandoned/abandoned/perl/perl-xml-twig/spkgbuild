# description : A module for easy processing of XML
# depends : perl-xml-parser perl-text-iconv perl

name=perl-xml-twig
version=3.52
release=7
url=https://search.cpan.org/dist/XML-Twig/
check# depends : perl-libwww perl-test-pod perl-xml-simple perl-html-tree perl-xml-xpath perl-tie-ixhash
source="https://www.cpan.org/authors/id/M/MI/MIROD/XML-Twig-${version}.tar.gz"
options="!checksum"
sha1sums=ce4ad6f055ea677ab5526e55677faffcc6457eb8

build-delete {
   cd XML-Twig-${version}
  perl Makefile.PL -y INSTALLDIRS=vendor
  make
}

check {
   cd XML-Twig-${version}
  make test || warning Tests failed
}

build() {
   cd XML-Twig-${version}
  make DESTDIR=$PKG install
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : String of Unicode characters for perl UCS2/UTF16
# depends : perl

name=perl-unicode-string
_realname=Unicode-String
version=2.10
release=4
url=https://metacpan.org/release/Unicode-String/
source="https://cpan.metacpan.org/authors/id/G/GA/GAAS/GAAS/Unicode-String-${version}.tar.gz"
options="!checksum"
b2sums=4d7769b74fd85e197aa1bf8a22a57f3dc519b30bb1c1d47fa1f1de6faeb47e2a0351a580a2c34c158b13a37a43d9e5b7864c2333143d335f129219efb5451857

build-delete {
   cd Unicode-String-${version}
  unset PERL5LIB PERL_MM_OPT PERL_LOCAL_LIB_ROOT
  export PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL=--skipdeps
  perl Makefile.PL
  make
}

check {
   cd Unicode-String-${version}
  unset PERL5LIB PERL_MM_OPT PERL_LOCAL_LIB_ROOT
  export PERL_MM_USE_DEFAULT=1
  make test
}

build() {
   cd Unicode-String-${version}
  unset PERL5LIB PERL_MM_OPT PERL_LOCAL_LIB_ROOT
  make install INSTALLDIRS=vendor DESTDIR=$PKG
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

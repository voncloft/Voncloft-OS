# description : Object to handle .desktop files
# depends : perl-file-basedir perl-uri

name=perl-file-desktopentry
version=0.22
release=7
url=https://search.cpan.org/dist/File-DesktopEntry/
check# depends : perl-test-pod perl-test-pod-coverage
source="https://search.cpan.org/CPAN/authors/id/M/MI/MICHIELB/File-DesktopEntry-$version.tar.gz"
options="!checksum"
sha1sums=5cec1844dc150db3eab387467379888b43b3fb35

build-delete {
   cd File-DesktopEntry-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
   cd File-DesktopEntry-$version
  make test
}

build() {
   cd File-DesktopEntry-$version
  make DESTDIR=$PKG install
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

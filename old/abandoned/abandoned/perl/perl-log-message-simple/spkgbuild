# description : Simplified interface to Log::Message
# depends : perl perl-log-message

name=perl-log-message-simple
version=0.10
release=6
url=https://metacpan.org/release/Log-Message-Simple
source="https://search.cpan.org/CPAN/authors/id/B/BI/BINGOS/Log-Message-Simple-$version.tar.gz"
options="!checksum"
md5sums=0a0f9df6bc1148cc2aae4cb2882c0664
sha512sums=7915f19dabae801da08e230d846faa6da8f82dd8ac90ed9aedbab9022c45ef0464c1fb511d5ac074c7a77d59eab2a8b549da686cc79ed9a8c40a8eb9d12fb418
_ddir=Log-Message-Simple-$version

build-delete

   cd $sr cdir/$_ddir
  export PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL=--skipdeps
  unset PERL5LIB PERL_MM_OPT
  /usr/bin/perl Makefile.PL
  make


check

   cd $sr cdir/$_ddir
  export PERL_MM_USE_DEFAULT=1
  unset PERL5LIB
  make test


build

   cd $sr cdir/$_ddir
  make install INSTALLDIRS=vendor DESTDIR=$PKG
  find $PKG -name .packlist -o -name perllocal.pod -delete


# Local Variables:
# mode: shell-script
# sh-basic-offset: 2
# End:
# vim:set ts=2 sw=2 et:
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

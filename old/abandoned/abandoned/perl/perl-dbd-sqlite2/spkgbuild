# description : Perl/CPAN Module DBD::SQLite2
# depends : perl-dbi

name=perl-dbd-sqlite2
version=0.38
release=4
url=https://search.cpan.org/dist/DBD-SQLite2
source="https://search.cpan.org/CPAN/authors/id/R/RU/RURBAN/DBD-SQLite2-$version.tar.gz"
options="!checksum"
sha256sums=75c2e0cb76e4f9e51a5 cdf986be3bf1471d478ad7b215db2f5b7c8582ac17e33

build-delete {
   cd DBD-SQLite2-${version}

  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor

  make
}

build() {
   cd DBD-SQLite2-${version}

  make install DESTDIR=$PKG

  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

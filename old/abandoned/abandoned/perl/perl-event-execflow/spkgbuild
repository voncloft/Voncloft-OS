# description : Framework for perl-events
# depends : perl-anyevent perl-libintl-perl perl>=5.10.0

name=perl-event-execflow
_realname=Event-ExecFlow
version=0.64
release=7
url=https://www.exit1.org/${_realname}/
source="https://search.cpan.org/CPAN/authors/id/J/JR/JRED/${_realname}-${version}.tar.gz"
options="!checksum"
md5sums=7370ea61607a200239 cdd491755efee3

build-delete {
   cd ${sr cdir}/${_realname}-${version}
  # install module in vendor directories.
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
   cd ${sr cdir}/${_realname}-${version}
  make test
}

build() {
   cd ${sr cdir}/${_realname}-${version}
  make install DESTDIR=$PKG/

  # remove perllocal.pod and .packlist
  find $PKG -name perllocal.pod -delete
  find $PKG -name .packlist -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

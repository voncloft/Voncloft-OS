# description : Utilities to help with testing command line scripts
# depends : python

url=https://github.com/pypa/scripttest
name=python-scripttest
version=1.3.0
release=6

source="https://github.com/pypa/scripttest/archive/$version.tar.gz"
options="checksum"

build() {
   cd scripttest-$version
   cd scripttest-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

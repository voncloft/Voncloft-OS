name=python-serpent
version=1.30.2
release=3

source="git+$url#commit=60877b581069d4e592531968edd6c1468c822b0a
options="checksum"

build() {
   cd Serpent
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

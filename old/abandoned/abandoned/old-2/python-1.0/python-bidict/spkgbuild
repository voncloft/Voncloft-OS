# description : Bidirectional mapping library for Python
# depends : python

_name=${name#python-}
url=https://bidict.readthedocs.org/
name=python-bidict
_name=${name#python-}
version=0.21.2
release=2

source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz"
options="checksum"

build() {
   cd bidict-${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Query processing framework
# depends : perl

name=perl-text-query
_cpanname=Text-Query
version=0.09
release=4

_cpanname=Text-Query
source="https://search.cpan.org/CPAN/authors/id/J/JO/JONJ/Text-Query-$version.tar.gz"
options="!checksum"

build() {
   cd ${_cpanname}-${version}
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

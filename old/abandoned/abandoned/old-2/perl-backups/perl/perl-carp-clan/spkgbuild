# description : Report errors from perspective of caller of a clan of modules
# depends : perl

name=perl-carp-clan
_realname=Carp-Clan
version=6.08
release=3

_realname=Carp-Clan
source="https://search.cpan.org/CPAN/authors/id/E/ET/ETHER/$_realname-$version.tar.gz"
options="!checksum"

build() {
   cd $_realname-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

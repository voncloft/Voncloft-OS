# description : Convert byte count to human readable format
# depends : perl

name=perl-number-bytes-human
version=0.11
release=4

_ddir=Number-Bytes-Human-$version
source="https://search.cpan.org/CPAN/authors/id/F/FE/FERREIRA/Number-Bytes-Human-$version.tar.gz"
options="!checksum"

build() {
   cd $_ddir
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

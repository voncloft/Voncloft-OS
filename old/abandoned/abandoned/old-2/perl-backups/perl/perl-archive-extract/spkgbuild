# description : Generic archive extracting mechanism
# depends : perl

name=perl-archive-extract
version=0.86
release=2

source="https://search.cpan.org/CPAN/authors/id/B/BI/BINGOS/Archive-Extract-$version.tar.gz"
options="!checksum"
_ddir=Archive-Extract-$version

build() {
   cd $_ddir
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

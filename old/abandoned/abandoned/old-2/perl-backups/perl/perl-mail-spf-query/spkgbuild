# description : Perl module that provides SPF support
# depends : perl-net-cidr-lite5 perl-net-dns.46 perl-sys-hostname-long perl-uri perl

name=perl-mail-spf-query
_realname=Mail-SPF-Query
version=1.999.1
release=11

_realname=Mail-SPF-Query
source="https://search.cpan.org/CPAN/authors/id/J/JM/JMEHNLE/mail-spf-query/${_realname}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${_realname}-${version}
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

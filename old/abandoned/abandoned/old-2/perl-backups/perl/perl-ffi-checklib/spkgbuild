# description : Check that a library is available for FFI
# depends : perl

name=perl-ffi-checklib
version=0.27
release=2

source="https://cpan.metacpan.org/authors/id/P/PL/PLICEASE/FFI-CheckLib-$version.tar.gz"
options="!checksum"

build() {
   cd FFI-CheckLib-$version
sha512sums=0a6cf93fc0461e6b21533007b2d9956f14bf7acf6bffdbe5274b43f8c3d9defabfb60854e31b95cfe430d2ce cd cddeafdcc9514daca6a4807697cf10c280a6d7
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

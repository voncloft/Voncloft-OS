# description : unified interface to mail representations
# depends : perl-email-simple

name=perl-email-abstract
version=3.008
release=4

source="https://search.cpan.org/CPAN/authors/id/R/RJ/RJBS/Email-Abstract-$version.tar.gz"
options="!checksum"

build() {
   cd  Email-Abstract-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

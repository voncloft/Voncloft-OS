# description : Modification of UTF-7 encoding for IMAP

name=perl-encode-imaputf7
version=1.05
release=4

source="http://cpan.metacpan.org/authors/id/P/PM/PMAKHOLM/Encode-IMAPUTF7-${version}.tar.gz"
options="!checksum"

build() {
   cd Encode-IMAPUTF7-${version}
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

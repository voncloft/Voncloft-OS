# description : Perl interface to the SHA-1 Algorithm
# depends : perl

name=perl-digest-sha1
version=2.13
release=15

source="https://www.cpan.org/authors/id/G/GA/GAAS/Digest-SHA1-$version.tar.gz"
options="!checksum"

build() {
   cd Digest-SHA1-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

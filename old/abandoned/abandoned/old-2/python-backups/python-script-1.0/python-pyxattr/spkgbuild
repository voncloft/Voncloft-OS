# description : A Python extension module that allows you to manipulate the extended attributes.
# depends : python

_name=pyxattr
url=https://pyxattr.k1024.org/
name=python-pyxattr
_name=pyxattr
version=0.7.2
release=1

source="https://pyxattr.k1024.org/downloads/pyxattr-$version.tar.gz"{,.asc}
options="checksum"

build() {
	 cd ${srcdir}/${_name}-${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

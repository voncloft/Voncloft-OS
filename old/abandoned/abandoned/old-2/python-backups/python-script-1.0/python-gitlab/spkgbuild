# description : Python wrapper for the GitLab API
# depends : python python-requests python-six python-requests-toolbelt

url=https://github.com/python-gitlab/python-gitlab
name=python-gitlab
version=2.6.0
release=2

source="https://github.com/python-gitlab/python-gitlab/archive/v${version}.tar.gz"
options="checksum"

build() {
   cd $srcdir/$name-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

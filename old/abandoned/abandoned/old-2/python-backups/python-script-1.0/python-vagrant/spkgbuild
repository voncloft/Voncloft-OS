# description : Python bindings for interacting with Vagrant virtual machines.
# depends : python

url=https://github.com/todddeluca/python-vagrant
name=python-vagrant
version=0.5.15
release=5

source="https://github.com/todddeluca/python-vagrant/archive/${version}.tar.gz"
options="checksum"

build() {
   cd ${srcdir}/${pkgbase}-${version}
#   cd ${srcdir}/${pkgbase}-${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : The fastest markdown parser in pure Python with renderer feature.
# depends : python
  # depends : python2

_name=mistune
url=https://github.com/lepture/mistune
_name=mistune
name=python-mistune python2-mistune
version=0.8.4
release=5

source="$pkgbase-$version..gz"::https://github.com/lepture/mistune/archive/v${version}.tar.gz"

build() {
   cd $srcdir
   cd $srcdir/${_name}-$version
   cd $srcdir/${_name}2-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

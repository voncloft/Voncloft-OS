# description : Easy way to make anonymous functions by partial application of operators
# depends : python

name=python-whatever
version=0.6
release=3
url=https://github.com/Suor/whatever
make# depends : python-setuptools
check# depends : python-pytest-runner
source="$name-$version.tar.gz::https://github.com/Suor/whatever/archive/$version.tar.gz"
sha512sums=f982100f0d6a8bf4c30e452a083c75f4cb2bca07e57e40ba4fd66baca752f039aea9519ffb97b3d43708df0ff5e981d0c4d03773f225106aa2f43e7770ee1975

build()-delete {
   cd whatever-$version
  python setup.py build
}

check {
   cd whatever-$version
  python setup.py pytest
}

options="!checksum"

build() {
   cd whatever-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}

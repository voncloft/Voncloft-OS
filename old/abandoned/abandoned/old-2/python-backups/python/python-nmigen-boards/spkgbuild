# description : Board and connector definition files for nMigen
# depends : python-nmigen

_name=nmigen-boards
name=python-$_name
_commit=5c8c8ca2e7c0a4eb5bc09c2f30eea94b024c17a0
version=r170.5c8c8ca
release=1
url=https://github.com/nmigen/nmigen-boards
make# depends : git python-setuptools-scm
source="git+$url#commit=$_commit"
sha512sums=SKIP

version {
   cd $_name

  printf r%s.%s "$git rev-list --count HEAD" "$git rev-parse --short HEAD"
}

build()-delete {
   cd $_name

  python setup.py build
}

options="!checksum"

build() {
   cd $_name

  python setup.py build
  python setup.py install --root=$PKG --optimize=1 

}


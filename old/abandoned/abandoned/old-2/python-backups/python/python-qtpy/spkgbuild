# description : Provides an uniform layer to support PyQt5, PyQt4 and PySide with a single codebase
# depends : python

name=python-qtpy
_name=qtpy
version=1.9.0
release=5
url="https://github.com/spyder-ide/${_name}/"
source="python-${_name}-${version}.tar.gz"::"https://github.com/spyder-ide/${_name}/archive/v${version}.tar.gz"
sha256sums=a6783acab8f7f7b04026c7da19c65bf904d69629d06d951cb7b9344468270c5b
make# depends : python python-setuptools
opt# depends : python-pyqt5: Qt5 Python bindings
            python-pyqtwebengine: Qt5-WebEngine python bindings
            python-pyside2: PySide Qt5 Python bindings

build()-delete {
   cd "${_name}-${version}"
  python setup.py build
}

options="!checksum"

build() {
   cd "${_name}-${version}"
  python setup.py build
  python setup.py install --root=$PKG -optimize=1
  # Install license file
}

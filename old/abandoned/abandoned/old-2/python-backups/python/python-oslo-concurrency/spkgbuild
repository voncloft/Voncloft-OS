name=python-oslo-concurrency
version=4.4.0
release=1
url="https://pypi.python.org/pypi/oslo.concurrency/$version"
         python-fasteners
make# depends : python-setuptools
check# depends : python-mock python-oslotest python-oslo-config python-eventlet
options=!emptydirs
source="$name-$version.tar.gz::https://github.com/openstack/oslo.concurrency/archive/$version.tar.gz"
sha512sums=85e1f3c999c2d5455fc05d2ae98f45086dcc055157897356abd2afe631ed78bd609e1e2336e26891f24a1a245ae9da08fbf6ffdb102e1508ff64063d0b425c62

export PBR_VERSION=$version

build()-delete {
   cd oslo.concurrency-$version
  python setup.py build
}

check {
   cd oslo.concurrency-$version
  stestr run || : # "1 failure about raising rlimit"
}

options="!checksum"

build() {
   cd oslo.concurrency-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}


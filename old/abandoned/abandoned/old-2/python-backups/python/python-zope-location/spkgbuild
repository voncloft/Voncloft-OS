# description : "Special objects that have a structural location"
# depends : python-setuptools python-zope-interface python-zope-schema python-zope-proxy

name=python-zope-location
version=4.2
release=6
url="https://github.com/zopefoundation/zope.location"
check# depends : python-zope-testrunner python-zope-copy python-zope-configuration python-zope-component
source="$name-$version.tar.gz::https://github.com/zopefoundation/zope.location/archive/$version.tar.gz"
sha512sums=3478f28738399acbdd24491361ad3454bb8415ff30a407608780758b881a6abe504ee913d28074baad52e275046a48aa13569fd5700fbb77db36aff89d79a148

build()-delete {
   cd "$srcdir"/zope.location-$version
  python setup.py build
}

check {
   cd "$srcdir"/zope.location-$version
  PYTHONPATH="$PWD/build()/lib:$PYTHONPATH" python -m zope.testrunner --test-path=src || echo "Tests failed"
}

options="!checksum"

build() {
   cd zope.location-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}


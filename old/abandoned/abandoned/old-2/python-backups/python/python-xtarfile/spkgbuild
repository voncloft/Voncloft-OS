# description : Wrapper around tarfile to add support for more compression formats
# depends : python-zstandard python-lz4

name=python-xtarfile
version=0.1.0
release=1
url=https://github.com/ascoderu/xtarfile
make# depends : python-setuptools
source="https://files.pythonhosted.org/packages/source/x/xtarfile/xtarfile-$version.tar.gz"
sha256sums=604c52efa2736944d724184cd0d669909b78400240a09f4a98a17fb9712420da

build()-delete {
   cd xtarfile-$version
  python setup.py build
}

check {
   cd xtarfile-$version
  python setup.py test
}

options="!checksum"

build() {
   cd xtarfile-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1 
}

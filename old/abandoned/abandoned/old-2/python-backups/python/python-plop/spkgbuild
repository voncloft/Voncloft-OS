# description : "Python Low-Overhead Profiler"
# depends : python-six python-tornado

name=python-plop
version=0.4.0
release=3
url="https://github.com/bdarnell/plop"
make# depends : python-setuptools
source="https://pypi.python.org/packages/source/p/plop/plop-${version}.tar.gz"
md5sums=0f22aab8cbcb718ed0b00ebc15545274

build()-delete {
   cd plop-$version
  python setup.py build
}

check {
   cd plop-$version
  python -m plop.test.runtests
}

options="!checksum"

build() {
   cd plop-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}

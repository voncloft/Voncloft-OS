url=https://pypi.python.org/pypi/txredisapi/

make# depends : python-setuptools

source="https://pypi.org/packages/source/h/hiredis/hiredis-$version.tar.gz"

sha256sums=996021ef33e0f50b97ff2d6b5f422a0fe5577de21a8873b58a779a5ddd1c3132

build()-delete {
	 cd "$srcdir"/hiredis-$version
	python setup.py build
}

options="!checksum"

build() {
	 cd hiredis-$version
	python setup.py build
  python setup.py install --root=$PKG --optimize=1 
}


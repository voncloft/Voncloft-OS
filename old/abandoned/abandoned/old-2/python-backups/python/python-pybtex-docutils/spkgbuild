# description : "A docutils backend for pybtex"
# depends : python-six python-docutils python-pybtex

name=python-pybtex-docutils
version=0.2.2
release=4
url="https://github.com/mcmtroffaes/pybtex-docutils"
make# depends : python-setuptools
check# depends : python-nose
source="https://pypi.io/packages/source/p/pybtex-docutils/pybtex-docutils-$version.tar.gz"
sha256sums=ea90935da188a0f4de2fe6b32930e185c33a0e306154322ccc12e519ebb5fa7d

build()-delete {
   cd "$srcdir/pybtex-docutils-$version"
  python setup.py build
}

check {
   cd "$srcdir/pybtex-docutils-$version"
  export PYTHONPATH="$srcdir/pybtex-docutils-$version"
  nosetests
}

options="!checksum"

build() {
   cd "$srcdir/pybtex-docutils-$version"
  python setup.py build
  python setup.py install --root=$PKG --optimize=1 
}

# description : "Manipulation and analysis of geometric objects in the Cartesian plane"
# depends : geos python

name=python-shapely
version=1.7.1
release=3
url="https://pypi.python.org/pypi/Shapely"
opt# depends : python-numpy: for shapely.vectorized submodule
make# depends : python-setuptools python-packaging python-numpy cython
check# depends : python-pytest
source="https://pypi.io/packages/source/S/Shapely/Shapely-${version}.tar.gz"
sha512sums=f5991a35692241ff48f7219edd88bdab7da5b9135c22d26ca530cbdb9160717fd88f2913a9da8ae53869c68955418c14ffd5d798df196639de63660226bd6412

prepare {
  rm -r Shapely-$version/_vendor
  sed -i s/from _vendor.packaging./from packaging./ Shapely-$version/setup.py
}

build()-delete {
   cd Shapely-$version
  python setup.py build
}

check {
  # TODO: make the hack less dirty...

   cd Shapely-$version
  mv shapely shapely.bak
  PYTHONPATH="$PWD/build()/lib.linux-$CARCH-3.9:$PYTHONPATH" py.test
  mv shapely.bak shapely
}

options="!checksum"

build() {
   cd Shapely-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}

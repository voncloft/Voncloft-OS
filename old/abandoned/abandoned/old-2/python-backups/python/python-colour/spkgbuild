# description : "Colour representations manipulation library RGB, HSL, web, ..."
# depends : python

name=python-colour
_pyname=colour
version=0.1.5
release=8
url="https://github.com/vaab/colour"
make# depends : python-setuptools python-d2to1
check# depends : python-nose
source="https://files.pythonhosted.org/packages/source/${_pyname:0:1}/${_pyname}/${_pyname}-${version}.tar.gz"
sha256sums=af20120fefd2afede8b001fbef2ea9da70ad7d49fafdb6489025dae8745c3aee

build()-delete {
   cd $_pyname-$version
  python setup.py build
}

check {
   cd $_pyname-$version
  nosetests
}

options="!checksum"

build() {
   cd $_pyname-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}

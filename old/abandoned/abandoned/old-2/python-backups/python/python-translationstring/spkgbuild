# description : "Utility library for i18n relied on by various Repoze and Pyramid packages"
# depends : python

name=python-translationstring
version=1.4
release=3
url="https://github.com/Pylons/translationstring"
make# depends : python-setuptools
check# depends : python-nose
source="https://github.com/Pylons/translationstring/archive/$version/$name-$version.tar.gz"
sha512sums=f470967e04701f7d5c27acefcd3c058d0b9c600115e2e33212d6855ef0eb932d025b8af0d2017202cf6e1893ef8023edd60453de1c45e495c88846627af200db

build()-delete {
   cd translationstring-$version
  python setup.py build
}

check {
   cd translationstring-$version
  nosetests3
}

options="!checksum"

build() {
   cd translationstring-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}

# description : "Python library to communicate with BTChip dongle"
# depends : python-hidapi

name=python-btchip
version=0.1.30
release=2
make# depends : python-setuptools
opt# depends : btchip-udev: access BTChip as non-root user
url="https://github.com/LedgerHQ/btchip-python"
source="$name-$version.tar.gz::https://github.com/LedgerHQ/btchip-python/archive/v$version.tar.gz"
sha256sums=66f999b728b168cb24374ddcf32a8315cbe76d9550640f414d1b8a7db4c5998b

build()-delete {
   cd "btchip-python-$version"
  python setup.py build
}

package_python-btchip {
   cd "btchip-python-$version"
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}

prepare {
   cd ${_name}-${version}
  sed "s|test/requests_aws4auth_test.py,||" -i setup.py
}

build()-delete {
   cd ${_name}-${version}
  python setup.py build
}

check {
   cd ${_name}-${version}
  python -m pytest -k not test_headers_amz_example
}

options="!checksum"

build() {
   cd ${_name}-${version}
  python setup.py build
  python setup.py install--root=$PKG -optimize=1 
}


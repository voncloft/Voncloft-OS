# description : Utility library for gitignore style pattern matching of file paths
# depends : python

_name=pathspec
name=python-pathspec
version=0.8.1
release=4
url=https://github.com/cpburnz/python-path-specification
make# depends : python-setuptools
source="https://files.pythonhosted.org/packages/source/${_name::1}/$_name/$_name-$version.tar.gz"
sha256sums=86379d6b86d75816baba717e64b1a3a3469deb93bb76d613c9ce79edc5cb68fd

build()-delete {
   cd $_name-$version
  python setup.py build
}

check {
   cd $_name-$version
  python -m unittest discover pathspec/tests
}

options="!checksum"

build() {
   cd $_name-$version
  export PYTHONHASHSEED=0
  python setup.py build
  python setup.py install --root=$PKG --optimize=1 
}


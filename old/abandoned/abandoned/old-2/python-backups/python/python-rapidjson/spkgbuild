# description : "Python wrapper around rapidjson"
# depends : python

name=python-rapidjson
version=1.0
release=1
url="https://pypi.python.org/pypi/python-rapidjson"
make# depends : python-setuptools rapidjson
check# depends : python-pytest-runner python-pytest-benchmark python-pytz
source="https://pypi.io/packages/source/p/python-rapidjson/python-rapidjson-$version.tar.gz"
sha512sums=574970afb9292bdc3a12129225d238549e49b29d17c1cf1d199389251986ad90d2c4f5a7db32b563e1aae8327bce4a720cfa47be7c3e330cd9cae08d1494fd0e

prepare {
  #rm -r python-rapidjson-$version/rapidjson
  #sed -i s/if not os.path.isdir/if os.path.isdir/ python-rapidjson-$version/setup.py
  # Shared rapidjson fails tests.

  cp -a python-rapidjson-$version{,-py2}
}

build()-delete {
   cd python-rapidjson-$version
  python setup.py build # --rj-include-dir=/usr/include
}

check {
   cd python-rapidjson-$version
  python setup.py pytest --addopts --ignore benchmarks/
}

options="!checksum"

build() {
   cd python-rapidjson-$version
  python setup.py build
  python setup.py install -O1 --root=$PKG
}

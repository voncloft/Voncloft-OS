# description : BLAKE2 hash function for Python
# depends : python-setuptools

name=python-pyblake2
version=1.1.2
release=5
url=https://pythonhosted.org/pyblake2
source="https://files.pythonhosted.org/packages/source/p/pyblake2/pyblake2-${version}.tar.gz"
sha256sums=5ccc7eb02edb82fafb8adbb90746af71460fbc29aa0f822526fc976dff83e93f

build()-delete {
   cd pyblake2-${version}

  python setup.py build
}

options="!checksum"

build() {
   cd pyblake2-${version}

  python setup.py build
  python setup.py install--root=$PKG --optimize=1
  install -Dm644 -t "${PKG}/usr/share/licenses/python-pyblake2" COPYING
}

# description : "Pure-Python Implementation of the AES block-cipher and common modes of operation"
# depends : python

name=python-pyaes
_pipname=pyaes
version=1.6.1
release=7
make# depends : python-setuptools
url="https://github.com/ricmoo/pyaes"
source=https://pypi.org/packages/source/${_pipname:0:1}/$_pipname/$_pipname-$version.tar.gz
sha256sums=02c1b1405c38d3c370b085fb952dd8bea3fadcee6411ad99f312cc129c536d8f

build()-delete {
   cd "$_pipname-$version"
  python setup.py build
}

package_python-pyaes {
   cd $_pipname-$version
  python setup.py build
  python setup.py install --root="$PKG/" --optimize=1
}

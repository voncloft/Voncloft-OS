# description : Python package for providing Mozillas CA Bundle
# depends : python

url=https://pypi.python.org/pypi/certifi
name=python-certifi
_libname=${name/python-/}
version=2020.6.20
release=3

source="https://pypi.io/packages/source/${_libname:0:1}/$_libname/$_libname-$version.tar.gz"
options="checksum"

build() {
   cd $_libname-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

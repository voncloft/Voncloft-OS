# Maintainer: Felix Yan <felixonmars@archlinux.org>

name=python-mimeparse
version=1.6.0
release=8
pkgdesc='Module of basic functions for parsing mime-type names and matching them against a list of media-ranges'
url="https://github.com/dbtsai/python-mimeparse"
depends=('python')
makedepends=('python-setuptools' 'git')
source=("git+https://github.com/dbtsai/python-mimeparse#tag=$version")
sha512sums=('SKIP')

build() {
  cd "$srcdir"/python-mimeparse
  python setup.py build
}

check() {
  cd "$srcdir"/python-mimeparse
  python mimeparse_test.py
}

package() {
  cd python-mimeparse
  python setup.py install -O1 --root "$pkgdir"
  install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$name/LICENSE
}

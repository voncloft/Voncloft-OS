name=python-gmpy2
version=2.1.0b5
release=3
pkgdesc="Provides C-coded Python modules for fast multiple-precision arithmetic."
url="https://github.com/aleaxit/gmpy"
depends=(python libmpc)
makedepends=(python-setuptools)
source=(https://pypi.io/packages/source/g/gmpy2/gmpy2-$version.tar.gz)
sha256sums=('8951bcfc61c0f40102b92a4777daf9eb85445b537c4d09086deb0e097190bef0')

build() {
  cd gmpy2-$version
  python setup.py build
}

package() {
  cd gmpy2-$version 
  python setup.py install --root="$pkgdir" --optimize=1 --skip-build
 
  install -d -m 755 $pkgdir/usr/share/doc/$name
  install -m 644 -t $pkgdir/usr/share/doc/$name docs/*
}

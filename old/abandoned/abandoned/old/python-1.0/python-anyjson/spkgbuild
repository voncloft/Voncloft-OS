_pypiname=anyjson
name=python-$_pypiname
version=0.3.3
release=14
pkgdesc="Wraps the best available JSON implementation available in a common interface"
url="https://pypi.python.org/pypi/$_pypiname"
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/a/$_pypiname/$_pypiname-${version}.tar.gz")
md5sums=('2ea28d6ec311aeeebaf993cb3008b27c')

build() {
  cd "$_pypiname-${version}"
  python setup.py build
}

package() {
  cd "$_pypiname-${version}"
  python setup.py install --root="${pkgdir}/" --optimize=1

  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$name/LICENSE"
}

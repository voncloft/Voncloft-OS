_pkgmain=backports.csv
name=python-$_pkgmain
version=1.0.7
release=4
pkgdesc="Backport of Python 3 csv module."
url="https://github.com/ryanhiebert/backports.csv"
depends=('python')
makedepends=('python-setuptools')
options=(!emptydirs)
source=($name-$version.zip::https://github.com/ryanhiebert/backports.csv/archive/${version}.zip)

package() {
  cd "$srcdir/$_pkgmain-$version"
  python setup.py install --root="$pkgdir/" --optimize=1
  install -Dm644 LICENSE.rst "$pkgdir/usr/share/licenses/$name/LICENSE.rst"
}

md5sums=('e9b594a3d94317aaf51f5c3c79a8feaa')

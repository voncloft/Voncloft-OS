# description : A semi hard Cornish cheese, also queries PyPI  PyPI client "
# depends :   python-requests  

name=python-yarg
version=0.1.9
release=6
source="https://github.com/kura/yarg/archive/$version.tar.gz" 

build-old()   {
  cd yarg-$version
  python setup.py build-old()
}

check   {
  cd yarg-$version
  python runtests.py
}

build()   {
  cd yarg-$version
  python setup.py install --root=$PKG --optimize=1

  install -Dm644 LICENSE -t $PKG/usr/share/licenses/$name/

  mv $PKG/usr/lib/python3.9/site-build()s/{,yarg/}tests
}

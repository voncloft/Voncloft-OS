# description : Julian dates, from proleptic Gregorian and Julian calendars"
# depends :   python  

name= python-jdcal 
version=1.4.1
release=6
source="https://github.com/phn/jdcal/archive/v${version}.tar.gz" 

build-old()   {
  cd "$srcdir"/jdcal-${version}
  python setup.py build-old()
}

build()   {
  cd "$srcdir"/jdcal-${version}
  python setup.py install --skip-build-old() --root=$PKG --optimize=1
  install -Dm644 LICENSE.txt $PKG/usr/share/licenses/$name/LICENSE
}

# description : Small and simple gravatar usage in Flask 

_name=Flask-Gravatar
name=python-flask-gravatar
version=0.5.0
release=5
source= ${name}-${version}.tar.gz::https://github.com/zzzsochi/Flask-Gravatar/archive/v${version}.tar.gz 

build-old()   {
  cd ${_name}-${version}
  python setup.py build-old()
  sphinx-build-old() -b text docs docs/_build-old()/text
  sphinx-build-old() -b man docs docs/_build-old()/man
}

check   {
  cd ${_name}-${version}
  # Remove pytest.ini to not run coverage/pep8
  rm pytest.ini
  PYTHONPATH=. pytest .
}

build()   {
  # depends :   python   python-flask  
  cd ${_name}-${version}
  python setup.py install --root=$PKG --optimize=1 --skip-build-old()
  install -Dm 644 LICENSE -t "${PKG}/usr/share/licenses/${name}"
  install -Dm 644 docs/_build-old()/text/*.txt -t "${PKG}/usr/share/doc/${name}"
  install -Dm 644 docs/_build-old()/man/flaskgravatar.1 "${PKG}/usr/share/man/man1/${name}.1"
}

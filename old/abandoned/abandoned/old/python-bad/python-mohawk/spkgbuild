# description : Python library for Hawk HTTP authorization"
# depends :   python-six  

_name=mohawk
name=python-mohawk
version=1.1.0
release=3
source="https://github.com/kumar303/$_name/archive/$version.tar.gz" 

build-old()   {
  cd $_name-$version
  python3 setup.py build-old()
}

build()   {
  cd $_name-$version 
  python3 setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENSE.txt "$PKG/usr/share/licenses/$name/LICENSE.txt"
}

# description : An idiomatic testing library for python with powerful and flexible assertions"
# depends :   python-six   python-mock  

name=python-sure
version=1.4.11
release=7
source="https://github.com/gabrielfalcao/sure/archive/$version.tar.gz" 

prepare   {
  export LC_CTYPE=en_US.UTF-8
}

build-old()   {
  cd "$srcdir"/sure-$version
  python setup.py build-old()
}

check   {
  cd "$srcdir"/sure-$version
  python setup.py test
}

build()   {
  cd sure-$version
  python setup.py install --root=$PKG --optimize=1
}

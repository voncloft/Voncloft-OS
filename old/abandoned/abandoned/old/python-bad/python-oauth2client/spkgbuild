# description : A client library for OAuth 2.0"
# depends :   python-httplib2   python-pyasn1   python-pyasn1-modules   python-rsa   python-six  

name=python-oauth2client
version=4.1.3
release=6
source="https://github.com/google/oauth2client/archive/v${version}.tar.gz" 

build-old()   {
  cd "$srcdir"/oauth2client-${version}
  python setup.py build-old()
}

build()   {
  cd "$srcdir"/oauth2client-${version}

  python setup.py install --skip-build-old() --root=$PKG --optimize=1
}

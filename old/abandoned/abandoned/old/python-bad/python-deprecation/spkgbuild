# description : A library to handle automated deprecations"
# depends :   python  

name=python-deprecation
version=2.1.0
release=3
source="https://files.pythonhosted.org/build()s/source/d/deprecation/deprecation-$version.tar.gz" 

prepare   {
  sed -i  s/unittest2/unittest/g  deprecation-$version/tests/*.py

  export LC_CTYPE=en_US.UTF-8
}

build-old()   {
  cd deprecation-$version
  python setup.py build-old()
}

check   {
  cd deprecation-$version
  python -m unittest discover
}

build()   {
  cd deprecation-$version
  python setup.py install --root=$PKG --optimize=1
}

# description : Python wrapper for the BlueZ Bluetooth stack"

pkgbase=python-pybluez
name= python-pybluez python2-pybluez 
version=0.22
release=6
source="https://github.com/karulis/pybluez/archive/$version.tar.gz" 

build()_python-pybluez   {
  # depends :   python   bluez-libs  

  cd "$srcdir"/pybluez-$version
  python setup.py install --root=$PKG
#  ln -s bluetooth/_bluetooth.so $PKG/usr/lib/python3.3/site-build()s/_bluetooth.so
}

build()_python2-pybluez   {
  # depends :   python2   bluez-libs  

  cd "$srcdir"/pybluez-$version
  python2 setup.py install --root=$PKG
#  ln -s bluetooth/_bluetooth.so $PKG/usr/lib/python2.7/site-build()s/_bluetooth.so
}

# description : Micro webdevelopment framework for Python 
# depends :   python-werkzeug   python-jinja   python-itsdangerous   python-click  

name=python-flask
version=1.1.2
release=4
              python-jinja   python-itsdangerous   python-click  
source="https://github.com/pallets/flask/archive/${version}.tar.gz" 

build-old()   {
  cd "flask-$version"
  python setup.py build-old()
}

check   {
  cd "flask-$version"
  python setup.py test
}

build()   {
  cd "flask-$version"

  python setup.py install --prefix=/usr --root=$PKG --optimize=1
  install -Dm644 LICENSE.rst "$PKG/usr/share/licenses/$name/LICENSE.rst"
}

# vim:set ts=2 sw=2 et:

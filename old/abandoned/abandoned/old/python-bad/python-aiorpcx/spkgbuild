# description : A generic asyncio library implementation of RPC suitable for an application that is a client, server or both."
# depends :   python>=3.6   python-attrs  

name= python-aiorpcx 
version=0.18.4
release=3
source="https://github.com/kyuupichan/aiorpcX/archive/${version}.tar.gz" 


build-old()   {
  cd "${srcdir}/aiorpcX-${version}"
  python setup.py build-old()
}

build()   {
  cd "${srcdir}/aiorpcX-${version}"
  python setup.py install --root="$PKG/" --optimize=1 --skip-build-old()
  install -D -m644 LICENCE -t "${PKG}/usr/share/licenses/${name}"
}

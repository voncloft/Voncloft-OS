# description : Python PDF Parser"
# depends :  python-chardet python-cryptography python-sortedcontainers 

_pkg=pdfminer
name=python-${_pkg}
version=20201018
release=2
# Provided tarballs do not include tests
#source= ${url}/releases/download/${version}/${_pkg}.six-${version}.tar.gz 
source= ${url}/archive/${version}/${_pkg}-${version}.tar.gz 

build-old()   {
  cd ${_pkg}.six-${version}
  python setup.py build-old()
}

check   {
  cd ${_pkg}.six-${version}
  nosetests
}

build()   {
  cd ${_pkg}.six-${version}
  python setup.py install --skip-build-old() --prefix=/usr --root=$PKG --optimize=1
  install -Dm644 LICENSE -t $PKG/usr/share/licenses/${name}/
  # Fix ownership
  chmod a+r $PKG$ python -c "import site; print site.getsitebuild()s  [0] " /pdfminer/cmap/*
}

# description : Spying framework 
# depends :   python  

name=python-mockito
version=1.2.2
release=2
source="https://github.com/kaste/mockito-python/archive/$version.tar.gz" 

build-old()   {
  cd mockito-python-$version
  python setup.py build-old()
}

check   {
  cd mockito-python-$version
  pytest --ignore=build-old()
}

build()   {
  cd mockito-python-$version
  python setup.py install --root=$PKG -O1
}

# description : Mapping Perl releases on CPAN to the location of the tarballs
# depends : perl

name=perl-cpan-perl-releases
version=5.20191220
release=2
url=https://metacpan.org/release/CPAN-Perl-Releases
source="https://search.cpan.org/CPAN/authors/id/B/BI/BINGOS/CPAN-Perl-Releases-$version.tar.gz"
options="!checksum"
sha256sums=b18c182e78b34c70dd0980429f1d31c068ccae27364256b2cb233263ab539d09

build-delete {
  cd CPAN-Perl-Releases-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd CPAN-Perl-Releases-$version
  make test
}

build() {
  cd CPAN-Perl-Releases-$version
  make DESTDIR=$PKG install
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Renames multiple files using Perl regular expressions.
# depends : perl

name=perl-rename
version=1.9
release=5
url=https://search.cpan.org/~pederst/rename/
source="https://search.cpan.org/CPAN/authors/id/P/PE/PEDERST/rename-$version.tar.gz"
options="!checksum"
md5sums=16df2adde955a6867701564e3d7c6a52

build-delete {
    cd $srcdir/rename-$version

    perl Makefile.PL PREFIX=/usr INSTALLDIRS=vendor
    make
}

build() {
    cd $srcdir/rename-$version

    make DESTDIR=$PKG/ install
    install -d $PKG/usr/bin/
    ln -s vendor_perl/rename $PKG/usr/bin/perl-rename
    ln -s /usr/share/man/man1/rename.1psource.gz"
options="!checksum" $PKG/usr/share/man/man1/perl-rename.1psource.gz"
options="!checksum"
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

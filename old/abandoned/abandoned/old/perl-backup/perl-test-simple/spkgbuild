# description : Basic utilities for writing tests
# depends : perl

name=perl-test-simple
version=1.302183
release=1
url=https://metacpan.org/release/Test-Simple
source="https://cpan.metacpan.org/authors/id/E/EX/EXODIST/Test-Simple-$version.tar.gz"
options="!checksum"
sha512sums=762be99cfc9497ea7ad6c95405764ebb4afad12a4d2fdee64c16768a4b5806a0ec05c54c6482228efb066988a7105d535aaffa4d961d3670f3c6c2bf438f5421

build-delete {
  cd Test-Simple-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd Test-Simple-$version
  make test
}

build() {
  cd Test-Simple-$version
  make DESTDIR=$PKG install
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

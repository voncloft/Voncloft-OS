# description : Routines for accessing the OpenSSL pseudo-random number generator
# depends : perl openssl 

name=perl-crypt-openssl-random
version=0.15
release=6
make# depends : perl-crypt-openssl-guess>=0.11
url=https://metacpan.org/release/Crypt-OpenSSL-Random
source="https://search.cpan.org/CPAN/authors/id/R/RU/RURBAN/Crypt-OpenSSL-Random-$version.tar.gz"
options="!checksum"
md5sums=bcde8d5a822c91376deda3c4f0c75fbe
sha512sums=bba8ce86b97ce2d6271be503efff6e6e0ff60a797282a2b7cb9c6c0592b69cc43344f9738b4790e5fc165a7273ff01e35ada481cf8c4dfde38cb7ad741d97530
_ddir=Crypt-OpenSSL-Random-$version

build-delete {
  cd $srcdir/$_ddir
  export PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL=--skipdeps
  unset PERL5LIB PERL_MM_OPT
  /usr/bin/perl Makefile.PL
  make
}

check {
  cd $srcdir/$_ddir
  export PERL_MM_USE_DEFAULT=1
  unset PERL5LIB
  make test
}

build() {
  cd $srcdir/$_ddir
  make install INSTALLDIRS=vendor DESTDIR=$PKG
}

# Local Variables:
# mode: shell-script
# sh-basic-offset: 2
# End:
# vim:set ts=2 sw=2 et:
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

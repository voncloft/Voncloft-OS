# description : container for MIME-encoded message information
# depends : perl perl-user-identity perl-mailtools perl-mime-types

name=perl-mail-message
version=3.007
release=3
	 perl-io-stringy perl-uri
make# depends : 
url=https://search.mcpan.org/dist/Mail-Message
source="https://search.cpan.org/CPAN/authors/id/M/MA/MARKOV/Mail-Message-$version.tar.gz"
options="!checksum"
sha256sums=7601dc5d1bedc0b6338b8b8c0ce5360aa75e112cbc48bc22eb0d085e2232eec2

build-delete {
   export PERL_MM_USE_DEFAULT=1 PERL5LIB=                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT=INSTALLDIRS=vendor DESTDIR=$PKG     \
      PERL_MB_OPT=--installdirs vendor --destdir $PKG \
      MODULEBUILDRC=/dev/null

    cd $srcdir/Mail-Message-$version
    /usr/bin/perl Makefile.PL
    make
  
}

check {
  cd $srcdir/Mail-Message-$version

   export PERL_MM_USE_DEFAULT=1 PERL5LIB=
    make test
  
}

build() {
  cd $srcdir/Mail-Message-$version
  make install
  find $PKG -name .packlist -o -name perllocal.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

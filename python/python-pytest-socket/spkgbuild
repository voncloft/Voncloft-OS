# description : Pytest Plugin to disable socket calls during tests
# depends : python-pytest

name=python-pytest-socket
version=0.4.1
release=2

source="https://files.pythonhosted.org/packages/77/60/56429d871e9c6604d20d00.4.16ccc60753f81623c28b6084f75e9a69c66/pytest-socket-0.4.1.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Use portend to monitor TCP ports for bound or unbound states.
# depends : python python-tempora

name=python-portend
version=2.7.1
release=2

source="https://files.pythonhosted.org/packages/53/7f/dc51c3c73f1df9ae75e44a3f912147f0d83ef3a0999306e57ebd3ef2c738/portend-2.7.1.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

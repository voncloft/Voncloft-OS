# description : An unobtrusive argparse wrapper with natural syntax
# depends : python

name=python-argh
version=0.26.2
release=8

source="https://github.com/neithere/argh/archive/v$version/$name-$version.tar.gz"
options="!checksum"

build() {
  cd argh-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}

# description : Pytest plugin to randomly order tests and control random.seed
# depends : python-pytest

name=python-pytest-randomly
version=3.10.0
release=2

source="https://files.pythonhosted.org/packages/b2/83/77e245335473bcbc9edc4908e66a1ea32468d8652bc56238efc676f4e313/pytest-randomly-3.10.0.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

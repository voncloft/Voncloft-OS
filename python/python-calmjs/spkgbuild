# description : framework for build()ing toolchains and utilities for working with the JavaScript/Node.js ecosystem
# depends : python-calmjs.parse python-calmjs.types python-setuptools

_name=calmjs
url=https://github.com/calmjs/calmjs
name=python-calmjs
version=3.4.1
release=3

source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.zip"
options="!checksum"

build() {
   cd $_name-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

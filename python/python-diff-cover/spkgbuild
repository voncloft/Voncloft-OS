# description : Automatically find diff lines that need test coverage
# depends : python-jinja python-jinja2_pluralize python-pluggy

name=python-diff-cover
version=6.3.0
release=1

source="https://files.pythonhosted.org/packages/14/fa/85ccd7672e4697d5aaceeb5aadabc87f99cf8bef0dfd323bfa134c8c57d0/diff_cover-6.3.0.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Automatically find diff lines that need test coverage
# depends : python-jinja python-jinja_pluralize python-pluggy

name=python-diff-cover
version=6.2.0
release=1

source="https://files.pythonhosted.org/packages/2f/06/962b7c27a0d93cfcd84e47f4d492de43b5cecead38c55a5af843ef6f863b/diff_cover-6.2.0.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Generate requirements[-dev].txt from Pipfile using pipenv
# depends : python-pbr python-pipenv

name=python-pipenv-to-requirements
version=0.9.0
release=3

source="https://files.pythonhosted.org/packages/ca/10/8d4429dfe9b6cb0b43aab73a5750d3cf85ec74d37d707673e9ec946bc841/pipenv-to-requirements-0.9.0.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

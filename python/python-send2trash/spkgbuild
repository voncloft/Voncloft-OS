# description : Send file to trash natively
# depends : python

name=python-send2trash
version=1.8.1
release=6

source="python-send2trash-1.8.0.tar.gz::https://github.com/hsoft/send2trash/archive/1.8.0.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : The PyPA recommended tool for installing Python packages
  # depends : ${_deps[@]/#/python-}

name=python-pip
version=21.2.1
release=1

source="https://files.pythonhosted.org/packages/f7/ce/e359cf283c0c0f2e0af7df8f16c8d79047aa1887a00a5b39b27d8afc49e2/pip-21.2.1.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

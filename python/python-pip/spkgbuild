# description : The PyPA recommended tool for installing Python packages
  # depends : ${_deps[@]/#/python-}

name=python-pip
version=21.2
release=1

source="https://files.pythonhosted.org/packages/4d/0c/3b63fe024414a8a48661cf04f0993d4b2b8ef92daed45636474c018cd5b7/pip-21.2.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : The PyPA recommended tool for installing Python packages
  # depends : ${_deps[@]/#/python-}

name=python-pip
version=21.2.3
release=1

source="https://files.pythonhosted.org/packages/e1/63/7c0e553ae0513ebf1858f08030158ff5998324013e0ba4c2e1c00b85df79/pip-21.2.3.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

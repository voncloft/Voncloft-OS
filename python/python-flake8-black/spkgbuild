# description : Flake8 plugin to call black as a code style validator
# depends : flake8 python-black python-setuptools

name=python-flake8-black
version=0.2.1
release=4

source="https://files.pythonhosted.org/packages/3d/98/1990a36b53c7b5a882b002b8739137dc3a1399a5a3f08ede5aedf444e33a/flake8-black-0.2.1.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

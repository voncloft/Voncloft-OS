# description : Application tools
# depends : python-traits

name=python-apptools
version=4.5.0
release=3

source="https://github.com/enthought/apptools/archive/${version}.tar.gz"
options="!checksum"

build() {
  cd apptools-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1

}

# description : Python dependency management and packaging made easy
# depends : ${_deps[@]/#/python-}

name=python-poetry
version=1.2.0
release=1

source="https://files.pythonhosted.org/packages/86/c2/8fb98b8197ff6a96263eb3f39029942a412c5148c03f319c31eee8f4b03e/poetry-1.1.8.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : A Python utility / library to sort Python imports.
# depends : python-toml

name=python-isort
version=5.9.3
release=1

source="https://files.pythonhosted.org/packages/1c/34/ed9178b5b23ade4561bf77b91856e0e3bc094620fd81bd74d535817a0f0d/isort-5.9.3.tar.gz"

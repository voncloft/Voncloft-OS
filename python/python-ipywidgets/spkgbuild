name=python-ipywidgets
version=8.0.0
release=1

source="https://files.pythonhosted.org/packages/f1/d9/4b5729f6e2876a8a61be2b00b04fce18c15d807d4360a4b70496a5b20fe9/ipywidgets-7.6.4.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Compatibility shims for pip versions 8 thru current
# depends : python-pip python-wheel python-setuptools

name=python-pip-shims
version=0.5.3
release=3

source="https://files.pythonhosted.org/packages/d7/01/7a797f03c3a61b09edd51b54e8d3cc0c70159ba76a1fcd57654baffcd5bd/pip_shims-0.5.3.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Sacred Marriage of Pipfile, Pip, & Virtualenv.
# depends : python python-pip python-certifi

name=python-pipenv
version=2021.5.29
release=1

source="python-pipenv-2021.5.29.tar.gz::https://github.com/pypa/pipenv/archive/v2021.5.29.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

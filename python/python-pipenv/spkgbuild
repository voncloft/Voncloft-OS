# description : Sacred Marriage of Pipfile, Pip, & Virtualenv.
# depends : python python-pip python-certifi

name=python-pipenv
version=2021.5.29
release=1

source="https://files.pythonhosted.org/packages/be/c5/a7c300c4589e898db8cfcf26f7065c24e2f5abacaea196a7f80e6695344d/pipenv-2021.5.29.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

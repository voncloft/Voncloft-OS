# description : Console colouring for python
# depends : python-setuptools

name=python-termstyle
version=0.1.11
release=7

source="python-termstyle-b3e935355afcfb5240bac5a99707ffecc35772a2.tar.gz::https://github.com/timbertson/termstyle/archive/b3e935355afcfb5240bac5a99707ffecc35772a2.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

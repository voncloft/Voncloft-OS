# description : Python interface to the SANE scanner and frame grabber.
# depends : sane python

name=python-sane
version=2.9.1
release=6

source="python-sane-2.9.1.tar.gz::https://github.com/python-pillow/Sane/archive/v2.9.1.tar.gz"
options="!checksum"

build() {
   cd ${name#python-}-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

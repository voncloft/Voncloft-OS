# description : TextUI colors for Python
# depends : python-colorama

name=python-crayons
version=0.4.0
release=2

source="python-crayons-0.4.0.tar.gz::https://github.com/kennethreitz/crayons/archive/v0.4.0.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

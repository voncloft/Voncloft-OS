# description : Build and document REST APIs with aiohttp and apispec
# depends : python-aiohttp python-apispec python-webargs python-jinja

name=python-aiohttp-apispec
version=2.2.2
release=2

source="python-aiohttp-apispec-2.2.1.tar.gz::https://github.com/maximdanilchenko/aiohttp-apispec/archive/v2.2.1.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

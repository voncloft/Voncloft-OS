# description : Hawk authentication strategy for the requests python library
# depends : python-mohawk python-requests

name=python-requests-hawk
version=1.1.1
release=2

source="https://github.com/mozilla-services/requests-hawk/archive/1.1.1/python-requests-hawk-1.1.1.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

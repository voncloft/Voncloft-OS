# description : Test Anything Protocol TAP reporting plugin for pytest.
# depends : python-pytest python-tappy

name=python-pytest-tap
version=3.2
release=1

source="python-pytest-tap-3.2.tar.gz::https://github.com/python-tap/pytest-tap/archive/v3.2.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

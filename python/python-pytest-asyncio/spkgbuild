# description : Pytest support for asyncio.
# depends : python-pytest

name=python-pytest-asyncio
version=0.15.1
release=3

source="python-pytest-asyncio-0.15.1.tar.gz::https://github.com/pytest-dev/pytest-asyncio/archive/v0.15.1.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

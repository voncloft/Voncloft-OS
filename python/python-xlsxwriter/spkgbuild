# description : A Python module for creating Excel XLSX files
# depends : python

name=python-xlsxwriter
version=3.0.1
release=1

source="python-xlsxwriter-3.0.1.tar.gz::https://github.com/jmcnamara/XlsxWriter/archive/RELEASE_3.0.1.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

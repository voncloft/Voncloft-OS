# description : AWS X-Ray SDK for Python
# depends : python python-botocore python-future python-jsonpickle python-wrapt

_name=aws-xray-sdk-python
url=https://github.com/aws/aws-xray-sdk-python
name=python-aws-xray-sdk
version=2.6.0
release=3

source="https://github.com/aws/aws-xray-sdk-python/archive/$version/$name-$version.tar.gz"
options="!checksum"

build() {
   cd $_name-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

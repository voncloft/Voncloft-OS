# description : Manipulate jagged, chunky, and/or bitmasked arrays as easily as Numpy
# depends : python-numpy

name=python-awkward
version=1.5.0
release=1

source="https://files.pythonhosted.org/packages/eb/86/05088fc5305ff69beace67d784f3b5a566ad2ac1fdd8825dfec13405ed0f/awkward-1.5.0.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

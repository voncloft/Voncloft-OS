# description : Wrapper for the various Internet Archive APIs IA-S3, Metadata API, etc
# depends : python

name=python-internetarchive
version=2.1.0
release=1

source="https://files.pythonhosted.org/packages/9f/30/edd23ef4968ac86f587ec7d152887e8005ee9ca7e058fe2c90c38157274e/internetarchive-2.1.0.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : JSON for Humans, allows comments and is less error prone.
# depends : python

name=python-hjson
version=3.0.2
release=3

source="python-hjson-3.0.2.tar.gz::https://github.com/hjson/hjson-py/archive/v3.0.2.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

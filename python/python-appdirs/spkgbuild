# description	: A small Python module for determining appropriate platform-specific dirs, e.g. a user data dir
# depends	: python

name=python-appdirs
version=1.4.4
release=1

source="https://files.pythonhosted.org/packages/d7/d8/05696357e0311f5b5c316d7b95f46c669dd9c15aaeecbb48c7d0aeb88c40/appdirs-1.4.4.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

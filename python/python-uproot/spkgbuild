# description : Minimalist CERN ROOT I/O in pure Python and Numpy
# depends : python-awkward python-cachetools python-lz4 python-numpy python-uproot-methods python-zstandard
# depends : python-sphinx

name=python-uproot
version=4.1.0
release=2

source="https://files.pythonhosted.org/packages/90/69/dbe47a769d2477da7fd65dec85ba34f870d6b898808da0eb304fa333c9f6/uproot-4.1.0.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

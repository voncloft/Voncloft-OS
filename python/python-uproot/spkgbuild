# description : Minimalist CERN ROOT I/O in pure Python and Numpy
# depends : python-awkward python-cachetools python-lz4 python-numpy python-uproot-methods python-zstandard
# depends : python-sphinx

name=python-uproot
version=4.1.2
release=2

source="https://files.pythonhosted.org/packages/0c/db/fa8a5ae1749c9089e9959288749e5f0164616782d15e07da7eabe3aa6ce9/uproot-4.1.2.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

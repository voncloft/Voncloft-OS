# description : Minimalist CERN ROOT I/O in pure Python and Numpy
# depends : python-awkward python-cachetools python-lz4 python-numpy python-uproot-methods python-zstandard
# depends : python-sphinx

name=python-uproot
version=4.0.11
release=2

source="https://files.pythonhosted.org/packages/65/83/9eebaf2bd8c4a0ee81c9d639dd564b9d1a447d5134ae55e98a7b03c07b6a/uproot-4.0.11.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

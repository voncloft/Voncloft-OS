# depends : python-awkward python-cachetools python-lz4 python-numpy python-uproot-methods python-zstandard
# depends : python-sphinx

name=python-uproot
version=4.1.1
release=2

source="https://files.pythonhosted.org/packages/e9/02/f0ed5875c7ab6be0af6c7e973c81d29e7f78ed3e89f6a889c338f69f856b/uproot-4.1.1.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

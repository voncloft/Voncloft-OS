# description : General-purpose Python bindings for the HDF5 library version
# depends : hdf5-openmpi liblzf python-numpy python-mpi4py

_pkg=h5py
url=https://www.h5py.org/
name=python-${_pkg}-openmpi
version=3.1.0
release=3

source="https://files.pythonhosted.org/packages/source/h/${_pkg}/${_pkg}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${_pkg}-${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

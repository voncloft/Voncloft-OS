_name=simplesoapy
_name=simplesoapy
_name=simplesoapy
name=python-$_name
version=1.5.1
release=7

source="https://files.pythonhosted.org/packages/source/${name:7:1}/${name#python-}/${name#python-}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${name#python-}-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

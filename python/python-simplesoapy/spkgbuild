# description : Simple pythonic wrapper for SoapySDR library
# depends : python python-numpy soapysdr

name=python-simplesoapy
version=1.5.1
release=7

source="python-simplesoapy-1.5.1.tar.gz::https://github.com/xmikos/simplesoapy/archive/v1.5.1.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

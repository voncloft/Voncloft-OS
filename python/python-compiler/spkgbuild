# description : The compiler package from Python 2, ported to Python 3
# depends : python

url=https://github.com/pfalcon/python-compiler
name=python-compiler
version=1.1
release=2

source="https://github.com/pfalcon/python-compiler/archive/master.zip"
options="!checksum"

build() {
   cd $name
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

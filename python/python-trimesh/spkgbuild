# description : Trimesh is a pure Python library for loading and using triangular meshes with an emphasis on watertight surfaces
# depends : python python-setuptools python-numpy

name=python-trimesh
version=3.9.25
release=1

source="https://files.pythonhosted.org/packages/40/b9/3cbf12e60e5dbdd060553808a4d3b8ce898ddfd09882eb9be591fadac63b/trimesh-3.9.25.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

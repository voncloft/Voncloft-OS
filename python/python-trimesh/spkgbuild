# description : Trimesh is a pure Python library for loading and using triangular meshes with an emphasis on watertight surfaces
# depends : python python-setuptools python-numpy

name=python-trimesh
version=3.9.26
release=1

source="https://files.pythonhosted.org/packages/11/07/823885b81acb29aae126a12a7e67759d3bc289a733f3a70f86135e3e05b2/trimesh-3.9.26.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

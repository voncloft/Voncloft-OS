# description : Trimesh is a pure Python library for loading and using triangular meshes with an emphasis on watertight surfaces
# depends : python python-setuptools python-numpy

name=python-trimesh
version=3.9.21
release=1

source="https://files.pythonhosted.org/packages/51/41/94f7cb871ca140a630dc30cb6c9c9991f82c939b0ecc7c18f2e2f3f0eb3d/trimesh-3.9.21.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

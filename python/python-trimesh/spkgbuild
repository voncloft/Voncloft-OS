# description : Trimesh is a pure Python library for loading and using triangular meshes with an emphasis on watertight surfaces
# depends : python python-setuptools python-numpy

name=python-trimesh
version=3.9.23
release=1

source="https://files.pythonhosted.org/packages/cd/3e/0a764f9913b77c2b4d422488e27ae3df8420783324b59ea11371d6292d34/trimesh-3.9.23.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

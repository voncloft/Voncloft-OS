# description : Trimesh is a pure Python library for loading and using triangular meshes with an emphasis on watertight surfaces
# depends : python python-setuptools python-numpy

name=python-trimesh
version=3.9.28
release=1

source="https://files.pythonhosted.org/packages/7e/f1/36dfed0d0493621b5b7dac63b0d948ac6cf87a9199e46abf90f0c89c0412/trimesh-3.9.28.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

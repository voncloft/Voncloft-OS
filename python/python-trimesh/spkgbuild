# description : Trimesh is a pure Python library for loading and using triangular meshes with an emphasis on watertight surfaces
# depends : python python-setuptools python-numpy

name=python-trimesh
version=3.9.29
release=1

source="https://files.pythonhosted.org/packages/20/42/f1db702f818ab5a2f5aa7d707a642045ccfbe244ee751948f736cb85f04e/trimesh-3.9.29.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

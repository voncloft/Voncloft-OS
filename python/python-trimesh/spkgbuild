# description : Trimesh is a pure Python library for loading and using triangular meshes with an emphasis on watertight surfaces
# depends : python python-setuptools python-numpy

name=python-trimesh
version=3.9.27
release=1

source="https://files.pythonhosted.org/packages/39/fb/d69202c983fee5f4a31299010fa9ae71dcb7528fb27a753432bfbf8b5f9c/trimesh-3.9.27.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

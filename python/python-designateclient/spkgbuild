# description : OpenStack DNS-as-a-Service - Client
# depends : python-cliff python-jsonschema python-osc-lib python-oslo-serialization

url=https://docs.openstack.org/python-designateclient/latest/
name=python-designateclient
version=4.2.0
release=1

source="https://github.com/openstack/python-designateclient/archive/$version/$name-$version.tar.gz"
options="!checksum"

build() {
   cd python-designateclient-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

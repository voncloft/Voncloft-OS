# description : A framework for managing and maintaining multi-language pre-commit hooks
# depends : python-cfgv python-identify python-nodeenv python-yaml python-toml

name=python-pre-commit
version=2.14.1
release=1

source="https://files.pythonhosted.org/packages/f9/3e/14f27cbad8703a2bb3229bf94926582509c190d750afb3ac3d318551829b/pre_commit-2.14.1.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Pure Python module to hyphenate text
# depends : python

name=python-pyphen
version=0.11.0
release=1

source="https://files.pythonhosted.org/packages/9a/f8/af869a4983c1b3159945479510260985714265d48baf27d61f72b1ec8cbf/pyphen-0.11.0.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

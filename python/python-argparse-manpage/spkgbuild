# description : Automatically build() man-pages for your Python project
# depends : python

name=python-argparse-manpage
version=1.5
release=2

source="python-argparse-manpage-1.5.tar.gz::https://github.com/praiskup/argparse-manpage/archive/v1.5.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Small footprint and configurable DRAM core
# depends : python-migen python-litex python-yaml

name=python-litedram
version=2021.08
release=1

source="python-litedram-2020.12.tar.gz::https://github.com/enjoy-digital/litedram/archive/2020.12.tar.gz"
options="!checksum"

build() {
   cd ${name#python-}-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

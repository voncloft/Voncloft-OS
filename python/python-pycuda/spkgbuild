# description : Python wrapper for Nvidia CUDA
   # depends : cuda nvidia-utils python-numpy python-pytools python boost-libs pycuda-headers

name=python-pycuda
version=2021.1
release=5

source="https://files.pythonhosted.org/packages/5a/56/4682a5118a234d15aa1c8768a528aac4858c7b04d2674e18d586d3dfda04/pycuda-2021.1.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : A module with the CRC8 algorithm for Python
# depends : python

name=python-crc8
version=0.1.0
release=2

source="python-crc8-0.1.0.tar.gz::https://github.com/niccokunzmann/crc8/archive/v0.1.0.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Python extension for computing string edit distances and similarities
# depends : python

name=python-levenshtein
version=0.13.0
release=1

source="https://files.pythonhosted.org/packages/ea/eb/16cc6cb985aa9ab6af724a3025490cd83bf7b4fdc6486f4759ce26b02f48/Levenshtein-0.13.0.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Python extension for computing string edit distances and similarities
# depends : python

name=python-levenshtein
version=0.15.0
release=1

source="https://files.pythonhosted.org/packages/c3/ff/a43d1866740d6b6fc85f713d68460c8c9fe6a6f6f12abc9bcff6f43354dc/Levenshtein-0.15.0.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

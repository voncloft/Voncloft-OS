# description : OpenTracing API for Python
# depends : python

name=python-opentracing
version=2.4.0
release=1

source="https://github.com/opentracing/opentracing-python/archive/2.4.0/python-opentracing-2.4.0.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

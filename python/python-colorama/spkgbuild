# description : Python API for cross-platform colored terminal text.
# depends : python

name=python-colorama
version=0.4.4
release=3

source="python-colorama-0.4.4.tar.gz::https://github.com/tartley/colorama/archive/0.4.4.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

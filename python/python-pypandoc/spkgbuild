# description : Thin wrapper for pandoc
# depends : python-setuptools pandoc

name=python-pypandoc
version=1.6.4
release=4

source="https://files.pythonhosted.org/packages/87/1f/19ccb013cd5fe5dc0bf201a34892b0aedb583a029bda321204809a5759ea/pypandoc-1.6.4.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

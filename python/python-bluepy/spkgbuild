# description : Python module for interfacing with Bluetooth LE devices through Bluez
# depends : python python-setuptools bluez glib

name=python-bluepy
version=1.3.0
release=4

source="python-bluepy-1.3.0.tar.gz::https://github.com/IanHarvey/bluepy/archive/v/1.3.0.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : textwrap, but savvy to ANSI colors and styles
# depends : python

name=python-ansiwrap
version=0.8.4
release=3

source="https://github.com/jonathaneunice/ansiwrap/archive/b3e935355afcfb5240bac5a99707ffecc35772a2/python-ansiwrap-b3e935355afcfb5240bac5a99707ffecc35772a2.tar.gz"
options="!checksum"

build() {
   cd ${name#python-}-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

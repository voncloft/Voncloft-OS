# description : graphical user interface using python
# depends : python-gobject2 python2

name=python-gtk2
version=2.24.0
release=1

source="https://download.gnome.org/sources/pygtk/2.24/pygtk-$version.tar.bz2"
options="!checksum"

build() {
	sed -i '1394,1402 d' pango.defs
	./configure --prefix=/usr &&
make
make DESTDIR=$PKG install
}

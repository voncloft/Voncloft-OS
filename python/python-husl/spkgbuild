# description : A Python implementation of HUSL revision 3
# depends : python

_name=husl
url=https://pypi.org/project/husl/
name=python-husl
version=4.0.3
release=7

source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz"
options="!checksum"

build() {
   cd $name-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

name=python-astroid
version=2.4.2
release=4

source="https://github.com/PyCQA/astroid/archive/astroid-$version.tar.gz"
options="!checksum"

build() {
   cd astroid-astroid-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

name=python-numpy
version=1.22.0
release=1

source="python-numpy-1.21.2.tar.gz::https://github.com/numpy/numpy/archive/v1.21.2.tar.gz"
options="!checksum"

build() {
   cd ${name#python-}-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

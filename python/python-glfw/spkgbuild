# description : Module for OpenGL, OpenGL ES, Vulkan, window and input support
# depends : glfw python

name=python-glfw
version=2.2.0
release=2

source="https://files.pythonhosted.org/packages/55/8b/86989f767b0d65e7b7fabeffdb2343cc1ebb4bae4878db5ab37fdf130a0d/glfw-2.2.0.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

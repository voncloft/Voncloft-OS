# description : Virtual Python Environment build()er
  # depends : python-appdirs python-distlib python-filelock python-six

name=python-virtualenv
version=20.7.2
release=1

source="https://files.pythonhosted.org/packages/6d/89/9691b0d0521c069bd238585ccb7f4035b8393d843a50491270e7dae0209e/virtualenv-20.7.2.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

source="https://files.pythonhosted.org/packages/6a/be/03644427159d3836a32bf030c478e50f85a7b546a824d3f5413bd4e458cd/pynitrokey-0.4.4.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

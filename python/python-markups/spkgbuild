# description : Wrapper around various text markups
# depends : python-markdown-math python-setuptools

name=python-markups
version=3.1.2
release=10

source="https://files.pythonhosted.org/packages/cc/95/3d85e06393a8f484f0125f2b44da4dafd09a7208a5b2dc4681e9e81f5ebb/Markups-3.1.2.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

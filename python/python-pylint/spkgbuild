name=python-pylint
version=3.0.0
release=3

source="https://files.pythonhosted.org/packages/49/31/b4c4272664d4c5576c0d8b30dc01fb159561e5ee026a390de24461735f46/pylint-2.9.4.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : unittest-based test runner with Ant/JUnit like XML reporting.
# depends : python-six

name=python-unittest-xml-reporting
version=3.0.4
release=2

source="python-unittest-xml-reporting-3.0.4.tar.gz::https://github.com/xmlrunner/unittest-xml-reporting/archive/3.0.4.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Python wrapper around Lua and LuaJIT
# depends : lua53 python

name=python-lupa
version=1.10
release=4

source="https://files.pythonhosted.org/packages/2e/f8/fc88e2aa9c0edf4522e78797186799ffd37a5ea9d67e372c3402fce39486/lupa-1.10.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

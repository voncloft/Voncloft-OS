source="python-sepaxml-2.4.1.tar.gz::https://github.com/raphaelm/python-sepaxml/archive/2.4.1.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

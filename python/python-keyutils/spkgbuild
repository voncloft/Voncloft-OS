# description : A set of python bindings for keyutils
# depends : python keyutils
# python-pytest-runner in makedepends due to be set in setup_requires which is wrong upstream

name=python-keyutils
version=0.6
release=6

source="python-keyutils-0.6.tar.gz::https://github.com/sassoftware/python-keyutils/archive/0.6.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

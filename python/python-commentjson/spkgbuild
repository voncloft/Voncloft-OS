# description : Add Python and JavaScript style comments in your JSON files
# depends : python-lark-parser

url=https://github.com/vaidik/commentjson
name=python-commentjson
version=0.9.0
release=3

source="https://github.com/vaidik/commentjson/archive/v$version.tar.gz"
options="!checksum"

build() {
   cd commentjson-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

release=1

source="python-pipx-0.16.4.tar.gz::https://github.com/pipxproject/pipx/archive/0.16.4.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : An SDK for build()ing applications to work with OpenStack
# depends : python-six python-pbr python-yaml python-jsonpatch python-appdirs

name=python-openstacksdk
version=0.59.0
release=1

source="python-openstacksdk-0.59.0.tar.gz::https://github.com/openstack/openstacksdk/archive/0.59.0.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

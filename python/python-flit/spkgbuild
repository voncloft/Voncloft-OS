release=3

source="python-flatdict-3.2.0.tar.gz::https://github.com/takluyver/flit/archive/3.2.0.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

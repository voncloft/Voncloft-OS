# description : Provides tag-expression parser for cucumber/behave
# depends : python

name=python-cucumber-tag-expressions
version=4.0.2
release=1

source="https://github.com/cucumber/tag-expressions-python/archive/v3.0.1/python-cucumber-tag-expressions-3.0.1.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Sphinx plugin to automatically document click-based applications
# depends : python-pbr python-sphinx

name=python-sphinx-click
version=3.0.1
release=2

source="https://files.pythonhosted.org/packages/09/21/5c071f9533f04ac210da5bf4e5f6f180ce14c49d1a8118f9695227e8df05/sphinx-click-3.0.1.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

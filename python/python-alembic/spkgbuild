name=python-alembic
version=1.7.0
release=3

source="https://files.pythonhosted.org/packages/9f/e9/d2386565534e003076ffa6df11b5ce52d021ce3960ce2b1a15b7c21d469b/alembic-1.7.0.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

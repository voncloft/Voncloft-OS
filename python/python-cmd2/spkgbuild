# description : A tool for build()ing interactive command line apps
# depends : python-attrs python-colorama python-pyperclip python-wcwidth

name=python-cmd2
version=2.2.0
release=1

source="https://files.pythonhosted.org/packages/31/5c/df2c032dab2a5b3913f47fba5daa565324e67d1a75b6be05ddc0d10e82bf/cmd2-2.2.0.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

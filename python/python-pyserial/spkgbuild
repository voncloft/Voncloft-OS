# description : Multiplatform Serial Port Module for Python
  # depends : python

name=python-pyserial
version=3.5
release=1

source="python-pyserial-3.5.tar.gz::https://github.com/pyserial/pyserial/archive/v3.5.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

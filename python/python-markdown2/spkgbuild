# description : A fast and complete implementation of Markdown in Python
# depends : python

name=python-markdown2
version=2.4.1
release=1

source="python-markdown2-2.4.1.tar.gz::https://github.com/trentm/python-markdown2/archive/2.4.1.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

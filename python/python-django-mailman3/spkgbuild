# description : Libraries and templates to Django-based interfaces interacting with Mailman
# depends : python-django python-django-allauth python-django-gravatar

_name=django-mailman3
url=https://gitlab.com/mailman/django-mailman3
name=python-django-mailman3
version=1.3.5
release=1

source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz"
options="!checksum"

build() {
   cd $name-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

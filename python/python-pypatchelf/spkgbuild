# description : Patchelf utility, packaged for python/pip
# depends : python patchelf

name=python-pypatchelf
version=0.9
release=2

source="python-pypatchelf-0.9.tar.gz::https://github.com/rmcgibbo/pypatchelf/archive/b3e935355afcfb5240bac5a99707ffecc35772a2.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

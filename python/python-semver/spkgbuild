# description : Python helper for Semantic Versioning
# depends : python

name=python-semver
version=3.0.0
release=3

source="python-semver-2.13.0.tar.gz::https://github.com/k-bx/python-semver/archive/2.13.0.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

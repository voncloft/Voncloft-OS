# description : Python wrapper for Box2D
# depends : python

name=python-pybox2d
version=2.3.2
release=6

source="python-pybox2d-2.3.2.tar.gz::https://github.com/pybox2d/pybox2d/archive/2.3.2.tar.gz"
options="!checksum"

build() {
   cd ${name#python-}-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Getting image size from png/jpeg/jpeg2000/gif file
# depends : python

name=python-imagesize
version=1.2.0
release=4

source="https://files.pythonhosted.org/packages/e4/9f/0452b459c8ba97e07c3cd2bd243783936a992006cf4cd1353c314a927028/imagesize-1.2.0.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Programmatically open an editor, capture the result
# depends : python

name=python-editor
version=1.2.1
release=6

source="python-ecdsa-1.0.4.tar.gz::https://github.com/fmoo/python-editor/archive/1.0.4.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : A Python library to use Jabber/XMPP networks in a non-blocking way
# depends : libsoup python-gobject python-idna python-precis_i18n

name=python-nbxmpp
version=2.0.3
release=3

source="https://files.pythonhosted.org/packages/8b/5a/aa87650d786b59d6a59ea1d2df3cb1a2f42f76247dcd6b3fa497c6028be1/nbxmpp-2.0.3.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Fast, correct Python JSON library supporting dataclasses and datetimes
# depends : python

name=python-orjson
version=3.6.3
release=1

source="https://files.pythonhosted.org/packages/75/cd/eac8908d0b4a4b08067bc68c04e52d7601b0ed86bf2a6a3264c46dd51a84/orjson-3.6.3.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

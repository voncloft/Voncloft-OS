# description : Fast, correct Python JSON library supporting dataclasses and datetimes
# depends : python

name=python-orjson
version=3.6.2
release=1

source="https://files.pythonhosted.org/packages/7c/5c/6db5fcf1aa88af5a8e943097487d2da4691bb645d5ce5c47da08f7f0b472/orjson-3.6.2.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

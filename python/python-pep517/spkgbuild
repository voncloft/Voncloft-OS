# description : Wrappers to build() Python packages using PEP 517 hooks
  # depends : python-toml

name=python-pep517
version=0.10.0
release=3

source="https://files.pythonhosted.org/packages/0f/4c/ac5dc83e7afa327ea9b018a15193a4f1cd8bcce85263a60c127fdcf8ffd3/pep517-0.10.0.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

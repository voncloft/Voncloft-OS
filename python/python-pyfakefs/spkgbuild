# description : pyfakefs implements a fake file system that mocks the Python file system modules
# depends : python-pytest

name=python-pyfakefs
version=4.5.1
release=1

source="https://files.pythonhosted.org/packages/48/af/57c14b8b4bfa83472c306cfa27c041f370f58fa3e4fcc4b0cc6b4564c73a/pyfakefs-4.5.1.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Python virtualenv management and testing tool
  # depends : python-py python-virtualenv python-packaging python-pluggy python-toml

name=python-tox
version=4.0.0
release=1

source="https://files.pythonhosted.org/packages/87/d1/602b0faa100f327c102cf3cab7c9adc949b64e0a9dc5862045888fb1df38/tox-3.24.1.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

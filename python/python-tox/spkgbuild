# description : Python virtualenv management and testing tool
  # depends : python-py python-virtualenv python-packaging python-pluggy python-toml

name=python-tox
version=4.0.0
release=1

source="https://files.pythonhosted.org/packages/2c/bf/7c85d0d956c68a38afb8cc52e7c9dc18f7619f666aa4bc1655afa7247c49/tox-3.24.3.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

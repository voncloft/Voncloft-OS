# description : Python virtualenv management and testing tool
  # depends : python-py python-virtualenv python-packaging python-pluggy python-toml

name=python-tox
version=4.0.0
release=1

source="https://files.pythonhosted.org/packages/a5/24/2bf6519e581aa1a16efe5718f73973c073492f300ca8aabd5784bf0fdce5/tox-3.23.1.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Python virtualenv management and testing tool
  # depends : python-py python-virtualenv python-packaging python-pluggy python-toml

name=python-tox
version=4.0.0
release=1

source="https://files.pythonhosted.org/packages/f9/1e/b583fd4970d991967e14c06d894973cb4d5d013b86349b3dab0f3e61a7cd/tox-3.24.2.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

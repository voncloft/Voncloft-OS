# description : Debugging manhole for python applications
# depends : python

name=python-manhole
version=1.8.0
release=5

source="python-manhole-1.8.0.tar.gz::https://github.com/ionelmc/python-manhole/archive/v1.8.0.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

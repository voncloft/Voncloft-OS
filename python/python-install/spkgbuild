# description : A simple, correct PEP427 wheel installer
# depends : python

name=python-install
version=1.3.4
release=1

source="https://files.pythonhosted.org/packages/ae/d4/ee70b7404154ac95b76b5125e9713ec3f2c9a91c366d90dedf059c75cec3/install-1.3.4.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

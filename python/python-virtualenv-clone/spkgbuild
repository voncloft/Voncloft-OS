# description : A script for cloning a non-relocatable virtualenv.
# depends : python

name=python-virtualenv-clone
version=0.5.7
release=4

source="https://files.pythonhosted.org/packages/85/76/49120db3bb8de4073ac199a08dc7f11255af8968e1e14038aee95043fafa/virtualenv-clone-0.5.7.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

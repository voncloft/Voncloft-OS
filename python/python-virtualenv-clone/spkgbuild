# description : A script for cloning a non-relocatable virtualenv.
# depends : python

name=python-virtualenv-clone
version=0.5.4
release=4

source="https://files.pythonhosted.org/packages/1d/51/076f3a72af6c874e560be8a6145d6ea5be70387f21e65d42ddd771cbd93a/virtualenv-clone-0.5.4.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Python syntax highlighter
# depends : python-setuptools

name=python-pygments
version=2.10.0
release=1
pyn=python-Pygments

source="https://files.pythonhosted.org/packages/b7/b3/5cba26637fe43500d4568d0ee7b7362de1fb29c0e158d50b4b69e9a40422/Pygments-2.10.0.tar.gz"
options="!checksum"

build() {
   cd ${pyn#python-}-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

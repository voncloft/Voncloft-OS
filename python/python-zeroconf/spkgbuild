name=python-zeroconf
version=0.32.1
release=1

source="https://files.pythonhosted.org/packages/3a/2d/8e8d2d882031f835746bd427b4297fb475dac4a9f0afc34f4fba8bc6458d/zeroconf-0.32.1.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

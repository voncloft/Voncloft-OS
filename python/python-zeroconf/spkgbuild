source="https://files.pythonhosted.org/packages/c8/6a/d24274c63afb4efc0c25218901e1cee4ad32ef1e2c4a930174224be1add9/zeroconf-0.35.1.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

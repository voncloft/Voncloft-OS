source="https://files.pythonhosted.org/packages/fd/5d/c88bc96bc75561e22f02c09d9ab9084229432a2f476090923e3aac60276f/zeroconf-0.36.3.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

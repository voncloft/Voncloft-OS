# description : Small footprint and configurable embedded FPGA logic analyzer core
# depends : python-migen python-litex

name=python-litescope
version=2020.12
release=1

source="python-litescope-2020.12.tar.gz::https://github.com/enjoy-digital/litescope/archive/2020.12.tar.gz"
options="!checksum"

build() {
   cd ${name#python-}-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

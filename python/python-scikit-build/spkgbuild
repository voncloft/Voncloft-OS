# description : Improved build() system generator for CPython C, C++, Cython and Fortran extensions
# depends : cmake python-distro python-wheel

name=python-scikit-build
version=0.12.0
release=3

source="https://files.pythonhosted.org/packages/ab/8d/fc770eb732553ae0af68d276865524cc17efd667f9e71da6c5a2ac876817/scikit-build-0.12.0.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Improved build() system generator for CPython C, C++, Cython and Fortran extensions
# depends : cmake python-distro python-wheel

name=python-scikit-build
version=0.12.0
release=3

source="python-scikit-build-0.12.0.tar.gz::https://github.com/scikit-build/scikit-build/archive/0.12.0.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

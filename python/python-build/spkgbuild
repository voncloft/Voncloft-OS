# description : A simple, correct PEP517 package builder
# depends : python-toml python-pep517 python-packaging

name=python-build
version=0.6.1
release=1

source="https://files.pythonhosted.org/packages/45/9a/ee95fd7dcb51b6fbb12a08e362dba0d02158ca4fd599ab4e61d0853c2974/build-0.6.0.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

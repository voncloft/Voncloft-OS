# description : A simple, correct PEP517 package builder
# depends : python-toml python-pep517 python-packaging

name=python-build
version=0.6.1
release=1

source="https://files.pythonhosted.org/packages/d1/18/0ce502d693c73d25a2d8a2205f80c0f7a13f80edf023ad68b067e97dbafa/build-0.6.0.post1.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Provides a helper class to make assertions of regexes simpler
# depends : python python-regex

name=python-re-assert
version=1.1.0
release=2

source="python-re-assert-1.1.0.tar.gz::https://github.com/asottile/re-assert/archive/v1.1.0.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Colour representations manipulation library RGB, HSL, web, ...
# depends : python

_pyname=colour
url=https://github.com/vaab/colour
name=python-colour
version=0.1.5
release=8

source="https://files.pythonhosted.org/packages/source/${_pyname:0:1}/${_pyname}/$_pyname.tar.gz"
options="!checksum"

build() {
   cd $_pyname-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

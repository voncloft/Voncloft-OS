# description : Cheap build()er for pyproject-based build() systems
# depends : python-setuptools python-toml

name=python-pyproject2setuppy
version=9
release=2

source="https://files.pythonhosted.org/packages/d6/47/2323f4415b1d66db36d0d6ab730055b29a80aa02ed511485a7f1574ccb21/pyproject2setuppy-20.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

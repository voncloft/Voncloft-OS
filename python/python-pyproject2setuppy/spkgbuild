# description : Cheap build()er for pyproject-based build() systems
# depends : python-setuptools python-toml

name=python-pyproject2setuppy
version=20
release=2

source="python-pyproject2setuppy-20.tar.gz::https://github.com/mgorny/pyproject2setuppy/archive/v20.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

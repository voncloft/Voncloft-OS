# description : Python module for very simple, very easy GUI programming
# depends : python tk

name=python-easygui
version=0.98.2
release=6

source="easygui-0.98.1.tar.gz::https://github.com/robertlugg/easygui/archive/0.98.1.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

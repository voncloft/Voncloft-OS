# description : ANTLR4 runtime for Python
# depends : python

_name=antlr4
name=python-${_name}
version=4.9.1
release=1
url="https://www.antlr.org/"

source="https://github.com/antlr/${_name}/archive/${version}.tar.gz"
options="!checksum"

build() {
  cd ${_name}-${version}/runtime/Python3
  python setup.py build
  python setup.py install --root=$PKG --optimize=1 
}

# description : Python Imaging Library PIL fork.
# depends : python lcms2 libtiff openjpeg2 libimagequant libxcb

name=python-pillow
version=8.3.2
release=1

source="https://files.pythonhosted.org/packages/90/d4/a7c9b6c5d176654aa3dbccbfd0be4fd3a263355dc24122a5f1937bdc2689/Pillow-8.3.2.tar.gz"
options="!checksum"

build() {
   cd Pillow-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

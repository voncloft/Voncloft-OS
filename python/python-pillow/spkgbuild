# description	: Python Imaging Library (PIL) fork
# depends	: python python-setuptools freetype2 openjpeg2

name=python-pillow
version=7.2.0
release=1
source="https://files.pythonhosted.org/packages/source/P/Pillow/Pillow-$version.tar.gz"

build() {
	cd Pillow-$version
	python setup.py build
	python setup.py install --root="$PKG" --optimize=1

	install -dm755 "$PKG/usr/include/python.7m/"
	install -m644 -t "$PKG/usr/include/python.7m/" src/libImaging/*.h
}

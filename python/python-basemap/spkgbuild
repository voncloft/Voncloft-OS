# description : Toolkit for plotting data on map projections
# depends : cpython python-matplotlib geos shapelib python-numpy python-pyproj
url=https://matplotlib.org/basemap/
name=python-basemap
version=1.2.2
release=2

source="https://github.com/matplotlib/basemap/archive/v${version}rel.tar.gz"
options="!checksum"

build() {
   cd basemap-${version}rel
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Toolkit for plotting data on map projections
# depends : cython3 python-matplotlib geos shapelib python-numpy python-pyproj

name=python-basemap
version=1.2.2
release=2

source="https://downloads.sourceforge.net/project/matplotlib/matplotlib-toolkits/basemap-1.0.7/basemap-1.0.7.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

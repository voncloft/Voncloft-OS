# description : Toolkit for plotting data on map projections
# depends : cython3 python-matplotlib geos shapelib python-numpy python-pyproj

name=python-basemap
version=1.2.2
release=2

source="python-basemap-1.2.2.tar.gz::https://github.com/matplotlib/basemap/archive/v1.2.2rel.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

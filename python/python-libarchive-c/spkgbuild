# description : Python interface to libarchive
# depends : python libarchive

name=python-libarchive-c
version=3.1
release=3

source="https://files.pythonhosted.org/packages/53/d5/bee2190570a2b4c372a022f16ebfc2313ff717a023f277f5d6f9ebf281a2/libarchive-c-3.1.tar.gz"

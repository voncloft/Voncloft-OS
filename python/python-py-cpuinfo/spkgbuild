# description : Get CPU info with pure Python 2 & 3
# depends : python

name=python-py-cpuinfo
version=8.0.0
release=3

source="python-pycparser-8.0.0.tar.gz::https://github.com/workhorsy/py-cpuinfo/archive/v8.0.0.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

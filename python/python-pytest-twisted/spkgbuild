# description : A twisted plugin for py.test
# depends : python-pytest python-greenlet python-decorator python-twisted

name=python-pytest-twisted
version=1.13.3
release=3

source="https://files.pythonhosted.org/packages/2b/05/fb4addd4e1f86fad3bb52064139db15174f56b00df4ff8c2ad3c5edb01b6/pytest-twisted-1.13.3.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : A twisted plugin for py.test
# depends : python-pytest python-greenlet python-decorator python-twisted

name=python-pytest-twisted
version=1.13.4
release=3

source="https://files.pythonhosted.org/packages/59/6c/3c9e4c74c31a84c3e1887907ef0f5793453e33b94dbdeb432b48d80722e4/pytest-twisted-1.13.4.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

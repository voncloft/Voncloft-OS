# description : Python bindings for the XML Security Library
# depends : python-lxml xmlsec

name=python-xmlsec
version=1.3.12
release=3

source="python-xmlsec-1.3.12.tar.gz::https://github.com/mehcode/python-xmlsec/archive/1.3.12.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

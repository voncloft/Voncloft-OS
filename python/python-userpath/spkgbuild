# description : Cross-platform tool for adding locations to the user PATH, no elevated privileges required!
# depends : python python-click python-distro

name=python-userpath
version=1.7.0
release=3

source="https://files.pythonhosted.org/packages/60/2c/0620bacd069a14a601b0a5ba4578b223fa6ae34b9dd97e5508798b7f3dee/userpath-1.7.0.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Python Low-Overhead Profiler
# depends : python-six python-tornado

url=https://github.com/bdarnell/plop
name=python-plop
version=0.4.0
release=3

source="https://pypi.python.org/packages/source/p/plop/plop-${version}.tar.gz"
options="!checksum"

build() {
   cd plop-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Simple PDF text extraction
# depends : poppler python

name=python-pdftotext
version=2.2.0
release=2

source="https://files.pythonhosted.org/packages/d4/e3/b9ebc5f01fa77fa8bd340fb2a40ab49ca9b99e9bd657ebb53eb944dc3251/pdftotext-2.2.0.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

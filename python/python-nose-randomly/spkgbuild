# description : Nose plugin to randomly order tests and control random.seed.
# depends : python-nose

name=python-nose-randomly
version=1.2.6
release=5

source="python-nose-randomly-1.2.6.tar.gz::https://github.com/adamchainz/nose-randomly/archive/1.2.6.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

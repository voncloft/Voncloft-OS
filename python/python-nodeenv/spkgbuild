# description : Node.js virtual environment build()er
# depends : python make

name=python-nodeenv
version=1.6.0
release=3

source="python-nodeenv-1.6.0.tar.gz::https://github.com/ekalinin/nodeenv/archive/1.6.0.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

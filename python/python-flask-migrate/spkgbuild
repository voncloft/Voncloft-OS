name=python-flask-migrate
version=2.5.3
release=3

source="https://github.com/miguelgrinberg/Flask-Migrate/archive/v${version}/${name}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${_name}-${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Core components for the kde desktop
# depends : kde-deps

name=kitemviews
version=5.82.0
release=1

source="https://download.kde.org/stable/frameworks/$version/$name-$version.tar.xz"
options="!checksum"

build() {
   cd $name-$version
   plasma-package-installer
   make DESTDIR=$PKG install
}

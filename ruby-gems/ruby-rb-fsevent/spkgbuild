# description	: Very simple & usable FSEvents API
# depends	: ruby

_name=rb-fsevent
name=ruby-$_name
version=0.10.4
release=1
options="!emptydirs"
source="https://rubygems.org/downloads/$_name-$version.gem"

build() {
	_gemdir="$(gem env gemdir)"

	gem install \
		--ignore-dependencies \
		--no-user-install \
		--no-document \
		-i "$PKG/$_gemdir" \
		-n "$PKG"/usr/bin \
		$_name-$version.gem

	rm "$PKG/$_gemdir/cache/$_name-$version.gem"
}

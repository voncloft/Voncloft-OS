# description : Core components for the kde desktop
# depends : kde-deps akonadi-import-wizard messagelib mailcommon incidenceeditor libksieve kpkpass kitinerary kdepim-runtime

name=kdepim-addons
version=21.08.3
release=1

source="https://download.kde.org/stable/release-service/$version/src/$name-$version.tar.xz"
options="!checksum"

build() {
   cd $name-$version
   plasma-package-installer
  cd build
  make DESTDIR=$PKG install
}

# description	: Integration with su for elevated privileges
# depends	: kservice kpty extra-cmake-modules python3 qt5

name=kdesu
version=5.78.0
release=1
source="https://download.kde.org/stable/frameworks/${version::4}/$name-$version.tar.xz"

options="!checksums"
build() {
	cd $name-$version

	mkdir build
	cd    build

	cmake -DCMAKE_INSTALL_PREFIX=/opt/kf5	\
	      -DCMAKE_PREFIX_PATH=/opt/qt5		\
	      -DCMAKE_INSTALL_LIBEXECDIR=lib    \
	      -DCMAKE_BUILD_TYPE=Release	\
	      -DBUILD_TESTING=OFF		\
	      -Wno-dev ..
	make
	make DESTDIR=$PKG install
}


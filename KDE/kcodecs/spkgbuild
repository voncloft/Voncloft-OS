# description	: Provide a collection of methods to manipulate strings using various encodings
# depends	: qt5 extra-cmake-modules qt5 gperf

name=kcodecs
version=5.78.0
release=1
source="https://download.kde.org/stable/frameworks/${version::4}/$name-$version.tar.xz"

options="!checksums"
build() {
	cd $name-$version

	mkdir build
	cd    build

	cmake -DCMAKE_INSTALL_PREFIX=/opt/kf5	\
	      -DCMAKE_PREFIX_PATH=/opt/qt5		\
	      -DCMAKE_BUILD_TYPE=Release	\
	      -DBUILD_TESTING=OFF		\
	      -Wno-dev ..
	make
	make DESTDIR=$PKG install
}


# description	: Unified high level API for communicating with mobile broadband modems
# depends	: libgudev libmbim libqmi polkit gobject-introspection vala libxslt

name=modemmanager
version=1.14.2
release=1
source="https://www.freedesktop.org/software/ModemManager/ModemManager-$version.tar.xz"

options="!checksums"
build() {
	cd ModemManager-$version

	./configure --prefix=/usr        \
	            --sysconfdir=/etc    \
	            --localstatedir=/var \
	            --enable-more-warnings=no \
	            --disable-static \
		    --disable-nls
	make
	make DESTDIR=$PKG install
}

# description	: Library for encoding video streams into the H.265/HEVC format
# depends	: cmake nasm

name=x265
version=3.4
release=1
source="http://anduin.linuxfromscratch.org/BLFS/$name/$name_$version.tar.gz"

build() {
	cd ${name}_${version}

	mkdir bld
	cd    bld

	cmake -DCMAKE_INSTALL_PREFIX=/usr \
	      ../source
	make
	make DESTDIR=$PKG install

	rm $PKG/usr/lib/libx265.a
}

# description	: Well-groomed and well-maintained collection of GStreamer plug-ins and elements
# depends	: alsa-lib gstreamer libtheora libvorbis libogg gobject-introspection iso-codes meson

name=gst-plugins-base
version=1.18.0
release=1
source="http://gstreamer.freedesktop.org/src/$name/$name-$version.tar.xz"

build() {
	cd $name-$version

	mkdir build
        cd build

        meson \
		--prefix=/usr \
		--libexecdir=lib \
		-Dgst_debug=false \
		-Dgtk_doc=disabled \
		-Dnls=disabled \
		-Dpackage-name="GStreamer Base Plugins $version (Venom Linux)"
	ninja
	DESTDIR=$PKG ninja install
}

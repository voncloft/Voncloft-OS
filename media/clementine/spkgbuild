# description : A modern music player and library organizer
# depends : kde5 cmake alsa-lib chromaprint gst-plugins-base hicolor-icon-theme libcdio liblastfm-qt5 libmtp libmygpo-qt5 pulseaudio projectm protobuf taglib qt5-x11extras

name=clementine
build=1.4.0
release=1

_misc=rc1-494-gdfb953a78
source="https://github.com/clementine-player/Clementine/archive/$version$_misc.tar.gz"
options="!checksum"

build() {
	cd Clementine-$version$_misc
	#sed -e 's|CRYPTOPP cryptopp|CRYPTOPP libcryptopp|' -i $name-${version//+/-}/CMakeLists.txt # Fix crypto++ detection

	mkdir build
	cd build
	cmake .. \
	-DCMAKE_INSTALL_PREFIX=/usr \
    	-DUSE_SYSTEM_PROJECTM=ON \
    	-DUSE_SYSTEM_TAGLIB=ON

	make 
	make DESTDIR=$PKG install
}


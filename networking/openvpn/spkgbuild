# description: VPN Client
# depends:     lzo iproute2 pkcs11-helper

name=openvpn
version=2.4.9
release=1
source="https://github.com/OpenVPN/openvpn/archive/$version/$name-$version.tar.gz"

build() {
	cd $name-$version

	autoreconf -ifv
	./configure \
		--prefix=/usr \
		--mandir=/usr/share/man \
		--enable-iproute2 \
		--enable-plugins \
		--enable-pkcs11 \
		--disable-systemd
	make
	make DESTDIR=$PKG install
}

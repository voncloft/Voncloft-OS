# description	: One way sync over http
# depends	: curl

name=httpup
version=0.5.0
release=1
source="https://crux.nu/files/$name-$version.tar.xz"

build() {
	cd $name-$version
	sed -i 's/Updating collection/Updating repository/' httpup.cpp
	make
	make DESTDIR=$PKG prefix=/usr mandir=/usr/share/man install
}

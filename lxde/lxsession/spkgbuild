# description	: Default session manager for LXDE
# depends	: dbus-glib libunique lsb-release polkit gtk2 vala

name=lxsession
version=0.5.5
release=1
source="https://downloads.sourceforge.net/lxde/$name-$version.tar.xz"

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--libexecdir=/usr/lib \
		--disable-man
	make
	make DESTDIR=$PKG install
}

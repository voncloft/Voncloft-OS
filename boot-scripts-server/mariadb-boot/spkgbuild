# description : boot script for mariadb (mysql)
# depends : 

name=mariadb-boot
version=10.5.6
release=1

source="mysqld"
options="!checksum"
build()
{
	mkdir -pv $PKG/etc/init.d
	install $SRC/mysqld $PKG/etc/init.d/
	ln -sfv /etc/init.d/mysqld /etc/rc.d/rc5.d/S34mysqld
	ln -sfv /etc/init.d/mysqld /etc/rc.d/rc4.d/S34mysqld
	ln -sfv /etc/init.d/mysqld /etc/rc.d/rc3.d/S34mysqld
}

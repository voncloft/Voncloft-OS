# description : intelligent input bus 
# depends : dconf iso-codes vala gobject-introspection gtk2 gtk3 libnotify

name=ibus
version=1.5.32
release=1

source="https://github.com/ibus/ibus/releases/download/$version/ibus-$version.tar.gz"
options="!checksum"

build() {
	cd $name-$version
	sed -i 's@/desktop/ibus@/org/freedesktop/ibus@g' \
    		data/dconf/org.freedesktop.ibus.gschema.xml

	./configure --prefix=/usr             \
            --sysconfdir=/etc         \
            --disable-unicode-dict    \
            --disable-emoji-dict      &&
	rm -f tools/main.c                    &&
	make

	make DESTDIR=$PKG install
	gzip -dfv $PKG/usr/share/man/man{{1,5}/ibus*.gz,5/00-upstream-settings.5.gz}
}

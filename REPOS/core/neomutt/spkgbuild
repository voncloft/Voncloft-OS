# description	: A version of mutt with added features
# depends	: lua libidn krb5 gpgme

name=neomutt
version=20200821
release=1
source="https://github.com/neomutt/neomutt/archive/$version/$name-$version.tar.gz"

build() {
	cd $name-$version

	./configure \
	        --prefix=/usr \
	        --sysconfdir=/etc \
	        --libexecdir=/usr/lib \
	        --gpgme \
	        --enable-lua \
	        --gss \
	        --ssl \
	        --with-ui=ncurses \
	        --with-idn=/usr \
        	--gdbm \
		--disable-nls \
		--disable-doc
	make
	make DESTDIR=$PKG install
}

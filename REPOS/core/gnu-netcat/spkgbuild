# description	: GNU rewrite of netcat, the network piping application
# depends	: texinfo

name=gnu-netcat
version=0.7.1
release=1
source="http://downloads.sourceforge.net/netcat/netcat-$version.tar.bz2"

build() {
	cd netcat-$version
	./configure \
		--prefix=/usr \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--disable-nls
	make
	make DESTDIR=$PKG install
}

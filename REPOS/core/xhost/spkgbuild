# description	: Server access control program for X
# depends	: libxmu libx11 

name=xhost
version=1.0.8
release=1
source="http://ftp.x.org/pub/individual/app/xhost-$version.tar.bz2"

build() {
	cd $name-$version

  	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
}

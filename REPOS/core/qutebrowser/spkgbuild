# description	: A keyboard-driven, vim-like browser based on PyQt5
# depends	: qt5 qt5-webkit qtwebengine python python-attrs python-yaml python-jinja2 python-pypeg2 python-pygments python-pyqt5 python-sip-pyqt5 python-pyqtwebengine asciidoc

name=qutebrowser
version=3.5.1
release=1
source="https://github.com/qutebrowser/qutebrowser/releases/download/v$version/qutebrowser-$version.tar.gz"

# fix bsdtar extract error
#  'Pathname can't be converted from UTF-8 to current locale.'
LC_ALL=en_US.utf-8

build() {
	cd $name-$version
	make -f misc/Makefile DESTDIR=$PKG PREFIX=/usr install
}

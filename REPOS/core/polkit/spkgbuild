# description	: Toolkit for defining and handling authorizations
# depends	: glib mozjs linux-pam gobject-introspection intltool

name=polkit
version=122
release=1
source="https://gitlab.freedesktop.org/$Name/$name/-/archive/$version/$name-$version.tar.gz"
options="!checksum"
build() {
	cd $name-$version
	meson setup ..                      \
      	--prefix=/usr                 \
      	--buildtype=release           \
      	-Dman=true                    \
      	-Dsession_tracking=libelogind \
      	-Dsystemdsystemunitdir=/tmp   \
      	-Dtests=true                  
	ninja
	DESTDIR=$PKG ninja install
}

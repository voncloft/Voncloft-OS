# description	: Server and user space API to deal with multimedia
# depends	: meson alsa-lib gstreamer ffmpeg dbus gst-plugins-base bluez sbc jack

name=pipewire
version=1.4.6
release=1
source="https://github.com/PipeWire/pipewire/archive/$version/$name-$version.tar.gz"

build() {
	cd $name-$version

	mkdir build
	cd build

	#meson --prefix=/usr \
	#      -Dsystemd=false \
	#      -Ddocs=false \
        #      -Dvulkan=false \
        #      -Dexamples=false \
	#      -Dpipewire-pulseaudio=false
	meson --prefix=/usr --buildtype=release -Dsession-managers= ..
	ninja
	DESTDIR=$PKG ninja install
}

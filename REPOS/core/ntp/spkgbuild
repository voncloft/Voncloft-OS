# description	: Client and server to keep the time synchronized between various computers over a network
# depends	: wget

name=ntp
version=4.2.8p15
release=1
source="https://www.eecis.udel.edu/~ntp/ntp_spool/ntp4/ntp-${version%.*}/$name-$version.tar.gz
	rc.ntpd
	run"

build() {
	cd $name-$version

	sed -e 's/"(\\S+)"/"?([^\\s"]+)"?/' \
	    -i scripts/update-leap/update-leap.in

	./configure CFLAGS="$CFLAGS -g -fPIC" \
	            --prefix=/usr \
	            --bindir=/usr/sbin \
	            --sysconfdir=/etc \
	            --libexecdir=/usr/lib/$name \
	            --enable-linuxcaps \
	            --with-lineeditlibs=readline
	make
	make DESTDIR=$PKG install
	install -d $PKG/var/lib/ntp

mkdir -p $PKG/etc
cat > $PKG/etc/ntp.conf << "EOF"
# Asia
server 0.asia.pool.ntp.org

# Australia
server 0.oceania.pool.ntp.org

# Europe
server 0.europe.pool.ntp.org

# North America
server 0.north-america.pool.ntp.org

# South America
server 2.south-america.pool.ntp.org

driftfile /var/lib/ntp/ntp.drift
pidfile   /var/run/ntpd.pid

leapfile  /etc/ntp.leapseconds

# Security session
restrict    default limited kod nomodify notrap nopeer noquery
restrict -6 default limited kod nomodify notrap nopeer noquery

restrict 127.0.0.1
restrict ::1
EOF

	# rc service
	install -Dm755 $SRC/rc.ntpd $PKG/etc/rc.d/ntpd

	# runit service
        install -Dm755 $SRC/run $PKG/etc/sv/ntpd/run
        ln -s /run/runit/supervise.ntpd $PKG/etc/sv/ntpd/supervise
}

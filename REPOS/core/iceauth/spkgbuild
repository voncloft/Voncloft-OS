# description	: ICE authority file utility
# depends	: libice 

name=iceauth
version=1.0.9
release=1
source="http://ftp.x.org/pub/individual/app/iceauth-$version.tar.xz"

build() {
	cd $name-$version

  	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
}


# description	: Device Color Characterization utility for X Color Management System
# depends	: libx11 

name=xcmsdb
version=1.0.5
release=1
source="http://ftp.x.org/pub/individual/app/xcmsdb-$version.tar.bz2"

build() {
	cd $name-$version

  	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
}


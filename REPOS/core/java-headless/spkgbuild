# description : headless java server
# depends : 

name=java-headless
version=18.0.2
release=1

#source="https://github.com/frekele/oracle-java/releases/download/$version$release-b10/jre-$version$release-linux-x64.tar.gz"
source="https://anduin.linuxfromscratch.org/BLFS/OpenJDK/OpenJDK-$version/OpenJDK-$version+8-x86_64-bin.tar.xz"
options="!checksum"

build() {
	cd *
	install -vdm755 $PKG/OpenJDK-$version-bin
	mv -v * $PKG/opt/OpenJDK-$version-bin
	ln -sfn OpenJDK-$version-bin $PKG/opt/jdk	
}

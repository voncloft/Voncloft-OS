# description : linux kernel for desktop
# depends : kernel-prereq linux-firmware

name=linux-desktop
version=5.18.14
release=1

source="https://cdn.kernel.org/pub/linux/kernel/v5.x/linux-$version.tar.xz
	.config"
options="!checksum"

build()
{
	cd linux-$version
	make mrproper
	cp $SRC/.config $PKG/linux-$version
	make -j9
	make INSTALL_MOD_PATH=$PKG modules_install
	make INSTALL_MOD_PATH=$PKG install
}

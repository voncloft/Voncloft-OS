# description	: MATE Media Tools
# depends	: libcanberra libx11 libxml2 mate-desktop gtk3 glib libmatemixer mate-panel

name=mate-media
version=1.24.1
release=1
source="https://pub.mate-desktop.org/releases/${version%.*}/$name-$version.tar.xz"

build() {
	cd $name-$version
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--libexecdir=/usr/lib/$name \
		--disable-nls
	make
	make DESTDIR=$PKG install
}

# description	: PolicyKit integration for the MATE desktop
# depends	: polkit gtk3

name=mate-polkit
version=1.24.0
release=1
source="https://pub.mate-desktop.org/releases/${version%.*}/$name-$version.tar.xz"

build() {
	cd $name-$version
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--libexecdir=/usr/lib/$name \
		--disable-nls
	make
	make DESTDIR=$PKG install
}

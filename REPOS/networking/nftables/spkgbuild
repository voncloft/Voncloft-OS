# description : nftables
# depends : libnftnl readline libmnl gmp ncurses jansson

name=nftables
version=1.0.3
release=1

source="https://netfilter.org/projects/nftables/files/nftables-0.9.6.tar.bz2"

build()
{
	cd *
	autoreconf -ifv
	autoconf

	./configure --prefix=/usr \
	--sbindir=/usr/bin \
	--sysconfdir=/usr/share \
	--with-json \
	--with-cli=readline \
	--disable-debug
	

	make

	make DESTDIR=$PKG install
}

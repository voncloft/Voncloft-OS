# description : mountins remote drives locally
# depends : fuse2 fuse3 glib openssh

name=sshfs
version=3.7.2
release=2

source="https://github.com/libfuse/sshfs/releases/download/$name-$version/$name-$version.tar.xz"
options="!checksum"

build() {
	cd $name-$version
	mkdir build
	cd build
	meson --prefix=/usr ..
	ninja
	DESTDIR=$PKG ninja install
}

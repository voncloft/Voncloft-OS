# description : messenger program
# depends : gtk2 libgcrypt gstreamer gnutls nss

name=pidgin
version=2.14.8
release=1

source="https://downloads.sourceforge.net/$name/$name-$version.tar.bz2"
options="!checksum"

build() {
	cd $name-$version
	./configure --prefix=/usr        \
            --sysconfdir=/etc    \
            --disable-gstreamer  \
            --disable-avahi      \
            --disable-gtkspell   \
            --disable-meanwhile  \
            --disable-idn        \
            --disable-nm         \
            --disable-vv
        make
        make DESTDIR=$PKG install
}

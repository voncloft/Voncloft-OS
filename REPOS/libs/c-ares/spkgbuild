# description	: C library for asynchronous DNS requests
# depends	: cmake

name=c-ares
version=1.18.1
release=1
source="https://c-ares.haxx.se/download/$name-$version.tar.gz"

build() {
	cd $name-$version
	mkdir build
	cd    build
	
	cmake  -DCMAKE_INSTALL_PREFIX=/usr ..
	make
	make DESTDIR=$PKG install
}

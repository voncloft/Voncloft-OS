# description : An high dynamic-range image file format library 
# depends : zlib

name=openexr
version=3.1.6
release=1

source="https://github.com/openexr/openexr/archive/v$version.tar.gz"
options="!checksum"

build() {
	cd $name-$version
	mkdir build
	cd build
	cmake .. \
	-DCMAKE_INSTALL_PREFIX=/usr

	make
	make DESTDIR=$PKG install
}

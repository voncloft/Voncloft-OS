# description	: Library implementation of the Media Transfer Protocol
# depends	: libusb

name=libmtp
version=1.1.21
release=1
source="https://downloads.sourceforge.net/libmtp/libmtp-$version.tar.gz"

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--with-udev=/lib/udev
	make
	make DESTDIR=$PKG install
}

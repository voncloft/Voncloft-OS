# description	: GObject bindings for libudev
# depends	: glib

name=libgudev
version=237
release=1
source="https://ftp.gnome.org/pub/gnome/sources/$name/$version/$name-$version.tar.xz"

build() {
	cd $name-$version

	mkdir build
	cd build
	
	meson --prefix=/usr --buildtype=release ..

	ninja
	DESTDIR=$PKG ninja install
}

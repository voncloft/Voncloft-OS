# description : http server for kodi
# depends : gnutls curl

name=libmicrohttpd
version=1.0.1
release=1

source="https://ftp.gnu.org/gnu/$name/$name-$version.tar.gz"
options="!checksum"

build() {
	cd $name-$version
	./configure --prefix=/usr \
	--disable-dependency-tracking \
    	--disable-examples \
    	--enable-curl \
    	--enable-https \
    	--enable-largefile \
    	--enable-messages \
    	--with-pic

	make
	make DESTDIR=$PKG install
}

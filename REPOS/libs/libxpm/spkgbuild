# description	: X11 pixmap library
# depends	: libxt libxext libx11 

name=libxpm
version=3.5.13
release=1
source="http://ftp.x.org/pub/individual/lib/libXpm-$version.tar.bz2"

build() {
	cd libXpm-$version

	./configure \
		--prefix=/usr \
                --sysconfdir=/etc \
                --localstatedir=/var \
                --disable-static
	make
	make DESTDIR=$PKG install
}

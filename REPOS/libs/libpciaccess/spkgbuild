# description	: X11 PCI access library

name=libpciaccess
version=0.17
release=1
source="http://ftp.x.org/pub/individual/lib/libpciaccess-$version.tar.xz"

build() {
	cd libpciaccess-$version

	./configure \
		--prefix=/usr \
                --sysconfdir=/etc \
                --localstatedir=/var \
                --disable-static
	make
	make DESTDIR=$PKG install
}

# description	: A C/C++ implementation of a Sass compiler

name=libsass
version=3.6.5
release=1
source="https://github.com/sass/$name/archive/$version/$name-$version.tar.gz"

build() {
	cd $name-$version
	autoreconf -vfi
	./configure --prefix=/usr --disable-static
	make
	make DESTDIR=$PKG install
}

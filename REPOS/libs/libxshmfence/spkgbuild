# description	: A library that exposes a event API on top of Linux futexes
# depends	: xorgproto

name=libxshmfence
version=1.3.2
release=1
source="http://ftp.x.org/pub/individual/lib/libxshmfence-$version.tar.xz"

build() {
	cd libxshmfence-$version

	./configure \
		--prefix=/usr \
                --sysconfdir=/etc \
                --localstatedir=/var \
                --disable-static
	make
	make DESTDIR=$PKG install
}


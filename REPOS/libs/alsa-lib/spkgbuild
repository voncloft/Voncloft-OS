# description	: ALSA library used by programs (including ALSA Utilities) requiring access to the ALSA sound interface

name=alsa-lib
version=1.2.8
release=1
source="ftp://ftp.alsa-project.org/pub/lib/$name-$version.tar.bz2"
options="!checksum"
build() {
	cd $name-$version

  	./configure
	make
	make DESTDIR=$PKG install
}

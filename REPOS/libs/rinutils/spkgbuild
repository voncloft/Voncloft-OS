# description	: C11 / gnu11 utilities C library
# depends	: cmake

name=rinutils
version=0.10.1
release=1
source="https://github.com/shlomif/rinutils/releases/download/$version/$name-$version.tar.xz"

build() {
	cd $name-$version

	mkdir build
	cd build

	cmake .. \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DWITH_TEST_SUITE=OFF
	make
	make DESTDIR=$PKG install
}

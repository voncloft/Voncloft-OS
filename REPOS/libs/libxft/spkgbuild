# description	: FreeType-based font drawing library for X
# depends	: fontconfig freetype2 libxrender libx11 

name=libxft
version=2.3.3
release=1
source="http://ftp.x.org/pub/individual/lib/libXft-$version.tar.bz2"

build() {
	cd libXft-$version

	./configure \
		--prefix=/usr \
                --sysconfdir=/etc \
                --localstatedir=/var \
                --disable-static
	make
	make DESTDIR=$PKG install
}

# description : cinnamon file manager
# depends : cinnamon-desktop dconf exempi gvfs libexif libnotify libxml2 python xapp ffmpegthumbnailer gobject-introspection intltool meson ninja

name=nemo
version=6.4.5
release=1

source="https://github.com/linuxmint/nemo/archive/refs/tags/$version.tar.gz"
options="!checksum"

build() {
	cd $name-$version
	mkdir build
	cd build
	meson --prefix=/usr \
	--libexecdir=lib/$name \
	--buildtype=plain \
	..

	ninja
	DESTDIR=$PKG ninja install
}

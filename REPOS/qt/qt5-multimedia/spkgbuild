# description : qt media
# depends : gst-plugins-base pulseaudio openal qt5

name=qt5-multimedia
version=5.15.5
release=1
source="https://download.qt.io/official_releases/qt/${version%.*}/${version}/submodules/qtmultimedia-everywhere-opensource-src-$version.tar.xz"
options="!checksum"

build() {
	cd *
	mkdir -pv build
	cd build
	qmake ../${_pkgfqn}
	make
	make INSTALL_ROOT="$PKG" install

 find "$PKG/usr/lib" -type f -name '*.prl' \
    -exec sed -i -e '/^QMAKE_PRL_BUILD_DIR/d' {} \;
}

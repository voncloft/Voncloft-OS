# description : classes for qml
# depends : qt5

name=qt5-declarative
version=5.15.6
release=1

source="https://invent.kde.org/qt/qt/qtdeclarative/-/archive/v$version-lts-lgpl/qtdeclarative-v$version-lts-lgpl.tar.gz"

build() {
	cd *
	mkdir build
	cd build
	qmake ../
	make
	make INSTALL_ROOT=$PKG install

  for b in "$PKG"/usr/bin/*; do
    ln -s $(basename $b) "$PKG"/usr/bin/$(basename $b)-qt5
  done

  # Drop QMAKE_PRL_BUILD_DIR because reference the build dir
  find "$PKG/usr/lib" -type f -name '*.prl' \
    -exec sed -i -e '/^QMAKE_PRL_BUILD_DIR/d' {} \;
}

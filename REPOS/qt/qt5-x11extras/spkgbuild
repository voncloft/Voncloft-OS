# description : Qt5 sub module
# depends : qt5

name=qt5-x11extras
version=5.15.2
release=1
pkg_name=qtx11extras

source="https://download.qt.io/official_releases/qt/${version%.*}/${version}/submodules/$pkg_name-everywhere-opensource-src-$version.tar.xz"
options="!checksum"

build() {
	cd *
	mkdir build
	cd build
	qmake ..
	make
	make INSTALL_ROOT=$PKG install
	
 	find "$PKG/usr/lib" -type f -name '*.prl' \
    		-exec sed -i -e '/^QMAKE_PRL_BUILD_DIR/d' {} \;
}

# description: provides support for secure credentials storage
# depends: libsecret

name=qt5-keychain
version=0.14.0
release=1

source="https://github.com/frankosterfeld/qtkeychain/archive/v$version/$name-$version.tar.gz"

build()
{
	cd qtkeychain-$version
	mkdir -pv build
	cd build
	cmake -DCMAKE_INSTALL_PREFIX=/usr \
	.. 
	make
	make DESTDIR=$PKG install
}

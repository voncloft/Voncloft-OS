# description : Core components for the kde desktop
# depends : kde-deps kactivities kactivities-stats kcmutils kdeclarative kdeconnect-kde ki18n kirigami2 kwayland plasma-framework plasma-wayland-session plasma-workspace 

name=plasma-nano
version=6.4.2
release=1

source="https://download.kde.org/stable/plasma/$version/$name-$version.tar.xz"
options="!checksum"

build() {
   cd $name-$version
   plasma-package-installer
   cd build
   make DESTDIR=$PKG install
}

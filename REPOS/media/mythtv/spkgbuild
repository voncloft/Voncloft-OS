# description : a PVR service to stream TV from a PVR blah blah
# depends : glew exiv2 fftw jack lame libass libavc1394 libbluray libiec61883 pulseaudio libsamplerate libva libvdpau libvpx libxinerama libxml2 libxrandr qt5 qt5-webkit taglib x264 x265 git help2man libcdio libcec mariadb libxml2 lirc perl-dbd-mysql perl-io-socket-inet6 perl-libwww perl-net-upnp perl-xml-simple perl-xml-xpath python-future python-lxml python-mysqlclient python-requests python-simplejson yasm qtsql mythbackend-boot

name=mythtv
version=35.0
release=1

source="https://github.com/MythTV/$name/archive/v$version.tar.gz"
#source="https://github.com/MythTV/mythtv/archive/master.zip"
options="!checksum"

build()
{
	#cd $name-$version/mythtv
	cd mythtv-master/mythtv
	./configure --prefix=/usr \
              --disable-altivec \
              --enable-audio-jack \
              --disable-distcc \
              --enable-libfftw3 \
              --enable-libmp3lame \
              --enable-libvpx \
              --enable-libx264 \
              --enable-libx265 \
              --enable-vaapi \
              --with-bindings=python \
              --with-bindings=perl \
              --perl-config-opts=INSTALLDIRS=vendor
        make
        make INSTALL_ROOT=$PKG install
        
}

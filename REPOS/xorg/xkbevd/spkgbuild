# description	: XKB event daemon
# depends	: libxkbfile libx11 

name=xkbevd
version=1.1.4
release=1
source="http://ftp.x.org/pub/individual/app/xkbevd-$version.tar.bz2"

build() {
	cd $name-$version

  	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
}


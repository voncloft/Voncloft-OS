# description	: User preference utility for X
# depends	: libxmu libx11 libxext 

name=xset
version=1.2.4
release=1
source="http://ftp.x.org/pub/individual/app/xset-$version.tar.bz2"

build() {
	cd $name-$version

  	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
}


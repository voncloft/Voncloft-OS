# description	: Property displayer for X
# depends	: libx11 

name=xprop
version=1.2.5
release=1
source="http://ftp.x.org/pub/individual/app/xprop-$version.tar.bz2"

build() {
	cd $name-$version

  	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
}

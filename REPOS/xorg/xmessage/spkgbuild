# description	: Display a message or query in a window
# depends	: libxaw libxt libx11 

name=xmessage
version=1.0.5
release=1
source="http://ftp.x.org/pub/individual/app/xmessage-$version.tar.bz2"

build() {
	cd $name-$version

  	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
}


# description	: Refresh all or part of an X screen
# depends	: libx11 

name=xrefresh
version=1.0.6
release=1
source="http://ftp.x.org/pub/individual/app/xrefresh-$version.tar.bz2"

build() {
	cd $name-$version

  	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
}


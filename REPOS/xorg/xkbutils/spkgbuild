# description	: XKB utility demos
# depends	: libxaw libxt libx11 

name=xkbutils
version=1.0.6
release=1
source="http://ftp.x.org/pub/individual/app/xkbutils-$version.tar.gz"

build() {
	cd $name-$version

  	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
}


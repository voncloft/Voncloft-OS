# description	: Print contents of X events
# depends	: libxrandr libx11 

name=xev
version=1.2.4
release=1
source="http://ftp.x.org/pub/individual/app/xev-$version.tar.bz2"

build() {
	cd $name-$version

  	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
}

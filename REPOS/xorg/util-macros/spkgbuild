# description	: X.Org Autotools macros
# depends : 

name=util-macros
version=1.20.1
release=1
source="http://ftp.x.org/pub/individual/util/util-macros-$version.tar.bz2"
options="!checksum"

build() {
	cd $name-$version
	./configure --prefix=/usr --sysconfdir=/etc \
    		--localstatedir=/var --disable-static
	make DESTDIR=$PKG install
	
}


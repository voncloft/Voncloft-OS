# description	: Redglass and whiteglass animated cursor themes
# depends	: xcursorgen

name=xcursor-themes
version=1.0.6
release=1
source="http://ftp.x.org/pub/individual/data/xcursor-themes-$version.tar.bz2"

build() {
	cd $name-$version

  	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
}

# description : Python wrapper for extended filesystem attributes
# depends : python-cffi

name=python-xattr
version=1.1.4
release=5

source="https://github.com/xattr/xattr/archive/refs/tags/v$version.tar.gz"
options="!checksum"

build() {
   cd *
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

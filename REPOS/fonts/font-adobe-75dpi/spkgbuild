# description	: X.org 75dpi fonts
# depends	: util-macros mkfontscale font-util bdftopcf

name=font-adobe-75dpi
version=1.0.3
release=1
source="https://www.x.org/archive/individual/font/$name-$version.tar.bz2"

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
}

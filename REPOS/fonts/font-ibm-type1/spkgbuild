# description	: X.org Type1 fonts
# depends	: util-macros mkfontscale font-util

name=font-ibm-type1
version=1.0.3
release=1
source="http://ftp.x.org/pub/individual/font/font-ibm-type1-$version.tar.bz2"

build() {
	cd $name-$version

  	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
	
	find $PKG -name 'fonts.dir' -delete
	find $PKG -name 'fonts.scale' -delete
}


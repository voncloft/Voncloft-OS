# description : dnsmasq-boot-script
# dependencies : dnsmasq

name=dnsmasq-boot
version=2.82
release=1

build()
{
	cd $name-$version
	mkdir -pv $PKG/etc/init.d/
	install $SRC/dnsmasq $PKG/etc/init.d/
	ln -sfv /etc/init.d/dnsmasq /etc/rc.d/rc5.d/S30dnsmasq
	ln -sfv /etc/init.d/dnsmasq /etc/rc.d/rc4.d/S30dnsmasq
	ln -sfv /etc/init.d/dnsmasq /etc/rc.d/rc3.d/S30dnsmasq
}

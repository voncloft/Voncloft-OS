# description : Turn on strict and make most warnings fatal
# depends : perl

_pkg=strictures
name=perl-${_pkg}
version=2.000006
release=3
url=https://metacpan.org/release/${_pkg}
check# depends : perl-test-simple
source="https://cpan.metacpan.org/authors/id/H/HA/HAARG/${_pkg}-${version}.tarsource=.gz"
options=!checksum
sha256sums=09d57974a6d1b2380c802870fed471108f51170da81458e2751859f2714f8d57

build-delete {
    cd ${_pkg}-${version}
    export PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL=--skipdeps
    perl Makefile.PL
    make
}

check {
    cd ${_pkg}-${version}
    make test
}

build() {
    cd ${_pkg}-${version}
    make INSTALLDIRS=vendor DESTDIR=$PKG install
}

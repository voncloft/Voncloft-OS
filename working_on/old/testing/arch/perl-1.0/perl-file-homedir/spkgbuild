# description : Find your home and other directories on any platform
# depends : perl-file-which

name=perl-file-homedir
version=1.006
release=1
url=https://metacpan.org/release/File-HomeDir
source="https://cpan.metacpan.org/authors/id/R/RE/REHSACK/File-HomeDir-$version.tarsource=.gz"
options=!checksum
sha512sums=1ea90d68ed059ef5e890f6afb1280673dd5a597956f282c4ae8b4471c1751aa3cb2fcbe9caa6b2976937d11fd7233aa85a2dea611f87c79e0ddd1a501ceb890d

build-delete {
  cd File-HomeDir-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd File-HomeDir-$version
  make test
}

build() {
  cd File-HomeDir-$version
  make DESTDIR=$PKG install
}

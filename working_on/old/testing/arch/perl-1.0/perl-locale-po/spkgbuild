# description : Perl/CPAN Module Locale::PO: PO parser

name=perl-locale-po
version=0.27
release=6
url=https://search.cpan.org/dist/Locale-PO
source="https://search.cpan.org/CPAN/authors/id/C/CO/COSIMO/Locale-PO-$version.tarsource=.gz"
options=!checksum
md5sums=81545852a510f8e5332ea1e9d6b64a39

build-delete {
  cd $srcdir/Locale-PO-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/Locale-PO-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

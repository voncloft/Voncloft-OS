# description : Generate world unique message-ids. 
# depends : perl-email-address>=1.80

name=perl-email-messageid
version=1.406
release=4
url=https://search.cpan.org/dist/Email-MessageID
source="https://www.cpan.org/authors/id/R/RJ/RJBS/Email-MessageID-$version.tarsource=.gz"
options=!checksum
sha256sums=ec425ddbf395e0e1ac7c6f95b4933c55c57ac9f1e7514003c7c904ec6cd342b8

build-delete {
  cd  $srcdir/Email-MessageID-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  $srcdir/Email-MessageID-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

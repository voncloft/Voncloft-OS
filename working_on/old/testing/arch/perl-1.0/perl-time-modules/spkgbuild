# description : Perl time related modules

name=perl-time-modules
version=2013.0912
release=6
url=https://search.cpan.org/~muir/Time-modules/
source="https://search.cpan.org/CPAN/authors/id/M/MU/MUIR/modules/Time-modules-$version.tarsource=.gz"
options=!checksum
md5sums=a4330144e24c356ca4c925d14e5ab06b

build-delete {
  cd Time-modules-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd Time-modules-$version
  make install DESTDIR=$PKG/
}


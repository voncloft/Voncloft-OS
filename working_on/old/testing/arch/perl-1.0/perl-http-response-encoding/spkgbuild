# description : Adds encoding to HTTP::Response
# depends : perl-libwww

name=perl-http-response-encoding
version=0.06
release=6
url=https://search.cpan.org/dist/HTTP-Response-Encoding
source="https://www.cpan.org/authors/id/D/DA/DANKOGAI/HTTP-Response-Encoding-$version.tarsource=.gz"
options=!checksum
sha256sums=10167b8e238a682004ab0d7accbe9d76eae2db57af07c5ae2dfa808074a4a8aa

build-delete {
  cd ${srcdir}/HTTP-Response-Encoding-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd ${srcdir}/HTTP-Response-Encoding-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

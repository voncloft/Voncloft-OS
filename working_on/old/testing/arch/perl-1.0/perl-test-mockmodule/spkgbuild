# description : Override subroutines in a module for unit testing
# depends : perl-super

name=perl-test-mockmodule
version=0.176.0
release=1
make# depends : perl-module-build
check# depends : perl-test-pod perl-test-pod-coverage perl-test-warnings
url=https://search.cpan.org/dist/Test-MockModule
source="https://search.cpan.org/CPAN/authors/id/G/GF/GFRANKS/Test-MockModule-v$version.tarsource=.gz"
options=!checksum
sha512sums=6e1ce7b8888e18d71f0e84bd2a761593e3a34e169d34251b5259e6e037796c2e207c50d5689d1ab56aa271e71f3ea2f05cc6a86f0bde080db1caf7205587cc60

build-delete {
  cd $srcdir/Test-MockModule-v$version
  perl Build.PL installdirs=vendor
  perl Build
}

check {
  cd $srcdir/Test-MockModule-v$version
  perl Build test
}

build() {
  cd $srcdir/Test-MockModule-v$version
  perl Build install destdir=$PKG
}


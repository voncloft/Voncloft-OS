# description : Check for POD errors in files
# depends : perl

name=perl-test-pod
version=1.52
release=5
url=https://search.cpan.org/dist/Test-Pod/
source="https://search.cpan.org/CPAN/authors/id/E/ET/ETHER/Test-Pod-${version}.tarsource=.gz"
options=!checksum
sha512sums=9b078488e1da8b907f5f3a46452aa9bfd49db61f1539d076dccebf9a8b476eaf0f539f00badc9c500b1e732a8827331b2286375924986efb990367767eeb8365

build-delete {
  cd Test-Pod-${version}
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd Test-Pod-${version}
  make test
}

build() {
  cd Test-Pod-${version}
  make DESTDIR=$PKG install
}

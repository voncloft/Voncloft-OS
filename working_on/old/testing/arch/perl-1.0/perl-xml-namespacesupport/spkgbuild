# description : Generic namespace helpers ported from SAX2
# depends : perl

name=perl-xml-namespacesupport
version=1.12
release=4
url=https://search.cpan.org/dist/XML-NamespaceSupport
source="https://www.cpan.org/authors/id/P/PE/PERIGRIN/XML-NamespaceSupport-${version}.tarsource=.gz"
options=!checksum
md5sums=a8916c6d095bcf073e1108af02e78c97

build-delete {
  cd XML-NamespaceSupport-$version

  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd XML-NamespaceSupport-$version

  make install DESTDIR=$PKG

  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

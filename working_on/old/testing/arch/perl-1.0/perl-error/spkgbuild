# description : Perl/CPAN Error module - Error/exception handling in an OO-ish way
# depends : perl

name=perl-error
version=0.17029
release=2
url=https://search.cpan.org/dist/Error/
check# depends : perl-test-pod perl-test-pod-coverage
source="https://search.cpan.org/CPAN/authors/id/S/SH/SHLOMIF/Error-${version}.tarsource=.gz"
options=!checksum
sha512sums=266ba1feff897c1d162e69a83e595cb40da9a6e1d8b10cc5531626eff392c6da94be03ba722c74827fc2ea0d9d1c1e62e824d9021e098b700db65dd0b3acbd0a

build-delete {
  cd Error-${version}
  perl Makefile.PL INSTALLDIRS=vendor
  make 
}

check {
  cd Error-${version}
  make test
}

build() {
  cd Error-${version}
  make DESTDIR=$PKG install
}


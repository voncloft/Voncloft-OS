# description : This modules provides a collection of test utilities for file attributes.
# depends : perl-test-utf8

name=perl-test-file
version=1.444
release=1
url=https://github.com/briandfoy/test-file
source="https://search.cpan.org/CPAN/authors/id/B/BD/BDFOY/Test-File-$version.tarsource=.gz"
options=!checksum
sha512sums=fa6cff94b2f845ca9cffe13f2e1549ec832f3c494b389bac17d24b58083572f38b60667ae16eab67bd1c0c1813636f0553080abefbe3a9699ecd6329146ca7fd

build-delete {
  cd Test-File-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd Test-File-$version
  make test
}

build() {
  cd Test-File-$version
  make DESTDIR=$PKG install
}

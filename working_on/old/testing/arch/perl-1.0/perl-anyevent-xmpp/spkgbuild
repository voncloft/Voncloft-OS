# description : An implementation of the XMPP Protocol
# depends : perl>=5.10.0 perl-anyevent perl-xml-parser perl-digest-sha1

name=perl-anyevent-xmpp
version=0.55
release=5
	 perl-object-event perl-authen-sasl perl-net-libidn
	 perl-xml-writer perl-net-ssleay
url=https://search.cpan.org/dist/AnyEvent-XMPP
replaces=perl-net-xmpp2
source="https://search.cpan.org/CPAN/authors/id/M/MS/MSTPLBG/AnyEvent-XMPP-$version.tarsource=.gz"
options=!checksum
md5sums=0c23bd2905b593bc5d51e04b89410322

build-delete {
  cd $srcdir/AnyEvent-XMPP-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/AnyEvent-XMPP-$version
  install -dm0755 $PKG/usr/share/doc/$name
  cp -a samples $PKG/usr/share/doc/$name/
  make DESTDIR=$PKG install
  find $PKG -name .packlist -delete
  find $PKG -name perllocal.pod -delete
}

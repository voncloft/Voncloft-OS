# description : ExtUtils::Helpers - Various portability utilities for module builders
# depends : perl

name=perl-extutils-helpers
_name=ExtUtils-Helpers
version=0.026
release=6
url=https://search.cpan.org/dist/ExtUtils-Helpers/
source="https://search.cpan.org/CPAN/authors/id/L/LE/LEONT/${_name}-${version}.tarsource=.gz"
options=!checksum
sha512sums=372d801f43003c571758823a84bfe418876f1b48e3d8c35f888ca41469f6771a33aa30cf893a4c4a68ea62c6e8c8c6ab2ef44ee783dbf9f25e18bc0389359399

build-delete {
   export PERL_MM_USE_DEFAULT=1 PERL5LIB=                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT=INSTALLDIRS=vendor DESTDIR=$PKG     \
      PERL_MB_OPT=--installdirs vendor --destdir $PKG \
      MODULEBUILDRC=/dev/null

    cd ${srcdir}/${_name}-${version}
    /usr/bin/perl Makefile.PL
    make
  
}

check {
  cd ${srcdir}/${_name}-${version}
   export PERL_MM_USE_DEFAULT=1 PERL5LIB=
    make test
  
}

build() {
  cd ${srcdir}/${_name}-${version}
  make install
  find $PKG -name .packlist -o -name perllocal.pod -delete
}


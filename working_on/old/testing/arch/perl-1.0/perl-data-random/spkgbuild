# description : Data::Random - Perl module to generate random data
# depends : perl-gd perl-yaml-tiny

name=perl-data-random
version=0.13
release=4
url=https://search.cpan.org/~barefoot/Data-Random/lib/Data/Random.pm
make# depends : perl-file-sharedir-install perl-test-mocktime
check# depends : perl-test-pod perl-test-pod-coverage
source="https://cpan.metacpan.org/authors/id/B/BA/BAREFOOT/Data-Random-$version.tarsource=.gz"
options=!checksum
sha512sums=7cf3811ee26a3b93a8170cc9c863ad2cf03f5997cabe66cd78646a4d93a6568ef247f636782b8c707c3064120b30609f3562d8654b31e5e31890aa302b03cdb5

build-delete {
  cd Data-Random-$version
  PERL_USE_UNSAFE_INC=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd Data-Random-$version
  make test
}

build() {
  cd Data-Random-$version
  make DESTDIR=$PKG install
}

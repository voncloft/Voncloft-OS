# description : Tool for inspecting subroutines.
# depends : perl-importer

name=perl-sub-info
_cpanname=Sub-Info
version=0.002
release=7
url=https://search.cpan.org/dist/$_cpanname
source="https://search.cpan.org/CPAN/authors/id/E/EX/EXODIST/$_cpanname-$version.tarsource=.gz"
options=!checksum
md5sums=335345b534fc0539c894050f7814cbda

build-delete {
  cd $srcdir/$_cpanname-$version
  perl Makefile.PL
  make
}

check {
  cd $srcdir/$_cpanname-$version
  make test
}

build() {
  cd $srcdir/$_cpanname-$version
  make install INSTALLDIRS=vendor DESTDIR=$PKG
}

# description : Perl/CPAN Module Sys::Syscall
# depends : perl

name=perl-sys-syscall
version=0.25
release=7
url=https://search.cpan.org/dist/Sys-Syscall/
source="https://search.cpan.org/CPAN/authors/id/B/BR/BRADFITZ/Sys-Syscall-$version.tarsource=.gz"
options=!checksum
md5sums=720a9ec5f67f867814a9011b2a725763

build-delete {
  cd $srcdir/Sys-Syscall-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/Sys-Syscall-$version
  make pure_install doc_install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

# description : Distribution of modules to handle locale codes
# depends : perl
name=perl-locale-codes
version=3.62
release=2
_dist=Locale-Codes
url=https://metacpan.org/release/$_dist
check# depends : perl-test-inter
source="http://search.cpan.org/CPAN/authors/id/SBECK/$_dist-$version.tarsource=.gz"
options=!checksum
sha256sums=11a6d343e9c321d8ee9eee4479954a4e9c1ff2145187e74fd64952092f9dfab7

build-delete {
  cd $srcdir/$_dist-$version
  unset PERL5LIB PERL_MM_OPT PERL_LOCAL_LIB_ROOT
  export PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL=--skipdeps
  /usr/bin/perl Makefile.PL
  make
}

check {
  cd $srcdir/$_dist-$version
  unset PERL5LIB PERL_MM_OPT PERL_LOCAL_LIB_ROOT
  export PERL_MM_USE_DEFAULT=1
  make test
}

build() {
  cd $srcdir/$_dist-$version
  unset PERL5LIB PERL_MM_OPT PERL_LOCAL_LIB_ROOT
  make install INSTALLDIRS=vendor DESTDIR=$PKG
}

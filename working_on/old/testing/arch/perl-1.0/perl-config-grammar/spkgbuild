# description : A grammar-based, user-friendly config parser
# depends : perl
# Generator  : CPANPLUS::Dist::Arch 1.25

name=perl-config-grammar
version=1.12
release=6
make# depends : 
url=https://search.cpan.org/dist/Config-Grammar
source="https://search.cpan.org/CPAN/authors/id/D/DS/DSCHWEI/Config-Grammar-$version.tarsource=.gz"
options=!checksum
sha256sums=7a52a3657d96e6f1f529caaa09ec3bf7dd6a245b47875382c323902f6d9590b0

build-delete {
   export PERL_MM_USE_DEFAULT=1 PERL5LIB=                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT=INSTALLDIRS=vendor DESTDIR=$PKG     \
      PERL_MB_OPT=--installdirs vendor --destdir $PKG \
      MODULEBUILDRC=/dev/null

    cd $srcdir/Config-Grammar-$version
    /usr/bin/perl Makefile.PL
    make
  
}

check {
  cd $srcdir/Config-Grammar-$version
   export PERL_MM_USE_DEFAULT=1 PERL5LIB=
    make test
  
}

build() {
  cd $srcdir/Config-Grammar-$version
  make install
  find $PKG -name .packlist -o -name perllocal.pod -delete
}

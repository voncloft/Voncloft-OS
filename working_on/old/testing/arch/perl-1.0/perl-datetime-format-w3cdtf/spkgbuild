# description : Parse and format W3CDTF datetime strings
# depends : perl>=5.10.0 perl-datetime

name=perl-datetime-format-w3cdtf
version=0.07
release=4
url=https://search.cpan.org/dist/DateTime-Format-W3CDTF
source="https://search.cpan.org/CPAN/authors/id/G/GW/GWILLIAMS/DateTime-Format-W3CDTF-$version.tarsource=.gz"
options=!checksum
sha256sums=69a02b661bbf1daa14a4813cb6786eaa66dbdf2743f0b3f458e30234c3a26268

build-delete {
  cd  $srcdir/DateTime-Format-W3CDTF-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  $srcdir/DateTime-Format-W3CDTF-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

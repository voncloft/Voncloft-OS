# description : CPAN Test::Pod::Coverage module
# depends : perl-pod-coverage

name=perl-test-pod-coverage
version=1.10
release=4
url=https://search.cpan.org/dist/Test-Pod-Coverage/
source="https://search.cpan.org/CPAN/authors/id/N/NE/NEILB/Test-Pod-Coverage-$version.tarsource=.gz"
options=!checksum
md5sums=c9ea5f4182415b13d2db18484a38c01b

build-delete {
  cd  $srcdir/Test-Pod-Coverage-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  $srcdir/Test-Pod-Coverage-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

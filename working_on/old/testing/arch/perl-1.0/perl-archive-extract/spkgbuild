# description : Generic archive extracting mechanism
# depends : perl

name=perl-archive-extract
version=0.86
release=2
url=https://metacpan.org/release/Archive-Extract
source="https://search.cpan.org/CPAN/authors/id/B/BI/BINGOS/Archive-Extract-$version.tarsource=.gz"
options=!checksum
sha512sums=a091b8c489275b8dd3d38e52e983bef7cab7d642e0dc8f6e95f1d8d006d769857b4e5950778bddd3044d6f11b3563c7796361e88869f60a9875529b78c9d1c76
_ddir=Archive-Extract-$version

build-delete 
  cd $srcdir/$_ddir
  export PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL=--skipdeps
  unset PERL5LIB PERL_MM_OPT
  /usr/bin/perl Makefile.PL
  make


check 
  cd $srcdir/$_ddir
  export PERL_MM_USE_DEFAULT=1
  unset PERL5LIB
  make test


build 
  cd $srcdir/$_ddir
  make install INSTALLDIRS=vendor DESTDIR=$PKG
  find $PKG -name .packlist -o -name perllocal.pod -delete


# Local Variables:
# mode: shell-script
# sh-basic-offset: 2
# End:
# vim:set ts=2 sw=2 et:

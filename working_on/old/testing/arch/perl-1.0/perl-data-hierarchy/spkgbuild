# description : Perl/CPAN Module Data::Hierarchy
# depends : perl-test-exception

name=perl-data-hierarchy
version=0.34
release=11
url=https://search.cpan.org/dist/Data-Hierarchy
make# depends : perl-test-exception
source="https://www.cpan.org/authors/id/C/CL/CLKAO/Data-Hierarchy-$version.tarsource=.gz"
options=!checksum
sha256sums=b3a8e62b53e29f71dd5989aeef99fbfaf1f4b6e272a06800381360d59e9fd9ed

build-delete {
  cd $srcdir/Data-Hierarchy-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/Data-Hierarchy-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

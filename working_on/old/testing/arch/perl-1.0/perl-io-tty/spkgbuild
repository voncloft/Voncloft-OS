# description : Provide an interface to TTYs and PTYs
# depends : glibc

name=perl-io-tty
version=1.12
release=10
url=https://search.cpan.org/dist/IO-Tty/
source="https://search.cpan.org/CPAN/authors/id/T/TO/TODDR/IO-Tty-$version.tarsource=.gz"
options=!checksum
md5sums=11695a1a516b3bd1b90ce75ff0ce3e6d

build-delete {
  cd $srcdir/IO-Tty-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}
build() {
  cd $srcdir/IO-Tty-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

# description : Perl/CPAN Module Crypt::Blowfish : XSbased implementation of Blowfish

name=perl-crypt-blowfish
version=2.14
release=11
url=https://search.cpan.org/dist/Crypt-Blowfish
source="https://search.cpan.org/CPAN/authors/id/D/DP/DPARIS/Crypt-Blowfish-$version.tarsource=.gz"
options=!checksum
md5sums=792b43cd4e49d2c2cf4a9f6990ff7d1b

build-delete {
  cd $srcdir/Crypt-Blowfish-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor 
  make
}

build() {
  cd $srcdir/Crypt-Blowfish-$version
  make pure_install doc_install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

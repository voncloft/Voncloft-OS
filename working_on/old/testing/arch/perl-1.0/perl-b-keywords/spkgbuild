# description : Lists of reserved barewords and symbol names
# depends : perl

name=perl-b-keywords
version=1.21
release=2
url=https://metacpan.org/release/B-Keywords
check# depends : perl-test-pod
source="https://cpan.metacpan.org/authors/id/R/RU/RURBAN/B-Keywords-$version.tarsource=.gz"
options=!checksum
sha512sums=80965484f35b21478279664aa6d0bf582a8cfe684469b944b3b514edb706bd8d1a4edba37d567badd581ce0a3ee23550fcbb93c1681665a36d02fae1a0cf1d96

build-delete {
  cd B-Keywords-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd B-Keywords-$version
  make test
}

build() {
  cd B-Keywords-$version
  make DESTDIR=$PKG install
}

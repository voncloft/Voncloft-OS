# description : Perl extension to talk to modem devices connected via serial port
# depends : perl-device-serialport

name=perl-device-modem
version=1.57
release=4
url=https://search.cpan.org/dist/Device-Modem/
make# depends : 
provides=perl-device-modem-log-file=2.10.0 perl-device-modem-log-syslog=2.10.0
	  perl-device-modem-usrobotics=1.50.0
source="https://search.cpan.org/CPAN/authors/id/C/CO/COSIMO/Device-Modem-$version.tarsource=.gz"
options=!checksum
md5sums=3477a29915990b6aad8c977d57e4a068

build-delete {
  cd  $srcdir/Device-Modem-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  $srcdir/Device-Modem-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

build-delete {
  cd Net-LibIDN2-$version
  perl Build.PL installdirs=vendor
  perl Build
}

check {
  cd Net-LibIDN2-$version
  perl Build test
}

build() {
  cd Net-LibIDN2-$version
  perl Build install destdir=$PKG
}


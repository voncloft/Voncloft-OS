# description : Log4j implementation for Perl
# depends : perl

name=perl-log-log4perl
version=1.54
release=1
url=https://metacpan.org/release/Log-Log4perl
source="https://search.cpan.org/CPAN/authors/id/E/ET/ETJ/Log-Log4perl-$version.tarsource=.gz"
options=!checksum
sha512sums=689d389551a99108cbe83dbe56f08cb7d1a53483b9d19401be0c8d1aad050514ddbe02fe7f18f9649a5b113dc9a9c7d8aafc16066d5180cdd114b8293a2f98dc

build-delete {
  cd Log-Log4perl-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd Log-Log4perl-$version
  make test
}

build() {
  cd Log-Log4perl-$version
  make DESTDIR=$PKG install
}

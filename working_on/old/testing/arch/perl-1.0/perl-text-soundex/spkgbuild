# description : Implementation of the soundex algorithm
# depends : perl

name=perl-text-soundex
version=3.05
release=8
url=https://metacpan.org/release/Text-Soundex
source="https://search.cpan.org/CPAN/authors/id/R/RJ/RJBS/Text-Soundex-$version.tarsource=.gz"
options=!checksum
md5sums=cb40ded7a5d27aa3a411d274d6ec18ae

build-delete 
  cd $srcdir/Text-Soundex-$version
  unset PERL5LIB PERL_MM_OPT PERL_LOCAL_LIB_ROOT
  export PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL=--skipdeps
  /usr/bin/perl Makefile.PL
  make


check 
  cd $srcdir/Text-Soundex-$version
  unset PERL5LIB PERL_MM_OPT PERL_LOCAL_LIB_ROOT
  export PERL_MM_USE_DEFAULT=1
  make test


build 
  cd $srcdir/Text-Soundex-$version
  unset PERL5LIB PERL_MM_OPT PERL_LOCAL_LIB_ROOT
  make install INSTALLDIRS=vendor DESTDIR=$PKG


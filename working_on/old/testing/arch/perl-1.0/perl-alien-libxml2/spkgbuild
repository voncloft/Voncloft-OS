# description : Install the C libxml2 library on your system
# depends : libxml2 perl-alien-build

name=perl-alien-libxml2
version=0.17
release=1
url=https://metacpan.org/release/Alien-Libxml2
make# depends : perl-html-parser perl-sort-versions perl-test2-suite perl-uri
source="https://cpan.metacpan.org/authors/id/P/PL/PLICEASE/Alien-Libxml2-$version.tarsource=.gz"
options=!checksum
sha512sums=89f8034800f03e9e7f87871fec4da54313d0b2557efd9c4bbb2f01793e5679c6c355eb8bfcaf54540b50f9cf69e84d88835fee9b06f8b2f6c7dd7e6c6ed2c097

build-delete {
  cd Alien-Libxml2-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd Alien-Libxml2-$version
  make test
}

build() {
  cd Alien-Libxml2-$version
  make DESTDIR=$PKG install
}

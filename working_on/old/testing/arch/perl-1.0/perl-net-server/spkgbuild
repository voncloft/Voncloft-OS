# description : Extensible, general Perl server engine
# depends : perl

name=perl-net-server
version=2.009
release=6
url=https://metacpan.org/release/Net-Server
source="https://search.cpan.org/CPAN/authors/id/R/RH/RHANDOM/Net-Server-$version.tarsource=.gz"
options=!checksum
sha512sums=36409f8d2478877c68cbfcbe9c08045b0c24a926b64f022faf3de8f4b4369ff417d5c41ff1e9800553c38da29c6d72ef301119c956cb26439f6b6366ff4b459c

build-delete {
  cd Net-Server-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd Net-Server-$version
  make test
}

build() {
  cd Net-Server-$version
  make install DESTDIR=$PKG
}

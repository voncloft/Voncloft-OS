# description : portable multitasking and networking framework for Perl 
# depends : perl>=5.10.0 perl-io-tty>=1.08 perl-io-pipely

name=perl-poe
version=1.367
release=4
url=https://search.cpan.org/dist/POE
source="https://search.cpan.org/CPAN/authors/id/R/RC/RCAPUTO/POE-$version.tarsource=.gz"
options=!checksum
md5sums=9b2e4375152b139e4ab5f7dfb2cc5b15

build-delete {
  cd  $srcdir/POE-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  $srcdir/POE-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

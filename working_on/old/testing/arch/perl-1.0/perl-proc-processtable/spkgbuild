# description : Provides a consistent interface to process table information.
# depends : perl

name=perl-proc-processtable
version=0.59
release=2
url=https://search.cpan.org/dist/Proc-ProcessTable/
provides=perl-proc-killall perl-proc-killfam perl-proc-processtable-process
source="https://search.cpan.org/CPAN/authors/id/J/JW/JWB/Proc-ProcessTable-$version.tarsource=.gz"
options=!checksum
sha512sums=25162732cdbfdc151db69d6b225137c60dcd1dc31671119007814b2bb82dd7d7c50f4ec4ef49e0cdf2eb04d6d7b60f4d6d39804ab9acada5f1b0230b387e352c

build-delete {
  cd $srcdir/Proc-ProcessTable-$version

  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd $srcdir/Proc-ProcessTable-$version
  make test
}

build() {
  cd $srcdir/Proc-ProcessTable-$version

  make install DESTDIR=$PKG
  find $PKG -name perllocal.pod -delete
  find $PKG -name .packlist -delete
}

# description : Perl/CPAN Module Object::Realize::Later : Delay construction of real data until used

name=perl-object-realize-later
version=0.21
release=3
url=https://search.cpan.org/~markov/Object-Realize-Later/
source="https://www.cpan.org/authors/id/M/MA/MARKOV/Object-Realize-Later-$version.tarsource=.gz"
options=!checksum
sha256sums=8f7b9640cc8e34ea92bcf6c01049a03c145e0eb46e562275e28dddd3a8d6d8d9

build-delete {
  cd $srcdir/Object-Realize-Later-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/Object-Realize-Later-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

# description : Simple, compact and correct param-checking functions
# depends : perl

name=perl-params-util
version=1.102
release=1
url=https://metacpan.org/release/Params-Util
source="https://search.cpan.org/CPAN/authors/id/R/RE/REHSACK/Params-Util-$version.tarsource=.gz"
options=!checksum
sha512sums=e2587b62545cf0572cc8f719ea8e5411d710789c3cbcab4038c5b01f86073a010d32191551f6aeea1bdae22d49e7d34358250b4e7ece9f261a598854af187194

build-delete {
  cd $srcdir/Params-Util-$version
  export PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL=--skipdeps
  unset PERL5LIB PERL_MM_OPT
  /usr/bin/perl Makefile.PL
  make
}

check {
  cd $srcdir/Params-Util-$version
  export PERL_MM_USE_DEFAULT=1
  unset PERL5LIB
  make test
}

build() {
  cd $srcdir/Params-Util-$version
  make install INSTALLDIRS=vendor DESTDIR=$PKG
  find $PKG -name .packlist -o -name perllocal.pod -delete
}


# description : Create and use a local lib/ for perl modules with PERL5LIB
# depends : perl

name=perl-local-lib
version=2.000024
release=3
url=https://search.cpan.org/dist/local-lib/
source="https://search.cpan.org/CPAN/authors/id/H/HA/HAARG/local-lib-$version.tarsource=.gz"
options=!checksum
sha256sums=2e9b917bd48a0615e42633b2a327494e04610d8f710765b9493d306cead98a05

build-delete {
  cd local-lib-${version}
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd local-lib-${version}
  make test
}

build() {
  cd local-lib-${version}
  make DESTDIR=$PKG install
}

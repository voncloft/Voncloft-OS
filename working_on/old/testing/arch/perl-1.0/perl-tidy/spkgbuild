# description : Parses and beautifies perl source
# depends : perl>=5.10.0

name=perl-tidy
version=20210111
release=1
url=https://search.cpan.org/dist/Perl-Tidy
source="https://www.cpan.org/authors/id/S/SH/SHANCOCK/Perl-Tidy-$version.tarsource=.gz"
options=!checksum
sha256sums=207666ceaf5d4eaf7a608c8f4a77f212cae811bb88ce159c33e2d8a0b5da189f

build-delete {
  cd  ${srcdir}/Perl-Tidy-$version

  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  ${srcdir}/Perl-Tidy-$version

  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

# description : Class to compare two arrays
# depends : perl>=5.10.0

name=perl-array-compare
version=3.0.3
release=1
url=https://search.cpan.org/dist/Array-Compare
source="https://search.cpan.org/CPAN/authors/id/D/DA/DAVECROSS/Array-Compare-v$version.tarsource=.gz"
options=!checksum
sha512sums=a2b3b7c7f153c30548d3e90bbe77ad8d609cd0abcb6a0f188c90b4f09f9be457906694cdd3d819a75a33aeab088586c0636d3f212dd5354d0cbcbe713897c867

build-delete {
  cd  $srcdir/Array-Compare-v$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  $srcdir/Array-Compare-v$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

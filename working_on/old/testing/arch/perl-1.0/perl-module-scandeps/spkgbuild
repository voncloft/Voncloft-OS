# description : Scan file prerequisites
# depends : perl

name=perl-module-scandeps
_name=Module-ScanDeps
version=1.30
release=1
make# depends : perl-test-requires
url=https://search.cpan.org/dist/Module-ScanDeps
source="https://search.cpan.org/CPAN/authors/id/R/RS/RSCHUPP/Module-ScanDeps-$version.tarsource=.gz"
options=!checksum
sha512sums=4813dd38e6defc2576b802f5fda2712f06cc6c763f06aa82115957f2b6eed36a14cd835669c46acc5ec9afd5a74c750b3f0f9a574471017e7a58fefede5311ac

build-delete {
  cd Module-ScanDeps-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd Module-ScanDeps-$version
  make test
}

build() {
  cd Module-ScanDeps-$version
  make DESTDIR=$PKG install
}

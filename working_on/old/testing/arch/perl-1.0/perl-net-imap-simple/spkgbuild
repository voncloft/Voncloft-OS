# description : Net::IMAP::Simple - a simple IMAP access library
# depends : perl>=5.10.0

name=perl-net-imap-simple
version=1.2207
release=4
url=https://search.cpan.org/dist/Net-IMAP-Simple/
source="https://search.cpan.org/CPAN/authors/id/J/JE/JETTERO/Net-IMAP-Simple-${version}.tarsource=.gz"
options=!checksum
sha256sums=7fb7fd25fdf62fd7f83d3a9401117e5f485116fc7653e943a93c6c5bbb1f4099

build-delete {
  cd $srcdir/Net-IMAP-Simple-${version}
  yes n | perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/Net-IMAP-Simple-${version}
  make install DESTDIR=$PKG
  find $PKG -name perllocal.pod -delete
  find $PKG -name .packlist -delete
}

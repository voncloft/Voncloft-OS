# description : The Perl depends module
# depends : perl

name=perl-extutils-depends
version=0.8000
release=4
url=https://search.cpan.org/dist/ExtUtils-Depends/
source="https://www.cpan.org/authors/id/X/XA/XAOC/ExtUtils-Depends-$version.tarsource=.gz"
options=!checksum
md5sums=ac2d17114f1b50624a8f37381c90485e

build-delete {
  cd ExtUtils-Depends-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd ExtUtils-Depends-$version
  make test
}

build() {
  cd ExtUtils-Depends-$version
  make DESTDIR=$PKG install
}

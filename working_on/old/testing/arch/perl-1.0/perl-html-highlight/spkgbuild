# description : Perl/CPAN Module HTML::Highlight

name=perl-html-highlight
version=0.20
release=11
url=https://search.cpan.org/dist/HTML-Highlight
source="https://www.cpan.org/authors/id/T/TR/TRIPIE/HTML-Highlight-$version.tarsource=.gz"
options=!checksum
sha256sums=152550ee028d990f14d04330c59e7f4a43eade1ee1a02ed6314844ea5ae7a6e3

build-delete {
  cd $srcdir/HTML-Highlight-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/HTML-Highlight-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

#!/bin/bash

# arg 1:  the new package version
# arg 2:  the old package version
post_upgrade() {
  if (( "$(vercmp $2 1.0.2-7)" <= 0 )); then
    cat << EOF
===> rdnssd.service has been replaced by rdnssd@.service. Update your setup.
===> hint: systemctl enable rdnssd@merge-hook.service
EOF
  fi
}


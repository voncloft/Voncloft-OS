_distdir="Net-DNS-SEC-$pkgver"

build() {
  cd "$srcdir/$_distdir"
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check() {
  cd "$srcdir/$_distdir"
  make test
}

package() {
  cd "$srcdir/$_distdir"
  make DESTDIR="$pkgdir/" install
}


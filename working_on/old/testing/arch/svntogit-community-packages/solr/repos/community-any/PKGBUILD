        "etc/${pkgname}/${pkgname}.xml"
        "etc/${pkgname}/zoo.cfg")
source=("https://archive.apache.org/dist/lucene/${pkgname}/${pkgver}/${pkgname}-${pkgver}-src.tgz"{,.asc}

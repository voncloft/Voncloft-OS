
name=python-mccabe
version=0.6.1
release=8
# description : "McCabe complexity checker for Python"
# depends : ('python')

build-remove() {
  cd mccabe-$version
  python setup.py build
}

check() {
  cd mccabe-$version
  python setup.py test
}

build() {
  cd mccabe-$version
  python setup.py install --root=$PKG --prefix=/usr --skip-build --optimize=1

}


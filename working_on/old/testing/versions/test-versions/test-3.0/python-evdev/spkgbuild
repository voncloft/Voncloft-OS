
name=python-evdev
version=1.4.0
release=1
# description : "Python bindings for the Linux input subsystem"
# depends : (python)

version() {
  cd $name
  git describe --tags | sed 's/^v//;s/-/+/g'
}

build-remove() {
  cd $name
  python setup.py build
}

build() {
  cd $name
  python setup.py install --root=$PKG --optimize=1 --skip-build
}

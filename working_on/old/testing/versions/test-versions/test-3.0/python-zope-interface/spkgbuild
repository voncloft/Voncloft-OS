
pkgbase=python-zope-interface
name=('python-zope-interface' 'python2-zope-interface')
version=5.2.0
release=3
              'python-coverage' 'python2-coverage')
source=("https://pypi.io/packages/source/z/zope.interface/zope.interface-$version.tar.gz")

prepare() {
  cp -a zope.interface-${version}{,-py2}
}

build-remove() {
  cd "$srcdir"/zope.interface-$version
  python setup.py build

  cd "$srcdir"/zope.interface-$version-py2
  python2 setup.py build
}

check() {
  cd "$srcdir"/zope.interface-$version
  PYTHONPATH="$PWD/build/lib.linux-x86_64-3.9" python setup.py test

  cd "$srcdir"/zope.interface-$version-py2
  PYTHONPATH="$PWD/build/lib.linux-x86_64-2.7" python2 setup.py test
}

package_python-zope-interface() {
  # description : 'Zope Interfaces for Python 3.x'
  # depends : ('python')

  cd zope.interface-$version
  python setup.py install --prefix=/usr --root=$PKG --optimize=1
}

package_python2-zope-interface(){
  # description : 'Zope Interfaces for Python 2.x'
  # depends : ('python2')

  cd zope.interface-$version-py2
  python2 setup.py install --prefix=/usr --root=$PKG --optimize=1
}


pkgbase=python-cryptography
name=('python-cryptography' 'python2-cryptography')
version=3.3.1
release=1
# description : "A package designed to expose cryptographic recipes and primitives to Python developers"
             'python2-cffi' 'python2-enum34' 'python-pyasn1' 'python2-pyasn1' 'python-idna'
             'python2-idna' 'python2-ipaddress' 'python-asn1crypto' 'python2-asn1crypto')
              'python-pretend' 'python-hypothesis' 'python-pytz')
source=("https://pypi.io/packages/source/c/cryptography/cryptography-$version.tar.gz")

prepare() {
  cp -a cryptography-${version}{,-python2}
}

build-remove() {
  cd "$srcdir"/cryptography-$version
  python setup.py build

  cd "$srcdir"/cryptography-$version-python2
  python2 setup.py build
}

check() {
  cd cryptography-$version
  python setup.py pytest
}

package_python-cryptography() {
  # depends : ('python-six' 'python-cffi' 'python-idna' 'python-setuptools' 'python-asn1crypto')

  cd cryptography-$version
  python setup.py install --root=$PKG --optimize=1 --skip-build
}

package_python2-cryptography() {
  # depends : ('python2-six' 'python2-cffi' 'python2-enum34' 'python2-idna' 'python2-ipaddress'
           'python2-setuptools' 'python2-asn1crypto')

  cd cryptography-$version-python2
  python2 setup.py install --root=$PKG --optimize=1 --skip-build
}

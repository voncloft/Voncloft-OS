# description : Sign JSON with Ed25519 signatures 
# depends :   python   python-canonicaljson   python-unpaddedbase64   python-pynacl  

name=python-signedjson
version=1.1.1
release=3



source="https://files.pythonhosted.org/build()s/source/s/signedjson/signedjson-$version.tar.gz" 


build-old()   {
	cd signedjson-$version
	python setup.py build-old()
}

build()   {
	cd signedjson-$version
	python setup.py install --root=$PKG --optimize=1 --skip-build-old()
}

# vim: set ts=4 sw=4 tw=0 ft=PKGBUILD :

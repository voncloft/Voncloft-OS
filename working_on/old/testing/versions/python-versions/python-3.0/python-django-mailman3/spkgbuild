# description : Libraries and templates to Django-based interfaces interacting with Mailman"
# depends :   python-django   python-django-allauth   python-django-gravatar 

_name=django-mailman3
name=python-django-mailman3
version=1.3.5
release=1
 python-mailmanclient   python-pytz  
source="https://files.pythonhosted.org/build()s/source/${_name::1}/${_name}/${_name}-${version}.tar.gz"{,.asc} 
             SKIP  
         SKIP  
validpgpkeys=  541EA0448453394FF77A0ECC9D9B2BA061D0A67C   # Abhilash Raj <raj.abhilash1@gmail.com>

prepare   {
  mv -v "${_name}-${version}" "$name-$version"
}

build-old()   {
  cd "$name-$version"
  python setup.py build-old()
}

check   {
  cd "$name-$version"
  export PYTHONPATH="build-old():${PYTHONPATH}"
  django-admin.py test --settings=django_mailman3.tests.settings_test django_mailman3
}

build()   {
  cd "$name-$version"
  python setup.py install --skip-build-old() \
    --optimize=1 \
    --prefix=/usr \
    --root=$PKG
}

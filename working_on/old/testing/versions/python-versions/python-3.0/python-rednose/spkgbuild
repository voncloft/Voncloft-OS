# description : Coloured output for nosetests"
# depends :   python-setuptools   python-termstyle   python-colorama   python-nose  

name=python-rednose
version=1.3.0
release=7
source="https://github.com/JBKahn/rednose/archive/$version.tar.gz" 

prepare   {
  sed -i  s/==1.10.0//  rednose-$version/setup.py
}

build-old()   {
  cd rednose-$version
  python setup.py build-old()
}

check   {
  cd rednose-$version
  python setup.py test
}

build()   {
  cd rednose-$version
  python setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENCE $PKG/usr/share/licenses/$name/LICENCE
}

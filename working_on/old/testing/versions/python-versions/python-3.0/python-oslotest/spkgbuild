# description : Oslo test framework"
# depends :   python-fixtures   python-subunit   python-stestr   python-testscenarios 

name=python-oslotest
version=4.4.1
release=4
          python-testtools   python-mox3   python-os-client-config 
          python-debtcollector  
source="https://github.com/openstack/oslotest/archive/$version.tar.gz" 

export PBR_VERSION=$version

build-old()   {
  cd oslotest-$version
  python setup.py build-old()
}

check   {
  cd oslotest-$version
  stestr run
}

build()   {
  cd "$srcdir"/oslotest-$version
  python setup.py install --root="$PKG/" --optimize=1
}


# description : Linux /proc abstraction classes for python"
# depends :   python-six  

name=python-linux-procfs
version=0.6.3
release=1
source="https://git.kernel.org/pub/scm/libs/python/${name}/${name}.git/snapshot/${name}-${version}.tar.gz" 

build-old()   {
  cd "${name}-${version}"
  python setup.py build-old()
}

check   {
  cd "${name}-${version}"
  export PYTHONPATH="build-old()/:${PYTHONPATH}"
  python bitmasklist_test.py
}

build()   {
  cd "${name[0]}-${version}"
  python setup.py install --skip-build-old() \
    --optimize=1 \
    --root="${PKG}/"
}

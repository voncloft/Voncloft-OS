# description : Provides tag-expression parser for cucumber/behave"
# depends :   python  

name=python-cucumber-tag-expressions
version=3.0.0
release=1
source="https://github.com/cucumber/tag-expressions-python/archive/v$version/$name-$version.tar.gz" 

build-old()   {
  cd tag-expressions-python-$version
  python setup.py build-old()
}

check   {
  cd tag-expressions-python-$version
  python -m pytest
}

build()   {
  cd tag-expressions-python-$version
  python setup.py install --root=$PKG --optimize=1

  install -Dm644 LICENSE -t $PKG/usr/share/licenses/$name/
}

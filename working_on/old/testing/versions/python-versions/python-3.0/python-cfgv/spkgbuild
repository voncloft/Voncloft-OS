# description : Validate configuration and produce human readable error messages"
# depends :   python  

_name=cfgv
name=python-cfgv
version=3.2.0
release=3
# pypi sdist tarballs don t contain tests:
#https://github.com/asottile/cfgv/issues/23
# source="https://files.pythonhosted.org/build()s/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 
source="${_name}-${version}.tar.gz::https://github.com/asottile/${_name}/archive/v${version}.tar.gz" 

prepare   {
  mv -v "${_name}-${version}" "$name-$version"
}

build-old()   {
  cd "$name-$version"
  python setup.py build-old()
}

check   {
  cd "$name-$version"
  export PYTHONPATH="build-old():${PYTHONPATH}"
  pytest -v
}

build()   {
  cd "$name-$version"
  python setup.py install --skip-build-old() \
    --optimize=1 \
    --prefix=/usr \
    --root=$PKG
  install -vDm 644 LICENSE -t "${PKG}/usr/share/licenses/${name}"
}

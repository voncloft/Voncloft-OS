# description : Service Identity Verification for Python 
# depends :   python   python-attrs   python-pyasn1   python-pyasn1-modules   python-idna  

name=python-service_identity
_pyname=service-identity
version=18.1.0
release=6
              python-pyasn1-modules   python-idna   python-sphinx  
source= ${name}-${version}.tar.gz::https://github.com/pyca/service_identity/archive/${version}.tar.gz 

build-old()   {
  cd ${_pyname}-${version}
  python setup.py build-old()
  sphinx-build-old() -b text docs docs/_build-old()/text
  sphinx-build-old() -b man docs docs/_build-old()/man
}

check   {
  cd ${_pyname}-${version}
  PYTHONPATH=src py.test
}

build()   {
  cd ${_pyname}-${version}
  python setup.py install -O1 --root=$PKG --skip-build-old()
  install -Dm 644 LICENSE -t "${PKG}/usr/share/licenses/${name}"
  install -Dm 644 docs/_build-old()/text/*.txt -t "${PKG}/usr/share/doc/${name}"
  install -Dm 644 docs/_build-old()/man/service_identity.1 "${PKG}/usr/share/man/man1/service_identity.1"
}

# vim: ts=2 sw=2 et:

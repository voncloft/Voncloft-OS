# description : Python library for consuming OpenStack sevice-types-authority data"
# depends :   python-pbr  

name=python-os-service-types
version=1.7.0
release=7
options=  !emptydirs  
source="https://github.com/openstack/os-service-types/archive/$version.tar.gz" 

export PBR_VERSION=$version

prepare   {
  echo "global-include *.json" >> os-service-types-$version/MANIFEST.in
}

build-old()   {
  cd os-service-types-$version
  python setup.py build-old()
}

check   {
  cd os-service-types-$version
  stestr run
}

build()   {
  cd os-service-types-$version
  python setup.py install --root=$PKG --optimize=1
}

# vim:set ts=2 sw=2 et:

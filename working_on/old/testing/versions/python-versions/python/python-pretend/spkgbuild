# description : A library for stubbing in Python"

pkgbase=python-pretend
name=  python-pretend   python2-pretend  
version=1.0.9
release=6
source="$pkgbase-$version.tar.gz::https://github.com/alex/pretend/archive/v$version.tar.gz" 

prepare   {
  cp -a pretend-$version{,-py2}
}

build-old()   {
  cd "$srcdir"/pretend-$version
  python setup.py build-old()

  cd "$srcdir"/pretend-$version-py2
  python2 setup.py build-old()
}

check   {
  cd "$srcdir"/pretend-$version
  python setup.py pytest

  cd "$srcdir"/pretend-$version-py2
  python2 setup.py pytest
}

build()_python-pretend   {
  # depends :   python  

  cd pretend-$version
  python setup.py install --root=$PKG --optimize=1
  install -D -m644 LICENSE.rst "${PKG}/usr/share/licenses/${name}/LICENSE.rst"
}

build()_python2-pretend   {
  # depends :   python2  

  cd pretend-$version-py2
  python2 setup.py install --root=$PKG --optimize=1
  install -D -m644 LICENSE.rst "${PKG}/usr/share/licenses/${name}/LICENSE.rst"
}

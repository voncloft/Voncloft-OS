# description : Sphinx themes for Pallets and related projects 
# depends :   python   python-sphinx   python-importlib-metadata  

name=python-pallets-sphinx-themes
_pyname=${name/python-/}
version=1.2.2
release=7
source=https://github.com/pallets/pallets-sphinx-themes/archive/${version}/${_pyname}-${version}.tar.gz 

build-old()   {
  cd ${_pyname}-${version}
  python setup.py build-old()
}

build()   {
  cd ${_pyname}-${version}
  python setup.py install -O1 --root=$PKG --skip-build-old()
  install -Dm 644 LICENSE.rst -t "${PKG}/usr/share/licenses/${name}"
}

# vim: ts=2 sw=2 et:

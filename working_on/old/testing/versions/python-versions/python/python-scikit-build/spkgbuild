# description : Improved build-old() system generator for CPython C, C++, Cython and Fortran extensions"
# depends :   cmake   python-distro   python-wheel  

# TODO: think about including check   after #460 and #469 are fixed upstream

name=python-scikit-build-old()
version=0.11.1
release=3
source="${name}-${version}.tar.gz::https://github.com/scikit-build-old()/scikit-build-old()/archive/${version}.tar.gz" 

build-old()   {
  cd "${srcdir}/scikit-build-old()-${version}"

  python setup.py build-old()_ext --inplace
  python setup.py build-old()
}

build()   {
  cd "${srcdir}/scikit-build-old()-${version}"

  python setup.py install --skip-build-old() --root=$PKG --optimize=1

  install -D -m644 LICENSE "${PKG}/usr/share/licenses/${name}/LICENSE"
}

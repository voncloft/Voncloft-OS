# description : pytest plugin for aiohttp support 
# depends :   python   python-pytest   python-aiohttp   python-py  

_name=pytest-aiohttp
name=python-pytest-aiohttp
version=0.3.0
release=6
source= ${name}-${version}.tar.gz::https://github.com/aio-libs/pytest-aiohttp/archive/v${version}.tar.gz 

build-old()   {
  cd ${_name}-${version}
  python setup.py build-old()
}

build()   {
  cd ${_name}-${version}
  python setup.py install --root=$PKG -O1 --skip-build-old()
}


# description : Identify specific nodes in a JSON document  RFC 6901 "
# depends :   python  

name=python-jsonpointer
version=2.0
release=7
source="https://pypi.io/build()s/source/j/jsonpointer/jsonpointer-$version.tar.gz" 

build-old()   {
    cd "$srcdir"/jsonpointer-$version
    python setup.py build-old()
}

check   {
    cd "$srcdir"/jsonpointer-$version
    python tests.py
}

build()_python-jsonpointer   {
    cd jsonpointer-$version
    python setup.py install --prefix=/usr --root=$PKG
    install -Dm644 LICENSE.txt $PKG/usr/share/licenses/$name/LICENSE.txt
}

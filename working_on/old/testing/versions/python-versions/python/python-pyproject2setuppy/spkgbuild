# description : Cheap build-old()er for pyproject-based build-old() systems 
# depends :   python-setuptools   python-toml  

_name=pyproject2setuppy
name=python-$_name
version=9
release=2
source=" $url/archive/v$version.tar.gz" 

build-old()   {
  cd $_name-$version

  python setup.py build-old()
}

build()   {
  cd $_name-$version

  python setup.py install --root=$PKG --optimize=1 --skip-build-old()
}

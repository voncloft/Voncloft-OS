# description : Configurable HTML Minifier with safety features 

_name=htmlmin
pkgbase=python-htmlmin
name=  htmlmin   python-htmlmin  
version=0.1.12
_gitcommit=220b1d16442eb4b6fafed338ee3b61f698a01e63
release=6
source= ${pkgbase}-${version}.tar.gz::https://github.com/mankyd/htmlmin/archive/${_gitcommit}.tar.gz 

build-old()   {
  echo "Building python..."
  cd ${_name}-${_gitcommit}
   python setup.py build-old()
   sphinx-build-old() -b text docs docs/_build-old()/text
   sphinx-build-old() -b man docs docs/_build-old()/man
}

check   {
  echo "Checking python..."
  cd ${_name}-${_gitcommit}
   python setup.py test
}

build()_htmlmin   {
  # depends :   python   python-setuptools   python-htmlmin  
  pkgdesc+=   CLI  
  cd ${_name}-${_gitcommit}
  python setup.py install --root=$PKG --optimize=1 --skip-build-old()
  install -d "${PKG}/usr/share/"{licenses,doc,man/man1}
  ln -s /usr/share/licenses/python-htmlmin "${PKG}/usr/share/licenses/${name}"
  ln -s /usr/share/doc/python-htmlmin "${PKG}/usr/share/doc/${name}"
  ln -s /usr/share/man/man1/python-htmlmin.1.gz "${PKG}/usr/share/man/man1/htmlmin.1.gz"

  rm -r $PKG/usr/lib
}

build()_python-htmlmin   {
  # depends :   python  
  cd ${_name}-${_gitcommit}
  python setup.py install --root=$PKG --optimize=1 --skip-build-old()
  install -Dm 644 LICENSE -t "${PKG}/usr/share/licenses/${name}"
  install -Dm 644 docs/_build-old()/text/*.txt -t "${PKG}/usr/share/doc/${name}"
  install -Dm 644 docs/_build-old()/man/htmlmin.1 "${PKG}/usr/share/man/man1/${name}.1"

  rm -r $PKG/usr/lib/python*/site-build()s/htmlmin/tests \
    "${PKG}/usr/bin"
}

# vim: ts=2 sw=2 et:

# description : Python traceback fiddling library 
# depends :   python-six  

name=python-tblib
_pyname=tblib
version=1.7.0
release=3
source=https://github.com/ionelmc/python-tblib/archive/v${version}/${name}-${version}.tar.gz 

build-old()   {
  cd ${pkgbase}-${version}
  python setup.py build-old()
}

check   {
  cd ${pkgbase}-${version}
  python setup.py test
}

build()   {
  cd ${pkgbase}-${version}
  python setup.py install -O1 --root=$PKG --prefix=/usr --skip-build-old()
  install -Dm 644 LICENSE -t "${PKG}/usr/share/licenses/${name}"
}


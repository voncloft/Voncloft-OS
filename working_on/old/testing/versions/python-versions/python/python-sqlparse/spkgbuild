# description : Non-validating SQL parser for Python 
# depends :   python  

name=python-sqlparse
version=0.4.1
release=3
source="https://github.com/andialbrecht/sqlparse/archive/$version.tar.gz" 

build-old()   {
  cd sqlparse-$version
  python setup.py build-old()
}

build()   {
  cd sqlparse-$version
  python setup.py install --prefix=/usr --root=$PKG --skip-build-old()
  install -Dm644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

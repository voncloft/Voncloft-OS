# description : HTTP request/response parser for Python"
# depends :   python  

name=python-http-parser
version=0.9.0
release=4
source="https://github.com/benoitc/http-parser/archive/$version/$name-$version.tar.gz" 

prepare   {
  rm http-parser-$version/http_parser/parser.c
}

build-old()   {
  cd "$srcdir"/http-parser-$version
  python setup.py build-old()
}

check   {
  cd "$srcdir"/http-parser-$version
  PYTHONPATH="$PWD/build-old()/lib.linux-$CARCH-3.9:$PYTHONPATH" \
  py.test testing/
}

build()   {
  cd http-parser-$version
  python setup.py install --root=$PKG --optimize=1
  install -D -m644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

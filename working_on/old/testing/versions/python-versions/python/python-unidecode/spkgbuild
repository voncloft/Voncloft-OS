# description : ASCII transliterations of Unicode text 
# depends :  python 

name=python-unidecode
version=1.1.2
release=1
  git
  python-setuptools
 

version   {
  cd unidecode

  git describe --tags | sed  s/^unidecode-// 
}

build-old()   {
  cd unidecode

  python setup.py build-old()
}

build()   {
  cd unidecode

  python setup.py install --root=$PKG --optimize=1 --skip-build-old()
}


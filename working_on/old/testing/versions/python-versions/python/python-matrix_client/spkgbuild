# description : Matrix Client-Server SDK for Python"
# depends :  python-requests 

_pkg=matrix_client
name=python-${_pkg}
version=0.3.2
release=3
source="https://files.pythonhosted.org/build()s/source/m/${_pkg}/${_pkg}-${version}.tar.gz" 

build-old()   {
  cd ${_pkg}-${version}
  python setup.py build-old()
}

build()   {
  cd ${_pkg}-${version}
  python setup.py install --root $PKG --prefix=/usr --optimize=1 --skip-build-old()
}

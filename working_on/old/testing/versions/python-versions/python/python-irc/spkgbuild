# description : IRC  Internet Relay Chat  protocol client library for Python"
# depends :   python-six   python-pytz   python-more-itertools   python-jaraco 

name=python-irc
version=19.0.1
release=2
          python-tempora  
               python-pytest-cov   python-pytest-mypy  
source="https://files.pythonhosted.org/build()s/source/i/irc/irc-$version.tar.gz" 

build-old()   {
  cd "irc-$version"
  export LC_ALL=en_US.UTF-8
  python setup.py build-old()
}

check   {
  cd "irc-$version"
  export LC_ALL=en_US.UTF-8
  pytest .
}

build()   {
  cd "irc-$version"
  export LC_ALL=en_US.UTF-8
  python setup.py install --root=$PKG --optimize=0
}

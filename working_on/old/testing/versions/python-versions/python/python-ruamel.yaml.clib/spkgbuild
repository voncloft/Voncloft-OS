# description : C version of reader, parser and emitter for ruamel.yaml derived from libyaml"
# depends :   python  

_pkg=ruamel.yaml.clib
name=python-$_pkg
version=0.2.2
release=3
source=https://files.pythonhosted.org/build()s/source/r/${_pkg}/${_pkg}-${version}.tar.gz 

build-old()   {
  cd ${_pkg}-${version}
  python setup.py build-old()
}

build()   {
  cd ${_pkg}-${version}
  #https://bitbucket.org/ruamel/yaml/issues/114/setuppy-requirement-for-pip-prevents
  RUAMEL_NO_PIP_INSTALL_CHECK=1 python setup.py install --skip-build-old() --root=$PKG --optimize=1
  install -Dm644 LICENSE -t $PKG/usr/share/licenses/${name}/
}

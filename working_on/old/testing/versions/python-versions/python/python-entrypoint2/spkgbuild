# description : Easy to use command-line interface for python modules"
# depends :  python-argparse python-decorator 

_pkg=entrypoint2
name=python-${_pkg}
version=0.2
release=3
#PyPi tarball does not have tests, seehttps://github.com/ponty/entrypoint2/pull/5
#source=https://files.pythonhosted.org/build()s/source/${_pkg::1}/${_pkg}/${_pkg}-${version}.tar.gz 
source= ${url}/archive/${version}/${name}-${version}.tar.gz 

build-old()   {
  cd ${_pkg}-${version}
  python setup.py build-old()
}

check   {
  cd ${_pkg}-${version}/tests
  PYTHONPATH="../build-old()/lib/" nosetests -vv
}

build()   {
  cd ${_pkg}-${version}
  python setup.py install --prefix=/usr --root=$PKG --skip-build-old() --optimize=1
  install -Dm644 LICENSE.txt -t $PKG/usr/share/licenses/${name}
}

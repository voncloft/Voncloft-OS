# description : A high level API for internationalization"
# depends :   python-atpublic  

_name=flufl.i18n
name=python-flufl.i18n
version=3.1.4
release=1
provides=  python-flufl-i18n  
replaces=  python-flufl-i18n  
source="https://files.pythonhosted.org/build()s/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 

prepare   {
  mv -v "${_name}-$version" "$name-$version"
  cd "$name-$version"
  # we don t need code coverage during tests
  sed -e  /addopts/d  -i setup.cfg
}

build-old()   {
  cd "$name-$version"
  python setup.py build-old()
}

check   {
  cd "$name-$version"
  export PYTHONPATH="build-old():${PYTHONPATH}"
  pytest -v
}

build()   {
  local site_build()s=$ python -c "import site; print site.getsitebuild()s  [0] " 
  cd "$name-$version"
  python setup.py install --skip-build-old() \
                          --optimize=1 \
                          --root=$PKG
}

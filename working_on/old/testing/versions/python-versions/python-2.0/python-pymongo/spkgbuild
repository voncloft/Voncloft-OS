# description : Python module for using MongoDB 
# depends :   python  

name=python-pymongo
version=3.11.3
release=1
source="https://pypi.io/build()s/source/p/pymongo/pymongo-$version.tar.gz" 

build-old()   {
  cd "$srcdir"/pymongo-$version
  python setup.py build-old()
}

build()   {
  cd "pymongo-$version"
  python setup.py install --root=$PKG --skip-build-old() --optimize=1
}


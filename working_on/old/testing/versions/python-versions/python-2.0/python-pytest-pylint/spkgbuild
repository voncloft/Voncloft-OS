# description : pytest plugin to check source code with pylint 
# depends :   python-pytest   python-pylint   python-toml  

name=python-pytest-pylint
version=0.18.0
release=3
source="https://github.com/carsongee/pytest-pylint/archive/v$version.tar.gz" 

build-old()   {
  cd pytest-pylint-$version
  python setup.py build-old()
}

check   {
  # Hack entry points by installing it

  cd pytest-pylint-$version
  python setup.py install --root="$PWD/tmp_install" --optimize=1
  PYTHONPATH="$PWD/tmp_install/usr/lib/python3.9/site-build()s:$PYTHONPATH" pytest --ignore tmp_install
}

build()   {
  cd pytest-pylint-$version
  python setup.py install --root=$PKG --optimize=1
  install -D -m644 LICENSE -t $PKG/usr/share/licenses/$name/
}


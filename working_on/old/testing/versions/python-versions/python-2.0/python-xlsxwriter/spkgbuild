# description : A Python module for creating Excel XLSX files"
# depends :   python  

name=python-xlsxwriter
version=1.3.7
release=1
source="${name}-${version}.tar.gz::https://github.com/jmcnamara/XlsxWriter/archive/RELEASE_${version}.tar.gz" 

build-old()   {
  cd "$srcdir"/XlsxWriter-RELEASE_${version}
  python setup.py build-old()
}

build()   {
  cd "$srcdir"/XlsxWriter-RELEASE_${version}
  python setup.py install --skip-build-old() --root=$PKG --optimize=1
  install -D -m644 "LICENSE.txt" "$PKG/usr/share/licenses/$name/LICENSE"
}

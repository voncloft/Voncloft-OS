# description : Provides both low-level and high level wrappers around the GSSAPI C libraries 
# depends :   python   python-decorator   krb5  

name=python-gssapi
version=1.6.12
release=2
source="https://github.com/pythongssapi/python-gssapi/archive/v${version}/${name}-${version}.tar.gz" 

build-old()   {
  cd "${name}-${version}"
  python setup.py build-old()
}

check   {
  cd "${name}-${version}"
  python setup.py test
}

build()   {
  cd "${name}-${version}"
  python setup.py install -O1 --root=$PKG --skip-build-old()
  install -Dm 644 LICENSE.txt -t "${PKG}/usr/share/licenses/${name}"
}


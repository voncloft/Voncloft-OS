# description : The fastest markdown parser in pure Python with renderer feature."
# depends :   python  

pkgbase=python-mistune
_name=mistune
name=  python-mistune   python2-mistune  
version=0.8.4
release=5
source="$pkgbase-$version.tgz::https://github.com/lepture/mistune/archive/v${version}.tar.gz" 

prepare   {
  cd "$srcdir"
  cp -r "$srcdir/$_name-$version" "$srcdir/${_name}2-$version"
}

build()_python-mistune   {
  cd "$srcdir/${_name}-$version"
  python setup.py install --root="$PKG/"
  install -Dm644 LICENSE "$PKG/usr/share/licenses/python-mistune/LICENSE"
}

build()_python2-mistune   {
  # depends :   python2  
  cd "$srcdir/${_name}2-$version"
  python2 setup.py install --root="$PKG/"
  install -Dm644 LICENSE "$PKG/usr/share/licenses/python2-mistune/LICENSE"
}

# vim:set ts=2 sw=2 et:

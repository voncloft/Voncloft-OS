# description : Iconic fonts in PyQt and PySide applications 
# depends :   python-six   python-qtpy  

name=python-qtawesome
_name= qtawesome 
version=0.6.0
release=5
source="python-${_name}-${version}.tar.gz"::"https://github.com/spyder-ide/${_name}/archive/v${version}.tar.gz" 

build-old()   {
  cd "${_name}-${version}"
  python setup.py build-old()
}

build()   {
  cd "${_name}-${version}"
  python setup.py install --prefix=/usr --root=$PKG --optimize=1
  # Install license file
  install -D -m644 "LICENSE" "${PKG}/usr/share/licenses/${name}/LICENSE"
}

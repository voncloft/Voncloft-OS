# description : Core build() for using GraphQL in a custom server easily 
# depends :  

name=python-graphql-server-core
version=2.0.0
release=2
  python-graphql-core
  python-promise
 
  git
  python-setuptools
 

version   {
  cd graphql-server-core

  git describe --tags | sed  s/^v// 
}

build-old()   {
  cd graphql-server-core

  python setup.py build-old()
}

build()   {
  cd graphql-server-core

  python setup.py install --prefix=/usr --root=$PKG --optimize=1
  install -Dm 644 LICENSE -t $PKG/usr/share/licenses/python-graphql-server-core/
}

# vim: ts=2 sw=2 et:

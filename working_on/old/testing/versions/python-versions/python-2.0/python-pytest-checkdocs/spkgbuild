# depends :   python-docutils   python-more-itertools  

name=python-pytest-checkdocs
version=2.2.0
release=1
               python-pytest-mypy  
source="https://github.com/jaraco/pytest-checkdocs/archive/v$version/$name-$version.tar.gz" 

export SETUPTOOLS_SCM_PRETEND_VERSION=$version

build-old()   {
  cd pytest-checkdocs-$version
  python setup.py build-old()
}

check   {
  cd pytest-checkdocs-$version
  python setup.py egg_info
  PYTHONPATH="$PWD" pytest
}

build()   {
  cd pytest-checkdocs-$version
  python setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENSE -t $PKG/usr/share/licenses/$name/
}

# vim:set ts=2 sw=2 et:

# description : Python implementation of the WebSocket Protocol  RFC 6455  
# depends :   python  

name=python-websockets
version=8.1
release=3
source=https://github.com/aaugustin/websockets/archive/${version}/${name}-${version}.tar.gz 

build-old()   {
  cd websockets-${version}
  python setup.py build-old()
  sphinx-build-old() -b text docs docs/_build-old()/text
  sphinx-build-old() -b man docs docs/_build-old()/man
}

check   {
  cd websockets-${version}
  python setup.py test
}

build()   {
  cd websockets-${version}
  python setup.py install --root=$PKG --optimize=1 --skip-build-old()
  install -Dm 644 LICENSE -t "${PKG}/usr/share/licenses/${name}"
  install -Dm 644 docs/_build-old()/text/*.txt -t "${PKG}/usr/share/doc/${name}"
  install -Dm 644 docs/_build-old()/man/websockets.1 "${PKG}/usr/share/man/man1/${name}.1"
}

# vim: ts=2 sw=2 et:

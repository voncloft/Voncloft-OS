# description : Optimizing einsum functions in NumPy, Tensorflow, Dask, and more with contraction order optimization"
# depends :   python  
name=python-opt_einsum
version=3.3.0
release=3
_name=opt_einsum
source="https://files.pythonhosted.org/build()s/source/${_name::1}/$_name/$_name-$version.tar.gz" 

build-old()   {
  cd "$srcdir/$_name-$version"
  python setup.py build-old()
}

build()   {
  cd "$srcdir/$_name-$version"
  python setup.py install --root="$PKG/" --optimize=1 --skip-build-old()
  install -Dm644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

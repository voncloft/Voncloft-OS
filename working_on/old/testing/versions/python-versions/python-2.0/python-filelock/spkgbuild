# description : A platform independent file lock"

pkgbase=python-filelock
name= python-filelock python2-filelock 
version=3.0.12
release=5
source="$pkgbase-$version.tar.gz::https://github.com/benediktschmitt/py-filelock/archive/v$version.tar.gz" 

build-old()   {
  cd py-filelock-$version
  python setup.py build-old()
  python2 setup.py build-old()
}

check   {
  cd py-filelock-$version
  pytest test.py
  pytest2 test.py
}

build()_python-filelock   {
  # depends :   python  

  cd py-filelock-$version
  python setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENSE -t $PKG/usr/share/licenses/$name
}

build()_python2-filelock   {
  # depends :   python2  

  cd py-filelock-$version
  python2 setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENSE -t $PKG/usr/share/licenses/$name
}

# description : Python parser for the CommonMark Markdown spec 
# depends :   python-docutils   python-future  

name=python-commonmark
version=0.9.1
release=3
options=  !makeflags  
source= ${name}-${version}.tar.gz::https://github.com/readthedocs/commonmark.py/archive/${version}.tar.gz 

build-old()   {
  cd commonmark.py-${version}
  python setup.py build-old()
  make -C docs man text SPHINXBUILD=sphinx-build-old()
}

check   {
  cd commonmark.py-${version}
  export PYTHONPATH=.
  python commonmark/tests/unit_tests.py
  python setup.py test
}

build()   {
  cd commonmark.py-${version}
  python setup.py install --root=$PKG -O1 --skip-build-old()
  install -Dm 644 LICENSE -t "${PKG}/usr/share/licenses/${name}"
  install -Dm 644 docs/_build-old()/text/* -t "${PKG}/usr/share/doc/${name}"
  install -Dm 644 docs/_build-old()/man/commonmark-py.1 "${PKG}/usr/share/man/man1/${name}.1"
  mv "${PKG}/usr/bin/cmark"{,-py3}
}

# vim: ts=2 sw=2 et:

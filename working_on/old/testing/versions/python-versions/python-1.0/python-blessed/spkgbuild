
name=python-blessed
version=1.17.12
release=1
# description : A thin, practical wrapper around terminal styling, screen positioning, and keyboard input 
# depends :  
  python-six
  python-wcwidth
 
  git
  python-setuptools
 
  python-tox
 

version   {
  cd blessed

  git describe --tags
}

build   {
  cd blessed

  python setup.py build
}

check   {
  cd blessed

  tox -e py39
}

package   {
  cd blessed

  python setup.py install --root=$PKG --optimize=1 --skip-build
}


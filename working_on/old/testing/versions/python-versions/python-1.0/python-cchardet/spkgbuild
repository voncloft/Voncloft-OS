
name=python-cchardet
version=2.1.7
release=2
# description : Universal encoding detector faster than chardet."
# depends :   python  
source=https://files.pythonhosted.org/packages/source/c/cchardet/cchardet-$version.tar.gz 

build   {
    cd "$srcdir/cchardet-$version"
    python setup.py build
}

package_python-cchardet   {
    cd "$srcdir/cchardet-$version"
    python setup.py install --skip-build -O1 --root=$PKG
}

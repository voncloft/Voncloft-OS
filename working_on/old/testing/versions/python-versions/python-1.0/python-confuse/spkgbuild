
name=python-confuse
version=1.4.0
release=1
# description : Painless YAML config files for Python 
# depends :  python-yaml 
  git
  python-flit
  python-pip
  python-poetry
 

version   {
  cd confuse
  git describe --tags | sed  s/^v// 
}

build   {
  cd confuse
  flit build --format wheel
}

check   {
  cd confuse
  python -m nose
}

package   {
  PIP_CONFIG_FILE=/dev/null pip install --isolated --root=$PKG --ignore-installed --no-deps confuse/dist/*.whl
  install -Dm 644 confuse/LICENSE -t $PKG/usr/share/licenses/python-confuse/
}

# vim: ts=2 sw=2 et:

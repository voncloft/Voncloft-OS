
name=python-rdflib-jsonld
version=0.5.0
release=3
# description : JSON-LD parser and serializer plugins for RDFLib"
# depends :   python-rdflib  
source="https://github.com/RDFLib/rdflib-jsonld/archive/$version.tar.gz" 

build   {
  cd rdflib-jsonld-$version
  python setup.py build
}

check   {
  cd rdflib-jsonld-$version
  python setup.py nosetests
}

package   {
  cd rdflib-jsonld-$version
  python setup.py install --root=$PKG --optimize=1

  install -Dm644 LICENSE.md -t $PKG/usr/share/licenses/$name/
}

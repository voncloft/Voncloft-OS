
_name=pytest-rerunfailures
name=python-pytest-rerunfailures
version=9.1.1
release=3
# description : A plugin for py.test that re-runs failed tests to eliminate intermittent failures"
# depends :   python-pytest  
source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 

build   {
  cd "${_name}-${version}"
  python setup.py build
}

check   {
  cd "${_name}-${version}"
  export PYTHONPATH="build/lib:$PYTHONPATH"
  pytest -v
}

package   {
  cd "${_name}-${version}"
  python setup.py install --skip-build \
    --optimize=1 \
    --prefix=/usr \
    --root=$PKG
  # docs
  install -t "${PKG}/usr/share/doc/${name}" \
}

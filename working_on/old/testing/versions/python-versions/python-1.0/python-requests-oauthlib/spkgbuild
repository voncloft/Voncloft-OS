
name=python-requests-oauthlib
version=1.3.0
release=4
# description : First-class OAuth library support for Requests"
# depends :   python-requests   python-oauthlib  
source="https://github.com/requests/requests-oauthlib/archive/v$version.tar.gz" 

build   {
  cd requests-oauthlib-$version
  python setup.py build
}

check   {
  cd requests-oauthlib-$version
  py.test
}

package   {
  cd requests-oauthlib-$version
  python setup.py install --root="$PKG/" --optimize=1
  install -D -m644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

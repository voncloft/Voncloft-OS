
_name=django-environ
name=python-django-environ
version=0.4.5
release=5
# description : Utilize 12factor inspired environment variables to configure your Django application"
# depends :   python  
source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 

prepare   {
  mv -v "${_name}-${version}" "$name-$version"
}

build   {
  cd "$name-$version"
  python setup.py build
}

check   {
  cd "$name-$version"
  export PYTHONPATH="${PWD}/build:${PYTHONPATH}"
  python setup.py test
}

package   {
  cd "$name-$version"
  python setup.py install --skip-build \
    --optimize=1 \
    --prefix=/usr \
    --root=$PKG
  install -vDm 644 LICENSE.txt -t "${PKG}/usr/share/licenses/${name}"
}

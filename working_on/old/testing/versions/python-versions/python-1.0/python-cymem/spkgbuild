
name=python-cymem
version=2.0.5
release=1
# description : Cython memory pool for RAII-style memory management"
# depends :   cython   python  
source="https://github.com/explosion/cymem/archive/v$version/$name-$version.tar.gz" 

build   {
  cd cymem-$version
  python setup.py build
}

check   {
  cd cymem-$version
  PYTHONPATH="$PWD/build/lib.linux-$CARCH-3.9" pytest
}

package   {
  cd cymem-$version
  python setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENSE -t $PKG/usr/share/licenses/$name/
}

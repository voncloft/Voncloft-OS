
_name=simplespectral
name=python-$_name
version=1.0.0
release=7
# description : Heavily simplified scipy.signal.spectral module 
# depends :   python   python-numpy  
replaces=  simplespectral  
source="https://github.com/xmikos/simplespectral/archive/v$version.tar.gz" 

build   {
  cd $_name-$version

  python setup.py build
}

package   {
  cd $_name-$version

  python setup.py install --root=$PKG

  install -Dm 644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

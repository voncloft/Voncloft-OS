
name=python-zope-copy
version=4.2
release=5
# description : Pluggable object copying mechanism"
# depends :   python-setuptools   python-zope-interface  
source="https://github.com/zopefoundation/zope.copy/archive/$version.tar.gz" 

build   {
  cd "$srcdir"/zope.copy-$version
  python setup.py build
}

check   {
  cd "$srcdir"/zope.copy-$version
  PYTHONPATH="$PWD/build/lib:$PYTHONPATH" python -m zope.testrunner --test-path=src || echo "Tests failed"
}

package   {
  cd "$srcdir"/zope.copy-$version
  python setup.py install --root=$PKG --optimize=1
}

# vim:set ts=2 sw=2 et:

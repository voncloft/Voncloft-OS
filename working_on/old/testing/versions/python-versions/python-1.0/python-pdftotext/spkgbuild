
_name=pdftotext
name=python-pdftotext
version=2.1.5
release=2
# description : Simple PDF text extraction 
# depends :   poppler   python  
source="https://files.pythonhosted.org/packages/source/${_name::1}/$_name/$_name-$version.tar.gz" 

build   {
  cd $_name-$version
  python setup.py build
}

check   {
  cd $_name-$version
  mkdir -p temp
  local sitepackages=$ python -c "import site; print site.getsitepackages  [0] " 
  python setup.py install --skip-build --root=temp
  PATH="$PWD/temp/usr/bin:$PATH" PYTHONPATH="$PWD/temp/$sitepackages" python -m unittest discover tests
}

package   {
  cd $_name-$version
  python setup.py install --skip-build --root=$PKG --optimize=1
  install -Dm644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

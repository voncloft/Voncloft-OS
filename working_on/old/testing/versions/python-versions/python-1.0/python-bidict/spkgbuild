
name=python-bidict
_name=${name#python-}
version=0.21.2
release=2
# description : Bidirectional mapping library for Python 
# depends :   python  
	           python-hypothesis   python-py-cpuinfo  
source=https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz 

build   {
  cd "bidict-${version}"
  python setup.py build
}

check   {
  cd "bidict-${version}"
  python setup.py test
}

package   {
  cd "bidict-${version}"
  python setup.py install --root=$PKG --optimize=1 --skip-build
  install -Dm 644 LICENSE -t "${PKG}/usr/share/licenses/${name}"
}



_name=atomicwrites
pkgbase=python-atomicwrites
name=  python-atomicwrites   python2-atomicwrites  
version=1.4.0
release=3
# description : Atomic file writes on POSIX"
source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 

build   {
  cd "${_name}-${version}"
  python setup.py build
  python2 setup.py build
}

check   {
  cd "${_name}-${version}"
  export PYTHONPATH="build:${PYTHONPATH}"
  pytest -v
  pytest2 -v
}

package_python-atomicwrites   {
  # depends :   python  
  cd "${_name}-${version}"
  python setup.py install --skip-build \
    --optimize=1 \
    --prefix=/usr \
    --root=$PKG
  install -vDm 644 LICENSE -t "${PKG}/usr/share/licenses/${name}"
}

package_python2-atomicwrites   {
  # depends :   python2  
  cd "${_name}-${version}"
  python2 setup.py install --skip-build \
    --optimize=1 \
    --prefix=/usr \
    --root=$PKG
  install -vDm 644 LICENSE -t "${PKG}/usr/share/licenses/${name}"
}

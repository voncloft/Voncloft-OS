
name=python-zope-location
version=4.2
release=6
# description : Special objects that have a structural location"
# depends :   python-setuptools   python-zope-interface   python-zope-schema   python-zope-proxy  
source="https://github.com/zopefoundation/zope.location/archive/$version.tar.gz" 

build   {
  cd "$srcdir"/zope.location-$version
  python setup.py build
}

check   {
  cd "$srcdir"/zope.location-$version
  PYTHONPATH="$PWD/build/lib:$PYTHONPATH" python -m zope.testrunner --test-path=src || echo "Tests failed"
}

package   {
  cd zope.location-$version
  python setup.py install --root=$PKG --optimize=1
}

# vim:set ts=2 sw=2 et:

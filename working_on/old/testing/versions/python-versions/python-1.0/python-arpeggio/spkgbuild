
name=python-arpeggio
version=1.10.1
release=3
# description : Packrat parser interpreter"
# depends :   python  
source="https://github.com/textX/Arpeggio/archive/$version/$name-$version.tar.gz" 

build   {
  cd Arpeggio-$version
  python setup.py build
}

check   {
  cd Arpeggio-$version
  python -m pytest
}

package   {
  cd Arpeggio-$version
  python setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

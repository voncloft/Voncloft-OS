
name=python-pyicu
version=2.6
release=3
# description : Python binding for ICU"
# depends :   python   icu  
source="https://pypi.io/packages/source/P/PyICU/PyICU-$version.tar.gz" 

build   {
  cd PyICU-$version
  python setup.py build
}

check   {
  cd PyICU-$version
  python setup.py test
}

package   {
  cd PyICU-$version
  python setup.py install --root=$PKG --optimize=1
  install -D -m644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}


_name=sphinxcontrib-mermaid
name=sphinx-$_name
version=0.3.1
release=1
# description : Mermaid diagrams in yours sphinx powered docs 
# depends :   python-sphinx  
source=" $url/archive/$version.tar.gz" 

build   {
  cd $_name-$version

  python setup.py build

  cd docs

  make html
}

package   {
  cd $_name-$version

  python setup.py install --root=$PKG --optimize=1 --skip-build

  install -Dm 644 LICENSE.rst $PKG/usr/share/licenses/$name/LICENSE

  install -dm 755 $PKG/usr/share/doc/$name
  cp -r -a --no-preserve=ownership docs/_build/html $PKG/usr/share/doc/$name
}

# vim:set ts=2 sw=2 et:

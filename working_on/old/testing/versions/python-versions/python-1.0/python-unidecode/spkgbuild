
name=python-unidecode
version=1.1.2
release=1
# description : ASCII transliterations of Unicode text 
# depends :  python 
  git
  python-setuptools
 

version   {
  cd unidecode

  git describe --tags | sed  s/^unidecode-// 
}

build   {
  cd unidecode

  python setup.py build
}

package   {
  cd unidecode

  python setup.py install --root=$PKG --optimize=1 --skip-build
}


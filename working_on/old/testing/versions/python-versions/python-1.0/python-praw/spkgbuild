
name=python-praw
version=7.1.3
release=1
# description : Python Reddit API Wrapper that allows for simple access to reddit s API"
# depends :   python-prawcore   python-update-checker   python-websocket-client  
source="https://github.com/praw-dev/praw/archive/v$version.tar.gz" 

build   {
  cd praw-$version
  python setup.py build
}

check   {
  cd praw-$version
  python setup.py pytest
}

package   {
  cd praw-$version
  python setup.py install --root=$PKG --optimize=1
}

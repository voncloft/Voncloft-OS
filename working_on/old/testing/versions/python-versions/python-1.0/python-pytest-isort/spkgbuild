
name=python-pytest-isort
version=1.3.0
release=1
# description : pytest plugin to perform isort checks  import ordering  
# depends :   python-pytest-cache   python-isort  
source="https://github.com/moccu/pytest-isort/archive/$version.tar.gz" 

build   {
  cd pytest-isort-$version
  python setup.py build
}

check   {
  # Hack entry points by installing it

  cd pytest-isort-$version
  python setup.py install --root="$PWD/tmp_install" --optimize=1
  PYTHONPATH="$PWD/tmp_install/usr/lib/python3.9/site-packages:$PYTHONPATH" py.test
}

package   {
  cd pytest-isort-$version
  python setup.py install --root=$PKG --optimize=1
  install -D -m644 LICENSE.rst $PKG/usr/share/licenses/$name/LICENSE.rst
}


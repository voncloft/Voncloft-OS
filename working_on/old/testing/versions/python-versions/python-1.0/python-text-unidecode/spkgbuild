
name=python-text-unidecode
version=1.3
release=6
# description : The most basic Text::Unidecode port"
# depends :   python  
source="https://pypi.io/packages/source/t/text-unidecode/text-unidecode-$version.tar.gz" 

build   {
  cd "$srcdir"/text-unidecode-$version
  python setup.py build
}

check   {
  cd "$srcdir"/text-unidecode-$version
  python setup.py pytest
}

package   {
  cd text-unidecode-$version
  python3 setup.py install --root=$PKG --optimize=1
}

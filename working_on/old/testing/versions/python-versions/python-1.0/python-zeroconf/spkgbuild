
name=python-zeroconf
version=0.28.8
release=1
# description : A pure python implementation of multicast DNS service discovery"
# depends :   python   python-netifaces   python-six   python-ifaddr  
source= https://github.com/jstasiak/${name}/archive/${version}.tar.gz 

build   {
  cd "${pkgbase}-${version}"
  python3 setup.py build
}

package   {
  cd "${pkgbase}-${version}"

  python setup.py install --prefix=/usr --root=$PKG --optimize=1
}

check   {
  cd "${pkgbase}-${version}"
  nosetests --exclude test_integration_with_listener_ipv6 zeroconf/test.py
}

# vim:set ts=2 sw=2 et:

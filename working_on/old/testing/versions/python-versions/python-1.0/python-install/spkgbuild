
_name=install
name=python-$_name
version=0.0.3
release=1
# description : A simple, correct PEP427 wheel installer 
# depends :   python  
         git+https://github.com/pradyunsg/installer.git  
validpgpkeys=  3DCE51D60930EBA47858BA4146F633CBB0EB4BF2   # Filipe La√≠ns  FFY00  <lains@archlinux.org>
             SKIP  

prepare   {
  cd $name

  git submodule init
  git config submodule.install/_vendor/installer.url "$srcdir"/installer
  git submodule update
}

build   {
  cd $name

  python setup.py build
}

package   {
  cd $name

  python setup.py install --root=$PKG --optimize=1 --skip-build
}


_name=kazoo
name=python-kazoo
version=2.8.0
release=2
# description : A high-level Python library that makes it easier to use Apache Zookeeper"
# depends :   python-six  
source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 

prepare   {
  mv -v "${_name}-${version}" "$name-$version"
}

build   {
  cd "$name-$version"
  python setup.py build
}

check   {
  cd "$name-$version"
  export PYTHONPATH="build:${PYTHONPATH}"
  # TODO: run zookeeper here
}

package   {
  cd "$name-$version"
  python setup.py install --skip-build \
    --optimize=1 \
    --prefix=/usr \
    --root=$PKG
    -t "${PKG}/usr/share/doc/${name}"
}

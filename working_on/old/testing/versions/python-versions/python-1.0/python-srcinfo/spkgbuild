
name=python-srcinfo
version=0.0.8
release=5

# description : Simple .SRCINFO parsing library"

# depends :   python   python-setuptools   python-parse  

source="https://pypi.python.org/packages/source/s/srcinfo/srcinfo-$version.tar.gz"
        "https://pypi.python.org/packages/source/s/srcinfo/srcinfo-$version.tar.gz.asc" 

validpgpkeys=  5134EF9EAF65F95B6BB1608E50FB9B273A9D0BB5  
          SKIP  

check   {
	cd srcinfo-"$version"
	python setup.py test
}

package   {
	cd srcinfo-"$version"
	python setup.py install --root=$PKG --optimize=1
	install -Dm644 LICENSE $PKG/usr/share/licenses/"$name"/LICENSE
}

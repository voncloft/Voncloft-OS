
name=python-aiofiles
version=0.6.0
release=3
# description : File support for asyncio 
  git
  python-setuptools
 
  python-coverage
  python-pytest-asyncio
  python-pytest
  python-pytest-cov
  python-tox
 

version   {
  cd aiofiles

  git describe --tags | sed  s/^v// 
}

build   {
  cd aiofiles

  python setup.py build
}

check   {
  cd aiofiles

  tox -e py39
}

package   {
  cd aiofiles

  python setup.py install --root=$PKG --optimize=1 --skip-build
  install -Dm 644 LICENSE $PKG/usr/share/licenses/python-aiofiles
}

# vim: ts=2 sw=2 et:

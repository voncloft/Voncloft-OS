
name=python-virtualenvwrapper
version=4.8.4
release=5
# description : Extensions to Ian Bicking s virtualenv tool"
# depends :   python-virtualenv   python-virtualenv-clone   python-stevedore 
          which  
conflicts=  python2-virtualenvwrapper  
replaces=  python2-virtualenvwrapper  
source=https://pypi.org/packages/source/v/virtualenvwrapper/virtualenvwrapper-$version.tar.gz 

build   {
  cd "$srcdir/virtualenvwrapper-$version"
  python3 setup.py build
}

package   {
  cd "$srcdir/virtualenvwrapper-$version"
  python3 setup.py install --root=$PKG -O1
  install -Dm644 LICENSE "$PKG/usr/share/licenses/$name/LICENSE"
}

# vim:set ts=2 sw=2 et:

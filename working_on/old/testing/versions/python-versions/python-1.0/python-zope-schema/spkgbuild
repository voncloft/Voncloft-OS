
name=python-zope-schema
version=6.0.1
release=1
# description : zope.interface extension for defining data schemas"
# depends :   python-setuptools   python-zope-interface   python-zope-event  
source="https://github.com/zopefoundation/zope.schema/archive/$version.tar.gz" 

build   {
  cd "$srcdir"/zope.schema-$version
  python setup.py build
}

check   {
  cd "$srcdir"/zope.schema-$version
  PYTHONPATH="$PWD/build/lib:$PYTHONPATH" python -m zope.testrunner --test-path=src
}

package   {
  cd "$srcdir"/zope.schema-$version
  python setup.py install --root=$PKG --optimize=1
}

# vim:set ts=2 sw=2 et:


name=python-stopit
_pyname=stopit
version=1.1.2
release=4
# description : Library to raise asynchronous exceptions in other thread, control the timeout of blocks or callables 
source= ${name}-${version}.tar.gz::https://github.com/glenfant/${_pyname}/archive/${version}.tar.gz 

prepare   {
  cp -ra ${_pyname}-${version}{,-py2}
}

build   {
   cd ${_pyname}-${version}
    python setup.py build
   
}

check   {
   cd ${_pyname}-${version}
    python setup.py test
   
}

package   {
  # depends :   python  
  cd ${_pyname}-${version}
  python setup.py install -O1 --root=$PKG --prefix=/usr --skip-build
}

# vim: ts=2 sw=2 et:

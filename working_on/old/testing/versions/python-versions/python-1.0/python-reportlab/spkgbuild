
_origname=reportlab
name=python-reportlab
version=3.5.60
release=1
# description : A proven industry-strength PDF generating solution"
# depends :   freetype2  
# depends :   python   python-pip   python-pillow  
source=https://files.pythonhosted.org/packages/source/${_origname::1}/${_origname}/${_origname}-${version}.tar.gz 

build   {
    cd ${_origname}-${version}
    python setup.py build
}

check   {
    cd ${_origname}-${version}
    python setup.py tests
    rm tests/_i_am_actually_a_*
}

package   {
    cd ${_origname}-${version}
    python setup.py install --root=$PKG --optimize=1 --skip-build
    install -D -m644 LICENSE.txt $PKG/usr/share/licenses/$name/license.txt
}

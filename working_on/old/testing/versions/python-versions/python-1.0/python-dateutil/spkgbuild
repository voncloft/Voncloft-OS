
pkgbase=python-dateutil
name=  python-dateutil   python2-dateutil  
version=2.8.1
release=5
# description : Provides powerful extensions to the standard datetime module"
source="https://files.pythonhosted.org/packages/source/${name:0:1}/$name/$name-$version.tar.gz"{,.asc} 
             SKIP  
validpgpkeys=  6B49ACBADCF6BD1CA20667ABCD54FCE3D964BEFB   # Paul Ganssle <paul@ganssle.io>

prepare   {
  cd "$srcdir"

  cp -r  python-dateutil-$version python2-dateutil-$version
}

build   {
  cd "$srcdir"/python-dateutil-$version
  python setup.py build

  cd "$srcdir"/python2-dateutil-$version
  python setup.py build
}

check   {
  cd python-dateutil-$version
  pytest -W ignore::pytest.PytestUnknownMarkWarning #https://github.com/pytest-dev/pytest/issues/5678
}

package_python-dateutil   {
# depends :   python-six  
  cd "$srcdir"/python-dateutil-$version
  python setup.py install --root=$PKG --optimize=1 --skip-build
  install -Dm644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

package_python2-dateutil   {
# depends :   python2-six  
  cd "$srcdir"/python2-dateutil-$version
  python2 setup.py install --root=$PKG --optimize=1 --skip-build
  install -Dm644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

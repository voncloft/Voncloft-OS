
name=python-rsa
version=4.7
release=1
_libname=rsa
# description : Pure-Python RSA implementation"
source=https://files.pythonhosted.org/packages/source/${_libname:0:1}/$_libname/$_libname-$version.tar.gz 
# depends :  python-pyasn1 

build   {
	cd "$srcdir/$_libname-$version"

	rm -rf ../buildpy3; mkdir ../buildpy3
	python setup.py build -b ../buildpy3
}

package   {
	cd "$srcdir/$_libname-$version"
	#cd "$srcdir/sybren-python-rsa-8f50f506b4a2"
	rm -rf build; ln -s ../buildpy3 build
	python setup.py install --skip-build -O1 --root=$PKG
	install -m0644 -D "LICENSE" "$PKG/usr/share/licenses/$name/LICENSE"
}


name=  python-openbabel   python2-openbabel  
version=2.3.2
release=6
# description : Python bindings for the openbabel library 
# depends :   gcc-libs  "openbabel=${version}" 
source="http://downloads.sourceforge.net/openbabel/openbabel-$version.tar.gz"
        openbabel-gcc5.patch
        openbabel-swig3.patch 
             0b022f4adeb16c8531e13871f6c6d256c8939defb5be0fe32d0a28711f2d933e 
             6c8fb33199d4b4fa03128278110275502266b915ca9c43ef0dc87f24a0cadf06  

prepare   {
  patch -d openbabel-$version -Np1 < openbabel-gcc5.patch
  patch -d openbabel-$version -Np1 < openbabel-swig3.patch

  cp -r openbabel-$version python2-openbabel-$version
}

build   {
  cd "$srcdir/openbabel-$version"

  # Create babelconfig.h
  cmake .

  # Regenerate interface with the patched swig 2.0.2
  cd scripts
  swig -O -I../include/ -python -py3 -c++  openbabel-python.i
  mv openbabel-python_wrap.cxx python/openbabel-python.cpp
  mv openbabel.py python/

  cd python
  sed -i  19i os.path.join "/usr/include/openbabel-2.0" ,  setup.py
  sed -i  20i os.path.join "/usr/include/eigen2" ,  setup.py

  cd $srcdir/python2-openbabel-$version/scripts/python
  sed -i  19i os.path.join "/usr/include/openbabel-2.0" ,  setup.py
  sed -i  20i os.path.join "/usr/include/eigen2" ,  setup.py
}

package_python-openbabel   {
  depends+=  python  

  cd "$srcdir/openbabel-$version/scripts/python"

  python setup.py install --prefix=/usr --root=$PKG --optimize=1
}

package_python2-openbabel   {
  depends+=  python2  

  cd "$srcdir/python2-openbabel-$version/scripts/python"

  python2 setup.py install --prefix=/usr --root=$PKG --optimize=1
}


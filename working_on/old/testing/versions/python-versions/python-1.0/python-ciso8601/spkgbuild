
name=python-ciso8601
version=2.1.3
release=3
# description : Fast ISO8601 date time parser for Python written in C 
# depends :  
  glibc
  python
 
  cython
  git
  python-setuptools
 

version   {
  cd ciso8601

  git describe --tags | sed  s/^v// 
}

build   {
  cd ciso8601

  python setup.py build
}

package   {
  cd ciso8601

  python setup.py install --root=$PKG --optimize=1 --skip-build
  install -Dm 644 LICENSE -t $PKG/usr/share/licenses/python-ciso8601/
}

# vim: ts=2 sw=2 et:

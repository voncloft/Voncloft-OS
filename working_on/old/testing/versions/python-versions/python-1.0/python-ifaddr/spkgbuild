
_name=ifaddr
name=python-ifaddr
version=0.1.7
release=3
# description : Enumerates all IP addresses on all network adapters of the system"
# depends :   python  
source=https://github.com/pydron/ifaddr/archive/${version}.tar.gz 

build   {
  cd "${_name}-${version}"
  python3 setup.py build
}

package   {
  cd "${_name}-${version}"

  python setup.py install --prefix=/usr --root=$PKG --optimize=1
  install -Dm644 LICENSE.txt $PKG/usr/share/licenses/${name}/LICENSE

}

check   {
  cd "${_name}-${version}"
  nosetests ${_name}/test_ifaddr.py
}

# vim:set ts=2 sw=2 et:

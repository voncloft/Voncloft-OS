
_name=pytest-regressions
name=python-$_name
version=2.0.2
release=3
# description : Pytest plugin for regression testing 
# depends :   python-pytest   python-pytest-datadir   python-yaml  
source=" $url/archive/$version.tar.gz" 

build   {
  cd $_name-$version

  SETUPTOOLS_SCM_PRETEND_VERSION=$version python setup.py build
}

package   {
  cd $_name-$version

  SETUPTOOLS_SCM_PRETEND_VERSION=$version python setup.py install --root=$PKG --optimize=1 --skip-build

  install -Dm 644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

# vim:set ts=2 sw=2 et:

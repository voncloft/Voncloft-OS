
name=python-txrequests
version=0.9.6
release=6
# description : Asynchronous Python HTTP Requests for Humans using twisted 
# depends :  python-requests python-twisted 
source="https://files.pythonhosted.org/packages/source/t/txrequests/txrequests-${version}.tar.gz" 

build   {
    cd txrequests-$version
    python setup.py build
}

check   {
    cd txrequests-$version
    python test_txrequests.py
}

package   {
    cd txrequests-$version
    python setup.py install --root=$PKG --optimize=1 --skip-build
}

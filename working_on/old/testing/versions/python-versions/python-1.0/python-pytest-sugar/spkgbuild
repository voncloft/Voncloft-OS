
name=python-pytest-sugar
version=0.9.4
_commit=92ae9dee9f76af01a64d29de5ab07ef33fc5a15b
release=3
# description : A plugin for py.test that changes the default look and feel of py.test 
# depends :   python-pytest   python-termcolor  
source="https://github.com/Frozenball/pytest-sugar/archive/$_commit/$name-$_commit.tar.gz" 

prepare   {
  mv pytest-sugar-{$_commit,$version}
}

build   {
  cd pytest-sugar-$version
  python setup.py build
}

check   {
  # Hack entry points by installing it

  cd pytest-sugar-$version
  python setup.py install --root="$PWD/tmp_install" --optimize=1
  PYTHONPATH="$PWD/tmp_install/usr/lib/python3.9/site-packages:$PYTHONPATH" pytest
}

package   {
  cd pytest-sugar-$version
  python setup.py install --root=$PKG --optimize=1
  install -D -m644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

# vim:set ts=2 sw=2 et:

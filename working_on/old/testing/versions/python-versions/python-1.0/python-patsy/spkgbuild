
name= python-patsy 
version=0.5.1
release=6
# description : A Python package for describing statistical models using symbolic formulas"
# depends :   python-numpy  
             python-scipy: needed for spline-related functions  
source="https://github.com/pydata/patsy/archive/v${version}.tar.gz" 

build   {
  cd "$srcdir"/patsy-${version}
  python setup.py build
}

package   {
  cd "$srcdir"/patsy-${version}

  python setup.py install --skip-build --root=$PKG --optimize=1

  install -Dm644 LICENSE.txt $PKG/usr/share/licenses/$name/LICENSE
}

_name=husl
name=python-husl
version=4.0.3
release=7
# description : A Python implementation of HUSL  revision 3 "
# depends :   python  
source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz"
         LICENSE  
             d796b5bec7d325a897541d9fd2712fa83bb88babd4744e7ff28202f8db153696660f1d1b2e95f0fee618d98a83ae7fb635e4a412ab9c8de30f0cb27f287a4251  

prepare   {
  mv -v "$_name-$version" "$name-$version"
  cd "$name-$version"
}

build   {
  cd "$name-$version"
  python setup.py build
}

# tests are not included. upstream contacted
#check   {
#  cd "$name-$version"
#  python setup.py test
#}

package   {
  cd "$name-$version"
  python setup.py install --skip-build \
    --optimize=1 \
    --prefix=/usr \
    --root=$PKG
  # license file not available. former maintainer contacted
  install -vDm 644 ../LICENSE -t "${PKG}/usr/share/licenses/${name}"
}

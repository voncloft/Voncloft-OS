
name=python-mtrpacket
version=1.0.0
release=2
# description : Asynchronous network probes for Python"
# depends :   mtr   python  
source="https://github.com/matt-kimball/mtr-packet-python/archive/$version/$name-$version.tar.gz" 

build   {
  cd mtr-packet-python-$version
  python setup.py build
}

check   {
  cd mtr-packet-python-$version
  ./test.sh
}

package   {
  cd mtr-packet-python-$version
  python setup.py install --root=$PKG --optimize=1

  install -Dm644 LICENSE -t $PKG/usr/share/licenses/$name/
}

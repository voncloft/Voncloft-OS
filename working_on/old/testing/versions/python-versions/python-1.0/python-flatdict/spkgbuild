
_name=flatdict
name=python-flatdict
version=4.0.1
release=2
# description : Interact with nested dicts as a single level dict with delimited keys."
# depends :   python  
source="${name}-${version}.tar.gz::https://github.com/gmr/flatdict/archive/${version}.tar.gz" 

build   {
    cd "${srcdir}"/${_name}-${version}

    python setup.py build
}

check   {
    cd "${srcdir}"/${_name}-${version}

    nosetests
}

package   {
    cd "${srcdir}"/${_name}-${version}

    python setup.py install --root=$PKG --optimize=1 --skip-build
    install -Dm644 LICENSE $PKG/usr/share/licenses/${name}/LICENSE
}

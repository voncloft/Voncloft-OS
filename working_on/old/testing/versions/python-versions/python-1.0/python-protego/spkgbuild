
name=python-protego
version=0.1.16
release=3
# description : A pure-Python robots.txt parser with support for modern conventions"
# depends :   python-six  
source="https://github.com/scrapy/protego/archive/$version.tar.gz" 

build   {
  cd protego-$version
  python setup.py build
}

check   {
  cd protego-$version
  python setup.py pytest
}

package   {
  cd protego-$version
  python setup.py install --root=$PKG --optimize=1

  install -Dm644 LICENSE -t $PKG/usr/share/licenses/$name/
}

# description	: Additional components to increase the functionality of KIO
# depends	: kio kdnssd exiv2 libmtp kpty kactivities extra-cmake-modules kdoctools gperf taglib khtml

name=kio-extras
version=20.12.1
release=1
source="https://download.kde.org/stable/release-service/$version/src/$name-$version.tar.xz"

options="!checksums"
build() {
	cd $name-$version

	mkdir build
	cd    build

	cmake -DCMAKE_INSTALL_PREFIX=/opt/kf5	\
		 -DCMAKE_BUILD_TYPE=Release	\
		 -DBUILD_TESTING=OFF		\
		 -Wno-dev ..
	make
	make DESTDIR=$PKG install
}


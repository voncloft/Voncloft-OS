# description : automatically give your module the ability to have plugins
# depends : perl

_ddir=Module-Pluggable-$version
name=perl-module-pluggable
version=5.2
release=6

source="https://search.cpan.org/CPAN/authors/id/S/SI/SIMONW/Module-Pluggable-$version.tar.gz"
options="!checksum"

build() {
   cd $_ddir
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

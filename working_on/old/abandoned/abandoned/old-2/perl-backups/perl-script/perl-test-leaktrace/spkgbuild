# description : Traces memory leaks
# depends : perl

_distdir=Test-LeakTrace-$version
name=perl-test-leaktrace
version=0.17
release=1

source="https://search.cpan.org/CPAN/authors/id/L/LE/LEEJO/Test-LeakTrace-$version.tar.gz"
options="!checksum"

build() {
     cd $_distdir
   cd $_distdir
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

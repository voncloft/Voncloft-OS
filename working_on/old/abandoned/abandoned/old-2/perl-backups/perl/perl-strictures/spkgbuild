# description : Turn on strict and make most warnings fatal
# depends : perl

name=perl-${_pkg}
version=2.000006
release=3

_pkg=strictures
source="https://cpan.metacpan.org/authors/id/H/HA/HAARG/${_pkg}-${version}.tar.gz"
options="!checksum"

build() {
     cd ${_pkg}-${version}
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : A HTML to markdown-structured text converter
# depends : python-setuptools

url=https://pypi.python.org/pypi/html2text/
name=python-html2text
version=2020.1.16
release=3

source="https://github.com/Alir3z4/html2text/archive/$version.tar.gz"
options="checksum"

build() {
   cd ${srcdir}/html2text-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : News Feed extension for Sphinx
# depends : python-sphinx

_name=sphinxcontrib-newsfeed
url=https://bitbucket.org/prometheus/sphinxcontrib-newsfeed
_name=sphinxcontrib-newsfeed
name=python-sphinxcontrib-newsfeed
version=0.1.4
release=11

source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz"
options="checksum"

build() {
   cd ${_name}-${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

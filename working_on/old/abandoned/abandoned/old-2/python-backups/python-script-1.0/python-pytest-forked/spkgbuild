# description : run tests in isolated forked subprocesses
  # depends : python-pytest
  # depends : python2-pytest

url=https://github.com/pytest-dev/pytest-forked
name=python-pytest-forked python2-pytest-forked
version=1.3.0
release=3

source="https://github.com/pytest-dev/pytest-forked/archive/v$version.tar.gz"

build() {
   cd $srcdir/pytest-forked-$version
   cd $srcdir/pytest-forked-$version-py2
   cd pytest-forked-$version
   cd pytest-forked-$version-py2
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

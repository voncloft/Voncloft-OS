# description : Functional tests for command line applications
# depends : python

url=https://bitheap.org/cram/
name=python-cram
version=0.7
release=8

source="https://bitheap.org/cram/cram-$version.tar.gz"
options="checksum"

build() {
   cd $srcdir/cram-$version
   cd cram-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

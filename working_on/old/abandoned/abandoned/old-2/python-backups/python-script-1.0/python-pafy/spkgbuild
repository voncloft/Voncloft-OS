# description : Python API for YouTube
# depends : python youtube-dl

url=https://github.com/mps-youtube/pafy
name=python-pafy
version=0.5.5
release=3

source="python-pafy-$version.tar.gz"::https://github.com/mps-youtube/pafy/archive/v$version.tar.gz"

build() {
	 cd pafy-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : A high-level Python library that makes it easier to use Apache Zookeeper
# depends : python-six

_name=kazoo
url=https://github.com/python-zk/kazoo
_name=kazoo
name=python-kazoo
version=2.8.0
release=2

source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz"
options="checksum"

build() {
   cd $name-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

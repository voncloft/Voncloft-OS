  # depends : python2-importlib-metadata

url=https://github.com/pytest-dev/pluggy
name=python-pluggy python2-pluggy
version=0.13.1
release=4

source="https://github.com/pytest-dev/pluggy/archive/$version.tar.gz"

build() {
   cd pluggy-$version
   cd pluggy-$version-py2
   cd pluggy-$version
   cd pluggy-$version-py2
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : pytest plugin with mechanisms for caching across test runs
  # depends : python-pytest python-execnet
  # depends : python2-pytest python2-execnet

_name=pytest-cache
url=https://pypi.org/project/pytest-cache/
name=python-pytest-cache python2-pytest-cache
_name=pytest-cache
version=1.0
release=8

source="https://files.pythonhosted.org/packages/source/${_name::1}/$_name/$_name-$version.tar.gz"

build() {
   cd $_name-$version
   cd $_name-$version-py2
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

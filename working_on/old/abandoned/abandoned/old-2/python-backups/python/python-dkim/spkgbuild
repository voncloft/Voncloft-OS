make# depends : python-setuptools
check# depends : python-authres python-pynacl
opt# depends : python-aiodns python-authres python-pynacl
source="https://files.pythonhosted.org/packages/source/d/dkimpy/dkimpy-$version.tar.gz"
sha256sums=9a2420bf09af686736773153fca32a02ae11ecbe24b540c26104628959f91121

build()-delete {
   cd dkimpy-$version
  python setup.py build
}

check {
   cd dkimpy-$version
  python -m unittest dkim.tests.test_suite
}

options="!checksum"

build() {
   cd dkimpy-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1 
}


# description : Simple pythonic wrapper for SoapySDR library
# depends : python python-numpy soapysdr

_name=simplesoapy
name=python-$_name
version=1.5.1
release=7
url=https://github.com/xmikos/simplesoapy
make# depends : python-setuptools
replaces=simplesoapy
source="$name-$version.tar.gz::https://github.com/xmikos/simplesoapy/archive/v$version.tar.gz"
sha256sums=4006fb23997693266fbeee0b92d7461c3801c677a6dd2931a9539f34f37aa5b2

build()-delete {
   cd $_name-$version

  python setup.py build
}

options="!checksum"

build() {
   cd $_name-$version

  python setup.py build
  python setup.py install --root=$PKG

}

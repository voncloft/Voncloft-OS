# description : "A toolbelt of useful classes and functions to be used with python-requests."
# depends : python-requests

name=python-requests-toolbelt
version=0.9.1
release=5
url="https://github.com/requests/toolbelt"
make# depends : python-setuptools python-requests
check# depends : python-pytest python-betamax python-mock python-pyopenssl
source="$name-$version.tar.gz::https://github.com/requests/toolbelt/archive/$version.tar.gz"
sha512sums=12667056c225ce0bc88a5959660103feed23810890abd3890ef15581aa64c09c0552c3974473e1742cbe6200bd37d6475ad34ec051e83d4fbf0a33f320dbc0cc

build()-delete {
   cd "$srcdir"/toolbelt-$version
  python setup.py build
}

check {
   cd "$srcdir"/toolbelt-$version
  py.test -k not test_no_content_length_header and not test_read_file and not test_reads_file_from_url_wrapper
}

options="!checksum"

build() {
   cd toolbelt-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}

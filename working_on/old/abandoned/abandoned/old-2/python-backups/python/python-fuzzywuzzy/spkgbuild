name=python-fuzzywuzzy
version=0.18.0
release=3
url="https://pypi.python.org/pypi/fuzzywuzzy"
opt# depends : python-levenshtein: provides a 4-10x speedup in string matching
make# depends : python-setuptools
check# depends : python-pytest python-hypothesis python-levenshtein python-pycodestyle
source="https://github.com/seatgeek/fuzzywuzzy/archive/$version/$name-$version.tar.gz"
sha256sums=26795bd6c319a8c789d62ecbe95e29a97711f0176d3beea04ce510981095f696

build()-delete {
   cd fuzzywuzzy-$version
  python setup.py build
}

check {
   cd fuzzywuzzy-$version
  # https://github.com/seatgeek/fuzzywuzzy/issues/284
  pytest --deselect test_fuzzywuzzy_pytest.py::test_process_warning
}

options="!checksum"

build() {
   cd fuzzywuzzy-$version
  python setup.py build
  python setup.py install --root="$PKG/" --optimize=1
}

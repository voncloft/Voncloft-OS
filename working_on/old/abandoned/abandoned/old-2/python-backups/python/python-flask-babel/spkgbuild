# description : "Adds i18n/l10n support to Flask applications with the help of the Babel library."
# depends : python-flask python-babel python-pytz python-speaklater python-jinja

_pipname=Flask-Babel
name=python-flask-babel
version=2.0.0
release=3
url="https://pypi.python.org/pypi/Flask-Babel"
make# depends : python-setuptools
source="https://pypi.io/packages/source/${_pipname:0:1}/$_pipname/$_pipname-$version.tar.gz"
sha256sums=f9faf45cdb2e1a32ea2ec14403587d4295108f35017a7821a2b1acb8cfd9257d

build()-delete {
   cd $_pipname-$version 
  python setup.py build
}

options="!checksum"

build() {
   cd $_pipname-$version 
  python setup.py build
  python setup.py install --root="$PKG/" --optimize=1 

  mkdir -p $PKG/usr/share/licenses/$name
}

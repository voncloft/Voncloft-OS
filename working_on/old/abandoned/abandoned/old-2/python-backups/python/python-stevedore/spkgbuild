# description : "Manage dynamic plugins for Python applications"
# depends : python

name=python-stevedore
version=3.3.0
release=1
url="https://github.com/openstack/stevedore"
make# depends : python-pbr
options=!emptydirs
source=https://pypi.org/packages/source/s/stevedore/stevedore-$version.tar.gz
sha256sums=3a5bbd0652bf552748871eaa73a4a8dc2899786bc497a2aa1fcb4dcdb0debeee

prepare {
   cd stevedore-$version
  # Remove dependency on pbr; its not a runtime dependency
  sed -i /pbr/d requirements.txt
}

options="!checksum"

build() {
   cd stevedore-$version
  python3 setup.py install --root=$PKG -O1
}


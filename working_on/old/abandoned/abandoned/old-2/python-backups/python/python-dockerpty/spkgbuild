# description : "Python library to use the pseudo-tty of a docker container"
# depends : python-docker-py python-six

name=python-dockerpty
version=0.4.1
release=8
url="https://github.com/d11wtq/dockerpty"
make# depends : python-setuptools python-docker-py python-six git
check# depends : python-pytest python-expects
source="git+https://github.com/d11wtq/dockerpty.git#tag=v$version"
sha512sums=SKIP

build()-delete {
   cd "$srcdir/dockerpty"
  python setup.py build
}

check {
   cd "$srcdir/dockerpty"
  py.test
}

options="!checksum"

build() {
   cd dockerpty
  python setup.py build
  python setup.py install--root=$PKG -optimize=1
}

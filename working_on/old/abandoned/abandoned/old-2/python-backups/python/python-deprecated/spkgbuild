# description : "Python @deprecated decorator to deprecate old python classes, functions or methods"
# depends : python-wrapt

name=python-deprecated
version=1.2.11
release=1
url="https://github.com/tantale/deprecated"
make# depends : python-setuptools
check# depends : python-pytest-runner
source="$name-$version.tar.gz::https://github.com/tantale/deprecated/archive/v$version.tar.gz"
sha512sums=343f62a7a658569de885ac923a1de7f7b4cc5bf63d27d1b13474795ca38cc52932e35133b45d05c1b42d498af56f5945fad5c49b3cbdebda70337294da5d84c4

build()-delete {
   cd deprecated-$version
  python setup.py build
}

check {
   cd deprecated-$version
  python setup.py pytest
}

options="!checksum"

build() {
   cd deprecated-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}

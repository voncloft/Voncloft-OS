# description : Render rich text, tables, progress bars, syntax highlighting, markdown and more to the terminal
# depends : python-colorama python-pygments python-typing_extensions python-commonmark

name=python-rich
version=9.10.0
release=1
url=https://github.com/willmcgugan/rich
make# depends : python-setuptools python-dephell
source="https://github.com/willmcgugan/rich/archive/v${version}/rich-${version}.tar.gz"
b2sums=289d71037defc3c54c6dd5b4d1f706bd0f21d5d7e07c6e9581cce935db48993e562d68e6f6c208ec80f0ff2a401dbbb5e402ce05b43c88c5f97e32c1b4666eee

prepare {
   cd rich-${version}
  dephell deps convert --from pyproject.toml --to setup.py
}

build()-delete {
   cd rich-${version}
  python3 setup.py build()
}

options="!checksum"

build() {
   cd rich-${version}
  python3 setup.py install--root=$PKG -optimize=1 
}

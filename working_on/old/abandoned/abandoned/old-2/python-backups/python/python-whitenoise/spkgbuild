make# depends : python-setuptools
check# depends : python-brotli python-django python-pytest python-requests
source="$name-$version.tar.gz::https://github.com/evansd/whitenoise/archive/v$version.tar.gz"
sha512sums=e68f89c6af86ffaee8931196a5714a47057b4d750b75053042007229ef390b287144a2d10376dbf232168277fc95ba4a40c128acd349242d041e6f5f39e92055

build()-delete {
   cd whitenoise-$version
  python setup.py build
}

check {
   cd whitenoise-$version
  DJANGO_SETTINGS_MODULE=tests.django_settings pytest
}

options="!checksum"

build() {
   cd whitenoise-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}

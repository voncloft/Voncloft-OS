# description : Reflink support for Python
# depends : python-cffi

name=python-reflink
version=0.2.1
release=1
url=https://gitlab.com/rubdos/pyreflink
make# depends : 
  git
  python-pip
  python-setuptools

_tag=48a3a3e6212e40eb44da47db9cbcb2e2c8306d50
source=git+https://gitlab.com/rubdos/pyreflink.git#tag=${_tag}
b2sums=SKIP

version {
   cd pyreflink
  git describe --tags
}

build()-delete {
   cd pyreflink
  python setup.py build
}

options="!checksum"

build() {
   cd pyreflink
  python setup.py build
  python setup.py install--root=$PKG -optimize=1
}


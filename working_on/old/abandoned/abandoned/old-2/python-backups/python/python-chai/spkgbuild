# description : "Easy to use mocking, stubbing and spying framework."
# depends : python

name=python-chai
version=1.1.2
release=5
url="https://github.com/agoragames/chai"
make# depends : python-setuptools
check# depends : python-nose
source="https://files.pythonhosted.org/packages/source/c/chai/chai-$version.tar.gz"
sha256sums=ff8d2b6855f660cd23cd5ec79bd10264d39f24f6235773331b48e7fcd637d6cc

build()-delete {
   cd chai-$version
  python setup.py build
}

check {
   cd chai-$version
  nosetests
}

options="!checksum"

build() {
   cd chai-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1 
}

make# depends : 
  git
  python-setuptools

_tag=26ffcf5ad61765f9940e463717d0f5f3e56ecbf1
source=git+https://github.com/pylast/pylast.git#tag=${_tag}
sha256sums=SKIP

version {
   cd pylast

  git describe --tags
}

build()-delete {
   cd pylast

  python setup.py build
}

options="!checksum"

build() {
   cd pylast

  python setup.py build
  python setup.py install--root=$PKG -optimize=1 
}


# description : Getting image size from png/jpeg/jpeg2000/gif file
# depends : python
name=python-imagesize
version=1.2.0
release=4

url=https://github.com/shibukawa/imagesize_py

make# depends : python-setuptools

source="https://files.pythonhosted.org/packages/source/i/imagesize/imagesize-$version.tar.gz"

sha256sums=b1f6b5a4eab1f73479a50fb79fcf729514a900c341d8503d62a62dbc4127a2b1

build()-delete {
   cd "$srcdir"/imagesize-$version
  python setup.py build
}

check {
   cd "$srcdir"/imagesize-$version
  python -m unittest discover -v
}

options="!checksum"

build() {
   cd imagesize-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1 
}

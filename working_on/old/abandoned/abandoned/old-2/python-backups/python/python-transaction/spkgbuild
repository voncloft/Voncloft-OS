build()-delete {
   cd transaction-$version
  python setup.py build
}

check {
   cd transaction-$version
  python setup.py nosetests
}

options="!checksum"

build() {
   cd transaction-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}


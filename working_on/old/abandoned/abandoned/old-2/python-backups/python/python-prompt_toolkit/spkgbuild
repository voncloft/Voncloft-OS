# description : "Library for build()ing powerful interactive command lines in Python"
# depends : python-pygments

name=python-prompt_toolkit
_name=prompt_toolkit
version=3.0.14
release=1
         python-wcwidth
make# depends : python-setuptools
check# depends : python-pytest
url="https://github.com/jonathanslenders/python-prompt-toolkit"
options=!emptydirs
source="https://files.pythonhosted.org/packages/source/p/$_name/$_name-$version.tar.gz"
sha256sums=7e966747c18ececaec785699626b771c1ba8344c8d31759a1915d6b12fad6525

build()-delete {
   cd "$_name-$version"
  python setup.py build
}

check {
   cd "$_name-$version"
  python -m pytest
}

options="!checksum"

build() {
   cd "$_name-$version"
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}

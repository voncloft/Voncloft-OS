# description : "The definitive testing tool for Python. Born under the banner of Behavior Driven Development."
# depends : python-coverage python-watchdog python-clint python-setuptools

name=python-mamba
version=0.11.2
release=1
url="https://nestorsalceda.github.io/mamba"
check# depends : python-doublex-expects
source="$name-$version.tar.gz::https://github.com/nestorsalceda/mamba/archive/v$version.tar.gz"
sha512sums=8ca6207c9df7b3388db8ecabd13456e54d8811c24f695ccc638c90bb2c975268f9e803533808f9b099651ee4744376fad3b58eaa84a6c97605631368f979915c

build()-delete {
   cd mamba-$version
  python setup.py build
}

check {
   cd mamba-$version
  # Hack entry points by installing it

  python setup.py build
  python setup.py install --root="$PWD/tmp_install" --optimize=1
  
    local site_packages=$python -c "import site; printsite.getsitepackages[0]"
    export PATH="$PWD/tmp_install/usr/bin:$PATH" PYTHONPATH="$PWD/tmp_install/${site-packages}:$PYTHONPATH"
    mamba --enable-coverage
  
}

options="!checksum"

build() {
   cd mamba-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
  install -D -m644 COPYING -t $PKG/usr/share/licenses/$name/
}

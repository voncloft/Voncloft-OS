# description : OpenStack Client Configuation Library
# depends : python-openstacksdk

name=python-os-client-config
version=2.1.0
release=4
url=https://github.com/openstack/os-client-config
make# depends : python-setuptools
check# depends : python-stestr python-oslotest python-jsonschema python-mock
              python-glanceclient
source="$name-$version.tar.gz::https://github.com/openstack/os-client-config/archive/$version.tar.gz"
sha512sums=f019b5fa44a587bf853a931c9ee86a7e83c5f0d0319f2d5f75cfd34ce947f9961a7905e80df0c06f8234c9e36dc13bfcf039264243b57dd76874bfb3fd55d7bd

export PBR_VERSION=$version

prepare {
  # FS#54781
  # https://bugs.launchpad.net/os-client-config/+bug/1707019
  sed -i "/^packages =/i package_data = os_client_config = *.json */*.json" os-client-config-$version/setup.cfg

  sed -i s/assertItemsEqual/assertCountEqual/ os-client-config-$version/os_client_config/tests/test_config.py
}

build()-delete {
   cd os-client-config-$version
  python setup.py build
}

check {
   cd os-client-config-$version
  stestr run
}

options="!checksum"

build() {
   cd os-client-config-$version
  python setup.py build
  python setup.py install --root $PKG --optimize=1
}

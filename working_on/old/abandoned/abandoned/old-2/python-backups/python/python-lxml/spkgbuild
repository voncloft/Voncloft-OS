
pkgbase=python-lxml
version=4.6.2
release=1
url="https://lxml.de/"
             python-sphinx python-sphinx_rtd_theme cython cython2
source="https://github.com/lxml/lxml/archive/lxml-$version.tar.gz"
sha512sums=81dcf5cade7b05c0e831beae7cdfbdb21e876fa55b23da98b89cbfa7960a4737efc13346ea3ade22a2448f20e036173cf5e32d43df6656c3231bfba07981f9ed

prepare {
  mv lxml-lxml-$version lxml-$version
  cp -a lxml-$version{,-py2}

  # Setting LC_CTYPE to workaround encoding issue
  export LC_CTYPE=en_US.UTF-8
}

build()-delete {
   cd "$srcdir"/lxml-$version
  python setup.py build
  make html

   cd "$srcdir"/lxml-$version-py2
}

check {
  # TODO: Find a sane way to skip inplace build()

   cd "$srcdir"/lxml-$version
  make PYTHON=python test

   cd "$srcdir"/lxml-$version-py2
}

package_python-lxml {
  # description : "Python3 binding for the libxml2 and libxslt libraries"
  # depends : python libxslt
  opt# depends : python-beautifulsoup4: support for beautifulsoup parser to parse not well formed HTML
              python-cssselect: support for cssselect
              python-html5lib: support for html5lib parser
              python-lxml-docs: offline docs

   cd lxml-$version
  python setup.py build
  python setup.py install --root=$PKG -optimize=1

  install -Dm644 doc/licenses/BSD.txt \
    $PKG/usr/share/licenses/$name/BSD.txt
  install -Dm644 doc/licenses/elementtree.txt \
    $PKG/usr/share/licenses/$name/elementtree.txt
}

  # description : "Python2 binding for the libxml2 and libxslt libraries"
              python-lxml-docs: offline docs

   cd lxml-$version-py2

  install -Dm644 doc/licenses/BSD.txt \
    $PKG/usr/share/licenses/$name/BSD.txt
  install -Dm644 doc/licenses/elementtree.txt \
    $PKG/usr/share/licenses/$name/elementtree.txt
}

package_python-lxml-docs {
  # description : "Python binding for the libxml2 and libxslt libraries docs"
  options=docs

   cd lxml-$version
  install -d $PKG/usr/share/doc/$pkgbase
  cp -r doc/html $PKG/usr/share/doc/$pkgbase

  install -Dm644 doc/licenses/BSD.txt \
    $PKG/usr/share/licenses/$name/BSD.txt
  install -Dm644 doc/licenses/elementtree.txt \
    $PKG/usr/share/licenses/$name/elementtree.txt
}

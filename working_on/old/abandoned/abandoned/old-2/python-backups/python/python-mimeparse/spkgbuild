# description : Module of basic functions for parsing mime-type names and matching them against a list of media-ranges
# depends : python

name=python-mimeparse
version=1.6.0
release=8
url="https://github.com/dbtsai/python-mimeparse"
make# depends : python-setuptools git
source="git+https://github.com/dbtsai/python-mimeparse#tag=$version"
sha512sums=SKIP

build()-delete {
   cd "$srcdir"/python-mimeparse
  python setup.py build
}

check {
   cd "$srcdir"/python-mimeparse
  python mimeparse_test.py
}

options="!checksum"

build() {
   cd python-mimeparse
  python setup.py build
  python setup.py install -O1 --root $PKG
}

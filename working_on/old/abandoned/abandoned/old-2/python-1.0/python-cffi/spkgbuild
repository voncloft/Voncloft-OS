version=1.14.4
release=1

source="https://foss.heptapod.net/pypy/cffi/-/archive/v$version/cffi-v$version.tar.bz2

build() {
   cd cffi-v$version
   cd cffi-v$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

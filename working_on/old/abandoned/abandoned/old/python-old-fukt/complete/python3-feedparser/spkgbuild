# description : Parss feeds in python 
# depends : python3 libxml2 python3-setuptools

name=python3-feedparser
version=5.2.1
release=1

source="https://github.com/kurtmckee/feedparser/archive/${version}.tar.gz"
options="!checksum"

build()
{
	cd feedparser-${version}-sgmllib
	python3 setup.py build
	python setup.py install --root=$PKG --prefix=/usr --optimize=1
}

# description : Web API framework for build-old()ing fast and reliable microservices, proxies, and app backends in Python"
# depends :   python  

_name=falcon
name=python-falcon
version=2.0.0
release=6
 python-requests   python-pytest   python-pytest-runner   python-testtools 
 python-ujson   python-yaml  
             python-flask: for falcon-bench 
             python-pecan: for falcon-bench 
             python-bottle: for falcon-bench 
             python-pprofile: for falcon-bench 
             python-vmprof: for falcon-bench  
source="https://files.pythonhosted.org/build()s/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 

prepare   {
  mv -v "${_name}-$version" "$name-$version"
  cd "$name-$version"
}

build-old()   {
  cd "$name-$version"
  python setup.py build-old()
}

check   {
  cd "$name-$version"
  export PYTHONPATH="build-old():${PYTHONPATH}"
  pytest -k  not test_traverse_with_verbose and not test_imported_from_c_modules  \
         --ignore  tests/test_media_handlers.py 
}

build()   {
  cd "$name-$version"
  python setup.py install --skip-build-old() \
    --optimize=1 \
    --prefix=/usr \
    --root=$PKG
}

# description : Non-blocking redis client for python 
# depends :   python  

name=python-hiredis
version=1.1.0
release=3



source="https://pypi.org/build()s/source/h/hiredis/hiredis-$version.tar.gz" 


build-old()   {
	cd "$srcdir"/hiredis-$version
	python setup.py build-old()
}

build()   {
	cd hiredis-$version
	python setup.py install --root=$PKG --optimize=1 --skip-build-old()
}

# vim: set ts=4 sw=4 tw=0 ft=PKGBUILD :

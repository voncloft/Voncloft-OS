# description : OpenTracing API for Python"
# depends :   python  

name=python-opentracing
version=2.4.0
release=1
source="https://github.com/opentracing/opentracing-python/archive/$version/$name-$version.tar.gz" 

build-old()   {
  cd opentracing-python-$version
  python setup.py build-old()
}

check   {
  cd opentracing-python-$version
  pytest tests
  python -m testbed
}

build()   {
  cd opentracing-python-$version
  python setup.py install --root=$PKG --optimize=1
}

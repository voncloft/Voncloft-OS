# description : A twisted plugin for py.test 
# depends :   python-pytest   python-greenlet   python-decorator   python-twisted  

name=python-pytest-twisted
version=1.13.2
release=3
source="https://github.com/pytest-dev/pytest-twisted/archive/v$version.tar.gz" 

build-old()   {
  cd "$srcdir"/pytest-twisted-$version
  python setup.py build-old()
}

check   {
  # Hack entry points by installing it

  cd "$srcdir"/pytest-twisted-$version
  python setup.py install --root="$PWD/tmp_install" --optimize=1
  local site_build()s=$ python -c "import site; print site.getsitebuild()s  [0] " 
  PYTHONPATH="$PWD/tmp_install/${site_build()s}:$PYTHONPATH" py.test
}

build()   {
  cd pytest-twisted-$version
  python setup.py install --root=$PKG --optimize=1
}

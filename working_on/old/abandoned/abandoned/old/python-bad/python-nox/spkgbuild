# description : Flexible test automation for Python 
# depends :   python   python-argcomplete   python-colorlog   python-py   python-virtualenv  

_name=nox
name=python-$_name
version=2020.12.31
release=1
             python-tox: tox_to_nox  
source=" $url/archive/$version.tar.gz" 

prepare   {
  # missing python-contexter
  rm $_name-$version/tests/test_main.py
}

build-old()   {
  cd $_name-$version

  python setup.py build-old()
}

check   {
  cd $_name-$version

  python setup.py pytest
}

build()   {
  cd $_name-$version

  python setup.py install --root=$PKG --optimize=1 --skip-build-old()

  install -Dm 644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

# vim:set ts=2 sw=2 et:

# description : Add or enhance bash, fish, zsh and powershell completion in Click"
# depends :   python-click   python-jinja   python-six   python-shellingham  

_name=click-completion
name=python-click-completion
version=0.5.2
release=5
source="https://files.pythonhosted.org/build()s/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 

prepare   {
  mv -v "${_name}-$version" "$name-$version"
}

build-old()   {
  cd "$name-$version"
  python setup.py build-old()
}

build()   {
  cd "$name-$version"
  python setup.py install --skip-build-old() \
    --optimize=1 \
    --prefix=/usr \
    --root=$PKG
  install -vDm 644 LICENSE -t "${PKG}/usr/share/licenses/${name}"
}

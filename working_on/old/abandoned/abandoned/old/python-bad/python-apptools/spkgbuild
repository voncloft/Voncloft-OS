# description : Application tools"
# depends :   python-traits  

name= python-apptools 
version=4.5.0
release=3
             python-traitsui: for user interface to apptools  
source="apptools-$version.tar.gz::https://github.com/enthought/apptools/archive/${version}.tar.gz" 

build-old()   {
  cd "$srcdir"/apptools-$version

  python setup.py build-old()
}

build()   {
  cd "$srcdir"/apptools-$version

  python setup.py install --root=$PKG/  --optimize=1

  install -D LICENSE.txt $PKG/usr/share/licenses/$name/LICENSE
}

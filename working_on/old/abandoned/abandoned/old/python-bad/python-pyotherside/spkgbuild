# description : Asynchronous Python 3 Bindings for Qt5 
# depends :   python   qt5-base   qt5-declarative   qt5-svg  

name=python-pyotherside
_pyname=pyotherside
version=1.5.8
release=3
source="${name}-${version}.tar.gz::https://github.com/thp/${_pyname}/archive/${version}.tar.gz" 

build-old()   {
	cd "${_pyname}-${version}/"

	qmake-qt5
	make
}

build()   {
	cd "${_pyname}-${version}/"

	make INSTALL_ROOT="${PKG}/" install

	rm -r "${PKG}/usr/tests"
}

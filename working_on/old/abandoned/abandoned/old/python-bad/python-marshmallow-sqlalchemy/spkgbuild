# description : SQLAlchemy integration with marshmallow 
# depends :  

name=python-marshmallow-sqlalchemy
version=0.24.1
release=1
  python-marshmallow
  python-sqlalchemy
 
  git
  python-setuptools
 

version   {
  cd marshmallow-sqlalchemy

  git describe --tags
}

build-old()   {
  cd marshmallow-sqlalchemy

  python setup.py build-old()
}

build()   {
  cd marshmallow-sqlalchemy

  python setup.py install --root=$PKG --optimize=1 --skip-build-old()
  install -Dm 644 LICENSE -t $PKG/usr/share/licenses/python-marshmallow-sqlalchemy/
}


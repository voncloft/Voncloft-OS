# description : Powerful and robust templating system for Python"
# depends :   python  

_name=empy
name=python-empy
version=3.3.4
release=5
source="http://www.alcyone.com/software/empy/$_name-$version.tar.gz" 

build-old()   {
  cd $_name-$version
  python3 setup.py build-old()
}

build()   {
  cd $_name-$version 
  python3 setup.py install --root=$PKG --optimize=1
}

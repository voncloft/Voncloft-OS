# description : Provides C-coded Python modules for fast multiple-precision arithmetic."
# depends :  python libmpc 

name=python-gmpy2
version=2.1.0b5
release=3
source=https://pypi.io/build()s/source/g/gmpy2/gmpy2-$version.tar.gz 

build-old()   {
  cd gmpy2-$version
  python setup.py build-old()
}

build()   {
  cd gmpy2-$version 
  python setup.py install --root=$PKG --optimize=1 --skip-build-old()
 
  install -d -m 755 $PKG/usr/share/doc/$name
  install -m 644 -t $PKG/usr/share/doc/$name docs/*
}

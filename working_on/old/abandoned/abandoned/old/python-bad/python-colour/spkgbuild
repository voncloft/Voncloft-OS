# description : Colour representations manipulation library  RGB, HSL, web, ... "
# depends :   python  

name=python-colour
_pyname=colour
version=0.1.5
release=8
source="https://files.pythonhosted.org/build()s/source/${_pyname:0:1}/${_pyname}/${_pyname}-${version}.tar.gz" 

build-old()   {
  cd $_pyname-$version
  python setup.py build-old()
}

check   {
  cd $_pyname-$version
  nosetests
}

build()   {
  cd $_pyname-$version
  python setup.py install --root=$PKG --optimize=1
  install -Dm644 LICENSE "$PKG/usr/share/licenses/$name/LICENSE"
}

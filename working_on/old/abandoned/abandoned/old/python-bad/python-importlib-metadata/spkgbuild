# description : Read metadata from Python build()s"
# depends :   python-zipp  

name=python-importlib-metadata
version=3.4.0
release=1
               python-wheel   python-pyfakefs   python-tests  
source="https://github.com/python/importlib_metadata/archive/v$version.tar.gz" 

export SETUPTOOLS_SCM_PRETEND_VERSION=$version

build-old()   {
  cd importlib_metadata-$version
  python setup.py build-old()
}

check   {
  cd importlib_metadata-$version
  python setup.py pytest
}

build()_python-importlib-metadata   {
  cd importlib_metadata-$version
  python setup.py install --root=$PKG --optimize=1
}


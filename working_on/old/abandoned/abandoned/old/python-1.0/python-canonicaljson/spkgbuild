name=python-canonicaljson
version=1.4.0
release=3

pkgdesc='Canonical JSON'
url='https://pypi.python.org/pypi/canonicaljson/'

depends=('python' 'python-simplejson' 'python-frozendict')
makedepends=('python-setuptools')

source=("python-canonicaljson-$version.tar.gz::https://github.com/matrix-org/python-canonicaljson/archive/v${version}.tar.gz")

md5sums=('2ed56bbdb94455d4ab53aa93d8dd5951')

build() {
	cd python-canonicaljson-$version
	python setup.py build
}

check() {
	cd python-canonicaljson-$version
	python setup.py test
}

package() {
	cd python-canonicaljson-$version
	python setup.py install --root="$pkgdir" --optimize=1 --skip-build
}


# Contributor: rnons <remotenonsense at gmail dot com>

name=python-whoosh
version=2.7.4
release=7
pkgdesc="Fast, pure-Python full text indexing, search, and spell checking library"
url="https://github.com/mchaput/whoosh"
depends=('python')
makedepends=('python-setuptools' 'git')
checkdepends=('python-pytest-runner')
source=("git+https://github.com/mchaput/whoosh#tag=v$version")
md5sums=('SKIP')

build() {
  cd "$srcdir"/whoosh
  python setup.py build
}

check() {
  cd "$srcdir"/whoosh
  python setup.py ptr || echo "Tests failed"
}

package() {
  cd whoosh
  python setup.py install -O1 --root="$pkgdir"
  install -D -m644 LICENSE.txt "$pkgdir"/usr/share/licenses/$name/LICENSE.txt
}

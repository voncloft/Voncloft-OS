# Maintainer: Daniel M. Capella <polyzen@archlinux.org>

_name=sphinxcontrib-applehelp
name=python-sphinxcontrib-applehelp
version=1.0.2
release=3
pkgdesc='Sphinx extension which outputs Apple help books'
url=https://github.com/sphinx-doc/sphinxcontrib-applehelp
makedepends=('python-setuptools')
checkdepends=('python-pytest' 'python-sphinx')
source=("https://files.pythonhosted.org/packages/source/${_name::1}/$_name/$_name-$version.tar.gz")
sha256sums=('a072735ec80e7675e3f432fcae8610ecf509c5f1869d17e2eecff44389cdbc58')

build() {
  cd $_name-$version
  python setup.py build
}

check() {
  cd $_name-$version
  pytest
}

package() {
  cd $_name-$version
  python setup.py install --root="$pkgdir" --optimize=1 --skip-build
  install -Dm644 -t "$pkgdir"/usr/share/licenses/$name LICENSE
}

# vim:set ts=2 sw=2 et:

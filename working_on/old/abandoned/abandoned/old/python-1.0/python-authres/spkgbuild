name=python-authres
version=1.2.0
release=5
pkgdesc='Python Authentication-Results headers generation and parsing'
url=https://launchpad.net/authentication-results-python
depends=('python')
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/a/authres/authres-$version.tar.gz")
sha256sums=('93d1b995ad7ce21e62db649f361048125dd6022563a0ae8a23909465f1fd25b7')
 
build() {
  cd authres-$version
  python setup.py build 
}

check() {
  cd authres-$version
  python -m authres -v
}

package() {
  cd authres-$version
  python setup.py install --root="$pkgdir" --optimize=1 --skip-build
}

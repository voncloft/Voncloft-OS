name=python-breathe
version=4.26.1
release=2
pkgdesc="An extension to reStructuredText and Sphinx to be able to read and render Doxygen xml output"
url="https://breathe.readthedocs.org/en/latest/"
depends=('python' 'python-sphinx' 'python-docutils' 'python-six')
makedepends=('git' 'python-setuptools')
checkdepends=('python-pytest')
source=("git+https://github.com/michaeljones/breathe#tag=v${version}?signed")
sha512sums=('SKIP')
validpgpkeys=('8AED58021FEACDD5F27BA0E6A72F627716EA9D96') # Melvin Vermeeren <vermeeren@vermwa.re>

check() {
  cd breathe
  PYTHONPATH="$PWD" make test
}

build() {
  cd breathe
  python setup.py build
}

package_python-breathe() {
  cd "breathe"
  PYTHONHASHSEED=0 python setup.py install --root="${pkgdir}" --skip-build --optimize=1

  install -D -m644 LICENSE -t "${pkgdir}/usr/share/licenses/${name}"
}

# Maintainer: Felix Yan <felixonmars@archlinux.org>
# Contributor: Arvedui <arvedui@posteo.de>

pkgbase=python-retrying
name=(python-retrying python2-retrying)
version=1.3.3
release=9
pkgdesc="A general purpose Python retyring library"
url="https://github.com/rholder/retrying/releases"
makedepends=('python-setuptools' 'python2-setuptools' 'python-six' 'python2-six')
source=("https://github.com/rholder/retrying/archive/v$version.tar.gz")
md5sums=(85ccf5a3a8b32d4091bcde8dabfce060)

prepare() {
  cd "$srcdir"
  cp -a retrying-$version{,-py2}
}

build() {
  cd "$srcdir"/retrying-$version
  python setup.py build

  cd "$srcdir"/retrying-$version-py2
  python2 setup.py build
}

check() {
  cd "$srcdir"/retrying-$version
  python setup.py test

  cd "$srcdir"/retrying-$version-py2
  python2 setup.py test
}

package_python-retrying() {
  depends=('python-six')

  cd "$srcdir/retrying-$version"
  python setup.py install --root="$pkgdir/" --optimize=1
}

package_python2-retrying() {
  depends=('python2-six')

  cd "$srcdir/retrying-$version-py2"
  python2 setup.py install --root="$pkgdir/" --optimize=1
}


# Maintainer: Kyle Keen <keenerd@gmail.com>

pkgbase=python-pickleshare
name=(python-pickleshare python2-pickleshare)
version=0.7.5
release=5
pkgdesc="File system based database that uses python pickles"
url="https://github.com/pickleshare/pickleshare"
depends=('python')
makedepends=('python-setuptools' 'python2-setuptools' 'python2-pathlib')
source=("https://files.pythonhosted.org/packages/source/p/pickleshare/pickleshare-$version.tar.gz")
md5sums=('44ab782615894a812ab96669a122a634')

prepare() {
  cd "$srcdir"
  cp -r pickleshare-$version  python2-pickleshare-$version
}

build() {
  cd "$srcdir"
}

package_python-pickleshare() {
  cd "$srcdir/pickleshare-$version"
  python3 setup.py install --prefix=/usr --root="$pkgdir" --optimize=0
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$name/LICENSE"
}

package_python2-pickleshare() {
  depends=('python2' 'python2-pathlib')
  cd "$srcdir/python2-pickleshare-$version"
  sed -i 's/env python$/env python2/' pickleshare.py
  python2 setup.py install --prefix=/usr --root="$pkgdir" --optimize=0
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$name/LICENSE"
}

name=python-pikepdf
version=2.5.2 
release=1
pkgdesc='Read and write PDFs with Python, powered by qpdf'
url='https://github.com/pikepdf/pikepdf'
makedepends=(pybind11 python-setuptools-scm python-wheel python-toml)
depends=(python-lxml python-pillow qpdf)
source=(https://pypi.python.org/packages/source/p/pikepdf/pikepdf-$version.tar.gz)
sha256sums=('8fc3e97b24dafbd4b1ac057c8f144c18467ce55d342a1a8c42688890ead58ef3')

prepare() {
  sed -e '/setuptools_scm_git_archive/d' -i pikepdf-$version/setup.py # Remove unused build dependency
}

build() {
  cd pikepdf-$version
  python setup.py build
}

package() {
  cd pikepdf-$version
  python setup.py install --root="$pkgdir" --prefix=/usr --optimize=1 --skip-build
  install -Dm644 LICENSE.txt -t "$pkgdir"/usr/share/licenses/$name
}

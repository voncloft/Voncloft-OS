# description : Binding for DBus messaging protocol
# depends : dbus perl-xml-twig

name=perl-net-dbus
version=1.2.0
release=2
url=https://search.cpan.org/dist/Net-DBus
source="https://www.cpan.org/authors/id/D/DA/DANBERR/Net-DBus-${version}.tar.gz"
options="!checksum"
sha256sums=e7a1ac9ef4a1235b3fdbd5888f86c347182306467bd79abc9b0756a64b441cbc

build-delete {
  cd  Net-DBus-${version}
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  Net-DBus-${version}
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Permits access from Perl to the gettext family of functions
# depends : gettext perl

name=perl-locale-gettext
_realname=Locale-gettext
version=1.07
release=10
url=https://search.cpan.org/dist/${_realname}/
source="https://search.cpan.org/CPAN/authors/id/P/PV/PVANDRY/${_realname}-${version}.tar.gz"
options="!checksum"
md5sums=bc652758af65c24500f1d06a77415019

build-delete {
  cd ${srcdir}/${_realname}-${version}

  # install module in vendor directories.
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd ${srcdir}/${_realname}-${version}

  make test
}

build() {
  cd ${srcdir}/${_realname}-${version}
  make install DESTDIR=$PKG

  # remove perllocal.pod and .packlist
  find $PKG -name perllocal.pod -delete
  find $PKG -name .packlist -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

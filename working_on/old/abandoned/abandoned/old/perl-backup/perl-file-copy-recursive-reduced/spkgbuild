# description : Recursive copying of files and directories within Perl 5 toolchain
# depends : perl

name=perl-file-copy-recursive-reduced
version=0.006
release=4
make# depends : perl-capture-tiny perl-path-tiny
url=https://search.cpan.org/dist/File-Copy-Recursive-Reduced
source="https://search.cpan.org/CPAN/authors/id/J/JK/JKEENAN/File-Copy-Recursive-Reduced-$version.tar.gz"
options="!checksum"
sha512sums=7cf888b8c004d9430c87c1cceba25e997cb12974a79c3f4d803b11779abef81f5b686caac4c46a70caadb2eee12a71cb1fb87abfc7d5fec43dc37bbd2ef07694

build-delete {
  cd $srcdir/File-Copy-Recursive-Reduced-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd $srcdir/File-Copy-Recursive-Reduced-$version
  make test
}

build() {
  cd $srcdir/File-Copy-Recursive-Reduced-$version
  make DESTDIR=$PKG install
}

# vim:set ts=2 sw=2 et:
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

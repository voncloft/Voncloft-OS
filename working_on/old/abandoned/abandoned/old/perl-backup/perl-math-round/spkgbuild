# description : Perl extension for rounding numbers
# depends : perl

name=perl-math-round
version=0.07
release=4
url=https://search.cpan.org/dist/Math-Round
source="https://www.cpan.org/authors/id/G/GR/GROMMEL/Math-Round-$version.tar.gz"
options="!checksum"
md5sums=b74c5d2a3f891c19dafd7ce638732fd1

build-delete {
  cd  ${srcdir}/Math-Round-${version}
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd  ${srcdir}/Math-Round-${version}
  make test
}

build() {
  cd  ${srcdir}/Math-Round-${version}
  make install DESTDIR=$PKG

  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

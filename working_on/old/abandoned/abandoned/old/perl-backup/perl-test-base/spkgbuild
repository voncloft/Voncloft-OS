# description : A Data Driven Testing Framework
# depends : perl-spiffy>=0.30

name=perl-test-base
version=0.89
release=2
url=https://search.cpan.org/dist/Test-Base
source="https://www.cpan.org/authors/id/I/IN/INGY/Test-Base-$version.tar.gz"
options="!checksum"
sha256sums=2794a1aaaeb1d3a287dd2c7286258663796562f7db9ccc6b424bc4f1de8ad014

build-delete {
  cd  $srcdir/Test-Base-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  $srcdir/Test-Base-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

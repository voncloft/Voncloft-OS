# description : Routines for manipulating stashes
# depends : perl-dist-checkconflicts perl-package-stash-xs perl-module-implementation

name=perl-package-stash
version=0.39
release=1
url=https://search.cpan.org/dist/Package-Stash
check# depends : perl-cpan-meta-check perl-test-fatal perl-test-needs
source="https://search.cpan.org/CPAN/authors/id/E/ET/ETHER/Package-Stash-$version.tar.gz"
options="!checksum"
sha512sums=c5a6cd56c86fb9f6c8585ee7f65d0add8e905c586747763c7841a054f3540b6bc505f57952f44bb90a6bb500d0d60d20ad5df7a40944480abbc9d8d43d64e30f

build-delete {
  cd Package-Stash-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd Package-Stash-$version
  make test
}

build() {
  cd Package-Stash-$version
  make DESTDIR=$PKG install
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Perl/CPAN Module Net::XMPP
# depends : perl-digest-sha1 perl-xml-stream perl-digest-hmac

name=perl-net-xmpp
version=1.05
release=6
url=https://search.cpan.org/dist/Net-XMPP
make# depends : perl-digest-sha1 perl-xml-stream perl-module-build
source="https://search.cpan.org/CPAN/authors/id/D/DA/DAPATRICK/Net-XMPP-$version.tar.gz"
options="!checksum"
md5sums=6fdfeecde1b7eea1a24413e6557a97e2

build-delete {
  cd $srcdir/Net-XMPP-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/Net-XMPP-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

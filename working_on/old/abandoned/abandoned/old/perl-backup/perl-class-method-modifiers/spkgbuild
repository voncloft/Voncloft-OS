# description : provides Moose-like method modifiers
# depends : perl

name=perl-class-method-modifiers
version=2.12
release=6
make# depends : perl-test-fatal perl-test-requires
url=https://search.cpan.org/dist/Class-Method-Modifiers
source="https://cpan.metacpan.org/authors/id/E/ET/ETHER/Class-Method-Modifiers-${version}.tar.gz"
options="!checksum"
sha512sums=18c7cdff214d39a475b116cc5e6dda043c31765bcdfa9a1fa7242ce61e42583c4981d41a43ba556fb5a057e0cfbd5e52dd60048ea7dfae0fec3618dc47876dd4

build-delete {
  cd ${srcdir}/Class-Method-Modifiers-${version}
  export PERL_MM_USE_DEFAULT=1 PERL5LIB= \
    PERL_AUTOINSTALL=--skipdeps \
    PERL_MM_OPT=INSTALLDIRS=vendor DESTDIR=$PKG \
    PERL_MB_OPT=--installdirs vendor --destdir $PKG \
    MODULEBUILDRC=/dev/null
  perl Makefile.PL
  make
}

check {
  cd ${srcdir}/Class-Method-Modifiers-${version}
  export PERL_MM_USE_DEFAULT=1 PERL5LIB= \
    PERL_AUTOINSTALL=--skipdeps \
    PERL_MM_OPT=INSTALLDIRS=vendor DESTDIR=$PKG \
    PERL_MB_OPT=--installdirs vendor --destdir $PKG \
    MODULEBUILDRC=/dev/null
  make test
}

build() {
  cd ${srcdir}/Class-Method-Modifiers-${version}
  export PERL_MM_USE_DEFAULT=1 PERL5LIB= \
    PERL_AUTOINSTALL=--skipdeps \
    PERL_MM_OPT=INSTALLDIRS=vendor DESTDIR=$PKG \
    PERL_MB_OPT=--installdirs vendor --destdir $PKG \
    MODULEBUILDRC=/dev/null
  make install
  find $PKG -name .packlist -o -name perllocal.pod -delete
}

# Local Variables:
# mode: shell-script
# sh-basic-offset: 2
# End:
# vim:set ts=2 sw=2 et:
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : XML-Filter-BufferText perl module filter to put all characters in one event
# depends : perl>=5.10.0 perl-xml-sax

name=perl-xml-filter-buffertext
version=1.01
release=9
url=https://search.cpan.org/dist/XML-Filter-BufferText/
source="https://search.cpan.org/CPAN/authors/id/R/RB/RBERJON/XML-Filter-BufferText-$version.tar.gz"
options="!checksum"
md5sums=2992c0387632583b966ab9c965b25512

build-delete {
   cd $sr cdir/XML-Filter-BufferText-${version}
  # Install module into the vendor directories.
  perl Makefile.PL INSTALLDIRS=vendor
  make
  make test
}

build() {
   cd $sr cdir/XML-Filter-BufferText-${version}
  make DESTDIR=$PKG install

  # Remove .packlist and perllocal.pod files.
  find $PKG -name .packlist -delete
  find $PKG -name perllocal.pod -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

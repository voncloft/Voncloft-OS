# description : Datetime sets and set math
# depends : perl>=5.10.0 perl-set-infinite>=0.59 perl-datetime>=0.12

name=perl-datetime-set
version=0.3900
release=4
url=https://search.cpan.org/dist/DateTime-Set
source="https://www.cpan.org/authors/id/F/FG/FGLOCK/DateTime-Set-$version.tar.gz"
options="!checksum"
sha256sums=94f41c3924aafde4ef7fa6b58e0595d4038d8ac5ffd62ba111b13c5f4dbc0946

build-delete {
   cd  $sr cdir/DateTime-Set-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
   cd  $sr cdir/DateTime-Set-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Common source code filters for Inline Modules
# depends : perl-inline perl-inline-c

name=perl-inline-filters
version=0.20
release=3
url=https://metacpan.org/release/Inline-Filters
check# depends : perl-test-pod
source="https://cpan.metacpan.org/authors/id/R/RU/RURBAN/Inline-Filters-$version.tar.gz"
options="!checksum"
sha512sums=d1f26682ab7a05bbc1951e87efe94c82b6420633f7f3ce7605e40a4272756a44998ec92c078c1b31dd9e25550c813d19e9829770ad16ae6774 cdaf8a85eba620

build-delete {
   cd Inline-Filters-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
   cd Inline-Filters-$version
  make test
}

build() {
   cd Inline-Filters-$version
  make DESTDIR=$PKG install
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Type constraints and coercions for Perl
# depends : perl-role-tiny perl-test-fatal perl-mro-compat perl-devel-stacktrace

name=perl-specio
version=0.43
release=2
url=https://search.cpan.org/dist/Specio
source="https://search.cpan.org/CPAN/authors/id/D/DR/DROLSKY/Specio-$version.tar.gz"
options="!checksum"
sha256sums=3 cd0debf7b6404127d5e0bb7fb78cfef9df5e2519d3d6ad7113b59ad1da9fa1d

build-delete {
   cd  $sr cdir/Specio-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor 
  make
}
build() {
   cd  $sr cdir/Specio-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Perl/CPAN Module Convert::ASN1 : Standard endecode of ASN1 structures

name=perl-convert-asn1
version=0.27
release=6
url=https://search.cpan.org/dist/Convert-ASN1
source="https://search.cpan.org/CPAN/authors/id/G/GB/GBARR/Convert-ASN1-$version.tar.gz"
options="!checksum"
md5sums=68723e96be0b258a9e20480276e8a62c

build-delete {
   cd $sr cdir/Convert-ASN1-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
   cd $sr cdir/Convert-ASN1-$version
  make pure_install doc_install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

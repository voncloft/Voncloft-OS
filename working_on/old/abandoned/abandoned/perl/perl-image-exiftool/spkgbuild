# description : Reader and rewriter of EXIF informations that supports raw files
# depends : perl

name=perl-image-exiftool
_srcname=Image-ExifTool
version=12.16
release=1
url=https://search.cpan.org/perldoc?exiftool
opt# depends : perl-archive-zip: Support for ZIP-files, including EPUB
provides=perl-exiftool=$version
replaces=perl-exiftool
source="https://search.cpan.org/CPAN/authors/id/E/EX/EXIFTOOL/${_srcname}-$version.tar.gz"
options="!checksum"
md5sums=6b56597fdf820d6aabab804401e8694b

build-delete {
   cd ${sr cdir}/${_srcname}-${version}
  # install module in vendor directories.
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
   cd ${sr cdir}/${_srcname}-${version}
  make test
}

build() {
   cd ${sr cdir}/${_srcname}-${version}
  make DESTDIR=$PKG install
  install -dm755 $PKG/usr/share/$name
  cp -r fmt_files config_files arg_files $PKG/usr/share/$name
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

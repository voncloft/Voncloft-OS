# description : Determine the locale encoding
# depends : perl

name=perl-encode-locale
version=1.05
release=7
url=https://search.cpan.org/dist/Encode-Locale
source="https://search.cpan.org/CPAN/authors/id/G/GA/GAAS/Encode-Locale-$version.tar.gz"
options="!checksum"
sha1sums=1e1632e869cb76e3fdbda0a83a192190ed178d60

build-delete {
   cd Encode-Locale-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
   cd Encode-Locale-$version
  make test
}

build() {
   cd Encode-Locale-$version
  make DESTDIR=$PKG install
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Provide utility methods for factory classes
# depends : perl

name=perl-class-factory-util
version=1.7
release=10
url=https://search.cpan.org/dist/Class-Factory-Util/
make# depends : perl-module-build
source="https://search.cpan.org/CPAN/authors/id/D/DR/DROLSKY/Class-Factory-Util-1.7.tar.gz"
options="!checksum"
md5sums=aebd79da361b676a7e cd3245fc3d1b3f

build-delete {
   cd $sr cdir/Class-Factory-Util-${version}
  # install module in vendor directories.
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
   cd $sr cdir/Class-Factory-Util-${version}
  make install DESTDIR=$PKG

  # remove perllocal.pod and .packlist
  find $PKG -name perllocal.pod -delete
  find $PKG -name .packlist -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

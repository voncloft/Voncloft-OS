# description : Extract meta information from image files
# depends : perl

name=perl-image-info
version=1.41
release=4
url=https://search.cpan.org/dist/Image-Info
source="https://search.cpan.org/CPAN/authors/id/S/SR/SREZIC/Image-Info-$version.tar.gz"
options="!checksum"
sha256sums=c546d27414686660dbc3 cd8501537128c5285a8db0faf742c2dc12b9a29ba3db

build-delete {
   cd $sr cdir/Image-Info-$version
  export PERL_MM_USE_DEFAULT=1
  perl Makefile.PL INSTALLDIRS=vendor
  make
  make test
}

build() {
   cd $sr cdir/Image-Info-$version
  make DESTDIR=$PKG/ install
  find $PKG -name .packlist -o -name perllocal.pod -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

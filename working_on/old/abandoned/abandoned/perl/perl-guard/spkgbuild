# description : safe cleanup blocks

name=perl-guard
version=1.023
release=11
url=https://metacpan.org/release/Guard
make# depends : perl
source="https://search.cpan.org/CPAN/authors/id/M/ML/MLEHMANN/Guard-${version}.tar.gz"
options="!checksum"
md5sums=dbbb944601a31f60ee58954ad4cb65b4

build-delete {
   export PERL_MM_USE_DEFAULT=1 PERL5LIB=                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT=INSTALLDIRS=vendor     \
      PERL_MB_OPT=--installdirs vendor \
      MODULEBUILDRC=/dev/null

     cd ${sr cdir}/Guard-${version}
    /usr/bin/perl Makefile.PL
    make
  
}

check {
   export PERL_MM_USE_DEFAULT=1 PERL5LIB=
     cd ${sr cdir}/Guard-${version}
    make test
  
}

build() {
     cd ${sr cdir}/Guard-${version}
    make DESTDIR=$PKG install
}

# Local Variables:
# mode: shell-script
# sh-basic-offset: 2
# End:
# vim:set ts=2 sw=2 et:
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : CPANPLUS backend for building ArchLinux pacman packages
# depends : perl perl-cpanplus perl-pod-parser

name=perl-cpanplus-dist-arch
version=1.32
release=6
url=https://metacpan.org/release/CPANPLUS-Dist-Arch
source="https://search.cpan.org/CPAN/authors/id/J/JN/JNBEK/CPANPLUS-Dist-Arch-$version.tar.gz"
options="!checksum"
md5sums=673be0f0651e975faf4aa59536361d60
sha512sums=92aa6214c56b73c5ce48998a9cc86d619ac3e8c01c1 cd3445a99fc9dbc4740923f0cc7708f7270dbc1e930cc783366f98833a8ae58a62f225b614d626c79665d
_ddir=CPANPLUS-Dist-Arch-$version

build-delete

   cd $sr cdir/$_ddir
  export PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL=--skipdeps
  unset PERL5LIB PERL_MM_OPT
  /usr/bin/perl Makefile.PL
  make


check

   cd $sr cdir/$_ddir
  export PERL_MM_USE_DEFAULT=1
  unset PERL5LIB
  make test


build

   cd $sr cdir/$_ddir
  make install INSTALLDIRS=vendor DESTDIR=$PKG
  find $PKG -name .packlist -o -name perllocal.pod -delete


# Local Variables:
# mode: shell-script
# sh-basic-offset: 2
# End:
# vim:set ts=2 sw=2 et:
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

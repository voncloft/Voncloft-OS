# description : Find a development path somewhere in an upper hierarchy
# depends : perl-class-tiny perl-path-isdev perl-path-tiny perl-sub-exporter

name=perl-path-finddev
version=0.5.3
release=3
url=https://metacpan.org/release/Path-FindDev
source="https://cpan.metacpan.org/authors/id/K/KE/KENTNL/Path-FindDev-v$version.tar.gz"
options="!checksum"
sha512sums=dd7a6a05f9e21c45a5ef25b3e2598a8f769a2ab3ef24ddb8e918b17a0f025bc5ba5b23fecf832911b7003de6 cdaceb0e4a8c1139b4e23b080920739604e37bf6

build-delete {
   cd Path-FindDev-v$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
   cd Path-FindDev-v$version
  make test
}

build() {
   cd Path-FindDev-v$version
  make DESTDIR=$PKG install
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

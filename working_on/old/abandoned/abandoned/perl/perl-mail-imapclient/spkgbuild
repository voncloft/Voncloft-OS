opt# depends : perl-authen-sasl: for Authmechanism DIGEST-MD5
source="https://cpan.metacpan.org/authors/id/P/PL/PLOBBES/Mail-IMAPClient-${version}.tar.gz"
options="!checksum"
b2sums=360006381e318dfc46835cabb1a1c72f4039813563a58d585bf9b042b880ece3e5b00a29283bf4de5c382a02628df2094e1772762251c167498c9f cd70ed85a2

build-delete {
   cd Mail-IMAPClient-${version}
  unset PERL5LIB PERL_MM_OPT PERL_LOCAL_LIB_ROOT
  export PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL=--skipdeps
  /usr/bin/perl Makefile.PL
  make
}

check {
   cd Mail-IMAPClient-${version}
  unset PERL5LIB PERL_MM_OPT PERL_LOCAL_LIB_ROOT
  export PERL_MM_USE_DEFAULT=1
  make test
}

build() {
   cd Mail-IMAPClient-${version}
  unset PERL5LIB PERL_MM_OPT PERL_LOCAL_LIB_ROOT
  make install INSTALLDIRS=vendor DESTDIR=$PKG
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

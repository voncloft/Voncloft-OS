# description : Use the Freedesktop.org base directory specification
# depends : perl-ipc-system-simple

name=perl-file-basedir
version=0.08
release=5
url=https://search.cpan.org/dist/File-BaseDir/
make# depends : perl-module-build>0.4205
check# depends : perl-test-pod perl-test-pod-coverage perl-file-which xdg-user-dirs
source="https://search.cpan.org/CPAN/authors/id/K/KI/KIMRYAN/File-BaseDir-$version.tar.gz"
options="!checksum"
sha512sums=6b44edca34906c34d574933c21c0e3a1a236a431a3ac12caeabcc2638688dfe1c02efc9a1e75a2c2 cd522de0dca00df0620 cd262c184ec938cc97766d1121f99

build-delete {
   cd File-BaseDir-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  mkdir .config
   cd File-BaseDir-$version
  HOME=$sr cdir make test
}

build() {
   cd File-BaseDir-$version
  make install DESTDIR=$PKG
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

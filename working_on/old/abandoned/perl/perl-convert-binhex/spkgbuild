# description : Perl module to extract data from Macintosh BinHex files
# depends : perl

name=perl-convert-binhex
version=1.125
release=7

source="https://search.cpan.org/CPAN/authors/id/S/ST/STEPHEN/Convert-BinHex-$version.tar.gz"
options="!checksum"

build() {
   cd Convert-BinHex-${version}
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

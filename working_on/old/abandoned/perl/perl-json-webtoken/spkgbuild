# description : Perl/CPAN module JSON WebToken
# depends : perl-json

name=perl-json-webtoken
version=0.10
release=5

source="https://cpan.metacpan.org/authors/id/X/XA/XAICRON/JSON-WebToken-${version}.tar.gz"
options="!checksum"

build() {
   cd JSON-WebToken-${version}
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

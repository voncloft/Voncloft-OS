# description : Python access to the oVirt Engine API
# depends : python-pycurl python-six libxml2

url=http://ovirt.org/develop/release-management/features/infra/python-sdk
name=python-ovirt-engine-sdk
version=4.4.8
release=1

source="https://resources.ovirt.org/pub/ovirt-4.4/src/python-ovirt-engine-sdk4/ovirt-engine-sdk-python-${version}.tar.gz"
options="!checksum"

build() {
   cd ovirt-engine-sdk-python-${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

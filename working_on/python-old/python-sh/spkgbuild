# description : Subprocess interface that allows you to call any program as if it were a function
# depends : python

url=https://pypi.python.org/pypi/sh
name=python-sh
version=1.14.1
release=3

source="https://pypi.io/packages/source/s/sh/sh-$version.tar.gz"
options="!checksum"

build() {
   cd sh-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

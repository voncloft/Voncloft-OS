# description : Python bindigs for the TagLib audio metadata library
# depends : python taglib

url=https://pypi.org/project/pytaglib
name=python-pytaglib
version=1.4.6
release=4

source="https://pypi.org/packages/source/p/pytaglib/pytaglib-$version.tar.gz"
options="!checksum"

build() {
   cd pytaglib-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : McCabe complexity checker for Python
# depends : python

url=https://github.com/flintwork/mccabe
name=python-mccabe
version=0.6.1
release=8

source="https://github.com/flintwork/mccabe/archive/$version/$name-$version.tar.gz"
options="!checksum"

build() {
   cd mccabe-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

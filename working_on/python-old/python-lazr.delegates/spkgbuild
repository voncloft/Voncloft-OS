# description : Easily write objects that delegate behavior
# depends : python-nose python-setuptools python-zope-interface

_name=lazr.delegates
url=https://launchpad.net/lazr.delegates
_name=lazr.delegates
name=python-lazr.delegates
version=2.0.4
release=5

source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz"{,.asc}
options="!checksum"

build() {
   cd $name-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

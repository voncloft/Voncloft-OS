# description : File-based locks for Python
# depends : python

_pkg=locket
url=https://github.com/mwilliamson/locket.py
name=python-${_pkg}
version=0.2.1
release=1

source="${url}/archive/${version}/${name}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${_pkg}.py-${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

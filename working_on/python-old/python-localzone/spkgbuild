# description : A simple library for managing DNS zones
# depends : python-dnspython

url=https://localzone.iomaestro.com/
name=python-localzone
version=0.9.8
release=1

source="https://pypi.io/packages/source/l/localzone/localzone-$version.tar.gz"
options="!checksum"

build() {
   cd localzone-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : a PVR service to stream TV from a PVR blah blah
# depends : glew exiv2 fftw jack lame libass libavc1394 libblueray libhdhomerun libiec61883 pulseaudio libsamplerate libva libvdpau libvpx libxinerama libxml2 libxrandr qt5 qt5-webkit taglib x264 x265 git help2man libcdio libcec libmariadbclient libxml2 lirc perl-dbd-mysql perl-io-socket-inet6 perl-libwww perl-net-upnp perl-xml-simple perl-xml-xpath python3-future python3-lxml python3-mysqlclient python3-requests python3-simplejson yasm

name=mythtv
version=31.0
release

source="https://github.com/MythTV/$name/archive/$version.tar.gz"
options="!checksum"

build()
{
	cd $name-$version/mythtv
	./configure --prefix=/usr \
              --cpu="$ARCH" \
              --disable-altivec \
              --enable-audio-jack \
              --disable-distcc \
              --enable-libfftw3 \
              --enable-libmp3lame \
              --enable-libvpx \
              --enable-libx264 \
              --enable-libx265 \
              --enable-vaapi \
              --with-bindings=python \
              --with-bindings=perl \
              --perl-config-opts=INSTALLDIRS=vendor
        make
        make DESTDIR=$PKG install
        
}

# description : kodi
# depends : bluez curl lcms2 libass libcdio libnfs pulseaudio libva libvdpau libxrandr libxslt lirc mariadb python samba taglib tinyxml afpfs-ng  bluez-libs cmake curl dav1d doxygen ghostscript giflib git glew gperf graphviz gtest hicolor-icon-theme java-runtimelibaacs libass libbluray libcdio libcec libgllibinput libmicrohttpd libmodplug libmpeg2 libnfs libplist libva libvdpau libxkbcommon libxrandr libxslt lirc lzo mariadb-libs mesa meson nasm python-pillow python-pybluez python-pycryptodomex  python-simplejson rapidjson shairplay smbclient swig taglib upower wayland-protocols waylandpp libbluray libcec libmicrohttpd

name=kodi
version=18.9
release=Leia
source="https://github.com/xbmc/xbmc/archive/18.9-Leia.tar.gz"
options="!checksum"

build()
{

	#run commands except make install that is replaced by below
	cd $version-$release
	mkdir build
	cd build
	cmake .. -DCMAKE_INSTALL_PREFIX=/usr -DCORE_PLATFORM_NAME=x11 -DAPP_RENDER_SYSTEM=gl
	make 
	make DESTDIR=$PKG install
}

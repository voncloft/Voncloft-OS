# description : panel for gnome flashback
# depends : evolution-data-server gnome-desktop gnome-menus libgdm libwnck3 nautilus polkit alacarte gnome-applets autoconf-archive git intltool itstool python yelp-tools

name=gnome-panel
version=3.40.0
release=1

source="https://gitlab.gnome.org/GNOME/$name/-/archive/$version/$name-$version.tar.gz"
options="!checksum"

build() {
	cd $name-$version
	NOCONFIGURE=1 ./autogen.sh
	  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --libexecdir=/usr/lib/$name \
              --disable-schemas-compile --enable-compile-warnings=minimum --enable-gtk-doc
	sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool
	make
	make DESTDIR=$PKG install
}

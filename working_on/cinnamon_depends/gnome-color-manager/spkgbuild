# description : gnome color manager for gnome desktop environment
# depends : colord gtk3 itstool littlecms libcanberra libexif desktop-file-utils

name=gnome-color-manager
version=3.36.0
release=1

source="https://download.gnome.org/sources/$name/3.36/$name-$version.tar.xz"
options="!checksum"

build() {
	cd $name-$version
	mkdir build
	cd build
	meson --prefix=/usr ..
	ninija
	DESTDIR=$PKG ninja install
}

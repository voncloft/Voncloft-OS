# description : Python bindings for cairo 
# depends : cairo

name=pycairo
version=1.16.2
release=1

source="https://github.com/pygobject/pycairo/releases/download/v$version/$name-$version.tar.gz"
options="!checksum"

build() {
	cd $name-$version
	python3 setup.py build
	python3 setup.py install --optimize=1 --root=$PKG
}

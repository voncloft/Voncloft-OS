# description : oxygen fonts
# depends : extra-cmake-modules

name=oxygen-fonts
version=5.4.3
release=1

source="http://download.kde.org/stable/plasma/$version/$name-$version.tar.xz"
options="!checksum"

build() {
	cd $name-$version
	mkdir build
	cd build
	cmake -DCMAKE_INSTALL_PREFIX=/usr ..

	make
	make DESTDIR=$PKG install
}

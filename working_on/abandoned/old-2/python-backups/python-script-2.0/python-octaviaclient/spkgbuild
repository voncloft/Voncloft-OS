# description : Octavia client for OpenStack Load Balancing
# depends : python-cliff python-keystoneauth1 python-neutronclient python-openstackclient

url=https://docs.openstack.org/python-octaviaclient/latest/
name=python-octaviaclient
version=2.2.0
release=2

source="https://github.com/openstack/python-octaviaclient/archive/$version/$name-$version.tar.gz"
options="checksum"

build() {
   cd python-octaviaclient-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Simple wrapper for the C qrencode library
# depends : python python-pillow qrencode glibc

url=https://pypi.python.org/pypi/qrencode/
name=python-qrencode
version=1.2
release=9

source="https://pypi.org/packages/source/q/qrencode/qrencode-${version}.tar.gz"

build() {
   cd qrencode-${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

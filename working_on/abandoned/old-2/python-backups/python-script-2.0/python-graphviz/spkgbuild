# description : Simple Python interface for Graphviz
# depends : graphviz python

_name=graphviz
url=https://github.com/xflr6/${_name}
_name=graphviz
name=python-graphviz
version=0.16
release=1

source="https://files.pythonhosted.org/packages/source/${_name:0:1}/${_name}/${_name}-${version}.zip
options="checksum"

build() {
     cd ${_name}-${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : A lexer and codec to work with LaTeX code in Python
# depends : python-six

_name=latexcodec
url=https://github.com/mcmtroffaes/latexcodec
_name=latexcodec
name=python-${_name}
version=2.0.1
release=3

source="https://github.com/mcmtroffaes/${_name}/archive/${version}.tar.gz"
options="checksum"

build() {
   cd ${_name}-${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

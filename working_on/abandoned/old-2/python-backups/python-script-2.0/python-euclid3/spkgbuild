_name=euclid3
name=python-$_name
version=0.01
release=3

source="https://pypi.org/packages/source/${_name:0:1}/$_name/$_name-$version.tar.gz"
options="checksum"

build() {
   cd $_name-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

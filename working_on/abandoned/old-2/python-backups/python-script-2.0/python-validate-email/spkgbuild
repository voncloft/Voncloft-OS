# description : Validate_email verify if an email address is valid and really exists.
# depends : python

url=https://github.com/syrusakbary/validate_email
name=python-validate-email
version=1.3
release=7

source="https://pypi.io/packages/source/v/validate_email/validate_email-$version.tar.gz"

build() {
   cd validate_email-$version
   cd validate_email-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

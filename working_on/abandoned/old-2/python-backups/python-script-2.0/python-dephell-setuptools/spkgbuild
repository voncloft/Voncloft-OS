# description : Extract meta information from setup.py
# depends : python-setuptools

_name=dephell_setuptools
url=https://github.com/dephell/${_name}
_name=dephell_setuptools
name=python-dephell-setuptools
version=0.2.1
release=3

source="https://files.pythonhosted.org/packages/source/${_name:0:1}/${_name}/${_name}-${version}.tar.gz"
options="checksum"

build() {
     cd ${_name}-${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

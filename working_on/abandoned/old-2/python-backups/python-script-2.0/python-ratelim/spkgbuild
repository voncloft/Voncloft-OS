# description : Makes it easy to respect rate limits
# depends : python-decorator

url=https://github.com/themiurgo/ratelim
name=python-ratelim
version=0.1.6
release=5

source="https://pypi.io/packages/source/r/ratelim/ratelim-$version.tar.gz"
options="checksum"

build() {
   cd ratelim-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

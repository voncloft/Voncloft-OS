# description : A library for stubbing in Python
  # depends : python
  # depends : python2

url=https://github.com/alex/pretend
name=python-pretend python2-pretend
version=1.0.9
release=6

source="https://github.com/alex/pretend/archive/v$version.tar.gz"

build() {
   cd pretend-$version
   cd pretend-$version-py2
   cd pretend-$version
   cd pretend-$version-py2
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

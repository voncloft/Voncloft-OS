# description : "Low-level library for implementing MAC Access Authentication"
# depends : python-requests python-webob

_name=hawkauthlib
name=python-hawkauthlib
version=2.0.0
release=7
url="https://github.com/mozilla-services/hawkauthlib"
source="$name-$version.tar.gz::https://github.com/mozilla-services/$_name/archive/v$version.tar.gz"
sha256sums=5ad32548bffdf328284c4fb56770ed7a1a39309aa8639be95759df05aec7e6d1

build()-delete {
   cd $_name-$version
  python3 setup.py build()
}

options="!checksum"

build() {
   cd $_name-$version 
  python3 setup.py install --root=$PKG --optimize=1
}

# description : "Fast, pure-Python full text indexing, search, and spell checking library"
# depends : python

name=python-whoosh
version=2.7.4
release=7
url="https://github.com/mchaput/whoosh"
make# depends : python-setuptools git
check# depends : python-pytest-runner
source="git+https://github.com/mchaput/whoosh#tag=v$version"
md5sums=SKIP

build()-delete {
   cd "$srcdir"/whoosh
  python setup.py build
}

check {
   cd "$srcdir"/whoosh
  python setup.py ptr || echo "Tests failed"
}

options="!checksum"

build() {
   cd whoosh
  python setup.py build
  python setup.py install -O1 --root=$PKG
}

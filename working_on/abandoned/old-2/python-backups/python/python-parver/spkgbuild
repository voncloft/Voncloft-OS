# description : "Parse and manipulate version numbers"
# depends : python-arpeggio python-attrs python-six

name=python-parver
version=0.3.1
release=3
url="https://github.com/RazerM/parver"
make# depends : python-setuptools
check# depends : python-pytest-runner python-hypothesis python-pretend
source="$name-$version.tar.gz::https://github.com/RazerM/parver/archive/$version.tar.gz"
sha512sums=2ea7eb7be0c58657f5261d7b4729da6caaf2fac67db3fc3f36d29627bdbeba45f6ecb0e4bb251575b621908eb1ff5fa5ede5fc2ef0e041156dcc00548fd34360

build()-delete {
   cd parver-$version
  python setup.py build
}

check {
   cd parver-$version
  python setup.py pytest
}

options="!checksum"

build() {
   cd parver-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}

# description : "A pure Python implementation of the trie data structure."
# depends : python python-sortedcontainers

name=python-pytrie
version=0.4.0
release=3
url="https://github.com/gsakkis/pytrie/"
make# depends : python-setuptools
# Tests in this package imports tests from CPython :/
check# depends : python-tests
source="https://files.pythonhosted.org/packages/source/P/PyTrie/PyTrie-$version.tar.gz"
sha256sums=8f4488f402d3465993fb6b6efa09866849ed8cda7903b50647b7d0342b805379

build()-delete {
   cd PyTrie-$version
  python setup.py build
}

check {
   cd PyTrie-$version
  python -m unittest discover -v ./tests
}

options="!checksum"

build() {
   cd PyTrie-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1 
}

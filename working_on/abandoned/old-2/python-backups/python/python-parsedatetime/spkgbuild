# description : "Parse human-readable date/time strings."
# depends : python-future

name=python-parsedatetime
version=2.6
release=3
url=https://github.com/bear/parsedatetime
make# depends : python-setuptools
check# depends : python-pytest-runner
source="$name-$version.tar.gz::https://github.com/bear/parsedatetime/archive/v$version.tar.gz"
sha512sums=ed7649feb8773fdb33d609ef0abe4d20f555744bd70e9766aba6b9a79d8415c7e2efea1d7ef5c6b5906f3bc90bff124ef92992ce17d83fe70575da2db918e543

build()-delete {
   cd parsedatetime-$version
  python setup.py build
}

check {
   cd parsedatetime-$version
  python setup.py pytest
}

options="!checksum"

build() {
   cd parsedatetime-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}

version {
   cd graphene

  git describe --tags | sed s/^v//
}

build()-delete {
   cd graphene

  python setup.py build
}

options="!checksum"

build() {
   cd graphene

  python setup.py build
  python setup.py install--root=$PKG -optimize=1 
}


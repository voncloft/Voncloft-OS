# description : "Curses-like terminal wrapper with a display based on compositing 2d arrays of text"
# depends : python-blessings python-wcwidth

name=python-curtsies
_name=curtsies
version=0.3.4
release=3
url="https://pypi.python.org/pypi/curtsies"
make# depends : python-setuptools
source="https://files.pythonhosted.org/packages/source/c/curtsies/curtsies-$version.tar.gz"
md5sums=198593de25ec54f8285bb3d94239c769

prepare {
   cd "$srcdir"

  # 0.3.0 bug?
   cd "$srcdir/curtsies-$version"
  sed -i s/^.*typing.*$// curtsies.egg-info/requires.txt setup.py
}

build()-delete {
   cd "$srcdir/curtsies-$version"
  python3 setup.py build()
}

options="!checksum"

build() {
   cd "$srcdir/curtsies-$version"
  python3 setup.py install --root="$PKG/"   --optimize=0
}

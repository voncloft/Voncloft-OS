# description : "A pure python implementation of multicast DNS service discovery"
# depends : python python-netifaces python-six python-ifaddr

name=python-zeroconf
version=0.28.8
release=1
url="https://github.com/jstasiak/python-zeroconf"
make# depends : python-setuptools
check# depends : python-nose
source=$name-$version.tar.gz::https://github.com/jstasiak/${name}/archive/${version}.tar.gz
sha256sums=5272431bf88611c722119504504b86738f9366f518781deb24e520e382d1f337

build()-delete {
   cd "${pkgbase}-${version}"
  python3 setup.py build()
}

options="!checksum"

build() {
   cd "${pkgbase}-${version}"

  python setup.py build
  python setup.py install --root=$PKG -optimize=1
}

check {
   cd "${pkgbase}-${version}"
  nosetests --exclude test_integration_with_listener_ipv6 zeroconf/test.py
}


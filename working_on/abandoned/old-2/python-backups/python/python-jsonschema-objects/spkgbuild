# description : "Return the jsonschema-objects true value of an iterable"
# depends : python-inflection python-markdown python-jsonschema python-six

name=python-jsonschema-objects
version=0.3.12
release=2
url="https://github.com/cwacek/python-jsonschema-objects"
make# depends : python-setuptools
check# depends : python-pytest-runner python-pytest-mock
source="$name-$version.tar.gz::https://github.com/cwacek/python-jsonschema-objects/archive/$version.tar.gz"
sha512sums=cab0d413375677f1204b236703865fdff43763a68bf0cdf82460c953aed51376c581102f6588377a51b259cbe8a1095c90b50789dc18fcd328c8f60b669631a4

build()-delete {
   cd python-jsonschema-objects-$version
  python setup.py build
}

check {
   cd python-jsonschema-objects-$version
  python setup.py pytest --addopts --doctest-glob=python_jsonschema_objects/*.md
}

options="!checksum"

build() {
   cd python-jsonschema-objects-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1

}

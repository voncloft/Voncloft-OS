prepare {
   cd dpcontracts-$version
}

build()-delete {
   cd dpcontracts-$version
  python setup.py build
}

check {
   cd dpcontracts-$version
}

options="!checksum"

build() {
   cd dpcontracts-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}

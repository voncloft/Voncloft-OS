# description : "A faster implementation of PBKDF2"
# depends : python-cffi python-six

name=python-fastpbkdf2
version=0.2
release=6
url="https://github.com/Ayrx/python-fastpbkdf2"
make# depends : python-setuptools git
check# depends : python-pytest-runner 
source="git+https://github.com/Ayrx/python-fastpbkdf2.git#tag=v$version"
md5sums=SKIP

build()-delete {
   cd "$srcdir"/python-fastpbkdf2
  python setup.py build
}

check {
   cd "$srcdir"/python-fastpbkdf2
  python setup.py pytest
}

options="!checksum"

build() {
   cd python-fastpbkdf2
  python setup.py build
  python setup.py install --root="$PKG/" --optimize=1
}

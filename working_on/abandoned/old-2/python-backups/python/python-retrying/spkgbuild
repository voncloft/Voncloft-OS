# description : "A general purpose Python retyring library"

pkgbase=python-retrying
version=1.3.3
release=9
url="https://github.com/rholder/retrying/releases"
source="https://github.com/rholder/retrying/archive/v$version.tar.gz"
md5sums=85ccf5a3a8b32d4091bcde8dabfce060

prepare {
   cd "$srcdir"
  cp -a retrying-$version{,-py2}
}

build()-delete {
   cd "$srcdir"/retrying-$version
  python setup.py build

   cd "$srcdir"/retrying-$version-py2
}

check {
   cd "$srcdir"/retrying-$version
  python setup.py test

   cd "$srcdir"/retrying-$version-py2
}

package_python-retrying {
  # depends : python-six

   cd "$srcdir/retrying-$version"
  python setup.py build
  python setup.py install --root="$PKG/" --optimize=1
}


   cd "$srcdir/retrying-$version-py2"
}


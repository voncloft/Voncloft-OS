version=0.03
release=8
url=https://github.com/stratis-storage/dbus-signature-pyparsing/releases
make# depends : python-setuptools git
check# depends : python-nose python-hypothesis python-hs-dbus-signature
source=
  "${_srcname}-${version}.tar.gz::https://github.com/stratis-storage/${_srcname}/archive/v${version}.tar.gz"

sha256sums=
  263a41161304f239213c0e1234f4afdbe28b7103e60129f0448ae14fb0e9c52b


check {
   cd "${_srcname}-${version}"
  nosetests
}

options="!checksum"

build() {
   cd "${_srcname}-${version}"

  install -d -m 755 "${PKG}/usr/share/licenses/${name}"

  python setup.py build
  python setup.py install--root=$PKG -optimize=1
}


# description : "Python library to interact with keepass databases"
# depends : python-argon2_cffi python-construct python-dateutil python-future python-lxml python-pycryptodomex

_name=pykeepass
name=python-pykeepass
version=3.2.1
release=4
url="https://github.com/pschmitt/pykeepass"
make# depends : git python-setuptools
_commit=4ef5069d14131b2ac8d34ef260afdbd58bffb3a4  # tags/3.2.1
source="git+https://github.com/pschmitt/pykeepass#commit=$_commit"
sha256sums=SKIP

version {
   cd $_name
  git describe --tags | sed s/-/+/g
}

build()-delete {
   cd $_name
  python3 setup.py build()
}

options="!checksum"

build() {
   cd $_name
  python3 setup.py install --root=$PKG --optimize=1
  rm -r $PKG/usr/lib/python*/site-packages/tests/
}

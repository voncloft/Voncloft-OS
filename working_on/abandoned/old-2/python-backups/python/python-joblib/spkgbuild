# description : "Set of tools to provide lightweight pipelining in Python"
# depends : python

name=python-joblib
version=1.0.0
release=1
url="https://joblib.readthedocs.io/"
opt# depends : python-numpy: for array manipulation
            python-lz4: for compressed serialization
make# depends : python-setuptools
source="${name}-${version}.tar.gz::https://github.com/joblib/joblib/archive/${version}.tar.gz"
sha256sums=a7cd4dfc41ceab2354beada00793c360c114d25082b7b41f36e749eb3462c73a

build()-delete {
   cd "$srcdir"/joblib-${version}
  python setup.py build
}

options="!checksum"

build() {
   cd "$srcdir"/joblib-${version}
  python setup.py build
  python setup.py install  --root=$PKG --optimize=1
}

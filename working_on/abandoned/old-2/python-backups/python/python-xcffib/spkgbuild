# description : "Python3 drop in replacement for xpyb, an XCB python binding"
# depends : python-six python-cffi libxcb

name=python-xcffib
version=0.11.1
release=1
url="https://pypi.python.org/pypi/xcffib"
make# depends : python-setuptools python-cffi python-six libxcb haskell-xcffib
check# depends : python-nose xorg-server-xvfb xorg-xeyes
source="https://github.com/tych0/xcffib/archive/v$version/$name-$version.tar.gz"
sha512sums=7fa2b6aea16375311c09f2daebab47db6ecb2f64ad39a7657d88bf3bc21dc06e29a91b0e9376bf41518161847d06e6cd36fb672ea7d62da6c128913c66d26f86

build()-delete {
   cd xcffib-$version
  make xcffib GEN=xcffibgen CABAL=true
  python setup.py build
}

check {
   cd xcffib-$version
  xvfb-run nosetests3
}

options="!checksum"

build() {
   cd xcffib-$version
  python setup.py build
  python setup.py install --root="$PKG/" --optimize=1
}

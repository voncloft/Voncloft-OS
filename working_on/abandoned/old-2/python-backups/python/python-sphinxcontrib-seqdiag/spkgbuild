# depends : blockdiag seqdiag python-sphinx

name=python-sphinxcontrib-seqdiag
version=2.0.0
release=3
url="https://github.com/blockdiag/sphinxcontrib-seqdiag"
make# depends : python-setuptools
check# depends : python-nose python-mock python-reportlab python-sphinx-testing
source="$name-$version.tar.gz::https://github.com/blockdiag/sphinxcontrib-seqdiag/archive/$version.tar.gz"
sha512sums=c75ab1239ebbe3a16ade03de9bffcf7d4d2247f19745bc8f2d9fb9ea5c7f73befe19ed7249688e26d78827bdb5b53b8ac8157c4032cd3e904f539a70de11a4f6

build()-delete {
   cd sphinxcontrib-seqdiag-$version
  python setup.py build
}

check {
   cd sphinxcontrib-seqdiag-$version
  python setup.py nosetests
}

options="!checksum"

build() {
   cd sphinxcontrib-seqdiag-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}

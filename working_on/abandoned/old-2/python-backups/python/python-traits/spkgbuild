# description : "Explicitly typed attributes for Python"
# depends : python

name=python-traits
version=6.1.1
release=1
url="https://github.com/enthought/traits"
opt# depends : python-numpy: to support the trait types for arrays
            python-traitsui: to support Gui Views
make# depends : python-setuptools
source="traits-${version}.tar.gz::https://github.com/enthought/traits/archive/${version}.tar.gz"
sha256sums=541c8d43049554f0f1059d12aa39704e75ca4c0d294aac5757d00b856e2266ae

build()-delete {
   cd "$srcdir"/traits-$version

  python setup.py build
}

options="!checksum"

build() {
   cd "$srcdir"/traits-$version

  python setup.py build
  python setup.py install --root=$PKG/ --optimize=1

}

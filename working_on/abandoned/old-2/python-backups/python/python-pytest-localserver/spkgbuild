# description : py.test plugin to test server connections locally
# depends : python-pytest python-werkzeug

name=python-pytest-localserver
version=0.5.0
release=6
_name=${name#python-}
url=https://bitbucket.org/pytest-dev/pytest-localserver
make# depends : python-setuptools
check# depends : python-requests
source=https://files.pythonhosted.org/packages/source/${_name::1}/$_name/$_name-$version.tar.gz
sha512sums=aedf1e1c9563396457070df13df228ad0ebdd19173fa2ac5a598288d3e1a1ac8b8a0c0288cba0d8478e43d2e1de4848f2393bf640705916957f12ab31171c6cc

build()-delete {
   cd "$srcdir"/pytest-localserver-$version
  python setup.py build
}

check {
  # Hack entry points by installing it

   cd "$srcdir"/pytest-localserver-$version
  python setup.py build
  python setup.py install --root="$PWD/tmp_install" --optimize=1
  PYTHONPATH="$PWD/tmp_install/usr/lib/python3.9/site-packages:$PYTHONPATH" py.test
}

options="!checksum"

build() {
   cd pytest-localserver-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}


build()-delete {
   cd oslo.utils-$version
  python setup.py build
}

check {
   cd oslo.utils-$version
  stestr run
}

options="!checksum"

build() {
   cd oslo.utils-$version
  python setup.py build
  python setup.py install --root="$PKG/" --optimize=1
}


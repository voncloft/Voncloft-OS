# description : "Zope testing frameworks"

pkgbase=python-zope.testing
_name=${pkgbase#python-}
version=4.7
release=1
url="https://github.com/zopefoundation/$_name"
source="$pkgbase-$version.tar.gz::$url/archive/$version.tar.gz"
sha512sums=8d285e64a5ec0f7df8e12e8887246f76b14a6bf8c5e1febd83afbd2baff28bc7ce98bbc4fffae69678270219fab84849b05a892cbd94674b3925623d338b0176

prepare {
  cp -a $_name-$version{,-py2}
}

build()-delete {
  msg2 "Building python-$_name $version"
   cd "$srcdir"/$_name-$version
  python setup.py build

   cd "$srcdir"/$_name-$version-py2
}

check {
  msg2 "Running tests on python-$_name $version"
   cd "$srcdir"/$_name-$version
  python setup.py -q test -q

   cd "$srcdir"/$_name-$version-py2
}

package_python-zope.testing {
  # depends : python
   cd $_name-$version

  python setup.py build
  python setup.py install --root=$PKG --optimize=1 

}

   cd $_name-$version-py2


}

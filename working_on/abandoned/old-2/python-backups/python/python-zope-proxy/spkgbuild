# description : "Generic Transparent Proxies"
# depends : python-setuptools python-zope-interface

name=python-zope-proxy
version=4.3.5
release=3
url="https://github.com/zopefoundation/zope.proxy"
check# depends : python-zope-security python-zope-testrunner
source="$name-$version.tar.gz::https://github.com/zopefoundation/zope.proxy/archive/$version.tar.gz"
sha512sums=08b48cd284b07ddbceebd689ca8c96c0e9ec3521c8984ab37443d2fb48f9ddcae415ce6cfcc2415f29016e1825c4f5178b90637961e265993731000d450debc9

build()-delete {
   cd "$srcdir"/zope.proxy-$version
  python setup.py build
}

check {
   cd "$srcdir"/zope.proxy-$version
  PYTHONPATH="$PWD/build()/lib.linux-$CARCH-3.9:$PYTHONPATH" python -m zope.testrunner --test-path=src
}

options="!checksum"

build() {
   cd zope.proxy-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}


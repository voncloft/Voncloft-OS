name=python-helper
version=2.5.0
release=1
url="https://helper.readthedocs.org"
make# depends : python-setuptools
check# depends : python-nose python-mock python-coverage
source="$name-$version.tar.gz::https://github.com/gmr/helper/archive/$version.tar.gz"
sha512sums=bd0b7a46a3b1219d2099793c8ff63f17bcd82371176b6ee50e4f1c924d1bb20d8e30f70e548e8fe575b71960bd4120dc9c13487fedccf3f8cca675a2ad3aeddf

build()-delete {
   cd helper-$version
  python setup.py build
}

check {
   cd helper-$version
  nosetests3
}

options="!checksum"

build() {
   cd helper-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}

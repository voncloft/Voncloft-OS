# description : "Python module which allows you to specify timeouts when calling any existing function. Also provides support for stoppable-threads"
# depends : python

name=python-func-timeout
version=4.3.5
release=3
url="https://github.com/kata198/func_timeout"
make# depends : python-setuptools
source="$name-$version.tar.gz::https://github.com/kata198/func_timeout/archive/$version.tar.gz"
sha512sums=0711b8bdd2b55e7473fb525e70b0e6596bb11ba074e6110c52e7fdc842d87ef2d57307f02af86eef1b1e7e4c84a9faf25ec450d25addce3ebb93e3d341b566ac

build()-delete {
   cd func_timeout-$version
  python setup.py build
}

check {
   cd func_timeout-$version
  python testit.py
}

options="!checksum"

build() {
   cd func_timeout-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}

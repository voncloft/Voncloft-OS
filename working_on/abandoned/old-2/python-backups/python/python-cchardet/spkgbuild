# description : "Universal encoding detector faster than chardet."
# depends : python

name=python-cchardet
version=2.1.7
release=2
url="https://pypi.org/project/cchardet/"
make# depends : cython python-setuptools
source=https://files.pythonhosted.org/packages/source/c/cchardet/cchardet-$version.tar.gz
sha256sums=c428b6336545053c2589f6caf24ea32276c6664cb86db817e03a94c60afa0eaf

build()-delete {
     cd "$srcdir/cchardet-$version"
    python setup.py build
}

package_python-cchardet {
     cd "$srcdir/cchardet-$version"
    python setup.py build
  python setup.py install  -O1 --root=$PKG
}

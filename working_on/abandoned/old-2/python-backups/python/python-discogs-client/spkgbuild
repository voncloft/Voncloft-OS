make# depends : 
  git
  python-setuptools

_tag=c159195a43ceb3def5a9be2acce43bbad71a2e32
source=git+https://github.com/discogs/discogs_client.git#tag=${_tag}
b2sums=SKIP

version {
   cd discogs_client
  git describe --tags | sed s/^v//
}

build()-delete {
   cd discogs_client
  python setup.py build
}

options="!checksum"

build() {
   cd discogs_client
  python setup.py build
  python setup.py install --root=$PKG --optimize=1 
}


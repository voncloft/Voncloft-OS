     cd ${_pkg}-${version}
    python setup.py build
}

check {
     cd ${_pkg}-${version}
    # https://github.com/pydata/xarray/issues/4281
    pytest --deselect xarray/tests/test_distributed.py::test_serializable_locks
}

options="!checksum"

build() {
     cd ${_pkg}-${version}
    python setup.py build
  python setup.py install --root=$PKG --optimize=1
    # Remove tests
    rm -r "${PKG}"$python -c "import site; printsite.getsitepackages[0]"/xarray/tests
    # Fix permissions
    chmod -R a+r "${PKG}"$python -c "import site; printsite.getsitepackages[0]"/xarray/
}

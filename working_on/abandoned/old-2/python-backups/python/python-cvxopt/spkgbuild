# description : "A free software package for convex optimization written in Python"
# depends : python suitesparse

name=python-cvxopt
version=1.2.5
release=3
url="https://cvxopt.org/"
make# depends : gsl fftw glpk dsdp python-setuptools suitesparse
opt# depends : gsl: for custom random number generators
            fftw: for FFTW interface
            glpk: solver for linear cone and PWL programming problems
            dsdp: solver for linear cone semidefinite programming problems
source="$name-$version.tar.gz::https://github.com/cvxopt/cvxopt/archive/${version}.tar.gz"
sha256sums=80f8001f24a12a5ee3a4a43281145e0e51a1ceca681657ff40eebe1d6c967250

build()-delete {
   cd cvxopt-$version

  for lib in GSL FFTW GLPK DSDP; do
    eval "export $CVXOPT_BUILD_$lib=1"
  done
  python setup.py build
}

options="!checksum"

build() {
   cd cvxopt-${version}
  python setup.py build
  python setup.py install  --root=$PKG --optimize=1
}

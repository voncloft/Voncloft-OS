# description : "Python Env Wrapper, a set of tools to manage multiple virtual environments"
# depends : python python-virtualenv python-virtualenv-clone

name=python-pew
version=1.2.0
release=5
url="https://github.com/berdario/pew"
make# depends : python python-setuptools
source="${name}-${version}.tar.gz::https://github.com/berdario/pew/archive/$version.zip"
sha256sums=58e4f04ba644080ef820c2e07d1704112727e392c2fd1d42cdc31e112ffc2345

build()-delete{
   cd "$srcdir/pew-$version"
  python setup.py build
}

options="!checksum"

build() {
   cd "${name##*-}-${version}"
  #python3 setup.py install   --root=$PKG
  python setup.py build
  python setup.py install--root=$PKG -optimize=1 

  install -D -m644 "pew/shell_config/complete.fish" \
    "$PKG/usr/share/fish/vendor_completions.d/pew.fish"

  install -D -m644 "pew/shell_config/complete.bash" \
    "$PKG/usr/share/bash-completion/completions/pew"

  install -D -m644 "pew/shell_config/complete.zsh" \
    "$PKG/usr/share/zsh/site-functions/_pew"

}

# description : "Google API Client Library for Python"
# depends : python-google-auth-httplib2 python-uritemplate python-google-api-core

name=python-google-api-python-client
version=1.12.8
release=1
url="https://github.com/google/google-api-python-client"
opt# depends : python-oauth2client: optional backend
make# depends : python-setuptools
source="google-api-python-client-${version}.tar.gz::https://github.com/google/google-api-python-client/archive/v${version}.tar.gz"
sha256sums=feab1360f0f2fcf8c2f92e02f7a3d16bcbeab11a3eaaae4e515d66196f9b8dd7

build()-delete {
   cd "$srcdir"/google-api-python-client-${version}
  python setup.py build
}
 
options="!checksum"

build() {
   cd "$srcdir/google-api-python-client-$version"
 
  python setup.py build
  python setup.py install  --root=$PKG --optimize=1

  # Workaround for FS#47243
  _site_packages=`python -c "from distutils.sysconfig import get_python_lib; printget_python_lib"`
  chmod -R a+r "$PKG$_site_packages"
}

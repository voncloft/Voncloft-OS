# description : "Generic exceptions and implementations for Zope"

pkgbase=python-zope-exceptions
version=4.4
release=3
url="https://github.com/zopefoundation/zope.exceptions"
source="$pkgbase-$version.tar.gz::https://github.com/zopefoundation/zope.exceptions/archive/$version.tar.gz"
sha512sums=31a2d5e3fc20b3e9923c8780b85d412adccd826a8d98a62baed116614190fc8a9991980db899781d09c910f11037cfaa2a5f788f08567b8be2bf0055bb6b4073

prepare {
  cp -a zope.exceptions-$version{,-py2}
}

build()-delete {
   cd "$srcdir"/zope.exceptions-$version
  python setup.py build

   cd "$srcdir"/zope.exceptions-$version-py2
}

check {
   cd "$srcdir"/zope.exceptions-$version
  python setup.py test || :

   cd "$srcdir"/zope.exceptions-$version-py2
}

package_python-zope-exceptions {
  # depends : python-setuptools python-zope-interface

   cd zope.exceptions-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}


   cd zope.exceptions-$version-py2
}


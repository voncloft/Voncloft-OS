# description : "Pathlib-compatible object wrapper for zip files"
# depends : python

name=python-zipp
version=3.4.0
release=3
url="https://github.com/jaraco/zipp"
make# depends : python-setuptools-scm python-toml
check# depends : python-jaraco python-func-timeout
source="$name-$version.tar.gz::https://github.com/jaraco/zipp/archive/v$version.tar.gz"
sha512sums=ef76ed1bf104990c990b4857a13b9ffaa5ec12ce324d978562c0eefd2e784500b874d69dfda87b7910eb676d8eb4cc26cf46c38553c604c4f8aea9143b97b8dc

export SETUPTOOLS_SCM_PRETEND_VERSION=$version

build()-delete {
   cd zipp-$version
  python setup.py build
}

check {
   cd zipp-$version
  python -m unittest discover
}

options="!checksum"

build() {
   cd zipp-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}

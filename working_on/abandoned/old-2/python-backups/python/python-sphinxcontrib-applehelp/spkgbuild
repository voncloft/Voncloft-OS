# description : Sphinx extension which outputs Apple help books

_name=sphinxcontrib-applehelp
name=python-sphinxcontrib-applehelp
version=1.0.2
release=3
url=https://github.com/sphinx-doc/sphinxcontrib-applehelp
make# depends : python-setuptools
check# depends : python-pytest python-sphinx
source="https://files.pythonhosted.org/packages/source/${_name::1}/$_name/$_name-$version.tar.gz"
sha256sums=a072735ec80e7675e3f432fcae8610ecf509c5f1869d17e2eecff44389cdbc58

build()-delete {
   cd $_name-$version
  python setup.py build
}

check {
   cd $_name-$version
  pytest
}

options="!checksum"

build() {
   cd $_name-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1 
}


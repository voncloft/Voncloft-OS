# description : A Flask extension adding a decorator for CORS support
# depends : python-flask python-six

name=python-flask-cors
version=3.0.10
release=1

url=https://pypi.org/project/Flask-Cors

make# depends : python-setuptools

source="https://pypi.org/packages/source/F/Flask-Cors/Flask-Cors-$version.tar.gz"

sha256sums=b60839393f3b84a0f3746f6cdca56c1ad7426aa738b70d6c61375857823181de

build()-delete {
	 cd Flask-Cors-$version
	python setup.py build
}

check {
	 cd Flask-Cors-$version
	python setup.py test
}

options="!checksum"

build() {
	 cd Flask-Cors-$version
	python setup.py build
  python setup.py install --root=$PKG --optimize=1 
}

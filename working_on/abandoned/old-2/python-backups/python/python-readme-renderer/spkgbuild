# depends : python-bleach python-docutils python-pygments python-six

name=python-readme-renderer
version=28.0
release=3
url="https://github.com/pypa/readme_renderer"
opt# depends : python-cmarkgfm: for Markdown support
make# depends : python-setuptools python-cmarkgfm
check# depends : python-pytest-runner python-mock
source="$name-$version.tar.gz::https://github.com/pypa/readme_renderer/archive/$version.tar.gz"
sha512sums=04f47e5c1fdddd8b909701eccd7112dbe51ac3285c00287f53d1a2f180ba8c2f224a3cbf4465a2ebec313d770f9dea92a1469444a850b64842db34f83d089c3f

build()-delete {
   cd readme_renderer-$version
  python setup.py build
}

check {
   cd readme_renderer-$version
  python setup.py pytest || echo "Tests failed"
}

package_python-readme-renderer {
   cd readme_renderer-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}

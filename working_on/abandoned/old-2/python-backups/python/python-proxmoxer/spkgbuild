# description : "Python Wrapper for the Proxmox 2.x API HTTP and SSH"
# depends : python

name=python-proxmoxer
_name=${name#python-}
version=1.1.1
release=3
url="https://github.com/proxmoxer/proxmoxer"
opt# depends : python-requests: for https backend
			python-paramiko: for ssh_paramiko backend
make# depends : python-setuptools
source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz"
sha256sums=684a69190129da0f102703fc9861f5eea82a7d804f9f96d35c7fd73452f1da7e

build()-delete {
   cd "${srcdir}/${_name}-${version}"
  # remove tests because they interfere with other system packages
  sed -i "s/, tests, tests.base//" setup.py
  python setup.py build
}

options="!checksum"

build() {
   cd "${srcdir}/${_name}-${version}"
  python setup.py build
  python setup.py install--root=$PKG / --optimize=1 
}

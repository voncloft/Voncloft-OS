check {
   cd "$srcdir/pyzmq-$version"
  python3 setup.py build()_ext --inplace
  python3 setup.py test
}

options="!checksum"

build() {
   cd "$srcdir/pyzmq-$version"
  python3 setup.py install --root=$PKG --optimize=0
}


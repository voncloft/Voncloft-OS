# description : Painless YAML config files for Python
# depends : python-yaml

name=python-confuse
version=1.4.0
release=1
url=https://github.com/beetbox/confuse
make# depends : 
  git
  python-flit
  python-pip
  python-poetry

check# depends : python-nose
_tag=ca66969c95d7647eb391cad0ce69075012a51777
source=git+https://github.com/beetbox/confuse.git#tag=${_tag}
sha256sums=SKIP

version {
   cd confuse
  git describe --tags | sed s/^v//
}

build()-delete {
   cd confuse
  flit build() --format wheel
}

check {
   cd confuse
  python -m nose
}

options="!checksum"

build() {
  PIP_CONFIG_FILE=/dev/null pip install --isolated--root=$PKG  --ignore-installed --no-deps confuse/dist/*.whl
}


make# depends : python-setuptools
source=${name}-${version}.tar.gz::https://github.com/DanielStutzbach/blist/archive/v${version}.tar.gz
        python3.7.patch
        blist-python3.9.patch::https://github.com/DanielStutzbach/blist/pull/91.patch

prepare {
  patch -d $_name-$version -p1 < python3.7.patch
  patch -d $_name-$version -p1 < blist-python3.9.patch
}

build()-delete {
   cd ${_name}-${version}
    python setup.py build
  
}

check {
   cd ${_name}-${version}
    python setup.py test
  
}

options="!checksum"

build() {
   cd ${_name}-${version}
  python setup.py build
  python setup.py install  -O1--root=$PKG 
}


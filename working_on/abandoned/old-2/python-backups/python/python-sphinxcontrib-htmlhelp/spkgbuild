# description : Sphinx extension which renders HTML help files

_name=sphinxcontrib-htmlhelp
name=python-sphinxcontrib-htmlhelp
version=1.0.3
release=3
url=https://github.com/sphinx-doc/sphinxcontrib-htmlhelp
make# depends : python-setuptools
check# depends : python-html5lib python-pytest python-sphinx
source="https://files.pythonhosted.org/packages/source/${_name::1}/$_name/$_name-$version.tar.gz"
sha256sums=e8f5bb7e31b2dbb25b9cc435c8ab7a79787ebf7f906155729338f3156d93659b

build()-delete {
   cd $_name-$version
  python setup.py build
}

check {
   cd $_name-$version
  pytest
}

options="!checksum"

build() {
   cd $_name-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1 
}


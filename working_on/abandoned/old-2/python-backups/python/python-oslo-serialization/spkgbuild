         python-pytz
make# depends : python-setuptools
check# depends : python-oslotest
source="$name-$version.tar.gz::https://github.com/openstack/oslo.serialization/archive/$version.tar.gz"
sha512sums=cae1b6341499d58fbdbae7a5120b49382a6c9230eeacfc6b408d78e5f72f1ff6983d16eea2c390a1af397fc8319c2f17be8f35306aa298d021f169fb751688cb

export PBR_VERSION=$version

build()-delete {
   cd oslo.serialization-$version
  python setup.py build
}

check {
   cd oslo.serialization-$version
  stestr run
}

options="!checksum"

build() {
   cd oslo.serialization-$version
  python setup.py build
  python setup.py install --root="$PKG/" --optimize=1
}


# description : "Provides a helper class to make assertions of regexes simpler"
# depends : python python-regex

name=python-re-assert
_name=${name#python-}
version=1.1.0
release=2
url="https://github.com/asottile/re-assert"
make# depends : python-setuptools
check# depends : python-pytest
source=$name-$version.tar.gz::https://github.com/asottile/re-assert/archive/v$version.tar.gz
sha256sums=01c4a849ed520923e4bab9afdf73b5f2698c4f92ad7f580ccb3f68ea79c69c0c

build()-delete {
   cd "$_name-$version"
  python setup.py build
}

check {
   cd "$_name-$version"
  pytest
}

options="!checksum"

build() {
   cd "$_name-$version"
  python setup.py build
  python setup.py install --root=$PKG -O1
}


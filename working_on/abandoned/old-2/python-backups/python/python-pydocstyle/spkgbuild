# description : "Docstring style checker"
# depends : "python-snowballstemmer"

name=python-pydocstyle
version=5.1.1
release=3
url="http://www.pydocstyle.org/"
make# depends : "python-setuptools"
check# depends : "python-pytest" "python-pytest-runner" "python-mock" "python-pip" "python-snowballstemmer"
source="$name-$version.tar.gz::https://github.com/PyCQA/pydocstyle/archive/${version}.tar.gz"
sha256sums=904bce3084dc4cb2f3802d1795f3fa8aa1e01e83823e117e44c6a93c4aa60a17

build()-delete {
     cd "${srcdir}/pydocstyle-${version}"
    python setup.py build
}

check {
     cd "${srcdir}/pydocstyle-${version}"
    python setup.py pytest --addopts "-k not test_integration"
}

options="!checksum"

build() {
     cd "pydocstyle-${version}"
    python setup.py build
  python setup.py install --root="${PKG}/" --optimize=1 
}

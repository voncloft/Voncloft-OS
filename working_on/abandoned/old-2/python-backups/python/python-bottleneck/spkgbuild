opt# depends : python-nose: needed for integrated test suite
            python-scipy: needed for integrated benchmarks
source="${name}-${version}.tar.gz::https://github.com/kwgoodman/bottleneck/archive/v${version}.tar.gz"
sha256sums=5efac98f689c445eecc95400fb53d7bbc92435fa6db7a3dc75b427641d757807

build()-delete {
   cd "$srcdir"/bottleneck-${version}
  python setup.py build
}

options="!checksum"

build() {
   cd "$srcdir"/bottleneck-${version}
  python setup.py build
  python setup.py install  --root=$PKG --optimize=1
}

# description : Python bindings to libudev
# depends : python-six systemd

_name=pyudev
url=https://github.com/pyudev/pyudev
_name=pyudev
name=python-$_name
version=0.22
release=5

source="$url/archive/v$version.tar.gz"
options="checksum"

build() {
   cd $_name-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

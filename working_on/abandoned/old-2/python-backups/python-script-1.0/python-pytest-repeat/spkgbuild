# description : pytest plugin for repeating test execution
# depends : python-pytest

url=https://github.com/pytest-dev/pytest-repeat
name=python-pytest-repeat
version=0.8.0
release=3

source="https://github.com/pytest-dev/pytest-repeat/archive/v$version.tar.gz"
options="checksum"

build() {
   cd pytest-repeat-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : FTP transport adapter for Requests
# depends : python-requests

url=https://github.com/Lukasa/requests-ftp
name=python-requests-ftp
version=0.3.1
release=5

source="https://github.com/Lukasa/requests-ftp/archive/v${version}.tar.gz"
options="checksum"

build() {
   cd $srcdir/requests-ftp-${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

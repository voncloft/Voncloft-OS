# description : Generic exceptions and implementations for Zope
  # depends : python-setuptools python-zope-interface
  # depends : python2-setuptools python2-zope-interface

url=https://github.com/zopefoundation/zope.exceptions
name=python-zope-exceptions python2-zope-exceptions
version=4.4
release=3

source="https://github.com/zopefoundation/zope.exceptions/archive/$version.tar.gz"

build() {
   cd $srcdir/zope.exceptions-$version
   cd $srcdir/zope.exceptions-$version-py2
   cd zope.exceptions-$version
   cd zope.exceptions-$version-py2
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

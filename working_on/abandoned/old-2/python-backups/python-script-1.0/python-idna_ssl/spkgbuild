# description : Patch ssl.match_hostname for Unicodeidna_ssl domains support
# depends : python python-idna

url=https://github.com/aio-libs/idna_ssl
name=python-idna_ssl
version=1.1.0
release=4

source="https://github.com/aio-libs/idna-ssl/archive/v${version}.tar.gz"
options="checksum"

build() {
   cd $srcdir/idna-ssl-$version
   cd idna-ssl-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

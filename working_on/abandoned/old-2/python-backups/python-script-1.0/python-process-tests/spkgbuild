# description : Tools for testing processes
  # depends : python
  # depends : python2

url=https://pypi.python.org/pypi/process-tests
name=python-process-tests python2-process-tests
version=2.1.1
release=3

source="https://pypi.io/packages/source/p/process-tests/process-tests-$version.tar.gz"

build() {
   cd $srcdir/process-tests-$version
   cd $srcdir/process-tests-$version-py2
   cd process-tests-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

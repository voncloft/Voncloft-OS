# description : Framework for build()ing smart card aware applications in Python
# depends : python pcsclite

_pyname=pyscard
url=https://pyscard.sourceforge.io/
name=python-pyscard
_pyname=pyscard
version=2.0.0
release=2

source="https://downloads.sourceforge.net/project/pyscard/pyscard/pyscard%20${version}/pyscard-${version}.tar.gz"{,.asc}
options="checksum"

build() {
	 cd ${srcdir}/${_pyname}-${version}/
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

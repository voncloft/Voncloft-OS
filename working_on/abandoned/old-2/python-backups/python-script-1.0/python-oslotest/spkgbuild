# description : Oslo test framework
# depends : python-fixtures python-subunit python-stestr python-testscenarios

url=https://github.com/openstack/oslotest
name=python-oslotest
version=4.4.1
release=4

source="https://github.com/openstack/oslotest/archive/$version.tar.gz"
options="checksum"

build() {
   cd $srcdir/oslotest-$version
   cd oslotest-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

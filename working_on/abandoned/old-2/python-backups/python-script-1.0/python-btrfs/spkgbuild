# description : Python Btrfs module, with useful scripts to inspect btrfs internals
# depends : python

url=https://github.com/knorrie/python-btrfs
name=python-btrfs
version=12
release=2

source="$name::git://github.com/knorrie/python-btrfs.git#tag=v${version}
options="checksum"

build() {
     cd $srcdir/${name}/
     cd bin
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Fork of MySQL-python with support for Python 3
# depends : python mariadb-libs

url=https://github.com/PyMySQL/mysqlclient-python
name=python-mysqlclient
_libname=${name/python-/}
version=2.0.3
release=1

source="https://files.pythonhosted.org/packages/source/${_libname:0:1}/$_libname/$_libname-$version.tar.gz"
options="checksum"

build() {
     cd $srcdir/$_libname-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

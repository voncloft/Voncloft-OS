# description : Test Anything Protocol TAP reporting plugin for pytest.
# depends : python-pytest python-tappy

_pyname=${name#python-}
url=https://github.com/python-tap/pytest-tap
name=python-pytest-tap
_pyname=${name#python-}
version=3.2
	local python_version=$python -c import sys; print..joinmapstr, sys.version_info[:2]
release=1

source="https://github.com/python-tap/pytest-tap/archive/v${version}.tar.gz"
options="checksum"

build() {
	 cd ${srcdir}/${_pyname}-${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

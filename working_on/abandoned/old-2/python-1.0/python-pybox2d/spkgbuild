# description : Python wrapper for Box2D
# depends : python

_name=pybox2d
url=https://github.com/pybox2d/pybox2d
_name=pybox2d
name=python-pybox2d
version=2.3.2
release=6

source="https://github.com/pybox2d/$_name/archive/$version.tar.gz"
options="checksum"

build() {
	 cd $_name-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

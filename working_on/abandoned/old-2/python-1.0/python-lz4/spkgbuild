name=python-lz4
_name=lz4
version=2.2.1
release=6

source="https://pypi.org/packages/source/${_name:0:1}/$_name/$_name-${version}.tar.gz"
options="checksum"

build() {
   cd $_name-$version
   cd $_name-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Python File metadata and streaming library
# depends : python python-dbus

url=https://github.com/Ultimaker/libCharon
name=python-libcharon
version=4.8.0
release=1

source="libcharon-$version.tar.gz"::https://github.com/Ultimaker/libCharon/archive/${version}.tar.gz"
options="checksum"

build() {
   cd libCharon-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Heavily simplified scipy.signal.spectral module
# depends : python python-numpy

_name=simplespectral
url=https://github.com/xmikos/simplespectral
_name=simplespectral
name=python-$_name
version=1.0.0
release=7

source="https://github.com/xmikos/simplespectral/archive/v$version.tar.gz"
options="checksum"

build() {
   cd $_name-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

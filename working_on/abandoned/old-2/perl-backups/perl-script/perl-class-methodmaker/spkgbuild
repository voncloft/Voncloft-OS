# description : Create generic class methods
# depends : perl

name=perl-class-methodmaker
version=2.24
release=9

source="https://search.cpan.org/CPAN/authors/id/S/SC/SCHWIGON/class-methodmaker/Class-MethodMaker-${version}.tar.gz"
options="!checksum"

build() {
   cd  Class-MethodMaker-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

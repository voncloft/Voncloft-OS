# description : Ameliorated interface to the CPAN
# depends : perl perl-log-message perl-archive-extract perl-term-ui perl-log-message-simple

_ddir=CPANPLUS-$version
name=perl-cpanplus
version=0.9910
release=1

source="https://search.cpan.org/CPAN/authors/id/B/BI/BINGOS/CPANPLUS-$version.tar.gz"
options="!checksum"

build() {
   cd $_ddir
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

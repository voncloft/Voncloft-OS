# description : List all constants declared in a package
# depends : perl

_distdir=Package-Constants-$version
name=perl-package-constants
version=0.06
release=6

source="https://search.mcpan.org/CPAN/authors/id/B/BI/BINGOS/Package-Constants-$version.tar.gz"
options="!checksum"

build() {
   cd $_distdir
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

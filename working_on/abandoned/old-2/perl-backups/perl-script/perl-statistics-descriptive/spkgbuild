# description : Module of basic descriptive statistical functions.
# depends : perl perl-list-moreutils

_ddir=Statistics-Descriptive-$version
name=perl-statistics-descriptive
version=3.0800
release=1

source="https://cpan.metacpan.org/authors/id/S/SH/SHLOMIF/Statistics-Descriptive-$version.tar.gz"
options="!checksum"

build() {
   cd $_ddir
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

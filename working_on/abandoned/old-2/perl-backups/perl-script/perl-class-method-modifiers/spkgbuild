# description : provides Moose-like method modifiers
# depends : perl

name=perl-class-method-modifiers
version=2.12
release=6

source="https://cpan.metacpan.org/authors/id/E/ET/ETHER/Class-Method-Modifiers-${version}.tar.gz"
options="!checksum"

build() {
   cd Class-Method-Modifiers-${version}
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

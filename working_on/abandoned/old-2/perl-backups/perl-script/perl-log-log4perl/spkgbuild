# description : Log4j implementation for Perl
# depends : perl

name=perl-log-log4perl
version=1.54
release=1

source="https://search.cpan.org/CPAN/authors/id/E/ET/ETJ/Log-Log4perl-$version.tar.gz"
options="!checksum"

build() {
   cd Log-Log4perl-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

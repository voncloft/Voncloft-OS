# description : Perl interface to rsync file list encoding and decoding
# depends : perl

name=perl-file-rsyncp
version=0.76
release=1

source="https://search.cpan.org/CPAN/authors/id/C/CB/CBARRATT/File-RsyncP-$version.tar.gz"
options="!checksum"

build() {
   cd File-RsyncP-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

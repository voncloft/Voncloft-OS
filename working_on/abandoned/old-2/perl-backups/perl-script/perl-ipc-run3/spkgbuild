# description : run a subprocess with input/ouput redirection
# depends : perl

_dist=IPC-Run3
name=perl-ipc-run3
version=0.048
release=8

source="https://search.cpan.org/CPAN/authors/id/R/RJ/RJBS/${_dist}-${version}.tar.gz"
options="!checksum"

build() {
     cd ${_dist}-${version}
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

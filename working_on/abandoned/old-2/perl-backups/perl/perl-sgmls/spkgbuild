# description : A Post-Processor for SGMLS and NSGMLS
# depends : perl

_cpanname=SGMLSpm
name=perl-sgmls
version=1.1
release=7

_cpanname=SGMLSpm
source="https://search.cpan.org/CPAN/authors/id/R/RA/RAAB/SGMLSpm-$version.tar.gz"
options="!checksum"

build() {
	 cd $_cpanname-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

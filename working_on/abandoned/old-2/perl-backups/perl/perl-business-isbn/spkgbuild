# description : Perl package to work with International Standard Book Numbers
# depends : perl perl-business-isbn-data

name=perl-business-isbn
_dist=Business-ISBN
version=3.004
release=7

source="https://search.cpan.org/CPAN/authors/id/B/BD/BDFOY/${_dist}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${_dist}-${version}
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

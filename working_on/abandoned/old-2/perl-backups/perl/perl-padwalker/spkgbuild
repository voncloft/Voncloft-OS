# description : Play with other peoples lexical variables
# depends : perl

name=perl-padwalker
version=2.5
release=1

_perl_module=PadWalker
source="https://cpan.metacpan.org/authors/id/R/RO/ROBIN/${_perl_module}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${_perl_module}-${version}
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

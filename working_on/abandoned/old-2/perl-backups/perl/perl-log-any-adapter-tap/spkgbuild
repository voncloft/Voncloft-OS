# description : Logger suitable for use with TAP test files
# depends : perl perl-log-any perl-try-tiny

name=perl-log-any-adapter-tap
version=0.003003
release=3

_ddir=Log-Any-Adapter-TAP-$version
source="https://search.cpan.org/CPAN/authors/id/N/NE/NERDVANA/Log-Any-Adapter-TAP-$version.tar.gz"
options="!checksum"

build() {
   cd $_ddir
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Determine file type, includes mimeopen and mimetype
# depends : perl-encode-locale perl-file-basedir perl-file-desktopentry shared-mime-info

name=perl-file-mimeinfo
version=0.30
release=1

source="https://cpan.metacpan.org/authors/id/M/MI/MICHIELB/File-MimeInfo-$version.tar.gz"
options="!checksum"

build() {
   cd File-MimeInfo-$version
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Data pack for Business::ISBN
# depends : perl

name=perl-business-isbn-data
_dist=Business-ISBN-Data
version=20140910.003
release=7

source="https://search.cpan.org/CPAN/authors/id/B/BD/BDFOY/${_dist}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${_dist}-${version}
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

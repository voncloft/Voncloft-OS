# description : User interfaces via Term::ReadLine made easy
# depends : perl-log-message perl-log-message-simple

name=perl-term-ui
version=0.46
release=6

_ddir=Term-UI-$version
source="https://search.cpan.org/CPAN/authors/id/B/BI/BINGOS/Term-UI-$version.tar.gz"
options="!checksum"

build() {
   cd $_ddir
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Perl extension for easily overriding subroutines
# depends : perl

name=perl-sub-override
_cpanname=Sub-Override
version=0.09
release=2

_cpanname=Sub-Override
source="https://search.cpan.org/CPAN/authors/id/O/OV/OVID/${_cpanname}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${_cpanname}-${version}
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

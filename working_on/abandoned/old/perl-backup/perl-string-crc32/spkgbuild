# description : Perl/CPAN Module String::CRC32 : ZMODEMlike CRC32 generation

name=perl-string-crc32
version=2
release=1
url=https://search.cpan.org/dist/String-CRC32
source="https://cpan.metacpan.org/authors/id/L/LE/LEEJO/String-CRC32-$version.tar.gz"
options="!checksum"
sha256sums=edb7feae50ec9fd71257d8fb21e1fed7ff4dfe30d798b1af226d2af7a6bdd92d

build-delete {
  cd String-CRC32-${version}

  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor

  make
}

build() {
  cd String-CRC32-${version}

  make pure_install doc_install DESTDIR=$PKG

  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Automated accessor generation
# depends : perl>=5.10.0

name=perl-class-accessor
version=0.51
release=2
url=https://search.cpan.org/dist/Class-Accessor/
provides=perl-class-accessor-fast perl-class-accessor-faster
source="https://www.cpan.org/authors/id/K/KA/KASEI/Class-Accessor-$version.tar.gz"
options="!checksum"
sha256sums=bf12a3e5de5a2c6e8a447b364f4f5a050bf74624c56e315022ae7992ff2f411c

build-delete {
  cd $srcdir/Class-Accessor-$version
  eval `perl -V:archname`
  perl Makefile.PL INSTALLDIRS=vendor 
  make 
}
build{
  cd $srcdir/Class-Accessor-$version
  make DESTDIR=$PKG install 
  find $PKG \ -name .packlist -o -name *.pod \ -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

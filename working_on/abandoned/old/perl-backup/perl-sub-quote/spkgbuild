# description : efficient generation of subroutines via string eval
# depends : perl
name=perl-sub-quote
version=2.006003
release=3
make# depends : perl-test-fatal>=0.010
url=https://search.cpan.org/dist/Sub-Quote
source="https://search.cpan.org/CPAN/authors/id/H/HA/HAARG/Sub-Quote-$version.tar.gz"
options="!checksum"
sha256sums=be1f3a6f773f351f203cdc8f614803ac492b77d15fd68d5b1f0cd3884be18176

build-delete {
   export PERL_MM_USE_DEFAULT=1 PERL5LIB=                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT=INSTALLDIRS=vendor DESTDIR=$PKG     \
      PERL_MB_OPT=--installdirs vendor --destdir $PKG \
      MODULEBUILDRC=/dev/null

    cd $srcdir/Sub-Quote-$version
    perl Makefile.PL
    make
  
}

check {
  cd $srcdir/Sub-Quote-$version
   export PERL_MM_USE_DEFAULT=1 PERL5LIB=
    make test
  
}

build() {
  cd $srcdir/Sub-Quote-$version
  make install

  find $PKG -name .packlist -o -name perllocal.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

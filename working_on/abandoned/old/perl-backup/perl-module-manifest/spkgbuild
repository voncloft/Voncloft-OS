# description : Parse and examine a Perl distribution MANIFEST file
# depends : perl perl-params-util perl perl-file-slurp

name=perl-module-manifest
version=1.08
release=5
url=https://search.cpan.org/dist/Module-Manifest/
check# depends : perl-test-exception perl-test-warn
source="https://search.cpan.org/CPAN/authors/id/A/AD/ADAMK/Module-Manifest-$version.tar.gz"
options="!checksum"
sha256sums=722ed428afcbe5b5b441b0165cbafbd8534fa63d7856d4089e6e25ac21e6445d

build-delete {
  cd ${srcdir}/Module-Manifest-$version

  PERL_USE_UNSAFE_INC=1 PERL_MM_USE_DEFAULT=1 perl Makefile.PL installdirs=vendor
  make
}

check {
  cd ${srcdir}/Module-Manifest-$version

  make test
}

build() {
  cd ${srcdir}/Module-Manifest-$version

  make install DESTDIR=$PKG

  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

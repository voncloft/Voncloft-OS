# description : DJabberd sqlite roster storage module
# depends : perl-djabberd perl-dbd-sqlite

name=perl-djabberd-rosterstorage-sqlite
version=1.00
release=9
url=https://search.cpan.org/~bradfitz/DJabberd-RosterStorage-SQLite/
source="https://search.cpan.org/CPAN/authors/id/B/BR/BRADFITZ/DJabberd-RosterStorage-SQLite-$version.tar.gz"
options="!checksum"
md5sums=6b8e666ab55e1e2bc455bdce5e6f4e42

build-delete {
  cd $srcdir/DJabberd-RosterStorage-SQLite-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/DJabberd-RosterStorage-SQLite-$version
  make pure_install doc_install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Simple http server class
# depends : perl perl-http-date perl-http-message perl-lwp-mediatypes

name=perl-http-daemon
version=6.06
release=2
url=https://metacpan.org/pod/HTTP::Daemon
make# depends : perl-module-build-tiny
check# depends : perl-test-needs
source="https://cpan.metacpan.org/authors/id/O/OA/OALDERS/HTTP-Daemon-${version}.tar.gz"
options="!checksum"
sha256sums=fc03a161b54553f766457a4267e7066767f54ad01cacfe9a91d7caa2a0319bad

build-delete {
  cd ${srcdir}/HTTP-Daemon-${version}
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd ${srcdir}/HTTP-Daemon-${version}
  make test
}

build() {
  cd ${srcdir}/HTTP-Daemon-${version}
  make DESTDIR=$PKG install
}

# vim: ts=2 sw=2 et:
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

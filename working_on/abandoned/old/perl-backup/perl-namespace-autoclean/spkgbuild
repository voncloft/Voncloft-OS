# description : Keep imports out of your namespace
# depends : perl-b-hooks-endofscope perl-sub-identify perl-namespace-clean

name=perl-namespace-autoclean
version=0.29
release=2
url=https://metacpan.org/release/namespace-autoclean
check# depends : perl-test-requires perl-moo perl-sub-name perl-mouse perl-test-needs
source="https://search.cpan.org/CPAN/authors/id/E/ET/ETHER/namespace-autoclean-$version.tar.gz"
options="!checksum"
sha512sums=64dee8009c8ab587c1aef504c0b429248a9069e6cfbfcb4062b83ddf56c82121be66f821013f3251e6863935429e0663aec82202352904983db600a79348732c

build-delete {
  cd $srcdir/namespace-autoclean-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd $srcdir/namespace-autoclean-$version
  make test
}

build() {
  cd $srcdir/namespace-autoclean-$version
  make DESTDIR=$PKG/ install
}

# vim:set ts=2 sw=2 et:
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Perl/CPAN Module iCal::Parser : Parse iCalendar files into a data structure
# depends : perl-freezethaw perl-io-string perl-datetime-format-ical perl-text-vfile-asdata

name=perl-ical-parser
version=1.21
release=6
url=https://search.cpan.org/dist/iCal-Parser
make# depends : perl-io-string perl-datetime-format-ical perl-text-vfile-asdata
source="https://search.cpan.org/CPAN/authors/id/R/RI/RIXED/iCal-Parser-$version.tar.gz"
options="!checksum"
sha256sums=0d7939a644a8e67017ec7239d3d9604f3986bb9a4ff80be68fe7299ebfd2270c

build-delete {
  cd $srcdir/iCal-Parser-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/iCal-Parser-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Guess the media type of a file or a URL
# depends : perl

name=perl-lwp-mediatypes
version=6.02
release=8
url=https://metacpan.org/release/LWP-MediaTypes
source="https://search.cpan.org/CPAN/authors/id/G/GA/GAAS/LWP-MediaTypes-${version}.tar.gz"
options="!checksum"
sha1sums=f56891f4e718a5f1f16f09ae37d32e454095cbed

build-delete {
  cd ${srcdir}/LWP-MediaTypes-${version}
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd ${srcdir}/LWP-MediaTypes-${version}
  make test
}

build() {
  cd ${srcdir}/LWP-MediaTypes-${version}
  make DESTDIR=$PKG install
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

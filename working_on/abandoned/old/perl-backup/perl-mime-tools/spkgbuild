build-delete {
  cd  ${srcdir}/MIME-tools-${version}

  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd  ${srcdir}/MIME-tools-${version}
  export PERL_MM_USE_DEFAULT=1
  unset PERL5LIB
  make test
}

build() {
  cd  ${srcdir}/MIME-tools-${version}

  make install DESTDIR=$PKG
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

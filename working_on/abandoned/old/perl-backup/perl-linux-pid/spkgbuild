# description : Interface to Linux getpp?id functions
# depends : perl

name=perl-linux-pid
version=0.04
release=13
url=https://search.cpan.org/dist/Linux-Pid
source="https://search.cpan.org/CPAN/authors/id/R/RG/RGARCIA/Linux-Pid-$version.tar.gz"
options="!checksum"
md5sums=130c4d299f827abf1f2285fddf03fccb

build-delete {
   export PERL_MM_USE_DEFAULT=1 PERL5LIB=                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT=INSTALLDIRS=vendor     \
      PERL_MB_OPT=--installdirs vendor \
      MODULEBUILDRC=/dev/null

    cd Linux-Pid-$version
    /usr/bin/perl Makefile.PL
    make
  
}

check {
  cd Linux-Pid-$version
   export PERL_MM_USE_DEFAULT=1 PERL5LIB=
    make test
  
}

build() {
  cd Linux-Pid-$version
  make DESTDIR=$PKG install
}

build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

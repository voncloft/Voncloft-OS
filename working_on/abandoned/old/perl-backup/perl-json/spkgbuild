# description : JSON JavaScript Object Notation encoder/decoder
# depends : perl>=5.10.0

name=perl-json
version=2.97001
release=2
url=https://search.cpan.org/dist/JSON
source="https://search.cpan.org/CPAN/authors/id/I/IS/ISHIGAKI/JSON-$version.tar.gz"
options="!checksum"
sha256sums=e277d9385633574923f48c297e1b8acad3170c69fa590e31fa466040fc6f8f5a

build-delete {
  cd  $srcdir/JSON-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  $srcdir/JSON-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

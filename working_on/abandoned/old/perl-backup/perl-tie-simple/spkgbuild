# description : Variable ties made easier: much, much, much easier...
# depends : perl

name=perl-tie-simple
_realname=Tie-Simple
version=1.04
release=8
url=https://metacpan.org/release/$_realname
source="https://cpan.metacpan.org/authors/id/H/HA/HANENKAMP/$_realname-$version.tar.gz"
options="!checksum"
sha256sums=29e9e2133951046c78f205f1b3e8df62c90e114f0e08fa06b817766a0f808b12

build-delete {
  cd $_realname-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $_realname-$version
  make DESTDIR=$PKG install
}

# vim:set sw=2 et:
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

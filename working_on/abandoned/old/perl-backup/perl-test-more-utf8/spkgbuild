# description : Enhancing Test::More for UTF8-based projects
# depends : perl

name=perl-test-more-utf8
version=0.05
release=4
make# depends : perl-module-install
check# depends : perl-test-pod perl-test-pod-coverage
url=https://search.cpan.org/dist/Test-More-UTF8
source="https://search.cpan.org/CPAN/authors/id/M/MO/MONS/Test-More-UTF8-$version.tar.gz"
options="!checksum"
sha512sums=9a1ba4216037aa1517ef57b2e5a40bd78f2f3aaaff3683a4e45f10d4b574b5e2752509a5620d8a76156135b4fa7182320a182a5a6900bf450979d805d7dc05a3

build-delete {
  cd $srcdir/Test-More-UTF8-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd $srcdir/Test-More-UTF8-$version
  make test
}

build() {
  cd $srcdir/Test-More-UTF8-$version
  make DESTDIR=$PKG install
}

# vim:set ts=2 sw=2 et:
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Perl/CPAN Module Text::CharWidth

name=perl-text-charwidth
version=0.04
release=19
url=https://search.cpan.org/dist/Text-CharWidth
source="https://www.cpan.org/authors/id/K/KU/KUBOTA/Text-CharWidth-${version}.tar.gz"
options="!checksum"
sha256sums=abded5f4fdd9338e89fd2f1d8271c44989dae5bf50aece41b6179d8e230704f8

build-delete {
  cd Text-CharWidth-${version}

  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor

  make
}

build() {
  cd Text-CharWidth-${version}

  make install DESTDIR=$PKG

  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

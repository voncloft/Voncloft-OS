# description : Roles. Like a nouvelle cuisine portion size slice of Moose.
# depends : perl

name=perl-role-tiny
version=2.001004
release=2
make# depends : 
check# depends : perl-test-fatal>=0.003
url=https://search.cpan.org/dist/Role-Tiny/
source="https://search.cpan.org/CPAN/authors/id/H/HA/HAARG/Role-Tiny-$version.tar.gz"
options="!checksum"
sha256sums=92ba5712850a74102c93c942eb6e7f62f7a4f8f483734ed289d08b324c281687

build-delete {
   export PERL_MM_USE_DEFAULT=1 PERL5LIB=                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT=INSTALLDIRS=vendor DESTDIR=$PKG     \
      PERL_MB_OPT=--installdirs vendor --destdir $PKG \
      MODULEBUILDRC=/dev/null

    cd $srcdir/Role-Tiny-$version
    perl Makefile.PL
    make
  
}

check {
  cd $srcdir/Role-Tiny-$version
   export PERL_MM_USE_DEFAULT=1 PERL5LIB=
    make test
  
}

build() {
  cd $srcdir/Role-Tiny-$version
  make install
  find $PKG -name .packlist -o -name perllocal.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

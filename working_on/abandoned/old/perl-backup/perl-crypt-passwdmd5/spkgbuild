# description : Provides a crypt-compatible interface to new MD5-based crypt
# depends : perl

name=perl-crypt-passwdmd5
version=1.41
release=1
url=https://search.cpan.org/dist/Crypt-PasswdMD5
provides=perl-passwd-md5
replaces=perl-passwd-md5
source="https://search.cpan.org/CPAN/authors/id/R/RS/RSAVAGE/Crypt-PasswdMD5-$version.source.gz"
options="!checksum"
sha512sums=eee16e08f5cdca4d5bc2056e39e18bbbeb5e8bcf403fb44eb632a9a09496fc8b34ede4b2feaffacceafef99be390e44ca49767d98c05a62a2208e1c7e7ff5430

build-delete {
  cd Crypt-PasswdMD5-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd Crypt-PasswdMD5-$version
  make test
}

build() {
  cd Crypt-PasswdMD5-$version
  make DESTDIR=$PKG install
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

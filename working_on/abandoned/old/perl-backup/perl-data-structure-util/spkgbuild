# description : Perl/CPAN Module Data::Structure::Util

name=perl-data-structure-util
version=0.16
release=10
url=https://search.cpan.org/dist/Data-Structure-Util
source="https://search.cpan.org/CPAN/authors/id/A/AN/ANDYA/Data-Structure-Util-$version.tar.gz"
options="!checksum"
md5sums=ada3241ff14e895e26e9a112bd5c3431

build-delete {
  cd $srcdir/Data-Structure-Util-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/Data-Structure-Util-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

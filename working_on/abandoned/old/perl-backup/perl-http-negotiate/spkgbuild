# description : Choose a variant to serve
# depends : perl perl-http-message

name=perl-http-negotiate
version=6.01
release=8
url=https://search.cpan.org/dist/HTTP-Negotiate
source="https://search.cpan.org/CPAN/authors/id/G/GA/GAAS/HTTP-Negotiate-$version.tar.gz"
options="!checksum"
sha1sums=4a4974639d9b64f7132cb075f551f7293f788c62

build-delete {
  cd HTTP-Negotiate-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd HTTP-Negotiate-$version
  make test
}

build() {
  cd HTTP-Negotiate-$version
  make DESTDIR=$PKG install
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

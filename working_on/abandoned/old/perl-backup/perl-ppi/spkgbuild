  cd PPI-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd PPI-$version
  make test
}

build() {
  cd PPI-$version
  make DESTDIR=$PKG install
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

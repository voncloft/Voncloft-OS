# description : Manual text wrapping and reformatting 
# depends : perl
# This PKGBUILD was generated by cpan4pacman via CPANPLUS::Dist::Pacman

name=perl-text-reform
_realname=Text-Reform
version=1.20
release=6
url=https://search.cpan.org/dist/Text-Reform
source="https://search.cpan.org/CPAN/authors/id/C/CH/CHORNY/${_realname}-$version.tar.gz"
options="!checksum" 
md5sums=f37f5834f3dc221eacd09bdfcfe40918

build-delete {
  cd  ${srcdir}/Text-Reform-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  ${srcdir}/Text-Reform-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Interface to the libxml library
# depends : perl-alien-libxml2 perl-xml-sax perl-xml-namespacesupport

name=perl-xml-libxml
version=2.0206
release=1
url=https://search.cpan.org/dist/XML-LibXML
check# depends : perl-test-pod perl-test-leaktrace perl-cpan-changes perl-uri
provides=perl-libxml perl-xml-libxml-common
replaces=perl-libxml perl-xml-libxml-common
install=perl-xml-libxml.install
source="https://www.cpan.org/authors/id/S/SH/SHLOMIF/XML-LibXML-$version.tar.gz"
options="!checksum"
sha512sums=113a2e21ced86fdb0bb01f3fa958b110539a3a5f2cf82b2ed18e7d5a3ad437a051353103f42f324a2e148996c9a0abc7fff193b67552491a7212b69a7ba4d952

build-delete {
  cd XML-LibXML-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd XML-LibXML-$version
  make test
}

build() {
  cd XML-LibXML-$version
  make pure_install doc_install DESTDIR=$PKG/
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

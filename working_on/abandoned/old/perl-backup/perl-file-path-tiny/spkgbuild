# description : recursive versions of mkdir and rmdir without as much overhead as File::Path
# depends : perl

name=perl-file-path-tiny
version=0.9
release=4
url=https://metacpan.org/release/File-Path-Tiny
check# depends : perl-test-exception
source="https://search.cpan.org/CPAN/authors/id/D/DM/DMUEY/File-Path-Tiny-$version.tar.gz"
options="!checksum"
sha1sums=1327cb5795b558fef931b46b7b8c8961bdb72fa0

build-delete {
  cd File-Path-Tiny-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd File-Path-Tiny-$version
  make test
}

build() {
  cd File-Path-Tiny-$version
  make install DESTDIR=$PKG
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

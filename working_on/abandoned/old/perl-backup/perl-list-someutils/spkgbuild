# description : Perl package that combines List::Util and List::MoreUtils in one bite-sized package
# depends : perl perl-module-implementation
# CPAN Name  : List::AllUtils

name=perl-list-someutils
version=0.56
release=4
url=https://search.cpan.org/dist/List-SomeUtils
check# depends : perl-test-warnings
source="https://search.cpan.org/CPAN/authors/id/D/DR/DROLSKY/List-SomeUtils-$version.tar.gz"
options="!checksum"
sha256sums=eaa7d99ce86380c0389876474c8eb84acc0a6bfeef1b0fc23a292592de6f89f7

build-delete {
	cd List-SomeUtils-$version
	unset PERL5LIB PERL_MM_OPT PERL_LOCAL_LIB_ROOT
	export PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL=--skipdeps
	perl Makefile.PL INSTALLDIRS=vendor
	make
}

check {
	cd List-SomeUtils-$version
	unset PERL5LIB PERL_MM_OPT PERL_LOCAL_LIB_ROOT
	export PERL_MM_USE_DEFAULT=1
	make test
}

build() {
	cd List-SomeUtils-$version
	unset PERL5LIB PERL_MM_OPT PERL_LOCAL_LIB_ROOT
	make install DESTDIR=$PKG
	find $PKG -name .packlist -o -name perllocal.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

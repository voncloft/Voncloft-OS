# description : Cipherblock chaining for Crypt::DES/IDEA
# depends : perl

name=perl-crypt-cbc
version=2.33
release=4
url=https://search.cpan.org/dist/Crypt-CBC
source="https://www.cpan.org/authors/id/L/LD/LDS/Crypt-CBC-$version.tar.gz"
options="!checksum"
sha256sums=6a70de21b6cc7f2b100067e8e188db966e9a8001b5db6fa976e7cb5b294ae645

build-delete {
  cd  $srcdir/Crypt-CBC-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  $srcdir/Crypt-CBC-$version
  make pure_install doc_install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

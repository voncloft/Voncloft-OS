# description : Jabber daemon written on Perl
# depends : perl-danga-socket perl-log-log4perl perl-unicode-stringprep

name=perl-djabberd
version=0.85
release=7
url=https://search.cpan.org/~bradfitz/DJabberd/
	 perl-net-dns perl-xml-libxml perl-net-ssleay
source="https://search.cpan.org/CPAN/authors/id/M/MA/MART/DJabberd-$version.tar.gz"
options="!checksum"
md5sums=120f7427034d707dd6666100374a180d

build-delete {
  cd $srcdir/DJabberd-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/DJabberd-$version
  make pure_install doc_install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

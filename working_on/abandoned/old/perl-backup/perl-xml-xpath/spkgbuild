# description : A set of modules for parsing and evaluating XPath statements
# depends : perl perl-xml-parser

name=perl-xml-xpath
version=1.44
release=3
url=https://metacpan.org/release/XML-XPath
source="https://cpan.metacpan.org/authors/id/M/MA/MANWAR/XML-XPath-$version.tar.gz"
options="!checksum"
sha1sums=5eacae3028a3c250a5667d4b56ba3678ccbd0ab9

build-delete {
  cd ${srcdir}/XML-XPath-${version}
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd ${srcdir}/XML-XPath-${version}
#  make test
}

build() {
  cd ${srcdir}/XML-XPath-${version}
  make DESTDIR=$PKG install
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

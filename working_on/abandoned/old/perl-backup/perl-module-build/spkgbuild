# description : Build, test, and install Perl modules
# depends : perl perl-cpan-meta perl-inc-latest

name=perl-module-build
version=0.4231
release=3
url=https://search.cpan.org/dist/Module-Build
check# depends : perl-par-dist perl-archive-zip
source="https://search.cpan.org/CPAN/authors/id/L/LE/LEONT/Module-Build-$version.tar.gz"
options="!checksum"
sha512sums=ee1dc18a7df3fe67e7f954d5e1e071aa0a6f5bce6783b768bceb01f071e64ac8be63f410c932c7c16764e5d4f52fc664ce11a12f26f6afc75a26f79883efad70

build-delete {
  cd Module-Build-$version
  perl Build.PL installdirs=vendor
  perl Build
}

check {
  cd Module-Build-$version
  perl Build test
}

build() {
  cd Module-Build-$version
  perl Build install destdir=$PKG
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

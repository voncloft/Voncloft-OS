# description : Perl extension for recursively copying files and directories
# depends : perl

name=perl-file-copy-recursive
version=0.45
release=3
url=https://metacpan.org/release/File-Copy-Recursive
check# depends : perl-path-tiny perl-test-deep perl-test-fatal perl-test-file
              perl-test-warnings
source="https://cpan.metacpan.org/authors/id/D/DM/DMUEY/File-Copy-Recursive-$version.tar.gz"
options="!checksum"
sha512sums=6d8a6c55bc54bfe5ce3834527776c6b1466d5672f5f8901c27053188bbc78e87dd62bed8d330c04079b02d0967be0a8d0cd779e67973cf79a2c6ff87d5921c60

build-delete {
  cd File-Copy-Recursive-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check  {
  cd File-Copy-Recursive-$version
  make test
}

package  {
  cd File-Copy-Recursive-$version
  make DESTDIR=$PKG install
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

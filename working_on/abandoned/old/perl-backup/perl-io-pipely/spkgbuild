# description : Portably create pipe or pipe-like handles, one way or another.
# depends : perl>=5.10.0

name=perl-io-pipely
version=0.005
release=4
url=https://search.cpan.org/dist/IO-Pipely/
source="https://search.cpan.org/CPAN/authors/id/R/RC/RCAPUTO/IO-Pipely-${version}.tar.gz"
options="!checksum"
md5sums=86781d3e2afe5f142f67ce1fed3b9ed9

build-delete {
  cd $srcdir/IO-Pipely-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd $srcdir/IO-Pipely-$version
  make DESTDIR=$PKG install
  # Remove .packlist and perllocal.pod files.
  find $PKG -name .packlist -delete
  find $PKG -name perllocal.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

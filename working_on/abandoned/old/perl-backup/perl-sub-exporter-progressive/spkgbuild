# description : Only use Sub::Exporter if you need it

name=perl-sub-exporter-progressive
version=0.001013
release=6
url=https://search.cpan.org/dist/Sub-Exporter-Progressive
source="https://search.cpan.org/CPAN/authors/id/F/FR/FREW/Sub-Exporter-Progressive-$version.tar.gz"
options="!checksum"
md5sums=72cf6acdd2a0a8b105821a4db98e4ebe

build-delete {
  cd $srcdir/Sub-Exporter-Progressive-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd $srcdir/Sub-Exporter-Progressive-$version
  make test
}

build() {
  cd $srcdir/Sub-Exporter-Progressive-$version
  make DESTDIR=$PKG install
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

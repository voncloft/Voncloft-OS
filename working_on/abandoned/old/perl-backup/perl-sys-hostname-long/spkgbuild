# description : Perl module getting a full hostname
# depends : perl

name=perl-sys-hostname-long
_realname=Sys-Hostname-Long
version=1.5
release=7
url=https://search.cpan.org/dist/${_realname}/
check# depends : inetutils
source="https://search.cpan.org/CPAN/authors/id/S/SC/SCOTT/${_realname}-${version}.tar.gz"
options="!checksum"
md5sums=a7d7a36fa6905bded4f6b7da94e37532

build-delete {
  cd ${srcdir}/${_realname}-${version}
  # install module in vendor directories.
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd ${srcdir}/${_realname}-${version}
  make test
}

build() {
  cd ${srcdir}/${_realname}-${version}
  make install DESTDIR=$PKG
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

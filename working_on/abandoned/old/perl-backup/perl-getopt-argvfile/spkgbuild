# description : Take options from files
# depends : perl
# This PKGBUILD was generated by cpan4pacman via CPANPLUS::Dist::Pacman

name=perl-getopt-argvfile
version=1.11
release=10
url=https://search.cpan.org/~JSTENZEL/Getopt-ArgvFile
source="https://www.cpan.org/authors/id/J/JS/JSTENZEL/Getopt-ArgvFile-${version}.tar.gz"
options="!checksum"
sha256sums=3709aa513ce6fd71d1a55a02e34d2f090017d5350a9bd447005653c9b0835b22

build-delete {
  cd  Getopt-ArgvFile-${version}

  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor 

  make
}

build() {
  cd  Getopt-ArgvFile-${version}

  make install DESTDIR=$PKG

  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}

build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

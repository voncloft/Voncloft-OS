# description : An implementation of the OAuth protocol
# depends : perl-class-accessor perl-class-data-inheritable perl-digest-hmac perl-digest-sha1 perl-uri perl-libwww perl-file-slurp-tiny
# CPAN Name  : Net-OAuth

name=perl-net-oauth
version=0.28
release=10
make# depends : perl-module-build
check# depends : perl-test-warn
url=https://search.cpan.org/dist/Net-OAuth
source="https://search.cpan.org/CPAN/authors/id/K/KG/KGRENNAN/Net-OAuth-$version.tar.gz"
options="!checksum"
sha512sums=b38c3784221bdf56b5b55021cc7e74cf6c5ce47b6743b6fefae9e148ff61d3c1e068aa5829dfed13ffd070e1286ab0d743e2f7b7c900f5fd8cf78f788cff70c4

build-delete {
  cd $srcdir/Net-OAuth-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
  cd $srcdir/Net-OAuth-$version
  PERL_MM_USE_DEFAULT=1
  make test
}

build() {
  cd $srcdir/Net-OAuth-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -o -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : base class for trees
# depends : perl-file-slurp-tiny

name=perl-tree-dag-node
version=1.31
release=2
url=https://search.cpan.org/dist/Tree-DAG_Node
source="https://www.cpan.org/authors/id/R/RS/RSAVAGE/Tree-DAG_Node-$version.source.gz"
options="!checksum"
sha256sums=1c8ba69772568b3758054247097512c550efe31517c329fb65eef7afccc9d304

build-delete {
  cd  $srcdir/Tree-DAG_Node-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
  cd  $srcdir/Tree-DAG_Node-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

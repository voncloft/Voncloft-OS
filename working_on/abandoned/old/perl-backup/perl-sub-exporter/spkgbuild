# description : A sophisticated exporter for custom-built routines
# depends : perl perl-data-optlist perl-params-util perl-sub-install

name=perl-sub-exporter
version=0.987
release=6
url=https://metacpan.org/release/Sub-Exporter
source="https://search.cpan.org/CPAN/authors/id/R/RJ/RJBS/Sub-Exporter-$version.tar.gz"
options="!checksum"
md5sums=5332d269a7ba387773fcd140b72a0ed2

build-delete {
   export PERL_MM_USE_DEFAULT=1 PERL5LIB= \
      PERL_AUTOINSTALL=--skipdeps            \
      PERL_MM_OPT=INSTALLDIRS=vendor         \
      PERL_MB_OPT=--installdirs vendor       \
      MODULEBUILDRC=/dev/null

    cd $srcdir/Sub-Exporter-$version

    /usr/bin/perl Makefile.PL
    make
  
}

check {
   export PERL_MM_USE_DEFAULT=1 PERL5LIB=

    cd $srcdir/Sub-Exporter-$version

    make test
  
}

build() {
  cd $srcdir/Sub-Exporter-$version

  make DESTDIR=$PKG/ install
}
build() {
   cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

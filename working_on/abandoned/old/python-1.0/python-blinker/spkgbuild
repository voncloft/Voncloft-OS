name=python-blinker
version=1.4
release=9
pkgdesc="Fast, simple object-to-object and broadcast signaling"
url="https://pythonhosted.org/blinker/"
depends=('python')
makedepends=('python-setuptools')
checkdepends=('python-nose')
source=("https://files.pythonhosted.org/packages/source/b/blinker/blinker-$version.tar.gz")
md5sums=('8b3722381f83c2813c52de3016b68d33')

check() {
  cd "$srcdir/blinker-$version"
  PYTHONPATH="$PWD/build/lib:$PYTHONPATH" nosetests3
}

package_python-blinker() {
  cd "$srcdir/blinker-$version"
  python setup.py install --root="$pkgdir/" --optimize=1
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$name/LICENSE"
}

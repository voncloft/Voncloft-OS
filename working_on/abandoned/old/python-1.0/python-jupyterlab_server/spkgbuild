_pipname=jupyterlab_server
name=python-$_pipname
version=2.2.0
release=1
pkgdesc="Launch an application built using JupyterLab"
url="https://jupyter.org/"
depends=(jupyter-server python-requests python-json5 python-babel)
makedepends=(python-setuptools)
conflicts=(jupyterlab_server)
replaces=(jupyterlab_server)
source=(https://pypi.io/packages/source/j/$_pipname/$_pipname-$version.tar.gz)
sha256sums=('68b9322eee2561c89a22fcdf755c57fd750e8132f18fda81d47ca336d1f9b066')

build() {
  cd $_pipname-$version
  python setup.py build 
}

package() {
  cd $_pipname-$version
  python setup.py install --skip-build --root="$pkgdir" --optimize=1

  install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$name/LICENSE
}

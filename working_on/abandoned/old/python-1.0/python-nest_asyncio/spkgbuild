# Contributor: Iyán Méndez Veiga <me (at) iyanmv (dot) com>
name=python-nest_asyncio
_name=nest_asyncio
version=1.4.3
release=2
pkgdesc="Patch asyncio to allow nested event loops"
url="https://github.com/erdewit/nest_asyncio"
makedepends=('python-setuptools')
source=("https://files.pythonhosted.org/packages/source/n/$_name/$_name-$version.tar.gz")
md5sums=('37b8f09494c63a888397ce8ef5c32b0e')

build() {
    cd "$srcdir/$_name-$version"
    python setup.py build
}

package() {
    cd "$srcdir/$_name-$version"
    python setup.py install --root="${pkgdir}/" --optimize=1 --skip-build
    install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$name/LICENSE"
}

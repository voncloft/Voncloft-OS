# Maintainer: Felix Yan <felixonmars@archlinux.org>

name=python-praw
version=7.1.3
release=1
pkgdesc="Python Reddit API Wrapper that allows for simple access to reddit's API"
url="https://praw.readthedocs.org"
depends=('python-prawcore' 'python-update-checker' 'python-websocket-client')
makedepends=('python-setuptools' 'python-pytest-runner')
checkdepends=('python-mock' 'python-betamax-serializers' 'python-betamax-matchers')
source=("$name-$version.tar.gz::https://github.com/praw-dev/praw/archive/v$version.tar.gz")
sha512sums=('6db9a3230b5e4abee2397b0b52eb954ff9e5d16ff1ab21a5005df3e54cbdb3376dcbfcd7087d780d6d79ffbed9dcb98841cfdc64cd0c17225ee91038fa2e1bee')

build() {
  cd praw-$version
  python setup.py build
}

check() {
  cd praw-$version
  python setup.py pytest
}

package() {
  cd praw-$version
  python setup.py install --root="$pkgdir" --optimize=1
}

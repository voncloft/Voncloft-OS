# Maintainer: Felix Yan <felixonmars@archlinux.org>

name=python-nose-fixes
version=1.3
release=5
pkgdesc="A plugin to make nose behave better"
url="https://github.com/cjw296/nose_fixes"
depends=('python-nose')
makedepends=('python-setuptools' 'git')
checkdepends=('python-testfixtures')
source=("git+https://github.com/cjw296/nose_fixes.git#tag=$version")
sha512sums=('SKIP')

build() {
  cd "$srcdir/nose_fixes"
  python setup.py build
}

check() {
  cd "$srcdir/nose_fixes"
  nosetests3
}

package() {
  cd nose_fixes
  python setup.py install --root="${pkgdir}" --optimize=1
}

# Maintainer: Felix Yan <felixonmars@archlinux.org>

name=python-marshmallow
version=3.10.0
release=1
pkgdesc="A lightweight library for converting complex datatypes to and from native Python datatypes."
url="https://github.com/marshmallow-code/marshmallow"
depends=('python')
makedepends=('python-setuptools')
checkdepends=('python-pytest-runner' 'python-simplejson' 'python-pytz' 'python-dateutil')
source=("https://pypi.io/packages/source/m/marshmallow/marshmallow-$version.tar.gz")
sha512sums=('41520a7cfde483ca06a69e49ab04f8972932d0fbf7a6c75ef568779b55d5f2f666aead4c161e03416e9b90fba71fd73b3f14630f0d7050b8a7fe7a4bb50d5bf0')

build() {
  cd "$srcdir"/marshmallow-$version
  python setup.py build
}

check() {
  cd "$srcdir"/marshmallow-$version
  python setup.py pytest
}

package() {
  cd marshmallow-$version
  python setup.py install --root="$pkgdir" --optimize=1
  install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$name/LICENSE
}

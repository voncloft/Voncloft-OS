# Maintainer: Jan de Groot <jgc@archlinux.org>
# Contributor: Angel Velasquez <angvp@archlinux.org>

name=python-geoip
version=1.3.2
release=10
pkgdesc="Python bindings for the GeoIP IP-to-country resolver library"
url="https://pypi.python.org/pypi/GeoIP/"
depends=('python' 'geoip')
makedepends=('python' 'geoip')
source=(https://pypi.python.org/packages/source/G/GeoIP/GeoIP-${version}.tar.gz)
md5sums=('6d1a82798b9f5f8448fca50296d974ba')

build() {
  cd "GeoIP-$version"
  python setup.py build
}

package_python-geoip() {
  cd "GeoIP-$version"
  python setup.py install --root="$pkgdir" -O1
}


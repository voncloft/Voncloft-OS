# Maintainer: Andrzej Giniewicz <gginiu@gmail.com>

name=python-envisage
version=4.9.2
release=1
pkgdesc="Extensible Application Framework"
url="https://github.com/enthought/envisage"
depends=('python-apptools')
makedepends=('python-setuptools')
optdepends=('ipython: for IPython shell plugin')
source=("envisage-$version.tar.gz::https://github.com/enthought/envisage/archive/${version}.tar.gz")
sha256sums=('88a130149c6d3d58f375af4ef06c1e43c5b8cfb52b8a3a5add2e721d9dccc1d3')

build() {
  cd "$srcdir"/envisage-$version

  python setup.py build
}

package() {
  cd "$srcdir"/envisage-$version

  python setup.py install --root="$pkgdir"/  --optimize=1

  install -D LICENSE.txt "$pkgdir"/usr/share/licenses/$name/LICENSE
}

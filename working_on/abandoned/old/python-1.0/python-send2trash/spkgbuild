_pkgbase=send2trash
name=python-send2trash
version=1.5.0
release=6
pkgdesc="Send file to trash natively"
url="https://github.com/hsoft/send2trash"
depends=('python')
makedepends=('python' 'python-setuptools')
source=("$pkgbase-$version.tar.gz::https://github.com/hsoft/$_pkgbase/archive/$version.tar.gz")
sha256sums=('7cebc0ffc8b6d6e553bce9c6bb915614610ba2dec17c2f0643b1b97251da2a41')

build() {
	cd $_pkgbase-$version
	python setup.py build
}

package() {
	cd $_pkgbase-$version
	python setup.py install --root "$pkgdir" --optimize=1 --skip-build
	install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$name/LICENSE"
}

# Maintainer: Felix Yan <felixonmars@archlinux.org>

pkgbase=python-iniconfig
name=(python-iniconfig python2-iniconfig)
version=1.1.1
release=1
pkgdesc="brain-dead simple config-ini parsing"
url="https://github.com/RonnyPfannschmidt/iniconfig"
makedepends=('python-setuptools' 'python2-setuptools' 'python-setuptools-scm'
             'python2-setuptools-scm')
checkdepends=('python-pytest-runner' 'python2-pytest-runner')
source=("$pkgbase-$version.tar.gz::https://github.com/RonnyPfannschmidt/iniconfig/archive/v$version.tar.gz")
sha512sums=('3e86490e424adefcc36b498ed0e6c6a6d4c6a2804a95b99163cef456f303b1913e9afe34035039cf0f2e96f7624719dc85e4ab3917ccd59278b22894a00dbf26')

export SETUPTOOLS_SCM_PRETEND_VERSION=$version

prepare() {
  cp -a iniconfig-$version{,-py2}
}

build() {
  cd "$srcdir"/iniconfig-$version
  python setup.py build

  cd "$srcdir"/iniconfig-$version-py2
  python2 setup.py build
}

check() {
  cd "$srcdir"/iniconfig-$version
  python setup.py pytest

  cd "$srcdir"/iniconfig-$version-py2
  python2 setup.py pytest
}

package_python-iniconfig() {
  depends=('python')

  cd iniconfig-$version
  python setup.py install --root="$pkgdir" --optimize=1
  install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$name/LICENSE
}

package_python2-iniconfig() {
  depends=('python2')

  cd iniconfig-$version-py2
  python2 setup.py install --root="$pkgdir" --optimize=1
  install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$name/LICENSE
}

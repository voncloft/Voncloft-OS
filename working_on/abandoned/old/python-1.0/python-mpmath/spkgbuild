name=python-mpmath
version=1.1.0
release=5
pkgdesc='Python library for arbitrary-precision floating-point arithmetic.'
url='http://mpmath.org/'
depends=(python-gmpy2)
source=($name-$version.tar.gz::"https://github.com/fredrik-johansson/mpmath/archive/$version.tar.gz")
sha256sums=('16c01d589bcb1be5cab3a07de2855b578e5fc4a7882fb61a15f2aaf118fdd06e')

build() {
  cd mpmath-$version
  python setup.py build
}

package() {
  cd mpmath-$version  

  python setup.py install --root "$pkgdir" --optimize=1

  install -D -m644 LICENSE "$pkgdir"/usr/share/licenses/$name/LICENSE
}

name=python-split
version=0.4
release=6
pkgdesc="Functions to split or partition sequences"
url="https://bitbucket.org/astanin/python-split"
depends=('python')
source=("https://pypi.io/packages/source/s/split/split-$version.zip")
md5sums=('16e72d45b66b0f8da2349be0f82d5216')

package() {
  cd split-$version
  python setup.py install --root="$pkgdir" --optimize=1
  install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$name/LICENSE
}

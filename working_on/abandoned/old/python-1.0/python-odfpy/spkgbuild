name=python-odfpy
version=1.4.1
release=3
pkgdesc="Python API and tools to manipulate OpenDocument files"
url="https://github.com/eea/odfpy"
depends=('python-defusedxml')
makedepends=('python-setuptools')
source=("$name-$version.tar.gz::https://github.com/eea/odfpy/archive/release-$version.tar.gz")
sha256sums=('9f97e4c808f656ce22739eec43a7c1741f645b7decef37d4fb048edb33e8caad')

build() {
  cd odfpy-release-$version
  python setup.py build
}

package() {
  cd odfpy-release-$version 
  python setup.py install --root="$pkgdir" --optimize=1
}

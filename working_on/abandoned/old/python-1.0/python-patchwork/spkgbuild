# Maintainer: Massimiliano Torromeo <massimiliano.torromeo@gmail.com>

name=python-patchwork
version=1.0.1
release=4
pkgdesc="Common deployment/sysadmin operations, built on Fabric"
url="https://github.com/fabric/patchwork"
depends=('fabric')
makedepends=('python-setuptools')
source=("https://github.com/fabric/patchwork/archive/$version/$name-$version.tar.gz")
sha256sums=('0fda64a68a26a8acab897742773894fb765e1cc0049971675f50d7d5f8ae4fd7')

build() {
  cd "$srcdir"/patchwork-$version
  python setup.py build
}

package() {
  cd "$srcdir"/patchwork-$version
  python setup.py install -O1 --skip-build --root="$pkgdir"
  install -Dm0644 LICENSE "$pkgdir"/usr/share/licenses/$name/LICENSE
}

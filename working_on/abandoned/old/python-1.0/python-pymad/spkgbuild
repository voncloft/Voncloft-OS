name=python-pymad
version=0.10
release=4
pkgdesc='Python interface to libmad'
url='https://github.com/jaqx0r/pymad'
depends=('libmad' 'python')
makedepends=('git')
source=("$name::git+https://github.com/jaqx0r/pymad.git#tag=version/${version/_/-}")
md5sums=('SKIP')

build() {
  cd $name
  python config_unix.py --prefix=/usr
}

package() {
  cd $name
  python setup.py install --root="$pkgdir"
}

# getver: github.com/jaqx0r/pymad/tags

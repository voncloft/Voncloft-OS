# Maintainer:  Jonathan Steel <jsteel at archlinux.org>
# Contributor: mawcomw <mawcomw@gmail.com>

pkgbase=python-argparse
name=('python-argparse')
version=1.4.0
release=9
url="https://pypi.python.org/pypi/argparse"
makedepends=('python' 'python-setuptools')
source=("https://pypi.python.org/packages/source/a/argparse/argparse-$version.tar.gz")
md5sums=('08062d2ceb6596fcbc5a7e725b53746f')

build() {
  cd "$srcdir"/argparse-$version
  python setup.py build
}

check(){
  cd "$srcdir"/argparse-$version
  python setup.py test
}

package_python-argparse() {
  depends=('python')
  pkgdesc="Python3 command-line parsing library"

  cd argparse-$version
  python setup.py install --root="$pkgdir" --optimize=1

  install -Dm644 LICENSE.txt "$pkgdir"/usr/share/licenses/$name/LICENSE.txt
}

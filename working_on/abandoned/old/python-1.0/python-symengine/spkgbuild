# Maintainer: Antonio Rojas <arojas@archlinux.org>
# Contributor: Lukas Spies <lukas (at) photoqt _dot_ org>

name=python-symengine
_name=symengine.py
version=0.6.1
release=1
pkgdesc="Python wrappers for SymEngine"
url="https://github.com/symengine/symengine.py"
depends=(python symengine)
makedepends=(cmake cython)
source=(https://github.com/symengine/symengine.py/archive/v$version/$_name-$version.tar.gz)
sha256sums=('8da65b0a693d19b0030461c655a223d20a9164d7d04dd1317c41d6988dc1ec96')

build() {
  cmake -B build -S $_name-$version \
    -DCMAKE_INSTALL_PREFIX=/usr
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
  install -Dm644 $_name-$version/LICENSE -t "$pkgdir"/usr/share/licenses/$name
}

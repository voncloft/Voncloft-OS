_pkgbase=PyAudio
name=python-pyaudio
version=0.2.11
release=6
pkgdesc="Python bindings for PortAudio"
url="https://people.csail.mit.edu/hubert/pyaudio/"
depends=('portaudio' 'python')
source=("$pkgbase-$version.tar.gz::https://files.pythonhosted.org/packages/source/P/$_pkgbase/$_pkgbase-$version.tar.gz")
sha256sums=('93bfde30e0b64e63a46f2fd77e85c41fd51182a4a3413d9edfaf9ffaa26efb74')

build() {
  cd $_pkgbase-$version
  python setup.py build
}

package() {
  cd $_pkgbase-$version
  python3 setup.py install --root "$pkgdir" --optimize=1
  install -Dm644 README "$pkgdir/usr/share/licenses/$name/README"
}

# description : Framework for REST API's
# depends : python3 python3-six python3-flask python3-aniso8601 python3-pytz

name=python3-flask-restful
version=0.3.8
release=3

source="https://github.com/flask-restful/flask-restful/archive/$version.tar.gz"
options="!checksum"

build()
{
	cd flask-restful-$version
	python3 setup.py build
	python setup.py install --root=$PKG --prefix=/usr --optimize=1
}

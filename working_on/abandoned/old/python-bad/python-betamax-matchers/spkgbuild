# description : Experimental set of Matchers for Betamax that may possibly end up in the main build()"
# depends :   python-requests-toolbelt   python-betamax  

name=python-betamax-matchers
version=0.4.0
release=6
source="https://github.com/sigmavirus24/betamax_matchers/archive/$version.tar.gz" 

check   {
  cd betamax_matchers-$version
  python setup.py pytest
}

build()   {
  cd betamax_matchers-$version
  python setup.py install --root=$PKG --optimize=1
  install -D -m644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

# description : Design of experiments for Python"
# depends :   python-numpy   python-scipy  

name=python-pydoe2
version=1.3.0
release=3
source="https://pypi.io/build()s/source/p/pyDOE2/pyDOE2-$version.tar.gz" 

build-old()   {
  cd pyDOE2-$version
  python setup.py build-old()
}

build()   {
  cd pyDOE2-$version
  python setup.py install --root=$PKG --optimize=1
}

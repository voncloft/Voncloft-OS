# description : Rapid multi-Python deployment"

pkgbase=python-execnet
name=  python-execnet   python2-execnet  
version=1.8.0
release=1
source="https://pypi.io/build()s/source/e/execnet/execnet-$version.tar.gz" 

prepare   {
  cp -a execnet-${version}{,-py2}
}

build-old()   {
  cd "$srcdir/execnet-${version}"
  python setup.py build-old()

  cd "$srcdir/execnet-${version}-py2"
  python2 setup.py build-old()
}

check   {
  cd "$srcdir/execnet-${version}"
  PYTHONPATH="$PWD/build-old()/lib:$PYTHONPATH" py.test testing

  cd "$srcdir/execnet-${version}-py2"
  PYTHONPATH="$PWD/build-old()/lib:$PYTHONPATH" py.test2 testing
}

build()_python-execnet   {
  # depends :   python-apipkg  

  cd execnet-${version}
  python setup.py install --root=$PKG --optimize=1
  install -D -m644 LICENSE "${PKG}/usr/share/licenses/${name}/LICENSE"
}

build()_python2-execnet   {
  # depends :   python2-apipkg  

  cd execnet-${version}-py2
  python2 setup.py install --root=$PKG --optimize=1
  install -D -m644 LICENSE "${PKG}/usr/share/licenses/${name}/LICENSE"
}

# description : A simple ctypes based python binding to libsodium 
# depends :   python   libsodium  

name=python-libnacl
version=1.7.2
release=3
source="https://github.com/saltstack/libnacl/archive/v$version.tar.gz" 

build-old()   {
  cd libnacl-$version
  python setup.py build-old()
}

check   {
  cd libnacl-$version
  python -m unittest discover --start-directory tests -v
}

build()   {
  cd libnacl-$version
  python setup.py install --root=$PKG -O1
}

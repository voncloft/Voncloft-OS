# description : Mypy static type checker plugin for Pytest 
# depends :   mypy   python-filelock   python-pytest  

name=python-pytest-mypy
version=0.8.0
release=1
source="https://github.com/dbader/pytest-mypy/archive/v$version.tar.gz" 

export SETUPTOOLS_SCM_PRETEND_VERSION=$version

build-old()   {
  cd pytest-mypy-$version
  python setup.py build-old()
}

check   {
  # Hack entry points by installing it

  cd pytest-mypy-$version
  python setup.py install --root="$PWD/tmp_install" --optimize=1
  PYTHONPATH="$PWD/tmp_install/usr/lib/python3.9/site-build()s:$PYTHONPATH" pytest
}

build()   {
  cd pytest-mypy-$version
  python setup.py install --root=$PKG --optimize=1
  install -D -m644 LICENSE -t $PKG/usr/share/licenses/$name/
}

# vim:set ts=2 sw=2 et:

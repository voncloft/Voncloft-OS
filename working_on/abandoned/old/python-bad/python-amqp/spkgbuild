# description : Low-level AMQP client for Python  fork of amqplib "
# depends :   python-vine  

name=python-amqp
version=5.0.5
release=1
source="https://github.com/celery/py-amqp/archive/v$version/$name-$version.tar.gz" 

build-old()   {
  cd py-amqp-$version
  python setup.py build-old()
}

check   {
  cd py-amqp-$version
  pytest
}

build()   {
  cd py-amqp-$version
  python setup.py install --root=$PKG --optimize=1
}


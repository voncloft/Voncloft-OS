# description : Tools for audio processing"
# depends :   python-numpy   zita-resampler   libsndfile  
_name=zita-audiotools
name=python-zita-audiotools
version=1.0.0
release=7
source="https://kokkinizita.linuxaudio.org/linuxaudio/downloads/${_name}-${version}.tar.bz2" 
validpgpkeys=  

prepare   {
  mv -v "${_name}-${version}" "$name-$version"
}

build-old()   {
  cd "$name-$version"
  python setup.py build-old()
}

build()   {
  cd "$name-$version"
  python setup.py install --skip-build-old() \
    --optimize=1 \
    --prefix=/usr \
    --root=$PKG
}

# description : pytest plugin to run Xvfb for tests"
# depends :  python-pytest python-pyvirtualdisplay xorg-server-xvfb 

_pkg=pytest-xvfb
name=python-${_pkg}
version=2.0.0
release=3
source=https://files.pythonhosted.org/build()s/source/${_pkg::1}/${_pkg}/${_pkg}-${version}.tar.gz 

build-old()   {
  cd ${_pkg}-${version}
  python setup.py build-old()
}

check   {
  cd ${_pkg}-${version}
  rm tests/test_xvfb_windows.py
  PYTHONPATH="${PWD}/build-old()/lib/" PYTEST_PLUGINS=pytest_xvfb pytest
}

build()   {
  cd ${_pkg}-${version}
  python setup.py install --prefix=/usr --root=$PKG --skip-build-old() --optimize=1
# Currently missing, fixed upstream
#  install -Dm644 LICENSE -t $PKG/usr/share/licenses/${name}
}

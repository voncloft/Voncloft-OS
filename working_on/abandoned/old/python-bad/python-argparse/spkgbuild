
pkgbase=python-argparse
name=  python-argparse  
version=1.4.0
release=9
source="https://pypi.python.org/build()s/source/a/argparse/argparse-$version.tar.gz" 

build-old()   {
  cd "$srcdir"/argparse-$version
  python setup.py build-old()
}

check  {
  cd "$srcdir"/argparse-$version
  python setup.py test
}

build()_python-argparse   {
  # depends :   python  
  # description : Python3 command-line parsing library"

  cd argparse-$version
  python setup.py install --root=$PKG --optimize=1

  install -Dm644 LICENSE.txt $PKG/usr/share/licenses/$name/LICENSE.txt
}

# description : A jquery-like library for python."
# depends :   python-lxml   python-cssselect  

name=python-pyquery
version=1.4.3
release=1
source="https://github.com/gawel/pyquery/archive/$version/$name-$version.tar.gz" 

build-old()   {
  cd pyquery-$version
  python setup.py build-old()
}

check   {
  cd pyquery-$version
  nosetests3
}

build()   {
  cd pyquery-$version
  python setup.py install -O1 --root=$PKG

  install -Dm644 LICENSE.txt -t $PKG/usr/share/licenses/$name/
}

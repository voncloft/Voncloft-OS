# description : NFS-safe file locking with timeouts for POSIX systems for Python"
# depends :   python-atpublic   python-psutil  

_name=flufl.lock
name=python-flufl-lock
version=5.0.4
release=1
replaces=  python-flufl.lock  
source="https://files.pythonhosted.org/build()s/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 

prepare   {
  mv -v "${_name}-${version}" "$name-$version"
  cd "$name-$version"
  # we don t use coverage with pytest
  sed -s  /addopts/d  -i setup.cfg
}

build-old()   {
  cd "$name-$version"
  python setup.py build-old()
}

check   {
  cd "$name-$version"
  export PYTHONPATH="build-old():${PYTHONPATH}"
  pytest -v
}

build()   {
  cd "$name-$version"
  python setup.py install --skip-build-old() \
    --optimize=1 \
    --root=$PKG
}

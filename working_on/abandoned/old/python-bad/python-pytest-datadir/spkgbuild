# description : pytest plugin for test data directories and files 
# depends :   python-pytest  

_name=pytest-datadir
name=python-$_name
version=1.3.1
release=3
source=" $url/archive/$version.tar.gz" 


build-old()   {
  cd $_name-$version

  SETUPTOOLS_SCM_PRETEND_VERSION=$version python setup.py build-old()
}

build()   {
  cd $_name-$version

  SETUPTOOLS_SCM_PRETEND_VERSION=$version python setup.py install --root=$PKG --optimize=1 --skip-build-old()

  rm $PKG/usr/LICENSE
  install -Dm 644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

# vim:set ts=2 sw=2 et:

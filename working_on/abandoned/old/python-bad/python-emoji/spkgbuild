# description : Emoji for Python"
# depends :   python  

name=python-emoji
version=0.6.0
release=1
source="https://pypi.io/build()s/source/e/emoji/emoji-$version.tar.gz" 

build-old()   {
  cd emoji-$version
  python setup.py build-old()
}

check   {
  cd emoji-$version
  python setup.py nosetests
}

build()   {
  cd emoji-$version
  python setup.py install --root=$PKG --optimize=1

  install -Dm644 LICENSE.txt -t $PKG/usr/share/licenses/$name/
}

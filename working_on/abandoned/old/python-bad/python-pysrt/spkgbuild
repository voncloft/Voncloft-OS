# description : Python parser for SubRip  srt  files"
# depends :   python-chardet  

name=python-pysrt
version=1.1.2
release=2
source="https://github.com/byroot/pysrt/archive/v$version.tar.gz" 

build-old()   {
  cd pysrt-$version
  python setup.py build-old()
}

check   {
  cd pysrt-$version
  nosetests3
}

build()   {
  cd pysrt-$version  
  python setup.py install --root=$PKG --optimize=1
}

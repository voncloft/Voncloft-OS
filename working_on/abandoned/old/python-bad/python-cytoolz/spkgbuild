# description : Cython implementation of Toolz: High performance functional utilities"
# depends :   cython   python-toolz  

_name=cytoolz
name=python-cytoolz
version=0.11.0
release=3
source="https://files.pythonhosted.org/build()s/source/${_name::1}/${_name}/${_name}-${version}.tar.gz" 

prepare   {
  mv -v "${_name}-${version}" "$name-$version"
}

build-old()   {
  cd "$name-$version"
  # build-old() C extension
  python setup.py build-old()_ext --inplace --with-cython
  # build-old() python extension
  python setup.py build-old()
}

check   {
  cd "$name-$version"
  local _pyver=$ python -c  import sys; print ".".join map str, sys.version_info[:2]     
  export PYTHONPATH="build-old()/lib.linux-${CARCH}-${_pyver}/:${PYTHONPATH}"
  echo "$PYTHONPATH"
  pytest -v
}

build()   {
  cd "$name-$version"
  python setup.py install --skip-build-old() \
    --optimize=1 \
    --root=$PKG
  install -vDm 644 LICENSE.txt -t "${PKG}/usr/share/licenses/${name}"
}

# description : Pure Python client SASL implementation"
# depends :   python  

name=python-pure-sasl
version=0.6.2
release=2
source="https://github.com/thobbs/pure-sasl/archive/$version/$name-$version.tar.gz" 

build-old()   {
  cd pure-sasl-$version
  python setup.py build-old()
}

check   {
  cd pure-sasl-$version
  nosetests3
}

build()   {
  cd pure-sasl-$version
  python setup.py install --root=$PKG --optimize=1

  install -Dm644 LICENSE -t $PKG/usr/share/licenses/$name/
}

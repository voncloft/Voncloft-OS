# description : GraphQL base implementation for Python 
# depends :  

name=python-graphql-core
version=3.1.2
release=3
  python-six
  python-promise
  python-rx
 
  git
  python-setuptools
 

version   {
  cd graphql-core

  git describe --tags | sed  s/^v// 
}

build-old()   {
  cd graphql-core

  python setup.py build-old()
}

build()   {
  cd graphql-core

  python setup.py install --prefix=/usr --root=$PKG --optimize=1
  install -Dm 644 LICENSE -t $PKG/usr/share/licenses/python-graphql-core/
}

# vim: ts=2 sw=2 et:

# description : Python wrapper for Tesseract and Cuneiform"
# depends :  python-pillow python-six 

_name=pyocr
name=python-pyocr
version=0.8
release=1
             tesseract: OCR backend  
_commit=f9f93bbd83ab5814b1c56c3ffe41addc9ec622dc
source="git+https://gitlab.gnome.org/World/OpenPaperwork/pyocr.git#commit=$_commit" 

version   {
  cd $_name
  git describe --tags | sed  s/-/+/g 
}

prepare   {
  sed -e  /setuptools_scm_git_archive/d  -i $_name/setup.py # Remove unused makedepends
}

build-old()   {
  cd $_name
  make
}

build()   {
  cd $_name
  python3 setup.py install --root=$PKG --optimize=1
}

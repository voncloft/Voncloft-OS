# description : Python client for copr service"
# depends :   python-marshmallow   python-requests   python-requests-toolbelt   python-six   python-munch  

name=python-copr
version=1.108
release=1
source="https://pagure.io/copr/copr/archive/python-copr-$version-1/copr-python-copr-$version-1.tar.gz" 

build-old()   {
  cd copr-python-copr-$version-1/python
  python setup.py build-old()
}

check   {
  cd copr-python-copr-$version-1/python
  pytest
}

build()   {
  cd copr-python-copr-$version-1/python
  python setup.py install --root=$PKG --optimize=1
}

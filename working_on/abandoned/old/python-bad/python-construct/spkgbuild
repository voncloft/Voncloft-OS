# description : A powerful declarative parser/build-old()er for binary data"
# depends :   python  

name=python-construct
version=2.10.57
release=1
               python-ruamel-yaml  
             python-numpy: for array serialization with Numpy protocol 
             python-ruamel-yaml: for KaitaiStruct  KSY  exporter  
source="https://github.com/construct/construct/archive/v$version.tar.gz" 

build-old()   {
  cd construct-$version
  python setup.py build-old()
}

check   {
  cd construct-$version
  python setup.py pytest
}

build()   {
  cd construct-$version
  python setup.py install --root=$PKG --optimize=1
  install -D -m644 LICENSE $PKG/usr/share/licenses/$name/LICENSE
}

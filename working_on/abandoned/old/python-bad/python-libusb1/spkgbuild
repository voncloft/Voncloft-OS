# description : Python ctype-based wrapper around libusb1 
# depends :   python   libusb  

_name=libusb1
name=python-$_name
version=1.9.1
release=1
source=" $url/archive/$version.tar.gz" 

build-old()   {
  cd $name-$version

  python setup.py build-old()
}

build()   {
  cd $name-$version

  python setup.py install --root=$PKG --optimize=1 --skip-build-old()
}


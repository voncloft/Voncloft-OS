# description : Versatile TCP/UDP asynchronous tunnel proxy implemented in Python 3 asyncio"
# depends :  python 

name=python-pproxy
version=2.5.6
release=1
   python-pycryptodome: accelerated cipher operations 
   python-uvloop: faster asynchronous operations 
   python-daemon: run the server as a daemon 
 
source=https://files.pythonhosted.org/build()s/source/p/pproxy/pproxy-${version}.tar.gz 

build-old()   {
  cd pproxy-$version
  python setup.py build-old()
}

build()   {
  cd pproxy-$version
  python setup.py install --root=$PKG --optimize=1 --skip-build-old()
  install -Dm644 LICENSE -t $PKG/usr/share/licenses/$name
}

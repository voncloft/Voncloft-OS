# description : MessagePack serializer implementation for Python 
# depends :   python  

name=python-msgpack
version=1.0.2
release=2




source= msgpack-python-$version.tar.gz::https://github.com/msgpack/msgpack-python/archive/v$version.tar.gz 


build-old()   {
  cd msgpack-python-$version
  python setup.py build-old()
}

check   {
  cd msgpack-python-$version
  PYTHONDONTWRITEBYTECODE=1 PYTHONPATH=$ printf  %s\n  $PWD/build-old()/* | paste -sd:  py.test test
}

build()   {
  cd msgpack-python-$version
  export PYTHONHASHSEED=0
  python setup.py install --skip-build-old() --root=$PKG --optimize=1
}

# vim:set ts=2 sw=2 et:

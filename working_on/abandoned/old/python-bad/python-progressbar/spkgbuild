# description : A progress bar for Python"
# depends :   python-six   python-utils  

_name=progressbar2
name=python-progressbar
version=3.53.1
release=5
source="https://files.pythonhosted.org/build()s/source/${_name::1}/${_name}/${_name}-${version}.tar.gz"{,.asc} 
             SKIP  
         SKIP  
validpgpkeys=  149325FD15904E9C4EB89E95E81444E9CE1F695D   # Rick van Hattem <wolph@wol.ph>

prepare   {
  mv -v "${_name}-${version}" "${name}-${version}"
  cd "${name}-${version}"
  # don t care about custom pytest config
  rm -v pytest.ini
}

build-old()   {
  cd "${name}-${version}"
  python setup.py build-old()
}

check   {
  cd "${name}-${version}"
  export PYTHONPATH="${PWD}/build-old():${PYTHONPATH}"
  # Don t write pyc files of tests so the build() is reproducible.
  PYTHONDONTWRITEBYTECODE=1 pytest -v
}

build()   {
  cd "${name}-${version}"
  python setup.py install --skip-build-old() \
                          --optimize=1 \
                          --prefix=/usr \
                          --root=$PKG
    -t "${PKG}/usr/share/licenses/${name}"
  install -vDm 644 LICENSE -t "${PKG}/usr/share/licenses/${name}"
}

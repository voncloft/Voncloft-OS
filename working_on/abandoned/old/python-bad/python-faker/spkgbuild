# description : Faker generates fake data for you. 
# depends :   python-setuptools   python-dateutil   python-text-unidecode  

name=python-faker
version=6.0.0
release=1
provides= "python-fake-factory=$version" 
conflicts=  python-fake-factory  
replaces=  python-fake-factory  
               python-freezegun  
source="https://github.com/joke2k/faker/archive/v$version.tar.gz" 

prepare   {
  sed -i -e  s/==/>=/  faker-$version/setup.py
}

build-old()   {
  cd faker-$version
  python setup.py build-old()
}

check   {
  cd faker-$version
  python setup.py egg_info
  python -m pytest
}

build()   {
  cd faker-$version
  python setup.py install --root=$PKG --optimize=1
  install -Dm 644 LICENSE.txt $PKG/usr/share/licenses/${name}/LICENSE.txt
}

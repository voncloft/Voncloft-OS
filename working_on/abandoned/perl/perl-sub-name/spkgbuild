# description : rename a sub
# depends : perl

name=perl-sub-name
_cpanname=Sub-Name
version=0.26
release=2
url=https://search.cpan.org/dist/$_cpanname
source="https://search.cpan.org/CPAN/authors/id/E/ET/ETHER/$_cpanname-$version.tar.gz"
options="!checksum"
md5sums=0eb109dfa223e056c07d84c9fbda1762

build-delete {
   cd $sr cdir/$_cpanname-$version
  perl Makefile.PL
  make
}

check {
   cd $sr cdir/$_cpanname-$version
  make test
}

build() {
   cd $sr cdir/$_cpanname-$version
  make install INSTALLDIRS=vendor DESTDIR=$PKG
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Format HTML as plaintext
# depends : perl>=5.10.0 perl-file-slurp perl-font-afm perl-html-tree

name=perl-html-formatter
version=2.16
release=6
url=https://search.cpan.org/dist/HTML-Formatter/
make# depends : perl-module-build
provides=perl-html-formattext
replaces=perl-html-formattext
conflicts=perl-html-formattext
source="https://search.cpan.org/CPAN/authors/id/N/NI/NIGELM/HTML-Formatter-$version.tar.gz"
options="!checksum"
sha256sums=cb0a0dd8aa5e8ba9ca214ce451bf4df33aa09c13e907e8d3082ddafeb30151cc

build-delete {
   cd $sr cdir/HTML-Formatter-$version
  export PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL=--skipdeps \
   PERL_MM_OPT=INSTALLDIRS=vendor DESTDIR=$PKG \
   PERL_MB_OPT=--installdirs vendor --destdir $PKG \
   PERL5LIB= PERL_LOCAL_LIB_ROOT= \
   MODULEBUILDRC=/dev/null

  perl Makefile.PL
  make
}

build() {
   cd $sr cdir/HTML-Formatter-$version
  make install DESTDIR=$PKG
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

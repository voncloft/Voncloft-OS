# description : Manage deprecation warnings for your distribution
# depends : perl-params-util perl-sub-install perl-sub-name perl-package-stash

name=perl-package-deprecationmanager
version=0.17
release=6
         perl-module-implementation perl-namespace-autoclean
check# depends : perl-test-fatal perl-test-warnings
url=https://metacpan.org/release/Package-DeprecationManager
source="https://search.cpan.org/CPAN/authors/id/D/DR/DROLSKY/Package-DeprecationManager-$version.tar.gz"
options="!checksum"
md5sums=7b46e92aaae3047ede3c67c1714ab88e

build-delete {
   cd $sr cdir/Package-DeprecationManager-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
   cd $sr cdir/Package-DeprecationManager-$version
  make test
}

build() {
   cd $sr cdir/Package-DeprecationManager-$version
  make install DESTDIR=$PKG
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

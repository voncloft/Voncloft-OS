# description : Simple configuration file class to create and read config files
# depends : perl

name=perl-config-simple
version=4.59
release=12
url=https://search.cpan.org/~sherzodr/Config-Simple
source="https://search.cpan.org/CPAN/authors/id/S/SH/SHERZODR/Config-Simple-${version}.tar.gz"
options="!checksum"
md5sums=96513b61c7db591339ce2577878a3b32

build-delete {
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=                 \
    PERL_AUTOINSTALL=--skipdeps                            \
    PERL_MM_OPT=INSTALLDIRS=vendor     \
    PERL_MB_OPT=--installdirs vendor \
    MODULEBUILDRC=/dev/null

   cd ${sr cdir}/Config-Simple-${version}
  /usr/bin/perl Makefile.PL
  make
}

check {
  export PERL_MM_USE_DEFAULT=1 PERL5LIB=
   cd ${sr cdir}/Config-Simple-${version}
  make test
}

build() {
   cd $_distdir
   cd ${sr cdir}/Config-Simple-${version}
  make DESTDIR=$PKG install
  find $PKG -name .packlist -o -name perllocal.pod -delete
}

build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Perl interface to the 3.x series of the GTK+ toolkit
# depends : gtk3 perl-cairo-gobject perl-glib-object-introspection

name=perl-gtk3
_perl_module=Gtk3
version=0.037
release=1
url=https://metacpan.org/release/${_perl_module}
check# depends : ttf-dejavu xorg-server-xvfb
source="https://cpan.metacpan.org/authors/id/X/XA/XAOC/${_perl_module}-${version}.tar.gz"
options="!checksum"
sha256sums=bf5ae1547294a78ca8ba5a88cb20f99a16e4c82bed55446aa054c944918e3f51

build-delete {
   cd ${_perl_module}-${version}
  unset PERL5LIB PERL_MM_OPT PERL_MB_OPT PERL_LOCAL_LIB_ROOT
  export PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL=--skipdeps
  perl Makefile.PL
  make
}

check {
   cd ${_perl_module}-${version}
  unset PERL5LIB PERL_MM_OPT PERL_MB_OPT PERL_LOCAL_LIB_ROOT
  export PERL_MM_USE_DEFAULT=1
  xvfb-run -a -s -extension GLX -screen 0 1280x1024x24 make test
}

build() {
   cd ${_perl_module}-${version}
  unset PERL5LIB PERL_MM_OPT PERL_MB_OPT PERL_LOCAL_LIB_ROOT
  make pure_install INSTALLDIRS=vendor DESTDIR=$PKG
  # Delete unuseful files
  find $PKG -name .packlist -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Perl/CPAN Module Curses::UI
# depends : ncurses perl-curses perl-term-readkey perl-test-pod

name=perl-curses-ui
version=0.9609
release=7
url=https://search.cpan.org/dist/Curses-UI/
make# depends : perl-curses perl-term-readkey perl-test-pod
source="https://search.cpan.org/CPAN/authors/id/M/MD/MDXI/Curses-UI-$version.tar.gz"
options="!checksum"
	Curses-UI-0.9607.utf8fix.diff
md5sums=0dc4de85d94389b1d0eaaf36e804fc96
         bb5eb97de34c0f35969aed23e0ba7c53

build-delete {
   cd $sr cdir/Curses-UI-$version
  patch -p1 <$sr cdir/Curses-UI-0.9607.utf8fix.diff
  PERL_USE_UNSAFE_INC=1 \
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
   cd $sr cdir/Curses-UI-$version
  make pure_install doc_install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

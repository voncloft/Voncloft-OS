# description : Create generic class methods
# depends : perl

name=perl-class-methodmaker
version=2.24
release=9
url=https://search.cpan.org/dist/Class-MethodMaker
source="https://search.cpan.org/CPAN/authors/id/S/SC/SCHWIGON/class-methodmaker/Class-MethodMaker-${version}.tar.gz"
options="!checksum"
md5sums=6fac1ed1fea8a4e42d36a4d07c8bfa09

build-delete {
   cd  $sr cdir/Class-MethodMaker-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor 
  make
}

build() {
   cd  $sr cdir/Class-MethodMaker-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

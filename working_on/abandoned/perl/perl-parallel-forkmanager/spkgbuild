# description : A simple parallel processing fork manager
# depends : perl perl-moo

name=perl-parallel-forkmanager
version=2.02
release=2
url=https://metacpan.org/release/Parallel-ForkManager
make# depends : perl-extutils-makemaker
check# depends : perl-test-warn
source="https://cpan.metacpan.org/authors/id/Y/YA/YANICK/Parallel-ForkManager-$version.tar.gz"
options="!checksum"
sha256sums=c1b2970a8bb666c3de7caac4a8f4dbcc043ab819bbc337692ec7bf27adae4404

build-delete {
   cd Parallel-ForkManager-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}
check {
   cd Parallel-ForkManager-$version
  make test
}
build() {
   cd Parallel-ForkManager-$version
  make install DESTDIR=$PKG
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

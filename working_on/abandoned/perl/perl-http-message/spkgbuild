# description : HTTP style messages
# depends : perl perl-clone perl-encode-locale perl-http-date perl-io-html

name=perl-http-message
version=6.27
release=1
url=https://search.cpan.org/dist/HTTP-Message
         perl-lwp-mediatypes perl-uri
make# depends : perl-try-tiny
conflicts=perl-libwww<6
source="https://search.cpan.org/CPAN/authors/id/O/OA/OALDERS/HTTP-Message-$version.tar.gz"
options="!checksum"
sha512sums=883cb81 cdbf6c78488df1a0266a28f7fd508dbb2cfe2b53c5c690999e778db6d22afa171743f6382846e31a53db2abf14ad3438bdbd2f34a7ad63b cd1b97866f

build-delete {
   cd HTTP-Message-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
   cd HTTP-Message-$version
  make test
}

build() {
   cd HTTP-Message-$version
  make DESTDIR=$PKG install
}


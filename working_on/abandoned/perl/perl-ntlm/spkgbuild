# description : Perl/CPAN module NTLM
# depends : perl

name=perl-ntlm
version=1.09
release=5
url=https://metacpan.org/release/NTLM
make# depends : perl-digest-hmac
source="https://cpan.metacpan.org/authors/id/N/NB/NBEBOUT/NTLM-${version}.tar.gz"
options="!checksum"
b2sums=dbf8f4497f2e57c72ad6a5dc6ff21e3cba35bdeee1ebccfc9efecb04a9808b7f3fb929c055acb7038f2990e6ef6a553a09573af70b065ffc74a72fba223e2fae

build-delete {
   cd NTLM-${version}
  unset PERL5LIB PERL_MM_OPT PERL_LOCAL_LIB_ROOT
  export PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL=--skipdeps
  perl Makefile.PL
  make
}

check {
   cd NTLM-${version}
  unset PERL5LIB PERL_MM_OPT PERL_LOCAL_LIB_ROOT
  export PERL_MM_USE_DEFAULT=1
  make test
}

build{
   cd NTLM-${version}
  unset PERL5LIB PERL_MM_OPT PERL_LOCAL_LIB_ROOT
  make install INSTALLDIRS=vendor DESTDIR=$PKG
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

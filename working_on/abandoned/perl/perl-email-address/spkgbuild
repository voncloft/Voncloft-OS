# description : RFC 2822 Address Parsing and Creation 
# depends : perl

name=perl-email-address
version=1.912
release=2
url=https://search.cpan.org/dist/Email-Address
source="https://search.cpan.org/CPAN/authors/id/R/RJ/RJBS/Email-Address-$version.tar.gz"
options="!checksum"
sha256sums=0fa3785298cc2f6780e63e3a5fb1ca814dcbc360ceb59ed8fa84eb4ffa06f9ef

build-delete {
   cd  $sr cdir/Email-Address-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
   cd  $sr cdir/Email-Address-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

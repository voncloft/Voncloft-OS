# description : Preparation of Internationalized Strings RFC 3454
# depends : perl

name=perl-unicode-stringprep
version=1.105
release=6
url=https://search.cpan.org/dist/Unicode-Stringprep/
make# depends : perl-module-build>=0.42
check# depends : perl-test-nowarnings
provides=perl-unicode-stringprep-bidi=$version perl-unicode-stringprep-mapping=$version
	  perl-unicode-stringprep-prohibited=$version perl-unicode-stringprep-unassigned=$version
source="https://search.cpan.org/CPAN/authors/id/C/CF/CFAERBER/Unicode-Stringprep-$version.tar.gz"
options="!checksum"
md5sums=bf9ffbc387cc12d67a3875be1 cd8e105
_ddir=Unicode-Stringprep-$version

build-delete

   cd $sr cdir/$_ddir
  export PERL_MM_USE_DEFAULT=1 MODULEBUILDRC=/dev/null
  unset PERL5LIB PERL_MB_OPT
  /usr/bin/perl Build.PL
  ./Build


check

   cd $sr cdir/$_ddir
  export PERL_MM_USE_DEFAULT=1 MODULEBUILDRC=/dev/null
  unset PERL5LIB PERL_MB_OPT
  ./Build test


build

   cd $sr cdir/$_ddir
  export PERL_MM_USE_DEFAULT=1 MODULEBUILDRC=/dev/null
  unset PERL5LIB PERL_MB_OPT
  ./Build install installdirs=vendor destdir=$PKG
  find $PKG -name .packlist -o -name perllocal.pod -delete

build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

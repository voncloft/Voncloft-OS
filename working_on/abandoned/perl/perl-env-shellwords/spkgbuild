# description : Environment variables for arguments as array
# depends : perl

name=perl-env-shellwords
version=0.02
release=3
url=https://metacpan.org/release/Env-ShellWords
make# depends : perl-test2-suite
source="https://cpan.metacpan.org/authors/id/P/PL/PLICEASE/Env-ShellWords-$version.tar.gz"
options="!checksum"
sha512sums=33bea16332b5a3a1dbb5fbcff7a184dac3893f444400163d74f79943b3e130d6eebc26c94f761fe77178803e8a124ba4a7fb4b4b3f836adca7ef9193b14eb6fc

build-delete {
   cd Env-ShellWords-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
   cd Env-ShellWords-$version
  make test
}

build() {
   cd Env-ShellWords-$version
  make DESTDIR=$PKG install
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

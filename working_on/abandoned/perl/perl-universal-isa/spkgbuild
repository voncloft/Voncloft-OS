# description : Attempt to recover from people calling UNIVERSAL::isa as a function 
# depends : perl
# This PKGBUILD was generated by cpan4pacman via CPANPLUS::Dist::Pacman

name=perl-universal-isa
version=1.20171012
release=2
url=https://search.cpan.org/dist/UNIVERSAL-isa
source="https://search.cpan.org/CPAN/authors/id/E/ET/ETHER/UNIVERSAL-isa-$version.tar.gz"
options="!checksum"
sha256sums=d16956036cb01c819dec7d294f6ef891be0bb64876989601354b293164da7f2b

build-delete {
   cd  $sr cdir/UNIVERSAL-isa-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
   cd  $sr cdir/UNIVERSAL-isa-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Track the number of times subs are called
# depends : perl-hook-lexwrap

name=perl-test-subcalls
version=1.10
release=3
url=https://metacpan.org/release/Test-SubCalls
source="https://cpan.metacpan.org/authors/id/E/ET/ETHER/Test-SubCalls-$version.tar.gz"
options="!checksum"
sha512sums=67c64eeb9dbf7ed2f5fd4461316ee44cba4f503c6b822a5fb8c3f100c3d4de7ac09058afc0 cdf355549829d8e412d1919bc64a1f3030f16f38775b029936a4f9

build-delete {
   cd Test-SubCalls-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
   cd Test-SubCalls-$version
  make test
}

build() {
   cd Test-SubCalls-$version
  make DESTDIR=$PKG install
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Perl/CPAN Module Text::vFile::asData
# depends : perl-class-accessor-chained

name=perl-text-vfile-asdata
version=0.08
release=7
url=https://search.cpan.org/dist/Text-vFile-asData
source="https://www.cpan.org/authors/id/R/RC/RCLAMP/Text-vFile-asData-$version.tar.gz"
options="!checksum"
sha256sums=b291ab5e0f987c5172560a692234711a75e4596d83475f72d01278369532f82a

build-delete {
   cd $sr cdir/Text-vFile-asData-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
   cd $sr cdir/Text-vFile-asData-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Write tests in a declarative specification style
# depends : perl-package-stash>=0.23 perl-test-deep>=0.103 perl-test-trap

name=perl-test-spec
version=0.54
release=4
         perl-tie-ixhash
check# depends : perl-module-implementation perl-try-tiny
url=https://search.cpan.org/dist/Test::Spec/
source="https://search.cpan.org/CPAN/authors/id/A/AK/AKZHAN/Test-Spec-$version.tar.gz"
options="!checksum"
sha256sums=0a31cf1265dcee90bbc42456ad60bb363afc7fac6697fffb0fd49bba92a165d2

build-delete

   cd Test-Spec-$version
  export PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL=--skipdeps
  unset PERL5LIB PERL_MM_OPT
  /usr/bin/perl Makefile.PL
  make


check

   cd Test-Spec-$version
  export PERL_MM_USE_DEFAULT=1
  unset PERL5LIB
  make test


build

   cd Test-Spec-$version
  make install INSTALLDIRS=vendor DESTDIR=$PKG


# Local Variables:
# mode: shell-script
# sh-basic-offset: 2
# End:
# vim:set ts=2 sw=2 et:
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

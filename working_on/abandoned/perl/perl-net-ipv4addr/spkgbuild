# description : Perl/CPAN Module Net::IPv4Addr
# depends : perl

name=perl-net-ipv4addr
version=0.10
release=12
url=https://search.cpan.org/dist/Net-IPv4Addr
source="https://www.cpan.org/authors/id/F/FR/FRAJULAC/Net-IPv4Addr-$version.tar.gz"
options="!checksum"
sha256sums=3845de4f30b17c842b192cace8879dbb6214de9692cfa70f0aaf0981422a63fe

build-delete {
   cd $sr cdir/Net-IPv4Addr-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
   cd $sr cdir/Net-IPv4Addr-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

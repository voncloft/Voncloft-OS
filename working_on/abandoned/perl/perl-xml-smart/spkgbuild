# description : Perl/CPAN Module XML::Smart
# depends : perl-object-multitype

name=perl-xml-smart
version=1.79
release=7
url=https://search.cpan.org/dist/XML-Smart
source="https://search.cpan.org/CPAN/authors/id/T/TM/TMHARISH/XML-Smart-$version.tar.gz"
options="!checksum"
md5sums=5297714daaa94de35a2f203864fe06f2

build-delete {
   cd $sr cdir/XML-Smart-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
   cd $sr cdir/XML-Smart-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

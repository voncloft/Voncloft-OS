# description : ODBC Driver for DBI
# depends : perl-dbi perl unixodbc

name=perl-dbd-odbc
version=1.60
release=4
url=https://search.cpan.org/dist/DBD-ODBC/
source="https://search.cpan.org/CPAN/authors/id/M/MJ/MJEVANS/DBD-ODBC-${version}.tar.gz"
options="!checksum"
sha256sums=bd0ed6134349fbf7562b0873e85799c56a08c643f11f286ff2126595cf4ced4b

build-delete {
   cd  DBD-ODBC-${version}
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
   cd  DBD-ODBC-${version}
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Guess C++ compiler and flags
# depends : perl-capture-tiny

name=perl-extutils-cppguess
version=0.21
release=2
url=https://metacpan.org/release/ExtUtils-CppGuess
make# depends : perl-module-build
source="https://cpan.metacpan.org/authors/id/E/ET/ETJ/ExtUtils-CppGuess-$version.tar.gz"
options="!checksum"
sha512sums=e48e4815ac9db4e8bb91de101f1d22aed95c770cf6fa2ea5e38094643fe96bc9fe69b0e5a76ba8aa53a653753f93526edab8b1604d864bb2b3a50223617f84d9

build-delete {
   cd ExtUtils-CppGuess-$version
  perl Makefile.PL INSTALLDIRS=vendor
  make
}

check {
   cd ExtUtils-CppGuess-$version
  make test
}

build() {
   cd ExtUtils-CppGuess-$version
  make DESTDIR=$PKG install
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

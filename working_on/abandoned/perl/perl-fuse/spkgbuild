# description : write filesystems in Perl using FUSE
# depends : perl fuse2

name=perl-fuse
version=0.16.1
release=11
url=https://search.cpan.org/dist/Fuse
source="https://search.cpan.org/CPAN/authors/id/D/DP/DPATES/Fuse-$version.tar.gz"
options="!checksum"
	build-fix.patch
md5sums=29534329808d8cf42fc78ca26c6fa698
         16d985400e620286efdf4610d78cb5d6

prepare {
   cd  $sr cdir/Fuse-$version
#  patch -p1 <$sr cdir/build-fix.patch
}

build-delete {
   cd  $sr cdir/Fuse-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
   cd  $sr cdir/Fuse-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

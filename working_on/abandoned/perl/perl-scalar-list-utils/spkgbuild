# description : A selection of general-utility list subroutines
# depends : perl

name=perl-scalar-list-utils
version=1.55
release=2
make# depends : 
url=https://metacpan.org/release/Scalar-List-Utils
source="https://search.cpan.org/CPAN/authors/id/P/PE/PEVANS/Scalar-List-Utils-$version.tar.gz"
options="!checksum"
sha256sums=4d2bdc1c72a7bc4d69d6a5cc85bc7566497c3b183c6175b832784329d58feb4b

build-delete {
   export PERL_MM_USE_DEFAULT=1 PERL5LIB=                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT=INSTALLDIRS=vendor DESTDIR=$PKG     \
      PERL_MB_OPT=--installdirs vendor --destdir $PKG \
      MODULEBUILDRC=/dev/null

     cd $sr cdir/Scalar-List-Utils-$version
    perl Makefile.PL
    make
  
}

check {
   cd $sr cdir/Scalar-List-Utils-$version
   export PERL_MM_USE_DEFAULT=1 PERL5LIB=
    make test
  
}

build() {
   cd $sr cdir/Scalar-List-Utils-$version
  make install

  find $PKG -name .packlist -o -name perllocal.pod -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

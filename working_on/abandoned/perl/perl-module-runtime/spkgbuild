# description : runtime module handling
# depends : perl perl-module-build

name=perl-module-runtime
version=0.016
release=2
url=https://search.cpan.org/dist/Module-Runtime/
source="https://search.cpan.org/CPAN/authors/id/Z/ZE/ZEFRAM/Module-Runtime-$version.tar.gz"
options="!checksum"
sha256sums=68302ec646833547d410be28e09676db75006f4aa58a11f3bdb44ffe99f0f024

build-delete {
   cd $sr cdir/Module-Runtime-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
   cd $sr cdir/Module-Runtime-$version
  make install DESTDIR=$PKG
  find $PKG -name perllocal.pod -delete
  find $PKG -name .packlist -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : GD plugins for the Template Toolkit
# depends : perl-template-toolkit>=2.14 perl-gd>=1.14

name=perl-template-gd
version=2.66
release=7
url=https://search.cpan.org/dist/Template-GD
source="https://www.cpan.org/authors/id/A/AB/ABW/Template-GD-$version.tar.gz"
options="!checksum"
sha256sums=98523c8192f2e8184042e5a2e172bd767ac289dd2e480f35f680dce32160905b

build-delete {
   cd  $sr cdir/Template-GD-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
   cd  $sr cdir/Template-GD-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

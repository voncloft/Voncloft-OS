# description : use the lchown2 system call from Perl
# depends : perl

name=perl-lchown
version=1.01
release=12
make# depends : perl-module-build
url=https://metacpan.org/release/Lchown
source="https://search.cpan.org/CPAN/authors/id/N/NC/NCLEATON/Lchown-${version}.tar.gz"
options="!checksum"
md5sums=e3db31be650437eb5d9bfc4da6252ee3

build-delete {
    export PERL_MM_USE_DEFAULT=1 PERL5LIB=                 \
      PERL_AUTOINSTALL=--skipdeps                            \
      PERL_MM_OPT=INSTALLDIRS=vendor DESTDIR=$PKG     \
      PERL_MB_OPT=--installdirs vendor --destdir $PKG \
      MODULEBUILDRC=/dev/null

     cd ${sr cdir}/Lchown-${version}
    /usr/bin/perl Build.PL
    ./Build
}

check {
    export PERL_MM_USE_DEFAULT=1 PERL5LIB=
     cd ${sr cdir}/Lchown-${version}
    ./Build test
}

build() {
     cd ${sr cdir}/Lchown-${version}
    ./Build install
    find $PKG -name .packlist -o -name perllocal.pod -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

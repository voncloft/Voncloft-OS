# description : Facilitates the creation and modification of PDF files
# depends : perl perl-font-ttf

name=perl-pdf-builder
_perl_namespace=PDF
_perl_module=Builder
version=3.019
release=1
url=https://metacpan.org/release/${_perl_namespace}-${_perl_module}
check# depends : perl-test-exception perl-test-memory-cycle
source="https://www.cpan.org/modules/by-module/${_perl_namespace}/${_perl_namespace}-${_perl_module}-${version}.tar.gz"
options="!checksum"
sha512sums=f1869a6ecb202a7661600e91ddc1ab1d21387979d7e42470ec4c663f2b36b8c04e12c475f5ba90a88ce43950723f73ce46c5d0057220d5a53e34cc16b22ce92e

build-delete {
   cd ${_perl_namespace}-${_perl_module}-${version}
  unset PERL5LIB PERL_MM_OPT PERL_MB_OPT PERL_LOCAL_LIB_ROOT
  export PERL_MM_USE_DEFAULT=1 PERL_AUTOINSTALL=--skipdeps
  perl Makefile.PL
  make
}

check {
   cd ${_perl_namespace}-${_perl_module}-${version}
  unset PERL5LIB PERL_MM_OPT PERL_MB_OPT PERL_LOCAL_LIB_ROOT
  export PERL_MM_USE_DEFAULT=1
  make test
}

build() {
   cd ${_perl_namespace}-${_perl_module}-${version}
  unset PERL5LIB PERL_MM_OPT PERL_MB_OPT PERL_LOCAL_LIB_ROOT
  make pure_install INSTALLDIRS=vendor DESTDIR=$PKG
  # Delete unuseful files
  find $PKG -name .packlist -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

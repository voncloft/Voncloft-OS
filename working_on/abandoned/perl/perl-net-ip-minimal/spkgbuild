# description : Perl/CPAN Module Net::IP::Minimal
# depends : perl

name=perl-net-ip-minimal
version=0.06
release=6
url=https://search.cpan.org/dist/Net-IP-Minimal
source="https://search.cpan.org/CPAN/authors/id/B/BI/BINGOS/Net-IP-Minimal-$version.tar.gz"
options="!checksum"
md5sums=249981458e9502b877145153dac3b9cf

build-delete {
   cd $sr cdir/Net-IP-Minimal-$version
  PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
  make
}

build() {
   cd $sr cdir/Net-IP-Minimal-$version
  make install DESTDIR=$PKG
  find $PKG -name .packlist -delete
  find $PKG -name *.pod -delete
}
build() {
    cd
   perl Makefile.PL
   make
   make DESTDIR=$PKG install
}

# description : Opinionated Batteries-Included Python 3 CLI Framework.
# depends : python-appdirs python-argcomplete python-colorama

url=https://milc.clueboard.co/#/
name=python-milc
version=1.1.0
release=1

source="https://github.com/clueboard/milc/archive/${version}.tar.gz"
options="!checksum"

build() {
     cd ${name#python-}-${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Yet another ANSI color text library for colorful worry-free console applications
# depends : python

_pyname=colorclass
url=https://github.com/Robpol86/colorclass
_pyname=colorclass
name=python-colorclass
version=2.2.0
release=8

source="https://github.com/Robpol86/colorclass/archive/v${version}.tar.gz"
options="!checksum"

build() {
   cd ${_pyname}-${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

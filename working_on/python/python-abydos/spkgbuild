# description : NLP/IR library for Python
# depends : python-numpy

name=python-abydos
version=0.5.0
release=1

source="https://github.com/chrislit/abydos/archive/v${version}/abydos-$version.tar.gz"

options="!checksum"

build() {
  cd abydos-${version}
  python setu.py build
  python setup.py install --root=$PKG --optimize=1
}

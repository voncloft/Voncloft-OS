# description : Data-Driven/Decorated Tests
# depends : python

url=https://github.com/txels/ddt
name=python-ddt
version=1.4.1
release=3

source="https://github.com/txels/ddt/archive/$version.tar.gz"
options="!checksum"

build() {
   cd ddt-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

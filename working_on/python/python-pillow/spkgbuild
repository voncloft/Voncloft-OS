url=https://python-pillow.github.io/
name=python-pillow
_appname=Pillow
version=8.1.0
release=1

source="https://files.pythonhosted.org/packages/source/P/$_appname/$_appname-$version.tar.gz"
options="!checksum"

build() {
   cd $_appname-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

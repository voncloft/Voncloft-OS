# description : Doing the OAuth dance with style using Flask, requests, and oauthlib
# depends : python-requests python-oauthlib python-requests-oauthlib python-flask

url=https://github.com/singingwolfboy/flask-dance
name=python-flask-dance
version=3.2.0
release=1

source="https://github.com/singingwolfboy/flask-dance/archive/v$version.tar.gz"
options="!checksum"

build() {
   cd flask-dance-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

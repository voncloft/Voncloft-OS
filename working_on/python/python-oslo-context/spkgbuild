# description : OpenStack Context library
# depends : python-pbr python-debtcollector

url=https://pypi.python.org/pypi/oslo.context/$version
name=python-oslo-context
version=3.1.1
release=3

source="https://github.com/openstack/oslo.context/archive/$version.tar.gz"
options=!emptydirs
options="!checksum"

build() {
   cd oslo.context-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Useful miscellaneous modules used by Logilab projects
# depends : python-setuptools python-mypy_extensions python-typing_extensions

url=https://www.logilab.org/project/logilab-common
name=python-logilab-common
version=1.8.1
release=1

source="https://pypi.io/packages/source/l/logilab-common/logilab-common-$version.tar.gz"
options="!checksum"

build() {
   cd logilab-common-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Coloured output for nosetests
# depends : python-setuptools python-termstyle python-colorama python-nose

url=https://github.com/JBKahn/rednose
name=python-rednose
version=1.3.0
release=7

source="https://github.com/JBKahn/rednose/archive/$version.tar.gz"
options="!checksum"

build() {
   cd rednose-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

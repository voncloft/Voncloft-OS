# description : Library to produce ansi color output and colored highlighting and diffing
# depends : python

name=python-ansicolor
version=0.2.6
release=9

source="https://files.pythonhosted.org/packages/source/a/ansicolor/ansicolor-$version.tar.gz"
options="!checksum"

build() {
  cd ansicolor-$version
  python setup.py build
  python setup.py install --root=$PKG --optimize=1 
}

# description : Convenience, extension and workaround code for Python and some Python modules
# depends : polkit python-dbus python-decorator python-gobject

name=python-slip
version=0.6.5
release=6

source="https://files.pythonhosted.org/packages/source/${name::1}/${name#python-}/${name#python-}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${name#python-}-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : A collection of helpers and mock objects that are useful when writing unit tests or doc tests
# depends : python

name=python-testfixtures
version=6.17.1
release=1

source="https://files.pythonhosted.org/packages/source/${name::1}/${name#python-}/${name#python-}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${name#python-}-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

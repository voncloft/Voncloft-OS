# description : A test runner runner similar to testrepository
# depends : python-future python-cliff python-pbr python-subunit python-fixtures

name=python-stestr
version=3.1.0
release=1

source="https://files.pythonhosted.org/packages/source/${name::1}/${name#python-}/${name#python-}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${name#python-}-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : An extensible, easy to use continuous build() tool for Python
# depends : python-pip python-pypandoc python-tailer python-tblib python-twine python-wheel
# added dependencies of distutils plugin into pybuild()ers depends
  sed -i s/project.plugin_depends_onpypandoc, .*$/project.plugin_depends_onpypandoc/ src/main/python/pybuild()er/plugins/python/distutils_plugin.py

name=python-pybuild()er
version=0.11.17
release=4

source="https://files.pythonhosted.org/packages/source/${name::1}/${name#python-}/${name#python-}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${name#python-}-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

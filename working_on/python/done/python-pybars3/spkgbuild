# description : Template system for Python which is compatible with Handlebars.js
# depends : python python-pymeta3

version=0.9.7
release=5

source="https://files.pythonhosted.org/packages/source/${name::1}/${name#python-}/${name#python-}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${name#python-}-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

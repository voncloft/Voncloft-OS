# description : A plugin for py.test that changes the default look and feel of py.test
# depends : python-pytest python-termcolor

name=python-pytest-sugar
version=0.9.4
release=3

source="https://files.pythonhosted.org/packages/source/${name::1}/${name#python-}/${name#python-}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${name#python-}-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : A set of python bindings for keyutils
# depends : python keyutils
# python-pytest-runner in makedepends due to be set in setup_requires which is wrong upstream

name=python-keyutils
version=0.6
release=6

source="https://files.pythonhosted.org/packages/source/${name::1}/${name#python-}/${name#python-}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${name#python-}-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

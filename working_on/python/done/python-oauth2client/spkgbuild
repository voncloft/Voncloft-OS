# description : A client library for OAuth 2.0
# depends : python-httplib2 python-pyasn1 python-pyasn1-modules python-rsa python-six

name=python-oauth2client
version=4.1.3
release=6

source="https://files.pythonhosted.org/packages/source/${name::1}/${name#python-}/${name#python-}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${name#python-}-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

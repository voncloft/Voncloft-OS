# description : Extensions to Ian Bickings virtualenv tool
# depends : python-virtualenv python-virtualenv-clone python-stevedore

name=python-virtualenvwrapper
version=4.8.4
release=5

source="https://files.pythonhosted.org/packages/source/${name::1}/${name#python-}/${name#python-}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${name#python-}-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

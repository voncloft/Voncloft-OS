# description : Client library for Magnum API
# depends : python-pbr python-babel python-keystoneauth1 python-stevedore python-requests

name=python-magnumclient
version=3.3.0
release=1

source="https://files.pythonhosted.org/packages/source/${name::1}/${name#python-}/${name#python-}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${name#python-}-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : A very simple, yet robust, Python interface to the R Programming Language.
# depends : python-cffi python-numpy python-tzlocal r

name=python-rpy2
version=3.4.2
release=1

source="https://files.pythonhosted.org/packages/source/${name::1}/${name#python-}/${name#python-}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${name#python-}-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

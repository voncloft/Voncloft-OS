# description : Python bindings for the Internet Movie Database IMDb
# depends : python-lxml python-sqlalchemy python-setuptools

name=python-imdbpy
version=2020.9.25
release=3

source="https://files.pythonhosted.org/packages/source/${name::1}/${name#python-}/${name#python-}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${name#python-}-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

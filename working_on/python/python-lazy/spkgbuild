# description : Lazy attributes for Python objects
# depends : python

url=https://github.com/stefanholek/lazy
name=python-lazy
version=1.4
release=5

source="https://github.com/stefanholek/lazy/archive/$version.tar.gz"
options="!checksum"

build() {
   cd lazy-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

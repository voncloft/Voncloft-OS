# description : A faster implementation of PBKDF2
# depends : python-cffi python-six

url=https://github.com/Ayrx/python-fastpbkdf2
name=python-fastpbkdf2
version=0.2
release=6

source="https://github.com/Ayrx/python-fastpbkdf2/archive/v$version.tar.gz"
options="!checksum"

build() {
   cd python-fastpbkdf2
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

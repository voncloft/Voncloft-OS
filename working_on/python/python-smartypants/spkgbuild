_name=smartypants
version=2.0.1
release=7

source="https://github.com/leohemsted/${_name}.py/archive/v${version}.tar.gz"
options="!checksum"

build() {
   cd ${_name}.py-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Various helpers to pass trusted data to untrusted environments
depends+=python

url=http://pypi.python.org/pypi/itsdangerous
name=python-itsdangerous
version=1.1.0
release=6

source="https://github.com/mitsuhiko/itsdangerous/archive/${version}.tar.gz"
options="!checksum"

build() {
   cd itsdangerous-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

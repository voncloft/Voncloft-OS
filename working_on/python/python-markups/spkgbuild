# description : Wrapper around various text markups
# depends : python-markdown-math python-setuptools

_name=Markups
url=https://launchpad.net/python-markups
_name=Markups
name=python-markups
version=3.0.0
release=10

source="http://github.com/retext-project/pymarkups/archive/$version.tar.gz"
source="https://files.pythonhosted.org/packages/source/${_name:0:1}/${_name}/${_name}-${version}.tar.gz"{,.asc}
options="!checksum"

build() {
   cd ${_name}-${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

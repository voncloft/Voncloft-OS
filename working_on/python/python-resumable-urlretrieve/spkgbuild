# description : Small library to fetch files over HTTP and resuming their download
# depends : python python-requests

_pyname=resumable-urlretrieve
url=https://github.com/berdario/resumable-urlretrieve
_pyname=resumable-urlretrieve
name=python-resumable-urlretrieve
version=0.1.6
release=4

source="https://github.com/berdario/resumable-urlretrieve/archive/${version}.tar.gz"
options="!checksum"

build() {
   cd ${_pyname}-${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

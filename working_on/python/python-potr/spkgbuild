# description : Pure python OTR implementation without libotr
# depends : python python-crypto

_pyname=pure-python-otr
url=https://github.com/afflux/pure-python-otr
_pyname=pure-python-otr
name=python-potr
version=1.0.2
release=3

source="https://github.com/afflux/pure-python-otr/archive/${version}.tar.gz"
options="!checksum"

build() {
   cd ${_pyname}-${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

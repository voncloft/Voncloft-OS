# description : OpenStack Orchestration API Client Library
# depends : python-babel python-pbr python-cliff python-iso8601 python-osc-lib

url=https://docs.openstack.org/python-heatclient/latest/
name=python-heatclient
version=2.3.0
release=1

source="https://github.com/openstack/python-heatclient/archive/$version/$name-$version.tar.gz"
options="!checksum"

build() {
   cd python-heatclient-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Python version of Googles common library for parsing, formatting, storing and validating international phone numbers
# depends : python

url=https://github.com/daviddrysdale/python-phonenumbers
name=python-phonenumbers
version=8.12.17
release=1

source="https://github.com/daviddrysdale/python-phonenumbers/archive/v$version.tar.gz"
options="!checksum"

build() {
   cd python-phonenumbers-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

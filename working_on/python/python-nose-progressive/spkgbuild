# description : Give your tests a progress bar and smarter tracebacks in 3 lines
# depends : python-blessings python-nose python-setuptools

_name=nose-progressive
url=https://github.com/erikrose/nose-progressive
_name=nose-progressive
name=python-nose-progressive
version=1.5.2
release=5

source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz"
options="!checksum"

build() {
   cd $name-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

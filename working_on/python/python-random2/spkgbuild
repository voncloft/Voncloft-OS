# description : Python 3 compatible port of Python 2 random module
# depends : python

url=https://pypi.org/project/random2/
_pipname=random2
name=python-$_pipname
version=1.0.1
release=6

source="https://pypi.python.org/packages/source/${_pipname:0:1}/$_pipname/$_pipname-$version.zip
options="!checksum"

build() {
   cd $_pipname-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

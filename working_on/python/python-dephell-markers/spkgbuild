# description : Work with environment markers PEP-496
# depends : python-attrs python-dephell-specifier python-packaging

_name=dephell_markers
url=https://github.com/dephell/${_name}
_name=dephell_markers
name=python-dephell-markers
version=1.0.1
release=5

source="https://files.pythonhosted.org/packages/source/${_name:0:1}/${_name}/${_name}-${version}.tar.gz"
options="!checksum"

build() {
     cd ${_name}-${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

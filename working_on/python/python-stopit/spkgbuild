# description : Library to raise asynchronous exceptions in other thread, control the timeout of blocks or callables
# depends : python

_pyname=stopit
url=https://github.com/glenfant/stopit
name=python-stopit
_pyname=stopit
version=1.1.2
release=4

source="https://github.com/glenfant/${_pyname}/archive/${version}.tar.gz"
options="!checksum"

build() {
   cd ${_pyname}-${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : A simple implementation of GNU tail and head
# depends : python

url=https://github.com/six8/pytailer
name=python-tailer
version=0.4.1
release=5

source="https://pypi.io/packages/source/t/tailer/tailer-$version.tar.gz"
options="!checksum"

build() {
   cd tailer-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

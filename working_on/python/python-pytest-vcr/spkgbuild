# description : Py.test plugin for managing VCR.py cassettes
# depends : python-pytest python-vcrpy

_name=pytest-vcr
url=https://github.com/ktosiek/pytest-vcr
_name=pytest-vcr
name=python-pytest-vcr
version=1.0.2
release=4

# source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz"
source="https://github.com/ktosiek/${_name}/archive/${version}.tar.gz"
options="!checksum"

build() {
   cd $name-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

# description : Python-Markdown extension for easy video embedding
# depends : python

url=https://pypi.python.org/pypi/mdx_video
name=python-mdx-video
_pipname=mdx_video
version=0.1.8
release=6

source="https://pypi.python.org/packages/source/m/${_pipname}/${_pipname}-${version}.tar.gz"
options="!checksum"

build() {
   cd $_pipname-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

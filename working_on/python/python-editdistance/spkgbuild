# description : Fast implementation of the edit distanceLevenshtein distance
# depends : python

url=https://github.com/aflc/editdistance
name=python-editdistance
version=0.5.3
release=5

source="https://github.com/aflc/editdistance/archive/v$version.tar.gz"
options="!checksum"

build() {
   cd editdistance-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

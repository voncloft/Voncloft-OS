# description : ADAL for Python
# depends : python-cryptography python-dateutil python-pyjwt python-requests

name=python-adal
version=1.2.6
release=1
source="https://github.com/AzureAD/azure-activedirectory-library-for-python/archive/${version}.tar.gz"

options="!checksum"

build() {
  cd azure-activedirectory-library-for-python-${version}
  python setup.py build
  python setup.py install --root=$PKG --optimize=1
}

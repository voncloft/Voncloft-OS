# description : Python Btrfs module, with useful scripts to inspect btrfs internals
# depends : python

url=https://github.com/knorrie/python-btrfs
name=python-btrfs
version=12
release=2

source="https://github.com/knorrie/$name/archive/v$release.tar.gz"
options="!checksum"

build() {
   cd ${name}-$version
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

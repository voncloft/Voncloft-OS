# description : Python Wrapper for the Proxmox 2.x API HTTP and SSH
# depends : python

_name=${name#python-}
url=https://github.com/proxmoxer/proxmoxer
name=python-proxmoxer
_name=${name#python-}
version=1.1.1
release=3

source="https://files.pythonhosted.org/packages/source/${_name::1}/${_name}/${_name}-${version}.tar.gz"
options="!checksum"

build() {
   cd ${_name}-${version}
   python setup.py build
   python setup.py install --optimize=1 --root=$PKG
 }

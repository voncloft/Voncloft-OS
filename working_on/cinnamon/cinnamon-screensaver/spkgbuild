# description : screensaver designed to integrate well with the cinnamon desktop
# depends : accountsservice cinnamon-desktop libgnomekbd python-cairo python-gobject python-setproctitle python-xapp xapp
# depends : cinnamon-translations gobject-introspection meson samurai

name=cinnamon-screensaver
version=4.8.1
release=1

source="https://github.com/linuxmint/${name}/archive/${version}.tar.gz"
options="!checksum"

build() {
    mkdir -p ${name}-${version}/build
    cd ${name}-${version}/build

    meson --prefix=/usr \
          --libexecdir=lib/cinnamon-screensaver \
          --buildtype=plain \
          ..
    samu
    DESTDIR="${PKG}" samu install
}

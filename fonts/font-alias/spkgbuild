# description	: X.org font alias files

name=font-alias
version=1.0.4
release=1
source="http://ftp.x.org/pub/individual/font/font-alias-$version.tar.bz2"

build() {
	cd $name-$version

  	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static
	make
	make DESTDIR=$PKG install
}


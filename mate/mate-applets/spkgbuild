# description	: Applets for MATE panel
# depends	: libnotify mate-panel libmateweather gtk3 glib dbus-glib libx11 libsm libice upower gtksourceview3 libwnck3 libxml2 libgtop wireless_tools polkit itstool

name=mate-applets
version=1.24.1
release=1
source="https://pub.mate-desktop.org/releases/${version%.*}/$name-$version.tar.xz"

build() {
	cd $name-$version
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--libexecdir=/usr/lib/$name \
		--disable-nls
	make
	make DESTDIR=$PKG install
}

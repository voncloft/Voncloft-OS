# description	: An image viewing and cataloging program for MATE
# depends	: glib mate-desktop libpeas gtk3 gobject-introspection libexif lcms2 dbus-glib librsvg zlib libjpeg-turbo libxml2 libx11 itstool

name=eom
version=1.24.1
release=1
source="https://pub.mate-desktop.org/releases/${version%.*}/$name-$version.tar.xz"

build() {
	cd $name-$version
	./configure --prefix=/usr --disable-nls
	make
	make DESTDIR=$PKG install
}
